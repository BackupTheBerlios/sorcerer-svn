   version   stable 2.5.1
   version unstable 2.6.pre1
   require libXpm ncurses readline zlib
  optional SDL       --with-sdl  '' use SDL libraries
  optional alsa-lib
  optional wxWidgets --with-wx   '' for wxGTK gui
  category development/emulator
 attribute makej x11
    source   stable $SOURCEFORGE_URL bochs/bochs/$VERSION/bochs-$VERSION.tar.gz
    source unstable $SOURCEFORGE_URL bochs/bochs/$VERSION/bochs-$VERSION.tar.gz
      info last 20120107
      info home http://bochs.sourceforge.net/
      desc 'i386 hardware emulator
bochs is a portable x86 PC emulation software package that emulates
enough of the x86 CPU, related AT hardware, and BIOS to run DOS,
Windows 95, Linux, FreeBSD, and other OSs, all on your workstation.'

build(){
#--enable-trace-cache     \
#--enable-vbe             \
./configure              \
--prefix=/usr            \
--sysconfdir=/etc        \
--enable-idle-hack       \
--enable-plugins         \
--enable-x86-64          \
--enable-ne2000          \
--enable-pci             \
--enable-pcidev          \
--enable-pnic            \
--enable-repeat-speedups \
--enable-fast-function-calls \
--enable-host-specific-asms  \
--enable-show-ips        \
--enable-all-optimizations \
--enable-readline        \
--enable-clgd54xx        \
--enable-fpu             \
--enable-3dnow           \
--enable-alignment-check \
--enable-misaligned-sse  \
--enable-cdrom           \
--enable-sb16=linux      \
--with-x11               \
--with-rfb               \
--with-term              \
$OPTS                    &&
make                     &&
make install "DESTDIR=$DESTDIR"
}
