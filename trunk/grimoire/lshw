   VERSION=( "A.01.07" "A.01.06" "A.01.05" "A.01.04" "A.01.03" "A.01.02" "A.01.01" "A.01.00" "T.00.07" "T.00.06" "T.00.05" )
  CATEGORY="utility"
 ATTRIBUTE="console"
       URL="http://ezix.sourceforge.net/software/files"
  HOMEPAGE="http://ezix.sourceforge.net/software/lshw.html"
  ESTIMATE="32"
      DESC="lshw the hardware listner provides detailed information about the box.

lshw the hardware lister is a small tool to provide detailed 
informaton on the hardware configuration of the machine.
It can report exact memory configuration, firmware version, 
mainboard configuration, CPU version and speed, cache 
configuration, bus speed, etc.
"


build() {
make  "CXXFLAGS=$CXXFLAGS"  &&
prepare_install  &&
make    install
}
