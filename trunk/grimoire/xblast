   VERSION=( "2.10.4" "2.10.2" "2.10.0" "2.9.22" )
  CATEGORY="game"
 ATTRIBUTE="x11 new broken"
# This requires spells to be made or some addition to this spell
# to download and install the separate levels, sounds, modules, music,
# and images required to play xblast.
# Frankly they aught to include it all in a single tarball.
    SOURCE="xblast/xblast-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://xblast.sourceforge.net"
       REQ=( "libpng"
             ":--enable-sound::to enable compilation of xbsndsrv"
             ":--enable-mini::to enable compilation with -DMINI"
             ":--enable-SMPF::to enable compilation with -DSMP for 16 players" )
      OPTS="--bindir=/usr/games
            --prefix=/usr/share/games/xblast
            --with-otherdatadir=/usr/share/games/xblast"
  ESTIMATE="125"
      DESC="xblast is a multiplayer bomberman clone."
