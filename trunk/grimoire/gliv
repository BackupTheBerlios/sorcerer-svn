#!/bin/sh
   VERSION=( "1.9.3" )
  CATEGORY="graphic-viewer"
 ATTRIBUTE="x11 new DESTDIR"
    SOURCE="gliv-${VERSION}.tar.bz2"
       URL="http://guichaz.free.fr/gliv/"
  HOMEPAGE="http://guichaz.free.fr/gliv/"
       REQ=("gtk+ gtkglext")
  ESTIMATE=""
      DESC="GLiv is an OpenGL image viewer. 
			Image loading is done via Gdk-pixbuf bundled with GTK+-2.4, rendering with OpenGL, and the graphical user interface uses GTK+ with GtkGLExt. GLiv is very fast and smooth at rotating, panning and zooming if you have an OpenGL accelerated graphics board. It supports thumbnails and navigating through them using two images menus."
      
build() {
	export LDFLAGS="$LDFLAGS $( pkg-config --libs pangox)"
	default_build
}
			

