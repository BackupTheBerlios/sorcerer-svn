   VERSION=( "1.6.7" "1.6.6a" "1.6.6" "0.9.7" "0.9.6" "0.9.5" "0.9.4" "0.9.3" "0.9.2" "0.9.1" )
    IGNORE="0\.9\.[8-9]\|0\.9\.1[0-1]\|1\.6\.[8-9]\|^1\.6\.10"
# 1.6.9 fails during install
# 0.9.8 fails during install
# same for 0.9.7 perhaps an update of some other software is
# causing hplip to fail?
# unknown.  Let me know if you require this fixed anytime soon, please.
# - Kyle
  CATEGORY="printer"
 ATTRIBUTE="x11"
#ATTRIBUTE="x11 broken"
#   SOURCE="hpinkjet/hplip-$VERSION.tar.gz"
    SOURCE="hplip/hplip-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://hplip.sourceforge.net/"
# HOMEPAGE="http://hpinkjet.sourceforge.net"
       REQ="cups ghostscript net-snmp"
  ESTIMATE="221"
      DESC="hplip provides Hewlett Packard's drivers for some of the HP PSC printers.
For further information on getting your HP working under linux,
see http://www.linuxprinting.org, and http://hpinkjet.sourceforge.net."

build() {
# sed -i "s:\$(CHKCONFIG_PATH)/chkconfig \$(PACKAGE) reset;:echo ' '; :" Makefile.in
  ./configure      \
  --prefix=/usr    &&
  make             &&
  prepare_install  &&
  make    install
}

post_install() {
default_post_install
/lib/lsb/install_initd /etc/init.d/hplip
/etc/init.d/hplip start
}

pre_remove() {
default_pre_remove
/etc/init.d/hplip stop
/lib/lsb/remove_initd /etc/init.d/hplip
}
