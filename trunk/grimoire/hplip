    stable 3.10.6 3.10.5 3.10.2
   require dbus cups ghostscript libexif libusb-compat net-snmp sane-backends
  optional libgphoto2
  category printer
 attribute x11
    source $SOURCEFORGE_URL hplip/hplip/$VERSION/hplip-$VERSION.tar.gz
  homepage http://hplipopensource.com/hplip-web/index.html
  estimate 1000
      desc 'Hewlett Packard drivers for some of the HP PSC printers.
For further information on getting your HP working under linux,
see http://www.linuxprinting.org, and http://hpinkjet.sourceforge.net.'

build(){
 ./configure \
 --prefix=/usr &&
 make &&
 make install DESTDIR=$DESTDIR
}
