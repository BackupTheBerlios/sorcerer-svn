  stable 2.8.6 2.8.5 2.8.4 2.8.2
  secure 2.8.6 2.8.5 2.8.4 2.8.2
  CATEGORY='printer'
 ATTRIBUTE='x11'
    SOURCE="hplip/hplip-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://hplip.sourceforge.net/'
       REQ='cups ghostscript libusb net-snmp sane-backends'
  ESTIMATE='1400'
      DESC='hplip provides Hewlett Packard drivers for some of the HP PSC printers.
For further information on getting your HP working under linux,
see http://www.linuxprinting.org, and http://hpinkjet.sourceforge.net.'

build(){
# sed -i "s:\$(CHKCONFIG_PATH)/chkconfig \$(PACKAGE) reset;:echo ' '; :" Makefile.in
 ./configure     \
 --prefix=/usr   &&
 make            &&
 prepare_install &&
 make    install
}

pre_remove(){
 default_pre_remove
 /etc/init.d/hplip stop
 /lib/lsb/remove_initd /etc/init.d/hplip
}
