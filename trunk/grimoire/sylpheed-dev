   version stable 2.1.9 2.1.8 2.1.7 2.1.6 2.1.5 2.1.4 2.1.3 2.1.2
   require gtk+
  optional gpgme    --enable-gpgme  ''                 for encrypted email
# optional compface ''              --disable-compface for compface support
  optional jpilot   --enable-jpilot ''                 for palm pilot integration
  optional openldap --enable-ldap   ''                 for ldap support
  optional openssl  --enable-ssl    ''                 for pop3s and imaps support
  category network/email network/news
 attribute client x11
  homepage http://sylpheed.good-day.net/
    source http://sylpheed.good-day.net/sylpheed/v${VERSION:0:3}/sylpheed-$VERSION.tar.bz2
   provide email-client
  eprovide sylpheed
  estimate 300
      desc 'an e-mail client and news reader'


build(){
default_build &&
mkdir    -p                  $DESTDIR/usr/share/pixmaps &&
install  -m 644 sylpheed.png $DESTDIR/usr/share/pixmaps
}
