   VERSION=( "2.1.9" "2.1.8" "2.1.7" "2.1.6" "2.1.5" "2.1.4" "2.1.3" "2.1.2" )
  CATEGORY="network/email network/news"
 ATTRIBUTE="client x11"
    SOURCE="sylpheed-$VERSION.tar.bz2"
  HOMEPAGE="http://sylpheed.good-day.net/"
       URL="http://sylpheed.good-day.net/sylpheed/v${VERSION:0:3}/"
   PROVIDE="email-client"
# sylpheed-dev requires gpgme >= 1.0.1
       REQ=( "gtk+"
             "gpgme:--enable-gpgme::for encrypted email"
             "compface::--disable-compface:for compface support"
             "jpilot:--enable-jpilot::for palm pilot integration"
             "openldap:--enable-ldap::for ldap support"
             "openssl:--enable-ssl::for pop3s and imaps support" )
  EPROVIDE="sylpheed"
  ESTIMATE="274"
      DESC="sylpheed-dev is an e-mail client and news reader."


build() {
default_build                                      &&
mkdir    -p                    /usr/share/pixmaps  &&
install  -m 644  sylpheed.png  /usr/share/pixmaps
}
