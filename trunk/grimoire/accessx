   VERSION=( "0951" )
    IGNORE="old"
  CATEGORY="utility"
 ATTRIBUTE="x11"
    SOURCE="accessx$VERSION.tar.gz"
       URL="http://www.disability.uiuc.edu/accessx/software"
  HOMEPAGE="http://www.disability.uiuc.edu/accessx"
#       URL="http://www.rehab.uiuc.edu/accessx/software"
#  HOMEPAGE="http://www.rehab.uiuc.edu/accessx"
       REQ=( "x11"
             "tk:::for graphical configuration" )
      DESC="accessx is a tool for controlling XKEYBOARD accessibility features of XFree86.
There is a command line utility and a graphical Tcl/Tk GUI."


build() {
sed  -i  "s:/usr/local:/usr:g"  Makefile  &&
make             &&
prepare_install  &&
make    install
}
