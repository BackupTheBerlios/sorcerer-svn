if  !  grep  -q  "imap"  $SPELL_CONFIG;  then
  if    query  "Do you have an IMAP server installed?" n
  then  echo  'OPTS="$OPTS --with-imap"'  >>  $SPELL_CONFIG
  else  echo  "# no imap"                 >>  $SPELL_CONFIG
  fi
fi


if  !  grep  -q  "sockets"  $SPELL_CONFIG;  then
  if    query  "Enable sockets support (experimental)?" y
  then  echo  'OPTS="$OPTS --enable-sockets"'  >>  $SPELL_CONFIG
  else  echo  "# no sockets"                   >>  $SPELL_CONFIG
  fi
fi


if  !  grep  -q  "pcntl"  $SPELL_CONFIG;  then
  if    query  "Enable pcntl (fork processes) support (experimental)?" y
  then  echo  'OPTS="$OPTS --enable-pcntl"'  >>  $SPELL_CONFIG
  else  echo  "# no pcntl"                   >>  $SPELL_CONFIG
  fi
fi
