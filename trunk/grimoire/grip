   VERSION=( "3.2.0" "3.0.7" "3.0.6" "3.0.5" "3.0.4" )
    IGNORE="^3\.1"
# Okay so 3.1.1 is a gnome2 developmental version of grip.
  CATEGORY="cd"
 ATTRIBUTE="gnome"
    SOURCE="grip/grip-$VERSION.tar.gz"
  HOMEPAGE="http://www.nostatic.org/grip"
       URL="http://www.nostatic.org
            $SOURCEFORGE_URL"
       REQ=( "libgnomeui id3lib libghttp vte"
             "cdparanoia:::to rip CDs"
             "cdrtools:::to rip CDs using cdda2wav"
             "lame:::to encode mp3 files"
             "bladeenc:::to encode mp3 files"
             "vorbis-tools:::to encode ogg vorbis files" )
  ESTIMATE="67"
      DESC="grip is a gtk-based cd-player and cd-ripper.
Grip can rip CDs using cdparanoia, cdda2wav, 
or other command line ripping tools.
It can encode the results using lame, 
bladeenc, ogg vorbis, or other command
line encoding tools.
It supports cddb lookups for track naming."
