# Trying 1.2.0~beta1 because 1.1.8 stable source does not compile
# Source not written to be able to locate installed qt
# 1.2.1 has compile error
# Not sure if this works
# Do not use build_old()
# because it is not modified to work with destdir

    stable 1.2.2 1.2.1 "1.2.0~beta1" 1.1.8 1.1.7 1.1.6 1.1.5
   require speech-dispatcher
  category network/chat
 attribute kde4
 attribute broke
    source $SOURCEFORGE_URL "mumble/Mumble/$VERSION/mumble-$VERSION.tar.gz"
  homepage http://mumble.sourceforge.net/
      opts -DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4
      opts -DCMAKE_INSTALL_RPATH:PATH=/opt/kde4/lib:/opt/kde4/lib64
      opts -DCMAKE_SKIP_BUILD_RPATH:BOOL=TRUE
      opts -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=TRUE
      opts -DCMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=TRUE
      opts -DCMAKE_BUILD_TYPE=Release
  estimate 1000
      desc 'chat program similar to roger wilco and team speak'

build_old(){ (
 export PATH+=:/opt/kde4/bin
 qmake main.pro CONFIG+=no-portaudio CONFIG+=no-update CONFIG+=no-pulseaudio &&
 make release   &&
 make install
) }
