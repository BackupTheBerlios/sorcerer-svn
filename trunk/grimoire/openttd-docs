# 1.0.5 source tarball might be missing files and therefore fails compilation
# 1.0.4 fails compilation with same error as 1.0.5
# What *.pcx files are missing and not included in the source tree?

   version stable 1.1.5 1.0.5 1.0.4 1.0.3
   version secure 1.1.5
   version unstable 1.2.0-RC1
  category game
 attribute x11
    source http://binaries.openttd.org/releases/$VERSION/openttd-$VERSION-docs.tar.xz
      info last 20120113
      info home http://www.openttd.org/en/
      vurl http://www.openttd.org/en/download-stable
      desc 'documentation for open transport tycoon deluxe video game'

build(){
 find * -type d | xargs --max-lines=256 chmod 755
 find * -type f | xargs --max-lines=256 chmod 644
 mkdir -pvm 755 $DESTDIR/usr/doc/openttd
 cp    -av *    $DESTDIR/usr/doc/openttd
}
