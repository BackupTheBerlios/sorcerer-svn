   version stable 1.8.5
   require MesaLib imake xorg-cf-files
      opts --enable-shared --disable-static
  category game
 attribute library makej multilib-concurrent x11
    source http://plib.sourceforge.net/dist/plib-$VERSION.tar.gz
      info home http://plib.sourceforge.net/
      desc 'plib is a portable game library.
plib is a set of libraries to write games and other
realtime interactive applications that are 100% portable
across a wide range of hardware and operating systems.
It is used by Majik3D, FlightGear, and others, and
includes libraries for GUI widgets, sound replay,
geometry, scene graph, joystick, and fonts/text.'

build(){
 export   CFLAGS+=' -fPIC'
 export CXXFLAGS+=' -fPIC'
 default_build
}
