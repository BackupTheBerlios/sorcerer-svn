   VERSION=( "1.8.4" "1.8.3" "1.8.2" "1.8.1" )
    IGNORE="RC"
  CATEGORY="game"
 ATTRIBUTE="library x11"
    SOURCE="plib-$VERSION.tar.gz"
       URL="http://plib.sourceforge.net/dist/"
  HOMEPAGE="http://plib.sourceforge.net/"
case  $VERSION  in
  1.8.4)  USE_GCC="gcc-v4.0"  ;;
esac
       REQ="glut"
  ESTIMATE="307"
      DESC="plib is a portable game library.
plib is a set of libraries to write games and other
realtime interactive applications that are 100% portable
across a wide range of hardware and operating systems.
It's used by Majik3D, FlightGear, and others, and
includes libraries for GUI widgets, sound replay,
geometry, scene graph, joystick, and fonts/text."

build()  {
  export    CFLAGS="-I/usr/X11R6/include   $CFLAGS"
  export  CXXFLAGS="-I/usr/X11R6/include $CXXFLAGS"
  default_build
}
