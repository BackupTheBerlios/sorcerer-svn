   version stable 0.8.5 0.8.3
   require ppp
  category network/ppp
 attribute client console makej server
    source $SOURCEFORGE_URL accel-pptp/accel-pptp/accel-pptp-$VERSION.tar.bz2
      info good 20120530
      info last 20101006
      info home http://accel-pptp.sourceforge.net/
      desc 'point to point tunneling protocol client/server'

build(){
 cd pppd_plugin    &&
 ./configure       \
  --prefix=/usr    &&
 make              &&
 cd ../pptpd-1.3.3 &&
 ./configure       \
  --prefix=/usr    &&
 make              &&
 make install      \
  DESTDIR=$DESTDIR &&
 cd ../pppd_plugin &&
 make install      \
  DESTDIR=$DESTDIR
}
