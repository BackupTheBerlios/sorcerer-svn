with version stable 0.8.5 0.8.3
with base    ppp
with role    network/ppp
with trait   client console makej server
with source  $SOURCEFORGE_URL accel-pptp/accel-pptp/accel-pptp-$VERSION.tar.bz2
with info    good 20120530
with info    last 20101006
with info    home http://accel-pptp.sourceforge.net/
with info    cite 'point to point tunneling protocol client/server'

build(){
 cd pppd_plugin    &&
 ./configure       \
  --prefix=/usr    &&
 make              &&
 cd ../pptpd-1.3.3 &&
 ./configure       \
  --prefix=/usr    &&
 make              &&
 make install      \
  DESTDIR=$DESTDIR &&
 cd ../pppd_plugin &&
 make install      \
  DESTDIR=$DESTDIR
}
