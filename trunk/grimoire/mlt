# This will download during compilation acquire avformat from subversions repository.
# (--disable-mmx might be necessary on 64bit)

# qimage and SDL support required for use of mlt with kdenlive

# 0.8.0 failed compilation

   version   stable 0.8.0 0.7.8
#  version unstable 0.8.0
   require SDL_image ffmpeg libexif libsamplerate libvorbis qt-everywhere-opensource subversion
  optional libdv          '' '--disable-dv'
  optional frei0r-plugins '' '--disable-frei0r'
  optional gtk+           '' '--disable-gtk2'
  optional jackit
  optional libquicktime
  optional sox            '' '--disable-sox'
  optional xine-lib       '' '--disable-xine'
##    opts --enable-gpl --swig-languages=all --avformat-svn --avformat-swscale --qimage-libdir=/usr/lib --qimage-includedir=/usr/include
      opts --enable-gpl --avformat-swscale 
#     opts --qimage-includedir=/usr/include --qimage-libdir=/usr/lib
#     opts    --kde-includedir=/usr/include    --kde-libdir=/usr/lib
  category video
 attribute library makej multilib-dual optimize setarch
    source   stable $SOURCEFORGE_URL mlt/mlt/mlt-$VERSION.tar.gz
    source unstable $SOURCEFORGE_URL mlt/mlt/mlt-$VERSION.tar.gz
      info last 20120601
      info home http://www.mltframework.org/twiki/bin/view/MLT/
      desc 'media loving toolkit'

build(){
 local PKG_CONFIG_PATH

# if    [[ $HOSTTYPE == x86_64 ]]; then
#  if   [[ $CFLAGS =~ -m32 ]]
#  then PKG_CONFIG_PATH=/opt/32bit/usr/lib/pkgconfig; LDFLAGS+=' -Wl,-rpath-link,/opt/32bit/usr/lib'
#  else PKG_CONFIG_PATH=/usr/lib64/pkgconfig;    LDFLAGS+=' -Wl,-rpath-link,/usr/lib64'; OPTS+=' --libdir=/usr/lib64'
#  fi
# else  PKG_CONFIG_PATH=/usr/lib64/pkgconfig;    LDFLAGS+=' -Wl,-rpath-link,/usr/lib'
# fi

 if    [[ $HOSTTYPE == x86_64 ]]; then
  if   [[ $CFLAGS =~ -m32 ]]
  then PKG_CONFIG_PATH=/opt/32bit/usr/lib/pkgconfig; LDFLAGS+=' -Wl,-rpath,/opt/32bit/usr/lib'
  else PKG_CONFIG_PATH=/usr/lib64/pkgconfig;    LDFLAGS+=' -Wl,-rpath,/usr/lib64'; OPTS+=' --libdir=/usr/lib64'
  fi
 else  PKG_CONFIG_PATH=/usr/lib64/pkgconfig;    LDFLAGS+=' -Wl,-rpath,/usr/lib'
 fi

 export PKG_CONFIG_PATH LDFLAGS

 if   grep -qr "/libvdpau.so$" $INSTALL_LOGS
 then opts --avformat-vdpau
 fi

 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then opts --libdir=/usr/lib64
 else opts --libdir=/usr/lib
 fi
 opts --include-dir=/usr/include

 default_build
}
