    stable 0.9
   require gtk+-v1.2 jpeg libpng

  category video/webcam
 attribute x11
    source gqcam-$VERSION.tar.gz
       url http://www.wirelesscouch.net/software/gqcam/download/
      vurl http://www.wirelesscouch.net/software/gqcam/
  homepage http://www.wirelesscouch.net/software/gqcam/
  estimate 10
      desc 'gqcam is a v4l frame grabber for webcams.'

build(){
 sed -i "s:png:png $LDFLAGS:
         s:-DVER:$CFLAGS -DVER:" Makefile
 make            &&
 prepare_install &&
 install -vm 755 gqcam /usr/bin
}
