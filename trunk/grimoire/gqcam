    stable 0.9
   require gtk+-v1.2 jpeg libpng
  category video/webcam
 attribute x11
    source http://www.wirelesscouch.net/software/gqcam/download/gqcam-$VERSION.tar.gz
      vurl http://www.wirelesscouch.net/software/gqcam/
      info home  http://www.wirelesscouch.net/software/gqcam/
      desc 'v4l frame grabber for webcams'

build(){
 sed -i "s:png:png $LDFLAGS:
         s:-DVER:$CFLAGS -DVER:" Makefile
 make &&
 mkdir  -pvm 755       $DESTDIR/usr/bin &&
 install -vm 755 gqcam $DESTDIR/usr/bin
}
