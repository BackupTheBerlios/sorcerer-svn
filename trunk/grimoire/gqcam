   VERSION=( "0.9" )
  CATEGORY="video/webcam"
 ATTRIBUTE="x11"
    SOURCE="gqcam-$VERSION.tar.gz"
       URL="http://cse.unl.edu/~cluening/gqcam/download/"
  HOMEPAGE="http://cse.unl.edu/~cluening/gqcam/"
       REQ="gtk+-v1.2 jpeg libpng"
  ESTIMATE="14"
      DESC="gqcam is a v4l frame grabber for webcams."

build() {
  sed  -i  "s:png:png $LDFLAGS:
            s:-DVER:$CFLAGS -DVER:"  Makefile
  make             &&
  prepare_install  &&
  install  -m 0755 gqcam  /usr/bin
}
