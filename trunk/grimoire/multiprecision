# 0.8.1 is no longer compiling
   version stable 0.9 0.8.1
   require mpfr
      opts --enable-shared=yes --enable-static=no --with-pic
  category development
 attribute library makej multilib-concurrent
    source http://www.multiprecision.org/mpc/download/mpc-$VERSION.tar.gz
      info last  20110221
      info home  http://www.multiprecision.org/
      info docs  "http://www.multiprecision.org/index.php?prog=mpc&page=documentation"
      info mail  "http://lists.gforge.inria.fr/mailman/listinfo/mpc-discuss"
      desc 'C library for the arithmetic of complex numbers
with arbitrarily high precision and correct rounding of the result.'

build(){
 # Otherwise 0.9 will not find egrep and be unable to create shared libraries
 case $VERSION in
  0.9) local  EGREP; export EGREP=/bin/egrep ;;
 esac
 default_build
}
