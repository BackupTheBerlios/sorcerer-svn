   VERSION=( "head" "Linux_Spec1_0" "0.0.7-20040930" "0.0.7-20040202" "0.0.6-20031213" "0.0.6" )
  CATEGORY="audio-player audio-mixer"
 ATTRIBUTE="library x11"
#    SOURCE="openal-$VERSION.tar.bz2"
#       URL="http://sorcerer.wox.org/download/sources/openal/$VERSION"
   HOMEPAGE="http://www.openal.org"
       DIR="openal"
       REQ=( "automake cvs"
             "alsa-lib:--enable-alsa::for alsa support"
             "arts:--enable-arts::for arts support"
             "esound:--enable-esd::for esd support"
             "SDL:--enable-sdl::for SDL backend"
             "libvorbis:--enable-vorbis::for vorbis support"
             "smpeg:--enable-smpeg::for smpeg support" )
  ESTIMATE="79"
      DESC="openal is a cross-platform audio library.
openal is a joint effort to create an open, vendor-neutral,
cross-platform API for interactive, primarily spatialized audio.
Its primary audience is made up of application developers
and desktop users that rely on portable standards like
OpenGL for games and other multimedia applications."

pre_build()  {
  cd  $SOURCE_DIR
# cvs -z9 -d:pserver:guest@opensource.creative.com:/usr/local/cvs-repository co -r Linux_Spec1_0 openal
  cvs -z9 -d:pserver:guest@opensource.creative.com:/usr/local/cvs-repository co -r HEAD openal
}

build() {
sed -i  "/aluttypes.h/d"  linux/Makefile.in
cd  linux
./autogen.sh
./configure           \
--build=$BUILD        \
--prefix=/usr         \
--sysconfdir=/etc     \
--localstatedir=/var  \
$OPTS                 &&
make                  &&
prepare_install       &&
make    install
}
