    stable 0.0.8
   require automake
  optional alsa-lib  --enable-alsa   '' for alsa support
  optional esound    --enable-esd    '' for esd support
  optional SDL       --enable-sdl    '' for SDL backend
  optional libvorbis --enable-vorbis '' for vorbis support
  optional smpeg     --enable-smpeg  '' for smpeg support
    ignore '2004'
  category audio/library audio/mixer
 attribute library x11
    source http://openal.org/openal_webstf/downloads/openal-$VERSION.tar.gz
  homepage http://www.openal.org
      opts --enable-static=no
  estimate 800
      desc 'openal is a cross-platform audio library.
openal is a joint effort to create an open, vendor-neutral,
cross-platform API for interactive, primarily spatialized audio.
Its primary audience is made up of application developers
and desktop users that rely on portable standards like
OpenGL for games and other multimedia applications.'

build(){
 case $VERSION in
  0.0.8) sed -i "s:@requirements@::" admin/pkgconfig/openal.pc.in
         patch -p1 < $SCRIPT_DIR/openal-0.0.8.patch ;;
 esac
 default_build
}

current(){
 case $VERSION in
  0.0.8) grep -qsx 'patching file common/include/AL/alc.h' $COMPILE_LOGS/openal ;;
 esac
}
