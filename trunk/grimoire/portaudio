    stable v19_20071207 v18_1
  category audio/library
 attribute library new
   require alsa-lib
  optional jackit
    source http://www.portaudio.com/archives/pa_stable_$VERSION.tar.gz
#   source http://www.portaudio.com/archives/portaudio_$VERSION.zip
#   source http://www.portaudio.com/archives/pacpp.zip
  homepage http://www.portaudio.com/
      opts --enable-static=no
 freshmeat none
  estimate 350
      desc 'cross platform audio library'

build_old(){
 strip_carriage_returns(){
  tr -d '\r' < $1 > $1.new
  mv $1.new  $1
 }

 for file in *; do
  if   [ -f $file ]
  then strip_carriage_returns $file
  fi
 done

 chmod 700 configure

 sed -i 's:-o lib/:-lpthread -o lib/:' Makefile.in
 default_build
}
