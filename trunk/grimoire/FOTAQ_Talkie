     stable 1.1
   category game development/emulator
  attribute archive_off data solo
     source $SOURCEFORGE_URL scummvm/extras/Flight%20of%20the%20Amazon%20Queen/FOTAQ_Talkie-$VERSION.zip
       info home  http://scummvm.sourceforge.net
       desc 'Flight of the Amazon Queen with mp3 compressed sfx/speech'

build(){
 cd ..
 chmod 755 *
 chmod -R 644 */*
 mkdir -vp   $DESTDIR/usr/share/games
 cp    -av * $DESTDIR/usr/share/games/
}
