   version stable 1.0.0
   require rocksndiamonds
  category game
 attribute x11
    source http://www.artsoft.org/RELEASES/rocksndiamonds/levels/Snake_Bite-$VERSION.zip
      info home http://www.artsoft.org/rocksndiamonds/levels.html
      info good 20120703
      info home http://www.artsoft.org/rocksndiamonds/
      desc 'levels for rocksndiamonds'

build(){
 RO_GD="/usr/share/rocksndiamonds"
 
 levels_install(){
  mkdir -pvm 755 $DESTDIR/$RO_GD/levels/${SPELL#rocksndiamonds-levels-}
  cp    -rv  *   $DESTDIR/$RO_GD/levels/${SPELL#rocksndiamonds-levels-}/
  find $DESTDIR -type d | escape_qs | xargs -r --max-lines=256 chmod 755
  find $DESTDIR -type f | escape_qs | xargs -r --max-lines=256 chmod 644
 }

 levels_install
}
