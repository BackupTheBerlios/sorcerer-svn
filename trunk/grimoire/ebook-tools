   version stable 0.2.1
   require libxml2 libzip
  category documentation
 attribute library makej multilib-dual x11
    source $SOURCEFORGE_URL ebook-tools/ebook-tools/$VERSION/ebook-tools-$VERSION.tar.gz
      info good 20120713
      info last 20100914
      info home  http://sourceforge.net/projects/ebook-tools/
      desc 'tool for accessing and converting various ebook file formats'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then export CFLAGS+=" -I/usr/lib64/libzip/include/"
 else export CFLAGS+=" -I/usr/lib/libzip/include/"
 fi
 default_build &&
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then mv $DESTDIR/usr/lib{,64}
 fi
}
