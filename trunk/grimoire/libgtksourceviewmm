# glom 1.6.10 requires libtksourceviewmm 1.0 provided by 0.3.1

   version stable 1.9.5
   require doxygen gtkmm gtksourceview
  category network/web
 attribute gnome library makej multilib-concurrent
 attribute broke
    source $GNOME_URL sources/libgtksourceviewmm/${VERSION:0:3}/libgtksourceviewmm-$VERSION.tar.bz2
      info last 20090425
  homepage http://www.gnome.org
  estimate 400
      desc 'C++ wrapper for gtksourceview.'

build(){
 case $VERSION in
  1.9.5) sed -i '1i#include <cstring>' tests/test-search.cpp ;;
 esac
 default_build
}
