# glom 1.6.10 requires libtksourceviewmm 1.0 provided by 0.3.1

    stable 1.9.5 1.9.4 1.9.3 1.9.2
   require doxygen gtkmm gtksourceview
  category network/web
 attribute gnome library
       url $GNOME_URL
    source sources/libgtksourceviewmm/${VERSION:0:3}/libgtksourceviewmm-$VERSION.tar.bz2
  homepage http://www.gnome.org
  estimate 400
      desc 'libgtksourceviewmm provides a C++ wrapper for gtksourceview.'

build(){
 case $VERSION in
  1.9.[4-5]) sed -i '1i#include <cstring>' tests/test-search.cpp ;;
 esac
 default_build
}
