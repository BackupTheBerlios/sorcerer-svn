   version stable 1.4
  category kernel network wireless
 attribute firmware
    source $SOURCEFORGE_URL zd1211/zd1211-firmware/$VERSION/zd1211-firmware-$VERSION.tar.bz2
      info home  http://sourceforge.net/projects/zd1211/develop
      desc 'firmware for ZyDAS ZD1211/ZD1211B'

build(){
 mkdir  -pvm 755          $DESTDIR/lib/firmware/zd1211 &&
 install -vm 644 zd1211_* $DESTDIR/lib/firmware/zd1211
}
