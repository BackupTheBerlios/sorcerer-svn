    stable 1.9.1 1.0.0
   require SDL SimGear FlightGear-data
  optional FlightGear-Aircraft '' '' for additional aircraft
  optional FlightGear-Scenery  '' '' for additional scenery
  category game/3d/flightsim
 attribute x11
       url $FLIGHTGEAR_URL
    source Source/FlightGear-$VERSION.tar.gz
  homepage http://www.flightgear.org
      vurl ftp://ftp.flightgear.org/pub/flightgear/Source/
case $VERSION in
 1.0.0) use_gcc gcc-v4.0 ;;
esac
 freshmeat flightgear
  estimate 2000
      desc 'OpenGL flight simulator'

build(){
 case $VERSION in
  1.0.0) export CFLAGS+=' -LGLU' ;;
 esac
 default_build
}
