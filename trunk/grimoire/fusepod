   version stable 0.5.2
   require fuse libgpod libmobiledevice taglib
  category file-system
 attribute console
    source $SOURCEFORGE_URL fusepod/fusepod/FUSEPod%20v$VERSION/fusepod-$VERSION.tar.bz2
      info good 20120716
      info last 20070702
      info home http://sourceforge.net/projects/fusepod/
      desc 'fuse module for mounting iPod into a directory'

build(){
 case $VERSION in
  0.5.2) sed -i '1i#include <strings.h>' src/fusepod_util.h
         sed -i '1i#include <stdio.h>'   src/fusepod_util.cpp ;;
 esac
 default_build
}
