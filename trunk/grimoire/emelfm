    stable 0.9.2
   require gtk+-v1.2
  category utility/file-manager
 attribute x11
    source emelfm-$VERSION.tar.gz
       url http://emelfm.sourceforge.net/
  homepage http://emelfm.sourceforge.net/
      desc 'emelfm is a file manager that implements the popular two-pane design.
emelfm is a file manager that implements the popular two-pane design.
It features a simple GTK+ interface, a flexible filetyping scheme,
and a built-in command line for executing commands without opening an xterm.'

build(){
cat << EOF >> Makefile.common
PREFIX		=	/usr
BIN_DIR		=	/usr/bin
LOCALEDIR	=	/usr/share/locale
PLUGINS_DIR	=	/usr/share/emelfm/plugins
DOC_DIR		=	/usr/share/emelfm/docs
CC		=	gcc  $CFLAGS
EOF

make &&
prepare_install &&
make    install
}
