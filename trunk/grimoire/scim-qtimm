   VERSION=( 0.9.4 )
  CATEGORY='input'
 ATTRIBUTE='console library x11'
    SOURCE="scim/scim-qtimm-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://www.scim-im.org/'
       REQ='scim'
      OPTS='--with-qt-dir=/usr/share/qt'
# May have optional requirement on skim, but skim is broken
  ESTIMATE='300'
      DESC='scim-qtimm provides a qt-x11-free input module'

current(){
 case $VERSION in
  0.9.4) [ -f /usr/share/qt/plugins/inputmethods/libqscim.so ] ;;
 esac
}
