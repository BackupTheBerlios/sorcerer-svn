   VERSION=( 4.0.0 )
  CATEGORY='profile'
 ATTRIBUTE='kde4'
  HOMEPAGE='http://www.kde.org/'
  ESTIMATE='5'
      DESC='kde-path-v4 exports a PATH to where KDE is installed'

build(){
 local DIR=/etc/bash.d/noninteractive
 local DEST=$DIR/PATH-KDE-v4
 local KATH='export PATH+=:/opt/kde4/bin'
 prepare_install
 mkdir -vp       $DIR
 echo  "$KATH" > $DEST
 chmod -v 0755   $DEST
}
