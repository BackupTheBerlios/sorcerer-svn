   version stable 2.0.0-beta3
   require qca
  category security/encryption
 attribute kde4 library
 attribute broke
    source http://delta.affinix.com/download/qca/${VERSION:0:3}/plugins/qca-ossl-$VERSION.tar.bz2
  homepage http://delta.affinix.com/qca/
  estimate 700
      desc 'OpenSSL plugin for QCA'

build(){ (
export PATH="/opt/kde4/bin:$PATH"

# --prefix=/opt/kde4 \
./configure \
 --qtdir=/opt/kde4  \
 --release &&
make &&
make install DESTDIR=$DESTDIR
) }
