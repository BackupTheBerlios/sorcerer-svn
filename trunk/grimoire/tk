   version stable 8.5.9 8.5.8 8.5.7
   version secure 8.5.2
      opts --disable-rpath
   require libXft libXScrnSaver tcl
  category graphic
 attribute library makej multilib-dual x11
    source $SOURCEFORGE_URL tcl/Tcl/$VERSION/tk$VERSION-src.tar.gz
    source $SOURCEFORGE_URL tcl/Tcl/$VERSION/tcl$VERSION-src.tar.gz
  homepage http://www.tcl.tk/
 freshmeat tcltk
      desc 'portal GUI for tcl
tk provides portable GUIs on UNIX, Windows, and Macintosh.
A powerful widget set and the concise scripting interface to
Tk make it a breeze to develop sophisticated user interfaces.'

build(){
 make_shared_lib(){ ld --whole-archive -share -o $1.so $1.a; }

 cd tcl$VERSION/unix &&
 ./configure          \
 --prefix=/usr        \
 --sysconfdir=/etc    \
 --localstatedir=/var \
 --enable-shared      \
 --enable-threads     \
 $OPTS                &&

 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then opts --libdir=/usr/lib64
 else opts --libdir=/usr/lib
 fi &&

 cd  ../../unix       && 
 ./configure          \
 --prefix=/usr        \
 --sysconfdir=/etc    \
 --localstatedir=/var \
 --enable-shared      \
 --enable-threads     \
 --with-tcl=../tcl$VERSION/unix \
 $OPTS &&
 make &&
 make install DESTDIR=$DESTDIR &&
 ln -sf wish${VERSION:0:3} $DESTDIR/usr/bin/wish
}
