    stable 1.2.4
#     last 20070806
   require SDL_image
  category game
 attribute x11
    source http://highmoon.gerdsmeier.net/highmoon-$VERSION.tar.gz
      home http://highmoon.gerdsmeier.net/
      desc 'spaceship gravity scorched earth type dueling game'

build(){
 make &&
 make install INSTALLBIN=$DESTDIR/usr/bin \
              INSTALLPATH=$DESTDIR/usr/share/games/HighMoon
}
