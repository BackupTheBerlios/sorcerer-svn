   version stable 2.2.2-201106072007 2.2.1-201012301333 2.1.11-200804142058
   require bison findutils flex
  category security
 attribute console
    source http://grsecurity.net/stable/gradm-$VERSION.tar.gz
      info last 20110607
      info home  http://www.grsecurity.net/
      info docs  http://grsecurity.net/papers.php 
      vurl http://grsecurity.net/download_stable.php
 freshmeat grsecurity
      desc 'ACL administration tools for grsecurity enabled boxes'

build(){
 sed -i "s:-O2:$CFLAGS:
         s:-static:-static $LDFLAGS:
         s:/usr/bin/gcc:gcc:
         s:/sbin/\$(GRADM_BIN) -P:true:
         s:/usr/bin/find:find:" Makefile
 make &&
 make install DESTDIR=$DESTDIR &&
 echo "Run '/sbin/gradm -P' to set the ACL password."
}
