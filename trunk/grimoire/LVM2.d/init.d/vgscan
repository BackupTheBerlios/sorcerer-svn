#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 500
# Required-Start: dmsetup lock sys
# Should-Start: mdadm udev multipathd
# Default-Start: S
# Short-Description: vgscan scan all disks for volume groups and rebuild caches
### END INIT INFO

. /lib/lsb/init-functions

only start
name vgscan
options '--ignorelockingfailure --mknodes'
server /sbin/vgscan

start(){
 if   log_warning_msg "$NAME $OPTS"; $SERV $OPTS
 then log_success_msg "$NAME success"
 else log_failure_msg "$NAME failure"
 fi
}
