# 3.1.3 has compile errors

    stable 3.1.2 3.1.1 3.1
  unstable 3.1.3
   require kdelibs-v4 qca
  category network/file-share
 attribute kde
  category utility/accessibility
    source http://ktorrent.org/downloads/$VERSION/ktorrent-$VERSION.tar.bz2
      vurl http://ktorrent.org/
  homepage http://ktorrent.org/
      opts -DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4
      opts -DCMAKE_INSTALL_RPATH:PATH=/opt/kde4/lib:/opt/kde4/lib64
      opts -DCMAKE_SKIP_BUILD_RPATH:BOOL=TRUE
      opts -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=TRUE
      opts -DCMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=TRUE
      opts -DCMAKE_BUILD_TYPE=Release
  estimate 1700
      desc 'ktorrent is a BitTorrent program for KDE.'

build(){
mkdir build     &&
cd    build     &&
cmake $OPTS ..  &&
make            &&
prepare_install &&
make    install
}
