# 0.6.5 requires older version of gcc than current to compile

    stable 0.6.5 0.6.3
   require gtk+-v1.2 samba
  category network
 attribute x11 broke
    source http://www.bnro.de/~schmidjo/download/LinNeighborhood-0.6.5.tar.gz
    source http://www.bnro.de/~schmidjo/download/LinNeighborhood-0.6.5-samba3.patch
  homepage http://www.bnro.de/~schmidjo
 freshmeat linneighborhood
      desc 'LinNeighborhood is a workalike to micro$ofts network neighborhood.
LinNeighborhood is a GUI frontend for browsing M$
machines and mounting SMB shares using Samba.'

build(){
[[ -n       ${SOURCE[1]} ]] &&
patch -p1 < ${SOURCE[1]}
chmod 4755 /usr/bin/smbmnt /usr/bin/smbumount
default_build
}
