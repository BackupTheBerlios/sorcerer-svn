with version stable 0.4.0
with base    plib
with also    --bindir=/usr/bin
with role    game
with trait   x11
with source  http://tuxkart.sourceforge.net/dist/tuxkart-$VERSION.tar.gz
with info    good 20120711
with info    home http://tuxkart.sf.net/
with info    cite '3D GoKart racing game
tuxkart is a 3D GoKart racing game with several
famous OpenSource mascots participating'

build(){
 default_build &&
 if [   -d     $DESTDIR/usr/games ]; then
  mkdir -m 755 $DESTDIR/usr/bin
  mv           $DESTDIR/usr/games/* $DESTDIR/usr/bin
  rmdir        $DESTDIR/usr/games
 fi
}
