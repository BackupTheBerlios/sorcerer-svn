   version stable 0.4.0
   require plib
     opts --bindir=/usr/bin
  category game
 attribute x11
    source http://tuxkart.sourceforge.net/dist/tuxkart-$VERSION.tar.gz
      info good 20120711
      info home http://tuxkart.sf.net/
      desc '3D GoKart racing game
tuxkart is a 3D GoKart racing game with several
famous OpenSource mascots participating'

build(){
 default_build &&
 if [   -d     $DESTDIR/usr/games ]; then
  mkdir -m 755 $DESTDIR/usr/bin
  mv           $DESTDIR/usr/games/* $DESTDIR/usr/bin
  rmdir        $DESTDIR/usr/games
 fi
}
