# Where the source tarball hosted?

   version stable 2.1.5 2.1.0 2.0.13 2.0.12
   require automake gettext
      opts --bindir=/bin
  category disk/cd
 attribute console
    source http://ca.geocities.com/jefftranter@rogers.com/eject-$VERSION.tar.gz
      desc 'program for ejecting removable media under software control
It can also control the auto-eject feature of some drives
and can be used to switch CDs on an IDE/ATAPI CD changer.'


build(){
 case $MACHTYPE in
  *-uclibc) export LDFLAGS+=' -lintl' ;;
 esac
 aclocal
 automake -acf
 autoconf
 default_build
}
