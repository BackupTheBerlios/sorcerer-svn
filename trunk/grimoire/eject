# No idea where homepage is anymore.
# homepage http://www.pobox.com/~tranter/eject.html

    stable 2.1.0 2.0.13 2.0.12
   require automake gettext
    ignore 'fh'
  category disk/cd
 attribute console
    source eject-$VERSION.tar.gz
       url ftp://ftp.ibiblio.org/pub/Linux/utils/disk-management/
      opts --bindir=/bin
  estimate 20
      desc 'eject is a program for ejecting removable media under software control.
It can also control the auto-eject feature of some drives
and can be used to switch CDs on an IDE/ATAPI CD changer.'


build(){
 aclocal
 automake -acf
 autoconf
 default_build
}
