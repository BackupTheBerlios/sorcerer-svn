   VERSION=( 0.9.6 0.9.5 0.9.4 0.9.3 0.9.2 0.9.1 )
    IGNORE='cvs'
  CATEGORY='video/television'
 ATTRIBUTE='gnome'
    SOURCE="zapping/zapping-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://zapping.sourceforge.net'
#            'arts:::for arts sound output' )
       REQ=( 'libgnomeui rarian zvbi' )
  ESTIMATE='560'
      DESC='zapping, a tv viewer app
zapping is a TV viewer for GNOME that supports Video4Linux,
Video4Linux2, and XVideo.  It is extensible through plugins.'

build() { 
sed  -i  's:gconftool :gconftool-2 :'  Makefile.in
default_build
}
