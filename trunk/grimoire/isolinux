    stable 3.86
  category administration/bootloader
 attribute console
    source $KERNEL_URL pub/linux/utils/boot/syslinux/syslinux-$VERSION.tar.bz2
  homepage http://syslinux.zytor.com
  estimate 200
      desc 'bootloader for Linux that works on ISO9660 filesystems'

build(){
# It comes pre-assembled.
prepare_install &&
mkdir   -pm 755 /usr/share/isolinux
install -m  644 core/isolinux.bin /usr/share/isolinux/
}
