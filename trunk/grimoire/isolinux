   version stable 4.03 4.02
  category administration/bootloader
 attribute console
    source $KERNEL_URL pub/linux/utils/boot/syslinux/syslinux-$VERSION.tar.bz2
      info home  http://syslinux.zytor.com/wiki/index.php/The_Syslinux_Project
      desc 'bootloader for Linux that works on ISO9660 filesystems'

build(){
# It comes pre-assembled.
 mkdir   -pvm 755                   $DESTDIR/usr/share/isolinux
 install  -vm 644 core/isolinux.bin $DESTDIR/usr/share/isolinux/
}
