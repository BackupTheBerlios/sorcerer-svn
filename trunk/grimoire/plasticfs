    VERSION=( "1.9" )
   CATEGORY="utility"
  ATTRIBUTE="console"
     SOURCE="plasticfs-$VERSION.tar.gz"
        URL="http://plasticfs.sourceforge.net"
   HOMEPAGE="http://plasticfs.sourceforge.net"
        REQ="groff libtool"
  FRESHMEAT="plasticfs"
   ESTIMATE="265"
       DESC="plasticfs manipulates the apperance of the file system for programs.
plasticfs is an LD_PRELOAD module for manipulating
what the file system looks like for programs.
This allows virtual file systems to exist in user space,
without kernel hacks or modules."

build() {
 case  $VERSION  in
  1.8)  patch  -p1  <  $SCRIPT_DIR/plasticfs-1.8-gcc-3.4.patch  ;;
 esac
 default_build
}

