X_VERSION=X11R7.0
inherit xf86
   VERSION=( "${X_VERSION}" )
  CATEGORY="utility"
 ATTRIBUTE="x11 X11R7"
       REQ=( ""
             "appres:::to list X applications in resource database"
             "bitmap:::for a bitmap editor"
             "editres:::for a dynamic resource editor"
             "iceauth:::to edit and display the ICE authority file"
             "lbxproxy:::to create low bandwidth proxy connection to X server"
             "listres:::to list resources in widgets"
             "luit:::to provide locale and ISO 2022 support for unicode terminals"
             "oclock:::to provide a round clock"
             "proxymngr:::for a proxy manager service"
             "rgb:::to uncompile rgb color-name databases"
             "rstart:::for a remote start client"
             "scripts:::provides xon script to start program on remote machine"
             "sessreg:::to manage utmp/wtmp entries for non-init clients"
             "smproxy:::for a session manager proxy"
             "twm:::for twm, the window manager"
             "viewres:::for a graphical class browser for Xt"
             "xauth:::for X authority file utility"
             "xbiff:::to provide a mailbox flag to notify new unread mail"
             "xcalc:::for a scientific calculator"
             "xclipboard:::to collect and display text sent to the clipboard"
             "xclock:::for a digital or analog clock"
             "xconsole:::to display messages sent to /dev/console"
             "xcursorgen:::to create X cursor from a collection of PNG images"
             "xditview:::for a program to display ditroff output"
             "xedit:::for a simple text editor"
             "xev:::to print contents of X events"
             "xeyes:::to create eyes that follow the pointer"
             "xfindproxy:::to locate proxy services"
             "xfwp:::for an X firewall proxy"
             "xhost:::for server access control program"
             "xkill:::to force X server to close connection to client"
             "xload:::for load average histogram"
             "xlogo:::to display xlogo in window"
             "xlsatoms:::to list interned atoms defined on a server"
             "xlsclients:::to list client applications running on a display"
             "xmag:::to magnify part of the screen"
             "xman:::to read manual pages"
             "xmessage:::to display messages or ask questions"
             "xmh:::to read and send mail using an X interface to MH"
             "xmodmap:::to modify keymaps or pointer button mappings"
             "xmore:::a plain text display program"
             "xphelloworld:::for a broken sample program"
             "xplsprinters:::to list Xprint printers and their attributes"
             "xpr:::to reformat window dumped by xwd into PostScript"
             "xprehashprinterlist:::to cause Xprint servers to update their lists"
             "xprop:::to display window and font properties"
             "xrdb:::to get contents of RESOURCE_MANAGER properties on root window"
             "xrefresh:::to redraw all or part of the screen"
             "xrx:::for web browser helper application for RX MIME type formats"
             "xset:::to set user preference options for display"
             "xsm:::for a session manager"
             "xstdcmap:::for a colormap utility"
             "xtrap:::for sample clients to use with the XTrap server extention"
             "xwd:::to dump an image of a X window"
             "xwininfo:::to display information about a window"
             "xwud:::to display in a window the output of a dump from xwd" )
      DESC="xf86-app provides a selection of programs to use with X11R7"

