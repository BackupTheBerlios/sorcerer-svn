#            'krb5:--with-kerberos5::to support Kerberos version 5 authenticated POP'
# krb5 is no longer in the grimoire
#            'libungif::--without-gif:for uncompress gif graphic support'

    stable 22.2 22.1 21.4a
    secure 22.2
   require ncurses zlib
  optional giflib '' --without-gif  for uncompress gif graphic support
  optional jpeg   '' --without-jpeg for jpeg graphic support
  optional libpng '' --without-png  for portable network graphic support
  optional libXaw '' --without-x    for x11 graphical user interface
  optional tiff   '' --without-tiff for tiff graphic support
  category utility/editor
 attribute console x11
       url $GNU_URL
    source emacs/emacs-$VERSION.tar.gz
  homepage http://www.gnu.org/software/emacs
  estimate 3500
      desc 'emacs is the extensible, self-documenting real-time display editor.'
