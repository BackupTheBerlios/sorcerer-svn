   VERSION=( 22.1 21.4a 21.4 21.3 21.2 )
      SAFE=( "22.1" "21.4a" )
    IGNORE="lisp\|leim\|0\.9[0-9]\|bin"
  CATEGORY='utility/editor'
 ATTRIBUTE='console x11'
    SOURCE="emacs/emacs-$VERSION.tar.gz"
       URL="$GNU_URL"
  HOMEPAGE='http://www.gnu.org/software/emacs'
       REQ=( "ncurses zlib"
             "libpng::--without-png:for portable network graphic support"
             "jpeg::--without-jpeg:for jpeg graphic support"
             "libXaw::--without-x:for x11 graphical user interface"
             "libungif::--without-gif:for uncompress gif graphic support"
             "tiff::--without-tiff:for tiff graphic support" )
#            "krb5:--with-kerberos5::to support Kerberos version 5 authenticated POP"
# krb5 is no longer in the grimoire
  ESTIMATE='2420'
      DESC="emacs is the extensible, self-documenting real-time display editor."

build()  {
  unset  LDFLAGS
  default_build
}
