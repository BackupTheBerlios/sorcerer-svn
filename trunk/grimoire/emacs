   VERSION=( "21.3" "21.2" )
    IGNORE="lisp\|leim"
  CATEGORY="editor"
 ATTRIBUTE="console x11"
    SOURCE="emacs/emacs-$VERSION.tar.gz"
       URL="$GNU_URL"
  HOMEPAGE="http://www.gnu.org/software/emacs"
       REQ="ncurses zlib"
    OPT[0]="libpng::--without-png:for portable network graphic support"
    OPT[1]="jpeg::--without-jpeg:for jpeg graphic support"
    OPT[2]="libungif::--without-gif:for uncompress gif graphic support"
    OPT[3]="tiff::--without-tiff:for tiff graphic support"
    OPT[4]="x11::--without-x:for x11 graphical user interface"
#   OPT[5]="krb5:--with-kerberos5::to support Kerberos version 5 authenticated POP"
# krb5 is no longer in the grimoire
  ESTIMATE="256"
      DESC="emacs is the extensible, self-documenting real-time display editor.

emacs is the extensible, customizable, 
self-documenting real-time display editor.
"


build()  {
  unset  LDFLAGS
  default_build
}
