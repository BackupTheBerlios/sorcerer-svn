    stable 2.6.0 2.4.0 2.2.0 1.2.6 1.2.5
   require gnome-panel gtkglarea librsvg ocaml

    ignore 'b1\|200\|ocamlwin'
  category graphic
 attribute library x11
    source lablgtk-$VERSION.tar.gz
       url http://wwwfun.kurims.kyoto-u.ac.jp/soft/olabl/dist/
  homepage http://wwwfun.kurims.kyoto-u.ac.jp/soft/olabl/lablgtk.html
case $VERSION in
 2.4.0) use_gcc gcc-v3.4 ;;
esac
  estimate 200
      desc 'lablgtk is an Objective Caml interface to gtk+.'

build(){
 ./configure          \
 --build=$BUILD       \
 --prefix=/usr        \
 --sysconfdir=/etc    \
 --localstatedir=/var \
 $OPTS                &&
 make                 &&
 make    opt          &&
 prepare_install      &&
 make    install
}
