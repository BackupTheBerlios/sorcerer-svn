   VERSION=( "4.4.0" )
  CATEGORY="font"
 ATTRIBUTE="x11"
    SOURCE="current/binaries/Common/Xf100.tgz"
       URL="$XFREE86_URL"
  HOMEPAGE="http://www.xfree86.org"
       DIR="none"
  EPROVIDE="XFree86,Xf100"
  ESTIMATE="5"
     SHORT="Xf100 provides a 100dpi fonts for XFree86."


build() {
  [  -d  lib  ]                    &&
  prepare_install                  &&
  mkdir  -p        /usr/X11R6/lib  &&
  cp     -av  lib  /usr/X11R6
}


post_install() {
  fc-cache
  true
}
