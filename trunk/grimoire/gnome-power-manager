# uncertain if xmlto is actually used.

    stable 2.26.1 2.26.0 2.24.4 2.24.3 2.24.2 2.24.1 2.24.0
      opts --disable-docbook-docs
   require DeviceKit gnome-panel gstreamer libcanberra libnotify libunique
  optional docbook2X '' '' for generating manual pages and also requires Internet connection during compilation
# optional xmlto
  category utility
 attribute daemon gnome
       url $GNOME_URL
    source sources/gnome-power-manager/${VERSION:0:4}/gnome-power-manager-$VERSION.tar.bz2
  homepage http://www.gnome.org/projects/gnome-power-manager/
  estimate 6600
      desc 'gnome-power-manager responds to HAL events with user-configurable reactions.
Currently it supports UPSs, notebook batteries and AC adapters.'

build(){
case $VERSION in
 2.26.*) sed -i 's:docs man data:docs data:' Makefile.in ;;
esac
default_build
}
