# uncertain if xmlto is actually used.
    stable 2.28.1 2.28.0 2.26.1 2.26.0
      opts --enable-compile-warnings=yes --disable-docbook-docs
   require DeviceKit DeviceKit-power gnome-panel gstreamer libcanberra libnotify libunique
  optional docbook2X '' '' for generating manual pages and also requires Internet connection during compilation
# optional xmlto
  category utility
 attribute daemon gnome
       url $GNOME_URL
    source sources/gnome-power-manager/${VERSION:0:4}/gnome-power-manager-$VERSION.tar.bz2
  homepage http://www.gnome.org/projects/gnome-power-manager/
  estimate 5500
      desc 'responds to HAL events with user-configurable reactions
Currently it supports UPSs, notebook batteries and AC adapters.'

build(){
case $VERSION in
 2.2[6-8].*) sed -i 's:docs man data:docs data:' Makefile.in ;;
esac
default_build
}
