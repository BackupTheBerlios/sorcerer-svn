   VERSION=( "0.3" "0.2" "0.1" )
  CATEGORY="file-transfer"
 ATTRIBUTE="console new"
    SOURCE="funionfs-$VERSION.tar.gz"
       URL="http://funionfs.apiou.org/file/"
  HOMEPAGE="http://www.ubiz.ru/dm/"
       REQ="fuse"
  ESTIMATE="7"
      DESC="funionfs enables RW FS superimposed on RO FS."

build() {
make             &&
prepare_install  &&
install -m 0755 funionfs /usr/bin
}
