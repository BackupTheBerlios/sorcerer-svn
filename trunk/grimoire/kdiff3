 attribute kde3
    source $SOURCEFORGE_URL kdiff3/kdiff3/$VERSION/kdiff3-$VERSION.tar.gz
  homepage http://kdiff3.sourceforge.net
      opts --prefix=/opt/kde3 --with-qt-dir=/opt/kde3 --disable-debug --enable-final
  estimate 700
      desc 'kdiff3 is a graphical text difference analyzer.
Up to 3 input files can be compared.
It provides character-by-character analysis and
a text merge tool with integrated editor.
It can also compare and merge directories.'
