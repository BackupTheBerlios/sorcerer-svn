   VERSION=( "1.0.1" "1.0" "1.0rc3" )
    IGNORE="^1\.1\.[0-1]"
# 1.1.0 and 1.1.1 are not xmms compatible?
  CATEGORY="audio/editor audio/player"
 ATTRIBUTE="console"
    SOURCE="vorbis-tools-$VERSION.tar.gz"
       URL="http://downloads.xiph.org/releases/vorbis"
#      URL="http://www.vorbis.com/files/1.0.1/unix"
#      URL="http://fatpipe.vorbis.com/files/1.0/unix"
  HOMEPAGE="http://www.xiph.org/ogg/vorbis"
       REQ=( "curl libvorbis libao"
             "flac::--without-flac:for flac audio codec support"
             "speex::--without-speex:for speex audio codec support" )
   ESTIMATE="117"
      DESC="vorbis-tools contains tools to create and play Ogg Vorbis files.
Ogg Vorbis is a high-quality lossy audio codec which is free of
intellectual property restrictions (like those surrounding MP3).
These are the tools that one needs to create and play Ogg Vorbis
files on the commandline, as well as a simple commentor."
