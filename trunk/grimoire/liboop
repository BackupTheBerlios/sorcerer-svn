   VERSION=( 1.0 )
  CATEGORY='development'
 ATTRIBUTE='library'
    SOURCE="liboop-$VERSION.tar.bz2"
       URL='http://download.ofb.net/liboop/'
  HOMEPAGE='http://liboop.org/'
       REQ=( 'glib w3c-libwww'
             'glib-v1.2:::to use liboop with glib-v1.2 applications'
             'tcl:::to use liboop with tcl applications' )
  ESTIMATE='300'
      DESC='liboop provides a generic, callback-based event dispatch interface.
liboop aims to ease the development of multiplexed, non-blocking,
event-driven modular applications, components, and libraries
under POSIX-based operating systems.
It includes adapters for select(), poll(), the glib
event loop, the TCL event loop, the W3C libwww,
asynchronous DNS, and GNU readline.'

build()  {
export   CFLAGS+=" $( libwww-config --cflags )"
export  LDFLAGS+=" $( libwww-config --libs   )"
default_build
}
