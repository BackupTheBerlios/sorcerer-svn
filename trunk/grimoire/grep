    stable 2.5.4 2.5.3 2.5.1a 2.5.1 2.5
   require gettext pcre
  category utility
 attribute console solo
       url $GNU_URL
    source grep/grep-$VERSION.tar.bz2
  homepage http://www.gnu.org/software/grep/grep.html
   protect /bin/grep
  estimate 500
      desc 'grep finds lines that match specified patterns.'

build(){
 ./configure          \
 --build=$BUILD       \
 --prefix=/usr        \
 --bindir=/bin        \
 --sysconfdir=/etc    \
 --localstatedir=/var \
 $OPTS                &&
 make                 &&
 prepare_install      &&
 make    install
}
