    stable 2.6 2.5.4 2.5.3 2.5.1a 2.5.1 2.5
   require gettext pcre
  category utility
 attribute console solo
    source $GNU_URL grep/grep-$VERSION.tar.xz
  homepage http://www.gnu.org/software/grep/grep.html
   protect /bin/grep
  estimate 500
      desc 'finds lines that match specified patterns'

build(){
 ./configure          \
 --prefix=/usr        \
 --bindir=/bin        \
 --sysconfdir=/etc    \
 --localstatedir=/var \
 $OPTS                &&
 make                 &&
 prepare_install      &&
 make    install
}
