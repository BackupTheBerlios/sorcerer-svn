# no statically linked grep because it would lack pcre support
# because pcre is not being allowed to install .a static link libraries.

   version stable 2.7
   require gettext pcre
#   switch -static '' to make static linked
      opts --bindir=/bin
  category utility
 attribute console makej solo
    source $GNU_URL grep/grep-$VERSION.tar.xz
      info home  http://www.gnu.org/software/grep/grep.html
      info docs  http://www.gnu.org/software/grep/manual/
   protect /bin/grep
  estimate 800
      desc 'finds lines that match specified patterns'

build_old(){

 if [[ $OPTS =~     -static ]]; then
        OPTS=${OPTS/-static}
  export LDFLAGS+=" -static"
#       STATIC="-static"
 fi

 default_build
}
