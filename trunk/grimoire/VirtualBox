# still working on init scripts and installation method.
# It might not yet be usable.

    stable 2.1.4
   require Dev86 Python SDL acpica hal libIDL pulseaudio
      opts --disable-qt3 --disable-qt4
  category development/emulator
 attribute x11
    source http://download.virtualbox.org/virtualbox/$VERSION/VirtualBox-$VERSION-OSE.tar.bz2
      vurl http://www.virtualbox.org/wiki/Downloads/
  homepage http://www.virtualbox.org/
  estimate 1200
      desc 'a computer emulator.'

case $VERSION in
 2.1.4) use_gcc gcc-v3.4 ;;
esac

build(){
./configure --disable-hardening $OPTS &&
. ./env.sh      &&
kmk         all &&
prepare_install &&
cd out/linux.x86/release/bin/src &&
prepare_install &&
make    install &&
cd      ../../  &&
cp -av bin /opt/VirtualBox
}
