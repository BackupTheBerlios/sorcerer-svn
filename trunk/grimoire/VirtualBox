    stable 2.1.4
   require Dev86 Python SDL acpica hal libIDL pulseaudio qt-x11-free-gcc-3.4
  category development/emulator
 attribute x11
 attribute broke
    source http://download.virtualbox.org/virtualbox/$VERSION/VirtualBox-$VERSION-OSE.tar.bz2
      vurl http://www.virtualbox.org/wiki/Downloads/
  homepage http://www.virtualbox.org/
  estimate 1200
      desc 'a computer emulator.'

case $VERSION in
 2.1.4) use_gcc gcc-v3.4 ;;
esac

build(){
./configure --disable-hardening --with-qt4-dir=/opt/kde4 --with-qt-dir=/opt/qt-x11-free-gcc-3.4 &&
. ./env.sh      &&
kmk         all &&
make            &&
prepare_install &&
cd out/linux.x86/release/bin/src &&
prepare_install &&
make    install
}
