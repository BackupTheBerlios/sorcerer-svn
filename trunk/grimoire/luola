    stable 1.3.2
   require SDL_gfx SDL_image SDL_mixer SDL_ttf
  category game
 attribute x11
    source http://www.luolamies.org/software/luola/luola-$VERSION.tar.gz
    source http://www.luolamies.org/software/luola/stdlevels-6.0.tar.gz
    source http://www.luolamies.org/software/luola/nostalgia-1.2.tar.gz
  homepage http://www.luolamies.org/software/luola/
  estimate 200
      desc 'luola is a cavern-flying game for 1-4 players.
Each player flies a small V-shaped ship and has one special weapon.
The object of the game is simply to destroy all other players.'

build(){
sed -i "s:../data:/usr/share/luola/data:" src/fs.c
rm  -f config.status config.cache config.log

./configure                 \
--prefix=/usr               \
--enable-sound              \
--with-sdl-prefix=/usr      \
--with-sdl-exec-prefix=/usr \
--enable-sdl-gfx            \
$OPTS                       &&
make                        &&
prepare_install             &&
install -vm 755 -d    /usr/share/luola/levels &&
install -vm 644 *.png /usr/share/luola/levels &&
make    install
}
