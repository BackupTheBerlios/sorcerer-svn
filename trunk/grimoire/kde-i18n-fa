   version stable 3.5.9
   require kdelibs-v3
   provide kde-i18n
  category documentation/i18n
 attribute kde3
    source $KDE_URL stable/$VERSION/src/kde-i18n/$SPELL-$VERSION.tar.bz2
      opts --prefix=/opt/kde3 --with-qt-dir=/opt/kde3 --disable-debug --enable-pch --with-xinerama
      desc 'Language translation for kde-v3'
