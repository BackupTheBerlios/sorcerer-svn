  stable 5.1.5
  CATEGORY='development'
 ATTRIBUTE='library'
    SOURCE="stlport/STLport-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://www.stlport.org/'
  ESTIMATE='200'
      DESC='STLport provides the Standard Library Project'

build(){
 cd build/lib
 make -f gcc.mak release-shared &&
 prepare_install &&
 make -f gcc.mak install-release-shared &&
 cd ../../ &&
 cp -av lib/* /usr/lib/ &&
 cd stlport &&
 cp -av stl /usr/include/
}
