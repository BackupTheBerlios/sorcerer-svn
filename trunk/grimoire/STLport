    stable 5.1.7 5.1.6 5.1.5
  category development
 attribute library
    source $SOURCEFORGE_URL stlport/STLport-$VERSION.tar.bz2
  homepage http://www.stlport.org/
   use_gcc gcc-v4.2
  estimate 250
      desc 'STLport provides the Standard Library Project'

build(){
cd build/lib
make -f gcc.mak release-shared &&
prepare_install &&
make -f gcc.mak install-release-shared &&
cd ../../ &&
cp -av lib/* /usr/lib/ &&
cd stlport &&
cp -av stl /usr/include/
}
