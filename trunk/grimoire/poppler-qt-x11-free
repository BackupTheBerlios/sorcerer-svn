# could also have a requirement on qt-x11-opensource if it is installed
inherit poppler
       REQ="gtk+ qt-x11-free"
      OPTS="--enable-poppler-qt"
  EPROVIDE="poppler"
  ESTIMATE="12800"
      DESC="poppler-qt-x11-free is a PDF rendering library with qt-x11-free support."

build() {
 case $HOSTTYPE in
   x86_64)  export QTLIB=/usr/lib64  ;;
 esac

 default_build
}
