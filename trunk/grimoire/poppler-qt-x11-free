   inherit poppler
   require qt-x11-free
#     opts --prefix=/opt/kde3 --enable-poppler-qt --disable-poppler-qt4
      opts -DCMAKE_INSTALL_PREFIX:PATH=/opt/kde3
 attribute multilib-fail
      desc 'poppler-qt-x11-free is a PDF rendering library with qt-x11-free support.'

build(){
export LDFLAGS+=' -Wl,-rpath,/opt/kde3/lib'
export PATH+=:/opt/kde3/bin
default_build
}
