# could also have a requirement on qt-x11-opensource if it is installed
   inherit poppler
   require gtk+ qt-x11-free
      opts --prefix=/opt/kde3 --enable-poppler-qt --disable-poppler-qt4
  estimate 1100
      desc 'poppler-qt-x11-free is a PDF rendering library with qt-x11-free support.'

build(){
 export PATH+=:/opt/kde3/bin
 export QTINC='/opt/kde3/include'
 case $HOSTTYPE in
  x86_64) export QTLIB='/opt/kde3/lib64' ;;
       *) export QTLIB='/opt/kde3/lib'   ;;
 esac
 default_build
}
