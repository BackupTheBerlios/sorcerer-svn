   VERSION=( 2.3.23 2.3.22 2.3.21 2.3.20 )
      SAFE=( 2.3.23 2.3.22 2.3.21 2.3.20 )
  CATEGORY='network/email'
 ATTRIBUTE='client gnome'
    SOURCE="balsa-$VERSION.tar.bz2"
       URL='http://balsa.gnome.org/'
      VURL='http://balsa.gnome.org/download.html'
  HOMEPAGE='http://balsa.gnome.org'
   PROVIDE='email-client'
       REQ=( 'aspell gmime gtkhtml libesmtp libnotify pcre gdbm rarian'
             'gpgme:--enable-gpgme:--disable-gpgme:for GPG encrypted/signed email'
             'openldap:--with-ldap::for address book'
             'openssl:--with-ssl::for POP/IMAP authentication' )
# If not gss then what does it expect to use?
#            'gss:--with-gss::for GSSAPI Kerberos based authentication' )
      OPTS='--disable-more-warnings'
  ESTIMATE='800'
      DESC='balsa is a GNOME email client.
balsa is a GNOME email client, similar to Eudora.
It supports mbox, maildir, and mh local mailboxes, 
and IMAP4 and POP3 remote mailboxes.'
