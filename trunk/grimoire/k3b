   VERSION=( 1.0.4 1.0.3 1.0.2 1.0.1 1.0 )
    IGNORE='i18n\|athlon\|monkey\|pre\|beta\|verify\|rc'
  CATEGORY='disk/cd'
 ATTRIBUTE='kde3'
    SOURCE="k3b/k3b-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://k3b.sourceforge.net'
       REQ=( 'cdparanoia dvd+rw-tools id3lib kdelibs-v3 libmpcdec libsamplerate'
             'k3b-i18n:::for translated messages'
             'cdrdao:::for recording audio data CD-Rs in DAO mode'
             'esound:::for output through enlightenment sound daemon'
             'flac::--without-flac:for free lossless audio codec'
             'lame::--without-lame:for a mp3 encoder'
             'libsndfile::--without-sndfile:for WAV and AIFF codec support'
             'libvorbis::--without-oggvorbis:for ogg vorbis audio encoding codec'
             'libmad:::for high quality mpeg audio decoder'
             'mppenc::--without-musepack:for musepack codec support'
             'normalize:::for adjusting volume of audio files to a standard level'
             'sox:::to convert audio file formats'
             'taglib:::for editing metadata of audio files'
             'transcode:::for video stream processing' )
#            'vcdimager:::for analyzing video CDs' )
# vcdimager currently off optionals while website is unavailable
#            'cdparanoia:for a CDDA extraction tool/ripper'
# Above requirements as listed at
# http://k3b.plainblack.com/index.pl/requirements
# May hve new optional requirements on ffmpeg
# Support for musicbrainz appears to be broken
      OPTS='--prefix=/opt/kde3 --with-qt-dir=/opt/kde3 --disable-debug --enable-final'
      OPTS+=' --without-musicbrainz'
  ESTIMATE='2850'
      DESC='k3b is a KDE-GUI for cdrecord and cdrdao, similar to Nero.'
