# update k3b-i18n at the same time

    stable 1.0.5 1.0.4 1.0.3 1.0.2 1.0.1 1.0
   require cdparanoia dvd+rw-tools id3lib kdelibs-v3 libmpcdec libsamplerate
  optional k3b-i18n   '' ''                  for translated messages
  optional cdrdao     '' ''                  for recording audio data CD-Rs in DAO mode
  optional esound     '' ''                  for output through enlightenment sound daemon
  optional flac       '' --without-flac      for free lossless audio codec
  optional lame       '' --without-lame      for a mp3 encoder
  optional libsndfile '' --without-sndfile   for WAV and AIFF codec support
  optional libvorbis  '' --without-oggvorbis for ogg vorbis audio encoding codec
  optional libmad     '' ''                  for high quality mpeg audio decoder
  optional mppenc     '' --without-musepack  for musepack codec support
  optional normalize  '' ''                  for adjusting volume of audio files to a standard level
  optional sox        '' ''                  to convert audio file formats
  optional taglib     '' ''                  for editing metadata of audio files
  optional transcode  '' ''                  for video stream processing
  category disk/cd
 attribute kde3
    source $SOURCEFORGE_URL k3b/k3b/$VERSION/k3b-$VERSION.tar.bz2
  homepage http://k3b.sourceforge.net
      opts --prefix=/opt/kde3 --with-qt-dir=/opt/kde3 --disable-debug --enable-final
      opts --without-musicbrainz
  estimate 2400
      desc 'KDE-GUI for cdrecord and cdrdao, similar to Nero'
