   version stable 2.7 2.6 2.5 2.4 2.3
   require pkgconfig
      opts --enable-static=no
  category development
 attribute library
    source  ftp://ftp.easysw.com/pub/ \
           http://ftp.easysw.com/pub/ \
           http://www.nu6.org/_/mirror/ftp.easysw.com/pub/ \
           http://ftp.funet.fi/pub/mirrors/ftp.easysw.com/pub/ \
           ftp://ftp.funet.fi/pub/mirrors/ftp.easysw.com/pub/ \
           mxml/$VERSION/mxml-$VERSION.tar.gz
      vurl http://minixml.org/software.php
      info last 20120107
      info home http://minixml.org/
      desc 'lightweight XML support library'

build(){
 ./configure \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --prefix=/usr \
 $OPTS &&
 make  &&
 make install "BUILDROOT=$DESTDIR"
}
