#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 500
# Provides: gui_login
# Required-Start: $local_fs run ICE-unix
# Should-Start: $network $remote_fs udev xfs hald
# Required-Stop: kill
# Should-Stop: $remote_fs $network initramfs
# Default-Start: 4 5
# Default-Stop: 0 6
# Short-Description: kdm-v4 provides an x11 login.
### END INIT INFO

. /lib/lsb/init-functions

affine
fast
only start stop restart status
server /opt/kde4/bin/kdm
config /opt/kde4/share/config/kdm/kdmrc

restart(){ stop; sleep 15; start; }

if [ "$1" == start ]; then chmod 1777 /var/tmp; fi
