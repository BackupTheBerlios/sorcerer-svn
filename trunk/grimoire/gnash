    stable 0.8.8
   require agg
  optional kdelibs-v4 "--with-kde4-prefix=/opt/kde4 --with-qt4-incl=/opt/kde4/include --with-qt4-lib=/opt/kde4/lib" --enable-gui=gtk
  category utility/editor
 attribute console
 attribute broke
    source $GNU_URL gnash/$VERSION/gnash-$VERSION.tar.bz2
  homepage http://www.gnashdev.org
  estimate 1500
      desc 'Free flash player'

build(){ (
export PATH="/opt/kde4/bin:$PATH"
export PKG_CONFIG_PATH=/opt/kde4/lib/pkgconfig
export CXXFLAGS+=" -I/opt/kde4/include/QtGui/"
default_build
) }
