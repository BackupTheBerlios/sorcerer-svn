   version   stable 3.6.0 3.4.0.2
#  version unstable 3.5.90
   require gtk+-3.0 libxklavier
      opts --enable-static=no
  category development
 attribute gnome library makej multilib-concurrent
    source   stable $GNOME_URL sources/libgnomekbd/${VERSION:0:3}/libgnomekbd-$VERSION.tar.xz
    source unstable $GNOME_URL sources/libgnomekbd/${VERSION:0:3}/libgnomekbd-$VERSION.tar.xz
      info last 20120929
      info home http://www.gnome.org
      desc 'gnome keyboard library'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
