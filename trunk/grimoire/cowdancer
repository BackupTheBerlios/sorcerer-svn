# Not sure where the download hyperlink is on the homepage.
# project dead?
# Mar 4 2007 cowdancer_0.26.tar.gz 
# Jan 9 2006 cowdancer_0.9.tar.gz 

   version stable 0.26
  category disk/file-system
 attribute console
    source http://www.netfort.gr.jp/~dancer/software/downloads/cowdancer_$VERSION.tar.gz
      info home  http://www.netfort.gr.jp/~dancer/software/cowdancer.html
      info vurl http://www.netfort.gr.jp/~dancer/software/downloads/
      info good 20120604
      info last 20070304
      desc 'a copy-on-write overlay filesystem'

build(){
sed -i "s:-Wall -O2 -g:$CFLAGS:" Makefile
make &&
mkdir -pvm 755 $DESTDIR/usr/{,s}bin &&
make install "DESTDIR=$DESTDIR"
}
