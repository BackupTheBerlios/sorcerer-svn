    stable 1.55
   require SDL_mixer SDL_net
  category game
 attribute x11
    source http://www.jumpbump.mine.nu/port/jumpnbump-$VERSION.tar.gz
       url 'http://jumpnbump.spaceteddy.net/levels/
            http://moo.hotsanic.org/jumpnbump/'
    source $( sed 's:$:.dat.bz2:' $GRIMOIRE/jumpnbump.d/levels )
  homepage http://www.jumpbump.mine.nu
  estimate 60
      desc 'jumpnbump is a funny multiplayer game with cute bunnies.

It is both fun and addictive for the whole family.
It features AI, multi-player local and network games.'

build(){
 install_levels(){
            USJ=/usr/share/jumpnbump
  mkdir -p $USJ
  CX=1
  while [[ -n ${SOURCE[$CX]} ]]; do
   DEST=${SOURCE[$CX]##*/}
   DEST=${DEST%.bz2}
   decompress ${SOURCE[$CX]} > $DEST
   touch                       $DEST
   (( CX++ ))
  done
 }

 make &&
 prepare_install &&
 make    install PREFIX=/usr &&
 install_levels
}

