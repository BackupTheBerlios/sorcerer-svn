# --disable-gtk  disables the tests that use gtk+

   version stable 0.26.2 0.26.0 0.24.4
   require libpng
      opts --disable-gtk
      opts --disable-static
   require pcre
  category xorg/app
 attribute library lto makej multilib-concurrent x11
    source http://cairographics.org/releases/pixman-$VERSION.tar.gz
      info last 20120705
      info home http://cairographics.org

build(){
 sed -i 's:SUBDIRS = pixman test:SUBDIRS = pixman:' Makefile.in
 default_build
}
