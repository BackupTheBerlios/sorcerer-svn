    stable 0.7.2 0.7.1 0.7.0 0.6.1 0.6.0
  optional gnutls    --enable-tls=gnutls              ''            for TLS support through gnutls
  optional openssl   --enable-tls=openssl             ''            for TLS support through openssl
  optional Linux-PAM ''                               ''            for pluggable authentication support
  optional gnome-vfs ''                               ''            to use the gnome virtual file system 
  optional php       --with-php=/usr/include/php/main --without-php for PHP support
  category network/web
 attribute console server
    source http://www.0x50.org/download/${VERSION:0:3}/$VERSION/cherokee-$VERSION.tar.gz
     opts --enable-static=no
# What happens when both gnutls and openssl are selected for TLS support?
  homepage http://www.alobbs.com/cherokee/index.php
  estimate 2400
      desc 'cherokee is an extremely fast and tiny web server.
cherokee is a tiny, ultrafast, lightweight Web server.
It is embeddable, extensible with plug-ins, and supports
on-the-fly configuration by reading files or strings.'
