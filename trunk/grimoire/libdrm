# Always check that MesaLib compiles after updating libdrm
# MesaLib does not compile with libdrm version 2.3.0 or 2.2.0
#  VERSION=( "2.3.0" "2.2.0" "2.0.2" "2.0.1" "2.0" )
   VERSION=( "2.0.2" "2.0.1" "2.0" "2.2.0" "2.3.0" )
  CATEGORY="graphic"
 ATTRIBUTE="library"
    SOURCE="libdrm-$VERSION.tar.gz"
       URL="http://dri.freedesktop.org/libdrm/"
  HOMEPAGE="http://dri.freedesktop.org/wiki/"
       REQ="pkgconfig"
  ESTIMATE="210"
      DESC="libdrm provides a library for DRM"
