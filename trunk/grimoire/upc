    stable 4.3.2.4 4.2.3.4 4.2.3
   require binutils coreutils mpfr
      opts --prefix=/opt/upc --disable-boostrap 
  category development/compiler
 attribute console library
    source ftp://ftp.intrepid.com/pub/upc/rls/upc-$VERSION/upc-$VERSION.src.tar.gz
  homepage http://www.intrepid.com/upc/downloads.html
  estimate 10500
      desc 'unified parallel C compiler'

build(){
export   CFLAGS="${CFLAGS/-fomit-frame-pointer/}"
export CXXFLAGS="${CXXFLAGS/-fomit-frame-pointer/}"
export CCACHE_DISABLE=1
export PATH="$( echo "$PATH" | sed "s/[^:]*ccache://" )"

mkdir BUILD
cd    BUILD
../configure $OPTS &&
make &&
make install DESTDIR=$DESTDIR
}
