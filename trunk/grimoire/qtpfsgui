# 1.8.12 stable versions no longer compile
# 1.9.3 unstable versions do.

   version stable 1.9.3 1.8.12
   version unstable 1.9.3 1.9.2 1.9.1
   require qt-everywhere-opensource exiv2 fftwf openexr
  category digital-camera graphic
 attribute kde4 x11 new
    source $SOURCEFORGE_URL qtpfsgui/qtpfsgui/$VERSION/qtpfsgui-$VERSION.tar.gz
     info home http://qtpfsgui.sourceforge.net
     desc 'a GUI for HDR imaging workflow'

build(){
qmake PREFIX=/usr &&
make &&
make install INSTALL_ROOT=$DESTDIR
}
