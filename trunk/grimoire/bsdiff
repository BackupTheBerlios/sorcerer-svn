   version stable 4.3 4.2
   require bzip2
  category archive
 attribute console
    source http://www.daemonology.net/bsdiff/bsdiff-$VERSION.tar.gz
      info good 20120603
      info home http://www.daemonology.net/bsdiff/
      desc 'diff/patch utility for binary files'

build(){
sed -i 's:^\..*::' Makefile
make &&
mkdir -pvm 755 $DESTDIR/usr/{bin,man/man1} &&
make    install PREFIX=$DESTDIR/usr INSTALL=install
}
