   VERSION=( 4.3 4.2 )
  CATEGORY='archive'
 ATTRIBUTE='console new'
    SOURCE="bsdiff-$VERSION.tar.gz"
       URL='http://www.daemonology.net/bsdiff/'
  HOMEPAGE='http://www.daemonology.net/bsdiff'
       REQ='bzip2'
  ESTIMATE='7'
      DESC="bsdiff is a diff/patch utility for binary files."

build() {
  sed  -i  "s:^\..*::"  Makefile
  make             &&
  prepare_install  &&
  make    install  PREFIX=/usr  INSTALL=install
}
