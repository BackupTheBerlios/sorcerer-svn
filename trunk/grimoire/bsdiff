    stable 4.3 4.2
   require bzip2
  category archive
 attribute console
    source http://www.daemonology.net/bsdiff/bsdiff-$VERSION.tar.gz
  homepage http://www.daemonology.net/bsdiff
      desc 'bsdiff is a diff/patch utility for binary files.'

build(){
sed -i 's:^\..*::' Makefile
make &&
prepare_install &&
make    install PREFIX=/usr INSTALL=install
}
