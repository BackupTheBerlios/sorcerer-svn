   VERSION=( "0.2DrEvil" "0.2DrDolittle" "0.2DrCox" "0.2DrBombay" "0.2DrAlban" )
  CATEGORY="audio/network audio/player"
 ATTRIBUTE="gnome"
    SOURCE="xmms2/xmms2-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://wiki.xmms2.xmms.se/index.php/Main_Page"
       REQ=( "SDL curl gnome-vfs libmad scons sqlite"
             "SDL_ttf:::for SDL visualization client"
             "alsa-lib::--disable-alsa:for alsa sound support"
             "jackit:::for jack sound server support"
             "libvorbis::--disable-vorbis:to play ogg vorbis files" )
  ESTIMATE="335"
      DESC="xmms2 is a redesigned xmms music player.
It features a client-server model, allowing multiple
(even simultaneous!) user interfaces, both textual and graphical.
All common audio formats are supported using plugins.
On top of this, there is a flexible media library to organize your music.
See the features page for more details."

build() {
scons            &&
prepare_install  &&
scons   install  PREFIX=/usr
}
