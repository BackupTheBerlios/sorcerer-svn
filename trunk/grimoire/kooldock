    stable 0.4.7 0.4.3
   require kdelibs-v3
  category utility
 attribute kde3
    source $SOURCEFORGE_URL kooldock/kooldock%20$VERSION/kooldock-$VERSION.tar.bz2/kooldock-$VERSION.tar.bz2
  homepage http://www.kde-look.org/content/show.php?content=50910
  estimate 500
      opts --disable-debug --enable-final
      desc 'dock that resembles the Mac OSX dock'

build(){
make -f Makefile.dist &&
./configure   \
--prefix=/usr \
$OPTS &&
make  &&
make install DESTDIR=$DESTDIR       
}
