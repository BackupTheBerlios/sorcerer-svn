 attribute kde4
 attribute multilib-fail
    source $SOURCEFORGE_URL kipi/kipi-plugins/$VERSION/kipi-plugins-$VERSION.tar.bz2
  homepage http://extragear.kde.org/apps/kipi
      opts -DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4
