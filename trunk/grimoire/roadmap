   VERSION=( 1_0_12p2 1_0_12p1 1_0_12 1_0_11 1_0_9 1_0_8 1_0_5 )
    IGNORE="arm\|doc"
  CATEGORY='utility'
 ATTRIBUTE='kde new'
#    SOURCE="roadmap_${VERSION}_src.tar.gz"
#       URL='http://www.roadmap.digitalomaha.net/roadmap/'
#  HOMEPAGE='http://roadmap.digitalomaha.net/'
    SOURCE="roadmap-$VERSION-src.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://roadmap.sourceforge.net/'
       REQ='gpsd gtk+ flite popt qt-x11-free shapelib sqlite'
  ESTIMATE='200'
      DESC="roadmap is a navigation program for USA.
roadmap is a navigation program that displays street maps.
The maps are provided by the US Census Bureau, and thus only cover USA.
A specific area can be displayed by selecting a street address.
It interfaces with gpsd to track a GPS position, and has been
designed to be usable on a desktop, laptop, or PDA computer."


build() {
cd    src

case  $VERSION  in
  1_0_8)  sed  -i  "s/next_square:/next_square: ;/"  buildmap_range.c  ;;
esac

export  QTDIR="/usr"

export  CFLAGS="$CFLAGS -I/usr/include/libshp"

sed   -i  "s:/appl:/share/appl:
           s:/usr/local:/usr:"  Makefile  */Makefile
sed   -i  "s:/include/qt3:/include/qt:
           s:-lqt$:-lqt-mt:"  qt/Makefile

make  "MODECFLAGS=$CFLAGS"  runtime  build  icons  &&
# cd    gtk2                                     &&
# make  "STDCFLAGS=$CFLAGS"  all                 &&
# make        all  &&
prepare_install                                &&
make    install
}
