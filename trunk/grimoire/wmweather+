    stable 2.11 2.9
   require curl pcre w3c-libwww WindowMaker

 category dockapps
attribute new x11 utility
      url "$SOURCEFORGE_URL"
   source wmweatherplus/$SPELL-$VERSION.tar.gz
   source wmweatherplus/docs.tar.gz
 homepage http://www.dockapps.org/file.php/id/112/
 estimate 180
     desc 'wmweather+ is a dockapp showing weather forecast and maps
wmweather+ will download the National Weather Serivce 
METAR bulletins, ANV and MRF forecasts, and any weather 
map for display in a WindowMaker dockapp. Think wmweather 
with a smaller font, forecasts, a weather map, and a sky 
condition display.'

build(){
cp HINTS example.conf docs/

./configure \
--prefix=/usr \
--sysconfdir=/etc \
$OPTS &&
prepare_install &&
make    install
}
