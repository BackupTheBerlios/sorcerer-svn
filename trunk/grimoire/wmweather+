   version stable 2.12 2.11
   require curl pcre w3c-libwww WindowMaker
  category dockapps
 attribute new x11
 attribute broke
    source $SOURCEFORGE_URL "wmweatherplus/wmweather%2B/wmweather%2B-$VERSION.tar.gz"
#   source $SOURCEFORGE_URL wmweatherplus/wmweather+/wmweather+-$VERSION/wmweather+-$VERSION.tar.gz
    source $SOURCEFORGE_URL wmweatherplus/weather%20code%20docs/All%20codes/docs.tar.gz
  homepage http://www.dockapps.org/file.php/id/112/
  estimate 200
      desc 'dockapp showing weather forecast and maps
wmweather+ will download the National Weather Serivce 
METAR bulletins, ANV and MRF forecasts, and any weather 
map for display in a WindowMaker dockapp. Think wmweather 
with a smaller font, forecasts, a weather map, and a sky 
condition display.'

build(){
cp HINTS example.conf docs/

./configure \
--prefix=/usr \
--sysconfdir=/etc \
$OPTS &&
make install DESTDIR=$DESTDIR
}
