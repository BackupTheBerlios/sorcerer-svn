build(){
 local CX=0
 mkdir -pvm 755 $DESTDIR/lib/firmware
 while [ -n "${SOURCE[$CX]}" ]
 do    install -vm 644 "${SOURCE[$CX]}" $DESTDIR/lib/firmware/; (( CX++ ))
 done
}
