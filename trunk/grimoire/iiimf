    stable 12.2
   require libX11
  category input
 attribute console server
    source http://www.openi18n.org/download/im-sdk/src/iiimf-src-$VERSION.tar.bz2
  homepage http://www.openi18n.org
      opts --prefix=/usr --with-imdir=/usr/lib/X11/locale/common
  estimate 3000
      desc 'next generation of multilingual Unicode input method framework
which is a compelling replacement of the existig other input method frameworks
and libraries, such as XIM.'

build(){
D='lib/iiimp
   lib/EIMIL
   lib/iiimcf
   lib/CSConv
iiimxcf/xiiimp.so
iiimxcf/htt_xbe'
for d in $D; do cd $d; ./configure $OPTS && make && cd $OLDPWD; done && prepare_install &&
for d in $D; do cd $d; make install              && cd $OLDPWD; done
}
