# might compile with gcc < 4.6

# lipsofsuna does not link with bullet version 2.78-r2387
   version stable 2.77
   version latest 2.80-rev2531 2.78-r2387
case $VERSION in
 2.77)
   use_gcc gcc-v4.5 ;;
esac
   require freeglut
#     opts --enable-shared=yes --enable-static=no
      opts -DBUILD_SHARED_LIBS:BOOL=TRUE
  category game
 attribute library lto_off makej multilib-concurrent x11
    source http://bullet.googlecode.com/files/bullet-$VERSION.tgz
      info good 20120603
      info last 20120314
      info home http://code.google.com/p/bullet/
      desc '3D Game multiphysics library'

bullet(){
 case $VERSION in
  2.77) sed -i 's:-Werror::' acinclude.m4 ;;
 esac
 default_build
}

