#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 510
# Required-Start: prelude-manager run
# Required-Stop:  prelude-manager
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: prelude-lml provides a log file monitoring daemon
### END INIT INFO

. /lib/lsb/init-functions

pid_file /var/run/prelude-lml.pid
server /usr/bin/prelude-lml
name prelude-lml
options "-d -P $PIDF"

reload(){
 PIDS="$( pidofproc -p $PIDF $SERV )"
 if   [ -n            "$PIDS" ]
 then kill  -s SIGHUP  $PIDS  &&
      log_success_msg "$NAME configuration reloaded"
 fi
}
