   VERSION=( "1.0.1rc6" )
  CATEGORY="utility"
 ATTRIBUTE="broken console"
    SOURCE="colorifer/colorifer-$VERSION.tar.bz2"
  HOMEPAGE="colorifer.sourceforge.net"
       URL="$SOURCEFORGE_URL"
       REQ="boost help2man ncursesxx pcre"
  ESTIMATE="42"
 FRESHMEAT="csed"
      DESC="colorifer stream edits to add color codes to output."


build()  {
  sed  -i  "s:-O2:$CXXFLAGS:"   src/Makefile
  sed  -i  "s:pcre/pcre:pcre:"  include/pcre_regex.hh
  make             &&
  prepare_install  &&
  make    install
}
