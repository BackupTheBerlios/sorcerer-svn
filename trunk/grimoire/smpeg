    stable 0.4.4
   require SDL
  optional gtk+-v1.2 --enable-gtk-player --disable-gtk-player to build a gtk+-v1.2 sample smpeg player
  category video
 attribute x11
    source ftp://mirrors.dotsrc.org/lokigames/open-source/smpeg/smpeg-$VERSION.tar.gz
  homepage http://www.lokigames.com/development/smpeg.php3
case $VERSION in
 0.4.4) use_gcc gcc-v4.0 ;;
esac
      opts --enable-static=no
  estimate 400
      desc 'smpeg is a general purpose MPEG video/audio player.'

build(){
 export CFLAGS="${CFLAGS//-march=native/}"
 export CXXFLAGS="${CXXFLAGS//-march=native/}"
 export LDFLAGS+=' -lstdc++'
 ./configure          \
 --prefix=/usr        \
 --sysconfdir=/etc    \
 --localstatedir=/var \
 $OPTS                && sed -i 's:gcc:g++:' Makefile &&
 make                 &&
 prepare_install      &&
 make    install
}
