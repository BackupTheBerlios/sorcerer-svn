   VERSION=( "0.96.1" "0.96" "0.95.4" "0.95.3" "0.95.2" "0.95" "0.94" )
    IGNORE="GTK\|b"
  CATEGORY="file-share"
 ATTRIBUTE="x11"
    SOURCE="gtk-gnutella/gtk-gnutella-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://gtk-gnutella.sourceforge.net"
       REQ=( "dbus gtk+ libxml2"
             "gnutls:::for encrypted file transfers" )
  ESTIMATE="1267"
      DESC="gtk-gnutella is a peer-to-peer file transfer program."

build() {
./Configure        \
-Dprefix=/usr      \
-Dofficial=true    \
-Dgtkversion=2     \
-Dosname=Sorcerer  \
-d -e              &&
make               &&
prepare_install    &&
make    install
}
