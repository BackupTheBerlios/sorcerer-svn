   version stable 0.96.9 0.96.8
   require dbus gtk+
  optional gnutls '' '' for encrypted file transfers
  category network/file-share
 attribute x11
    source $SOURCEFORGE_URL gtk-gnutella/gtk-gnutella/$VERSION/gtk-gnutella-$VERSION.tar.bz2
      info home  http://gtk-gnutella.sourceforge.net/
      info docs  http://gtk-gnutella.sourceforge.net/manual/
  estimate 1700
      desc 'peer-to-peer file transfer program'

build(){
 ./Configure        \
  -Dprefix=/usr     \
  -Dofficial=true   \
  -Dgtkversion=2    \
  -Dosname=Sorcerer \
  -d -e             &&
 make               &&
 make install DESTDIR=$DESTDIR
}
