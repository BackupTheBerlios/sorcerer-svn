    stable 0.96.8 0.96.6 0.96.5 0.96.4 0.96.3
   require dbus gtk+
  optional gnutls '' '' for encrypted file transfers
  category network/file-share
 attribute x11
    source $SOURCEFORGE_URL gtk-gnutella/gtk-gnutella/$VERSION/gtk-gnutella-$VERSION.tar.bz2
  homepage http://gtk-gnutella.sourceforge.net
  estimate 1700
      desc 'peer-to-peer file transfer program'

build(){
./Configure       \
-Dprefix=/usr     \
-Dofficial=true   \
-Dgtkversion=2    \
-Dosname=Sorcerer \
-d -e             &&
make              &&
prepare_install   &&
make    install
}
