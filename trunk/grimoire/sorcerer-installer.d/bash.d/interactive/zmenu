guest_menu(){
 show_menu(){
  dialog \
  --backtitle "Sorcerer Install/Rescue"  \
  --title     "Task Menu" \
  --stdout                \
  --cancel-label Shell    \
  --menu "$HELP" 0 0 0    \
  Dialog Tutorial Installer "Menu Driven"
 }

 while REPLY=$( show_menu ); do
 case $REPLY in
  Dialog) /sbin/dt ;;
  Installer) /sbin/sinstall ;;
 esac
}

if   (( UID == 0 )) && ! pgrep sinstall >/dev/null
then guest_menu
fi
