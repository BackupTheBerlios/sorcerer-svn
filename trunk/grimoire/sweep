# sweep 0.8.3 is not compatibile with alsa 1.0.x
#            'alsa:--enable-alsa::to enable alsa only playback'
# also has optional requirements on swh-plugins

    stable 0.9.3 0.9.2 0.9.1 0.9.0 0.8.4 0.8.3 0.8.2
    secure 0.9.3
   require gtk+ libsndfile tdb
  optional libvorbis     '' --disable-oggvorbis for mixing and playback of ogg/vorbis files
  optional libmad        '' --disable-mad       for mixing and playback of mp3 files
  optional speex         '' --disable-speex     for mixing and playback of speex files
  optional libsamplerate '' --disable-src       to enable secret rabbit code libsamplerate
    ignore 'stakes\|hpstates'
  category audio/editor audio/player
 attribute x11
       url $SOURCEFORGE_URL
    source sweep/sweep-$VERSION.tar.bz2
  homepage http://sweep.sourceforge.net
  estimate 800
      desc 'sweep is an audio editor and live playback tool.
It supports many music and voice formats including 
WAV, AIFF, Ogg Vorbis, Speex, and MP3, with 
multichannel editing and LADSPA effects plugins.'
