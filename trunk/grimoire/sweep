   VERSION=( "0.8.3" "0.8.2" )
    IGNORE="sweepstakes"
  CATEGORY="audio-editor audio-player"
 ATTRIBUTE="x11"
    SOURCE="sweep/sweep-$VERSION"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://sweep.sourceforge.net"
       REQ="gtk+-v1.2 libsndfile tdb"
    OPT[0]="libvorbis::--disable-oggvorbis:for mixing and playback of ogg/vorbis files"
    OPT[1]="mad::--disable-mad:for mixing and playback of mp3 files"
    OPT[2]="speex::--disable-speex:for mixing and playback of speex files"
    OPT[3]="libsamplerate::--disable-src:enable secret rabbit code (libsamplerate)"
# sweep 0.8.3 is not compatibile with alsa 1.0.x
#   OPT[4]="alsa:--enable-alsa::to enable alsa only playback"
# also has optional requirements on swh-plugins
  ESTIMATE="224"
 FRESHMEAT="sweep"
     SHORT="sweep is an audio editor and live playback tool."
      LONG="
sweep is an audio editor and live playback tool.
It supports many music and voice formats including 
WAV, AIFF, Ogg Vorbis, Speex, and MP3, with 
multichannel editing and LADSPA effects plugins.
