# When updating to 2.6.40 or later
# also edit iptables to increase it's installed version.

   version stable 3.3.0 2.6.39 2.6.38 2.6.37 2.6.35 2.6.34
   require db gmp init-functions iptables
  category network
 attribute console
#   source http://developer.osdl.org/dev/iproute2/download/iproute2-$VERSION.tar.gz
    source $KERNEL_URL pub/linux/utils/net/iproute2/iproute2-$VERSION.tar.xz
      info home http://www.linuxfoundation.org/collaborate/workgroups/networking/iproute2
      info last 20120329
      info home http://linux-net.osdl.org/index.php/Iproute2
      desc 'tools for network configuration
This is iproute, the professional set of tools to control
the networking behavior in kernels 2.6.x and later.
It can be used tp configure adapters, and provides userland
programs to control QoS settings in the kernel.'

build(){
 make &&
 make install DESTDIR=$DESTDIR \
               MANDIR=/usr/share/man \
               DOCDIR=/usr/share/doc/iproute2
}

current(){
 case $VERSION in
  2.6.38) [ -f /usr/share/man/man8/ip.8 ] ;;
 esac
}
