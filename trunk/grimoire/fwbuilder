    stable 3.0.4 3.0.3 2.1.18
   require gettext libfwbuilder
  category network
 attribute kde4
       url $SOURCEFORGE_URL
    source fwbuilder/fwbuilder-$VERSION.tar.gz
  homepage http://www.fwbuilder.org
      opts --prefix=/opt/kde4 --with-qt-dir=/opt/kde4 --disable-debug --enable-final
  estimate 900
      desc 'fwbuilder is a GUI for building firewalls using iptables.'

build(){
 export QTDIR=/opt/kde4
(
 export PATH+=:/opt/kde4/bin
 [ -x autogen.sh ] &&
    ./autogen.sh
 default_build
)
}
