   version stable 5.0.1.3592 5.0.0.3568 4.1.3
   require gettext
#  require gettext libfwbuilder
      opts --prefix=/opt/kde4 --with-qt-dir=/opt/kde4 --disable-debug --enable-final
  optional net-snmp
  category network
 attribute kde4
    source $SOURCEFORGE_URL fwbuilder/Current_Packages/${VERSION:0:5}/fwbuilder-$VERSION.tar.gz
      info last 20111223
      info home http://www.fwbuilder.org/
      info docs http://www.fwbuilder.org/4.0/docs/users_guide5/
 conflicts libfwbuilder
      desc 'GUI for building firewalls using iptables'

build(){
 export QTDIR=/opt/kde4
(
 export PATH+=:/opt/kde4/bin
 [ -x autogen.sh ] &&
    ./autogen.sh
 INSTALL_ROOT=$DESTDIR default_build
)
}
