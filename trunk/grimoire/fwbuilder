    stable 4.1.1 4.1.0 4.0.2 4.0.1 4.0.0
   require gettext libfwbuilder
  optional net-snmp
  category network
 attribute kde4
    source $SOURCEFORGE_URL fwbuilder/Current_Packages/$VERSION/fwbuilder-$VERSION.tar.gz
  homepage http://www.fwbuilder.org
      opts --prefix=/opt/kde4 --with-qt-dir=/opt/kde4 --disable-debug --enable-final
  estimate 1250
      desc 'GUI for building firewalls using iptables'

build(){
 export QTDIR=/opt/kde4
(
 export PATH+=:/opt/kde4/bin
 [ -x autogen.sh ] &&
    ./autogen.sh
 INSTALL_ROOT=$DESTDIR default_build
)
}
