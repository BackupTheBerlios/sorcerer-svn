   VERSION=( 0.9.1 )
  CATEGORY='graphics'
 ATTRIBUTE='x11 new'
    SOURCE="driconf/driconf-${VERSION}.tar.gz"
       URL='http://people.freedesktop.org/~fxkuehl/'
  HOMEPAGE='http://dri.freedesktop.org/wiki/DriConf'
       REQ='Python'
 FRESHMEAT="driconf"
  ESTIMATE='50'
      DESC="$SPELL is a configuration applet for the DRI
$SPELL is a configuration applet for the Direct
Rendering Infrastructure (DRI). It allows customizing
performance and visual quality settings of OpenGL
drivers on a per-driver, per-screen and/or
per-application level. The settings are stored in 
system wide and per-user XML configuration files,
which are parsed by the OpenGL drivers on startup."

build() {
 sed -i "s:/usr/local:/usr:g"  driconf* setup*

 prepare_install		&&
 python setup.py install	&&
 install -v -m 0644 driconf.desktop /usr/share/applications/driconf.desktop
}

