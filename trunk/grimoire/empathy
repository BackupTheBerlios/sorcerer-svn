# Disable introspection since introspection is broke with clutter
# empathy 2.32.2 failed to compile
# No package 'libcanberra-gtk3' found
# versions 2.32.x seems to require unstable versions of gnome software.

   version stable 3.0.0 2.91.93 2.30.3 2.32.0.1 2.32.0
#  version unstable 2.91.93
case $VERSION in
 2.32.2)
      opts --enable-introspection=no ;;
 2.32.0.1)
      opts --enable-introspection=no ;;
 2.32.0)
      opts --enable-introspection=no ;;
esac
   require NetworkManager enchant evolution-data-server folks gnome-control-center libchamplain libnotify telepathy-farsight telepathy-logger
#  require NetworkManager enchant evolution-data-server folks libchamplain libnotify libunique telepathy-farsight telepathy-logger
      opts --without-ca-file --enable-static=no
  category network/chat
 attribute client gnome
    source $GNOME_URL sources/empathy/${VERSION:0:3}/empathy-$VERSION.tar.bz2
  homepage http://www.gnome.org
      desc 'chat client'
