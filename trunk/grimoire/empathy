# Disable introspection since introspection is broke with clutter
# empathy 2.32.2 failed to compile

    stable 2.32.0.1 2.32.0
  unstable 2.91.4.3 2.91.3
    latest 2.32.2
case $VERSION in
 2.32.2)
      opts --enable-introspection=no ;;
 2.32.0.1)
      opts --enable-introspection=no ;;
 2.32.0)
      opts --enable-introspection=no ;;
esac
   require NetworkManager enchant evolution-data-server folks libchamplain libnotify libunique telepathy-farsight telepathy-logger
      opts --without-ca-file
  category network/chat
 attribute client gnome
    source $GNOME_URL sources/empathy/${VERSION:0:4}/empathy-$VERSION.tar.bz2
  homepage http://www.gnome.org
      opts --enable-static=no
  estimate 6800
      desc 'chat client'
