# 3.6.1 failed to compile
# 3.6.0.3 fails to compile
# not known to compile

with version   stable 3.6.3 3.6.2 3.6.0.3
with version unstable 3.7.5
with base    NetworkManager WebKit evolution-data-server folks gnome-control-center gnome-keyring libchamplain libnotify telepathy-farstream telepathy-logger telepathy-mission-control
with also    --without-ca-file --enable-static=no --disable-Werror
with role    network/chat
with trait   client gnome
with trait   broke
with source    stable $GNOME_URL sources/empathy/${VERSION:0:3}/empathy-$VERSION.tar.xz
with source  unstable $GNOME_URL sources/empathy/${VERSION:0:3}/empathy-$VERSION.tar.xz
with info    last 20130111
with info    home http://www.gnome.org
with info    cite 'chat client'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 
 default_build
}
