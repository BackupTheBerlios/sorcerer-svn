# Disable introspection since introspection is broke with clutter
# empathy 2.32.2 failed to compile
# No package 'libcanberra-gtk3' found
# versions 2.32.x seems to require unstable versions of gnome software.

   version stable 2.30.3 2.32.0.1 2.32.0
   version unstable 2.91.93 2.91.90.2 2.91.91.1
   version latest 2.32.2
case $VERSION in
 2.32.2)
      opts --enable-introspection=no ;;
 2.32.0.1)
      opts --enable-introspection=no ;;
 2.32.0)
      opts --enable-introspection=no ;;
esac
   require NetworkManager enchant evolution-data-server-v2.32 folks libchamplain libnotify libunique-v1 telepathy-farsight telepathy-logger
      opts --without-ca-file --enable-static=no
  category network/chat
 attribute client gnome
    source $GNOME_URL sources/empathy/${VERSION:0:4}/empathy-$VERSION.tar.bz2
  homepage http://www.gnome.org
  estimate 6800
      desc 'chat client'
