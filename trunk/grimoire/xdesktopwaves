  stable 1.3 1.2 1.1 1.0
  CATEGORY='graphic'
 ATTRIBUTE='x11 new'
    SOURCE="xdesktopwaves/xdesktopwaves-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://xdesktopwaves.sourceforge.net'
  ESTIMATE='7'
      DESC="xdesktopwaves makes ripples on the desktop background image.
xdesktopwaves is a cellular automata setting the
background of your X Windows desktop under water.
Windows and mouse are like ships on the sea.
Each movement of these ends up in moving water waves.
You can even have rain and/or storm stirring up the water."


build()  {
make   CFLAGS="-I/usr/X11R6/include $CFLAGS"  \
       LFLAGS="-L/usr/X11R6/lib $LDFLAGS"     &&
prepare_install  &&
make    install
}
