   version stable 0.22 0.21.1 0.21 0.20
   require gcc-g++
      opts --disable-rpath --enable-shared=yes --enable-static=no
   require expat zlib
  category graphic utility
 attribute library
#attribute makej multilib-concurrent
    source http://www.exiv2.org/exiv2-$VERSION.tar.gz
      vurl http://www.exiv2.org/download.html
      info last 20110919
      info home http://www.exiv2.org/
      info docs http://www.exiv2.org/doc/index.html
      desc 'library and utilities to manipulate image formats
exiv2 is a C++ library and a utility to access image metadata
exiv2 handles EXIF and IPTC metadata of
JPEG, TIFF and several RAW image formats.'

build(){
 # Necessary to disable the rpath
 # sed -i 's: -rpath $(libdir)::' src/Makefile
 # sed -i 's:instname="$dir/$name"i:instname="$dir/$name":' config/ltmain.sh
 # Neccessary fake rpath for buggy libtool
 #  sed -i 's: -rpath $(libdir): -rpath /rpath:' src/Makefile
 # impossible to disable rpath
 # and generate ELF libraries
 # due to broke libtool

 export LDFLAGS+=" $CFLAGS"
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
