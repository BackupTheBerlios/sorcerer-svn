   version stable 2.0.12
   require imake
  category utility/time
 attribute x11
    source http://www.tigr.net/afterstep/download/asclock/asclock-$VERSION.tar.gz
      info home  http://www.tigr.net/afterstep/applets/
      desc 'digital clock for use with AfterStep
A swallowable applet shows clock and calendar.
Supports themes for different looks.'

build(){
ln -sf themes/classic default_theme
xmkmf &&
make install "DESTDIR=$DESTDIR" &&
mkdir -p $DESTDIR/usr/man/man1 $DESTDIR/usr/share/asclock &&             
cp    -R themes/*              $DESTDIR/usr/share/asclock &&
gzip  -9 < asclock.man >       $DESTDIR/usr/man/man1/asclock.1.gz
}
