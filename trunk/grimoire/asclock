   VERSION=( "2.0.12" )
  CATEGORY="utility/time"
 ATTRIBUTE="x11"
    SOURCE="asclock-$VERSION.tar.gz"
       URL="http://www.tigr.net/afterstep/download/asclock"
  HOMEPAGE="http://www.tigr.net/afterstep/long.php"
      DESC="AfterStep digital clock
A swallowable applet shows clock and calendar.
Supports themes for different looks."


build() {
ln  -sf  themes/classic  default_theme
xmkmf            &&
prepare_install  &&
make    install  &&
mkdir  -p  /usr/man/man1  /usr/share/asclock  &&             
cp     -R  themes/*       /usr/share/asclock  &&
gzip   -9  <  asclock.man  >  /usr/man/man1/asclock.1.gz
}
