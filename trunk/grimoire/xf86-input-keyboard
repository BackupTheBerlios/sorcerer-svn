X_VERSION=X11R7.1
inherit xf86
   VERSION=( "${X_VERSION}-1.1.0" "${X_VERSION}-1.0.1.3" )
    SOURCE="driver/xf86-input-keyboard-$VERSION.tar.bz2"
       REQ=( "xkbdata xorg-server"
             "setxkbmap:::to set keyboard using X keyboard extention"
             "xkbcomp:::is a keymap compiler for the XKB keyboard descriptions"
             "xkbevd:::for a XKB event deamon"
             "xkbprint:::to print XKB keyboard descriptions"
             "xkbutils:::for some additional keyboard utilities" )
  ESTIMATE="218"
      DESC="xf86-inputkeyboard provides input driver for X11R7"

