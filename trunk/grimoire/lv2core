# 3.0 is a .tar.bz2
# 4.0 is a .tar.gz

   version stable 4.0 3.0
   require Python
  category audio/library
 attribute library
    source http://lv2plug.in/spec/lv2core-$VERSION.tar.gz
  homepage http://lv2plug.in/spec/
      desc 'LV2 specification components for audio processing'

build(){
 ./waf configure --prefix=/usr &&
 ./waf -j1 &&
 DESTDIR=$DESTDIR ./waf install
}
