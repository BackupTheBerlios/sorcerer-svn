   version stable 3.2.0 3.0.0 2.33.2
   require GConf gtk+
#  require libgnomeui xcb-util
  optional gnome-doc-utils '' '' for documentation generation
  category font/editor
 attribute gnome library makej multilib-concurrent
    source $GNOME_URL sources/gucharmap/${VERSION:0:3}/gucharmap-$VERSION.tar.xz
      info last 20111006
      info home  http://live.gnome.org/Gucharmap
      desc 'character map and font viewer
gucharmap is a Unicode/ISO 10646 character map and font viewer.
It supports anti-aliased, scalable truetype fonts in X, using Xft, 
and works on Unix and Windows platforms.'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
