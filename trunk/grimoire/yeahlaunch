# Forked by someone else to add config file and support for Solaris.

   version stable 0.3 0.2
   require libX11
  category utility/terminal-emulator
 attribute x11
    source http://www.bstern.org/yeahlaunch/yeahlaunch-$VERSION.tar.gz
#   source http://phrat.de/yeahlaunch-$VERSION.tar.gz
      info last 20111201
      info home http://www.bstern.org/yeahlaunch/
#     info home http://phrat.de/yeahtools.html
#     info vurl http://phrat.de/downloads.html
      desc 'auto-hiding animated menu at top of screen
It is an application launcher'

build(){
 sed -i "s:-Os:$CFLAGS:" Makefile
 make &&
 mkdir -pvm 755 $DESTDIR/usr/bin &&
 make install PREFIX=$DESTDIR/usr
}
