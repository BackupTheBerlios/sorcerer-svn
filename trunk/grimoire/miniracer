   VERSION=( "1.04" "1.03" )
  CATEGORY="game"
 ATTRIBUTE="new x11"
    SOURCE="miniracer/miniracer-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://miniracer.sourceforge.net"
      REQ="SDL_mixer"
      OPTS="--bindir=/usr/games --disable-paraguitest"
  ESTIMATE="76"
      DESC="miniracer is an OpenGL car racing game based upon the quake engine."

build()  {
  sed  -i  "s:-O3 -march=i486 -ffast-math -fexpensive-optimizations:$CFLAGS:
            s:/usr/bin:/usr/games:"  Makefile
  make    clean
  make             &&
  prepare_install  &&
  make    install
}
