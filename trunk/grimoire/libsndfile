    stable 1.0.17
    secure 1.0.17
   require flac
  optional alsa-lib '' ''               for audio output through alsa
  optional sqlite   '' --disable-sqlite for sqlite support

  category audio/library
 attribute library
    source libsndfile-$VERSION.tar.gz
       url http://www.mega-nerd.com/libsndfile/
  homepage http://www.mega-nerd.com/libsndfile/
      opts --enable-static=no
# has new requirements on flac and sqlite with 1.0.12
  estimate 900
      desc 'libsndfile is a library for read/writing audio files.
libsndfile is a C library for reading and writing files containing
sampled sound (such as MS Windows WAV and the Apple/SGI AIFF format)
through one standard library interface.'
