# Switching to unstable versions for newer flac support.
# optional on jackit creates recursive requirement

    stable 1.0.21 1.0.20 1.0.19 1.0.18
    secure 1.0.19
   require flac
  optional alsa-lib '' ''               for audio output through alsa
  optional libvorbis
# optional jackit   '' ''               for audio output through jack sound mixer
  optional sqlite   '' --disable-sqlite for sqlite support
  category audio/library
 attribute library
#   source http://www.mega-nerd.com/tmp/libsndfile-$VERSION.tar.gz
    source http://www.mega-nerd.com/libsndfile/files/libsndfile-$VERSION.tar.gz
  homepage http://www.mega-nerd.com/libsndfile/
      opts --enable-static=no
# has new requirements on flac and sqlite with 1.0.12
  estimate 400
      desc 'library for read/writing audio files
libsndfile is a C library for reading and writing files containing
sampled sound (such as MS Windows WAV and the Apple/SGI AIFF format)
through one standard library interface.'
