    stable 3.3.2.p11
  category network
 attribute console
    source ftp://ftp.sangoma.com/wanpipe-$VERSION.tgz
  homepage http://wiki.sangoma.com
  estimate 200
      desc 'software for creating a Linux based WAN Router'

build(){
sed -i "s:ROOT=:ROOT=$DESTDIR:" Setup
[ -x Setup ] &&
./Setup install --silent
}
