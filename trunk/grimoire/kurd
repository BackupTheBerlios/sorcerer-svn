    stable 0.1
   require kdelibs-v3 rdesktop
  optional tightvnc '' '' to use tightvnc to connect to remote desktops
  category utility/terminal-emulator
 attribute kde3
    source $SOURCEFORGE_URL kurd/kurd/kurd-$VERSION/kurd-$VERSION.tar.gz
  homepage http://kurd.sourceforge.net
      opts --prefix=/opt/kde3 --with-qt-dir=/opt/kde3 --disable-debug --enable-final
 freshmeat none
  estimate 200
      desc 'kurd is a frontend for rdesktop and tightvnc.
kurd is KDE Universal Remote Desktop has the goal of becoming
an extendable remote desktop control client frontend.
For now it supports rdesktop and tightvnc.'
