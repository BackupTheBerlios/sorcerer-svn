# No known version of krusader compile
#attribute kde3

    stable 1.90.0 1.80.0
    ignore 'beta\|handbook\|x86_64\|i486\|sarge\|etch'
  category utility/file-manager
 attribute kde3
 attribute broke
       url $SOURCEFORGE_URL
    source krusader/krusader-$VERSION.tar.gz
  homepage http://krusader.sourceforge.net
      opts --prefix=/opt/kde3 --with-qt-dir=/opt/kde3 --disable-debug --enable-final
case $VERSION in
 1.90.0) use_gcc gcc-v4.2 ;;
esac
  estimate 1800
      desc 'krusader is a KDE Twin-Panel filemanager.
Its twin-panel look follows in the
footsteps of the great file managers
of old such as GNU Midnight Commander(c)
and the Norton Commander(c) for DOS.
Krusader features an intuitive GUI,
complete drag and drop capability,
transparent handling of archives,
mimetype support, and more.'


build_old(){
export  KDEDIR=${KDEDIR:-/opt/kde3}
export  QTDIR=${QTDIR:-/opt/kde3}
default_build
}
