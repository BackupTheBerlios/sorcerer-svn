   VERSION=( "1.50" "1.40" "1.30" "1.20" "1.11" "1.10" "1.02" )
    IGNORE="beta\|handbook"
  CATEGORY="file-manager"
 ATTRIBUTE="kde"
    SOURCE="krusader/krusader-$VERSION.tar.gz"
  HOMEPAGE="http://krusader.sourceforge.net"
       URL="$SOURCEFORGE_URL"
#      URL="http://krusader.sourceforge.net/stable"
       REQ="kdelibs"
  ESTIMATE="385"
      DESC="krusader is a KDE Twin-Panel filemanager
krusader is an old-school file manager.
Its twin-panel look follows in the 
footsteps of the great file managers 
of old such as GNU's Midnight Commander(c) 
and the Norton Commander(c) for DOS.
Krusader features an intuitive GUI, 
complete drag n' drop capability, 
transparent handling of archives, 
mimetype support, and more."


build()  {
export  KDEDIR=${KDEDIR:-/usr}
export  QTDIR=${QTDIR:-/usr}
default_build
}
