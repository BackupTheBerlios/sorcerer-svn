inherit bison
VERSION=()
    stable 1.35
    ignore '^2\.[0-9]\|^1\.875\|^1\.75\|^1\.5'
 attribute console
    source bison/bison-$VERSION.tar.bz2
  estimate 505

build(){
 DEST="/opt/bison/$VERSION"
 YACC="$DEST/bin/yacc"

 [ -d bison-$VERSION ] &&
 cd   bison-$VERSION

 ./configure     \
 --build=$BUILD  \
 --prefix=$DEST  &&
 make            &&
 prepare_install &&
 make    install &&
 echo -e "#!/bin/sh\nexec bison -y  \"\$@\"" > $YACC &&
 chmod 755 $YACC
}
