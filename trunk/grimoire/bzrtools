# This should be of the same version as bzr plus a second dot and a digit
# 2.2.0 compiled fine, but bzr 2.2.0 did not

with version stable 2.5 2.4.1
with base    Python
with role    development/interpreter/python
with trait   python-module
with source  "https://launchpad.net/bzrtools/stable/$VERSION/+download/bzrtools-$VERSION.tar.gz"
CURL_PARAM='-k'
with info    vurl http://bazaar-vcs.org/BzrTools
with info    good 20120727
with info    home http://bazaar-vcs.org/BzrTools
with info    cite 'extra functionality for bzr (Bazaar-NG)'
