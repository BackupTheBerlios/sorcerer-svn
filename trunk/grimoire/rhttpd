   VERSION=( "0.0.2-alpha4" "0.0.2-alpha3" "0.0.2-alpha2" "0.0.2-alpha1" )
  CATEGORY="web"
 ATTRIBUTE="console server new broken"
    SOURCE="rhttpd-$VERSION.tar.bz2"
       URL="http://rhttpd.stormbind.net/download"
  HOMEPAGE="http://rhttpd.stormbind.net"
       REQ="libevent"
  ESTIMATE="281"
      DESC="rhttpd a small fast HTTP server.
It uses libevent and non-blocking sockets to 
handle a large amout of concurrent connections."

build()  {
export  CFLAGS="$CFLAGS -Wall -D_GNU_SOURCE -D_FILE_OFFSET_BITS=64 -D_LARGEFILE_SOURCE -D_LARGE_FILES -DOS_LINUX"
cd  src
make   "CFLAGS=$CFLAGS"  &&
prepare_install          &&
install  -m 0744  -o root  -g root  rhttpd  /usr/sbin
}
