   VERSION=( 1.34 1.33 1.32 1.31 1.30 )
  CATEGORY='utility'
 ATTRIBUTE='console'
    SOURCE="laptop-mode-tools_$VERSION.tar.gz"
       URL='http://www.xs4all.nl/~bsamwel/laptop_mode/tools/downloads/'
  HOMEPAGE='http://www.xs4all.nl/~bsamwel/laptop_mode/tools/'
       REQ='acpid'
  ESTIMATE='5'
      DESC='laptop-mode-tools provides scripts to extend battery life'

build() {
 sed  -i  's:/usr/local:/usr:'  install.sh  &&
 prepare_install  &&
 make    install
}
