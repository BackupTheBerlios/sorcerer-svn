  stable 0.6.0
  CATEGORY='video/player'
 ATTRIBUTE='library'
    SOURCE="${VERSION:0:3}/swfdec-mozilla-$VERSION.tar.gz"
       URL='http://swfdec.freedesktop.org/download/swfdec-mozilla/'
      VURL='http://swfdec.freedesktop.org/wiki/'
  HOMEPAGE='http://swfdec.freedesktop.org/wiki/'
       REQ='swfdec'
      OPTS='--enable-static=no'
  ESTIMATE='1500'
      DESC='swfdec Mozilla plug-in'

build(){
 export LDFLAGS+=' -Wl,-rpath,/usr/lib/mozilla'
 default_build
}
