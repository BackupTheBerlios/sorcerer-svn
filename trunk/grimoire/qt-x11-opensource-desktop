# Someone should have renamed this spell to qt-x11-opensource ?
   VERSION=( "4.2.0" "4.1.4" "4.1.3" "4.1.2" "4.1.0" "4.0.1" "4.0.0" )
    IGNORE="rc"
  CATEGORY="graphic"
 ATTRIBUTE="library kde new broken"
# This is not a drop in replacement for qt 3.3.x
# The spell is not broken, however do not install
# until we have something which can use it.
#    SOURCE="qt-x11-opensource-desktop-$VERSION.tar.bz2"

#Updated to reflect new download tarball
    SOURCE="qt-x11-opensource-src-$VERSION.tar.gz"

  HOMEPAGE="http://www.trolltech.com/developer/downloads/qt/x11"

       URL="ftp://ftp.trolltech.com/qt/source/"
#      URL="http://ftp.silug.org/mirrors/ftp.trolltech.com/qt/source/"
# is cups required or optional?
#      REQ=( "fontconfig jpeg libmng libpng x11"
       REQ=( "jpeg libmng libpng x11"
             "cups:-cups:-no-cups:for common unix printing support"
             "freetype:-fontconfig:-no-fontconfig:for quality font engine" )
# qt-x11-free does not support nas network audio.
 FRESHMEAT="qt"
  ESTIMATE="3696"
      DESC="qt-x11-opensource-desktop simplifies the task of writing and maintaining GUI applications."

build()  {
echo  "yes"       |
./configure       \
-v                \
-release          \
-shared           \
-system-libpng    \
-system-libjpeg   \
-system-zlib      \
-qt-gif           \
-xinerama         \
-no-exceptions    \
-bindir /usr/bin  \
-libdir /usr/lib  \
-R$BUILD_DIR/lib  \
-prefix /usr/share/qt    \
-headerdir /usr/include  \
$OPTS                    &&
make                     &&
prepare_install          &&
make    install
}
