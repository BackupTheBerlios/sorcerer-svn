   version stable 1.70.0 1.50.0 1.11.0
  category game
 attribute data x11
    source $SOURCEFORGE_URL crossfire/crossfire-$VERSION/crossfire-$VERSION.maps.tar.gz
#   source $SOURCEFORGE_URL crossfire/crossfire-maps/$VERSION/crossfire-$VERSION.maps.tar.gz
      info last 20120329
      info home http://crossfire.real-time.com/
      desc 'map data files for crossfire-server'

build(){
 mkdir -pm 755 $DESTDIR/usr/share/crossfire/maps &&
 cp    -a *    $DESTDIR/usr/share/crossfire/maps
}
