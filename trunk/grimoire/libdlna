    stable 0.2.3
   require ffmpeg

  category video/dvd video/player
 attribute x11
    source libdlna-$VERSION.tar.bz2
       url http://libdlna.geexbox.org/releases/
  homepage http://libdlna.geexbox.org/
  estimate 120
      desc 'libdlna provides a reference implementation of DLNA
DLNA stands for Digital Living Network Alliance standards.'

build(){
 case $VERSION in
  0.2.3) grep -rl   ffmpeg/ * | xargs -r --max-lines=64 \
         sed  -i 's:ffmpeg/:libavformat/:'
         grep -rl   libavformat/avcodec.h * | xargs -r --max-lines=64 \
         sed  -i 's:libavformat/avcodec.h:libavcodec/avcodec.h:'
         ;;
 esac

 ./configure        \
 --prefix=/usr      \
 --disable-optimize \
 --disable-debug    \
 $OPTS              &&
 make               &&
 prepare_install    &&
 make    install
}
