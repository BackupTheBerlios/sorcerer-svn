    stable 1.4
  unstable 1.5-rc2 1.5-rc1 1.5-pre1
      opts --enable-static=no
  category archive
 attribute console
    source http://mirror.sourceshare.org/savannah/lzip/lzip-$VERSION.tar.gz
    CFLAGS='-O3'
  CXXFLAGS='-O3'
   LDFLAGS='-Wl,-O1 -static'
  homepage http://www.nongnu.org/lzip/lzip.html
      desc 'lzma based file compressor'

build(){
./configure          \
--prefix=/           \
--datadir=/usr/share \
--infodir=/usr/info  \
--mandir=/usr/man    \
CFLAGS="$CFLAGS"     \
CXXFLAGS="$CXXFLAGS" \
LDFLAGS="$LDFLAGS"   &&
make                 &&
prepare_install      &&
make    install
}
