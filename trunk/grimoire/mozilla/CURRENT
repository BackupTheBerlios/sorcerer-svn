grep    -rl              "/usr/lib/mozilla-" /usr/lib/*.la  |
xargs   -l64  sed  -i  "s:/usr/lib/mozilla-[^ ]*:/usr/lib/mozilla:g"
if    grep  -q  "\-L/usr/lib/mozilla-"                          /usr/bin/mozilla-config
then  sed   -i   "s:/usr/lib/mozilla-[^ ]*:/usr/lib/mozilla:g"  /usr/bin/mozilla-config
fi
