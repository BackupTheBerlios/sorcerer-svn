    stable 1.7.4p6 1.7.4p5 1.7.4p4 1.7.4p3
   require Linux-PAM zlib
  optional openldap  '' '' for storing sudoers info in LDAP
  category utility
 attribute console
  homepage http://www.sudo.ws/sudo/
    source http://www.sudo.ws/sudo/dist/sudo-$VERSION.tar.gz
  estimate 380
      desc 'grant limited superuser ability to users'

build(){
 EDITOR=`which $EDITOR 2>/dev/null` ||
 EDITOR=`which nano`
 OPTS+=" --with-editor=$EDITOR"

 if   spell_installed Linux-PAM ||
      spell_held      Linux-PAM
 then OPTS+=' --with-pam'
 else OPTS+=' --without-pam'
 fi

 ./configure    \
  --prefix=/usr \
  $OPTS &&
 make   &&
 make install DESTDIR=$DESTDIR
}
