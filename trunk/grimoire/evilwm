    stable 1.0.0 0.99.25
   require libXrandr
    ignore 'TS'
  category window-manager
 attribute x11
    source evilwm-$VERSION.tar.gz
       url http://www.6809.org.uk/evilwm/
  homepage http://evilwm.sourceforge.net/
     WMBIN='/usr/bin/evilwm'
  estimate 20
      desc 'evilwm is a light weight window manager.'

build(){
 make &&
 prepare_install &&
 make    install
}
