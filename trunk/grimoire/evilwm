   require libXrandr
  category window-manager
 attribute x11
    source http://www.6809.org.uk/evilwm/evilwm-$VERSION.tar.gz
      info last  20110710
      info home  http://evilwm.sourceforge.net/
     wmbin /usr/bin/evilwm
      desc 'light weight window manager'

build(){
 make &&
 make install "DESTDIR=$DESTDIR"
}
