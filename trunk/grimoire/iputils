    stable s20071127 s20070202
   require db gmp
    switch arping      '' install arping
    switch clockdiff   '' install clockdiff
    switch ipg         '' install ipg
    switch ping        '' install ping
    switch ping6       '' install ping6
    switch rarpd       '' install rarpd
    switch rdisc       '' install rdisc
    switch tftpd       '' install tftpd
    switch tracepath   '' install tracepath
    switch tracepath6  '' install tracepath6
    switch traceroute6 '' install traceroute6
  category network
 attribute console
    source http://www.skbuff.net/iputils/iputils-$VERSION.tar.bz2
  homepage http://www.linuxfoundation.org/en/Net:Iputils
       desc 'iputils is similar to net-utils
iputils provides:

   *  ping: cloned of an ancient NetTools-B-xx
   *  ping6: cloned of a very old Pedro utility set
   *  traceroute6: cloned of NRL Sep 96 distribution
   *  rdisc: cloned of SUN in.rdisc
   *  clockdiff: broken out of some BSD timed
   *  tftpd: it is clone of some ancient NetKit package'

build(){
 opt_install(){
  while [ $# -gt 0 ]; do
   cat $OPTS | grep -q $1 && cp $1 /usr/bin
   shift
  done
 }

case $VERSION in
 s20071127) sed -i 's:OPEN_MAX:4096:' rdisc.c ;;
esac
make &&
prepare_install &&
opt_install arping clockdiff ipg ping ping6 rdisc rarpd tftpd tracepath tracepath6 traceroute6
}
