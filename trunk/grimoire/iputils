   VERSION=( s20071127 s20070202 )
  CATEGORY='network'
 ATTRIBUTE='console'
    SOURCE=( "iputils-$VERSION.tar.bz2" )
  HOMEPAGE='http://linux-net.osdl.org/index.php/Iputils'
       URL=( "http://www.skbuff.net/iputils/"
             "$KERNEL_URL" )
       REQ=( 'db gmp'
             ':arping:: install arping'
             ':clockdiff:: install clockdiff'
             ':ipg::install ipg'
             ':ping:: install ping'
             ':ping6:: install ping6'
             ':rarpd:: install rarpd'
             ':rdisc:: install rdisc'
             ':tftpd:: install tftpd'
             ':tracepath:: install tracepath'
             ':tracepath6:: install tracepath6'
             ':traceroute6:: install traceroute6' )
   ESTIMATE='20'
       DESC='iputils is similar to net-utils
iputils provides:

   *  ping: cloned of an ancient NetTools-B-xx
   *  ping6: cloned of a very old Pedro utility set
   *  traceroute6: cloned of NRL Sep 96 distribution
   *  rdisc: cloned of SUN in.rdisc
   *  clockdiff: broken out of some BSD timed
   *  tftpd: it is clone of some ancient NetKit package'

build() {
  opt_install() {
    while [ $# -gt 0 ]; do
      cat $OPTS | grep -q $1 && cp $1 /usr/bin
      shift
    done
  }

  make  &&
  prepare_install &&
  opt_install arping clockdiff ipg ping ping6 ridsc rarpd tftpd tracepath tracepath6 traceroute6
}
