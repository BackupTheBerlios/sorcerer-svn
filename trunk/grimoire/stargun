    stable 0.2 v0.2.LinuxSource
   require SDL_mixer SDL_ttf
  category game
 attribute x11
    source $SOURCEFORGE_URL stargun/stargun/$VERSION/StarGun.v$VERSION.LinuxSource.tar.gz
  homepage http://stargun.sourceforge.net
      desc 'verticle scrolling arcade game'

build(){
 fix_install(){
   USG=/usr/share/stargun
  DATA='ariblk.ttf levels pics sounds'
    UL=/usr/libexec
   RUN="#!/bin/bash\ncd $USG\n$UL/stargun"

  cd src
  mkdir -p                   $UL
  mv        /usr/bin/stargun $UL
  mkdir -p       $USG
  cp    -a $DATA $USG
  echo  -e "$RUN" > /usr/bin/stargun
  chmod 755         /usr/bin/stargun
 }


./configure          \
--prefix=/usr        \
--sysconfdir=/etc    \
--localstatedir=/var \
$OPTS                &&
make                 &&
prepare_install      &&
make    install      &&
    fix_install
}
