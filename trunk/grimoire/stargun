   version stable 0.2 v0.2.LinuxSource
   require SDL_mixer SDL_ttf
  category game
 attribute x11
    source $SOURCEFORGE_URL stargun/stargun/$VERSION/StarGun.v$VERSION.LinuxSource.tar.gz
      info home http://stargun.sourceforge.net
      desc 'verticle scrolling arcade game'

build(){
 fix_install(){
   USG=/usr/share/stargun
  DATA='ariblk.ttf levels pics sounds'
    UL=/usr/libexec
   RUN="#!/bin/bash\ncd $USG\n$UL/stargun"

  cd src
  mkdir -p                   $DESTDIR/$UL
  mv        /usr/bin/stargun $DESTDIR/$UL
  mkdir -p                   $DESTDIR/$USG
  cp    -a $DATA             $DESTDIR/$USG
  mkdir -p                   $DESTDIR/usr/bin
  echo  -e "$RUN" >          $DESTDIR/usr/bin/stargun
  chmod 755                  $DESTDIR/usr/bin/stargun
 }


./configure \
--prefix=/usr \
--sysconfdir=/etc \
--localstatedir=/var \
$OPTS &&
make  &&
make install DESTDIR=$DESTDIR &&
fix_install
}
