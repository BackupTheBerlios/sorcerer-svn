   VERSION=( "1.0" )
  CATEGORY="game"
 ATTRIBUTE="depreciated x11"
    SOURCE="moon-lander_$VERSION.orig.tar.gz"
# Dave Blood states as of 1-may-2005 he would bring the game backonlie
# but as of 29-aug-2005 he has not updated it
       URL="http://ftp.debian.org/debian/pool/main/m/moon-lander/"
#       URL="http://downloads.daveblood.com/lunar_lander/"
  HOMEPAGE="http://magigames.org/"
       REQ="SDL SDL_mixer SDL_image"
      DESC="moon_lander is a game where you land a spaceship on a pad."

build()  {
  rm  moon-lander.bin
  chmod  -R  u+rwx  *
  chmod  -R  go+rx  *
  sed  -i  "s/usr\/bin/usr\/games/"  install.sh
  make             &&
  prepare_install  &&
  make    install
}
