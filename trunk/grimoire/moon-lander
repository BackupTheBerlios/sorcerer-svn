   VERSION=( "1.0" )
  CATEGORY="game"
 ATTRIBUTE="depreciated x11"
    SOURCE="moon-lander-$VERSION.tar.gz"
       URL="http://downloads.daveblood.com/lunar_lander"
  HOMEPAGE="http://magigames.org"
       REQ="SDL SDL_mixer SDL_image"
      DESC="moon_lander is a game where you land a spaceship on a pad."

build()  {
  rm  moon-lander.bin
  chmod  -R  u+rwx  *
  chmod  -R  go+rx  *
  sed  -i  "s/usr\/bin/usr\/games/"  install.sh
  make             &&
  prepare_install  &&
  make    install
}
