   version stable 20120901
  category immune-system
 attribute archive_off solo stale
      info last 20120901
      info home http://sorcerer.silverice.org/
      desc "login assistance

When logging in a menu of window managers and shells is provided"

build(){
 mkdir  -pvm 755                        $DESTDIR/usr/sbin
 install -vm 644 $SCRIPT_DIR/help-login $DESTDIR/usr/sbin
}
