   version stable 2.5.0.0 2.4.0.0 2.2.0.0 2.1.0.0
   require SDLmm SDL_image SDL_mixer SDL_sound XviD boost bzip2 flac libsigc++-v1.2 lua physfs speex zip
  category game
 attribute x11
    source $SOURCEFORGE_URL asc-hq/ASC%20Source/${VERSION:0:5}/asc-$VERSION.tar.bz2
      info last 20120521
      info home http://www.asc-hq.org/
      desc 'advanced strategic command is a clone of Battle Isle'

build(){
 case $VERSION in
  2.4.0.0) sed -i 's:-lboost_regex:-lboost_regex-mt:' configure ;;
 esac
 export SDL_VIDEODRIVER=dummy
 default_build
}
