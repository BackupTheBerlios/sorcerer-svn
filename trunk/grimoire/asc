# Using boost compiled with newer gcc than asc causes link error
# asc requires updated source to compile otherwise
# must link with a boost also compiled with similar version of gcc.

   version stable 2.5.0.0
   require SDLmm SDL_image SDL_mixer SDL_sound XviD boost bzip2 flac libsigc++-1.2 lua physfs speex zip
#case $VERSION in
# 2.5.0.0)
#   use_gcc gcc-v4.5 ;;
#esac
  category game
 attribute x11
 attribute broke
    source $SOURCEFORGE_URL asc-hq/ASC%20Source/${VERSION:0:5}/asc-$VERSION.tar.bz2
      info omit 20130521
#     info good 20120604
      info last 20120521
      info home http://www.asc-hq.org/
      desc 'advanced strategic command is a clone of Battle Isle'

build(){
 case $VERSION in
  2.4.0.0) sed -i 's:-lboost_regex:-lboost_regex-mt:' configure ;;
 esac
 export SDL_VIDEODRIVER=dummy
 default_build
}
