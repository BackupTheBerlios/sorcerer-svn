# website unreachable 20120713

   version stable 0
   require cabextract fontconfig
  category font
 attribute archive_off data noheal
    source http://fontconfig.org/webfonts/webfonts.tar.gz
   disable scavenge
      desc 'Microsoft TrueType core fonts for the Web'

build(){
DEST=$DESTDIR/usr/share/fonts/X11/TrueType

if [ -f Licen.TXT ]; then
 mkdir -p $DEST
 for  FONT in *.exe
 do   cabextract -L $FONT -d $DEST
 done
 rm     -rf  $DEST/{*.dll,*.inf,*.exe,*.txt}
 mkfontscale $DEST
 cp          $DEST/fonts.scale \
             $DEST/fonts.dir
 mkdir           doc
 mv    Licen.TXT doc
else false
fi
}

post_install(){ /usr/bin/fc-cache -fv; }
