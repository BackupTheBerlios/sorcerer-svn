# website unreachable 20120713

with version stable 20101217
with base    cabextract fontconfig
with role    font
with trait   archive_off data noheal
#   source http://fontconfig.org/webfonts/webfonts.tar.gz
with source  http://www.freedesktop.org/software/fontconfig/webfonts/webfonts.tar.gz
with info    good 20120716
with info    last 20101217
   disable scavenge
with info    cite 'Microsoft TrueType core fonts for the Web'

build(){
DEST=$DESTDIR/usr/share/fonts/X11/TrueType

if [ -f Licen.TXT ]; then
 mkdir -pvm 755 $DEST
 for  FONT in *.exe
 do   cabextract -L $FONT -d $DEST
 done
 rm     -rf  $DEST/{*.dll,*.inf,*.exe,*.txt}
 mkfontscale $DEST
 cp          $DEST/fonts.scale \
             $DEST/fonts.dir
 mkdir -pvm 755  doc
 mv    Licen.TXT doc
else false
fi
}

post_install(){ /usr/bin/fc-cache -fv; }
