   version stable 1.13 1.12
   require imake
  category audio/codec audio/library
 attribute library makej
 attribute multilib-fail
    source http://www.ladspa.org/download/ladspa_sdk_$VERSION.tgz
      info good 20120615
      info last 20071106
      info home http://www.ladspa.org/
      desc 'audio processor plugin library'

build(){
 [ -d src ] &&
 cd   src
 sed -i "s:/usr/:$DESTDIR/usr/:
         s:time ::
         s:play :#play :" makefile
 make &&
 make install
}
