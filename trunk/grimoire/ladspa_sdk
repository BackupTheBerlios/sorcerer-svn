  stable 1.13 1.12
  CATEGORY='audio/codec audio/library'
 ATTRIBUTE='library new'
    SOURCE="ladspa_sdk_$VERSION.tgz"
       URL='http://www.ladspa.org/download/'
  HOMEPAGE='http://www.ladspa.org/'
       REQ=''
  ESTIMATE='200'
      DESC="ladspa_sdk is an audio processor plugin library."

build()  {
  cd  src
  sed  -i  "s:/usr/local:/usr:
            s:time ::
            s:play :#play :"  makefile
  make             &&
  prepare_install  &&
  make    install
}
