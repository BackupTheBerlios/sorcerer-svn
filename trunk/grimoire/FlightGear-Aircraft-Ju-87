with info    good 20131011
with version stable 20130712
with role    game game/3d/flightsim
with trait   data x11
with disable scavenge
with source  stable http://mirrors.ibiblio.org/flightgear/ftp/Aircraft-2.12/${SPELL:20}_$VERSION.zip
with info    cite 'additional aircraft for FlightGear'

build(){
 mkdir -pvm 755 "$DESTDIR"/usr/share/flightgear/Aircraft/${SPELL/FlightGear-Aircraft-/} &&
 cp    -av *    "$DESTDIR"/usr/share/flightgear/Aircraft/${SPELL/FlightGear-Aircraft-/}
}
