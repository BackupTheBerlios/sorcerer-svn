    stable 0.73 0.72 0.71 0.70 0.65 0.63 0.62 0.61 0.60
   require MesaLib SDL_net libpng
  optional alsa-lib
  category development/emulator
 attribute x11
    source $SOURCEFORGE_URL dosbox/dosbox/$VERSION/dosbox-$VERSION.tar.gz
  homepage http://dosbox.sourceforge.net
    CFLAGS='-O3'
  CXXFLAGS='-O3'
   LDFLAGS='-Wl,-O1'
  estimate 600
      desc 'dosbox emulates a DOS box.
Good for playing sierra graphical adventure games,
and other 16 bit software such as Ultima Underworld.'

build(){
 case $VERSION in
  0.72) sed -i '1i#include <cstring>
                1i#include <cstdlib>' $( find . -name \*.cpp ) ;;
 esac
 default_build
}
