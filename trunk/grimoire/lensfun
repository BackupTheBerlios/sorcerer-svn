# Download offered by sneaky CGI apparently?

   version   stable 0.2.6
#     opts -DCMAKE_INSTALL_PREFIX=/usr
  category graphic/utility
 attribute hidden library makej x11
    source http://sources.silverice.org/lensfun/$VERSION/lensfun-$VERSION.tar.xz
#   source $SOURCEFORGE_URL lensfun.berlios/lensfun-$VERSION.tar.bz2
#   source http://sourceforge.net/projects/lensfun.berlios/files/lensfun-$VERSION.tar.bz2
      info good 20120725
      info last 20120623
      info home http://lensfun.berlios.de
      info vurl "http://developer.berlios.de/project/showfiles.php?group_id=9034"
      desc 'rectifies defects introduced by photographic equipment'

build(){
 default_build &&
 if   [[ $HOSTTYPE == x86_64   ]]; then
  if  [[ $CFLAGS   =~ -m32     ]]; then mv $DESTDIR/usr/lib{,32}
                                   else mv $DESTDIR/usr/lib{,64}
   if [[ -d $DESTDIR/usr/lib32 ]]; then mv $DESTDIR/usr/lib{32,}; fi
  fi
 fi
}
