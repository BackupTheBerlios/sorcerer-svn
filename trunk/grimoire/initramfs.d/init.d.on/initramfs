#!/bin/bash
### BEGIN INIT INFO
# Provides: initramfs
# Required-Stop: $local_fs udev
# Default-Stop: 0 6
# Short-Description: initramfs creates boot filesystems
### END INIT INFO

# Copyright 2007 2008 by Kyle Sallee, all rights reserved.
# for use with Sorcerer only

. /lib/lsb/init-functions

NAME=initramfs
T='	'

update_lilo(){
 find /boot -maxdepth 2 -mindepth 2 -type f -name linux -printf '%h/initrf\t%h/linux\n' |
 while read IRF IMG; do
  grep -q "$IRF" /etc/lilo.conf ||
  sed  -i "s:$IMG$:$IMG\n${T}initrd$T$T=$T$IRF:" /etc/lilo.conf
 done
}

run_lilo(){ sync; /sbin/lilo -P ignore; }

mkinitrf(){
 cat $COMMON
 if   [ -d /boot/isolinux ]
 then find /lib/modules/$1 | cpio -o -H newc --quiet | gzip -1
 else find /lib/modules/$1 | cpio -o -H newc --quiet
 fi
}

every(){
 local KBD L64

 exists(){ while read; do [[ -e $REPLY ]] && echo "$REPLY"; done; }

 if [ -d /usr/share/kbd ]; then
     KBD=/usr/share/kbd
 fi

 if [ -d /lib64 ]; then L64=/lib64; fi

 find /bin /dev /etc /lib $L64 /sbin /usr/lib $KBD |
 sed "\
\,^/dev/pts/,d
\,^/dev/.udev,d
\,^/dev/shm/,d
\,^/etc/[^/]*.old,d
\,^/etc/sorcery/,d
\,^/etc/selinux/,d
\,^/etc/asciidoc/,d
\,^/etc/avahi/,d
\,^/etc/chipcard,d
\,^/etc/courier/,d
\,^/etc/cups/,d
\,^/etc/elvis.default/stubs/,d
\,^/etc/fonts/,d
\,^/etc/gconf/,d
\,^/etc/gdm/,d
\,^/etc/gtk/,d
\,^/etc/httpd/,d
\,^/etc/init.d/log.d/,d
\,^/etc/kde,d
\,^/etc/mono/,d
\,^/etc/mplayer/,d
\,^/etc/mtab,d
\,^/etc/openldap/,d
\,^/etc/ppp/,d
\,^/etc/sane.d/,d
\,^/etc/sound/,d
\,^/etc/squid/,d
\,^/etc/ssh/,d
\,^/etc/xdg/,d
\,^/etc/bootblaze,d
\,^/etc/xml,d
\,^/lib/modules/,d
\,^/lib.*\.la$,d
\,^/lib.*lib.*\.a$,d
\,^/bin/7zCon.sfx$,d
\,^/bin/bashbug$,d
\,^/sbin/mount.ecryptfs$,d
\,^/sbin/mount.smbfs$,d
\,^/sbin/sln$,d
\,^/usr/lib/libcrypto\.so,p
\,^/usr/lib/libssl\.so,p
\,^/usr/lib/engines/,p
\,^/usr/lib,d
1i/init
1i/proc
1i/sys
1i/tmp
1i/usr
1i/usr/lib
1i/usr/lib/engines
1i/usr/share
1i/usr/share/terminfo
1i/usr/share/terminfo/l
1i/usr/share/terminfo/l/linux" | exists
}

initrf_update(){
 local      COMMON="/tmp/initrf.common.$$$RANDOM.new"
 echo -n > $COMMON
 chmod 600 $COMMON

 if   [ -d /boot/isolinux ]
 then every | cpio -o -H newc --quiet | gzip -9 > $COMMON
 else every | cpio -o -H newc --quiet           > $COMMON
 fi

 update_lilo

 find /boot -maxdepth 2 -mindepth 2 -type f -name linux -printf '%h\n' |
 cut -d / -f3 |
 while read; do
  echo -n         > /boot/$REPLY/initrf
  chmod 600         /boot/$REPLY/initrf
  mkinitrf $REPLY > /boot/$REPLY/initrf
 done

 rm -f $COMMON

 run_lilo
}

initrf_present(){
 find /boot -maxdepth 2 -mindepth 2 -type f -name linux -printf '%h\n' |
 while read; do [ -f "$REPLY/initrf" ] || return 1; done
}

initrf_current(){
 IRFL=/var/log/initramfs.log
 DIRS='/bin /etc/bash.d /etc/init.d'
 DIRS+=' /etc/modules.d /etc/networks.d /etc/udev /lib /sbin'
 [ -d /etc/lvm ] && DIRS+=' /etc/lvm'
 [ -d /lib64   ] && DIRS+=' /lib64'

 FILES='/etc/fstab /etc/hostname /etc/inittab'
 FILES+=' /etc/lilo.conf /etc/lilo.conf.head'
 FILES+=' /etc/modprobe.conf /etc/passwd /etc/shadow'

 [ -f /etc/exports    ] && FILES+=' /etc/exports'
 [ -f /etc/mdadm.conf ] && FILES+=' /etc/mdadm.conf'

 IRF=$( find /boot -type f -name initrf -printf '%T@\t%p\n' | sort -g | head -n1 | cut -f2 )
 if [ -z "$IRF" ]; then return 1; fi
 OLD="$( find $DIRS $FILES -type f -newer $IRF | sed '\,/log.d/,d' )"
 if [ -n "$OLD" ]; then
  echo   "$OLD" > $IRFL
  return 1
 else rm -f $IRFL
 fi
}


begin(){
 if   initrf_present &&
      initrf_current
 then return
 elif log_warning_msg "$NAME updating"; initrf_update
 then log_success_msg "$NAME updated"
 else log_failure_msg "$NAME failed"
  if   [ -n "$1" ]
  then sulogin -t 300 &>/dev/console 0</dev/console
  fi
 fi
}

main(){
 if ! [ -d /boot ] ||
      [ -n "$( find /boot -maxdepth 0 -empty )" ]
 then return
 fi
 log_warning_msg "$NAME checking"; begin "$1"
 log_success_msg "$NAME checked"
}

export LC_ALL=C
case $1 in
 stop) main s ;;
    *) main ;;
esac
