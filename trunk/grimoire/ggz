  HOMEPAGE="http://ggz.sourceforge.net"
    OPT[0]="ggz-gtk-client:::for playing games using the gtk+ client"
    OPT[1]="ggz-gnome-client:::for playing games using the gnome client"
    OPT[2]="ggz-kde-client:::for playing games using the kde client"
    OPT[3]="gzz-sdl-games:::for playing ggz games which require SDL"
    OPT[3]="ggz-server:::for running your own game server"
    OPT[4]="ggz-txt-client:::for chatting with the text only client"
