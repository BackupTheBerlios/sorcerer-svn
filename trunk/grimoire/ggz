   version stable 0.0.14.1
   version unstable 0.99.4
      opts --enable-static=no
  category game
 attribute x11
case $SPELL in
    ggz)
  optional ggz-gtk-client   '' '' for playing games using the gtk+ client
  optional ggz-sdl-games    '' '' for playing ggz games which require SDL
  optional ggz-server       '' '' for running your own game server
  optional ggz-txt-client   '' '' for chatting with the text only client

#optional ggz-java        '' '' for games that can be played with a web browser
# java client requires apache ant and jdk to compile
# Just use http://www.ggzcommunity.org/games/applet.php instead
      desc 'GGZ Gaming Zone for online gaming
ggz is the GGZ Gaming Zone (GGZ) is an Internet gaming center.
Players login and sit at tables where they can play 
their favorite games and chat with other players.
GGZ can support multiple rooms with varying skill levels.
This profile also installs documentation for ggz.'
    source http://ftp.ggzgamingzone.org/pub/ggz/ \
            ftp://ftp.ggzgamingzone.org/pub/ggz/ \
           http://ftp.de.ggzgamingzone.org/pub/ggz/ \
           $VERSION/ggz-docs-$VERSION.tar.gz ;;
 libggz)
    source http://ftp.ggzgamingzone.org/pub/ggz/ \
            ftp://ftp.ggzgamingzone.org/pub/ggz/ \
           http://ftp.de.ggzgamingzone.org/pub/ggz/ \
           $VERSION/libggz-$VERSION.tar.gz ;;

      *)
    source http://ftp.ggzgamingzone.org/pub/ggz/ \
            ftp://ftp.ggzgamingzone.org/pub/ggz/ \
           http://ftp.de.ggzgamingzone.org/pub/ggz/ \
           $VERSION/$SPELL-$VERSION.tar.gz ;;
esac
      info home  http://www.ggzgamingzone.org/
      info docs  http://www.ggzgamingzone.org/documentation/
