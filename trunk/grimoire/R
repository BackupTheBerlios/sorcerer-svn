# broke when LAPACK is broke
# what x11 libraries this requires not currently known
# R version 2.13.0 has an install error.

   version stable 2.14.1 2.14.0 2.13.2 2.13.1 2.13.0 2.12.2
   require LAPACK imake jdk libpaper pango tcl tiff tk xorg-cf-files
  category mathematics
 attribute x11
#attribute broke
    source http://cran.stat.ucla.edu/src/base/R-2/R-$VERSION.tar.gz
      info last 20111101
      info home http://www.r-project.org/
      desc 'system for statistical computation and graphics
It consists of a language plus a run-time environment with
graphics, a debugger, access to certain system functions,
and the ability to run programs stored in script files.'

build(){
 ./configure \
 --with-lapack='/usr/lib -llapack -lcblas' \
 --with-tcltk &&
 make &&
 make install "DESTDIR=$DESTDIR"
}
