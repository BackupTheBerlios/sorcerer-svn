   VERSION=( 2.7.1 2.7.0 2.6.2 2.6.1 2.6.0 2.5.1 2.5.0 2.4.1 2.4.0 )
    IGNORE='latest'
  CATEGORY='utility/math'
 ATTRIBUTE='new x11'
    SOURCE="R-$VERSION.tar.gz"
       URL='http://cran.stat.ucla.edu/src/base/R-2/'
  HOMEPAGE='http://www.r-project.org'
       REQ='LAPACK tcl'
# what x11 libraries this requires not currently known
  ESTIMATE='3427'
      DESC='R is a system for statistical computation and graphics.
It consists of a language plus a run-time environment with
graphics, a debugger, access to certain system functions,
and the ability to run programs stored in script files.'

build(){
 ./configure \
 --with-lapack='/usr/lib -llapack -lcblas' \
 --with-tcltk    &&
 make            &&
 prepare_install &&
 make    install
}
