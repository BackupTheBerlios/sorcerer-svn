with version stable 0.9
with role    video/dvd video/player
with trait   data
with source  stable $MPLAYER_URL skins/${SPELL:13}-$VERSION.tar.bz2
with fill    MPlayer-Skin

build(){
 BASE=$( basename $BUILD_DIR )
 SKIN="$DESTDIR/usr/share/mplayer/skins/$BASE"
 chmod a+r *
 mkdir -p    "$SKIN"
 cp    -Rv * "$SKIN"
}
