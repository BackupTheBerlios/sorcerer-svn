    stable 0.11.1 0.11.0
   require libogg
      opts --enable-static=no
  category audio/codec audio/library
 attribute library makej multilib-concurrent
    source http://downloads.xiph.org/releases/celt/celt-$VERSION.tar.gz
      info home  http://www.celt-codec.org/
      info docs  http://www.celt-codec.org/docs/
  estimate 600
      desc 'compression algorithm for audio'

build(){
 case $VERSION in
  0.11.*) sed -i 's:$OGG_LIBS -logg:-logg:' configure ;;
 esac
 default_build
}
