   version stable 3.0
   require MesaLib
  category graphic
 attribute libraryx11 x86
    source http://developer.download.nvidia.com/cg/Cg_$VERSION/Cg-${VERSION}_February2011_x86_64.tgz
      info home  http://developer.nvidia.com/cg-toolkit-archive
      desc 'NVIDIA Cg library'

build(){
 cd ..
 if ! [ -d usr ]; then ls; return 1; fi
 chown -R root:root usr
 find usr -type d | xargs -r --max-lines=256 chmod 755
 find usr -type f | xargs -r --max-lines=256 chmod 644
 mkdir -pvm 755 $DESTDIR
 cp -a usr      $DESTDIR/
}
