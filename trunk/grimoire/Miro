   VERSION=( 1.1 1.0 )
  CATEGORY='video/television'
 ATTRIBUTE='x11 new'
    SOURCE="Miro-$VERSION.tar.gz"
       URL='http://ftp.osuosl.org/pub/pculture.org/miro/src/'
  HOMEPAGE='http://www.getmiro.com/'
       REQ='Pyrex boost firefox gnome-python-extras xine-lib'
# python-pysqlite2
  ESTIMATE='1560'
      DESC='Miro is an Internet tv/video player.'

build()  {
  [  -d  platform/gtk-x11  ]  &&
  cd     platform/gtk-x11     &&
  sed    -i  's:boost_python:boost_python-gcc42-mt:'  setup.py  &&
  prepare_install  &&
  python setup.py install
}
