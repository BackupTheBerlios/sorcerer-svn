# Version 1.1 has compile errors.
# Version 1.1.2 has compile errors
# Version 1.2.1 has compile error
#  VERSION=( 1.1.2 1.1 1.0 )
   VERSION=(           1.0 )
  CATEGORY='video/television'
 ATTRIBUTE='x11 new'
    SOURCE="Miro-$VERSION.tar.gz"
       URL='http://ftp.osuosl.org/pub/pculture.org/miro/src/'
  HOMEPAGE='http://www.getmiro.com/'
       REQ='Pyrex boost firefox gnome-python-extras xine-lib'
# python-pysqlite2
  ESTIMATE='1560'
      DESC='Miro is an Internet tv/video player.'

build(){
 sed -i 's:boost_python:boost_python-gcc42-mt:' \
    platform/gtk-x11/setup.py \
#   portable/setup_portable.py
 cd platform/gtk-x11 &&
 prepare_install &&
 python setup.py install
}
