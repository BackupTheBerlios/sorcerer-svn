   version stable 0.7
   require pidgin
  category network/chat
 attribute gnome
    source $SOURCEFORGE_URL gaim-extprefs/Extended%20Preferences/$VERSION/pidgin-extprefs-$VERSION.tar.gz
      info home http://gaim-extprefs.sourceforge.net
      desc 'pidgin-extprefs provides additional configuration for pidgin.
Foremost pidgin-extprefs allows one to increase the default font size.'
