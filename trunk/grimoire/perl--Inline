   VERSION=( "0.44" )
  CATEGORY="perl"
 ATTRIBUTE="perl-module new"
    SOURCE="I/IN/INGY/${SPELL#perl--}-$VERSION.tar.gz"
       URL="http://www.cpan.org/authors/id/"
  HOMEPAGE="http://search.cpan.org/search?dist=Inline"
       REQ="perl--Digest-MD5  perl--Parse-RecDescent"
  ESTIMATE="49"
      DESC="$SPELL allows to write Perl subroutines in other programming languages."

build() {
# Check that below is not some trick to make cpan provide requirements
# instead of properly writing the REQ for this spell!
  yes  |  default_pm_build
}
