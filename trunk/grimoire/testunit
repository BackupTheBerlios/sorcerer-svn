   VERSION=( "0.1.8" )
  CATEGORY="development/interpreter/ruby"
 ATTRIBUTE="library depreciated"

# As of 27-sep-2005: test/unit is now included in the main Ruby distribution

#    SOURCE="testunit-$VERSION.tar.gz"
#       URL="http://www.talbott.ws/testunit/packages/"

# Because it is depriciated it is no longer available from orginal author

    SOURCE="testunit_$VERSION.orig.tar.gz"
       URL="http://ftp.debian.org/debian/pool/main/t/testunit/"

  HOMEPAGE="http://testunit.talbott.ws/"
       REQ="ruby"
      DESC="testunit provides a unit testing framework for Ruby.
Test::Unit is a unit testing framework
for the Ruby programming language."

build() {
prepare_install         &&  
ruby  setup.rb  config  &&
ruby  setup.rb  setup   &&
ruby  setup.rb  install
}
