   VERSION=( 3.0.4 3.0.1 )
  CATEGORY='development'
 ATTRIBUTE='library'
    SOURCE="libffi-$VERSION.tar.gz"
       URL='ftp://sourceware.org/pub/libffi/'
  HOMEPAGE='http://sourceware.org/libffi/'
       REQ=''
      OPTS='--enable-static=no'
  ESTIMATE='200'
      DESC='libffi provides the foreign function interface library'

build(){
 default_build &&
 case $VERSION in
  3.0.1) for file in include/*.h
         do install -vm 644 $file /usr/include
         done ;;
 esac
}
