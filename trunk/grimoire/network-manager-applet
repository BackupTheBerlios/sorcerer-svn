# 0.9.2.0 can not be used while that version of NetworkManager
# is not compiling.

   version   stable 0.9.4.1 0.9.0 0.8.998 0.8.997 0.8.2 0.8.1.999
   version unstable 0.9.4.1 0.9.3.995 0.9.3.990 0.9.2.0 0.9.1.90
   require GConf NetworkManager gnome-bluetooth libgnome-keyring
  category development
 attribute gnome new
    source $GNOME_URL sources/network-manager-applet/${VERSION:0:3}/network-manager-applet-$VERSION.tar.xz
      info last 20120327
      info home http://www.gnome.org
      desc 'applet to manage network connections'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
