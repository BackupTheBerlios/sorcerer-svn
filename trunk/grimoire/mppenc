    stable 1.16 1.15v
   require cmake
  category audio/codec audio/editor
 attribute console
    source mppenc-$VERSION.tar.bz2
       url http://files.musepack.net/source/
      vurl http://www.musepack.net/index.php?pg=src
  homepage http://www.musepack.net/
  estimate 50
  eprovide musepack
      desc 'mppenc provides the musepack audio encoder.'

build(){
cmake .         &&
make            &&
prepare_install &&
make    install &&
mv /usr/local/bin/mppenc /usr/bin/
}
