# This file is customizable.
# For instructions run:
# man xinetd.conf

service kshell
{
	disable		= no
	socket_type	= stream
	protocol	= tcp
	wait		= no
	user		= root
	server		= /usr/libexec/rshd
        server_args	= -k
	per_source	= 4
	log_type	= FILE /var/log/xinetd/kshell
	log_on_success	= PID HOST USERID EXIT DURATION
	log_on_failure	= USERID ATTEMPT
}
