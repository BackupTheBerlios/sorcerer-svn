# This file is customizable.
# For instructions run:
# man xinetd.conf

service pop3
{
	disable		= no
	socket_type	= stream
	protocol	= tcp
	wait		= no
	user		= root
	server		= /usr/libexec/popper
	per_source	= 2
	log_type	= FILE /var/log/xinetd/pop3
	log_on_success	= PID HOST USERID EXIT DURATION
	log_on_failure	= USERID ATTEMPT
}
