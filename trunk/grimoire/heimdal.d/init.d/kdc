#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 510
# Required-Start: $network run
# Required-Stop:  $network
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: kdc serves requests for tickets.
### END INIT INFO

. /lib/lsb/init-functions

PIDF=/var/run/kdc.pid
SERV=/usr/libexec/kdc
NAME=kdc
OPTS=--detach

reload(){
 PIDS="$( pidofproc -p $PIDF $SERV )"
 if   [ -n            "$PIDS" ]
 then kill  -s SIGHUP  $PIDS  &&
      log_success_msg "$NAME configuration reloaded"
 fi
}

parse "$@"
