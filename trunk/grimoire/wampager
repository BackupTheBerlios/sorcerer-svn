    stable 0.9.1 0.9
   require libXpm

  category window-manager
 attribute x11
    source waimea/wampager-$VERSION.tar.gz
       url "$SOURCEFORGE_URL"
  homepage http://waimea.sourceforge.net
  estimate 10
      desc 'wampager is a pager for the waimea desktop manager
Waimea Mini Pager is a dockapp pager for the Waimea window manager.
It provides the user with a good overview of the desktop,
and supports both exact and snapped moving of the viewport,
as well as configurable mouse button bindings.'

build(){
make &&
prepare_install &&
install -svm 755 wampager /usr/bin
}
