    VERSION=( "0.4.2" "0.4.0-rc2" )
#   VERSION=( "0.4.2" "0.4.0-rc2" )
#  VERSION=( "0.4.0-rc2" )
# 0.4.2 has compile errors
    IGNORE="full\|xvidcore\|rc"
  CATEGORY="video"
 ATTRIBUTE="library broken"
    SOURCE="gpac/gpac-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://gpac.sourceforge.net"
       REQ=( "SDL gsm faac faad2 lame libtheora libxml2" 
             "wxWidgets:::for Osmo4 player" )
# circular requirement: ffmpeg - x264 - gpac - ffmpeg, removed ffmpeg req
  ESTIMATE="481"
 FRESHMEAT="gpac"
      DESC="gpac is a multimedia framework based on the MPEG4 systems standard.
GPAC supports many multimedia formats, avi, mpeg, mpeg-4, mov, SVG, etc.
It currently supports local playback, http download and
play and RTP/RTSP streaming over UDP (unicast or multicast) or TCP.
GPAC also features MP4Box, a multimedia swiss-army knife for the prompt."

build()  {

install_headers()  {
  cp  -av  include/gpac  /usr/include/gpac
}

case  $VERSION  in
  0.4.2)  sed  -i  "s:wx-config:wxx-config:"  configure  ;;
# disabling wxWidget support in gpac 0.4.2
esac

export  CFLAGS="$CFLAGS -fPIC"

sed    -i "s:-lGL -lGLU:-lGL -GLU -L /usr/X11R6/lib:
           s:-O3 \$CFLAGS:$CFLAGS \$CFLAGS:"  configure
chmod  +x                                     configure

./configure      \
--prefix=/usr    \
$OPTS            &&
make             &&
prepare_install  &&
make    install  &&
        install_headers 
}
