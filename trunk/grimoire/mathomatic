   version stable 15.8.4
   require readline
  category mathematics
 attribute console hidden
    source http://mathomatic.org/mathomatic-$VERSION.tar.bz2
      info last 20120510
      info home http://www.mathomatic.org/math/
      desc 'command-line CAS and calculator software'

build(){
 make READLINE=1 &&
 make m4install prefix=$DESTDIR/usr &&
 cd primes &&
 make &&
 make install prefix=$DESTDIR/usr &&
 sed -i "s:$DESTDIR::" $DESTDIR/usr/bin/matho
}
