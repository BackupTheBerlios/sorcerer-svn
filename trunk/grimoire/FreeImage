   VERSION=( 3100 393 )
    IGNORE='Win'
  CATEGORY='graphic'
 ATTRIBUTE='library'
    SOURCE="freeimage/FreeImage$VERSION.zip"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://freeimage.sourceforge.net'
       REQ=''
  ESTIMATE='800'
      DESC='FreeImage provides an image loading codecs library'

build()  {
  make                               &&
  make             -f  Makefile.fip  &&
  prepare_install                    &&
  make    install                    &&
  make    install  -f  Makefile.fip
}

