   VERSION=( "1.1.2" )
  CATEGORY="kernel"
 ATTRIBUTE="driver"
    SOURCE="aureal/au88xx-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://aureal.sourceforge.net"
 FRESHMEAT="openaureal"
      DESC="au88xx provides drivers for the Aureal Vortex 2.
This is a fork of Aureal's own soundcard drivers for the Vortex 2,
Vortex 1 and Vortex Advantage (AU8830, AU8820 and AU8810 chips
respectively) with goals of making the drivers more Open Sound System
(OSS) compliant, more stable, and supporting later kernels."


build() {
cd    ../aureal    &&
prepare_install    &&
make    install
}
