   version   stable 3.4.2
   version unstable 3.5.91
   require gnome-icon-theme gnome-icon-theme-symbolic gtk-engines librsvg
  category development
 attribute data gnome
    source   stable $GNOME_URL sources/gnome-themes-standard/${VERSION:0:3}/gnome-themes-standard-$VERSION.tar.xz
    source unstable $GNOME_URL sources/gnome-themes-standard/${VERSION:0:3}/gnome-themes-standard-$VERSION.tar.xz
      info last 20120517
      info home http://www.gnome.org
      desc 'themes for gnome'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
