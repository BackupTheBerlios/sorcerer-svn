with version   stable 3.6.2 3.6.1 3.6.0.2
with version unstable 3.7.5
with base    gnome-icon-theme gnome-icon-theme-symbolic gtk+ gtk-engines librsvg
with role    development
with trait   data gnome
with source    stable $GNOME_URL sources/gnome-themes-standard/${VERSION:0:3}/gnome-themes-standard-$VERSION.tar.xz
with source  unstable $GNOME_URL sources/gnome-themes-standard/${VERSION:0:3}/gnome-themes-standard-$VERSION.tar.xz
with info    last 20121117
with info    home http://www.gnome.org
with info    cite 'themes for gnome'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
