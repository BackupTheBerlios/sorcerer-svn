# Version 4.3 was recommended for compilation of t4-engine
# Nothing else uses premake

   version   stable 4.3
   version unstable 4.4
  category development
 attribute console
    source $SOURCEFORGE_URL premake/Premake/$VERSION/premake-4.3-src.zip
      info last 20111116
      info home http://industriousone.com/premake
      desc 'makefile generation program'

build(){
 cd build/gmake.unix &&
 make &&
 mkdir -pvm 755 $DESTDIR/usr/bin &&
 install -vm 755 ../../bin/release/premake4 $DESTDIR/usr/bin/
}
