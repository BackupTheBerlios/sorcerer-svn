   version stable 0.22.0
#    last 20090627
   require cmake qt-everywhere-opensource
      opts -DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4
      opts -DCMAKE_INSTALL_RPATH:PATH=/opt/kde4/lib:/opt/kde4/lib64
      opts -DCMAKE_SKIP_BUILD_RPATH:BOOL=TRUE
      opts -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=TRUE
      opts -DCMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=TRUE
      opts -DCMAKE_BUILD_TYPE=Release
  category network
 attribute kde4
    source http://cutecom.sourceforge.net/cutecom-$VERSION.tar.gz
      info home  http://cutecom.sourceforge.net/
      desc 'graphical serial terminal or telecommunications program'

build(){
 export PATH="/usr/kde4/bin:$PATH"
 default_build
}
