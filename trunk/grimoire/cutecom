   VERSION=( "0.12.0" )
  CATEGORY="utility networking"
 ATTRIBUTE="gui networking new"
  HOMEPAGE="http://cutecom.sourceforge.net"
    SOURCE=("cutecom-$VERSION.tar.gz")
       URL="http://cutecom.sourceforge.net"
 FRESHMEAT=""
       REQ=( "qt-x11-free" )
  ESTIMATE="25"
      DESC=("CuteCom is a graphical serial terminal,"
"it is like minicom . It is aimed mainly at hardware developers or other
people who need a terminal to talk to their devices.")

fix(){
  sed  -i "s:-I\$(QTDIR)\/include:-I\$(QTDIR)\/include\/qt:" Makefile
}


build(){
   ./configure &&
   fix &&
   export QTDIR="/usr" &&
   make &&
   prepare_install &&
   install cutecom /usr/bin/
}
