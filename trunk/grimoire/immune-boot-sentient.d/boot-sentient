#!/bin/bash
# Copyright 2011 by Kyle Sallee,
# All rights reserved.
# For use with the Sorcerer distribution only.

# boot-sentient automatically starts download and compilation
# of grimoire-sentient on new installations.

main(){
 sleep 60
 augur queue immune-exam-integrity {cast,leech}/grimoire-sentient
 if   grep -q kguest /etc/passwd
 then augur queue immune-auto-login
 fi
 export SORCERY_SYNC=1
 leech
 sleep 30
 cast
}

main &>/dev/null &
exit 0
