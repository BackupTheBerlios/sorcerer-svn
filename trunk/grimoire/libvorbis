# warzone2100 crashes at start due to an audio error
# when libvorbis version 1.2.2 is installed
# Perhaps libvorbis 1.2.2 has an error in it?

    latest 1.2.2
    stable 1.2.0
    secure 1.2.0
   require libogg
  category audio/codec audio/library
 attribute library
    source http://downloads.xiph.org/releases/vorbis/libvorbis-$VERSION.tar.gz
  homepage http://www.xiph.org/ogg/vorbis
      opts --enable-static=no
  estimate 600
      desc 'high-quality lossy audio codec library'

build(){
 if echo $OPTS | grep -q ENABLE_AOTUV; then
  OPTS=${OPTS/ENABLE_AOTUV/}
  patch -p1 < aotuvb5-libvorbis1.1.2.diff
  echo 'patch applied'
 fi
 sed -i 's:-O20 -ffast-math::' configure{,.in}
 default_build
}
