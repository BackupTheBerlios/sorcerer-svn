   version stable 2.8.0 2.6.0
  category game/3d/flightsim
 attribute archive_off data profile x11
   disable scavenge
    source ftp://mirrors.ibiblio.org/pub/mirrors/flightgear/ftp/Scenery-v$VERSION/w160n20.tgz
      desc '3M download --airport=PHNL'

build(){
 mkdir -pm 755 $DESTDIR/usr/share/flightgear/Scenery/
 cp -av * $DESTDIR/usr/share/flightgear/Scenery/
}
