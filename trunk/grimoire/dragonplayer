   VERSION=( 2.0.1 )
  CATEGORY='video/dvd video/player'
 ATTRIBUTE='x11'
    SOURCE="dragonplayer-$VERSION.tar.bz2"
       URL='http://www.dragonplayer.org/'
  HOMEPAGE='http://www.dragonplayer.org/'
       REQ='kdebase-v4 xine-lib'
      OPTS='-DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4
            -DCMAKE_INSTALL_RPATH:PATH=/opt/kde4/lib:/opt/kde4/lib64
            -DCMAKE_SKIP_BUILD_RPATH:BOOL=TRUE
            -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=TRUE
            -DCMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=TRUE
            -DCMAKE_BUILD_TYPE=Release'
  ESTIMATE='200'
      DESC='dragonplayer is a KDE 4 frontend to xine-lib'

build(){
 mkdir build     &&
 cd    build     &&
 cmake $OPTS ..  &&
 make            &&
 prepare_install &&
 make    install
}
