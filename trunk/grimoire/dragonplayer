    stable 2.0.1
   require kdebase-v4 xine-lib
  category video/dvd video/player
 attribute x11
    source dragonplayer-$VERSION.tar.bz2
       url http://www.dragonplayer.org/
  homepage http://www.dragonplayer.org/
      opts -DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4
      opts -DCMAKE_INSTALL_RPATH:PATH=/opt/kde4/lib:/opt/kde4/lib64
      opts -DCMAKE_SKIP_BUILD_RPATH:BOOL=TRUE
      opts -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=TRUE
      opts -DCMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=TRUE
      opts -DCMAKE_BUILD_TYPE=Release
  estimate 200
      desc 'dragonplayer is a KDE 4 frontend to xine-lib'

build(){
 mkdir build     &&
 cd    build     &&
 cmake $OPTS ..  &&
 make            &&
 prepare_install &&
 make    install
}
