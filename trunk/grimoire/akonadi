# akondai requires mysql server support from qt-x11-opensource

    stable 1.1.1 1.0.80 1.0.0
   require boost qt-x11-opensource
    source http://akonadi.omat.nl/akonadi-$VERSION.tar.bz2
  homepage http://pim.kde.org/akonadi/
  category development
 attribute kde4
  estimate 400
      opts -DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4
      opts -DCMAKE_INSTALL_RPATH:PATH=/opt/kde4/lib:/opt/kde4/lib64
      opts -DCMAKE_SKIP_BUILD_RPATH:BOOL=TRUE
      opts -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=TRUE
      opts -DCMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=TRUE
      opts -DCMAKE_BUILD_TYPE=Release
      opts -DBoost_ADDITIONAL_VERSIONS=1.37
      desc 'akonadi is a personal information management framework for KDE 4.1'

build(){
mkdir build     &&
cd    build     &&
cmake $OPTS ..  &&
make            &&
prepare_install &&
make    install
}
