   VERSION=( "2.0.103" )
    IGNORE="dos"
  CATEGORY="cd disk bootloader"
 ATTRIBUTE="console noheal"
    SOURCE="tomsrtbt-$VERSION.tar.gz"
       URL="http://www.tux.org/pub/distributions/tinylinux/tomsrtbt
            http://ftp.sunsite.utk.edu/ftp/pub/mini-linux/tomsrtbt
            http://www.ibiblio.org/pub/Linux/system/recovery
            http://planetmirror.com/pub/tomsrtbt
             ftp://ftp.linux.tucows.com/pub/distributions/mini/tomsrtbt
             ftp://planetmirror.com/pub/tomsrtbt
             ftp://mirror.aarnet.edu.au/pub/tomsrtbt"
  HOMEPAGE="http://www.toms.net/rb"
      DESC="tomsrtbt is a boot/rescue floppy disk.

tomsrtbt is the most Linux on one floppy disk 
for rescue recovery panic and emergencies.
It contains tools to keep in your shirt pockets, 
is useful whenever you can't use a hard drive, 
and contains about 100 rescue tools.
"


build() {
[  -f  tomsrtbt.raw  ]  &&
prepare_install         &&
mkdir  -p     /usr/share/tomsrtbt  &&
cp     -R  *  /usr/share/tomsrtbt
}
