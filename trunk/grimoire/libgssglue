   VERSION=( 0.1 )
  CATEGORY='network'
 ATTRIBUTE='server'
    SOURCE="libgssglue-$VERSION.tar.gz"
       URL='http://www.citi.umich.edu/projects/nfsv4/linux/libgssglue/'
  HOMEPAGE='http://www.citi.umich.edu/projects/nfsv4/linux/'
      OPTS='--enable-static=no'
# --libdir=/lib'
#case $HOSTTYPE in
# x86_64) OPTS+=64 ;;
#esac
  ESTIMATE='300'
      DESC='libgssglue exports a gssapi interface
The gssapi library to use is defined in /etc/gssapi_mech.conf'

build(){
 default_build &&
 install -m 600 doc/gssapi_mech.conf /etc/
}
