   version stable 0.2 0.1
  category network
 attribute server
    source http://www.citi.umich.edu/projects/nfsv4/linux/libgssglue/libgssglue-$VERSION.tar.gz
  homepage http://www.citi.umich.edu/projects/nfsv4/linux/
      opts --enable-static=no
  estimate 300
      desc 'exports a gssapi interface
The gssapi library to use is defined in /etc/gssapi_mech.conf'

build(){
 default_build &&
 mkdir  -pvm 755 $DESTDIR/etc &&
 install -vm 600 doc/gssapi_mech.conf $DESTDIR/etc/
}
