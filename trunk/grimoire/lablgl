   VERSION=( "1.02" )
    IGNORE="2001"
  CATEGORY="graphic"
 ATTRIBUTE="library x11 new broken"
# does not compile
    SOURCE="lablgl-$VERSION.tar.gz"
       URL="http://wwwfun.kurims.kyoto-u.ac.jp/soft/olabl/dist/"
  HOMEPAGE="http://wwwfun.kurims.kyoto-u.ac.jp/soft/olabl/lablgl.html"
       REQ="glut ocaml"
  ESTIMATE="251"
      DESC="labgl is glue for using glut from ocaml."


build()  {
  sed  -i  "s:/usr/local:/usr:"  Makefile.config.ex  \
                              >  Makefile.config
  make    opt      &&
  prepare_install  &&
  make    install
}
