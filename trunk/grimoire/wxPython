#  VERSION=( "2.8.4.0" "2.8.3.0" "2.8.1.1" "2.8.0.2" "2.8.0.1" "2.6.3.3" "2.6.3.2" "2.6.3.0" "2.6.2.1" "2.6.1.0" "2.6.0.1" "2.6.0.0" "2.5.5.1" "2.5.4.1" "2.5.3.1" )
   VERSION=(           "2.8.3.0" "2.8.1.1" "2.8.0.2" "2.8.0.1" "2.6.3.3" "2.6.3.2" "2.6.3.0" "2.6.2.1" "2.6.1.0" "2.6.0.1" "2.6.0.0" "2.5.5.1" "2.5.4.1" "2.5.3.1" )
    IGNORE="^2\.9\.\|^2\.8\.4\.0"
# wxWidgets 2.8.4 has compile error, so did not bother to test wxPython 2.8.4.0
# 2.7.x.x is developmental branch
  CATEGORY="graphic"
 ATTRIBUTE="library python-module x11 new"
    SOURCE="wxpython/wxPython-src-$VERSION.tar.bz2"
  HOMEPAGE="http://wxpython.org"
       URL="$SOURCEFORGE_URL"
case  $VERSION  in
  2.6.3.0)  USE_GCC="gcc-v3.4"  ;;
  2.6.2.*)  USE_GCC="gcc-v3.4"  ;;
esac
       REQ=( "Python gtk+ wxWidgets"
             "SDL_mixer:--with-sdl::to use SDL for audio" )
      OPTS="--enable-unicode --enable-optimise"
  ESTIMATE="7040"
      DESC="wxPython is Python extention module that wraps wxGTK library."

build() {
  grep   -rl              "-O3"  *  |
  xargs  -l64  sed  -i  "s:-O3:-Os:"
  default_build  &&
  cd  wxPython   &&
  python setup.py build_ext install BUILD_GLCANVAS=0 UNICODE=1
}
