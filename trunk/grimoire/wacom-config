  stable 1.0b3
  CATEGORY='input'
 ATTRIBUTE='x11 new'
    SOURCE="wacom-config-${VERSION}.py"
  HOMEPAGE='http://alavaliant.googlepages.com/'
       URL='http://alavaliant.googlepages.com/'
       REQ=( "pygtk linuxwacom"
             "expresskeys:::for controlling express buttons on Intuos3 tablets"
           )
  ESTIMATE='7'
      DESC="$SPELL is GUI tool for configuring wacom tablets
$SPELL configures linuxwacom drivers and the 
expresskeys tool (recomended if you have Intuos3
tablet and want to use the pad on it)." 

build() {
  prepare_install		&&
  install -v -m 0755 $SOURCE_CACHE/$SPELL/$VERSION/${SOURCE[0]}  	\
		/usr/sbin/wacom-config.py
}
