    stable 2.0.2 2.0.1
   require libraw1394

    ignore 'rc'
  category video/library video/digital-camera video/webcam
 attribute library
    source libdc1394/libdc1394-$VERSION.tar.gz
       url "$SOURCEFORGE_URL"
  homepage http://damien.douxchamps.net/ieee1394/libdc1394/
      opts --enable-static=no
  estimate 400
      desc 'libdc1394 is library for controlling IEEE1394 based cameras
that conform to the 1394-based Digital Camera Specification.'

build(){
 case $VERSION in
  2.0.1) sed -i 's:dc1394 examples:dc1394:' Makefile.in ;;
 esac
 default_build
}
