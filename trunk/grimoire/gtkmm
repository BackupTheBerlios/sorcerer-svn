# Maybe nothing uses version 2.99.8
# except gnome-system-monitor 3.0.0

   version   stable 3.4.0
   version unstable 3.5.6 3.5.4
   require atkmm cairomm glibmm gtk+-v3 pangomm
      opts --disable-demos --disable-docs --disable-examples
  category development/binding
 attribute gnome library makej multilib-concurrent
    source $GNOME_URL sources/gtkmm/${VERSION:0:3}/gtkmm-$VERSION.tar.xz
      info last 20120416
      info home http://gtkmm.sourceforge.net/
      desc 'c++ wrapper for the gtk+ library'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
