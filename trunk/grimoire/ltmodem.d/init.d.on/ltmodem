#!/bin/bash

### BEGIN INIT INFO
# Provides: ltmodem
# Required-Start: $local_fs
# Should-Start: udev modprobe
# Required-Stop:  $local_fs
# Default-Start: 2 3 4 5
# Default-Stop: 0 6
# Short-Description: ltmodem starts the winmodem
# Description: ltmodem starts the winmodem
### END INIT INFO

. /lib/lsb/init-functions

NAME='ltmodem'


start()  {
  if   log_warning_msg "$NAME starting"; modprobe ltserial
  then log_success_msg "$NAME started"
  else log_failure_msg "$NAME not started"
  fi
}

stop()   {
  if   log_warning_msg "$NAME stopping"; rmmod ltserial ltmodem
  then log_success_msg "$NAME stopped"
  else log_failure_msg "$NAME not stopped"
  fi
}

help()   {  echo "Usage: $0 {start|stop}" 1>&2;    }

case  $1  in
        start)  start  ;;
         stop)  stop   ;;
  try-restart)  :      ;;
            *)  help   ;;
esac
