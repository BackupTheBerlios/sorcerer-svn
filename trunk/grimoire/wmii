   version stable 3.6 3.5.1 3.1 3
# unstable 3.9a2
   require libixp
  category window-manager
 attribute x11
    source http://dl.suckless.org/wmii/wmii-$VERSION.tar.gz
      info home http://wmii.suckless.org/
     wmbin /usr/bin/wmiiwm
      desc 'customizable low memory x11 window manager
wmii has tabbed, tiled and conventional window management modes.'

build(){
sed -i "s:/usr/local:$DESTDIR/usr:
        s:${PREFIX}/etc:$DESTDIR/etc:" config.mk
make &&
make install
}
