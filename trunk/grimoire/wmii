    stable 3.6 3.5.1 3.1 3
# unstable 3.9a2
   require libixp
  category window-manager
 attribute x11
    source http://suckless.org/download/wmii-$VERSION.tar.gz
  homepage http://wmii.suckless.org/
     wmbin /usr/bin/wmiiwm
  estimate 100
      desc 'customizable low memory x11 window manager
wmii has tabbed, tiled and conventional window management modes.'

build(){
sed -i 's:/usr/local:/usr:
        s:${PREFIX}/etc:/etc:' config.mk
make &&
prepare_install &&
make    install
}
