  stable 0.9.9 0.9.8.1 0.9.8 0.9.7.1 0.9.7 0.9.6 0.9.4a 0.9.4
    IGNORE='python'
  CATEGORY='security/encryption'
 ATTRIBUTE='library'
    SOURCE="mhash/mhash-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
      OPTS='--enable-static=no'
  HOMEPAGE='http://mhash.sourceforge.net'
  ESTIMATE='430'
      DESC='mhash is a free library for hash algorithms
mhash is a thread-safe hash library implemented in C,
and provides a uniform interface to a large number of
hash algorithms (MD5, SHA-1, HAVAL, RIPEMD160, TIGER, GOST).
These algorithms can be used to compute
checksums, message digests, and other signatures.
The HMAC support implements the basics for message
authentication, following RFC 2104.'

build(){
 default_build

# copy missing include
if [ -f include/mutils/mincludes.h ]; then
 cp -av include/mutils/mincludes.h /usr/include/mutils/
fi
}
