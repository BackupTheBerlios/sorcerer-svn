   version stable 1.1.7
   require dbus-glib lame libglade
    source $SOURCEFORGE_URL xvidcap/xvidcap/$VERSION/xvidcap-$VERSION.tar.gz
  category video/dvd
 attribute makej x11
      info good 20120621
      info last 20080713
      info home http://sourceforge.net/projects/xvidcap/
      desc 'screen capture / video capture program'

build(){
 case $VERSION in
  1.1.7) sed -i 's:glib/gtypes.h:glib.h:' src/xvidcap-client-bindings.h
         sed -i 's:glib/gerror.h:glib.h:' src/xvidcap-client-bindings.h
         sed -i 's:glib/gi18n.h:glib.h:'  src/eggtrayicon.c ;;
 esac
 default_build
}
