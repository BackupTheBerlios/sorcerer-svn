with version stable 1.1.7
with base    dbus-glib lame libglade
with source  $SOURCEFORGE_URL xvidcap/xvidcap/$VERSION/xvidcap-$VERSION.tar.gz
with role    video video/record
with trait   makej x11
with trait   broke
#with info    good 20120621
with info    last 20080713
with info    omit 20130713
with info    home http://sourceforge.net/projects/xvidcap/
with info    cite 'screen capture / video capture program'

build(){
 case $VERSION in
  1.1.7) sed -i 's:glib/gtypes.h:glib.h:' src/xvidcap-client-bindings.h
         sed -i 's:glib/gerror.h:glib.h:' src/xvidcap-client-bindings.h
         sed -i 's:glib/gi18n.h:glib.h:'  src/eggtrayicon.c ;;
 esac
 default_build
}
