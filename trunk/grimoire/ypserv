   VERSION=( "2.16" "2.15" "2.14" "2.13" "2.12.1" "2.11" "2.10" )
  CATEGORY="network"
 ATTRIBUTE="server"
    SOURCE="pub/linux/utils/net/NIS/ypserv-$VERSION.tar.bz2"
       URL="$KERNEL_URL"
  HOMEPAGE="http://www.linux-nis.org/nis/ypserv"
       REQ="gdbm"
  ESTIMATE="230"
      DESC="ypserv provides a simple network lookup service consisting of databases and processes.
ypserv provides the Sun Yellow Pages server.
Its purpose is to provide information, that has to be known
throughout the network, to all machines on the network."

build() {
./configure  --prefix=/usr  &&
make                        &&
prepare_install             &&
make    install             &&
install  -m 0755  $SCRIPT_DIR/ypserv.sh     /etc/init.d  &&
install  -m 0755  $SCRIPT_DIR/yppasswdd.sh  /etc/init.d
}
