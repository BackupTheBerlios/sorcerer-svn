# a52dec causes link error:
# ./libavcodec/libavcodec.so: undefined reference to `please_use_av_log'
# ./libavcodec/libavcodec.so: undefined reference to `a52_syncinfo'
#            "a52dec:--enable-gpl --enable-a52 --enable-a52bin:--disable-a52 --disable-a52bin: for a52 digital television codec support"

# There is some unsual overlap between ffmpeg and fftv
# with files installed in /usr/lib/vhook

    stable 0.8.3 0.8.2 0.8.1 0.8.0 0.6.4 0.6.3
   require SDL gtk+ imlib2
  optional faac      --enable-faac --disable-faac for mpeg-2 and NBC/MPEG-4 decoding
  optional faad2     '--enable-gpl --enable-faad --enable-faadbin' '--disable-faad --disable-faadbin' for freeware advanced audio decoder support
  optional lame      --enable-mp3lame --disable-mp3lame for lame mp3 encoding and decoding
  optional libvorbis --enable-vorbis  --disable-vorbis  for vorbis support
  optional lirc      --enable-lirc    ''                to enable lirc remote control support
    ignore '^0\.[0-9][0-9]'
  category video/television
 attribute x11
       url $SOURCEFORGE_URL
    source fftv/fftv-$VERSION.tar.bz2
  homepage http://fftv.sourceforge.net
      opts --enable-pthreads
  estimate 300
      desc 'fftv is a tv viewer for use with TV cards.
It also features a radio interface.
It support recordings of various formats 
and codecs including MPEG, AVI, and Ogg.
It supports remote control if LIRC is installed.'
