# May have optional requirements on gnutls openssl and cyrus-sasl
# Not yet certain how that works.

   version stable 1.1 1.0
   require db curl
  optional cyrus-sasl '' '' for pop3s and imaps support
  optional openssl    '' '' for pop3s and imaps support
      opts --enable-static=no
  category network/email
 attribute library makej multilib-concurrent
    source $SOURCEFORGE_URL libetpan/libetpan/$VERSION/libetpan-$VERSION.tar.gz
      info last  20110718
      info home  http://www.etpan.org/libetpan/index.html
