   VERSION=( "0.9.1" "0.9.0" "0.8.10" "0.8.9" )
  CATEGORY="development"
 ATTRIBUTE="library new"
    SOURCE="libmba-$VERSION.tar.gz"
       URL="http://www.ioplex.com/~miallen/libmba/dl/"
  HOMEPAGE="http://www.ioplex.com/~miallen/libmba/"
  ESTIMATE="79"
      DESC="libmba is a collection of useful C modules.
There are the usual ADTs including a linkedlist, hashmap, 
pool, stack, and varray, a flexible memory allocator, 
CSV parser, path canonicalization routine, 
I18N text abstraction, configuration file module, 
portable semaphores, condition variables, and more."

build() {
sed  -i  "s:-O2:$CFLAGS:
          s:/usr/local:/usr:"  Makefile
make             &&
prepare_install  &&
make    install
}
