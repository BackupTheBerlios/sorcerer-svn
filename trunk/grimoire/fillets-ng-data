with info    last 20130104
with version stable 1.0.1
with role    game/data
with trait   x11
with source  stable $SOURCEFORGE_URL fillets/Fish%20Fillets%20-%20Next%20Generation/$VERSION/fillets-ng-data-$VERSION.tar.gz
with info    home http://fillets.sourceforge.net/
with info    docs http://fillets.sourceforge.net/manual.php
with info    cite 'data for fillets-ng game'

build(){
 install -vm 755 -d "$DESTDIR"/usr/share/games/fillets-ng/ &&
 cp      -rv *      "$DESTDIR"/usr/share/games/fillets-ng/
}
