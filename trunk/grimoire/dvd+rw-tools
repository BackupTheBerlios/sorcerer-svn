   version stable 7.1 7.0 6.1 6.0
   require cdrtools gcc-g++ zlib
  category disk/cd
 attribute console
    source http://fy.chalmers.se/~appro/linux/DVD+RW/tools/dvd+rw-tools-$VERSION.tar.gz
      info home  http://fy.chalmers.se/~appro/linux/DVD+RW/
 freshmeat dvdrw-tools
      desc 'frontend to cdrtools for DVD burning'

build(){
 case $VERSION in
  7.1)  patch -p1 < $SCRIPT_DIR/gcc4.3.patch ;;
 esac

 sed -i "s:/usr/local:$DESTDIR/usr:; s:-O2::" Makefile.m4
 make "CFLAGS=$CFLAGS" "CXXFLAGS=$CXXFLAGS" &&
 make install
}
