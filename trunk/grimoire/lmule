# Version 1.3.1 contains multiple remote vulnerabilities

    stable 1.3.1 1.2.1 1.2.0.1 1.2.0 1.1.13c 1.1.12
   require wxWidgets

  category network/file-share
 attribute client server x11 broke unsafe
# homepage's website is broke, no recent releases
    source lmule/lmule-$VERSION.tar.gz
       url "$SOURCEFORGE_URL"
  homepage http://lmule.sourceforge.net
  estimate 808
      desc 'lmule is a port of the eMule file sharing client/server

lmule is a Linux port of the eMule file sharing
client that uses the wxWindows class library.
It supports downloading, uploading,
searchomg, adding ed2k links, statistics,
a shared files tab, a messages tabs,
and friend management.'


build(){
WXC='--with-wx-config=/usr/bin/wx-config'

./configure          \
--build=$BUILD       \
--prefix=/usr        \
--sysconfdir=/etc    \
--localstatedir=/var \
$WXC                 \
$OPTS                &&
make "CC=gcc $CFLAGS"    \
     "CXX=g++ $CXXFLAGS" &&
prepare_install          &&
make    install
}
