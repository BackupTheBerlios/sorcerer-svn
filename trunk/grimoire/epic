# This might not install properly
# or it might not run properly after it is installed
# 5-1.1.2 does not support DESTDIR install

   version stable 5-1.1.3 5-1.1.2 5-1.1.1 5-1.0
  optional tcl
   require ncurses libarchive openssl ruby
 conflicts epic4
  category network/chat
 attribute console client
    source http://ftp.epicsol.org/ ftp://ftp.epicsol.org/ pub/epic/EPIC5-PRODUCTION/epic$VERSION.tar.bz2
      info last 20120531
      info home http://www.epicsol.org/
      info docs http://help.epicsol.org/
 freshmeat epic
      desc 'the (E)nhanced (P)rogrammable (I)RC-II (C)lient'

build(){
 local RUBY_VER="$( installed_version ruby )"
 export CFLAGS+=" -I/usr/include/ruby-${RUBY_VER:0:5}"
 opts --prefix=$DESTDIR/usr
 default_build
}
