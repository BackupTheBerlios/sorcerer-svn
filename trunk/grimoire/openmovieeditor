    stable 0.0.20080523
   require fltk gavl libquicktime
  optional jackit '' '' for audio output through jack audio mixer

    ignore '200[0-7]'
  category video/editor
 attribute x11
    source openmovieeditor/openmovieeditor-$VERSION.tar.gz
       url "$SOURCEFORGE_URL"
  homepage http://openmovieeditor.sourceforge.net
  estimate 2000
      desc 'openvovieeditor is a free and open source video editing program.'

build(){
 case $VERSION in
   0.0.20080523)
    grep -rl   ffmpeg/avcodec.h *  | xargs -r --max-lines=64 \
    sed  -i 's:ffmpeg/avcodec.h:libavcodec/avcodec.h:'
    grep -rl   ffmpeg/avformat.h * | xargs -r --max-lines=64 \
    sed  -i 's:ffmpeg/avformat.h:libavformat/avformat.h:';;
 esac
 default_build
}
