# 0.8 is supposed to compile and link with kde4
# However, 0.8 does not detect installed kde4
   version stable 0.8.1 0.8 0.6.4
      opts --prefix=/opt/kde4 --with-Qt-dir=/opt/kde4
  category utility/ham
 attribute kde4
 attribute broke
    source $SOURCEFORGE_URL hamfax/hamfax/hamfax-$VERSION.tar.bz2
      info home  http://hamfax.sourceforge.net/
      info docs  http://hamfax.sourceforge.net/Documentation.html
      desc 'gui-app for faxing by hamradio
hamfax is an application for sending and receiving facsimiles in amateur 
radio and for receiving public facsimile broadcasts like weather maps.'

build(){
 local  RATH=$PATH
 local  PATH=/opt/kde4/bin:$RATH
 export PATH
 export PKG_CONFIG_PATH=/opt/kde4/lib/pkgconfig:/usr/lib/pkgconfig
 export Qt4_CFLAGS=/opt/kde4/include
 default_build
}
