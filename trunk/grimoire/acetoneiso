# What part of kde does this require?

   version stable 2.3 2.2.2
   require fuseiso
#      opts -DCMAKE_INSTALL_PREFIX:PATH=/usr
#      opts -DCMAKE_INSTALL_RPATH:PATH=/usr/lib64:/usr/lib
#      opts -DCMAKE_SKIP_BUILD_RPATH:BOOL=TRUE
#      opts -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=TRUE
#      opts -DCMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=TRUE
#      opts -DCMAKE_BUILD_TYPE=Release
 attribute kde4
 attribute broke
  category disk/cd
    source $SOURCEFORGE_URL "acetoneiso/AcetoneISO/AcetoneISO%20$VERSION/acetoneiso_$VERSION.tar.gz"
      info home  http://www.acetoneteam.org/
      desc 'software application to manage CD/DVD images
Using fuseiso, AcetoneISO can mount typical proprietary images formats of
the Windows world such as ISO BIN NRG MDF IMG and do plenty of other things.'

build(){ (
cd acetoneiso
sed -i "s:/usr:$DESTDIR/usr:" acetoneiso.pro
export PATH="/usr/bin:$PATH"
qmake &&
make &&
make install
) }
