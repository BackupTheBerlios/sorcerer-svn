   version stable 3.0.4 3.0.1 3.0.0
   require attr dmapi ncurses xfsprogs
  category disk/file-system
 attribute console makej
    source ftp://oss.sgi.com/projects/xfs/cmd_tars/xfsdump-$VERSION.tar.gz
#   source ftp://oss.sgi.com/projects/xfs/cmd_tars/xfsdump_$VERSION.tar.gz
  homepage http://oss.sgi.com/projects/xfs/
      desc 'dump and restore utilities for XFS filesystems
xfsdump provide dump and restore utilities for XFS,
including extended attribute and DMAPI support.'

build(){
 export OPTIMIZER="$CFLAGS"
 unset              CFLAGS
 export DEBUG=-DNDEBUG
 export DIST_ROOT="$DESTDIR"

 make configure &&
 make &&
 make install install-dev
}
