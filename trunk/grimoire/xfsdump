   VERSION=( "2.2.13" "2.2.3" "2.0.1" )
  CATEGORY="file-system"
 ATTRIBUTE="console"
    SOURCE="xfsdump-$VERSION.src.tar.gz"
       URL="ftp://oss.sgi.com/projects/xfs/download/latest/cmd_tars"
  HOMEPAGE="http://oss.sgi.com/projects/xfs"
       REQ="attr dmapi ncurses"
  EPROVIDE="xfs,dump"
  ESTIMATE="242"
     SHORT="xfsdump provide dump and restore utilities for XFS filesystems."
stream << EOF
xfsdump provide dump and restore utilities for XFS,
including extended attribute and DMAPI support.
EOF


build()  {

  ./configure  --prefix=/usr    \
               $OPTS            &&
  make  "DEBUG="                \
        "LDFLAGS=$LDFLAGS"      &&
  prepare_install               &&
  make    install  install-dev

}
