   version stable 1.4.6 1.4.5 1.4.4 1.4.2
   require util-linux
      opts --enable-static=no
  category network/web
 attribute console library makej multilib-concurrent server
    source $APACHE_URL apr/apr-$VERSION.tar.bz2
      info last 20120216
      info home http://apr.apache.org/
      desc 'apache portable runtime'

build(){
 # oddly it must explicitly be told this instead of using /usr/share/config.site
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then opts --libdir=/usr/lib64
 else opts --libdir=/usr/lib
 fi
 default_build
}
