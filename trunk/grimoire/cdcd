   version stable 0.6.6
   require libcdaudio ncurses readline
  category audio/cd
 attribute console
    source $SOURCEFORGE_URL libcdaudio/cdcd/$VERSION/cdcd-$VERSION.tar.gz
      info good 20120909
      info last 20040404
      info home http://libcdaudio.sourceforge.net/
      desc 'command line CD player'

build(){
 case $VERSION in
  0.6.6) sed -i 81d cmdline.h
         sed -i "1i#include <cdaudio.h>" cmdline.h
         sed -i 's:exit 1:exit 0:' config.sub ;;
 esac
 default_build
}
