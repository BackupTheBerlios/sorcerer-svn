# X may start and quit if at least these fonts are not installed or
# available from a font server.
#            "font-adobe-75dpi:::for font"
#            "font-adobe-utopia-75dpi:::for font"
#            "font-alias:::for font"
#            "font-cursor-misc:::for font"
#            "font-misc-misc:::for font"
