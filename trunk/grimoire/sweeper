   inherit kde-v4
   require kde-runtime
  category utility
    source   stable $KDE_URL   stable/$VERSION/src/${SPELL%-v4}-$VERSION.tar.bz2
    source unstable $KDE_URL unstable/$VERSION/src/${SPELL%-v4}-$VERSION.tar.bz2
      desc 'deletes cached data by kde applications
However, an application such as firefox is not a kde application
and therefore might not have cached files removed by sweeper.'
