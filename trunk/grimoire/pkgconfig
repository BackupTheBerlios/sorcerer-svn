    stable 0.23
   require glib

  category development
 attribute console
    source pkg-config-$VERSION.tar.gz
       url http://pkgconfig.freedesktop.org/releases/
# Make pkg-config search by default both directories: /usr/lib{,64}/pkgconfig
      opts --with-pc-path=/usr/lib/pkgconfig:/usr/lib64/pkgconfig
      opts --with-installed-glib
      opts --enable-shared=yes
      opts --enable-static=no
# pkgconfig at freedesktop.org is now called pkg-config, odd?
  homepage http://www.freedesktop.org/
  estimate 200
 freshmeat pkg-config
      desc 'pkgconfig is a system for managing library compile/link flags that works with automake and autoconf.
pkgconfig is a system for managing library compile/link
flags that works with automake and autoconf.
It replaces the ubiquitous *-config scripts
you may have seen with a single tool.'
