# kdeedu 4.0.0 incompatible with gpsd version 2.36

# boost is an mandatory requirement for kdepimlibs
#            'boost:::for Python scripting'
# boost requires Python
#            'Python:::for Python scripting'

   inherit kde-v4
   require kdelibs-v4 kochi-substitute

  optional eigen     '' '' for kalzium chemical equation solver
  optional facile    '' '' for kalzium chemical equation solver
  optional gnupg     '' '' for verify authenticity of downloaded vocabulary files
  optional indilib   '' '' for kstars
  optional libusb    '' '' to support Apogee USB camera in kstars
  optional ocaml     '' '' for kalzium chemical equation solver
  optional openbabel '' '' for kalzium chemical equation solver

  switch '' --exclude-blinken     for Simon Says game
  switch '' --exclude-doc         for documentation
  switch '' --exclude-kalgebra    for mathematics editor and plotting
  switch '' --exclude-kalzium     for periodic table of elements
  switch '' --exclude-kanagram    for anagram game
  switch '' --exclude-kbruch      for fraction exercise trainer
  switch '' --exclude-kgeography  for geography instruction
  switch '' --exclude-khangman    for word guessing game
  switch '' --exclude-kig         for interactive geometry
  switch '' --exclude-kiten       for Japanese dictionary
  switch '' --exclude-klettres    for learning alphabet
  switch '' --exclude-kmplot      for mathematical function plotter
  switch '' --exclude-kpercentage for mathematic percentage trainer
  switch '' --exclude-kstars      for desktop planetarium
  switch '' --exclude-ktouch      for keyboard input training
  switch '' --exclude-kturtle     for educational programming environment
  switch '' --exclude-kwordquiz   for vocabulary trainer
  switch '' --exclude-marble      for virtual globe
  switch '' --exclude-parley      for vocabulary trainer

 conflicts gpsd
  category educational
  estimate 7000
      desc 'Edutainment programs
kdeedu contains:
keduca		creation and revision of form-based tests and exams.
kgeo		interactive geometry
khangman	hangman game.  The player should guess a word
		letter by letter.
klatin		aims to help revise or learn latin
klettres	helps one to learn french alphabet and to read some
		syllables
kmessedwords	simple mind-training game
kstars		desktop planetarium
ktouch		program for learning touch typing
kvoctrain	vocabulary trainer'

build(){
 case $VERSION in
  4.0.[0-2]) rm -frv kalzium ;;  # because it has a compile error
 esac

 for    DIR in $OPTS; do
  case $DIR in
   --exclude-*) rm -frv "${DIR/--exclude-/}" ;;
  esac
 done

 kde_build
}
