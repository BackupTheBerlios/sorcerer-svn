inherit kde-v4

# kdeedu 4.0.0 incompatible with gpsd version 2.36
CONFLICTS='gpsd'

  CATEGORY='educational'
# boost is an mandatory requirement for kdepimlibs
#            'boost:::for Python scripting'
# boost requires Python
#            'Python:::for Python scripting'
       REQ=( 'kdelibs-v4 kochi-substitute'
             'eigen:::for kalzium chemical equation solver'
             'facile:::for kalzium chemical equation solver'
             'gnupg:::for verify authenticity of downloaded vocabulary files'
             'indilib:::for kstars'
             'libusb:::to support Apogee USB camera in kstars'
             'ocaml:::for kalzium chemical equation solver'
             'openbabel:::for kalzium chemical equation solver'
             '::--exclude-blinken:for Simon Says game'
             '::--exclude-doc:for documentation'
             '::--exclude-kalgebra:for mathematics editor and plotting'
             '::--exclude-kalzium:for periodic table of elements'
             '::--exclude-kanagram:for anagram game'
             '::--exclude-kbruch:for fraction exercise trainer'
             '::--exclude-kgeography:for geography instruction'
             '::--exclude-khangman:for word guessing game'
             '::--exclude-kig:for interactive geometry'
             '::--exclude-kiten:for Japanese dictionary'
             '::--exclude-klettres:for learning alphabet'
             '::--exclude-kmplot:for mathematical function plotter'
             '::--exclude-kpercentage:for mathematic percentage trainer'
             '::--exclude-kstars:for desktop planetarium'
             '::--exclude-ktouch:for keyboard input training'
             '::--exclude-kturtle:for educational programming environment'
             '::--exclude-kwordquiz:for vocabulary trainer'
             '::--exclude-marble:for virtual globe'
             '::--exclude-parley:for vocabulary trainer' )
  ESTIMATE='5500'
 CONFLICTS='kdeedu'
      DESC='kdeedu-v4 contains edutainment programs for KDE
kdeedu contains:
keduca		creation and revision of form-based tests and exams.
kgeo		interactive geometry
khangman	hangman game.  The player should guess a word
		letter by letter.
klatin		aims to help revise or learn latin
klettres	helps one to learn french alphabet and to read some
		syllables
kmessedwords	simple mind-training game
kstars		desktop planetarium
ktouch		program for learning touch typing
kvoctrain	vocabulary trainer'

build(){
 case $VERSION in
  4.0.[0-2]) rm -frv kalzium ;;  # because it has a compile error
 esac

 for    DIR in $OPTS; do
  case $DIR in
   --exclude-*) rm -frv "${DIR/--exclude-/}" ;;
  esac
 done

 kde_build
}
