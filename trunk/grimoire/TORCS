   VERSION=( "1.2.2" "1.2.1" "1.2.0" "1.1.0c" "1.1.0b" )
    IGNORE="\-cars\|-data\|-prog\|-tracks\|-robots"
  CATEGORY="game"
 ATTRIBUTE="x11"
 SOURCE[0]="torcs/TORCS-$VERSION-src.tgz"
# Robots
 SOURCE[1]="torcs/TORCS-$VERSION-src-robots-base.tgz"
 SOURCE[2]="torcs/TORCS-$VERSION-src-robots-berniw.tgz"
 SOURCE[3]="torcs/TORCS-$VERSION-src-robots-K1999.tgz"
 SOURCE[4]="torcs/TORCS-$VERSION-src-robots-astigot.tgz"
 SOURCE[5]="torcs/TORCS-$VERSION-src-robots-billy.tgz"
 SOURCE[6]="torcs/TORCS-$VERSION-src-robots-bt.tgz"
# Data
 SOURCE[7]="torcs/TORCS-$VERSION-data.tgz"
# Roads
 SOURCE[8]="torcs/TORCS-$VERSION-data-tracks-road.tgz"
 SOURCE[9]="torcs/TORCS-$VERSION-data-tracks-oval.tgz"
SOURCE[10]="torcs/TORCS-$VERSION-data-tracks-dirt.tgz"
# Cars
SOURCE[11]="torcs/TORCS-$VERSION-data-cars-extra.tgz"
SOURCE[12]="torcs/TORCS-$VERSION-data-cars-nascar.tgz"
SOURCE[13]="torcs/TORCS-$VERSION-data-cars-Patwo-Design.tgz"
SOURCE[14]="torcs/TORCS-$VERSION-data-cars-kcendra-gt.tgz"
SOURCE[15]="torcs/TORCS-$VERSION-data-cars-kcendra-roadsters.tgz"
SOURCE[16]="torcs/TORCS-$VERSION-data-cars-kcendra-sport.tgz"
SOURCE[17]="torcs/TORCS-$VERSION-data-cars-VM.tgz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://torcs.sourceforge.net"
       REQ="autoconf plib glut libpng"
      OPTS="--bindir=/usr/games"
 FRESHMEAT="torcs"
  ESTIMATE="592"
      DESC="TORCS is a 3D racing cars simulator using OpenGL.

TORCS is a 3D racing cars simulator using OpenGL.
The goal is to have programmed robot drivers 
racing against each others.
However a human can drive by keyboard, mouse, 
joystick, and perhaps steering wheel and pedal.
"


build() {
  USGT=/usr/share/games/torcs
  default_build      &&
  mkdir  -p   $USGT  &&
  cp     -rv  cars  categories  \
              data menu tracks  $USGT
}
