   VERSION=( "1.2.2" "1.2.1" "1.2.0" "1.1.0c" "1.1.0b" )
    IGNORE="\-cars\|-data\|-prog\|-tracks\|-robots"
  CATEGORY="game"
 ATTRIBUTE="broken x11"
# 1.1.10 does not compile with gcc 3.4.3
    SOURCE=( "torcs/TORCS-$VERSION-src.tgz"
             # Robots
             "torcs/TORCS-$VERSION-src-robots-base.tgz"
             "torcs/TORCS-$VERSION-src-robots-berniw.tgz"
             "torcs/TORCS-$VERSION-src-robots-K1999.tgz"
             "torcs/TORCS-$VERSION-src-robots-astigot.tgz"
             "torcs/TORCS-$VERSION-src-robots-billy.tgz"
             "torcs/TORCS-$VERSION-src-robots-bt.tgz"
             # Data
             "torcs/TORCS-$VERSION-data.tgz"
             # Roads
             "torcs/TORCS-$VERSION-data-tracks-road.tgz"
             "torcs/TORCS-$VERSION-data-tracks-oval.tgz"
             "torcs/TORCS-$VERSION-data-tracks-dirt.tgz"
             # Cars
             "torcs/TORCS-$VERSION-data-cars-extra.tgz"
             "torcs/TORCS-$VERSION-data-cars-nascar.tgz"
             "torcs/TORCS-$VERSION-data-cars-Patwo-Design.tgz"
             "torcs/TORCS-$VERSION-data-cars-kcendra-gt.tgz"
             "torcs/TORCS-$VERSION-data-cars-kcendra-roadsters.tgz"
             "torcs/TORCS-$VERSION-data-cars-kcendra-sport.tgz"
             "torcs/TORCS-$VERSION-data-cars-VM.tgz" )
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://torcs.sourceforge.net"
       REQ="autoconf plib glut libpng"
      OPTS="--bindir=/usr/games"
 FRESHMEAT="torcs"
  ESTIMATE="592"
      DESC="TORCS is a 3D racing cars simulator using OpenGL.
The goal is to have programmed robot drivers
racing against each others.
However a human can drive by keyboard, mouse,
joystick, and perhaps steering wheel and pedal."


build() {
  USGT=/usr/share/games/torcs
  default_build      &&
  mkdir  -p   $USGT  &&
  cp     -rv  cars categories data menu tracks  $USGT
}
