    stable 1.3.0 1.2.4
   require libpng plib torcs-openal
    ignore '\-cars\|-data\|-prog\|-tracks\|-robots'
  category game
 attribute x11
       url $SOURCEFORGE_URL
    source torcs/TORCS-$VERSION-src.tgz
             # Robots
    source torcs/TORCS-$VERSION-src-robots-base.tgz
    source torcs/TORCS-$VERSION-src-robots-berniw.tgz
    source torcs/TORCS-$VERSION-src-robots-bt.tgz
    source torcs/TORCS-$VERSION-src-robots-olethros.tgz
             # Data
    source torcs/TORCS-$VERSION-data.tgz
             # Roads
    source torcs/TORCS-$VERSION-data-tracks-dirt.tgz
    source torcs/TORCS-$VERSION-data-tracks-oval.tgz
    source torcs/TORCS-$VERSION-data-tracks-road.tgz
             # Cars
    source torcs/TORCS-$VERSION-data-cars-Patwo-Design.tgz
    source torcs/TORCS-$VERSION-data-cars-VM.tgz
    source torcs/TORCS-$VERSION-data-cars-extra.tgz
    source torcs/TORCS-$VERSION-data-cars-kcendra-gt.tgz
    source torcs/TORCS-$VERSION-data-cars-kcendra-roadsters.tgz
    source torcs/TORCS-$VERSION-data-cars-kcendra-sport.tgz
    source torcs/TORCS-$VERSION-data-cars-nascar.tgz
  homepage http://torcs.sourceforge.net
case $VERSION in
 1.3.0) use_gcc gcc-v4.0 ;;
 1.2.4) use_gcc gcc-v4.0 ;;
esac
#     opts --disable-dependency-tracking
      opts --disable-dependency-tracking --x-libraries=/usr/lib
 freshmeat torcs
  estimate 4300
      desc 'TORCS is a 3D racing cars simulator using OpenGL.
The goal is to have programmed robot drivers
racing against each others.
However a human can drive by keyboard, mouse,
joystick, and perhaps steering wheel and pedal.'


build(){
 export   CFLAGS+=" -I/opt/torcs-openal/include"
 export CXXFLAGS+=" -I/opt/torcs-openal/include"
 export CPPFLAGS="-I/opt/torcs-openal/include"
 export     PATH="/opt/torcs-openal/bin:$PATH"
 export  LDFLAGS+=" -Wl,-rpath,/usr/lib/torcs/lib -Wl,-rpath,/opt/torcs-openal/lib -L/opt/torcs-openal/lib"

 default_build &&
 mkdir -vp                                  /usr/share/games/torcs &&
 cp    -vr cars categories data menu tracks /usr/share/games/torcs
}
