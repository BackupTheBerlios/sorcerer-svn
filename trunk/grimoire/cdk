   version stable 5.0-20090215 5.0-20060507
   require ncurses
  category development
 attribute console library makej multilib-concurrent
    source ftp://invisible-island.net/cdk/cdk-$VERSION.tgz
      info home  http://invisible-island.net/cdk/
      desc 'library of curses widgets similar to dialog'

build(){
 default_build &&
 make cdkshlib            "DESTDIR=$DESTDIR" &&
 make installCDKSHLibrary "DESTDIR=$DESTDIR"
}
