   VERSION=( "5.0-20060507" )
    IGNORE="perl"
  CATEGORY="development"
 ATTRIBUTE="console library new"
    SOURCE="cdk-$VERSION.tgz"
       URL="ftp://invisible-island.net/cdk/"
  HOMEPAGE="http://invisible-island.net/cdk/"
       REQ="ncurses"
  ESTIMATE="1250"
      DESC="cdk is a library of curses widgets similar to dialog."

build()  {
  default_build   &&
  make  cdkshlib  &&
  make  installCDKSHLibrary
}
