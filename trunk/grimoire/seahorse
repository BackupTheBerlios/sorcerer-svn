   version   stable 3.6.0 3.4.1
   require gcr gedit gpgme libnotify libsecret
      opts --disable-gpg-check
  category security/encryption
 attribute x11 gnome
    source $GNOME_URL sources/seahorse/${VERSION:0:3}/seahorse-$VERSION.tar.xz
      info last 20120930
      info home http://seahorse.sourceforge.net
      desc 'GNOME front end for GnuPG
seahorse is a tool for secure communications and data storage.
Data encryption, digital signature creation, and key management
can all be performed through a GNOME-driven GUI.'
