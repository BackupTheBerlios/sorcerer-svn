# # augur history /swscale.h
# 200805111144    ffmpeg  2008-03-22      /usr/include/libswscale/swscale.h
# requires very old version of ffmpeg to compile?

# 2.1.6-dev-r2939 complains about wxWidgets being compiled without opengl support

# aegisub 3.0.3 3.0.1 requires wxWidgets version 2.9.4 or greater

with trait   broke
with info    last 20130703
with version stable 3.0.3 3.0.2 3.0.1
with base    gettext imake libXtst wxWidgets xorg-cf-files
with elect   ffmpeg
with elect   lua '' '' 'to create lua-based effect or write aegis macros'
with elect   openal
with elect   portaudio
with elect   pulseaudio
with role    video/editor
with trait   x11
with source  stable http://ftp.aegisub.org/pub/releases/ http://ftp2.aegisub.org/pub/releases/ aegisub-$VERSION.tar.xz
with info    home http://www.aegisub.org/
with info    docs http://docs.aegisub.org/manual/Main_Page
with info    cite 'subtitle editing program'

build(){
 if   [ -d aegisub-$VERSION ]
 then   cd aegisub-$VERSION
 fi
 if   [ -d aegisub ]
 then   cd aegisub
 fi
 default_build
}
