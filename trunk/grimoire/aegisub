# # augur history /swscale.h
# 200805111144    ffmpeg  2008-03-22      /usr/include/libswscale/swscale.h
# requires very old version of ffmpeg to compile?

# 2.1.6-dev-r2939 complains about wxWidgets being compiled without opengl support

   version stable 3.0.0 2.1.9 2.1.8
   require gettext imake libXtst wxWidgets xorg-cf-files
  optional ffmpeg
  optional lua '' '' 'to create ass-based effect or write aegis macros'
  optional openal
  optional pulseaudio
  category video/editor
 attribute x11
    source http://ftp.aegisub.org/pub/releases/ http://ftp2.aegisub.org/pub/releases/ aegisub-$VERSION.tar.xz
      info last 20120930
      info home http://www.aegisub.org/
      info docs http://docs.aegisub.org/manual/Main_Page
      desc 'subtitle editing program'

build(){
 if   [ -d aegisub-$VERSION ]
 then   cd aegisub-$VERSION
 fi
 if   [ -d aegisub ]
 then   cd aegisub
 fi
 default_build
}
