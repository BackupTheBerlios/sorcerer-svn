   VERSION=( "0.9.1-439" "0.9.0-42" )
  CATEGORY="file-share"
 ATTRIBUTE="console new"
    SOURCE="entropy_rsa-$VERSION.tgz"
       URL="http://entropy.stop1984.com/files"
  HOMEPAGE="http://entropy.stop1984.com/"
       REQ="expat zlib"
  ESTIMATE="75"
      DESC="entropy is faster replacement for freenet distribute file sharing.
Do not run this from /opt/entropy_rsa
Copy it to your home directory and run it as a user after you configure it."

# homepage says not to build with gcc-4.x

case  $VERSION  in
  0.9.1*) REQ="$REQ gcc-v3.4"  ;;
esac

build() {
case  $VERSION  in
  0.9.1*)  GCC3_VER=$( installed_version gcc-v3.4 )
           export  PATH="${PATH/gcc\/current/gcc/$GCC3_VER}"
           export  CCACHE_PATH="/opt/gcc/$GCC3_VER/bin"  ;;
esac

install_entropy_rsa()  {
rm     -rf  include  src  install-sh config*  Makefile*
find   .            |  xargs  -l64  chmod  og-w
find   .  -type  d  |  xargs  -l64  chmod  a+rx
mkdir  -p     /opt/entropy_rsa
cp     -a  *  /opt/entropy_rsa
}

./configure                \
--prefix=/opt/entropy_rsa  &&
make                       &&
prepare_install            &&
        install_entropy_rsa
}
