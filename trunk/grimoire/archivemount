    stable 0.5.3
   require fuse libarchive
  category network/file-share
 attribute console client
    source http://www.cybernoia.de/software/archivemount/archivemount-$VERSION.tar.gz
  homepage http://www.cybernoia.de/software/archivemount/
      desc 'allows mounting cpio, tar.gz, tar.bz2'

build(){
make &&
prepare_install &&
install -vm 755 archivemount /usr/bin
}
