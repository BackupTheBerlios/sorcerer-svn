   VERSION=( 2.18.0 2.4.3 2.4.2 2.4.1 2.4.0 )
    IGNORE="^2\.19.0"
  CATEGORY='db'
 ATTRIBUTE='gnome'
    SOURCE="sources/gnome-mime-data/${VERSION:0:4}/gnome-mime-data-$VERSION.tar.bz2"
  HOMEPAGE='http://www.gnome.org'
       URL="$GNOME_URL"
       REQ='shared-mime-info'
# desktop-file-utils here causes a recursive requirement loop, bad.
#      REQ='desktop-file-utils shared-mime-info'
  ESTIMATE='360'
      DESC="gnome-mime-data contains the base MIME/app database for GNOME2
gnome-mime-data contains the base MIME and Application database for GNOME2.
It is meant to be accessed through the MIME functions in GnomeVFS."

build() {
  sed -i 's:\(pkgconfigdir = $(\)datadir\()/pkgconfig\):\1libdir\2:' Makefile.in

  default_build
}
