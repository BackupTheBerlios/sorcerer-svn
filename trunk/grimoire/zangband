   version stable 2.7.4c 2.7.4b 2.7.4 2.7.2
  optional libXaw    --with-x --disable-x   for x11 graphical interface
  optional gtk+-v1.2 ''       --with-gtk=no for gtk+-v1.2 interface
  optional lesstif   ''       ''            for lesstif support
  optional tk        ''       --with-tk=no  for a tk interface
  sys_user games
  category game
 attribute console x11
    source ftp://ftp.sunet.se/pub/games/Angband/Variant/ZAngband/ \
           ftp://clockwork.dementia.org/angband/Variant/ZAngband/ \
           ftp://ftp.planetmirror.com/pub/angband/Variant/ZAngband/ \
           zangband-$VERSION.tar.gz
      info home http://www.zangband.org/
      desc 'modified angband, single player CRPG
zangband is a modified angband, a single-player
rogue-like dungeon exploration game.'

build(){
./configure \
--prefix=/usr \
--bindir=/usr/bin \
--datadir=/usr/share \
--sysconfdir=/etc \
--localstatedir=/var \
--with-setgid=games  \
$OPTS &&
make &&
mkdir -p $DESTDIR/usr/share/games &&
make install DESTDIR=$DESTDIR
}
