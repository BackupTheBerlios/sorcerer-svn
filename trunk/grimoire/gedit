   version   stable 3.4.2 3.4.1 3.4.0 3.2.6 3.2.0 3.0.0
   require enchant gnome-python-desktop gtksourceview libpeas
  category utility/editor
 attribute gnome
    source $GNOME_URL sources/gedit/${VERSION%.*}/gedit-$VERSION.tar.xz
      info last 20120527
      info home http://gedit.sourceforge.net/
      info docs http://live.gnome.org/Gedit
      desc 'text editor for the GNOME Desktop'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
