   VERSION=( "0.9.3" "0.9.2-fixed" "0.9.1" )
    IGNORE="ster\|transfer\|vc\|autotools"
  CATEGORY="audio/library"
 ATTRIBUTE="library x11"
    SOURCE="dumb/dumb-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://dumb.sourceforge.net"
       REQ="allegro"
  ESTIMATE="130"
 FRESHMEAT="none"
      DESC="dumb is Dedicated Universal Music Bastardisation library."

build() {
touch            make/dumbask
cat  <<  EOF  >  make/config.txt
include make/unix.inc
ALL_TARGETS := core core-examples core-headers
ALL_TARGETS += allegro allegro-examples allegro-headers
PREFIX := /usr
EOF

# ./fix.sh unix                                   &&
make        all  "PREFIX=/usr"  "OFLAGS=$CFLAGS"  &&
prepare_install                                   &&
make    install  "PREFIX=/usr"
}
