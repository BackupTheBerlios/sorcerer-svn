    stable 1.0.22
   require jpeg libXaw
  category utility/terminal-emulator
 attribute x11
       url $SOURCEFORGE_URL
    source ssvnc/ssvnc-$VERSION.src.tar.gz
  homepage http://www.karlrunge.com/x11vnc/ssvnc.html
  estimate 100
      desc 'SSL/SSH VNC viewer'

build(){
 unset LD_PRELOAD
 make &&
 prepare_install &&
 make    install PREFIX=/usr
}

