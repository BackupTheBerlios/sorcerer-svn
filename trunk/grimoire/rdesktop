   VERSION=( 1.6.0 1.5.0 1.4.1 1.4.0 )
    IGNORE='cvs'
  CATEGORY='utility/terminal-emulator'
 ATTRIBUTE='x11'
    SOURCE="rdesktop/rdesktop-$VERSION.tar.gz"
  HOMEPAGE='http://www.rdesktop.org'
       URL="$SOURCEFORGE_URL"
       REQ=( 'libX11'
             'libao:::for audio output using libao audio library'
             'openssl:--with-openssl=/usr::use openssl instead of static own binaries' )
  ESTIMATE='150'
      DESC='rdesktop is used to connect to Windows terminal servers
rdesktop is an open source client for Windows NT Terminal Server and
Windows 2000 Terminal Services, capable of natively speaking Remote
Desktop Protocol (RDP) in order to present the user NT desktop.'

build(){
./configure     \
--prefix=/usr   \
$OPTS           &&
make            &&
prepare_install &&
make    install
}
