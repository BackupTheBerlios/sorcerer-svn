   VERSION=( "0.5.2" )
  CATEGORY="audio/player"
 ATTRIBUTE="console new broken"
    SOURCE="xmmsfind/beepfind-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://xmmsfind.sourceforge.net"
       REQ="bmpx"
  ESTIMATE="14"
      DESC="beepfind is a plugin for bmpx
bmpx plugin provides functionality to find
and play a file in the current play list.
While similar to the built-in 'jump to file'
beepfind is launched by an external command."

build() {
make             &&
prepare_install  &&
make    install
}
