    stable 2.6.8 2.6.6 2.6.5 2.6.4 2.6.3 2.6.2 2.6.0
   require gucharmap enchant fribidi libgnomeprintui wv
  category utility/editor
 attribute gnome
    source http://www.abisource.com/downloads/abiword/latest/source/ http://www.abisource.com/downloads/abiword/$VERSION/source/ abiword-$VERSION.tar.gz
  homepage http://www.abisource.com
  estimate 3800
      desc 'abiword is a word processor.
abiword is a free word processing program similar to Microsoft Word.
It is suitable for typing papers, letter, reports, memos and so forth.'

build(){
 cd abi
 sed -i 's:-static::' src/wp/main/unix/GNUmakefile.am
 ./autogen.sh
 ./configure           \
 --prefix=/usr         \
 --with-libxml2        \
 --with-sys-wv         \
 --disable-peer-config \
 $OPTS                 &&
 make                  &&
 prepare_install       &&
 make    install       &&
 rm -f /usr/bin/AbiWord_s
}
