# homepage missing

   version stable 2.0.1 2.0.0 1.99.0
   require gtk+
  category graphic
 attribute gnome library makej multilib-concurrent x11
    source $GNOME_URL sources/gtkglarea/${VERSION:0:3}/gtkglarea-$VERSION.tar.bz2
# homepage http://www.student.oulu.fi/~jlof/gtkglarea
      desc 'OpenGL/Mesa widget for gtk+
gtkglarea provides a way for gtk+ applications
to have an OpenGL canvas to draw in.
It needs the GL libraries installed with
xfree86 and the gtk+ package, of course...'

build(){
 grep  -rl                       "\-lMesaGL" * |
 xargs -r --max-lines=64 sed -i "s:-lMesaGL:-lGL:g"
 default_build
}
