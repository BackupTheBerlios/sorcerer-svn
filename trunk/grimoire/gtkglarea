  stable 1.99.0
  CATEGORY='graphic'
 ATTRIBUTE='library x11'
    SOURCE="sources/gtkglarea/${VERSION:0:4}/gtkglarea-$VERSION.tar.bz2"
       URL="$GNOME_URL"
# HOMEPAGE='http://www.student.oulu.fi/~jlof/gtkglarea'
       REQ='gtk+'
  ESTIMATE='270'
      DESC="gtkglarea is an OpenGL/Mesa widget for gtk+.
gtkglarea provides a way for gtk+ applications
to have an OpenGL canvas to draw in.
It needs the GL libraries installed with
xfree86 and the gtk+ package, of course..."

build() {
  grep   -rl                 "\-lMesaGL"  *  |
  xargs  -r  --max-lines=64  sed  -i  "s:-lMesaGL:-lGL:g"
  default_build
}
