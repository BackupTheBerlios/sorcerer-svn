   version stable 2.10.2 2.10.1 2.10.0
   require dbus-glib polkit
  category utility
 attribute gnome makej
    source $GNOME_URL sources/system-tools-backends/${VERSION:0:4}/system-tools-backends-$VERSION.tar.bz2
  homepage http://www.gnome.org
      desc 'program for simplifying the configuration of workstations'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
