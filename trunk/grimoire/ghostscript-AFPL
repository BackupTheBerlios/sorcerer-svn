    stable 8.62 8.61 8.60 8.54 8.53 8.52 8.51 8.50 8.15
   require ghostscript-fonts-other ghostscript-fonts-std jpeg zlib
  optional cups       ''       ''          for cups printing support
  optional fontconfig ''       ''          for fontconfig support
  optional libXt      --with-x --without-x for x11 support

    ignore 'gpl'
  category printer
 attribute console x11
    source ghostscript/ghostscript-$VERSION.tar.bz2
       url "$SOURCEFORGE_URL"
  homepage http://www.ghostscript.com
  eprovide ghostscript
 freshmeat aladdinghostscript
  estimate 3800
      desc 'ghostcript-AFPL provides the AFPL version of ghostscript.'

build(){
 ./configure          \
 --build=$BUILD       \
 --prefix=/usr        \
 --sysconfdir=/etc    \
 --localstatedir=/var \
 $OPTS                &&
 make                 &&
 #make  so            &&
 prepare_install      &&
 make    install
 #make  soinstall
}
