   VERSION=( "8.54" "8.53" "8.52" "8.51" "8.50" "8.15" )
  CATEGORY="printer"
 ATTRIBUTE="console x11"
    SOURCE="ghostscript/ghostscript-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://www.ghostscript.com"
       REQ=( "ghostscript-fonts-other ghostscript-fonts-std jpeg zlib"
             "x11:--with-x:--without-x:for x11 support" )
     AVOID="teTeX"
  EPROVIDE="ghostscript"
 FRESHMEAT="aladdinghostscript"
  ESTIMATE="1182"
      DESC="ghostcript-AFPL provides the AFPL version of ghostscript."

build()  {
./configure            \
--build=$BUILD         \
--prefix=/usr          \
--sysconfdir=/etc      \
--localstatedir=/var   \
$OPTS                  &&
make                   &&
#make  so               &&
prepare_install        &&
make    install
#make  soinstall
}
