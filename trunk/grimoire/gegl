    stable 0.1.2 0.1.0 0.0.18 0.0.16 0.0.14 0.0.12
   require babl ffmpeg librsvg openexr
      opts --disable-docs --disable-gtk-doc
  category graphic/library
 attribute library x11
    source ftp://ftp.gtk.org/pub/gegl/${VERSION:0:3}/gegl-$VERSION.tar.bz2
  homepage http://gegl.org/
  estimate 1300
      desc 'generic graphics library
gegl provides a framework for graph based image processing.'

build(){
 case $VERSION in
  0.0.18) sed -i 's:ffmpeg/avformat.h:libavformat/avformat.h:' \
              operations/workshop/external/ff-save.c \
              operations/external/ff-load.c ;;
 esac
 default_build
}
