   VERSION=( 8.11 6.0 )
  CATEGORY='font'
 ATTRIBUTE='data'
    SOURCE="ghostscript-fonts-std-$VERSION.tar.gz"
       URL='http://mirror3.cs.wisc.edu/pub/mirrors/ghost/fonts/'
  EPROVIDE="ghostscript-fonts-other"
  HOMEPAGE='http://www.ghostscript.com'
  ESTIMATE='10'
      DESC="ghostscript-fonts-std provides fonts for ghostscript."

build() {
prepare_install  &&
mkdir    -p             /usr/share/ghostscript/fonts  &&
install  -v  -m 644  *  /usr/share/ghostscript/fonts
}

build_new() {
# symbolic link probably not required
prepare_install  &&
mkdir    -p             /usr/share/ghostscript/fonts  /usr/share/fonts/  &&
install  -v  -m 644  *  /usr/share/ghostscript/fonts                     &&
ln       -s             /usr/share/ghostscript/fonts  /usr/share/fonts/ghostscript
}

