# ghoscript comes with it's own fonts

    stable 8.11 6.0
  category font
 attribute data broke
    source $SOURCEFORGE_URL ghostscript/AFPL%20Ghostscript/8.14/ghostscript-fonts-std-$VERSION.tar.gz
      info home  http://www.ghostscript.com/
      info docs  http://www.ghostscript.com/Documentation.html
      info mail  http://ghostscript.com/mailman/listinfo/
      desc 'fonts for ghostscript'

build(){
 mkdir   -pvm 755   $DESTDIR/usr/share/ghostscript/fonts
 install  -vm 644 * $DESTDIR/usr/share/ghostscript/fonts/
}
