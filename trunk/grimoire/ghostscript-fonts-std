# ghoscript comes with it's own fonts

    stable 8.11 6.0
  category font
 attribute data broke
    source $SOURCEFORGE_URL ghostscript/AFPL%20Ghostscript/8.14/ghostscript-fonts-std-$VERSION.tar.gz
  homepage http://www.ghostscript.com
      desc 'ghostscript-fonts-std provides fonts for ghostscript.'

build(){
mkdir   -p        $DESTDIR/usr/share/ghostscript/fonts &&
install -vm 644 * $DESTDIR/usr/share/ghostscript/fonts
}
