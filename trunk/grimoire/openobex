    stable 1.5 1.3 1.2 1.1
   require libusb-compat
  category network/mobile
 attribute library new
    source http://www.kernel.org/pub/linux/bluetooth/openobex-$VERSION.tar.gz
  homepage http://openobex.triq.net/
      opts --enable-static=no
  estimate 247
      desc 'openobex library provides the Object Exchange (OBEX) protocol'

build(){
 ./configure                 \
  --sysconfdir=/etc          \
  --localstatedir=/var       \
  --prefix=/usr              \
  $OPTS  &&
  make   &&
  make install "DESTDIR=$DESTDIR"
}
