   version stable 20110721
  category immune-system
 attribute daemon
      info home  http://sorcerer.silverice.org/
      desc "installs sentient profile"

build(){
 mkdir  -pvm 755                           $DESTDIR/usr/sbin
 install -vm 700 $SCRIPT_DIR/boot-sentient $DESTDIR/usr/sbin
}

current(){ echo immune-boot-sentient | pipe_queue "$DISPEL_QUEUE"; }
