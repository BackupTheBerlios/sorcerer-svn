   version stable 2.6.0 1.0.1
  category game/3d/flightsim
 attribute archive_off data profile x11
   disable scavenge
    source ftp://mirrors.ibiblio.org/pub/mirrors/flightgear/ftp/Scenery-v$VERSION/SharedModels.tgz
      desc '3D models for the shared scenery objects in FlightGear'

build(){
 mkdir -p $DESTDIR/usr/share/flightgear/Models/
 cp -av * $DESTDIR/usr/share/flightgear/Models/
}
