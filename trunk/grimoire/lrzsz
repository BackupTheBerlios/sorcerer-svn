   VERSION=( 0.12.20 )
  CATEGORY='network/file-share'
 ATTRIBUTE='console'
    SOURCE="lrzsz-$VERSION.tar.gz"
       URL='http://www.ohse.de/uwe/releases/'
      VURL='http://www.ohse.de/uwe/software/lrzsz.html'
  HOMEPAGE='http://www.ohse.de/uwe/software/lrzsz.html'
 FRESHMEAT="lrzsz"
      DESC="lrzsz is a portable and fast implementation of the X/Y/Zmodem protocols."

build() {
FIXES="s:extern char \*strstr();://extern char \*strstr();:g"

sed  -i  "$FIXES"  src/lrz.c
sed  -i  "$FIXES"  src/lsz.c

default_build
}
