    stable 8 7
   require nss_updatedb
  category security/authentication
 attribute library
    source http://www.padl.com/download/pam_ccreds-$VERSION.tar.gz
  homepage http://www.padl.com/OSS/pam_ldap.html
case $HOSTTYPE in
 x86_64) opts --libdir=/lib64 ;;
      *) opts --libdir=/lib ;;
esac
  estimate 100
      desc 'pam_ccreds enables local authetnication when the network is unavailable.'
