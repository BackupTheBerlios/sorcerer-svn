# Not certain if the executable will work since it is linked
# with png and expects png version 12

   version stable 3.2.0 3.1.1
   require libpng
      opts --with-tests=no --disable-sdltest
  category digital-camera
 attribute library makej multilib-concurrent
    source http://fukuchi.org/works/qrencode/qrencode-$VERSION.tar.bz2
      info last 20111201
      info home http://fukuchi.org/works/qrencode/index.en.html
      info mail http://fukuchi.org/mailaddress.en.html
      desc 'C library for encoding data in a QR Code symbol
QR Code Symbol is a kind of 2D symbology that can be scanned
by handy terminals such as a mobile phone with CCD barcode library.'

build(){
 case $VERSION in
  3.1.1) sed -i 's:png12:png14:' configure ;;
 esac
 default_build
}
