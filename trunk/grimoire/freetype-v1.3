   VERSION=( "1.3.1" )
    IGNORE="pre"
  CATEGORY="font"
 ATTRIBUTE="library"
 
    #SOURCE="freetype-$VERSION.tar.gz"
    #   URL="ftp://ftp.freetype.org/freetype/freetype1"
    # As the freetype project has moved to savanna it has broken this download - which anyhow is from 1999
    
    SOURCE="freetype/freetype-$VERSION.tar.gz"
    URL="$SOURCEFORGE_URL"
    
  HOMEPAGE="http://www.freetype.org"



       REQ="gettext x11"
  EPROVIDE="freetype,v1.3"
  ESTIMATE="174"
      DESC="freetype-v1.3 is a free, quality, portable font engine."


build()  {
  sed  -i  "s:##::"  test/ftdump.c
  ./configure  --prefix=/usr    \
               --enable-static  &&
  make                          &&
  prepare_install               &&
  make    install
}
