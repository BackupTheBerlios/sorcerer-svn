   VERSION=( "1.3.1" )
    IGNORE="beta\|dll\|doc\|pre\|^2\.\|^2-"
  CATEGORY="font/library"
 ATTRIBUTE="library"
    SOURCE="freetype/freetype-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
#    SOURCE="freetype-$VERSION.tar.gz"
#       URL="ftp://ftp.freetype.org/freetype/freetype1/"
  HOMEPAGE="http://www.freetype.org/"
       REQ="gettext libSM libX11"
  ESTIMATE="1060"
      DESC="freetype-v1.3 is a free, quality, portable font engine."


build()  {
  sed  -i  "s:##::"  test/ftdump.c
  ./configure      \
  --prefix=/usr    \
  --enable-static  &&
  make             &&
  prepare_install  &&
  make    install
}
