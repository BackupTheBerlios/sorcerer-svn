    stable 1.3.1
   require gettext libSM libX11
  category font/library
 attribute library
       url $SOURCEFORGE_URL
    source freetype/freetype/$VERSION/freetype-$VERSION.tar.bz2
  homepage http://www.freetype.org/
  estimate 1000
      desc 'freetype-v1.3 is a free, quality, portable font engine.'


build(){
sed -i "s:##::" test/ftdump.c
./configure     \
--prefix=/usr   \
--enable-static &&
make            &&
prepare_install &&
make    install
}
