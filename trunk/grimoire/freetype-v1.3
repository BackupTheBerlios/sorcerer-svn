case $HOSTTYPE in
 x86_64)
 attribute broke ;;
esac
    stable 1.3.1
   require gettext libSM libX11
  category font/library
 attribute library
    source $SOURCEFORGE_URL freetype/freetype/$VERSION/freetype-$VERSION.tar.gz
      home http://freetype.sourceforge.net/
      docs http://freetype.sourceforge.net/freetype2/documentation.html
#     mail 'http://freetype.sourceforge.net/developer.html#mailing-lists'
  estimate 300
      desc 'free, quality, portable font engine'

build(){
 sed -i "s:##::" test/ftdump.c
 ./configure      \
  --prefix=/usr   \
  --enable-static &&
 make &&
 make install "DESTDIR=$DESTDIR"
}
