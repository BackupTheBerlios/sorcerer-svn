case $HOSTTYPE in
 x86_64)
 attribute broke ;;
esac
    stable 1.3.1
   require gettext libSM libX11
  category font/library
 attribute library
    source $SOURCEFORGE_URL freetype/freetype/$VERSION/freetype-$VERSION.tar.gz
  homepage http://www.freetype.org/
  estimate 300
      desc 'free, quality, portable font engine'

build(){
sed -i "s:##::" test/ftdump.c
./configure     \
--prefix=/usr   \
--enable-static &&
make &&
make install "DESTDIR=$DESTDIR"
}
