   version stable 1.10
  category font
 attribute gnome data
    source $GNOME_URL sources/ttf-bitstream-vera/$VERSION/ttf-bitstream-vera-$VERSION.tar.bz2
      info home http://www.gnome.org/fonts/
      desc 'additional screen fonts'

build(){
[ -f Vera.ttf ] &&
mkdir  -pv            $DESTDIR/usr/share/fonts/ttf-bitstream-vera &&
install -vm 644 *.ttf $DESTDIR/usr/share/fonts/ttf-bitstream-vera &&
install -vm 644 local.conf $DESTDIR/etc/fonts/
}

post_install(){ fc-cache -fv; }
