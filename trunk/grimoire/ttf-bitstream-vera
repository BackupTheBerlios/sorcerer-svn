    stable 1.10
  category font
 attribute data
       url $GNOME_URL
    source sources/ttf-bitstream-vera/$VERSION/ttf-bitstream-vera-$VERSION.tar.bz2
  homepage http://www.gnome.org/fonts/
  estimate 30
      desc 'ttf-bitstream-vera provides additional screen fonts'

build(){
[ -f  Vera.ttf ] &&
prepare_install  &&
mkdir  -pv            /usr/share/fonts/ttf-bitstream-vera &&
install -vm 644 *.ttf /usr/share/fonts/ttf-bitstream-vera &&
install -vm 644 local.conf /etc/fonts/
}

post_install(){ fc-cache -fv; }
