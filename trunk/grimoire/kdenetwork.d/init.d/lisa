#!/bin/bash

### BEGIN INIT INFO
# Provides: lisa
# Required-Start: $network
# Should-Start: $remote_fs udev xfs
# Required-Stop: kill
# Should-Stop: $remote_fs
# Default-Start: 2 3 4 5
# Default-Stop: 0 6
# Short-Description: lisa provides the LAN Information Server
# Description: lisa provides the LAN Information Server
# LISa is intended to provide a kind of "network neighbourhood"
# but only relying on the TCP/IP protocol stack, no smb or whatever.
### END INIT INFO

. /lib/lsb/init-functions

PIDF=/var/run/lisa.pid
SERV=/usr/bin/lisa
NAME=lisa

status()  {
  PIDS="$( pidofproc -p $PIDF $SERV )"
  if   [ -n "$PIDS" ]; then log_warning_msg "$NAME is running"; return 0
  elif [ -f "$PIDF" ]; then log_warning_msg "$NAME is dead and $PIDF exists"; return 1
                       else log_warning_msg "$NAME is not running"; return 3
  fi
}

start()  {
  log_warning_msg  "$NAME starting"
  if    [  -x                     $SERV  ]  &&
        start_daemon              $SERV -q
#       start_daemon     -p $PIDF $SERV
  then  log_success_msg  "$NAME started"
        pgrep  -n  -P 1 "^lisa$"  >  $PIDF
  else  log_failure_msg  "$NAME not started"
        status
  fi
}

stop()  {
  log_warning_msg "$NAME stopping"
  if    killproc        -p $PIDF -s 15  $SERV
  then  log_success_msg "$NAME stopped"
  else  log_failure_msg "$NAME not stopped"
        status
        return 0
  fi
}

restart() {  stop  &&  sleep  1;  start;  }

try_restart() {
  status  &&  restart
  return 0
}

reload()  {
  if  status;  then
    log_warning_msg "$NAME reloading configuration"
    kill  -1  $(< $PIDF )
    log_success_msg "$NAME reloaded"
  fi
}

help()  {
  echo "Usage: $0 {restart|try-restart|reload|force-reload|start|status|stop}" 1>&2
}

case  $1  in
       restart)      restart  ;;
   try-restart)  try_restart  ;;
  force-reload)      restart  ;;
        reload)  reload       ;;
         start)  start        ;;
        status)  status       ;;
          stop)  stop         ;;
             *)  help         ;;
esac
