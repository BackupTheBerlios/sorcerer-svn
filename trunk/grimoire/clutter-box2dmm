# Disable introspection since introspection is broke with clutter

   version stable 0.9.2
   require cluttermm clutter-box2d
      opts --enable-static=no
case $VERSION in
 0.9.2)
      opts --enable-introspection=no ;;
esac
  category development
 attribute gnome library
 attribute broke
    source $GNOME_URL sources/clutter-box2dmm/${VERSION:0:3}/clutter-box2dmm-$VERSION.tar.bz2
      info home  http://clutter-project.org/
      info docs  http://www.clutter-project.org/documentation
      desc 'clutter-box2dmm'
