    stable 1.3.12 1.3.9 1.2.4a
  category archive
 attribute console solo
       url $GNU_URL
    source gzip/gzip-$VERSION.tar.gz
  homepage http://www.gzip.org
    CFLAGS='-O3'
   LDFLAGS='-Wl,-O1'
   protect /bin/gzip
  estimate 500
      desc 'gzip compresses and decompresses files.
gzip provides excellent compression speed
excellent decompression speed
and substandard compression ratios.'

build(){
 case $VERSION in
  1.3.12) grep  -r -l                       futimens * |
          xargs -r --max-lines=64 sed -i "s/futimens/gl_&/" ;;
 esac

 ./configure    \
 --build=$BUILD \
 --prefix=/usr  \
 --bindir=/bin  &&
 make  "LDFLAGS=$LDFLAGS"     &&
 prepare_install              &&
 make    install bindir=/bin  &&
 ln -sf gzip   /bin/compress  &&
 ln -sf gunzip /bin/uncompress
}
