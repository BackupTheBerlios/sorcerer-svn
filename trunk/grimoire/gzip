   VERSION=( "1.2.4a" )
  CATEGORY="archive"
 ATTRIBUTE="core console solo"
    SOURCE="gzip/gzip-$VERSION"
  HOMEPAGE="http://www.gzip.org"
       URL="$GNU_URL"
  ESTIMATE="95"
      DESC="gzip is a compression utility designed to replace compress.

gzip compresses and decompresses files.
A compression utility designed to replace compress.
Much better compression and freedom from patented 
algorithms are its main advantages over compress.
Gzip decompresses files created by gzip, compress,
or pack; it detects the input format automatically.
"


build()  {

  ./configure  --build=$BUILD   \
               --prefix=/usr    \
               --bindir=/bin    &&
  make  "LDFLAGS=$LDFLAGS"      &&
  prepare_install               &&
  make    install  bindir=/bin  &&
  ln    -sf  gzip        /bin/compress  &&
  ln    -sf  gunzip      /bin/uncompress

}
