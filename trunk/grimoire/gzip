   VERSION=( "1.3.12" "1.3.9" "1.2.4a" )
  CATEGORY="archive"
 ATTRIBUTE="console solo"
    SOURCE="gzip/gzip-$VERSION.tar.gz"
  HOMEPAGE="http://www.gzip.org"
       URL="$GNU_URL"
   PROTECT="/bin/gzip"
  ESTIMATE="500"
      DESC="gzip compresses and decompresses files.
gzip is a compression utility designed to replace compress.
A compression utility designed to replace compress.
Much better compression and freedom from patented 
algorithms are its main advantages over compress.
Gzip decompresses files created by gzip, compress,
or pack; it detects the input format automatically."


build()  {
  case  $VERSION  in
    1.3.12)   grep  -r -l                          futimens  *  |
              xargs -r --max-lines=64  sed  -i  "s/futimens/gl_&/"  ;;
  esac
  ./configure      \
  --build=$BUILD   \
  --prefix=/usr    \
  --bindir=/bin    &&
  make  "LDFLAGS=$LDFLAGS"      &&
  prepare_install               &&
  make    install  bindir=/bin  &&
  ln    -sf  gzip    /bin/compress  &&
  ln    -sf  gunzip  /bin/uncompress
}
