   version stable 1.4 1.3.13
   version secure 1.4
  category archive
 attribute console solo
    source $GNU_URL gzip/gzip-$VERSION.tar.gz
      info home  http://www.gzip.org/
    CFLAGS='-O2'
   LDFLAGS='-Wl,-O1'
   protect /bin/gzip
      desc 'command line utility to compresses and decompresses files
gzip provides excellent compression speed
excellent decompression speed
and substandard compression ratios.'

build(){
 case $VERSION in
  1.3.12) grep  -r -l                       futimens * |
          xargs -r --max-lines=64 sed -i "s/futimens/gl_&/" ;;
 esac

 ./configure   \
 --prefix=/usr \
 --bindir=/bin &&
 make "LDFLAGS=$LDFLAGS" &&
 make install bindir=/bin DESTDIR=$DESTDIR &&
 ln -fs gzip   $DESTDIR/bin/compress &&
 ln -fs gunzip $DESTDIR/bin/uncompress
}
