    stable 1.0.1 1.0.0
   require libSM libXext
    switch --enable-kanji '' for support for Kanji characters EUC-JP or SJIS
    switch --enable-big   '' for support for Chinese characters BIG5
    switch --enable-greek '' for support for greek keyboard
      opts --enable-fading  --enable-ttygid  --enable-utmp  --enable-wtmp
  category utility/terminal-emulator
 attribute x11
    source ftp://ftp.afterstep.org/apps/aterm/aterm-$VERSION.tar.bz2
      info home  http://www.afterstep.org/aterm.php
  estimate 200
      desc 'xterm replacement based on rxvt v.2.4.8.'
