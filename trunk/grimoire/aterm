   VERSION=( "0.4.2" )
    IGNORE="SRL"
  CATEGORY="terminal-emulator"
 ATTRIBUTE="x11"
    SOURCE="aterm/aterm-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://aterm.sourceforge.net"
       REQ=( "x11"
             ":--enable-kanji::for support for Kanji characters (EUC-JP or SJIS)"
             ":--enable-big::for support for Chinese characters (BIG5)"
             ":--enable-greek::for support for greek keyboard" )
      OPTS="--enable-fading  --enable-ttygid  --enable-utmp  --enable-wtmp"
      DESC="aterm is an xterm replacement, based on rxvt v.2.4.8."
