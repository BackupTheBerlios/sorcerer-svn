    stable 0.5.6
   require MesaLib
  category graphic/library
 attribute library makej multilib-concurrent
    source http://cairographics.org/snapshots/glitz-$VERSION.tar.gz
  estimate 700
      desc 'OpenGL image compositing library'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] &&
      [[ $CFLAGS   =~ -m32   ]]
 then opts --x-libraries=/usr/lib
 fi
 default_build
}
