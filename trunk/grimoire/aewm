    stable 1.3.12 1.2.7 1.2.6 1.2.5 1.2.4 1.2.3 1.2.2 1.2.1 1.2.0
# unstable 1.3.12
   require gtk+
  category window-manager
 attribute x11
    source http://www.red-bean.com/decklin/aewm/aewm-$VERSION.tar.bz2
#   source http://www.red-bean.com/~decklin/software/aewm/aewm-$VERSION.tar.gz
  homepage http://www.red-bean.com/~decklin/software/aewm
      vurl http://www.red-bean.com/decklin/aewm/ 
     wmbin /usr/bin/aewm
  estimate 80
      desc 'minimalistic X11 window manager
It has a few nifty features, but is *extremely* 
light on resources and simple in appearance.
aewm codebase includes a few seperate programs to 
handle running programs, switching between windows, etc.'

build(){
make &&
make install XROOT=/usr "DESTDIR=$DESTDIR"
}
