   VERSION=( "1.8.0" "1.6.8" )
    IGNORE="gnome-platform"
  CATEGORY="development"
 ATTRIBUTE="console"
    SOURCE="guile/guile-$VERSION.tar.gz"
  HOMEPAGE="http://www.gnu.org/software/guile"
       URL="$GNU_URL"
       REQ="gmp libtool ncurses readline"
  ESTIMATE="2450"
 FRESHMEAT="guile"
      DESC="guile-v1.8 is a portable, embeddable Scheme implementation.
This installs a somewhat newer guile avaialble in /opt/guile/v1.8"

build()  {
  ./configure              \
  --build=$BUILD           \
  --prefix=/opt/guile/1.8  \
  --sysconfdir=/etc        \
  --localstatedir=/var     \
  $OPTS                    &&
  make                     &&
  prepare_install          &&
  make    install
}
