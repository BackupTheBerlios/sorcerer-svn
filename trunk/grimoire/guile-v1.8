   version stable 1.8.8 1.8.7
      info last  20101213
   require gmp libtool ncurses readline
  category development
 attribute console library makej multilib-dual
    source $GNU_URL guile/guile-$VERSION.tar.gz
      info home  http://www.gnu.org/software/guile/
      info docs  http://www.gnu.org/software/guile/docs/docs.html
      info mail  http://www.gnu.org/software/guile/mail/mail.html
 freshmeat guile
      desc 'portable, embeddable Scheme implementation'

build(){
 case $VERSION in
  1.8.[4-5]) patch -p1 < $SCRIPT_DIR/guile-1.8.4.patch
         grep -rl '\-Werror' * | xargs -r --max-lines=64 sed -i 's:-Werror::'
 ;;
 esac
 ./configure              \
  --prefix=/opt/guile/1.8 \
  --sysconfdir=/etc       \
  --localstatedir=/var    \
  $OPTS &&
 make   &&
 make install DESTDIR=$DESTDIR
}
