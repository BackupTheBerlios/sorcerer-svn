   version stable 1.8.8
   require gmp libtool ncurses readline
      opts --enable-static=no --disable-rpath
      opts --disable-error-on-warning
  category development
 attribute console library makej multilib-dual
    source $GNU_URL guile/guile-$VERSION.tar.gz
      info last 20101213
      info home http://www.gnu.org/software/guile/
      info docs http://www.gnu.org/software/guile/docs/docs.html
      info mail http://www.gnu.org/software/guile/mail/mail.html
 freshmeat guile
      desc 'portable, embeddable Scheme implementation'

build(){
 local LIBDIR
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then opts --libdir=/opt/guile/1.8/lib64 --bindir=/opt/guile/1.8/bin
 else opts --libdir=/opt/guile/1.8/lib   --bindir=/opt/guile/1.8/bin32
 fi

 ./configure              \
  --prefix=/opt/guile/1.8 \
  --sysconfdir=/etc       \
  --localstatedir=/var    \
  --libdir=$LIBDIR        \
  $OPTS &&
 make   &&
 make install DESTDIR=$DESTDIR
}
