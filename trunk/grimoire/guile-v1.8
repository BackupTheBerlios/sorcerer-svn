    stable 1.8.6 1.8.5 1.8.4 1.8.3 1.8.2 1.8.1 1.8.0
   require gmp libtool ncurses readline
  category development
 attribute console
       url $GNU_URL
    source guile/guile-$VERSION.tar.gz
  homepage http://www.gnu.org/software/guile
  estimate 2400
 freshmeat guile
      desc 'guile-v1.8 is a portable, embeddable Scheme implementation.
This installs a somewhat newer guile avaialble in /opt/guile/v1.8'

build(){
 case $VERSION in
  1.8.[4-5]) patch -p1 < $SCRIPT_DIR/guile-1.8.4.patch
         grep -rl '\-Werror' * | xargs -r --max-lines=64 sed -i 's:-Werror::'
 ;;
 esac
 ./configure             \
 --prefix=/opt/guile/1.8 \
 --sysconfdir=/etc       \
 --localstatedir=/var    \
 $OPTS                   &&
 make                    &&
 prepare_install         &&
 make    install
}
