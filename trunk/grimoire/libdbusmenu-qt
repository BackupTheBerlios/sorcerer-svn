    stable 0.7.0 0.3.0
   require qjson
 attribute kde4
  category system
  homepage https://launchpad.net/libdbusmenu-qt
# homepage http://people.canonical.com/~agateau/dbusmenu/
# homepage http://gitorious.org/dbusmenu
#   source http://people.canonical.com/~agateau/dbusmenu/libdbusmenu-qt-$VERSION.tar.bz2
    source "http://launchpad.net/libdbusmenu-qt/trunk/$VERSION/+download/libdbusmenu-qt-$VERSION.tar.bz2"
      opts -DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4
      opts -DCMAKE_INSTALL_RPATH:PATH=/opt/kde4/lib:/opt/kde4/lib64
      opts -DCMAKE_SKIP_BUILD_RPATH:BOOL=TRUE
      opts -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=TRUE
      opts -DCMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=TRUE
      opts -DCMAKE_BUILD_TYPE=Release
  estimate 70
      desc 'library provides a Qt implementation of the DBusMenu spec'

build(){
 export LDFLAGS+=' -L/opt/kde4/lib'
 default_build
}
