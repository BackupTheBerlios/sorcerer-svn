# Does any program require /etc/mime.types?
# The generation of /etc/mime.types might be incomplete
# since it is based only on what shared-mime-info installs


   version stable 1.0
   require glib libxml2 perl--XML-Parser
 attribute archive_off library
#attribute makej multilib-concurrent
  category db
    source http://people.freedesktop.org/~hadess/shared-mime-info-$VERSION.tar.xz
      info good 20120705
      info last 20120131
      info home http://freedesktop.org/wiki/Software/shared-mime-info/
 freshmeat shared-mime
      desc 'the core database of common types'

build(){
 default_build &&
 mkdir -pvm 755 $DESTDIR/etc &&
 sed "s/:\*\./ /" $DESTDIR/usr/share/mime/globs > $DESTDIR/etc/mime.types
}
