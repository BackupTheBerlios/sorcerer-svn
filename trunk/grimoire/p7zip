   VERSION=( "4.14" "4.13" "4.12" )
  CATEGORY="archive"
 ATTRIBUTE="console"
    SOURCE="p7zip/p7zip_${VERSION}_src.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://p7zip.sourceforge.net"
  ESTIMATE="730"
      DESC="p7zip is a command line high compression ratio archiver."

build()  {
sed  -i  "s:-O2:$CFLAGS:"  makefile.linux*
make             &&
prepare_install  &&
install  -m 0755  -o root  -g root  bin/7za  /usr/bin
}
