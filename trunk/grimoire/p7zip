build(){
 make all 7z OPTFLAGS="$CXXFLAGS" &&
 rm -f bin/7za   &&
 make all OPTFLAGS="$CXXFLAGS" &&
 make    install DEST_HOME=$DESTDIR/usr &&
 sed -i "s:$DESTDIR::" $DESTDIR/usr/bin/7z{,a}
}

current(){
 case $VERSION in
  9.13) ! grep -q destdir /usr/bin/7za ;;
 esac
}
