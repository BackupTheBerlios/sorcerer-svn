# 561 fails during install
   version   stable 560
   version unstable 561
  category security/encryption
 attribute library makej
    source   stable $SOURCEFORGE_URL cryptopp/cryptopp/${VERSION:0:1}.${VERSION:1:1}.${VERSION:2:1}/cryptopp$VERSION.zip
    source unstable $SOURCEFORGE_URL cryptopp/cryptopp/${VERSION:0:1}.${VERSION:1:1}.${VERSION:2:1}/cryptopp$VERSION.zip
      info good 20120530
      info last 20100809
      info vurl http://www.cryptopp.com/
      info home http://www.cryptopp.com/
      info docs http://www.cryptopp.com/docs/ref/
      desc 'a C++ class libraries of cryptographic algorithms'

build(){
 sed "s:-DNDEBUG -g -O2:$CXXFLAGS:
      s:-march=native -mtune=native::" GNUmakefile > Makefile
 rm GNUmakefile
 make &&
 make install "PREFIX=$DESTDIR/usr" &&
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then mv $DESTDIR/usr/lib{,64}
 fi
}
