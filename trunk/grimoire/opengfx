   version stable 0.4.3 0.4.1 0.3.7 0.3.5 0.3.4 0.3.3 0.3.2
   require gimp nml
  category game
 attribute x11
    source http://binaries.openttd.org/extra/opengfx/$VERSION/ \
           http://bundles.openttdcoop.org/opengfx/releases/$VERSION/ \
           opengfx-$VERSION-source.tar.gz
      info last 20120219
      info home http://dev.openttdcoop.org/projects/$SPELL
      vurl http://bananas.openttd.org/en/base/
      desc 'data files for use with open transport tycoon deluxe video game'

build(){
 make &&
 mkdir  -pvm 755       $DESTDIR/usr/share/games/openttd/data &&
 install -vm 644 *.grf $DESTDIR/usr/share/games/openttd/data/
}
