# This spell could use development
# The program has good potential for maintaining security
# unless a user gains root and kills ninja faster than ninja
# can kill the offending program.

   version stable 0.1.3 0.1.2 0.1.1
  category utility
 attribute console
    source http://forkbomb.org/ninja/src/ninja-$VERSION.tar.bz2
      info good 20120625
      info home http://forkbomb.org/ninja/
      desc 'privilege escalation detection and prevention system
It will detect and prevent unauthorized users
from gaining then retaining root, maybe.'

build(){
make &&
make install DESTDIR=$DESTDIR/usr/bin MANDIR=$DESTDIR/usr/man/man8
}
