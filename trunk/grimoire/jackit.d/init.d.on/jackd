#!/bin/bash

### BEGIN INIT INFO
# Provides: jackd
# Required-Start: $network empty run
# Required-Stop:  $network
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: jackd starts the jack audio server
# Description: jackd starts and stops the jack audio server
### END INIT INFO

. /lib/lsb/init-functions

PIDF=/var/run/jackd.pid
SERV=/usr/bin/jackd
NAME=jackd
OPTS='-d alsa -M -s'

start(){
 if   log_warning_msg "$NAME starting"; start_daemon -b -p "$PIDF" $SERV $OPTS &>/var/log/jackd.log
 then log_success_msg "$NAME started"
 else log_failure_msg "$NAME not started"; status
 fi
}

parse "$@"
