# version 2.6 used to be available for download, but is now missing

   version   stable 2.5
   version unstable 2.6
   require libxkbfile xkbcomp
      opts --with-xkb-rules-symlink=xorg
 conflicts xkbdata
  category xorg/app
 attribute X11R7 makej x11 makej
    source $XORG_URL data/xkeyboard-config-$VERSION.tar.bz2
      info good 20120713
      info home http://www.freedesktop.org/wiki/Software/XKeyboardConfig
      desc 'Keyboard configuration database'
