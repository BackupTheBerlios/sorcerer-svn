#!/bin/bash

### BEGIN INIT INFO
# Provides: acpid
# Required-Start: $local_fs
# Required-Stop: kill
# Default-Start: 1 2 3 4 5
# Default-Stop: 0 6
# Short-Description: acpid starts the ACPI Event Daemon
# Description: acpid is the ACPI Event Daemon for power management and
#     delivers ACPI events from the kernel to user space.
### END INIT INFO

. /lib/lsb/init-functions

PIDF="/var/run/acpid.pid"
SERV="/usr/sbin/acpid"
NAME="acpid"

ACPI_CMD="/usr/sbin/acpid -c /etc/acpi/events"


status() {
  PIDS="$( pidofproc -p $PIDF $SERV )"
  if   [ -n "$PIDS" ]; then log_warning_msg "$NAME is running"; return 0
  elif [ -f "$PIDF" ]; then log_warning_msg "$NAME is dead and $PIDF exists"; return 1
                       else log_warning_msg "$NAME is not running"; return 3
  fi
}


start()  {
  if    [  -d  /proc/acpi  ]
  then  log_warning_msg "$NAME starting"
  else  log_warning_msg "acpid not started.  Kernel lacks support";  exit 1
  fi

# if    start_daemon  -p  $PIDF  $SERV  -c /etc/acpi/events
  if    start_daemon  -p  $PIDF  $SERV
  then  log_success_msg  "$NAME started"; pgrep "^$SERV$" > $PIDF
  else  log_failure_msg  "$NAME not started"
        status
  fi
}


stop()  {
  log_warning_msg "$NAME stopping"
  if    killproc        -p $PIDF -s 15  $SERV
  then  rm              -f $PIDF
        log_success_msg "$NAME stopped"
  else  log_failure_msg "$NAME not stopped"
        status
        return 0
  fi
}


try_restart()  {
  status  &&  restart
  return 0
}


case "$1" in
        start)  start  ;;
         stop)  stop   ;;
      restart)  stop;  sleep 1;  start;  ;;
  try-restart)
            *)  echo "Usage: $0 {start|stop|try-restart|restart}"  ;;
esac
