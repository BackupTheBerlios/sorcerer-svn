    stable 2.0.0 1.9.0
  category game/3d/flightsim
 attribute archive_off data
  homepage http://flightgear.sourceforge.net
      vurl http://www.flightgear.org/Downloads/source.shtml
    source $FLIGHTGEAR_URL Shared/FlightGear-data-$VERSION.tar.bz2
      desc 'the base files required by FlightGear
FlightGear-data provides the necessary data files
for running FlightGear, flight simulator.'


build(){
 if   [ -d data    ]; then cd data;  fi
 if ! [ -f version ]; then return 1; fi

 find . -type f | xargs --max-lines=64 chmod 0644 2>/dev/null
 find . -type d | xargs --max-lines=64 chmod 0755 2>/dev/null
 mkdir  -p    $DESTDIR/usr/share/FlightGear
 cp     -av * $DESTDIR/usr/share/FlightGear
}
