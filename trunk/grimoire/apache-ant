    SOURCE="apache-ant-$VERSION-src.tar.bz2"
       URL="http://apache.oregonstate.edu/ant/source"
  HOMEPAGE="http://ant.apache.org"
       REQ=""
  ESTIMATE="8"
      DESC="apache-ant is a java based build tool.
In theory, it is kind of like Make, but without Make's wrinkles."

build(){
export JAVA_HOME="/opt/j2sdk/1.4.1-01-linux-i586-gcc3.2/"
export ANT_HOME="/opt/ant/$VERSION"
export PATH=${PATH}:${ANT_HOME}/bin

build.sh -Dbuild.dir="./build" build   &&
prepare_install                        &&
build.sh -Ddist.dir=$ANT_HOME  dist
}
