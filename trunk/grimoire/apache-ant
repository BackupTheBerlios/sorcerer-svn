   version stable 1.8.2-src
   require junit
  category development/interpreter
 attribute console
    source $APACHE_URL ant/source/apache-ant-$VERSION.tar.bz2
      info last  20101220
      info home  http://ant.apache.org/
      info wiki  http://wiki.apache.org/ant/FrontPage
      info docs  http://ant.apache.org/manual/index.html
      desc 'Java based build tool'

build(){
 export ANT_HOME=$DESTDIR/opt/ant
 sh build.sh -Ddist.dir=dist dist &&
 sh build.sh install
}
