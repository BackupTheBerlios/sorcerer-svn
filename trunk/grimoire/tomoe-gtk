# multilib-fail because gucharmap-v2.22 is multilib-fail

   version stable 0.6.0
   require gucharmap-v2.22 tomoe
      opts --enable-static=no
  category input
 attribute library x11
 attribute multilib-fail
    source $SOURCEFORGE_URL tomoe/tomoe-gtk/tomoe-gtk-$VERSION/tomoe-gtk-$VERSION.tar.gz
  homepage http://tomoe.sourceforge.jp/cgi-bin/en/blog/index.rb
 conflicts libtomoe-gtk
  estimate 350
      desc 'handwriting identification library'

build(){
 case $VERSION in
  0.6.0) export PKG_CONFIG_PATH=/opt/gucharmap/2.23/lib/pkgconfig
         sed -i 's:doc bindings::' Makefile.in ;;
 esac
 ./configure \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --prefix=/usr \
 $OPTS &&
 make &&
 make install DESTDIR=$DESTDIR
}
