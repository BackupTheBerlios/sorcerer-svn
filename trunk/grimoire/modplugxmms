  stable 2.05 2.04 2.0
  CATEGORY='audio/codec audio/library'
 ATTRIBUTE='library x11'
    SOURCE="modplug-xmms/modplugxmms-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
