   version stable 0.52
   version secure 0.52
   require ncurses
  category game
 attribute console
    source ftp://ftp.netris.org/pub/netris/netris-$VERSION.tar.gz
  homepage http://www.netris.org/
      desc 'free networked version of T*tris'

build(){
./Configure         \
--copt   "$CFLAGS"  \
--lextra "$LDFLAGS" &&
make &&
mkdir -p $DESTDIR/usr/bin &&
install -vm 755 netris $DESTDIR/usr/bin
}
