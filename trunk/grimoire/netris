    stable 0.52
    secure 0.52
   require ncurses

  category game
 attribute console
    source netris-$VERSION.tar.gz
       url ftp://ftp.netris.org/pub/netris/
  homepage http://www.netris.org/
  estimate 30
      desc 'netris is a free networked version of T*tris'

build(){
 ./Configure         \
 --copt   "$CFLAGS"  \
 --lextra "$LDFLAGS" &&
 make                &&
 prepare_install     &&
 install -vm 755 netris /usr/bin
}
