   VERSION=( "0.4.0" "0.2.0" )
  CATEGORY="window-manager"
 ATTRIBUTE="x11"
    SOURCE="waimea/waimea-$VERSION"
       URL="$SOURCEFORGE_URL"
       REQ="imlib2 freetype"
  HOMEPAGE="http://waimea.sourceforge.net"
     SHORT="waimea is a virtual desktop window manager for X11."
      LONG="
waimea is a virtual desktop window manager for X11 
designed to be fast and highly customizable.
It uses Blackbox image rendering engine 
(Blackbox styles support) and can use Xrender 
extension for rendering fonts (anti-aliased font support).
"
