   VERSION=( "1.0.7" "1.0.6" "1.0.5" "1.0.3" "1.0.1" )
  CATEGORY="utility"
 ATTRIBUTE="console x11"
    SOURCE="genmenu-$VERSION.tar.gz"
       URL="http://gtk.no/archive/genmenu/"
  HOMEPAGE="http://gtk.no/genmenu/"
#      URL="http://projects.gtk.mine.nu/archive/genmenu/"
# HOMEPAGE="http://projects.gtk.mine.nu/genmenu/"
       REQ="bash"
  ESTIMATE="5"
      DESC="genmenu generates menus for x11 window managers.
genmenu can generate menus for:
Blackbox, Fluxbox, Openbox, Window Maker, and Enlightenment
based on the program binaries found installed on a system.
The list of programs to search for are contained within the script.
Users can, to a limited degree, 
customize their menus via a set 
of interactive questions."


build() {
prepare_install  &&
install  -m 755  genmenu  /usr/bin
}
