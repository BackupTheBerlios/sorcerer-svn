# backends (ALSA, PulseAudio, OSS, GStreamer, null)
# --disable-oss recommended by configure
# Optionals on pulseaudio and gstreamer cause recursive requirement loops

# multilib-fail because pulseaudio is also multilib-fail
# however htis creates problem so disable pulseadio support.

    stable 0.26
   require alsa-lib dbus flac gtk+ libXtst libcap libsndfile libvorbis
# optional pulseaudio '' --disable-pulse
# optional gstreamer  '' --disable-gstreamer
      opts --disable-oss
      opts --disable-pulse
  category audio/library
 attribute library makej multilib-concurrent x11
    source http://0pointer.de/lennart/projects/libcanberra/libcanberra-$VERSION.tar.gz
      info home  http://0pointer.de/lennart/projects/libcanberra/
      info docs  'http://0pointer.de/lennart/projects/libcanberra/#documentation'
  estimate 450
      desc 'implements XDG Sound Theme and Name Specification'
