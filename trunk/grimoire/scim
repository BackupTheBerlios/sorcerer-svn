    stable 1.4.7 1.4.6 1.4.5
  optional gtk+ '' '--disable-gtk2-immodule --disable-panel-gtk' for gtk tools and immodule
  category input
 attribute console library x11
       url $SOURCEFORGE_URL
    source scim/scim-$VERSION.tar.gz
  homepage http://www.scim-im.org/
      opts --enable-static=no
  estimate 5500
      desc 'scim is the smart common input method.
it provides a user friendly, full featured input method.'

build(){
 extra_install(){
  ldconfig
  if   [[ -x /usr/bin/gtk-query-immodules-2.0 ]]
  then                gtk-query-immodules-2.0 > /etc/gtk-2.0/gtk.immodules
  fi
  mkdir   -p                      /etc/bash.d/noninteractive
  install -m 755 $SCRIPT_DIR/scim /etc/bash.d/noninteractive
 }

 default_build &&
   extra_install
}

current(){
 case $VERSION in
  1.4.7) [ -f /etc/bash.d/noninteractive/scim ] ;;
 esac
}
