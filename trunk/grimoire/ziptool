# wolfpack not serving files on 20080105
   version stable 1.4.0
  category disk
 attribute console
 attribute broke
#   source ftp://wolfpack.twu.net/users/wolfpack/ ziptool-$VERSION.tar.bz2
      info home http://wolfpack.twu.net/utilities.html#ziptool
      desc 'ziptool contains tools for controlling IOMega JAZ and ZIP drives.
It features locking and unlocking of media (with a password),
ejecting, spinning down drives, mounting, and unmounting.'

build(){
 sed_source(){
  sed -i '\,#include <scsi/scsi.h>,itypedef unsigned char u8;' ziptool.c
 }

 header_patch(){
  local LVER=$( installed_version $( get_provider linux-kernel ) )

  case $LVER in
   2.6.7) sed_source ;;
  esac
}

header_patch

sed -i "s:-O2 -g:$CFLAGS:" Makefile
make &&
make install DESTDIR=$DESTDIR
}
