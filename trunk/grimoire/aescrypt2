   VERSION=( "1.0" "rc1" )
  CATEGORY="encryption"
 ATTRIBUTE="console new"
    SOURCE="aescrypt2-$VERSION.tgz"
       URL="http://www.cr0.net:8040/code/crypto/aes"
  HOMEPAGE="http://www.cr0.net:8040/code/crypto/aes"
  ESTIMATE="7"
      DESC="aescrypt2 is a command line file encryption program.
aescrypt2 features strong 256-bit AES encryption, an integrity
check based on HMAC-SHA256, a stronger password hashing algorithm
that prevents fast dictionnary attacks, and largefile support on
Linux, Solaris, *BSD, and Windows. Please note that version 1.0 
is not compatible with aescrypt2-rc1."


build()  {
  sed  -i  "s:-O:$CFLAGS:"  Makefile
  make  clean
  make             &&
  prepare_install  &&
  install  -o root  -g root  -m 0755  aescrypt2  /usr/bin
}
