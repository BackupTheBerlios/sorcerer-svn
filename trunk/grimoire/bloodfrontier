    stable B2-linux
  category game
 attribute x11
    source $SOURCEFORGE_URL bloodfrontier/Blood%20Frontier/Blood%20Frontier%20Beta%202/bloodfrontier-$VERSION.tar.bz2
  homepage http://www.bloodfrontier.com/
  estimate 600
      desc '3D FPS'

build(){
manual_install(){
cd ..
find data -type f | escape_qs | xargs --max-lines=256 chmod 644
find data -type d | escape_qs | xargs --max-lines=256 chmod 755
mkdir   $DESTDIR/usr/share/
mv data $DESTDIR/usr/share/bloodfrontier
mkdir -vpm 755 $DESTDIR/usr/{bin,libexec}
for file in bin/*;         do install -vm 755 $file $DESTDIR/usr/libexec/; done
for file in $SCRIPT_DIR/*; do install -vm 755 $file $DESTDIR/usr/bin/; done
}

rm -f bin/* &&
cd src &&
rm -rf lib &&
## Will use included enet library
#sed -i 's/client:	libenet/client:	true/
#	s/server:	libenet/server:	true/' Makefile &&
make clean install &&
manual_install
}
