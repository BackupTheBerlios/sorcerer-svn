   VERSION=( 3.5.8 )
  CATEGORY='profile'
 ATTRIBUTE='kde3'
  HOMEPAGE='http://www.kde.org/'
  ESTIMATE='5'
      DESC='kde-path-v3 exports a PATH to where KDE is installed'

build(){
 local DIR=/etc/bash.d/noninteractive
 local DEST=$DIR/PATH-KDE-v3
 local KATH='export PATH+=:/opt/kde3/bin'
 prepare_install
 mkdir -vp       $DIR
 echo  "$KATH" > $DEST
 chmod -vm 0755  $DEST
}
