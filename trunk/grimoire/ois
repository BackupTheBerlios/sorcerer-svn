# odd that this should not work multilib
# insists on -L/usr/lib for reason unknown
# so it will not compile multiarch

   version stable 1.2.0
   require gcc-g++ libX11
  category graphic/library
 attribute library multilib-fail
 attribute broke
    source $SOURCEFORGE_URL wgois/Source%20Release/${VERSION:0:3}/ois_$VERSION.tar.gz
  homepage http://sourceforge.net/projects/wgois/
      desc 'object oriented input system'

build(){
 if    [[ $HOSTTYPE == x86_64 ]]; then
  if   [[ $CFLAGS   =~ -m32   ]]
  then opts --x-libraries=/usr/lib    --host=${MACHTYPE/x86_64/i686} 
  else opts --x-libraries=/usr/lib64
  fi
 else  opts --x-libraries=/usr/lib
 fi
 sh ./bootstrap
#echo "OPTS=$OPTS"
 sed -i '\,/usr/lib/,d' LinuxCB/OIS.cbp
 default_build
}
