   version stable 1-3 1.2.0
   require gcc-g++ libX11
  category graphic/library
 attribute library makej multilib-dual
    source $SOURCEFORGE_URL "wgois/Source%20Release/${VERSION:0:1}.${VERSION:2:1}/ois_v1-3.tar.gz"
      info last 20101219
  homepage http://sourceforge.net/projects/wgois/
      desc 'object oriented input system'

build(){
 sed -i 's: -L/usr/X11R6/lib -lX11::' src/Makefile.am
 sed -i 's:includes demos:includes:' Makefile.am
 sh ./bootstrap
 default_build
}
