   version stable 1.1.1
      info last  20080222
   require gtk+
  category game/board/chess
 attribute x11
    source $SOURCEFORGE_URL eboard/eboard/$VERSION/eboard-$VERSION.tar.bz2
    source $SOURCEFORGE_URL eboard/eboard-extras/pack%201%20patchlevel%202/eboard-extras-1pl2.tar.gz
    source $SOURCEFORGE_URL eboard/eboard-extras/pack%202/eboard-extras-2.tar.gz
      info home  http://www.bergo.eng.br/eboard/
      info docs  'http://www.bergo.eng.br/eboard/index.php?p=5'
      desc 'chess interface for chess engines, FICS, etc.

eboard is a graphic based chess interface.
It provides a chess board interface to ICS
(Internet Chess Servers) like FICS and to
chess engines like GNU Chess, Sjeng and Crafty.'


build(){
 install_extras(){
  cd $1
  ./configure --prefix=$DESTDIR/usr
  make install
  cd -
 }

 sed_makefile(){ sed -i "s:-O6:$CXXFLAGS:" Makefile; }

 ./configure    \
  --prefix=/usr \
  $OPTS         &&
 sed_makefile   &&
 make           &&
 make install "DESTDIR=$DESTDIR" &&
 for DIR in eboard-extras*
 do  install_extras $DIR
 done
}
