    stable 1.1.1 1.1.0 1.0.4 1.0.3 1.0.2 1.0.1 1.0.0
   require gtk+
    ignore 'extras'
  category game/board/chess
 attribute x11
    source eboard/eboard-$VERSION.tar.bz2
    source eboard/eboard-extras-1pl2.tar.gz
    source eboard/eboard-extras-2.tar.gz
# extras-1pl1 and extras-1pl2 are aproximations of extras-1
       url "$SOURCEFORGE_URL"
  homepage http://eboard.sourceforge.net
case $VERSION in
 1.1.0) use_gcc gcc-v4.0 ;;
esac
  estimate 100
      desc 'eboard is a chess interface for chess engines, FICS, etc.

eboard is a graphic based chess interface.
It provides a chess board interface to ICS
(Internet Chess Servers) like FICS and to
chess engines like GNU Chess, Sjeng and Crafty.'


build(){
 install_extras(){
  cd $1
  ./configure --prefix=/usr
  prepare_install &&
  make    install
  cd -
 }

 sed_makefile(){ sed -i "s:-O6:$CXXFLAGS:" Makefile; }

 ./configure      \
 --prefix=/usr    \
 $OPTS            &&
 sed_makefile     &&
 make             &&
 prepare_install  &&
 make    install  &&
 for DIR in eboard-extras*
 do  install_extras $DIR
 done
}
