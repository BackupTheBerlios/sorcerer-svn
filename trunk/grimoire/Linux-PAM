   VERSION=( "0.81" "0.99.2.0" )
# Linux-PAM > 0.81 seems to cause problems with xlock.
  CATEGORY="authentication"
 ATTRIBUTE="library solo"
    SOURCE=( "pub/linux/libs/pam/pre/library/Linux-PAM-$VERSION.tar.bz2" )
#            "pub/linux/libs/pam/pre/library/Linux-PAM-$VERSION-docs.tar.bz2" )
  HOMEPAGE="http://www.kernel.org/pub/linux/libs/pam"
       URL="$KERNEL_URL"
       REQ="db"
      OPTS="--libdir=/lib --enable-read-both-confs"
   PROTECT="/etc/security"
 FRESHMEAT="linux-pam"
  ESTIMATE="596"
      DESC="Linux-PAM provides a flexibile authentication mechanism."

build() {
  unpack ${SOURCE[1]}

  export HAVE_SGML2LATEX=no 
  sed  -i  "s: doc examples::g"      Makefile.in

  for   DIR  in  $(  find  .  -type d  )
  do    touch  $DIR/.ignore_age
  done

  export  ac_cv_lib_crack_FascistCheck=no
  export  HAVE_LIBCRACK=no
  sed  -i  's:CRACKLIB_DICTPATH="":CRACKLIB_DICTPATH="/usr/lib":'  configure

  default_build  
}

