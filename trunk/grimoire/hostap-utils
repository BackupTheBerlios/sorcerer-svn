   version stable 0.4.7 0.4.0
   require wireless_tools
  category network
 attribute console
    source http://hostap.epitest.fi/releases/hostap-utils-$VERSION.tar.gz
      info good 20120609
      info last 20081203
      info home http://hostap.epitest.fi/
      desc 'utility programs for hostap-driver'

build(){
sed -i "s:-O2:$CFLAGS:" Makefile
make &&
mkdir -p $DESTDIR/usr/sbin &&
for FILE in *; do
 if   [ -f $FILE ] &&
      [ -x $FILE ]
 then cp   $FILE $DESTDIR/usr/sbin
 fi
done
}
