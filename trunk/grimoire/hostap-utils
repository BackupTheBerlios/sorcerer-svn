    stable 0.4.7 0.4.0
   require wireless_tools
  category network
 attribute console
    source http://hostap.epitest.fi/releases/hostap-utils-$VERSION.tar.gz
  homepage http://hostap.epitest.fi/
      desc 'hostap-utils provides utility programs for hostap-driver.'

build(){
sed -i "s:-O2:$CFLAGS:" Makefile
make &&
prepare_install &&
for FILE in *; do
 if   [ -f $FILE ] &&
      [ -x $FILE ]
 then cp   $FILE /usr/sbin
 fi
done
}
