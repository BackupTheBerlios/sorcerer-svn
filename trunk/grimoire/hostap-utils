with version stable 0.4.7 0.4.0
with base    wireless_tools
with role    network
with trait   console
with source  http://hostap.epitest.fi/releases/hostap-utils-$VERSION.tar.gz
with info    good 20120609
with info    last 20081203
with info    home http://hostap.epitest.fi/
with info    cite 'utility programs for hostap-driver'

build(){
sed -i "s:-O2:$CFLAGS:" Makefile
make &&
mkdir -p $DESTDIR/usr/sbin &&
for FILE in *; do
 if   [ -f $FILE ] &&
      [ -x $FILE ]
 then cp   $FILE $DESTDIR/usr/sbin
 fi
done
}
