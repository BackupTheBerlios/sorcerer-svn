    stable 0.4.7 0.4.0 0.3.7 0.3.2 0.3.0
   require wireless_tools

  category network
 attribute console
    source hostap-utils-$VERSION.tar.gz
       url http://hostap.epitest.fi/releases/
  homepage http://hostap.epitest.fi/
  estimate 20
      desc 'hostap-utils provides utility programs for hostap-driver.'

build(){
 sed -i "s:-O2:$CFLAGS:" Makefile
 make            &&
 prepare_install &&
 for FILE in *; do
  if   [ -f $FILE ] &&
       [ -x $FILE ]
  then cp   $FILE /usr/sbin
  fi
 done
}
