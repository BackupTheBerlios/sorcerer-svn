   VERSION=( "3.1.0" "3.0.0" )
  CATEGORY="audio audio-editor audio-player"
 ATTRIBUTE="x11 broken"
# neither libassa nor libbonobomm compile which are required for gwavmerger
    SOURCE="gwavmerger/gwavmerger-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://gwavmerger.sourceforge.net"
#      REQ="libassa libgnomeuimm-v2.0 yelp"
       REQ="gtkmm libassa"
# yelp only for style sheets
  ESTIMATE="281"
      DESC="gwavmerger is a memory training tool.
gwavmerger is an interactive memory training tool that
is designed to assist with learning foreign languages.
It helps you to memorize long passages of text."


build() {
DS="DOCBOOK_STYLESHEET=/usr/share/sgml/docbook/yelp/docbook/html/chunk.xsl"

./configure  --build=$BUILD         \
             --prefix=/usr          \
             --sysconfdir=/etc      \
             --localstatedir=/var   \
             $OPTS                  &&
make             $DS                &&
prepare_install                     &&
make    install  $DS
}
