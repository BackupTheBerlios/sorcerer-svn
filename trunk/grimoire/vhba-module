   version stable 20120422 20110915 1.2.1
  category cd
 attribute linux-module
# attribute broke
    source $SOURCEFORGE_URL cdemu/vhba-module/vhba-module-$VERSION.tar.bz2
      info last 20120510
      info home http://cdemu.sourceforge.net/pkg_vhba.php
      desc 'virtual SCSI host bus adapter'

build(){
 # The following sed breaks compilation
 #sed -i 's:CFLAGS:EXTRA_CFLAGS:' Makefile

 LVER=$( installed_version $( get_provider linux-kernel ) )

 case $LVER in
  3.3) LVER=3.3.0 ;;
  3.2) LVER=3.2.0 ;;
 esac

 make KERNELRELEASE="$LVER" &&
 make KERNELRELEASE="$LVER" install "INSTALL_MOD_PATH=$DESTDIR"
}
