    stable 1.1.0 1.0.0
  category cd
 attribute linux-26-module
    source cdemu/vhba-module-$VERSION.tar.bz2
       url "$SOURCEFORGE_URL"
  homepage http://cdemu.sourceforge.net/pkg_vhba.php
  estimate 20
      desc 'vhba-module provides a virtual SCSI host bus adapter'

build(){
# The following sed breaks compilation
#sed -i 's:CFLAGS:EXTRA_CFLAGS:' Makefile

 LVER=$( installed_version $( get_provider linux-kernel ) )

 make            KERNELRELEASE="$LVER" &&
 prepare_install &&
 make    install KERNELRELEASE="$LVER"
}
