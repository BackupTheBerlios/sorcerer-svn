# Does not support DESTDIR style install
# Might not be required?

   version stable 1.2.1 1.1.0 1.0.0
  category cd
 attribute linux-26-module
 attribute broke
    source $SOURCEFORGE_URL cdemu/vhba-module/vhba-module-$VERSION/vhba-module-$VERSION.tar.bz2
      info home http://cdemu.sourceforge.net/pkg_vhba.php
      desc 'virtual SCSI host bus adapter'

build(){
# The following sed breaks compilation
#sed -i 's:CFLAGS:EXTRA_CFLAGS:' Makefile

 LVER=$( installed_version $( get_provider linux-kernel ) )

 make KERNELRELEASE="$LVER" &&
 make KERNELRELEASE="$LVER" install
}
