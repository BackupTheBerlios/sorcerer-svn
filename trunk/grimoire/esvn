    stable 0.6.12-1 0.6.11-1
   require qt-x11-free
  optional kdiff3 '' '' for external diff program
  category development
 attribute kde3
    source esvn/esvn-$VERSION.tar.gz
       url "$SOURCEFORGE_URL"
  homepage http://sourceforge.net/projects/esvn
      opts --prefix=/opt/kde3 --with-qt-dir=/opt/kde3 --disable-debug --enable-final
  eprovide eSvn
  estimate 200
      desc 'esvn is a Qt-based GUI frontend for the Subversion revision system.'

build(){
export   QTDIR=/opt/kde3
export   PATH+=:/opt/kde3/bin
export INCPATH="${INCPATH} -I/opt/kde3/include -I./src"

qmake  esvn.pro                 &&
qmake  esvn-diff-wrapper.pro    &&
make   -f esvn.mak              &&
make   -f esvn-diff-wrapper.mak &&
prepare_install                 &&
make    install                 &&
cp esvn              /opt/kde3/bin &&
cp esvn-diff-wrapper /opt/kde3/bin
}
