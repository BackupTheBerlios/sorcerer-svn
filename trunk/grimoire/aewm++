   VERSION=( "1.0.28" "1.0.27" )
  CATEGORY="window-manager"
 ATTRIBUTE="x11 new broken"
# aewm++ uses obsolete C++ syntax
    SOURCE="sapphire/aewm++-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://sapphire.sourceforge.net"
       REQ="gtk+"
 FRESHMEAT="aewm_plus_plus"
  ESTIMATE="35"
      DESC="aewm++ is rewrite and fork of aewm in C++.
It keeps the same look and feel of aewm but adds more features.
Its aim is to provide a more modern feature set than aewm."


build()  {
  sed  -i  "s:-g -O2 -march=i686 -Wall::"  Makefile
  make             &&
  prepare_install  &&
  make    install
}
