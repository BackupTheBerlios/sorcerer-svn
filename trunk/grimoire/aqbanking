# Probably not used anymore.
# aqbanking-kde3 is probably used instead
# manually update source each time the version of this changes.

    stable 4.2.4 4.2.2 4.2.1 4.2.0 4.1.8 4.1.4 4.1.3 3.0.1 3.0.0
   require libchipcard  libgail-gnome libofx
  category utility/finance
 attribute library
    source "http://www.aquamaniac.de/sites/download/download.php?package=03&release=50&file=01&dummy=aqbanking-$VERSION.tar.gz"
  homepage http://www.aquamaniac.de/aqbanking/index.html
      vurl http://www.aquamaniac.de/sites/download/packages.php
  estimate 3300
      desc 'interface to online banking libraries'

build(){
 ./configure          \
 --prefix=/usr        \
 --sysconfdir=/etc    \
 --localstatedir=/var \
 --with-frontends='cbanking g2banking' \
 $OPTS           &&
 make            &&
 prepare_install &&
 make    install
}
