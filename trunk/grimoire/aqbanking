# aqbanking compiles fine however gnucash version 2.2.1 requires aqbanking version 2.6.2
    stable             2.3.2 2.2.9 2.2.8 2.2.7 2.2.6 2.2.5 2.2.4 2.2.3 2.2.1 2.2.0
  unstable 3.0.1 3.0.0 2.3.2
 case $VERSION in
  2.3*) require libchipcard3 libgail-gnome libofx ;;
     *) require libchipcard  libgail-gnome libofx ;;
 esac

    ignore 'beta'
  category utility/finance
#attribute library kde3
 attribute library broke
# broke because libofx is broken
       url $SOURCEFORGE_URL
    source aqbanking/aqbanking-$VERSION.tar.gz
  homepage http://www.aquamaniac.de/aqbanking/index.html
  estimate 3300
      desc 'aqbanking provides an interface to online banking libraries.'

build(){
 ./configure          \
 --build=$BUILD       \
 --prefix=/usr        \
 --sysconfdir=/etc    \
 --localstatedir=/var \
 --with-frontends='cbanking g2banking' \
 $OPTS           &&
 make            &&
 prepare_install &&
 make    install
}
