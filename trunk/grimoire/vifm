   version stable 0.5 0.4 0.3a 0.3 0.2a 0.2 0.1
   require automake ncurses
  category utility/file-manager
 attribute console
    source $SOURCEFORGE_URL vifm/vifm/vifm-$VERSION.tar.bz2
  homepage http://vifm.sourceforge.net
      desc 'ncurses based file manager with vi-like keybindings'

build(){
sed -i 's:/usr/local:/usr:g' src/config.c
aclocal
automake -afc
default_build
}
