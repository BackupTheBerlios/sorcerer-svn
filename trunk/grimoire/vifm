   VERSION=( "0.3a" "0.3" "0.2a" "0.2" "0.1" )
  CATEGORY="file-manager"
 ATTRIBUTE="console"
    SOURCE="vifm/vifm-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://vifm.sourceforge.net"
       REQ="automake ncurses"
  ESTIMATE="66"
      DESC="vifm is an ncurses based file manager with vi-like keybindings."

build() {
sed  -i  "s:/usr/local:/usr:g"  src/config.c
aclocal
automake -afc
default_build
}
