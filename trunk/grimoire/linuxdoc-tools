 --prefix=/usr \
 $OPTS &&
 make "OPTIMIZE=$CFLAGS" \
      "CFLAGS=$CFLAGS"   &&
 make install PREFIX=$DESTDIR/usr DESTDIR="$DESTDIR"
}
