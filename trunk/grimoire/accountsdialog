    stable 0.6
   require apg gnome-desktop libunique polkit-gnome
  category security/authentication
 attribute gnome new
    source $GNOME_URL sources/accountsdialog/${VERSION:0:3}/accountsdialog-$VERSION.tar.bz2
  homepage http://www.gnome.org
  estimate 320
      desc 'application to view and modify user account information
that is provided by the AccountsService'

# The AccountsDialog uses the following libraries:
# - GLib and GIO
# - GdkPixbuf and GTK+
# - gnome-desktop
# - dbus-glib
# - unique
# - polkit-gtk
# - GConf
# - cheese-gtk (optional)

