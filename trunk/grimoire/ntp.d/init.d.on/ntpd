#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 510
# Required-Start: $network run
# Should-Start: hwclock
# Required-Stop: kill
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: ntpd synchronizes system time with a server
### END INIT INFO

. /lib/lsb/init-functions

if [ "$1" == start ]; then echo -n >> /var/log/ntp; fi

server /usr/bin/ntpd
config /etc/ntp.conf
options "-g -c $CONF"
parse "$@"
