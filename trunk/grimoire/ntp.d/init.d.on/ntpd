#!/bin/bash

## BEGIN INIT INFO
# Provides: ntpd
# Required-Start: $network run
# Required-Stop: kill
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: ntpd synchronizes system time with a server
# Description: ntpd synchronizes localtime with a ntp server
### END INIT INFO

. /lib/lsb/init-functions

PIDF=/var/run/ntpd.pid
SERV=/usr/bin/ntpd
NAME=ntpd
OPTS="-c /etc/ntp.conf -p $PIDF"

start(){
 [ -f $SERV ] &&
 if   log_warning_msg "$NAME starting"; echo -n >> /var/log/ntp && start_daemon -p $PIDF $SERV $OPTS
 then log_success_msg "$NAME started"
 else log_failure_msg "$NAME not started"; status
 fi
}

parse "$@"
