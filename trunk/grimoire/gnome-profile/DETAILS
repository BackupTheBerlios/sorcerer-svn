       REQ="control-center gconf-editor gdm gedit gnome-audio gnome-applets gnome-session gnome-media gnome-common gnome-games gnome-terminal gnome-themes gnome-utils nautilus-media libgail-gnome pkgconfig scrollkeeper xscreensaver x11 yelp"
    OPT[0]="acme:::for using multimedia buttons on fancy keyboards"
