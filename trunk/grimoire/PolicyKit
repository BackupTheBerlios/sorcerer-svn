# J Decker reports that Linux-PAM is not optional for PolicyKit
# optional Linux-PAM '' '' for pluggable authentication support

    stable 0.9 0.8 0.7
   require Linux-PAM dbus-glib
  category security
 attribute console library
  sys_user polkituser
    source http://hal.freedesktop.org/releases/PolicyKit-$VERSION.tar.gz
      home http://hal.freedesktop.org/docs/PolicyKit/
      opts --disable-gtk-doc
  estimate 800
      desc 'application-level toolkit for defining and handling the 
policy that allows unprivileged processes to speak to privileged 
processes'

build(){
case $VERSION in
 0.[8-9]) sed -i 's:doc tools:tools:' Makefile.in ;;
esac
default_build
}
