   VERSION=( 0.8 0.7 )
  CATEGORY='security'
 ATTRIBUTE='console'
    SOURCE="PolicyKit-$VERSION.tar.gz"
  HOMEPAGE='http://hal.freedesktop.org/docs/PolicyKit/'
       URL='http://hal.freedesktop.org/releases/'
       REQ=( 'dbus-glib'
             'Linux-PAM:::for pluggable authentication support' )
      OPTS='--disable-gtk-doc'
  ESTIMATE='1000'
      DESC='PolicyKit is a framework for defining policy for system-wide components 
and for desktop pieces to configure it.
It is used by HAL.'

build(){
 case $VERSION in
  0.8) sed -i 's:doc tools:tools:' Makefile.in ;;
 esac
 default_build
}
