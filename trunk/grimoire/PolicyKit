# J Decker reports that Linux-PAM is not optional for PolicyKit
# optional Linux-PAM '' '' for pluggable authentication support

    stable 0.9 0.8 0.7
   require Linux-PAM dbus-glib
  category security
 attribute console
  sys_user polkituser
    source http://hal.freedesktop.org/releases/PolicyKit-$VERSION.tar.gz
  homepage http://hal.freedesktop.org/docs/PolicyKit/
      opts --disable-gtk-doc
  estimate 800
      desc 'PolicyKit is a framework for defining policy for system-wide components 
and for desktop pieces to configure it.
It is used by HAL.'

build(){
case $VERSION in
 0.[8-9]) sed -i 's:doc tools:tools:' Makefile.in ;;
esac
default_build
}
