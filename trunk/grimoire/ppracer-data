   VERSION=( "0.2.3" "0.2.2" "0.2.1" )
  CATEGORY="game"
 ATTRIBUTE="data new depreciated"
    SOURCE="ppracer/ppracer-data-$VERSION.tar.bz2"
disable  archive
disable  necropolis
       URL="http://download.berlios.de/"
  HOMEPAGE="http://racer.planetpenguin.de/"
  ESTIMATE="5"
      DESC="ppracer-data provides data for the ppracer game."

build() {
chown    -R  root:root  *
find  .  -type f  |  xargs  -l64  chmod 0644
find  .  -type d  |  xargs  -l64  chmod 0755
prepare_install  &&
mkdir  -p      /usr/share/ppracer &&
cp     -av  *  /usr/share/ppracer
}
