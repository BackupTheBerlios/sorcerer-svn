   VERSION=( "0.2.1" )
  CATEGORY="game"
 ATTRIBUTE="kde new broken"
# installed data is not owned by root
# might not have correct permissions
# and must not be installed  in /usr/local
    SOURCE="ppracer/ppracer-data-$VERSION.tar.bz2"
       URL="http://download.berlios.de"
  HOMEPAGE="http://racer.planetpenguin.de"
       REQ="ppracer"
  ESTIMATE="5"
      DESC="data for the ppracer spell"

build() {
    prepare_install &&
    mkdir -p /usr/local/share/ppracer &&
    cp -av * /usr/local/share/ppracer
}
