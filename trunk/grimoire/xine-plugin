   version stable 1.0.2
   require firefox xine-lib
  category video/dvd video/player
 attribute seamonkey-plugin library x11
    source $SOURCEFORGE_URL xine/xine-plugin/$VERSION/xine-plugin-$VERSION.tar.bz2
      info good 20120716
      info last 20080726
      info home http://xine.sourceforge.net
      desc 'mozilla plugin for xine'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then opts --with-plugindir=/usr/lib64/mozilla/plugins
 else opts --with-plugindir=/usr/lib/mozilla/plugins
 fi
 default_build
}
