# This might require a custom build.
# It attempts to install improperly.
# It compiles fine.
# Is this of any use to anyone?

   version stable 0.8b4
   require gtk+
      opts --disable-qt
  category graphic
 attribute x11
 attribute broke
    source http://www.linuxhardware.org/nvclock/nvclock$VERSION.tar.gz
      info omit 20130101
      info last 20090104
      info home http://www.linuxhardware.org/nvclock/
      desc 'utility for overclocking NVIDIA based graphics cards'

build(){
 mkdir -pvm 755 $DESTDIR/usr/bin
 default_build
}
