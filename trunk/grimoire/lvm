   VERSION=( "1.0.8" "1.0.7" "1.0.6" "1.0.5" "1.0.4" "1.0.2" )
  CATEGORY="disk"
 ATTRIBUTE="broken console depreciated"
# Use LVM2 instead.
    SOURCE="${SPELL}_$VERSION"
  HOMEPAGE="http://www.sistina.com/lvm"
       URL="ftp://ftp.sistina.com/pub/LVM/1.0
            ftp://linux.msede.com/lvm/1.0"
 FRESHMEAT="logicalvolumemanager"
  ESTIMATE="469"
      DESC="lvm is the logical volume manager

lvm The Logical Volume Manager (LVM) is a subsystem for
online disk storage management which has become a de
facto standard for storage management under Linux.
"


build() {
cd  $VERSION                    &&
./configure  --build=$BUILD     \
             --prefix=/usr      \
             --sbindir=/sbin    \
             --libdir=/lib      \
             --sysconfdir=/etc  &&
make                            &&
prepare_install                 &&
make    install
}
