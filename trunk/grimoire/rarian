   version stable 0.8.1 0.8.0 0.6.0
   require gcc-g++ libxslt
      opts --enable-static=no
case $VERSION in
 0.8.1)
   use_gcc gcc-v4.5 ;;
esac
  category documentation
 attribute gnome library makej multilib-concurrent
    source $GNOME_URL sources/rarian/${VERSION:0:3}/rarian-$VERSION.tar.bz2
# source also available as
#   source http://rarian.freedesktop.rog/Releases/rarian-$VERSION.tar.bz2
      info last 20010901
      info home http://rarian.freedesktop.org
   protect /var/log/scrollkeeper.log
      desc 'replacement for scrollkeeper'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
