   version stable 0.12 0.9 0.8 0.7 0.5
   require libXt xcb-util
      opts --enable-static=no
  category utility
 attribute gnome library lto makej multilib-concurrent
    source http://www.freedesktop.org/software/startup-notification/releases/startup-notification-$VERSION.tar.gz
#   source $GNOME_URL sources/startup-notification/${VERSION:0:3}/startup-notification-$VERSION.tar.bz2
      info good 20120709
      info last 20110516
      info home http://www.freedesktop.org/wiki/Software/startup-notification
      desc 'startup-notification notifies gnome of application startups.
startup-notification provides a mechanism allowing a
desktop environment to track application startup,
to provide user feedback and other features.'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && [[ $CFLAGS =~ -m32 ]]
 then opts --x-libraries=/usr/lib
 fi
 default_build
}
