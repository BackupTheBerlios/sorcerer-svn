    stable 3.2.8 3.2.7 3.2.6 3.2.5 3.2.4 3.2.3 3.2.2
   require ncurses
# requiring init-functions creates a recursive requirement loop
#  require init-functions ncurses
# libselinux
  category utility
 attribute console solo
    source http://procps.sourceforge.net/procps-$VERSION.tar.gz
  homepage http://procps.sourceforge.net/
   protect /bin/kill
   protect /bin/ps
  estimate 200
      desc 'procps contains utilities to report the state of the box.
procps is a package of utilities which reports on the state of the system,
including the states of running processes, amount of memory available and
currently logged in users.'

build(){
 LD='-Wl,-warn-common'
 sed -i "s:-O2 -g3:$CFLAGS:
         s:$LD:$LD $LDFLAGS:" Makefile
 make            &&
 prepare_install &&
 make    install -e XSCPT='' DESTDIR=
}

current(){
 case $VERSION in
  3.2.7) grep -q 'Should-Start: udev modprobe' /etc/init.d/sysctl ;;
 esac
}
