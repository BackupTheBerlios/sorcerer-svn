build(){
case $VERSION in
 4.6.21) patch -p0 < $SCRIPT_DIR/patch.4.6.21.1 ;;
esac

PCX=1
while [ -n "${SOURCE[$PCX]}" ]; do
 patch -p0 < $SOURCE_CACHE/$SPELL/$VERSION/${SOURCE[$PCX]}
 (( PCX++ ))
done

if   spell_installed $( get_provider j2sdk )
then OPTS="${OPTS} --enable-java"
fi

cd build_unix &&
../dist/configure  \
--prefix=/opt/db/4.6 \
--build=$BUILD     \
--enable-dynamic   \
--enable-compat185 \
--enable-cxx       \
$OPTS              &&
make               &&
prepare_install    &&
make    install    &&
rm -rf /usr/docs
}


