   inherit kde-v3
   require kdeadmin-v3 kdeartwork-v3 kdeedu-v3 kdegames-v3 kdegraphics-v3 kdenetwork-v3 kdepim-v3 kdetoys-v3 kdeutils-v3
  optional SDL     --with-sdl         --without-sdl         for simple direct media layer support
  optional xmms    --with-xmms        --without-xmms        for playing of audio files
  optional openssl --with-ssl         --without-ssl         for SSL support
  optional db      --with-berkeley-db --without-berkeley-db for support berkeley DB++
  category utility
      desc 'Plugins for kate, kicker, konqueror, noatun, knewsticker
kdeaddons contains:
* Plugins for Kate
* Plugins for Kicker
* Plugins for Konqueror
* Plugins for Noatun
* Scripts for KNewsTicker'
