   version stable 2.4.0 2.3.3 2.3.2 2.3.1 2.3.0
   version unstable 2.4.1cvs15 2.4.1cvs14 2.4.1cvs13
   require curl libXaw libXxf86dga libXxf86vm libXv
  optional XviD        --enable-xvid     --disable-xvid     for XviD divx codec support
  optional alsa-lib    --enable-alsa     --disable-alsa     for alsa audio output
  optional ffmpeg      --enable-ffmpeg   --disable-ffmpeg   for ffmpeg divx codec
  optional jpeg        --enable-jpeg     --disable-jpeg     for jpeg snapshots
  optional lame        --enable-lame     --disable-lame     for lame audio compression
  optional libXinerama --enable-xinerama --disable-xinerama for xinerama multi-display support
  optional lirc        --enable-lirc     --disable-lirc     to enable lirc remote control support
  optional nxtvepg     ''                ''                 for TV program guide
# optional zvbi        --enable-zvbi     --disable-zvbi     for zvbi support

  category video/television
 attribute x11
    source $SOURCEFORGE_URL xawdecode/01%20-%20XdTV/$VERSION/xdtv-$VERSION.tar.gz
  homepage http://xawdecode.sourceforge.net
case $VERSION in
 2.3.3) opts --disable-x264 ;;
esac
      desc 'xdtv is software that allows you to watch TV.
It interacts with AleVT for Teletext and Nxtvepg for NextView.
It uses the video4linux API.
It can use deinterlacing filters and record video
files with the ffmpeg, xvid, and divx codecs.'
