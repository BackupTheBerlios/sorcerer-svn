   VERSION=( "2.0.1" )
  CATEGORY="television"
 ATTRIBUTE="x11 new"
    SOURCE="xawdecode/xdtv-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://xawdecode.sourceforge.net"
       REQ=( "x11"
             "XviD:--enable-xvid:--disable-xvid:for XviD divx codec support"
             "alsa-lib:--enable-alsa:--disable-alsa:for alsa audio output"
             "ffmpeg:--enable-ffmpeg:--disable-ffmpeg: for ffmpeg divx codec"
             "jpeg:--enable-jpeg:--disable-jpeg:for jpeg snapshots"
             "lame:--enable-lame:--disable-lame:for lame audio compression"
             "lirc:--enable-lirc:--disable-lirc:to enable lirc (remote control) support"
             "nxtvepg:::for TV program guide"
             "zvbi:--enable-zvbi:--disable-zvbi: for zvbi support"
             ":--enable-xinerama:--disable-xinerama:for xinerama multi-display support" )
  ESTIMATE="139"
      DESC="xdtv is software that allows you to watch TV.
It interacts with AleVT for Teletext and Nxtvepg for NextView.
It uses the video4linux API.
It can use deinterlacing filters and record video
files with the ffmpeg, xvid, and divx codecs."
