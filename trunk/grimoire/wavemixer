  stable 0.4 0.3 0.2
  CATEGORY='audio/editor audio/player'
 ATTRIBUTE='x11 new'
    SOURCE="wavemixer/wavemixer-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://wavemixer.sf.net'
       REQ=( 'fftw gstreamer gtkmm jackit librasc sox taglib'
             'esound:::for output through esound' )
  ESTIMATE='99'
      DESC='wavemixer is a multitrack wave editor.
It can mix multiple sounds together from many formats,
with the option to add various different effects to the result.'

build(){
 case $VERSION  in
  0.4) sed -i  "s:W_GTKMM=no:W_GTKMM=yes:" configure ;;
 esac
 default_build
}
