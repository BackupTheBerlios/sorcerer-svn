   version stable 0.5.1.r1 0.5.1.beta2 0.5.0
  category game/3d/flightsim
 attribute data x11
    source $SOURCEFORGE_URL vegastrike/vegastrike/${VERSION:0:5}/vegastrike-data-$VERSION.tar.bz2
      info last 20120405
      info home http://vegastrike.sourceforge.net/
      desc 'space flight simulator similar to Wing Commander'

build(){
 find * -type f | xargs -r --max-lines=256 chmod 644
 find * -type d | xargs -r --max-lines=256 chmod 755
 mkdir -pvm 755 $DESTDIR/usr/share/vegastrike &&
 cp -a *        $DESTDIR/usr/share/vegastrike/
}
