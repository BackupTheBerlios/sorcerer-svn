   version stable 1.2.3 1.2.2
   require automake libtool
  category security
 attribute broke console
    source http://bioapi-linux.googlecode.com/files/bioapi_$VERSION.tar.gz
      info home  http://code.google.com/p/bioapi-linux/
      desc 'framework for biometric-based authentication
An unofficial branch of the official implementation of the BioAPI 1.10 framework.'

build(){
case $VERSION in
 1.2.3) aclocal; automake -acf; libtoolize -cf ;;
esac

./configure \
--prefix=/usr \
--libdir=/lib \
--with-Qt-dir=no \
--without-gui &&
make &&
make install "DESTDIR=$DESTDIR"   &&
mkdir   -p   $DESTDIR/usr/include &&
install -m 644 include/{bioapi_util.h,installdefs.h} \
               imports/cdsa/v2_0/inc/cssmtype.h      \
               "$DESTDIR/usr/include"
}
