   VERSION=( "1.2.2" )
  CATEGORY="security"
 ATTRIBUTE="console new"
    SOURCE="bioapi-$VERSION.tar.bz2"
       URL="http://www.qrivy.net/~michael/blua/bioapi"
  HOMEPAGE="http://www.qrivy.net/~michael/blua/"
       REQ=""
 FRESHMEAT="bioapi"
  ESTIMATE="400"
      DESC="Framework for biometric-based authentication.
An unofficial branch of the official implementation of the BioAPI 1.10 framework."

build() {
./configure      \
--prefix=/usr    \
--with-Qt-dir=no \
--without-gui    &&
make             &&
prepare_install  &&
make install     &&
install -m644 include/bioapi_util.h /usr/include/bioapi_util.h  &&
install -m644 include/installdefs.h /usr/include/installdefs.h  &&         
install -m644 imports/cdsa/v2_0/inc/cssmtype.h /usr/include/cssmtype.h
}
