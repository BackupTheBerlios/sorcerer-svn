   VERSION=( "1.2.2" )
    IGNORE="ebuild"
  CATEGORY="security"
 ATTRIBUTE="console new"
    SOURCE="bioapi-$VERSION.tar.bz2"
       URL="http://www.qrivy.net/~michael/blua/bioapi/"
  HOMEPAGE="http://www.qrivy.net/~michael/blua/"
       REQ=""
 FRESHMEAT="bioapi"
  ESTIMATE="400"
      DESC="bioapi provides a framework for biometric-based authentication.
An unofficial branch of the official implementation of the BioAPI 1.10 framework."

build() {
./configure      \
--prefix=/usr    \
--libdir=/lib    \
--with-Qt-dir=no \
--without-gui    &&
make             &&
prepare_install  &&
make    install  &&
install -m 644 include/{bioapi_util.h,installdefs.h}  \
               imports/cdsa/v2_0/inc/cssmtype.h       \
               /usr/include
}
