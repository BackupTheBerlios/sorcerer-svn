   version stable 18.168.6.1 17.168.5.2
   require udev
  category kernel network
 attribute firmware
    source http://intellinuxwireless.org/iwlwifi/downloads/iwlwifi-6000g2b-ucode-$VERSION.tgz
      info last 20120130
      info home http://intellinuxwireless.org/
      info vurl "http://intellinuxwireless.org/?n=downloads"
      desc 'firmware for Intel Centrino Advanced-N 6230, Wireless-N 1030 and Wireless-N 130'

build(){
 mkdir  -pvm 755         $DESTDIR/lib/firmware &&
 install -vm 644 *.ucode $DESTDIR/lib/firmware/
}
