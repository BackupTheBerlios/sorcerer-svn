   VERSION=( 0.1.3 0.1.2 )
  CATEGORY='graphic kde-extragear'
 ATTRIBUTE='kde new'
    SOURCE="kipi/libkdcraw-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://extragear.kde.org/apps/kipi'
       REQ='kdelibs'
      OPTS='--prefix=/opt/kde3'
  ESTIMATE='1000'
      DESC='libkdcraw is a C++ interface around dcraw program used to decode RAW picture files.'

build(){
 export QTDIR=/opt/qt3
 export PATH="/opt/qt3/bin:/opt/kde3/bin:$PATH"
 export LDFLAGS+=' -I/opt/qt3/include'
 default_build
}
