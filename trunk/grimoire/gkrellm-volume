    stable 2.1.13 2.1.11 2.1.9 2.1.8 2.1.7
  optional alsa-lib enable_alsa '' enable alsa suppor

inherit gkrellm
  category audio/mixer
    source gkrellm-volume-$VERSION.tar.gz
       url http://gkrellm.luon.net/files/
  homepage http://gkrellm.luon.net/volume.phtml
 freshmeat gkrellmvolume
  estimate 20
      desc 'gkrellm-volume is an audio mixer plugin for gkrellm.'

build(){
 if echo $OPTS | grep -q enable_alsa; then
  export enable_alsa=1 
  echo alsa activated
 fi
 install_plugin
}
