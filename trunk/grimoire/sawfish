   VERSION=( "1.3" "1.2-gtk2" "1.1a-gtk2" "2.0" )
    IGNORE="^2002-0\|^1\.1-gtk."
  CATEGORY="window-manager"
 ATTRIBUTE="gnome depreciated"
    SOURCE="sawmill/sawfish-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://sawmill.sourceforge.net"
       REQ="esound gettext gtk+ freetype gmp librep rep-gtk"
  ESTIMATE="453"
      DESC="sawfish is an extensible X11 window manager.
It uses a  Lisp-based scripting language.
All window decorations are configurable
and all user-interface policy is controlled
through the extension language."

build() {
 case  $VERSION  in
  1.2-gtk2)  patch  -p1  <  $SCRIPT_DIR/sawfish-1.2-gtk2.patch  ;;
 esac
 default_build
}

