   VERSION=( "2.1pre21" "2.1pre20" "2.1pre19" "2.1pre18" "2.1pre17" "2.1pre16" "2.1pre15" "2.1pre14" "2.1pre13" )
  CATEGORY="network/web"
 ATTRIBUTE="client console x11"
    SOURCE="links-$VERSION.tar.bz2"
#  HOMEPAGE="http://atrey.karlin.mff.cuni.cz/~clock/twibright/links"
#       URL="http://atrey.karlin.mff.cuni.cz/~clock/twibright/links/download
#             ftp://atrey.karlin.mff.cuni.cz/pub/local/clock/links"
       URL="http://links.twibright.com/download/"
  HOMEPAGE="http://links.twibright.com/"
       REQ=( "pcre"
             "SDL::--without-sdl:to use SDL for displaying output"
             "x11:--enable-graphics:--without-x:for x11 graphics"
             "svgalib:--enable-graphics:--without-svgalib:for svga graphics"
             "libpng:::for displaying portable network graphics"
             "jpeg:::for displaying jpeg graphics format"
             "tiff:::for displaying TIFF images"
             "flex:--enable-javascript --with-libfl::for javascript support"
             "gpm:::to use the mouse when in text mode"
             "openssl:--with-ssl:--without-ssl:for HTTPS encrypted connections"
             "DirectFB::--without-directfb:for output using the direct frame buffer" )
  ESTIMATE="95"
      DESC="links is a text and graphics mode web browser similar to lynx.
Links displays tables, downloads on background and uses
HTTP/1.1 keepalive connections."

build()  {
# links 2.1pre9 not compatibile with openssl 0.9.8a
case  $VERSION  in
  2.1pre9)  OPTS="$( echo "$OPTS" | sed "s:--with-ssl:--without-ssl:"  )" ;;
esac
default_build
}
