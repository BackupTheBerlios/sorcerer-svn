   version stable 0.2.3
  category game
 attribute x11
    source http://binaries.openttd.org/bananas/basesound/OpenSFX-$VERSION.tar.gz
      info home http://dev.openttdcoop.org/projects/$SPELL
      vurl http://bananas.openttd.org/en/base/
      desc 'data files for use with open transport tycoon deluxe video game'

build(){
find * -type d | xargs -r --max-lines=256 chmod 755
find * -type f | xargs -r --max-lines=256 chmod 644
mkdir -pvm 755 $DESTDIR/usr/share/games/openttd/data &&
cp    -a *     $DESTDIR/usr/share/games/openttd/data
}
