# glom 1.10.0 has requirements on other spells with unusually high versions
# that have not yet been released.

    stable 1.10.0 1.6.17 1.6.15 1.6.14 1.6.12
   require bakery goocanvas gnome-python-extras libgdamm libgnomecanvasmm libgtksourceviewmm postgresql
  category development
 attribute gnome broke
       url $GNOME_URL
    source sources/glom/${VERSION:0:4}/glom-$VERSION.tar.bz2
  homepage http://www.glom.org
      opts --with-postgres-utils=/usr/bin
  estimate 1500
      desc 'glom is an easy-to-use database designer and user interface.'
