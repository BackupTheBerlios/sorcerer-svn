   version stable 0.4 0.3 0.2
   require SDL_gfx SDL_image SDL_mixer SDL_ttf libarchive
  category game
 attribute x11
    source $SOURCEFORGE_URL meandmyshadow/$VERSION/meandmyshadow-$VERSION-src.tar.gz
      info last 20120819
      info home http://meandmyshadow.sourceforge.net/index.html
      desc 'platform game
Weird platform game.'

build(){
# version 0.2 source will not install when built in a separate directory.
 opts -DCMAKE_INSTALL_PREFIX:PATH=/usr
 opts -DCMAKE_VERBOSE_MAKEFILE:BOOL=TRUE
 cmake $OPTS &&
 make install "DESTDIR=$DESTDIR"
}
