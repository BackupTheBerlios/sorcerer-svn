# Probably obsolete

with version stable 1.4.6 1.4.5
with base    clutter dbus-glib gtk+ startup-notification
with also    --enable-static=no
with role    graphic/library
with trait   broke
with trait   library makej multilib-dual
with source  http://source.clutter-project.org/sources/mx/${VERSION:0:3}/mx-$VERSION.tar.xz
#   source http://ftp.debian.org/debian/pool/main/m/mx/mx_$VERSION.orig.tar.bz2
with info    omit 20130601
with info    last 20120510
with info    home http://moblin.org/projects/moblin-ui-toolkit
with info    cite 'widget toolkit using Clutter.
mx provides a set of standard interface elements, including buttons, 
progress bars, scroll bars and others.'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build &&
 if   [ -f $DESTDIR/usr/lib64/pkgconfig/mx-1.0.pc ]
 then sed -i 's:-L${libdir}::
              s:libdir=${exec_prefix}/lib$:libdir=${exec_prefix}/lib64:' \
          $DESTDIR/usr/lib64/pkgconfig/mx{,-gtk}-1.0.pc
 fi
}
