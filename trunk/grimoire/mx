   version stable 1.1.10
   require clutter dbus-glib startup-notification
      opts --enable-static=no
  category graphic/library
 attribute library makej multilib-dual
    source http://ftp.debian.org/debian/pool/main/m/mx/mx_$VERSION.orig.tar.bz2
      info home  http://moblin.org/projects/moblin-ui-toolkit
      desc 'widget toolkit using Clutter.
mx provides a set of standard interface elements, including buttons, 
progress bars, scroll bars and others.'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build &&
 if   [ -f $DESTDIR/usr/lib64/pkgconfig/mx-1.0.pc ]
 then sed -i 's:-L${libdir}::
              s:libdir=${exec_prefix}/lib$:libdir=${exec_prefix}/lib64:' \
          $DESTDIR/usr/lib64/pkgconfig/mx{,-gtk}-1.0.pc
 fi
}
