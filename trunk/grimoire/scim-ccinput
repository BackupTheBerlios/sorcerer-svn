  stable 0.3.1
  CATEGORY='input'
 ATTRIBUTE='console library x11'
    SOURCE="scim/scim-ccinput-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://www.scim-im.org/'
       REQ='scim'
      OPTS='--enable-static=no'
  ESTIMATE='800'
      DESC='scim-ccinput provides chineese input method'

build(){
 case $VERSION in
  0.3.1) sed -i '1i#include <libintl.h>' \
         scim/IMEngine/scim_ccin_imengine.cpp \
         scim/SetupUI/scim_ccin_imengine_setup.cpp
         sed -i '1i#include <cstring>' \
         scim/SetupUI/scim_ccin_imengine_setup.cpp
         ;;
 esac
 default_build
}
