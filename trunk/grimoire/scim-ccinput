# requires ancient version of gtk+ to compile?

   version stable 0.3.1
   require scim
      opts --enable-static=no
  category input
 attribute console library x11
 attribute broke
    source $SOURCEFORGE_URL scim/scim-ccinput/$VERSION/scim-ccinput-$VERSION.tar.bz2
#     info good 20120704
      info omit 20130101
      info last 20050617
      info home http://www.scim-im.org/
      desc 'chineese input method for scim'

build(){
 case $VERSION in
  0.3.1) sed -i '1i#include <libintl.h>' \
         scim/IMEngine/scim_ccin_imengine.cpp \
         scim/SetupUI/scim_ccin_imengine_setup.cpp
         sed -i '1i#include <cstring>' \
         scim/SetupUI/scim_ccin_imengine_setup.cpp
         ;;
 esac
 default_build
}
