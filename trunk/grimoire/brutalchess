   VERSION=( "alpha-0.3" )
  CATEGORY="game/board/chess"
 ATTRIBUTE="x11 new broken"
# Spell broken because source does not yet support make install
    SOURCE="brutalchess/brutalchess-$VERSION.tar.gz"
  HOMEPAGE="http://brutalchess.sourceforge.net/"
       URL="$SOURCEFORGE_URL"
# Requirement list incomplete until installed
       REQ=""
  ESTIMATE="160"
      DESC="brutalchess is a 3D chess game.
brutalchess features full 3D graphics,
an advanced particle engine,
and several different levels of intelligent AI.
brutalchess was inspired by the once popular
\"Battle Chess\" released by Interplay circa 1988."

build()  {
  make             &&
  prepare_install  &&
  make    install
}
