   VERSION=( "1.5" )
  CATEGORY="utility window-manager"
 ATTRIBUTE="x11"
    SOURCE="docker-$VERSION.tar.gz"
       URL="http://icculus.org/openbox/2/docker"
  HOMEPAGE="http://icculus.org/openbox/2/docker"
       REQ="glib x11"
  ESTIMATE="14"
      DESC="docker is a system tray for window managers that support WindowMaker Dock Apps.
docker is a docking system tray that allows KDE and GNOME system tray
applications to be run without needing to run a KDE/GNOME panel.
It was primarily designed for Openbox 2, but should work in 
any window manager that supports WindowMaker Dock Apps."

build() {
sed  -i  "s:/local::"       Makefile
sed  -i  "s:-O:${CFLAGS}:"  Makefile

make             &&
prepare_install  &&
make    install  
}
