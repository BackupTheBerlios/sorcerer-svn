# /usr/bin/babel installs with a rpath of /usr/lib
# and has no easy method for disabling that in 2.2.3

   version stable 2.2.3
   require gcc-g++ libxml2
      opts --enable-static=no
  category utility/chemistry
 attribute library
    source $SOURCEFORGE_URL openbabel/openbabel/$VERSION/openbabel-$VERSION.tar.gz
  homepage http://openbabel.sourceforge.net/wiki/Main_Page
      desc 'chemistry toolbox'


build(){
 rm -f CMakeLists.txt
 default_build
}

# let me know if anyone requires a spell that supports the below.

# has optional python bindings that can be installed with:
# cd scripts/python
# python setup.py build
# python setup.py install

# has optional perl bindings that can be installed with:
# cd scripts/perl
# perl Makefile.PL
# make
# make install

# Might not work if libraries are moved from /usr/lib to /usr/lib64
# not detected by kdeedu-v4 when installed.
# so how to make this work?

build_old(){
 default_build &&
 sed -i 's:-L${libdir}::' $DESTDIR/usr/lib/pkgconfig/*.pc
}

