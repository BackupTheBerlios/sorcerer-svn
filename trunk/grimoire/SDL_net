   version stable 1.2.8 1.2.7
   require SDL
      opts --disable-gui --enable-static=no
  category network/library
 attribute library makej multilib-concurrent x11
    source http://www.libsdl.org/projects/SDL_net/release/SDL_net-$VERSION.tar.gz
      info last 20120116
      info home http://www.libsdl.org/projects/SDL_net/
      info docs http://www.libsdl.org/projects/SDL_net/docs/index.html
 freshmeat sdl_net
      desc 'cross-platform networking library'

build(){
 sed -i 's,PATH="$prefix/bin:$prefix/usr/bin:$PATH",PATH="$PATH",' configure
 default_build
}
