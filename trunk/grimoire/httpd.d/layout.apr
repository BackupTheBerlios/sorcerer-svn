<Layout Sorcerer>
    prefix:        /usr
    exec_prefix:   ${prefix}
    bindir:        ${prefix}/bin
    sbindir:       ${prefix}/sbin
    libdir:        ${prefix}/lib
    libexecdir:    ${prefix}/lib/apr
    mandir:        ${prefix}/man
    sysconfdir:    /etc/httpd
    datadir:       ${prefix}/share/httpd
    installbuilddir: ${datadir}/build
    includedir:    ${prefix}/include/apr
    localstatedir: /var
    runtimedir:    ${localstatedir}/run
</Layout>     
