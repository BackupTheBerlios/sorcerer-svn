   VERSION=( "0.5.11" "0.5.10" "0.5.9" "0.5.8" "0.5.6" )
  CATEGORY="editor"
 ATTRIBUTE="x11"
  HOMEPAGE="http://wolfpack.twu.net/ManEdit/"
       URL="ftp://wolfpack.twu.net/users/wolfpack"
       REQ="gtk+-v1.2"
  ESTIMATE="77"
      DESC="manedit is a gtk+ manual page editor.

The ManEdit UNIX Manual Page Editor is an editor 
specifically tailored for UNIX manual pages.
It has a preview viewer, uses the manual page XML format for 
easy editing, and comes with a tutorial and reference guide.
It uses the GTK+ widget set and features syntax highlighting, 
a complete drag and drop system for easy viewing and editing, 
a crash recovery system, and sample manual page templates.
"


build() {
sed  -i  "s:-s::"  manedit/Makefile.install.UNIX

./configure  Linux               \
             --prefix=/usr       \
             --CFLAGS="$CFLAGS"  \
             $OPTS               &&
make                             &&
prepare_install                  &&
make    install
}
