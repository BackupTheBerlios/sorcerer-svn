   VERSION=( "1.19" )
  CATEGORY="file-system"
 ATTRIBUTE="console broken"
#    SOURCE="buffer-$VERSION.tar.gz"
#       URL="http://www.microwerks.net/~hugo/download"
#  HOMEPAGE="http://www.microwerks.net/~hugo/download/download.html"

     SOURCE="buffer_$VERSION.orig.tar.gz"
	URL="http://ftp.debian.org/debian/pool/main/b/buffer"
   HOMEPAGE="http://www.doc.ic.ac.uk/~lmjm"
#Note the above homepage does not mention buffer !
       DESC="buffer is a program to expedite writing tapes on remote drives.
buffer reads from standard input reblocking to the given
blocksize and writes each block to standard output."


case  $VERSION  in
  1.19) REQ="$REQ gcc-v3.4"  ;;
esac

build() {
case  $VERSION  in
  1.19)  GCC3_VER=$( installed_version gcc-v3.4 )
         export  PATH="${PATH/gcc\/current/gcc/$GCC3_VER}"
         export  CCACHE_PATH="/opt/gcc/$GCC3_VER/bin"  ;;
esac

make             &&
prepare_install  &&
make    install  INSTBIN=/usr/bin  \
                 INSTMAN=/usr/man/man1
}
