    stable 1.19
  category utility
 attribute console
#   source buffer-$VERSION.tar.gz
    source buffer-$VERSION.tgz
       url ftp://ftp.mondorescue.org/src/
  homepage http://www.mondorescue.org/
case  $VERSION  in
  1.19)  use_gcc gcc-v3.4  ;;
esac
  estimate 8
      desc "buffer is a program to expedite writing tapes on remote drives.
buffer reads from standard input reblocking to the given
blocksize and writes each block to standard output."


build() {
make             &&
prepare_install  &&
make    install  INSTBIN=/usr/bin  \
                 INSTMAN=/usr/man/man1
}
