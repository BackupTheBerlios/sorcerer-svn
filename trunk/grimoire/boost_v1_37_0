    stable 1_37_0 1_38_0
   require Python boost-jam bzip2 zlib
  category development
 attribute library
       url $SOURCEFORGE_URL
    source boost/boost_$VERSION.tar.bz2
  homepage http://www.boost.org
      opts --with-icu
  estimate 8400
      desc 'legacy boost version for wesnoth version 1.6a'

build(){
./configure --prefix=/usr $OPTS &&
make &&
prepare_install &&
make    install
}
