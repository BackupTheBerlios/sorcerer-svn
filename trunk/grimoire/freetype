   version stable 2.4.8 2.4.7 2.4.6 2.4.5 2.4.4
   require bzip2 zlib
      opts --enable-static=no
  category font/library
 attribute library
#attribute makej multilib-concurrent
    source $SOURCEFORGE_URL freetype/freetype2/$VERSION/freetype-$VERSION.tar.bz2
      info last 20111123
      info home http://freetype.sourceforge.net/
      info docs http://freetype.sourceforge.net/freetype2/documentation.html
      info mail 'http://freetype.sourceforge.net/developer.html#mailing-lists'
      desc 'free, quality, portable font engine'

build(){
 default_build &&
 mkdir -pvm 755          $DESTDIR/usr/include &&
 cp -av include/freetype $DESTDIR/usr/include/
}
