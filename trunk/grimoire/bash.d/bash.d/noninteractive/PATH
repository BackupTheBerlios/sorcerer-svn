                  PATH=/usr/local/bin:/usr/bin:/bin
[ "$UID" = 0 ] && PATH=$PATH:/usr/local/sbin:/usr/sbin:/sbin
[ "$HOME"    ] && PATH=~/bin:$PATH

if   [ $HOSTTYPE == x86_64 ] &&
     [ -d /opt/ia32/bin    ]
then              PATH=$PATH:/opt/ia32/usr/local/bin:/opt/ia32/usr/bin:/opt/ia32/bin
fi

export PATH
