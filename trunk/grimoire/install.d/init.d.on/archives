#!/bin/bash

### BEGIN INIT INFO
# Required-Start: find_ir
# Should-Start: udev loadkeys
# Default-Start: S
# Short-Description: archives makes the initramfs more usable.
### END INIT INFO

. /lib/lsb/init-functions

start(){
 load(){
  cd /
  cat $FROM/{bfr,coreutils,file,inetutils,kexec-tools,libevent,libnfsidmap,msyslog,openssh,openssl,parted,pciutils,usbutils,util-linux}-*.tar.lz 2>/dev/null |
  lzip -cd | tar -ixpf -

  # used to unpack 7za compressed tarballs one at a time.
  # 7za x -so $FROM/bfr-*.tar.7z 2>/dev/null | tar -xf -
 }

 local FROM=/media/IR/var/cache/archive
 [ -d $FROM ] &&
 if   log_warning_msg 'archives loading'; load
 then log_success_msg 'archives loaded'
 else log_failure_msg 'archives not loaded'
 fi
}


help(){ echo "Usage: $0 {start}" 1>&2; }

case $1 in
 start) start ;;
 try-restart) ;;
 *) help ;;
esac
