#!/bin/bash

### BEGIN INIT INFO
# Required-Start: find_ir
# Should-Start: udev loadkeys
# Default-Start: S
# Short-Description: archives makes the initramfs more usable.
### END INIT INFO

. /lib/lsb/init-functions

start(){
 load(){
  cd /
  cat $FROM/{coreutils,dbus,dbus-glib,file,hal,inetutils,kexec-tools,msyslog,openssh,openssl,parted,pciutils,procps,usbutils,util-linux}-*.tar.xz 2>/dev/null |
  xz -cd | tar -ixpf -
  local -i AVAIL
  AVAIL=$( free -mt | grep Total: | tr -s ' ' | cut -d ' ' -f4 )
  if (( AVAIL > 256 )) then
  cat $FROM/{gcc-core,gcc-g++,groff,man,man-pages}-*.tar.xz 2>/dev/null |
  xz -cd | tar -ixpf -
 }

 local FROM=/media/IR/var/cache/archive
 [ -d $FROM ] &&
 if   log_warning_msg 'archives loading'; load
 then log_success_msg 'archives loaded'
 else log_failure_msg 'archives not loaded'
 fi
}


help(){ echo "Usage: $0 {start}" 1>&2; }

case $1 in
 start) start ;;
 try-restart) ;;
 *) help ;;
esac
