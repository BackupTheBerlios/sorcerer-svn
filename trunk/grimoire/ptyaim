   VERSION=( "0.5.4" "0.5.3" )
  CATEGORY="chat"
 ATTRIBUTE="console new"
    SOURCE="ptyaim/ptyaim-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://ptyaim.sourceforge.net"
       REQ="ncurses"
  ESTIMATE="215"
      DESC="ptyaim is a small text-based chat client with a curses interface.
It features a small UI and a plugin interface,
and it comes with protocol plugins for TOC (AIM/ICQ) and IRC."

build() {
make             PREFIX=/usr  &&
prepare_install               &&
make    install  PREFIX=/usr
}
