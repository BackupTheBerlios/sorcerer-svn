# 0.5.7 has compile error

   version stable 0.5.6 0.5.5 0.5.4 0.5.3
   version unstable 0.5.7
   require ncurses
  category network/chat
 attribute console
    source $SOURCEFORGE_URL ptyaim/Source/$VERSION/ptyaim-$VERSION.tar.gz
      info home http://ptyaim.sourceforge.net
      desc 'small text-based chat client with a curses interface
It features a small UI and a plugin interface,
and it comes with protocol plugins for TOC (AIM/ICQ) and IRC.'

build(){
make PREFIX=/usr &&
make PREFIX=$DESTDIR/usr install
}
