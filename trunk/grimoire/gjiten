   version stable 2.6
   require libgnomeui
  category dictionary
 attribute gnome
    source http://gjiten.sourceforge.net/gjiten-$VERSION.tar.gz
    source ftp://ftp.monash.edu.au/pub/nihongo/edict.gz
    source ftp://ftp.monash.edu.au/pub/nihongo/kanjidic.gz
      info home  http://gjiten.sourceforge.net/
      info docs  http://gjiten.sourceforge.net/gjiten-doc/index.html
      desc 'japanese dictionary program for gnome
Besides being a word dictionary it also has a kanji dictionary;
any combination of stroke number, radicals, and search key can
be used for kanji lookups.'

build(){
 install_dicts(){
  mkdir -pvm 755 $DESTDIR/usr/share/gjiten
  cd             $DESTDIR/usr/share/gjiten
  cp     ${SOURCE[1]} ${SOURCE[2]} .
  gunzip edict.gz
  gunzip kanjidic.gz
  iconv  -f EUC-JP -t UTF-8 edict   -o edict.utf8
  iconv  -f EUC-JP -t UTF-8 kanjidic-o kanjidic.utf8
  rm     -f edict kanjidic
 }


 # Necesary because 2.5 requires docbook2txt
 # No idea where to get that.
 case $VERSION in
  2.6) sed -i 's:data help:data:' Makefile.in ;;
 esac

 default_build &&
 install_dicts
}
