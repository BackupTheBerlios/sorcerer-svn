with version stable 1.5.1 1.5.0 v1_4_sources_r697
   version alpha v2_alpha_0
with also    --enable-static=no
with role    graphic/library
with trait   library makej multilib-dual optimize
with source  http://openjpeg.googlecode.com/files/openjpeg-$VERSION.tar.gz
with info    last 20120917
with info    home http://www.openjpeg.org/
with info    docs "http://www.openjpeg.org/index.php?menu=doc"
with info    vurl http://code.google.com/p/openjpeg/downloads/list
with info    cite 'open-source JPEG 2000 codec'

build(){

 fix_header(){
  # version v1_4_sources_r697 installed
  # ls -lah /usr/include/openjpeg.h 
  # lrwxrwxrwx 1 root root 73 Jun 23 08:06 /usr/include/openjpeg.h -> /usr/src/sorcery/destdir/openjpeg/64/usr/include//openjpeg-1.4/openjpeg.h
  # very wrong!

  rm -f  $DESTDIR/usr/include/openjpeg.h
  install -vm 644 ../libopenjpeg/openjpeg.h $DESTDIR/usr/include/
 }

 default_build &&
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then mv $DESTDIR/usr/lib{,64}
 fi &&
 case $VERSION in
  v1_4_sources_r697) fix_header ;;
 esac
}
