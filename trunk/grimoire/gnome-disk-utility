# can not upgrade to version 3.4.0 while udisks 3.9x.y is broke

   version   stable 3.0.2 3.0.0
   version unstable 3.6.0 3.5.3
   require avahi libatasmart libgnome-keyring libunique nautilus
#  require avahi libatasmart libgnome-keyring libunique nautilus udisks
      opts --disable-gtk-doc
      opts --enable-static=no
  category window-manager
 attribute gnome library
    source   stable $GNOME_URL sources/gnome-disk-utility/${VERSION:0:3}/gnome-disk-utility-$VERSION.tar.xz
    source unstable $GNOME_URL sources/gnome-disk-utility/${VERSION:0:3}/gnome-disk-utility-$VERSION.tar.xz
      info good 20120729
      info last 20120423
      info home http://www.gnome.org
      desc 'libraries and applications for dealing with storage devices'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
