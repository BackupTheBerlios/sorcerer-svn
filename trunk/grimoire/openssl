build() {
sed  -i         "s:-O3 -fomit-frame-pointer -m486:$CFLAGS:"  \
  $(  grep   -rl "\-O3 -fomit-frame-pointer -m486"  *  )

./config               \
--prefix=/usr          \
--openssldir=/etc/ssl  \
shared                 &&
make                   &&
prepare_install        &&
make    install  MANDIR=/usr/man
}

post_install()  {
SSH_PRO=$(  get_provider  openssh  )
if    spell_installed  $SSH_PRO;  then  unlock_cast
      cast -c          $SSH_PRO
fi
}
