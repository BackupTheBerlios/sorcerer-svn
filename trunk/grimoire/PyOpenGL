    stable 3.0.0b2 3.0.0b1 3.0.0a6 3.0.0a5
   require Imaging MesaLib numpy setuptools
    ignore 'a\|b'
  category development
 attribute python-module
       url $SOURCEFORGE_URL
    source pyopengl/PyOpenGL-$VERSION.tar.gz
  homepage http://pyopengl.sourceforge.net/
  estimate 2400
      desc 'PyOpenGL provides Python binding to OpenGL and related APIs.'

build(){
[ -f setup.py ] &&
prepare_install &&
python setup.py install
}
