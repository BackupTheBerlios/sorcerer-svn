   VERSION=( "2.2.5" "2.2.4" "2.2.3" "2.2.1" "2.2.0" )
  CATEGORY="audio-player"
 ATTRIBUTE="x11"
    SOURCE="zinf/zinf-$VERSION.tar.gz"
  HOMEPAGE="http://www.zinf.org"
       URL="$SOURCEFORGE_URL"
       REQ=( "boost gtk+ id3lib metakit musicbrainz ncurses"
             "libvorbis:::to play oggvorbis files"
             "freetype-v1.3:::to enable use of truetype fonts"
             "ORBit:::to enable a remote Cobra interface"
             "nasm::--disable-x86opts:to enable assembly optimizations"
             "esound::--disable-esd:to enable esd output"
             "arts::--disable-arts:to enable arts output"
             "alsa-lib::--disable-alsa:to enable ALSA output" )
      OPTS="--enable-cmdline"
  ESTIMATE="701"
      DESC="zinf is an MP3/Vorbis/CD audio player with jukebox capabilities."
