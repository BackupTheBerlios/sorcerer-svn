   version stable 2.2.5 2.2.4 2.2.3 2.2.1 2.2.0
   require boost gtk+ id3lib metakit libmusicbrainz
  optional libvorbis     '' ''                to play oggvorbis files
  optional freetype-v1.3 '' ''                to enable use of truetype fonts
  optional ORBit         '' ''                to enable a remote Cobra interface
  optional nasm          '' --disable-x86opts to enable assembly optimizations
  optional esound        '' --disable-esd     to enable esd output
  optional alsa-lib      '' --disable-alsa    to enable ALSA output
  category audio/network audio/player
 attribute x11
    source $SOURCEFORGE_URL zinf/zinf/$VERSION/zinf-$VERSION.tar.gz
  homepage http://www.zinf.org
      opts --enable-cmdline
      desc 'MP3/Vorbis/CD audio player with jukebox capabilities'

build(){
 sed -i "\,#include <musicbrainz/bitzi/bitcollider.h>,d" \
     $( grep -rl bitcollider * )
#sed -i "s:boost_filesystem:boost_filesystem-gcc:" configure
 default_build
}
