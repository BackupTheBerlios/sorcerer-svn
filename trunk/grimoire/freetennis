    stable 0.4.8 0.4.7 0.4.4 0.4.3
   require camlimages ocamlsdl
  category game
 attribute x11
 attribute broke
    source $SOURCEFORGE_URL freetennis/freetennis/$VERSION/freetennis-$VERSION.tar.bz2
  homepage http://freetennis.sourceforge.net
  estimate 
      desc 'freetennis is a realistic 3D tennis playing game.
It has AI and network play.'

build(){
 sed -i "s:graphics/:/usr/share/freetennis/graphics/:
         s:sfx/:/usr/share/freetennis/sfx/:"  freetennis.ml
 make            &&
 prepare_install &&
 mkdir    -vp                    /usr/share/freetennis &&
 cp       -vr      graphics  sfx /usr/share/freetennis &&
 install  -vm 755 freetennis.ml  /usr/bin
}
