   VERSION=( "0.3.5" "0.2" )
  CATEGORY="game"
 ATTRIBUTE="x11 new broken"
# Unable to complete this spell because lablgl
# has compile problems.
    SOURCE="freetennis/freetennis-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://freetennis.sourceforge.net"
       REQ="camlimages lablgtk ocamlsdl"
  ESTIMATE=""
      DESC="freetennis is a realistic 3D tennis playing game.
It has AI and network play."

build() {
  sed  -i  "s:graphics/:/usr/share/freetennis/graphics/:
            s:sfx/:/usr/share/freetennis/sfx/:"  freetennis.ml
  make             &&
  prepare_install  &&               
  mkdir    -p                      /usr/share/freetennis  &&
  cp       -r       graphics  sfx  /usr/share/freetennis  &&
  mkdir    -p                      /usr/games  &&
  install  -m 0755  freetennis.ml  /usr/games
}
