   VERSION=( "1.2.2" )
    IGNORE="pkg\|osx\|1\.3\.0"
# 1.3.0 is development
  CATEGORY="graphic"
 ATTRIBUTE="library depreciated"
    SOURCE="OpenEXR-$VERSION.tar.gz"
       URL="http://savannah.nongnu.org/download/openexr/"
  HOMEPAGE="http://www.openexr.com"
       REQ="zlib"
 FRESHMEAT="openexr"
  ESTIMATE="359"
      DESC="OpenEXR is a high dynamic range (HDR) image file format.
use openexr spell instead, please."

build() {
 case $VERSION in
   1.2.2)  sed  -i  "s:class ImageChannel:class Image;\nclass ImageChannel:"  \
                exrmaketiled/Image.h  ;;
 esac
 default_build
}

current()  {
  echo   "openexr"  |  pipe_queue  "$CAST_QUEUE"  "com"
}
