  stable 1.0.0 0.9.10
    IGNORE='pre'
  CATEGORY='game/3d/flightsim'
 ATTRIBUTE='archive_off data'
    SOURCE="fgfs-base-$VERSION.tar.bz2"
  HOMEPAGE='http://flightgear.sourceforge.net'
       URL='ftp://ftp.flightgear.org/pub/fgfs/Shared/
            ftp://ftp.kingmont.com/pub/kingmont/flight_simulators/flightgear/Shared/
            ftp://flightgear.totalpilot.com/pub/fgfs/Shared/
            ftp://ftp.darklands.cx/pub/fgfs/Shared/
            ftp://ftp.planetmirror.com/pub/fgfs/Shared/
            ftp://ftp.ihg.uni-duisburg.de/Mirrors/ftp.flightgear.org/Shared/
            ftp://obgyn.edu.pl/fgfs/Shared/
            ftp://ftp2.sinica.edu.tw/pub2/games/fgfs/Shared/'
  ESTIMATE='10'
      DESC='fgfs-base provides the base files required by FlightGear.
fgfs-base provides the necessary data files
for running FlightGear, flight simulator.'


build(){
 if   [ -d data ]
 then cd   data
 fi
 if   [ -f version ]
 then find . -type f | xargs --max-lines=64 chmod 0644 2>/dev/null
      find . -type d | xargs --max-lines=64 chmod 0755 2>/dev/null
      true
 else false
 fi              &&
 prepare_install &&
 mkdir  -p    /usr/share/FlightGear &&
 cp     -av * /usr/share/FlightGear
}
