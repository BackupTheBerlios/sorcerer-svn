   version stable 1.3.4 1.3.2 1.2.3
   require libXrandr
  category xorg/app
 attribute X11R7 x11 makej
    source $XORG_URL app/xrandr-$VERSION.tar.bz2
  estimate 40
      desc 'command line interface to RandR extentions'

build(){
case $MACHTYPE in
 *-uclibc) sed -i '1i#define _SCHED_H 1' xrandr.c ;;
esac
default_build
}
