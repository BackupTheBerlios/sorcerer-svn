# installs               /usr/lib/libdbus-api-plugin.la
# but does not install /usr/lib64/libdbus-api-plugin.la
# Maybe not actually multilib compatible?

   version stable 0.3.0 0.2.29 0.2.28
   require pidgin
      opts --enable-static=no
  category development
 attribute gnome library makej
    source $GNOME_URL sources/online-desktop/${VERSION:0:3}/online-desktop-$VERSION.tar.bz2
  homepage http://www.gnome.org
      desc 'online-desktop provides web apps as local desktop apps.'

build(){
 export LDFLAGS=' -Wl,-rpath,/usr/lib/mozilla -Wl,-rpath-link,/usr/lib/mozilla'
 default_build
}
