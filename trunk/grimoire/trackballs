   VERSION=( "1.0.0" "0.9.2" "0.9.1" "0.9.0" "0.8.0" "0.7.1" "0.7.0" )
    IGNORE="x86\|noarch"
  CATEGORY="game"
 ATTRIBUTE="x11"
    SOURCE="trackballs/trackballs-$VERSION.tar.gz"
       REQ=( "SDL_image SDL_mixer SDL_ttf guile libtool"
             "trackballs-music:::for additional music" )
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://trackballs.sourceforge.net"
  ESTIMATE="104"
      DESC="trackballs is a game similar to marble madness.
trackballs is a simple game similar 
to the classic game Marble Madness.
By steering a marble through a track 
filled with vicious hammers, 
pools of acid, and other obstacles 
the player collects points.
When the ball reaches the destination, 
the player continue to the next more 
difficult track - unless time runs out first. "


build()  {
  export  LDFLAGS="$LDFLAGS -L/usr/X11R6/lib"
  sed  -i   "s:g++-3/set.h:set.h:"  src/general.h

  ./configure  --build=$BUILD       \
               --prefix=/usr        \
               --bindir=/usr/games  \
               $OPTS                &&
  make                              &&
  prepare_install                   &&
  make    install
}
