   version stable 2.0.2 2.0.0
   require cmake ncurses readline wxWidgets zlib
#  require cmake ncurses readline wxPython zlib
      opts --enable-static=no
  category archive development
 attribute library makej
    source http://icculus.org/physfs/downloads/physfs-$VERSION.tar.gz
  homepage http://icculus.org/physfs/
      desc 'library to provide abstract access to various archives
It is intended for use in video games, and the design
was somewhat inspired by Quake 3 file subsystem.'

build(){
 case $VERSION in
  2.0*) sed -i 's:-g -pipe -Werror::' CMakeLists.txt ;;
 esac
 default_build &&
 if   [[ $HOSTTYPE == x86_64   ]]; then
  if  [[ $CFLAGS   =~ -m32     ]]; then mv $DESTDIR/usr/lib{,32}
                                   else mv $DESTDIR/usr/lib{,64}
   if [[ -d $DESTDIR/usr/lib32 ]]; then mv $DESTDIR/usr/lib{32,}; fi
  fi
 fi
}
