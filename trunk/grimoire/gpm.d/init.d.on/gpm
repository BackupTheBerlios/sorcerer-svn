#!/bin/sh

### BEGIN INIT INFO
# Provides: gpm
# Required-Start: $local_fs run
# Required-Stop: $local_fs
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: gpm provides mouse support on virtual console
### END INIT INFO

. /lib/lsb/init-functions

MOUSE=ps2
DEV=/dev/input/mice

NAME=gpm
SERV=/usr/sbin/gpm
OPTS="-m $DEV -t $MOUSE"
PIDF=/var/run/gpm.pid
LOGF=/var/log/gpm

parse "$@"
