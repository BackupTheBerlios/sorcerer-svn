    stable 2.6.30
  category development
 attribute library solo
       url $KERNEL_URL
    source pub/linux/kernel/v${VERSION:0:3}/linux-$VERSION.tar.bz2

build(){
 rm -rf Documentation
 make headers_install &&
 prepare_install &&
 cp -av usr/include/* /usr/include/
}
