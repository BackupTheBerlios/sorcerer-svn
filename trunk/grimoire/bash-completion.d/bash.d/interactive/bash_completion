if   [ "$BASH_VERSION" ]; then
 for          REPLY in /etc/bash_completion{,.d/*}; do
  if   [ -f "$REPLY" ] &&
       [ -x "$REPLY" ]
  then    . "$REPLY"
  fi
 done
 if   [ -f               /usr/share/bash-completion/bash-completion ]
 then                  . /usr/share/bash-completion/bash-completion
  for          REPLY in  /usr/share/bash-completion/completions/*; do
   if   [ -f "$REPLY" ]
   then    . "$REPLY"
   fi
  done
 fi
fi
