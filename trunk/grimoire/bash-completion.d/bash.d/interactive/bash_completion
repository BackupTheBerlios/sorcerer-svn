if      [ "$BASH_VERSION" ]; then
 if     [ -f             /usr/share/bash-completion/bash_completion ]
 then                  . /usr/share/bash-completion/bash_completion
  for          REPLY in  /usr/share/bash-completion/completions/*; do
   if   [ -f "$REPLY" ]
   then    . "$REPLY"
   fi
  done
 fi
fi
