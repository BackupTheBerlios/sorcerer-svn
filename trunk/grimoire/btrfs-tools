with version stable 0.19+20120328
with base    util-linux
with role    disk/file-system
with trait   console
with trait   broke
#with source  http://ftp.debian.org/debian/pool/main/b/btrfs-tools/btrfs-tools_$VERSION.orig.tar.gz
with info    good 20120603
with info    last 20120328
with info    home http://btrfs.wiki.kernel.org/index.php/Main_Page
with info    docs 'http://btrfs.wiki.kernel.org/index.php/Main_Page#Documentation'
with info    cite 'tools for experimental copy on write file system'

build(){
 case $VERSION in
  0.19+20101101) sed -i 's:-Werror::' $( grep -lr '\-Werror' * ) ;;
 esac
 sed -i 's:bindir = .*:bindir = /sbin:' Makefile
 sed -i 's:/usr/local:/usr:' {,man/}Makefile
 default_build
}

current(){
 echo btrfs-progs | pipe_queue "$LOAD_QUEUE"
 echo btrfs-progs | pipe_queue "$MOIL_QUEUE"
}
