   version stable 0.19+20101101 0.19+20100909 0.19
   require util-linux
  category disk/file-system
 attribute console
    source http://ftp.debian.org/pool/main/b/btrfs-tools/btrfs-tools_$VERSION.orig.tar.gz
      info home  http://btrfs.wiki.kernel.org/index.php/Main_Page
      info docs  'http://btrfs.wiki.kernel.org/index.php/Main_Page#Documentation'
      desc 'tools for experimental copy on write file system'

build(){
sed -i 's:bindir = .*:bindir = /sbin:' Makefile
sed -i 's:/usr/local:/usr:' {,man/}Makefile
default_build
}
