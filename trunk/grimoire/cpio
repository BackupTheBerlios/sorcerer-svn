# The alpha version of cpio compiles with gcc 4.3.1

    stable 2.9.90 2.9 2.8 2.7 2.6 2.5 2.4.2
    secure 2.9 2.8
  category archive
 attribute console
#      url $GNU_URL
#   source cpio/cpio-$VERSION.tar.gz
    source ftp://alpha.gnu.org/gnu/cpio/cpio-$VERSION.tar.bz2
  homepage http://www.gnu.org/software/cpio/cpio.html
case $VERSION in
 2.9) use_gcc gcc-v4.2 ;;
esac
  estimate 1000
      desc 'cpio creates cpio archives and have rmt.
GNU cpio - Creates cpio or tar archives and provides rmt
cpio equivalent to tar with a couple of buts and depends.
This also provides the rmt command.'

build(){
 case $VERSION in
  2.9) cp /usr/include/argp.h lib
       sed -i 's:OPTION_NO_TRANS:0x20:' lib/argp-help.c ;;
 esac
 default_build
}
