# version 1.5.2 is not multilib compatible has link failure
# 1.5.5 does not download.

   version stable 1.4
   version unstable 1.5.5 1.5.3 1.5.2 1.5.1
      opts --enable-static=no
  category security/encryption
 attribute library multilib-dual
    source http://people.redhat.com/~dhowells/keyutils/keyutils-$VERSION.tar.bz2
      info last 20111203
      desc 'for controlling the key management system built into linux'

build(){
 make &&
 if   [[ $HOSTTYPE == x86_64 ]] &&
    ! [[ $CFLAGS   =~ -m32   ]]
 then make install DESTDIR=$DESTDIR LIBDIR=/lib64 USRLIBDIR=/usr/lib64
 else make install DESTDIR=$DESTDIR
 fi &&
 rm -f $DESTDIR/{,/usr}/lib{,64}/*.a
}
