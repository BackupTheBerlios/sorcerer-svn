    stable 1.2
  category security/encryption
 attribute console new
    source keyutils-$VERSION.tar.bz2
       url http://people.redhat.com/~dhowells/keyutils/
  homepage 
      opts --enable-static=no
  estimate 50
      desc 'keyutils is for controlling the key management system built into linux.'

build(){
make            &&
prepare_install &&
make    install
}
