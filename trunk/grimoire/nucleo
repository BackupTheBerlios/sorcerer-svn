   version stable 0.7.6
   require OpenCV avahi ffmpeg gd libXpm libexif
  category video/library
 attribute library makej x11
 attribute broke
#attribute multilib-concurrent multilib-dual
    source http://insitu.lri.fr/metisse/download/nucleo/nucleo-$VERSION.tar.bz2
      info last  20090924
      info home http://insitu.lri.fr/~chapuis/metisse/index.html
      desc 'a toolkit for exploring new uses of video
and human-computer interaction techniques'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] &&
      [[ $CFLAGS   =~ -m32   ]]
 then opts --x-libraries=/usr/lib
 fi
 default_build
}

