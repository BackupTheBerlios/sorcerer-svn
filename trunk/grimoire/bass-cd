    version stable 1.2
   category game development/emulator
  attribute archive_off data solo
     source $SOURCEFORGE_URL scummvm/extras/Beneath%20a%20Steel%20Sky/bass-cd-$VERSION.zip
       info good 20120602
       desc 'the CD version of Beneath a Steel Sky point and click adventure game'

build(){
 cd ..
 chmod 755 *
 chmod -R 644 */*
 mkdir -vp   $DESTDIR/usr/share/games &&
 cp    -av * $DESTDIR/usr/share/games/
}
