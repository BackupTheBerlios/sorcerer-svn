   version stable 0.4.2 0.4.1 0.4.0
   require libgsf
  category documentation
 attribute console
    source $SOURCEFORGE_URL wvware/wv2-$VERSION.tar.bz2
      info home http://www.wvWare.com
      desc 'library for convering Microsoft Word formats to HTML'

