   VERSION=( 0.2.3 )
      SAFE=( 0.2.3 )
  CATEGORY='documentation'
 ATTRIBUTE='console'
    SOURCE="wvware/wv2-$VERSION.tar.bz2"
  HOMEPAGE='http://www.wvWare.com'
       REQ='libgsf'
       URL="$SOURCEFORGE_URL"
  ESTIMATE='530'
      DESC='wv2 is a library for convering Microsoft Word formats to HTML'

build(){
 case $VERSION in
  0.2.3) sed -i '1i#include <cstring>' $( find . -name \*.cpp ) ;;
 esac
 default_build
}
