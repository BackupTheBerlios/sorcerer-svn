   version stable 0.4.2
   require libgsf
  category documentation
 attribute library makej multilib-dual
    source $SOURCEFORGE_URL wvware/wv2-$VERSION.tar.bz2
      info good 20120713
      info last 20090306
      info home http://www.wvWare.com
      desc 'library for convering Microsoft Word formats to HTML'

build(){
 help_build(){
  sed -i 's:glib/giochannel.h:glib.h:' src/olestream.h
  default_build &&
  if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
  then mv $DESTDIR/usr/lib{,64}
  fi
 }

 case $VERSION in
  0.4.2) help_build ;;
      *) default_build ;;
 esac
}
