   VERSION=( "1.16" "1.14" "1.10" )
  CATEGORY="security"
 ATTRIBUTE="console"
    SOURCE="checkpolicy-$VERSION.tgz"
  HOMEPAGE="http://www.nsa.gov/selinux"
       URL="http://www.nsa.gov/selinux/archives"
       REQ="bison flex libsepol"
  ESTIMATE="18"
      DESC="checkpolicy contains the policy compiler needed to build policies."


build()  {
  # sed    -i  "s/MLS=n/MLS=y/"  Makefile
  make  "CFLAGS=$CFLAGS"  &&
  prepare_install  &&
  make    install
}
