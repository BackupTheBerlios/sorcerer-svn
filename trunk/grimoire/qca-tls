    stable 1.0
   require qt-x11-free
  category security/encryption
 attribute kde3 library
    source http://delta.affinix.com/download/qca/qca-tls-$VERSION.tar.bz2
  homepage http://delta.affinix.com/qca/
      desc 'qca-tls provides the QT cryptographic architecture'

build(){
patch -p1 < $SCRIPT_DIR/qca-tls-1.0.patch
export PATH="/opt/kde3/bin:$PATH"
./configure --qtdir=/opt/kde3 &&
make &&
make install INSTALL_ROOT=$DESTDIR
}
