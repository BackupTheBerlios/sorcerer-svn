   VERSION=( "0.3.8" "0.3.7" "0.3.6" "0.3.5" "0.3.4" )
  CATEGORY="network/email"
 ATTRIBUTE="server"
    SOURCE="teapop-$VERSION.tar.gz"

# Mainsite is down per 24-september-2005
#       URL="ftp://ftp.toontown.org/pub/teapop/"
# Instead we can obtain it from the following location:
       URL="http://aspect1.linux.tucows.com/files/"

  HOMEPAGE="http://www.toontown.org/teapop/"
       REQ=( "w3c-libwww"
             "xinetd:::for running server"
             "stunnel:::for pop3s"
             "postgresql:--with-pgsql=/usr::for Postgres support"
             "mysql:--with-mysql=/usr::for mysql support" )
#            "drac:--with-drac=/usr --with-dracinc=/usr/include/drac::for DRAC support"
# drac no longer in grimoire
   PROVIDE="pop3 pop3s"
  ESTIMATE="70"
      DESC="teapop is a non PAM-aware RFC1939 and RFC2449 compliant POP3-server
Features:
 Full support for virtual domains.
 Support for multiple IPs
 Follows RFC1939 and RFC2449
 APOP support
 MySQL authentication support.
 PostgreSQL authentication support.
 Apache htpasswd authentication support."
	
post_install() {
if  !  grep  -q  "pop3"  /etc/services;  then
 echo  "pop3            110/tcp"  >>  /etc/services
 echo  "pop3            110/udp"  >>  /etc/services
fi
}
