   VERSION=( "0.3.8" "0.3.7" "0.3.6" "0.3.5" "0.3.4" )
  CATEGORY="email"
 ATTRIBUTE="server"
       URL="ftp://www.toontown.org/pub/teapop
            http://www.toontown.org/pub/teapop"
  HOMEPAGE="http://www.toontown.org/teapop"
       REQ="w3c-libwww"
    OPT[0]="xinetd:::for running server"
    OPT[1]="stunnel:::for pop3s"
    OPT[2]="postgresql:--with-pgsql=/usr::for Postgres support"
    OPT[3]="mysql:--with-mysql=/usr::for mysql support"
#   OPT[4]="drac:--with-drac=/usr --with-dracinc=/usr/include/drac::for DRAC support"
# drac no longer in grimoire
   PROVIDE="pop3 pop3s"
  ESTIMATE="70"
      DESC="teapop is a non PAM-aware RFC1939 and RFC2449 compliant POP3-server

teapop is an RFC1939 and RFC2449 compliant POP3-server
Features:
	Full support for virtual domains.
	Support for multiple IPs
	Follows RFC1939 and RFC2449
	APOP support
	MySQL authentication support.
	PostgreSQL authentication support.
	Apache htpasswd authentication support.
"
