  stable 2008-02-15 2008-01-20 2008-01-07 2007-12-12 2007-10-10
  CATEGORY='development/interpreter'
 ATTRIBUTE='console new'
       REQ=( ''
             'ffmpeg:::for video codec support'
             'libevent:::for event driven programming'
             'libsamplerate:::for converting audio sampling rates'
             'portaudio:::for output through portaudio sound server'
             'sqlite-v2.8:::for sqlite database support'
             'taglib:::for reading and editing audio file metadata' )
    SOURCE="Io-$VERSION.tar.gz"
  HOMEPAGE='http://www.iolanguage.com'
       URL='http://io.urbanape.com/release/'
  ESTIMATE='1000'
      DESC='Io is a small, prototype-based programming language.'

build(){
 make            INSTALL_PREFIX=/usr &&
 prepare_install                     &&
 make    install INSTALL_PREFIX=/usr
}
