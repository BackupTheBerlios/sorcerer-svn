   VERSION=( "2.0" "1.1" )
    IGNORE="2003"
  CATEGORY="audio"
 ATTRIBUTE="console"
    SOURCE="faac/faad2-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
