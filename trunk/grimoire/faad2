   version stable 2.7 2.6.1
   require automake libsndfile libtool id3lib
# optional xmms --with-xmms --without-xmms to compile XMMS plugins
  switch        --with-drm  --without-drm  to compile libfaad with DRM support
      opts --with-mp4v2 --disable-static
  category audio/codec audio/library
 attribute console library makej multilib-concurrent
    source $SOURCEFORGE_URL faac/faad2-src/faad2-$VERSION/faad2-$VERSION.tar.bz2
      info last 20090210
      info home http://www.audiocoding.com/
  eprovide libmp4v2
      desc 'freeware advanced audio decoder 2'

build(){
 export CFLAGS+=' -fPIC'
 default_build
}
