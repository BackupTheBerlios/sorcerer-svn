    version   stable 8.10.4 8.10.3 8.10.2
   category graphic/library
  attribute linux-module makej
     source http://www.directfb.org/downloads/Core/linux-fusion/linux-fusion-$VERSION.tar.gz
       info last 20120917
       info home http://www.directfb.org/
       desc 'kernel module for running multiple DirectFB programs'

build(){
 local LVER=$( installed_version $( get_provider linux-kernel ) )
 local UDEV=$DESTDIR/lib/udev/rules.d/40-fusion.rules

 make KERNELDIR=/usr/src/linux KERNEL_VERSION=$LVER INSTALL_MOD_PATH=$DESTDIR &&
 make KERNELDIR=/usr/src/linux KERNEL_VERSION=$LVER INSTALL_MOD_PATH=$DESTDIR install &&
 mkdir -pvm 755 $( dirname $UDEV ) &&
 echo 'KERNEL=="fusion[0-9]*", NAME="fusion/%n", GROUP="video", MODE="0660"' > $UDEV &&
 chmod 644 $UDEV
}
