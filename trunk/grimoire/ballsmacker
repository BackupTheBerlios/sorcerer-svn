   VERSION=( "1.0.0" )
  CATEGORY="game"
 ATTRIBUTE="x11 new"
    SOURCE="ballsmacker/ballsmacker-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://ballsmacker.sourceforge.net"
       REQ=( "SDL glib"
             "alsa-lib:::for output through alsa" )
      OPTS="--bindir=/usr/games"
  ESTIMATE="45"
      DESC="ballcsmacker is an OpenGL billards (pool) simulation."

build() {
  export  LDFLAGS="-L/usr/X11R6/lib $LDFLAGS"
  default_build  &&
  if    [  -f  /usr/bin/ballsmacker  ];  then
    mkdir  -p                        /usr/games
    mv         /usr/bin/ballsmacker  /usr/games
  fi
}
