# Uncertain if installed properly
# uncertain if used automatically by anything.
# might be used by curl but perhaps only when
# specific command line parameters
# are also included in curl's invocation.

version_year_week
   require openssl perl
  category network/http security
 attribute console library makej multilib-concurrent
    source http://curl.haxx.se/ca/cacert.pem.bz2
   disable scavenge
      info good 20120614
      info home http://curl.haxx.se/ca/
      desc 'certificate authority certificates'

build(){
 mkdir -pvm 755       $DESTDIR/etc/ssl/certs
 decompress $SOURCE > $DESTDIR/etc/ssl/certs/cacert.pem
}

post_install(){
 c_rehash
 default_post_install
}
