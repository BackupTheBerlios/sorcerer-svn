   version stable 4
   require perl postgresql
  category db
 attribute console postgresql new
    source http://pgfoundry.org/frs/download.php/2313/pg-toolbox-$VERSION.tar.gz
      info home http://pg-toolbox.projects.postgresql.org/
      desc 'pg-toolbox for PostgreSQL administration and devlopment'

build() {
 export PREFIX=$DESTDIR/usr
 default_build
}
