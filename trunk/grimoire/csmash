   version stable 0.6.6
   require MesaLib SDL_mixer SDL_image gtk+ libvorbis
case $VERSION in
 0.6.6)
   require autoconf ;;
esac
      opts --disable-sdltest
  category game
 attribute x11
    source $SOURCEFORGE_URL cannonsmash/CannonSmash/$VERSION/csmash-$VERSION.tar.gz
      info good 20120729
      info last 20031123
      info home http://cannonsmash.sourceforge.net/
 freshmeat cannonsmash
      desc '3D table tennis game'

build(){
 export   CFLAGS="${CFLAGS//-march=native/}"
 export CXXFLAGS="${CFLAGS//-march=native/}"

 case $VERSION in
  0.6.6) autoreconf ;;
 esac
 default_build
}
