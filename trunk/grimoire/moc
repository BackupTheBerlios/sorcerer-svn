    IGNORE="torrent"
  CATEGORY="audio-player"
 ATTRIBUTE="console"
    SOURCE="moc-$VERSION.tar.gz"
       URL="ftp://ftp.daper.net/pub/soft/moc/stable"
  HOMEPAGE="http://moc.daper.net"
       REQ=( "ncurses"
             "alsa-lib:::for output using alsa"
             "curl:--with-curl:--without-curl:for Internet stream support"
             "flac:--with-flac:--without-flac:for flac audio codec"
             "jackit:--with-jack:--without-jac:to use jack sound server for output"
             "libid3tag libmad:--with-mp3:--without-mp3:for mp3 support"
             "libmpcdec taglib:--with-musepack:--without-musepack:for musepack (mpc) support"
             "libsamplerate:--with-samplerate:--without-samplerate:for sample rate conversion"
             "libsndfile:--with-sndfile:--without-sndfile:for reading audio files of sampled sounds"
             "speex:--with-speex:--without-speex:for speex audio codec support"
             "libvorbis:--with-ogg:--without-ogg:for ogg/vorbis codec support" )
  ESTIMATE="110"
      DESC="moc is a console audio player with ncurses interface.
moc (music on console) is a console audio player
with a simple ncurses interface in playmp3list style.
It supports MP3 (with id3tag, VBR, and Xing header)
and OGG formats, and the OSS mixer."
