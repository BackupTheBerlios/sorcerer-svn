   VERSION=( "0.9" "0.8" "0.7" )
  CATEGORY="file-share"
 ATTRIBUTE="console"
    SOURCE="cccp.$VERSION"
       URL="http://members01.chello.se/hampasfirma/cccp"
  HOMEPAGE="http://members01.chello.se/hampasfirma/cccp"
       REQ="dctc"
  ESTIMATE="6"
      DESC="cccp is a console front end to the dctc.

cccp is a Direct Connect filesharing client 
that uses DCTC (Direct Connect Text Client).
It is a powerful command line client that 
supports scripting.
"


build() {
rm    -f  cccp
make             &&
prepare_install  &&
make    install
}
