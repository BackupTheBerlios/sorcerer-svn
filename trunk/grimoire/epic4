    stable 2.10 2.8 2.6 2.4 2.2 2.0 1.0.1
   require ncurses openssl
    ignore 'help'
  category network/chat
 attribute console client
  homepage http://www.epicsol.org
       url 'ftp://ftp.epicsol.org/pub/
            ftp://ftp.magenet.net/pub/
            ftp://ftp.freenet.de/pub/ftp.epicsol.org/pub/
            ftp://ftp.leguin.org.uk/pub/mirrors/ftp.epicsol.org/pub/
            ftp://ftp.burken.nu/pub/irc/clients/
            ftp://ftp.bluecherry.net/pub/mirrors/ftp.epicsol.org/pub/
            ftp://ftp.mud.pl/pub/epicsol/pub/
            ftp://totem.fix.no/pub/mirrors/
            ftp://ftp.levitate.net/pub/
            ftp://ftp.eu.uu.net/pub/unix/irc/
            ftp://ftp.artifact.hu/pub/
            ftp://ftp.irc.org/irc/clients/unix/'
   source epic/EPIC4-PRODUCTION/epic4-$VERSION.tar.bz2
   source epic/EPIC4-PRODUCTION/epic4-help-20040308.tar.gz
 freshmeat epic
  estimate 250
      desc 'epic4 is the (E)nhanced (P)rogrammable (I)RC-II (C)lient.
epic4 is a new direction in ircII development.
No longer is EPIC 100% backwards compatable
with ircII, but instead we have chosen to
find those things where compatability is
undesirable, and fix them.
No gratuitous incompatabilities have been
added, but lots of new code has been added
to make EPIC the best ircII client we could make.'


build(){
 export   CFLAGS="${CFLAGS/-O3/-O2}"
 export CXXFLAGS="${CXXFLAGS/-03/-O2}"

 default_build &&
 mkdir -p    /usr/share/epic &&
 cp -va help /usr/share/epic
}
