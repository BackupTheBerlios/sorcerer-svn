with version stable 1.7.0
with base    ilmbase zlib
with also    --enable-static=no
with role    graphic
with trait   library lto makej multilib-concurrent
with source  http://savannah.nongnu.org/download/openexr/openexr-$VERSION.tar.gz
with info    good 20120716
with info    last 20100723
with info    home http://www.openexr.com
with info    cite 'high dynamic range (HDR) image file format'

build(){
 case $VERSION in
  1.7.0) sed -i '1i#include <cstring>' exrenvmap/blurImage.cpp ;;
 esac
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
