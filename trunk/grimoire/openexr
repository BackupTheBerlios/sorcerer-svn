   version stable 1.7.0
   require ilmbase zlib
      opts --enable-static=no
  category graphic
 attribute library lto makej multilib-concurrent
    source http://savannah.nongnu.org/download/openexr/openexr-$VERSION.tar.gz
      info good 20120716
      info last 20100723
      info home http://www.openexr.com
      desc 'high dynamic range (HDR) image file format'

build(){
 case $VERSION in
  1.7.0) sed -i '1i#include <cstring>' exrenvmap/blurImage.cpp ;;
 esac
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
