    stable 7.5.3
   require imake

  category window-manager
 attribute x11 new broke
# Has compile error
# May require old version of XFree86 to compile?
#   source larswm-$VERSION.tar.gz
       url http://www.lab1702.net/fnurt/larswm/
      vurl http://www.lab1702.net/fnurt/larswm/
  homepage http://www.lab1702.net/fnurt/larswm/
     WMBIN='/usr/X11R6/bin/larswm'
  estimate 88
      desc 'larswm is a tiling window manager.
larswm is a rewrite of 9wm that adds automatic tiling, 
virtual desktops and many more features to make 
it a highly productive user environment. 
Despite the high level of automation, 
it uses very little CPU time and memory while running.'


build()  {
  xmkmf  -a  &&
  make       &&
  prepare_install  &&
  make    install  install.man  &&
  install  -m 0644  sample.larswmrc  /etc/X11/larswmrc
}
