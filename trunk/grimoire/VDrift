   VERSION=( "6-9-05" )
  CATEGORY="game"
 ATTRIBUTE="x11 broken"
# No idea what version of openal this requires.
    SOURCE="vdrift/VDrift-$VERSION.tar.bz2"
  HOMEPAGE="http://vdrift.sourceforge.net"
       URL="$SOURCEFORGE_URL"
       REQ="SDL_image openal"
      OPTS="--bindir=/usr/games --disable-dependency-tracking"
  ESTIMATE="357"
      DESC="VDrift is an automobile drift racing game."

build()  {
#  export    CFLAGS="-I/usr/X11R6/lib $CFLAGS"
#  export  CXXFLAGS="-I/usr/X11R6/lib $CXXFLAGS"
  export  LDFLAGS="-L/usr/X11R6/lib $LDFLAGS"
  sed  -i  "s:alu.h:alut.h:"  include/sound.h
