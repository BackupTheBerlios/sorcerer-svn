   VERSION=( 0.9.1 )
    IGNORE='BeOS'
  CATEGORY='game'
 ATTRIBUTE='x11'
    SOURCE="net-bubble-$VERSION.tar.gz"
       URL='http://netbubble.zippygraphics.com/files/'
  HOMEPAGE='http://netbubble.zippygraphics.com/'
       REQ='SDL_image SDL_net'
  ESTIMATE='15'
      DESC='net-bubble is game of throwing/build groups of bubbles.'

build(){
 sed -i    "s:gfx/:/usr/share/games/net-bubble/gfx/:"    chargement.c
 sed -i "s:levels/:/usr/share/games/net-bubble/levels/:" main.c
 chmod  755 $( find . -type d )
 chmod  644 $( find . -type f )
 make  "CFLAGS=$CFLAGS $( sdl-config --cflags )" &&
 prepare_install &&
 mkdir   -p          /usr/share/games/net-bubble &&
 cp      -av  gfx    /usr/share/games/net-bubble &&
 cp      -av  levels /usr/share/games/net-bubble &&
 install -o root -g root -m 755 net-bubble /usr/bin
}
