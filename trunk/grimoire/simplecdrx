   VERSION=( "1.3.3" )
  CATEGORY="disk/cd"
 ATTRIBUTE="x11 new broken"
# May have a compile problem due to new linux kernel headers.
    SOURCE="simplecdrx-$VERSION.tar.bz2"
       URL="http://ogre.rocky-road.net/files/"
  HOMEPAGE="http://ogre.rocky-road.net/cdr.shtml"
       REQ=( "cdrtools gtk+-v1.2"
             "cdrdao:::for burning DAO audio or data CDRs"
             "lame:::for encoding mp3 streams"
             "mpg321:::for playing MP3s"
             "ogmtools:::for editing ogg media streams" )
  ESTIMATE="193"
 FRESHMEAT="simplecdr-x"
      DESC="simplecdrx is a gtk+ based GUI for CD creation and burning."

build()  {
  CFLAGS="$( gtk-config --cflags )   $CFLAGS"
CXXFLAGS="$( gtk-config --cflags ) $CXXFLAGS"
default_build
}
