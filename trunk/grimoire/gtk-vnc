   version stable 0.4.3 0.4.1
   require cyrus-sasl gtk+-v3
#  require cyrus-sasl gtkglext
  optional pygtk '' '' for Python wrapper for gtk-vnc
      opts --enable-static=no
      opts --with-gtk=3.0
  category utility/terminal-emulator
 attribute gnome library x11
#attribute makej multilib-concurrent
    source $GNOME_URL sources/gtk-vnc/${VERSION:0:3}/gtk-vnc-$VERSION.tar.bz2
      info home  http://live.gnome.org/gtk-vnc
      info mail  http://mail.gnome.org/mailman/listinfo/gtk-vnc-list
      desc 'VNC viewer widget for GTK'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
