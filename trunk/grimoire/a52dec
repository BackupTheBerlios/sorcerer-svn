# 0.7.4 released 20020727

   version stable 0.7.4 0.7.3 0.7.2
   require automake libtool
      opts --enable-shared --disable-static
  category video
 attribute library makej multilib-dual
#attribute multilib-concurrent
    source http://liba52.sourceforge.net/files/a52dec-$VERSION.tar.gz
      info home  http://liba52.sourceforge.net/
      info vurl http://liba52.sourceforge.net/
 freshmeat liba52
      desc 'liba52 is a library for decoding ATSC A/52 streams.
The A/52 standard is used in a variety of applications,
including digital television and DVD.
It is also known as AC-3.'

build(){
 local CC
 export CFLAGS+=' -fPIC'
 if   [[ $CFLAGS =~ -m32 ]]
 then export CC="gcc -m32"
 fi

 # to rid the rpath
 aclocal; automake -acf; libtoolize -cf; autoreconf -fi
 default_build
}
