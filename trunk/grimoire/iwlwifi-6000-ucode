    stable 9.193.4.1
   require udev
  category kernel network
 attribute firmware
    source http://intellinuxwireless.org/iwlwifi/downloads/iwlwifi-6000-ucode-$VERSION.tgz
  homepage http://intellinuxwireless.org
      vurl "http://intellinuxwireless.org/?n=downloads"
      desc 'firmware for Intel PRO/Wireless 6000 card'

build(){
mkdir -vp $DESTDIR/lib/firmware &&
install -vm 644 iwlwifi-6000*.ucode $DESTDIR/lib/firmware
}
