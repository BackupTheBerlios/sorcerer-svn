   version stable 9.221.4.1
   require udev
  category kernel network
 attribute firmware
    source http://intellinuxwireless.org/iwlwifi/downloads/iwlwifi-6000-ucode-$VERSION.tgz
      info home  http://intellinuxwireless.org/
      info vurl "http://intellinuxwireless.org/?n=downloads"
      desc 'firmware for Intel Centrino Ultimate-N 6300 and Advanced-N 6200'

build(){
 mkdir  -pvm 755         $DESTDIR/lib/firmware &&
 install -vm 644 *.ucode $DESTDIR/lib/firmware/
}
