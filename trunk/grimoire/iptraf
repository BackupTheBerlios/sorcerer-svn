   VERSION=( "3.0.0" "2.7.0" "2.6.1" )
# iptraf source is not compatible with current linux kernel headers.
  CATEGORY="network"
 ATTRIBUTE="console broken depreciated"
    SOURCE="iptraf-$VERSION.tar.gz"
       URL="ftp://iptraf.seul.org/pub/iptraf"
  HOMEPAGE="http://iptraf.seul.org"
#       URL="ftp://ftp.cebu.mozcom.com/pub/linux/net"
#  HOMEPAGE="http://cebu.mozcom.com/riker/iptraf"
       REQ="ncurses"
 FRESHMEAT="iptraf"
      DESC="iptraf is a console-based network statistics utility
iptraf is a console-based network statistics utility for Linux.
It gathers a variety of figures such as TCP connection packet and
byte counts, interface statistics and activity indicators, TCP/UDP
traffic breakdowns, and LAN station packet and byte counts."

build() {
cd  src
sed  -i  "s!/usr/local/bin!/usr/bin!"        Makefile
sed  -i  "s!/var/local/iptraf!/var/iptraf!"  Makefile
sed  -i  "s!read YESNO!YESNO == y!"          install.sh
make    clean           &&
make    PREFIX=/usr     &&
prepare_install         &&
make    PREFIX=/usr install
}
