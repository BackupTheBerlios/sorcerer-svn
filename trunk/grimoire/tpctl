  stable 4.17
  CATEGORY='utility'
 ATTRIBUTE='console new'
    SOURCE="tpctl/tpctl_$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://tpctl.sourceforge.net/'
# tp_smapi not required installed to compile tpctl
# but module might need be loaded to run programs from tpctl?
#      REQ='ncurses tp_smapi'
       REQ='ncurses'
  ESTIMATE='60'
      DESC="tpctl provides tools for thinkpad configuration."

build()  {
  make        all  &&
  prepare_install  &&
  make    install
}
