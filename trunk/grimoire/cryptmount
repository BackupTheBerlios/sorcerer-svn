   VERSION=( "0.4" )
    IGNORE="rc"
  CATEGORY="security/encryption"
 ATTRIBUTE="console new"
    SOURCE="cryptmount/cryptmount-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://cryptmount.sourceforge.net"
       REQ="device-mapper openssl"
      OPTS="--enable-fsck"
  ESTIMATE="30"
      DESC="cryptmount allows any user to mount encrypted filesystems
on demand using the device-mapper infrastructure. Filing
systems can be either raw block devices or ordinary files,
with loopback devices setup automatically."

