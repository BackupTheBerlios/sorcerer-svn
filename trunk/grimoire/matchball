   VERSION=( "0.33b-src" )
  CATEGORY="game"
 ATTRIBUTE="x11"
    SOURCE="matchball-$VERSION.tar.gz"
       URL="http://www.kraus.tk/projects/matchball/sources/"
  HOMEPAGE="http://www.kraus.tk/projects/matchball/"
       REQ="SDL_image SDL_mixer SDL_ttf"
  ESTIMATE="154"
      DESC="matchball is a ball puzzle game.
matchball is a little puzzle game written in C++,
using the Simple DirectMedia Layer.
Click to remove all adjacent balls with the
same color and reach as many points as possible."

build() {
make_install()  {

  USM="/usr/share/matchball"
   UG="/usr/games"
  RMA="#!/bin/bash\ncd $USM\n./matchball"

  cd  matchball
  mkdir  -p  $USM  $UG
  ls  |
  while  read    ITEM;  do
    if    [   -x   $ITEM  ]  ||
          [   -x   $ITEM  ]
    then  cp  -a   $ITEM  $USM
    fi
  done
  echo  -e  "$RMA"  >  $UG/matchball
  chmod  755           $UG/matchball

}


./configure  --build=$BUILD        \
             --prefix=/usr         \
             --sysconfdir=/etc     \
             --localstatedir=/var  \
             --bindir=/usr/games   \
             $OPTS                 &&
make                               &&
prepare_install                    &&
   make_install
}
