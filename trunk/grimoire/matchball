   version stable 0.33b-src
   require SDL_image SDL_mixer SDL_ttf
  category game
 attribute x11
    source http://www.kraus.tk/projects/matchball/sources/matchball-$VERSION.tar.gz
  homepage http://www.kraus.tk/projects/matchball/
      desc 'ball puzzle game
matchball is a little puzzle game written in C++,
using the Simple DirectMedia Layer.
Click to remove all adjacent balls with the
same color and reach as many points as possible.'

build(){
 make_install(){
  USM="/usr/share/matchball"
   UG="/usr/bin"
  RMA="#!/bin/bash\ncd $USM\n./matchball"

  cd matchball
  mkdir -p $DESTDIR/{$USM,$UG}
  ls |
  while  read   ITEM; do
    if   [  -x $ITEM ] ||
         [  -x $ITEM ]
    then cp -a $ITEM $DESTDIR/$USM
    fi
  done
  echo  -e "$RMA" > $DESTDIR/$UG/matchball
  chmod 755         $DESTDIR/$UG/matchball

}

 ./configure          \
 --prefix=/usr        \
 --sysconfdir=/etc    \
 --localstatedir=/var \
 $OPTS &&
 make  &&
 make_install
}
