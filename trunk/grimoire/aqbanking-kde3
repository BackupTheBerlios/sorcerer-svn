   version stable 4.2.4 4.2.2 4.2.1 4.2.0 4.1.8 4.1.4 4.1.3 3.0.1 3.0.0
   require kdelibs-v3 libchipcard  libgail-gnome libofx
  category utility/finance
 attribute library kde3
      opts --prefix=/opt/kde3 --with-qt-dir=/opt/kde3 --disable-debug --enable-final --with-qt3-includes=/opt/kde3/include --with-qt3-libs=/opt/kde3/lib --with-qt3-moc=/opt/kde3/bin --with-qt3-uic=/opt/kde3/bin --with-kde3-prefix=/opt/kde3 --with-kde3-includes=/opt/kde3/include --with-kde3-libs=/opt/kde3/lib
    source "http://www.aquamaniac.de/sites/download/download.php?package=03&release=50&file=01&dummy=aqbanking-$VERSION.tar.gz"
      vurl http://www.aquamaniac.de/sites/download/packages.php
      info home  http://www2.aquamaniac.de/sites/aqbanking/index.php
      desc 'interface to online banking libraries'

# --with-frontends='cbanking g2banking' \

build(){
 ./configure       \
 --sysconfdir=/etc \
 $OPTS &&
 make  &&
 make install "DESTDIR=$DESTDIR"
}
