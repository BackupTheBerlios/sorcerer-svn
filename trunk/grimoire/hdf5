# As is requires gcc fortran installed in order to compile

   version stable 1.8.8 1.8.7 1.8.6 1.8.5-patch1
   require gcc-fortran gcc-g++ zlib
  optional szip '' '' to enable SZIP compression
      opts --enable-fortran --enable-cxx
  category science
 attribute library makej
 attribute multilib-fail
    source http://www.hdfgroup.org/ftp/HDF5/current/src/hdf5-$VERSION.tar.bz2
      vurl http://www.hdfgroup.org/ftp/HDF5/current/src/
      info last 20111123
      info home http://www.hdfgroup.org/
      info docs http://www.hdfgroup.org/documentation/
      desc 'library for the Hierarchical Data Format 5 (HDF5)'

build(){
 ./configure           \
  --prefix=/usr        \
  --sysconfdir=/etc    \
  --localstatedir=/var \
  --with-szlib         \
  $OPTS &&
 make   &&
 make install DESTDIR=$DESTDIR
}
