    stable 1.8.1
   require zlib
  optional szip '' '' to enable SZIP compression

   category data science library
  attribute new library
     source hdf5-$VERSION.tar.gz
   homepage http://www.hdfgroup.org
        url ftp://ftp.hdfgroup.org/HDF5/current/src/
       opts --enable-fortran --enable-cxx
   estimate 18000
       desc 'hdf5 is a library for the Hierarchical Data Format 5 (HDF5).'

build(){
 ./configure \
 --build=$BUILD \
 --prefix=/usr \
 --sysconfdir=/etc \
 --localstatedir=/var \
 --with-szlib \
 $OPTS &&
 make  &&
 prepare_install &&
 make    install
}
