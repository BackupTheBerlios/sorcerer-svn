    stable 22.8
   require bin86 device-mapper nasm
  category administration/bootloader
 attribute console x86
       url 'http://home.san.rr.com/johninsd/pub/linux/lilo/
            http://www.ibiblio.org/pub/Linux/system/boot/lilo/'
    source lilo-$VERSION.src.tar.gz
  homepage http://home.san.rr.com/johninsd/pub/linux/lilo/
   exclude /etc/lilo.conf
   exclude /etc/lilo.conf.head
   exclude /etc/lilo.conf.tail
  estimate 200
      desc 'lilo is a boot loader for x86 computers.'

build(){
 case $VERSION in
  22.6.1) patch -p1 < $SOURCE_CACHE/lilo/$VERSION/${SOURCE[1]} ;;
 esac
 make        all ROOT= OPT="$CFLAGS" LDFLAGS="$LDFLAGS" &&
 prepare_install &&
 make    install ROOT= MAN_DIR=/usr/man
}
