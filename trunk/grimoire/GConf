# It might require only PolicyKit and not PolicyKit-gnome

    stable 2.32.0 2.28.1 2.28.0 2.26.2 2.26.1 2.26.0
# unstable 2.31.7
   require ORBit2 PolicyKit gobject-introspection intltool
#  require ORBit2 PolicyKit gtk+
  optional gtk+
  optional openldap '' '' for lightweight directory access protocol support
  category development
 attribute gnome library
    source $GNOME_URL sources/GConf/${VERSION:0:4}/GConf-$VERSION.tar.bz2
  homepage http://www.gnome.org/projects/gconf
      opts --enable-static=no
   protect /etc/gconf/gconf.xml.mandatory
   exclude /etc/gconf/gconf.xml.defaults
 freshmeat gconf
 conflicts GConf-dbus
  estimate 850
      desc 'system for storing configuration information'

current(){
 if ! find  /etc/gconf/gconf.xml.system -maxdepth 0 -perm 755 | grep -q .; then
  mkdir -p  /etc/gconf/gconf.xml.system
  chmod 755 /etc/gconf/gconf.xml.system
 fi
}

