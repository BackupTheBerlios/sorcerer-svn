# pango                 version 1.28.3 will compile with
# gobject-introspection version 0.9.8, but not with
# gobject-introspection version 0.9.6

# 1.28.4 has a problem with introspection
# 1.29.5 requires glib 2.31.0
# pango > 1.29.4 requires developmental glib
# 1.24.5 did not install /usr/share/gir-1.0/Pango-1.0.gir
# 1.26.2 failed compilation missing break.c

   version   stable 1.30.1 1.30.0 1.29.5 1.28.4
   require cairo glib gobject-introspection libXft xcb-util
  category graphic
 attribute gnome library makej multilib-concurrent optimize
case $VERSION in
 1.28.*)
    source $GNOME_URL sources/pango/${VERSION:0:4}/pango-$VERSION.tar.bz2 ;;
      *)
    source $GNOME_URL sources/pango/${VERSION:0:4}/pango-$VERSION.tar.xz ;;
esac
      info last 20120327
      info home http://www.pango.org
      desc 'library for layout and rendering of text
pango has an emphasis on internationalization.'

build(){
# case statement not tested/tried going with unstable version instead.
 case $VERSION in
  1.28.4) sed -i 's:<repository version="1\.1":<repository version="1.2":' pango/*.gir ;;
 esac
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}

post_install(){
 default_post_install
 echo pango-querymodules | pipe_queue $CAST_QUEUE
}
