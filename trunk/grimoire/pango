   VERSION=( "1.10.3" "1.10.2" "1.10.1" "1.10.0" )
    IGNORE="^1\.13\."
# Version 1.8.2 causes SciTE to behave strangely.
# Test pango version 1.8.3 or later with SciTE.
# Oh sorry, you will have to hold pango glib and gtk+
# if you want to continue to use SciTE, because the
# problem with SciTE flaking persists with pango 1.10.0
  CATEGORY="graphic"
 ATTRIBUTE="library x11"
    SOURCE="sources/pango/${VERSION%.*}/pango-$VERSION.tar.bz2"
       URL="$GNOME_URL"
  HOMEPAGE="http://www.pango.org"
       REQ="cairo expat fontconfig glib freetype x11"
  ESTIMATE="469"
      DESC="pango is library for layout and rendering of text.
pango has an emphasis on internationalization."


build()  {

  OF="/opt/fontconfig"
 OFI="$OF/include"
 OFL="$OF/lib"
OFLP="$OFL/pkgconfig"

OFI="/usr/include"

export  PKG_CONFIG_PATH="$OFLP"
export               CC="gcc  -I$OFI"
export          LDFLAGS="-L$OFL  -Wl,-rpath,$OFL  -Wl,-rpath-link,$OFL  $LDFLAGS"

default_build

}
