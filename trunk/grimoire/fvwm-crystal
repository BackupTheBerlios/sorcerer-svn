   VERSION=( "3.0.4" "3.0.3" "3.0" "3.0.RC3" "3.0.RC2" )
    IGNORE="RC"
  CATEGORY="window-manager"
 ATTRIBUTE="x11 new"
    SOURCE="fvwm-crystal-$VERSION.tar.gz"
       URL="http://download.gna.org/fvwm-crystal/$VERSION/"
  HOMEPAGE="http://fvwm-crystal.org/"
       REQ=( "Python fvwm habak rox-filer trayer"
             "ImageMagick:::for making desktop screenshots and window thumbnails"
             "aterm:::for an optional terminal-emulator 1 of 3"
             "cdcd:::for a cd player"
             "mpc:::for optional music player 1 of 3"
             "mrxvt:::for an optional terminal-emulator"
             "quodlibet:::for an optional music player 2 of 3"
             "sudo:::to reboot and shutdown"
             "rxvt-unicode:::for an optional terminal-emulator 2 of 3"
             "xmmsfind xmms-shell:::for optional music player 3 of 3"
             "xscreensaver:::for locking and blanking the X session"
             "xterm:::for a terminal emulator 3 of 3" )
  ESTIMATE="14"
      DESC="fvwm-crystal is a desktop environment."

build()  {
  prepare_install  &&
  make    install  prefix=/usr
}
