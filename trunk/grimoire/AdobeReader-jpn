    stable 81_jpn_i486-linux 708_jpn_i386-linux
 inherit AdobeReader
   require AdobeReader

  category documentation font font/library
 attribute data library
    source http://ardownload.adobe.com/pub/adobe/reader/unix/8.x/8.1.1/misc/FontPack${VERSION}.tar.gz
  estimate 100
      desc 'AdobeReader-jpn provides Japanese fonts for Adobe Acrobat Reader'

build(){
 if [ -f  BINCOM.TAR ]
    [ -f LANGCOM.TAR ]
    [ -f LANGJPN.TAR ]
 then
  tar -xf BINCOM.TAR
  tar -xf LANGCOM.TAR
  tar -xf LANGJPN.TAR
  chown -R root:root Adobe
  find Adobe -type f | escape_qs | xargs -r --max-lines=256 chmod og-w
  find Adobe -type d | escape_qs | xargs -r --max-lines=256 chmod 755
 else false
 fi              &&
 prepare_install &&
 cp -av Adobe /usr/lib/acrobat/
}
