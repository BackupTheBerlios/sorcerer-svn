inherit AdobeReader
unset VERSION EPROVIDE REQ
  stable 81_jpn_i486-linux 708_jpn_i386-linux
  CATEGORY='documentation font font/library'
 ATTRIBUTE='data library'
    SOURCE="FontPack${VERSION}.tar.gz"
       URL='http://ardownload.adobe.com/pub/adobe/reader/unix/8.x/8.1.1/misc/'
#   SOURCE="FontPack$VERSION.tar.gz"
#      URL='http://download.adobe.com/pub/adobe/reader/unix/7x/7.0.8/misc/'
       REQ='AdobeReader'
  ESTIMATE='130'
      DESC='AdobeReader-jpn provides Japanese fonts for Adobe Acrobat Reader'

build(){
 if   [ -f  BINCOM.TAR ]
      [ -f LANGCOM.TAR ]
      [ -f LANGJPN.TAR ]
 then
   tar -xf BINCOM.TAR
   tar -xf LANGCOM.TAR
   tar -xf LANGJPN.TAR
   chown -R root:root Adobe
   find Adobe -type f | escape_qs | xargs -r --max-lines=256 chmod og-w
   find Adobe -type d | escape_qs | xargs -r --max-lines=256 chmod 0755
 else false
 fi              &&
 prepare_install &&
 cp -av Adobe /usr/lib/acrobat/
}
