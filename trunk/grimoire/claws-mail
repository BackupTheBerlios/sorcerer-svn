    stable 3.4.0 3.3.1 3.3.0 3.2.0 3.1.0 3.0.2 3.0.1
   require gtk+ startup-notification
  optional aspell          --enable-aspell                 ''                 for spell checking support
  optional clamav          --enable-clamav-plugin          ''                 Build Clam AntiVirus
  optional compface        ''                              ''                 for compface support
  optional dillo           --enable-dillo-viewer-plugin    ''                 Build Dillo plugin for html mail rendering
  optional gpgme           --enable-gpgme                  ''                 for encrypted email
  optional libetpan        ''                              --disable-libetpan for IMAP4 support
  optional libgnomeprintui ''                              ''                 for printing of email in gnome
  optional openldap        ''                              ''                 for ldap support
  optional openssl         '--enable-ssl --enable-openssl' ''                 for pop3s and imaps support
  optional pilot-link      ''                              ''                 for palm pilot integration

    ignore 'theme\|iconset\|w32\|doc\|gtk2\|i18n\|rc\|TS\|plugins\|beta'
  category network/email network/news
 attribute client x11
       url $SOURCEFORGE_URL
    source sylpheed-claws/claws-mail-$VERSION.tar.bz2
  homepage http://www.claws-mail.org/
   provide email-client
# No spell for Mail-SpamAssassin in grimoire
#            'Mail-SpamAssassin:--enable-spamassassin-plugin::Build SpamAssassin plugin'
# gtkmathview is not in the grimoire
#            'gtkmathview:--enable-mathml-viewer-plugin::Build MathML-Viewer plugin'
      opts --enable-static=no
  eprovide claws-mail
  estimate 2000
#freshmeat sylpheed
      desc 'claws-mail is an e-mail client and news reader based on gtk+.
claws-mail is a gtk+ based, lightweight, and fast email client.
Almost all commands are accessible with the keyboard.
It also has many features such as multiple accounts,
POP3/APOP support, thread display, and multipart MIME.
The messages are managed in the MH format, so you will
be able to use it together with another mailer that
uses the MH format.'
