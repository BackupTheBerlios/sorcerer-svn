# seem to have optionals listed as requirements, curious.
# gst-plugins-base 0.10.32 failed to compile so
# gst-plugins-good 0.10.27 will not compile

   version stable 0.10.28 0.10.26 0.10.25 0.10.24
   require alsa-lib flac gst-plugins-base libXtst libdv libiec61883 libavc1394 libmusicbrainz libogg libshout libsoup libtheora libv4l libvorbis orc speex taglib wavpack xcb-util
  optional esound
  optional jackit
  optional pulseaudio '' '' for output through pulseaudio
      opts --disable-examples --enable-static=no
  category development
 attribute gnome library multilib-concurrent setarch
#attribute multilib-fail
    source http://gstreamer.freedesktop.org/src/gst-plugins-good/gst-plugins-good-$VERSION.tar.bz2
      info home  http://gstreamer.freedesktop.org/
      info docs  http://gstreamer.freedesktop.org/documentation/
      info mail  http://gstreamer.freedesktop.org/lists/
  estimate 2500
      desc 'set of plugins for gstreamer'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then opts --x-libraries=/usr/lib64
 else opts --x-libraries=/usr/lib
 fi

 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
