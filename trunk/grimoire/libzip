    stable 0.9 0.8
   require zlib
  category archive
 attribute library
    source http://www.nih.at/libzip/libzip-$VERSION.tar.gz
  homepage http://www.nih.at/libzip/
      opts --enable-static=no
  estimate 500
      desc 'libzip is a zip archive file library.'

build(){
 unset LD_PRELOAD
 ./configure               \
  --build=$BUILD           \
  --sysconfdir=/etc        \
  --localstatedir=/var     \
  --prefix=${PREFIX:-/usr} \
 $OPTS           &&
 make            &&
 prepare_install &&
 make    install
}

