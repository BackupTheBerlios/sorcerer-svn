   version stable 0.10.1
      opts --enable-static=no
   require cmake zlib
  category archive
 attribute library multilib-dual
      info good 20120716
      info last 20120315
    source http://www.nih.at/libzip/libzip-$VERSION.tar.gz
      info home http://www.nih.at/libzip/
      desc 'zip archive file library'

build(){
 default_build &&
 if    [[ $HOSTTYPE == x86_64 ]]; then
  if ! [[ $CFLAGS   =~ -m32   ]]
  then mv $DESTDIR/usr/lib{,64}
  fi
 fi
}
