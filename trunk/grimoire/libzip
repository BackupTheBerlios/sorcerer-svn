with version stable 0.10.1
with also    --enable-static=no
with base    cmake zlib
with role    archive
with trait   library multilib-dual
with info    good 20120320
with info    last 20120315
with source  http://www.nih.at/libzip/libzip-$VERSION.tar.gz
with info    home http://www.nih.at/libzip/
with info    cite 'zip archive file library'

build(){
 default_build &&
 if    [[ $HOSTTYPE == x86_64 ]]; then
  if ! [[ $CFLAGS   =~ -m32   ]]
  then mv $DESTDIR/usr/lib{,64}
  fi
 fi
}
