   version stable 0.1.8 0.1.7-noarch 0.1.6 0.1.5
   require bash dialog cdrtools
  category disk/cd
 attribute console
    source $SOURCEFORGE_URL dialogcd/dialogcd/${VERSION:0:3}/dialogcd-$VERSION.tar.gz
      info good 20120605
      info last 20031014
      info home http://dialogcd.sourceforge.net
      desc 'bash and dialog front end to cdrtools'

build(){
 [ -f dialogcd ] &&
 mkdir  -pvm 755          $DESTDIR/usr/bin &&
 install -vm 755 dialogcd $DESTDIR/usr/bin/
}
