    stable 0.6.0 0.5.7
    secure 0.6.0 0.5.7
   require gmp qt-x11-free soundtouch speex
  optional alsa-lib '' '' for ALSA audio input and output
  optional jackit   '' '' for jack audio mixing

    ignore 'rc\|bin\|Slack'
  category network/telephone
 attribute kde3
    source ihu/ihu-$VERSION.tar.gz
       url "$SOURCEFORGE_URL"
  homepage http://ihu.sourceforge.net/
      opts --prefix=/opt/kde3 --with-Qt-dir=/opt/kde3
  estimate 1200
      desc 'ihu is a UDP/TCP VoIP between two boxes using speex codec.'
build(){
 export LDFLAGS+=' -Wl,-R/opt/kde3/lib'
 default_build
}
