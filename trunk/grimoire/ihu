   version stable 0.6.0 0.5.7
   version secure 0.6.0
   require gmp qt-x11-free soundtouch speex
  optional alsa-lib '' '' for ALSA audio input and output
  optional jackit   '' '' for jack audio mixing
      opts --prefix=/opt/kde3 --with-Qt-dir=/opt/kde3
  category network/telephone
 attribute kde3
    source $SOURCEFORGE_URL ihu/stable%20release/$VERSION/ihu-$VERSION.tar.gz
      info home  http://ihu.sourceforge.net/
      info docs  http://ihu.sourceforge.net/documentation.html 
 estimate 1200
      desc 'UDP/TCP VoIP between two boxes using speex codec'

build(){
 export LDFLAGS+=' -Wl,-R/opt/kde3/lib'
 default_build
}
