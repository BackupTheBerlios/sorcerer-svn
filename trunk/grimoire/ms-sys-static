   inherit ms-sys
   require ms-sys
      desc 'statically linked ms-sys installed in /boot/util/'

build(){
case $MACHTYPE in
 *-uclibc) export LDFLAGS+=' -lintl ' ;;
esac

sed -i "s:/usr/local:/usr:
        s:EXTRA_CFLAGS =:EXTRA_CFLAGS = $CFLAGS:
        s?EXTRA_LDFLAGS =?EXTRA_LDFLAGS = $LDFLAGS -static?" Makefile

make &&
mkdir -pvm 700               $DESTDIR/boot/util &&
make install DESTDIR=$DESTDIR BINDIR=/boot/util &&
rm -fr ${DESTDIR:-nothing}{/bin,/sbin,/lib,/lib64,/usr}
}

current(){
 if   ! [ -f $VERSION_LOGS/sorcerer-installer ]
 then echo ms-sys-static | pipe_queue $DISPEL_QUEUE
 fi
}
