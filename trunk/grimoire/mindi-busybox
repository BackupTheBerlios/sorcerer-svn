    stable 1.7.3
  category administration/bootloader
 attribute console
    source ftp://ftp.mondorescue.org/src/mindi-busybox-$VERSION.tar.gz
  homepage http://www.mondorescue.org/
  estimate 100
      desc 'busybox configured for mindi'

build(){
make oldconfig  &&
make busybox    &&
prepare_install &&
make    install &&
mkdir -vp            /usr/libexec/mindi-busybox &&
cp    -va _install/* /usr/libexec/mindi-busybox/
}
