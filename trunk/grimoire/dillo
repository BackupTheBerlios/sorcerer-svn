    VERSION=( "0.8.6" "0.8.5" "0.8.4" "0.8.3" "0.8.2" "0.8.1" )
       SAFE=( "0.8.6" "0.8.5" )
# 0.8.6 perhaps requires old version of fltk?
# or it's source tree is missing files if it was previously included.
# 0.8.6, unlike 0.8.5 comes, with download GUI that requires an
# ?ancivent? version of fltk.  The OPTS= disables it for now.
  CATEGORY="network/web"
 ATTRIBUTE="client x11"
    SOURCE="dillo-$VERSION.tar.bz2"
       URL="http://dillo.auriga.wearlab.de/download/"
  HOMEPAGE="http://dillo.auriga.wearlab.de/"
       REQ=( "jpeg libpng gtk+-v1.2"
             "openssl:::for https support" )
      OPTS="--disable-dlgui"
  ESTIMATE="380"
      DESC="dillo is a very fast, extremely small web browser.
dillo is a very fast, extremely small Web browser.
It is a graphical browser built upon GTK+, and it
renders a good subset of HTML, excluding frames,
JavaScript, and JVM support."

build() {
default_build  &&
install  -m 0644  -o root  -g root  dillorc  /etc/dillorc
}
