   version stable 0.5 0.4 0.3
   require fuse libxml2 pcre rlog
  category disk/file-system
 attribute console
    source $SOURCEFORGE_URL loggedfs/loggedfs/$VERSION/loggedfs-$VERSION.tar.bz2
      info home http://loggedfs.sourceforge.net/
      desc 'fuse-based filesystem with configurable logging'

build(){
sed -i 's:-lpcre:-L/lib -L/lib64 -lpcre -lpthread:' Makefile
make &&
mkdir -p $DESTDIR/{bin,etc} &&
install -vm 755 loggedfs     $DESTDIR/usr/bin &&
install -vm 644 loggedfs.xml $DESTDIR/etc
}
