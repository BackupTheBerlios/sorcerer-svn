   VERSION=( "0.3" "0.2.1" "0.2" "0.1-alpha" )
  CATEGORY="disk/file-system"
 ATTRIBUTE="console new broken"
    SOURCE="loggedfs/loggedfs-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://loggedfs.sourceforge.net/"
       REQ="fuse libxml2 pcre rlog"
  ESTIMATE="10"
      DESC="loggedfs provides a fuse-based filesystem with configurable logging."

build()  {
  make             &&
  prepare_install  &&
          install -m 0755 loggedfs      /usr/bin  &&
          install -m 0644 loggedfs.xml  /etc
}
