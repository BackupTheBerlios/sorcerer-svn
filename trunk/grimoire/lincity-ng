   VERSION=( "1.0.1" "1.0" "0.9rc1" )
  CATEGORY="game"
 ATTRIBUTE="x11"
    SOURCE="lincity-ng-$VERSION.tar.bz2"
       URL="http://download.berlios.de/lincity-ng"
  HOMEPAGE="http://lincity-ng.berlios.de"
       REQ="SDL_gfx SDL_image SDL_mixer SDL_ttf jam libxml2 physfs zlib"
  ESTIMATE="162"
      DESC="lincity-ng is a city/country simulation game.
The game reminds a bit of SimCity but has
it's own goals and methods to get there."

build() {
./configure          \
--prefix=/usr        \
--bindir=/usr/games  &&
jam                  &&
prepare_install      &&
jam     install
}
