# compiles fine, but does not do a DESTDIR style install
# might discard spell in future since no method for installation.

   version stable 2.0 1.1.2 1.1.1 1.1.0 1.0.3
   require MesaLib SDL_gfx SDL_image SDL_mixer SDL_ttf jam libxml2 physfs
  category game
 attribute x11
 attribute broke
#   source http://prdownload.berlios.de/lincity-ng/lincity-ng-$VERSION.tar.bz2
    source http://download.berlios.de/lincity-ng/lincity-ng-$VERSION.tar.bz2
      info last 20090125
      info home http://lincity-ng.berlios.de/
      desc 'city/country simulation game'

build(){
./configure \
--prefix=/usr &&
jam &&
jam install DESTDIR=$DESTDIR
}
