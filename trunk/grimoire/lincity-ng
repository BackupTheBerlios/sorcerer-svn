   VERSION=( "1.1.2" "1.1.1" "1.1.0" "1.0.3" "1.0.2" "1.0.1" "1.0" )
  CATEGORY="game"
 ATTRIBUTE="x11"
    SOURCE="lincity-ng-$VERSION.tar.bz2"
       URL="http://download.berlios.de/lincity-ng/"
#           http://www.openftp.de/openFTP/STUFF/lincityng/"
  HOMEPAGE="http://lincity-ng.berlios.de/"
       REQ="SDL_gfx SDL_image SDL_mixer SDL_ttf jam libxml2 physfs"
  ESTIMATE="1500"
      DESC="lincity-ng is a city/country simulation game.
The game reminds a bit of SimCity but has
it's own goals and methods to get there."

build() {
./configure      \
--prefix=/usr    &&
jam              &&
prepare_install  &&
jam     install
}
