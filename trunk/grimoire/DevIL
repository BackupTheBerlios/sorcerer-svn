# 1.7.3 1.7.1 1.6.8 have compile errors
#   stable 1.6.8 1.6.7 1.6.1

    stable 1.7.2 1.7.1 1.7.0 1.6.7 1.6.1
  unstable 1.7.3 1.7.1-RC1 1.6.8-rc2
   require automake lcms libmng libpng libtool tiff
  optional MesaLib '' -disable-opengl for OpenGL support
  optional SDL     '' --disable-sdl   for SDL support
  category graphic
 attribute library x11
 attribute broke
       url $SOURCEFORGE_URL
    source openil/DevIL-$VERSION.tar.gz
  homepage http://openil.sourceforge.net
 freshmeat devil
  estimate 500
      desc 'DevIL is the developers Image Library
DevIL the Developers Image Library is a cross-platform image library
utilizing a simple syntax to load, save, convert, manipulate, filter,
and display a variety of images with ease.'

build(){
find . -type f |
escape_qs      |
xargs --max-lines=256 sed -i 's:\r::'
./autogen.sh
default_build
}
