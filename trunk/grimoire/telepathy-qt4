    stable 0.5.0 0.3.13 0.3.12
   require qt-everywhere-opensource telepathy-farsight
  category network/chat
 attribute library kde4
    source http://telepathy.freedesktop.org/releases/telepathy-qt4/telepathy-qt4-$VERSION.tar.gz
  homepage http://telepathy.freedesktop.org/wiki/
      opts -DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4
      opts -DCMAKE_INSTALL_RPATH:PATH=/opt/kde4/lib:/opt/kde4/lib64
      opts -DCMAKE_SKIP_BUILD_RPATH:BOOL=TRUE
      opts -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=TRUE
      opts -DCMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=TRUE
      opts -DCMAKE_BUILD_TYPE=Release
  estimate 1100
      desc 'qt bindings for telepathy'

build_old(){
 local  PATH="/usr/bin/qt4:$PATH"
 export PATH
 PKG_CONFIG_PATH=/opt/kde4/lib/pkgconfig \
 ./configure           \
  --sysconfdir=/etc    \
  --localstatedir=/var \
  --prefix=/opt/kde4   &&
 make &&
 make install "DESTDIR=$DESTDIR"
}
