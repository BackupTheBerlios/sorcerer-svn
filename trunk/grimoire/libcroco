    stable 0.6.2 0.6.1 0.6.0
   require glib libxml2 pkgconfig
      opts --enable-static=no
  category development
 attribute library makej multilib-concurrent
    source $GNOME_URL sources/libcroco/${VERSION:0:3}/libcroco-$VERSION.tar.bz2
  homepage http://www.freespiders.org/projects/libcroco
  estimate 1000
      desc 'CSS parsing library
libcroco is a general CSS parsing and manipulation 
library written in C for the Gnome project.
It provides a CSS2 parser, a CSS2 selection 
engine, and an XML/CSS rendering engine.'

