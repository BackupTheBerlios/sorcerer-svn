    stable 1.0.7 1.0.4 1.0.2
   require libgpg-error
      opts --enable-static=no
  category security/encryption
 attribute library
    source ftp://ftp.gnupg.org/gcrypt/libksba/libksba-$VERSION.tar.bz2
      vurl 'http://www.gnupg.org/(en)/download/index.html'
  homepage http://www.gnupg.org/
  estimate 500
      desc 'library to make X.509 certificates'

build(){
 sed -i 's:$libdirs::' src/ksba-config.in
 default_build
}
