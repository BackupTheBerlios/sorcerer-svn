   VERSION=( "0" )
  CATEGORY="archive"
 ATTRIBUTE="core console"
    SOURCE="rpmunpack.tar.gz"
       URL="http://www.ibiblio.org/pub/Linux/utils/package"
  HOMEPAGE="http://www.ibiblio.org/pub/Linux/utils/package"
       REQ="cpio"
  ESTIMATE="5"
      DESC="rpmunpack converts RPMs to cpio archives."

build() {
make             &&
prepare_install  &&
install  -s  rpmunpack  /usr/bin
}
