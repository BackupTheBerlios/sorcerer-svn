# Wonder where I am errnously receiving the 1.0 version from?
# Does not support DESTDIR style install

   version stable 0.21.1 0.21
   require MesaLib SDL_image SDL_mixer SDL_net SDL_ttf wxWidgets
  category game
 attribute x11
 attribute broke
    source $SOURCEFORGE_URL scourge/scourge/$VERSION/scourge-$VERSION.src.tar.gz
    source $SOURCEFORGE_URL scourge/scourge/$VERSION/scourge-$VERSION.data.tar.gz
  homepage http://scourgeweb.org/tiki-index.php
      opts --disable-sdltest --with-data-dir=/usr/share/scourge
  estimate 3500
      desc 'OpenGL RPG'

build(){
 install_data(){
  mkdir -p                 /usr/share/scourge
  cp    -rv scourge_data/* /usr/share/scourge
 }

 aclocal
 automake -afc
 autoconf
 libtoolize --force
 default_build &&
 install_data
}
