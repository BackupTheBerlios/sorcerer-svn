   VERSION=( "0.5" )
    IGNORE="^1\.0"
# Wonder where I am errnously receiving the 1.0 version from?
  CATEGORY="game"
 ATTRIBUTE="broken new x11"
# scourge 0.5 does not compile with gcc 3.4.2
    SOURCE="scourge/scourge-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://scourge.sourceforge.net"
      REQ="SDL_mixer automake glut libtool"
      OPTS="--bindir=/usr/games --disable-sdltest --with-data-dir=/usr/share/scourge"
  ESTIMATE="63"
      DESC="scourge is an OpenGL RPG."

install_data()  {
  mkdir  -p          /usr/share/scourge
  cp     -r  data/*  /usr/share/scourge
}


build()  {
  aclocal
  automake     -afc
  autoconf
  libtoolize   --force
  default_build  &&
  install_data
}
