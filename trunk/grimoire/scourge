   VERSION=( 0.18 0.17 0.16 )

## 0.19 and 0.20 have compile errors
## config.status: error: cannot find input file: Makefile.in
## Perhaps 0.19 switched over to using scons
    IGNORE='^1\.0\|data'
# Wonder where I am errnously receiving the 1.0 version from?
  CATEGORY='game'
 ATTRIBUTE='x11'
    SOURCE=( "scourge/scourge-$VERSION.src.tar.gz"
             "scourge/scourge-$VERSION.data.tar.gz" )
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://scourge.sourceforge.net'
       REQ='SDL_mixer SDL_net SDL_ttf glut wxWidgets'
      OPTS='--disable-sdltest --with-data-dir=/usr/share/scourge'
  ESTIMATE='1800'
      DESC='scourge is an OpenGL RPG.'

build()  {
  install_data()  {
    mkdir  -p                   /usr/share/scourge
    cp     -rv  scourge_data/*  /usr/share/scourge
  }

  aclocal
  automake     -afc
  autoconf
  libtoolize   --force
  default_build  &&
  install_data
}
