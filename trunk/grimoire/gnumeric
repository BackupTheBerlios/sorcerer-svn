   VERSION=(       1.6.3 1.6.2 1.6.1 1.6.0 )
#  VERSION=( 1.8.0 1.6.3 1.6.2 1.6.1 1.6.0 )
# Version 1.8.0 fails during installation:
# make[3]: *** No rule to make target `gnumeric-C.omf', needed by `omf_timestamp'.  Stop.
# make[3]: Leaving directory `/usr/src/sorcery/gnumeric/gnumeric-1.8.0/doc/C'
    IGNORE='^1\.7\.'
  CATEGORY='utility/spreadsheet'
 ATTRIBUTE='gnome'
    SOURCE="sources/gnumeric/${VERSION%.*}/gnumeric-$VERSION.tar.bz2"
  HOMEPAGE='http://www.gnome.org/projects/gnumeric'
       URL="$GNOME_URL"
case  $VERSION  in
  1.6.*)
       REQ=( 'gal2 goffice-v0.2.2 gtksourceview scrollkeeper'
             'libgnomedb:::for accessing databases'
             'webfonts:::for editing excel spreadsheads created on windoze' )
;;
  1.8.*)
       REQ=( 'gal2 goffice gtksourceview scrollkeeper'
             'libgnomedb:::for accessing databases'
             'webfonts:::for editing excel spreadsheads created on windoze' )
;;
esac

