   version stable 1.6.4
   require e2fsprogs pkgconfig util-linux
      opts --disable-glibtest --enable-dynamic-fsck=yes --enable-dynamic-ctl=yes
      opts --disable-static
#     opts --with-vendor=common
  category disk/file-system
 attribute console
#attribute makej
    source http://oss.oracle.com/projects/ocfs2-tools/dist/files/source/v${VERSION:0:3}/ocfs2-tools-$VERSION.tar.gz
      info good 20120716
      info last 20110208
      info home http://oss.oracle.com/projects/ocfs2-tools/
      info vurl http://oss.oracle.com/projects/ocfs2-tools/files/source/
      desc 'tools for ocfs2 file system'

build(){
 install_rules(){
  local RULES=$DESTDIR/etc/udev/rules.d
  mkdir  -pvm 755 $RULES
  install -vm 644 -o root -g root vendor/common/51-ocfs2.rules $RULES
 }

 install_init(){
  local INIT=$DESTDIR/etc/init.d/
  mkdir -p   $DESTDIR/etc/{default,ocfs2,sysconfig} $INIT
  install -m 700 -o root -g root vendor/common/o2cb.init.sh $INIT/o2cb
  install -m 700 -o root -g root vendor/common/ocfs2.init   $INIT/ocfs2
  install -m 700 -o root -g root documentation/samples/cluster.conf $DESTDIR/etc/ocfs2/
  echo > $DESTDIR/etc/sysconfig/o2cb
 }

 default_build &&
 install_rules &&
 install_init
}
