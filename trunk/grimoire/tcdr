    stable 2.1 2.0
   require cdparanoia dialog cdrdao cdrtools lame mpg321 sox vorbis-tools
  category disk/cd audio/cd audio/recorder
 attribute console
    source $SOURCEFORGE_URL tcdr/tcdr/tcdr%20$VERSION/tcdr-$VERSION.tar.gz
  homepage http://tcdr.sourceforge.net
      desc 'tcdr is a console frontend for burning CDs.
tcdr is a dialog-based console frontend for mkisofs, 
cdrecord, cdrdao, cdparanoia, cdda2wav, bladeenc, 
mpg321, and sox written in bash.'


build(){
prepare_install &&
install -o root -g root -vm 644 tcdrrc    /etc/     &&
install -o root -g root -vm 755 tcdr      /usr/bin/ &&
install -o root -g root -vm 644 tcdr.1.gz /usr/man/man1/
}
