   VERSION=( "2.1" "2.0" )
  CATEGORY="cd"
 ATTRIBUTE="console"
    SOURCE="tcdr/tcdr-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://tcdr.sourceforge.net"
#      REQ="bladeenc cdparanoia dialog cdrdao cdrtools lame mpg321 sox vorbis-tools"
       REQ="cdparanoia dialog cdrdao cdrtools lame mpg321 sox vorbis-tools"
      DESC="tcdr is a console frontend for burning CDs.
tcdr is a dialog-based console frontend for mkisofs, 
cdrecord, cdrdao, cdparanoia, cdda2wav, bladeenc, 
mpg321, and sox written in bash."


build() {
prepare_install  &&
install  -o root  -g root  -m 0644  tcdrrc     /etc/      &&
install  -o root  -g root  -m 0755  tcdr       /usr/bin/  &&
install  -o root  -g root  -m 0644  tcdr.1.gz  /usr/man/man1/
}
