with version stable 4.9.2 4.9.1 4.8.7
with also    --disable-static
with role    network/web
with trait   library makej multilib-dual
with source  http://ftp.mozilla.org/pub/mozilla.org/nspr/releases/v$VERSION/src/nspr-$VERSION.tar.gz
with source  http://www.linuxfromscratch.org/patches/blfs/svn/nspr-4.8.6-pkgconfig-1.patch
case $VERSION in
 4.8.7) source http://www.linuxfromscratch.org/patches/blfs/svn/nspr-4.8.6-pkgconfig-1.patch ;;
esac
with info    last 20120730
with info    home http://www.mozilla.org/projects/security/pki/nss/
with info    cite 'netscape portable runtime'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then with also --enable-64bit
 fi
 export LDFLAGS+=" $CFLAGS"

 cd mozilla/nsprpub &&
 ./configure     \
  --prefix=/usr  \
  --with-mozilla \
 --with-pthreads \
 $OPTS &&
 make  &&
 make install    DESTDIR=$DESTDIR &&
 mkdir -vpm 755 $DESTDIR/usr/include &&
 cp -vLR dist/include/nspr $DESTDIR/usr/include
}
