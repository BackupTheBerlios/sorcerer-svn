   VERSION=( "1.0.9" "1.0.8" "1.0.7" "1.0.6" )
  CATEGORY="graphic"
 ATTRIBUTE="library"
    SOURCE="libmng/libmng-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://www.libmng.com"
       REQ=( "automake jpeg libtool zlib"
             "lcms:--with-lcms:--without-lcms:for little color management support" )
  ESTIMATE="76"
      DESC="libmng is a library that supports the MNG graphics format."

build()  {
  ln  -s  makefiles/configure.in
  ln  -s  makefiles/acinclude.m4
  ln  -s  makefiles/Makefile.am
  aclocal
  libtoolize  --automake
  automake    --foreign   --add-missing
  autoconf
  default_build
}
