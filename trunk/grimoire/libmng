# Evert reports a patch for making libmng compile with current autotools
# is available at:
# https://trac.maports.org/ticket/34291

# upgrading from automake version 1.11.1 to version 1.12
# might have broke compilation of libmng.

   version stable 1.0.10 1.0.9 1.0.8 1.0.7 1.0.6
   require automake jpeg libtool zlib
  optional lcms --with-lcms --without-lcms for little color management support
      opts --enable-static=no
  category graphic/library
 attribute library makej
 attribute broke deprecated
    source $SOURCEFORGE_URL libmng/libmng-devel/$VERSION/libmng-$VERSION.tar.gz
      info omit 20130713
      info last 20070713
      info home http://www.libmng.com
      desc 'library that supports the MNG graphics format'

build(){
 ln -s makefiles/configure.in
 ln -s makefiles/acinclude.m4
 ln -s makefiles/Makefile.am
 aclocal
 libtoolize --automake
 automake --foreign --add-missing
 autoconf
 default_build
}
