# Does not support DESTDIR style installation
# Does not compile with linux 2.6.31.6
# compiles for running kernel instead of installed kernel.

   version stable 1.3 1.2 1.1-rc1 1.0
  category kernel video/digital-camera video/webcam
 attribute linux-26-module
 attribute broke
    source http://www.lavrsen.dk/twiki/pub/Motion/VideoFourLinuxLoopbackDevice/vloopback-$VERSION.tar.gz
      vurl http://www.lavrsen.dk/twiki/bin/view/Motion/VideoFourLinuxLoopbackDevice
      info home http://www.lavrsen.dk/twiki/bin/view/Motion/VideoFourLinuxLoopbackDevice
      desc 'linux kernel module to export video through a V4L device'

build() {
local LV="$( installed_version $( get_provider linux-kernel ))"
make &&
install -vd $DESTDIR/lib/modules/$LV/kernel/drivers/misc &&
make install
}
