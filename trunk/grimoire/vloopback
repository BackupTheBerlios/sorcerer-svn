  stable 1.1-rc1 1.0 0.97-snap3 0.97-snap2
  CATEGORY='kernel video/digital-camera video/webcam'
 ATTRIBUTE='linux-26-module new'
    SOURCE="VideoFourLinuxLoopbackDevice/vloopback-$VERSION.tar.gz"
       URL='http://www.lavrsen.dk/twiki/pub/Motion/'
      VURL='http://www.lavrsen.dk/twiki/bin/view/Motion/VideoFourLinuxLoopbackDevice'
  HOMEPAGE='http://www.lavrsen.dk/twiki/bin/view/Motion/VideoFourLinuxLoopbackDevice'
       REQ=''
  ESTIMATE='15'
      DESC="vloopback is a kernel module to export video through a V4L device"

build() {
  make  &&
  prepare_install  &&
  install -v -d /lib/modules/$(
          installed_version $(
          get_provider linux-kernel ))/kernel/drivers/misc  &&
  make    install
}
