    stable 2.0.6 2.0.5 2.0.4 2.0.3 2.0.2 2.0.1 2.0.0
   require mozilla nautilus
 attribute client gnome broke
  category network/web
    source $SOURCEFORGE_URL galeon/galeon%202.x/Galeon%20$VERSION/galeon-$VERSION.tar.bz2
  homepage http://galeon.sourceforge.net
  estimate 9200
      desc 'galeon is a GNOME Web browser.
galeon is a GNOME Web browser based on Gecko
(the Mozilla rendering engine).
It is fast, has a light interface,
and is fully standards-compliant.'

build(){
 ./configure       \
 --prefix=/usr     \
 --sysconfdir=/etc \
 --disable-werror  \
 $OPTS             &&
 make              &&
 prepare_install   &&
 make    install   &&
 echo    YES       |
 galeon-config-tool --install-schemas --fix-gconf-permissions
}
