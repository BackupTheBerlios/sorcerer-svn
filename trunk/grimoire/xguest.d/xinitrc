avail(){ [ -x /usr/bin/$1 ] && eval "$@" & }

avail xrdb -load $HOME/.Xresources
avail xsetroot -solid gray
avail xbiff    -geometry -430+5
avail oclock   -geometry 75x75-0-0
avail xload    -geometry -80-0
avail xterm    -geometry +0+60 -ls
avail xterm    -geometry +0-100
avail xconsole -geometry -0+0 -fn 5x7
exec  twm
