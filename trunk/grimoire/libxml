   version stable 1.8.17
   require zlib
      opts --enable-static=no
  category development
 attribute gnome library
#attribute makej multilib-concurrent
    source $GNOME_URL sources/libxml/${VERSION:0:3}/libxml-$VERSION.tar.bz2
      info home http://xmlsoft.org
 freshmeat none
      desc 'libxml is the XML version 1 parser for Gnome.
The libXML library allows you to manipulate XML files.
It offers SAX or DOM tree generation interfaces.
It supports XML and HTML (real world ones) parsing,
flexible DTD validation, XPath, XPointer-XInclude,
and pull and push modes with FTP and HTTP modules.'
