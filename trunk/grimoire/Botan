   VERSION=( 1.4.7" "1.4.6" "1.4.5" "1.4.4" "1.4.3" "1.4.1" "1.4.0" )
    IGNORE="config\|1\.4\.8"
# 1.4.8 has compile error
  CATEGORY="encryption"
 ATTRIBUTE="library"
    SOURCE="Botan-$VERSION.tgz"
       URL="http://files.randombit.net/botan"
  HOMEPAGE="http://botan.randombit.net"
       REQ="bzip2 perl zlib"
  ESTIMATE="232"
 FRESHMEAT="botan"
      DESC="Botan is a library of cryptographic algorithms.
Botan (formerly OpenCL) is a library of
cryptographic algorithms, written in C++.
It currently includes a wide selection of
block and stream ciphers, public key algorithms,
hash functions, and message authentication codes,
plus a high level filter-based interface."

build() {
./configure.pl   gcc-linux-generic   &&
make             "INSTALLROOT=/usr"  \
                 "LIB_OPT=$CFLAGS"   &&
prepare_install                      &&
make    install  "INSTALLROOT=/usr"
}
