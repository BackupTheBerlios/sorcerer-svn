# This previously compiled, apparently last year.
# probably incompatible with current kernel headers.
# use /sbin/ip instead for bridge configuration.

with trait   broke
with info    omit 20140101
with info    last 20110329
with version stable 1.5
with base    autoconf
with also    --sbindir=/sbin
with role    network
with trait   console
with source    stable $SOURCEFORGE_URL bridge/bridge/bridge-utils-$VERSION.tar.gz
with source  unstable $SOURCEFORGE_URL bridge/bridge/bridge-utils-$VERSION.tar.gz
with info    home http://www.linuxfoundation.org/collaborate/workgroups/networking/iproute2
with info    home sourceforge.net/projects/bridge/
with info    cite 'IEEE 802.1d ethernet bridging tools'

build(){
 autoconf
 default_build
}
