    stable 1.1 1.0
   require libXScrnSaver

  category graphic
 attribute x11
    source rsaver-$VERSION.tar.gz
       url http://www.linuxpages.org/download/
  homepage http://www.linuxpages.org/rsaver_en.php
  estimate 10
      desc 'rsaver is a simple X screensaver that only uses Xlib.
After a specified amount of time it
will start to draw radioactive signs.
If a timeout is not specified, the
timeout value is obtained from the X server.'

build(){
make &&
prepare_install &&
make    install PREFIX=/usr
}
