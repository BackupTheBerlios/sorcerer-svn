   version stable 1.1 1.0
   require libXScrnSaver
  category graphic
 attribute x11
    source http://www.linuxpages.org/download/rsaver-$VERSION.tar.gz
      info home http://www.linuxpages.org/rsaver_en.php
      desc 'simple X screensaver that only uses Xlib
After a specified amount of time it
will start to draw radioactive signs.
If a timeout is not specified, the
timeout value is obtained from the X server.'

build(){
make &&
make install PREFIX=/usr DESTDIR=$DESTDIR
}
