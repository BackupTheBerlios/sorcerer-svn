inherit compiz
   require libcompizconfig kdelibs-v3
    source $VERSION/compizconfig-backend-kconfig-$VERSION.tar.bz2
      opts --with-qt-dir=/opt/kde3
  estimate 286
      desc 'compizconfig-backend-kconfig is the kconfig backend for CompizConfig. 
It uses the KDE configuration system to store the compiz configuration and provides 
integration into the KDE desktop environment.'

