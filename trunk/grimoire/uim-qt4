# The source ignores the -L/usr/lib and inserts -L/usr/lib64
# and therefore ruins them multilib compile.

with version stable 1.8.4 1.8.3 1.8.2
with base    phonon qt-everywhere-opensource uim
with also    --enable-dict --enable-static=no
with also    --with-qt4-immodule
with also    --prefix=/usr
with role    input
with trait   console kde4 library multilib-fail x11
#trait console kde4 library makej x11
with source  http://uim.googlecode.com/files/uim-$VERSION.tar.bz2
with info    last 20121230
with info    home http://uim.freedesktop.org/wiki/
with info    vurl http://code.google.com/p/uim/

build(){
 if    [[ $HOSTTYPE == x86_64 ]]; then
  if   [[ $CFLAGS   =~ -m32 ]]
  then export QTDIR=/opt/32bit/usr; export LDFLAGS+=' -L/usr/lib'
  else export QTDIR=/usr;           export LDFLAGS+=' -L/usr/lib64'
  fi
 fi
 default_build
}
