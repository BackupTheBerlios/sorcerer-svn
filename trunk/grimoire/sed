   version stable 4.2.1 4.2 4.1.5
   require acl
    switch -static '' to make static linked sed
      opts --bindir=/bin
    CFLAGS='-O3'
   LDFLAGS='-Wl,-O1'
  category utility/editor
 attribute console solo
    source $GNU_URL sed/sed-$VERSION.tar.gz
  homepage http://www.gnu.org/software/sed/sed.html
   protect /bin/sed
      desc 'stream-oriented non-interactive text editor'

build(){
 if   [[ $OPTS =~ -static ]]
 then LDFLAGS+="  -static";
      OPTS=${OPTS/-static}
 fi   
 default_build
}
