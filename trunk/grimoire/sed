    stable 4.2 4.1.5 4.1.4 4.1.3 4.1.2 4.1.1
   require acl
#   switch -static '' to make static linked sed
  category utility/editor
 attribute console solo
       url $GNU_URL
    source sed/sed-$VERSION.tar.gz
  homepage http://www.gnu.org/software/sed/sed.html
      opts --bindir=/bin
    CFLAGS='-O3'
   LDFLAGS='-Wl,-O1'
   protect /bin/sed
  estimate 400
      desc 'sed is a stream-oriented non-interactive text editor.'

build(){
 if   echo "$OPTS" | grep -q "\-static"
 then LDFLAGS="$LDFLAGS -static"
      opts ${OPTS/-static}
 fi
 default_build
}
