  category graphic
 attribute x11
    source $SOURCEFORGE_URL rss-glx/rss-glx/$VERSION/rss-glx_$VERSION.tar.bz2
  homepage http://rss-glx.sourceforge.net
      opts --enable-shared=yes --enable-static=no
      opts --with-kdessconfigdir=/opt/kde4/share/kde4/services/ScreenSavers/
