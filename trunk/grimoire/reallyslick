    stable 0.8.2 0.8.1 0.8.0
   require ImageMagick glew smpeg
case $VERSION in
 0.8.2) require automake ;;
esac
  optional freealut '' --disable-sound for sound effects in skyrocket
  category graphic
 attribute x11
       url $SOURCEFORGE_URL
    source rss-glx/rss-glx_$VERSION.tar.bz2
  homepage http://rss-glx.sourceforge.net
  estimate 500
 freshmeat rss-glx
      desc 'reallyslick provides excellent screen savers for X.
The Really Slick ScreenSavers GLX Port
is a port of some nifty OpenGL
screensavers that were originally
written for Windows to GLX.
It is intended for use with an existing
screensaver daemon like xscreensaver.'

build(){
case $VERSION in
 0.8.2) autoreconf -i
        automake   -afc
        export CFLAGS+=' -I/usr/include/ImageMagick'
        sed -i '1i#include <cstdlib>' reallyslick/cpp_src/skyrocket_sound.cpp
        sed -i "s:-O2:$CFLAGS:" configure ;;
esac
default_build
}
