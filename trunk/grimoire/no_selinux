  stable 20080701
  CATEGORY='profile'
 ATTRIBUTE='console profile'
  HOMEPAGE='http://www.nsa.gov/selinux/'
# only libselinux requires libsepol
# however, it is inherited
# so libsepol will not survive in the library cache
# if libselinux is also dispelled and there.
#CONFLICTS='libselinux libsemanage libsepol polgen policycoreutils refpolicy selinux selinux-doc setools slat'
 CONFLICTS='libselinux libsemanage polgen policycoreutils refpolicy selinux selinux-doc setools slat'
  ESTIMATE='5'
      DESC='no_selinux removes Security Enhanced linux from the NSA
Once cast this exiles and dispels selinux related spells.'

build(){
 progress_exile(){ while [ -n "$1" ]; do echo exile > $PROGRESS_LOGS/$1; shift; done; }

 prepare_install &&
 progress_exile libselinux libsemanage libsepol polgen policycoreutils refpolicy selinux selinux-doc setools slat
}

post_install(){ rm_arof; default_post_install; }
