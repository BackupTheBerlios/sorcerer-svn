   VERSION=( 1.0.1 )
    IGNORE="linux"
  CATEGORY='graphic/viewer'
 ATTRIBUTE='x11 new'
    SOURCE="shim-$VERSION.tar.gz"
       URL='http://home.earthlink.net/~pegasosppc/download/'
  HOMEPAGE='http://home.earthlink.net/~pegasosppc/shim.html'
       REQ='SDL_image'
  ESTIMATE='5'
      DESC="shim is a simple program for displaying images."

build() {
gcc -lSDL -lSDL_image $CFLAGS $LDFLAGS -o shim shim.c &&
prepare_install &&
install -m 0755 shim /usr/bin
}
