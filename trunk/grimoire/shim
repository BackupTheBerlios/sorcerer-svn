# 1.1b has compile error
#  VERSION=( 1.1b 1.0.1 )
   VERSION=(      1.0.1 )
    IGNORE='linux'
  CATEGORY='graphic/viewer'
 ATTRIBUTE='x11 new'
    SOURCE="shim-$VERSION.tar.gz"
       URL='http://www.xs4all.nl/~amorel/aseq/pegasosppc/download/'
  HOMEPAGE='http://www.xs4all.nl/~amorel/aseq/pegasosppc/shim.html'
       REQ='SDL_image'
  ESTIMATE='5'
      DESC='shim is a simple program for displaying images.'

build(){
 gcc -lSDL -lSDL_image $CFLAGS $LDFLAGS -o shim shim.c &&
 prepare_install &&
 install -vm 0755 shim /usr/bin
}
