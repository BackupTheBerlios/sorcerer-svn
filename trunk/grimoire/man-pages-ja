VERSION=( 20070515 20070215 )
inherit man-pages
    URL='http://www.linux.or.jp/JM/'
 SOURCE="man-pages-ja-$VERSION.tar.gz"
ESTIMATE='2830'

build()  {
  [  -d  manual  ]  &&
  find   manual  -type f | xargs --max-lines=64  chmod 0644
  find   manual  -type d | xargs --max-lines=64  chmod 0755
  chown  -R  root:root  manual
  prepare_install  &&
  mkdir  -pv  -m 0755        /usr/man/jp  &&
  cp     -rv  manual/*/man*  /usr/man/jp
}
