    stable 20070515 20070215
inherit man-pages
    url http://www.linux.or.jp/JM/
 source man-pages-ja-$VERSION.tar.gz
estimate 2830

build(){
  [ -d manual ] &&
  find manual -type f | xargs --max-lines=64 chmod 644
  find manual -type d | xargs --max-lines=64 chmod 755
  chown -R root:root  manual
  prepare_install &&
  mkdir -pvm 755          /usr/man/jp &&
  cp    -rv manual/*/man* /usr/man/jp
}
