    stable 14.3.0 14.2.0 14.1.0 14.0.1 14.0.0
  unstable 14.3.1-rc3 14.3.1-rc1
   require alsa-lib file gsm libtool
# optional ffmpeg        '' --without-ffmpeg     for ffmpeg supported audio codecs
case $VERSION in 
 14.3.0) opts --without-ffmpeg ;;
esac
  optional lame          '' --disable-lame       for mp3 encoding and decoding
  optional libao         '' --disable-libao      for output through libao sound server
  optional libid3tag     '' --without-id3tag     for id3 tag and metadata support
  optional libmad        '' --disable-mad        for mp3 encoding decoding
  optional libsamplerate '' --without-samplerate for adjusting audio sampling rate
  optional libvorbis     '' --disable-ogg-vorbis for ogg vorbis audiofile support
  category audio/editor audio/player
 attribute console
    source $SOURCEFORGE_URL sox/sox/$VERSION/sox-$VERSION.tar.gz
  homepage http://sox.sourceforge.net
      opts --enable-static=no
  estimate 900
      desc 'Swiss Army knife of sound processing tools
It converts audio files among various standard audio file formats
and can apply different effects and filters to the audio data.'

build(){
 ./configure               \
  --sysconfdir=/etc        \
  --localstatedir=/var     \
  --prefix=${PREFIX:-/usr} \
 $OPTS           &&
 make            &&
 prepare_install &&
 make    install
}
