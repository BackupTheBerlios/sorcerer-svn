   VERSION=( 14.0.1 14.0.0 13.0.0 12.18.2 12.18.1 )
    IGNORE='121[7-8]\|w\|TS'
  CATEGORY='audio/editor audio/player'
 ATTRIBUTE='console'
    SOURCE="sox/sox-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://sox.sourceforge.net'
       REQ=( 'alsa-lib gsm libtool'
             'ffmpeg::--without-ffmpeg:for ffmpeg supported audio codecs'
             'lame::--disable-lame:for mp3 encoding and decoding'
             'libao::--disable-libao :for output through libao sound server'
             'libid3tag::--without-id3tag:for id3 tag and metadata support'
             'libmad::--disable-mad:for mp3 encoding decoding'
             'libsamplerate::--without-samplerate:for adjusting audio sampling rate'
             'libvorbis::--disable-ogg-vorbis:for ogg vorbis audiofile support' )
#            'alsa-lib::--disable-alsa-dsp:for audio output through alsa'
      OPTS='--enable-static=no'
  ESTIMATE='800'
      DESC='sox is the Swiss Army knife of sound processing tools.
It converts audio files among various standard audio file formats
and can apply different effects and filters to the audio data.'
