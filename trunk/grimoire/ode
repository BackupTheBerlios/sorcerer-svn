    stable 0.10.0 0.5 0.039 0.035
    ignore 'bin\|^0\.03\|java\|m\|^0\.0\|iavir\|pre\|iv\|x86\|snap\|rc\|win'
  category game
 attribute x11
    source opende/ode-$VERSION.tar.gz
       url "$SOURCEFORGE_URL"
  homepage http://ode.org
  estimate 1100
      desc 'ode is a library for simulatnig Rigid Body Dynamics.
The Open Dynamics Engine (ODE) is a free software
library for the simulation of Rigid Body Dynamics.'

build_old(){
 make_shared_lib(){
  ld --whole-archive -share -o $1.so.1 $1.a
  ln -sf $1.so.1 $1.so
 }

make configure      &&
make ode-lib        &&
make drawstuff-lib  &&
make ode-test       &&
make drawstuff-test &&
prepare_install     &&
cp -av include/* /usr/include &&
cp -av lib/*     /usr/lib
#     &&
#make_shared_lib        /usr/lib/libdrawstuff  &&
#make_shared_lib        /usr/lib/libode
}
