   VERSION=( 0.8.8 0.8.6 0.8.5 0.8.4 0.8.3 0.8.2 )
  CATEGORY='audio/codec audio/library'
 ATTRIBUTE='library'
    SOURCE="libao-$VERSION.tar.gz"
  HOMEPAGE='http://www.xiph.org/ao/'
       URL='http://downloads.xiph.org/releases/ao/'
# HOMEPAGE='http://www.xiph.org/ogg/vorbis/'
#      URL='http://www.xiph.org/ao/src/'
       REQ=( "audiofile"
             "esound:::for output through esound mixer"
             "alsa-lib:::for output through alsa"
             "pulseaudio:::for pulseaudio software audio mixing plugin"
             "nas:::for nas software audio mixing plugin" )
#            "arts:::for output through arts sound mixer plugin"
      OPTS="--disable-arts"
# arts support enabled in laibao causes ogg123 to fail with
# Creating link $HOME/.kde/socket-$HOSTNAME.
# can't create mcop directory
# So arts support disabled in 0.8.6 of libao
  ESTIMATE='610'
      DESC="libao is a cross-platform audio library.
libao is a way to easily add cross-platform
audio output to your program.
Output devices are implemented as dynamic plugins,
and support for OSS, ESD, ALSA, aRTs, Solaris,
and Irix outputs are currently supported."
