    stable 2.0
   require gtk+
  category graphic/library
 attribute library gnome
  homepage http://www.gtk.org
   protect /etc/gtk-2.0/gtk.immodules
  volatile /etc/gtk-2.0/gtk.immodules
      desc 'generates and installs gtk+ input method modules file'

build(){
mkdir -p $DESTDIR/etc/gtk-2.0/
gtk-query-immodules-2.0 > $DESTDIR/etc/gtk-2.0/gtk.immodules
true
}
