   VERSION=( "1.95.8" )
  CATEGORY="development"
 ATTRIBUTE="library"
    SOURCE="expat/expat-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://expat.sourceforge.net"
  ESTIMATE="16"
      DESC="libexpat provides only a library file.
ati_firegl requires an old libexpat library.
This spell installs it."

build()  {
  sed  -i  "s:\$(INSTALL_DATA):true:"  Makefile.in
  ./configure            \
  --build=$BUILD         \
  --prefix=/usr          \
  --sysconfdir=/etc      \
  --localstatedir=/var   \
  $OPTS                  &&
  make                   &&
  prepare_install        &&
  make    installlib
}
