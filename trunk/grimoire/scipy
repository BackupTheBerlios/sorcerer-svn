# Requirement list is questionable: Some requirements may be
# optional, others may be missing (comment by Jan Merka)
# version 0.9.0 failed compilation
# version 0.8.0 failed compilation

   version stable 0.8.0
   version unstable 0.9.0 0.9.0rc5
   require gcc-g++ numpy UMFPACK
  category development
 attribute python-module
 attribute broke
    source $SOURCEFORGE_URL scipy/scipy/$VERSION/scipy-$VERSION.tar.gz
  homepage http://scipy.org/
      desc 'mathematics library for Python'

build(){
 unset LDFLAGS
 [ -f setup.py ] &&
 python setup.py install --prefix=$DESTDIR/usr
}
