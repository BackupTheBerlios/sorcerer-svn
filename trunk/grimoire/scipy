 attribute python-module
    source $SOURCEFORGE_URL scipy/scipy/$VERSION/scipy-$VERSION.tar.gz
  homepage http://scipy.org/
  estimate 9100
      desc 'mathematics library for Python'

build(){
unset LDFLAGS
[ -f setup.py ] &&
python setup.py install --prefix=$DESTDIR/usr
}
