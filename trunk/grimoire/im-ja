# Not sure if skktools is what im-ja means by skk

   version stable 1.5
  optional Canna       '' --disable-canna for canna Japanese input system
# optional FreeWnn     '' --disable-wnn   for freewnn japanese input system
  optional anthy       '' --disable-anthy for anthy Japanese input system
  optional gnome-panel '' --disable-gnome for gnome applet
  optional skktools    '' --disable-skk   for simple kana to kanji converter
  category input
 attribute library x11
#attribute makej multilib-concurrent
    source http://im-ja.sourceforge.net/im-ja-$VERSION.tar.gz
      info home  http://im-ja.sourceforge.net/
      info docs  http://im-ja.sourceforge.net/im-ja-doc.html
      desc 'japanese input module for gtk2 and xim

im-ja supports the following input modes:

    * Direct input (romaji)
    * Hiragana
    * Katakana
    * Half-width katakana
    * Zenkaku
    * Unicode and JIS code input
    * Kanji lookup through radical selection
    * Kanji conversion using the following engines:
          o Canna
          o [Free]Wnn
          o Anthy
          o Skk(server)
          o Kanji character recognition (based on Kanjipad)'

post_install(){
 default_post_install &&
 if   spell_installed gtk-query-immodules-2.0
 then echo            gtk-query-immodules-2.0 | pipe_queue $CAST_QUEUE
 fi
}
