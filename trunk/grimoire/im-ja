   VERSION=( "1.5" )
  CATEGORY="utility/keyboard"
 ATTRIBUTE="library"
    SOURCE="im-ja-$VERSION.tar.gz"
       URL="http://im-ja.sourceforge.net/"
  HOMEPAGE="http://im-ja.sourceforge.net/"
       REQ=( ""
             "Canna::--disable-canna:for canna Japanese input system"
             "FreeWin::--disable-wnn:for freewnn japanese input system"
             "anthy::--disable-anthy:for anthy Japanese input system"
             "gnome-applets::--disable-gnome:for gnome applet"
             "skktools::--disable-skk:for simple kana to kanji converter" )
# Not sure if skktools is what im-ja means by skk
  ESTIMATE="900"
      DESC="im-ja provides a japanese input module for gtk2 and xim.

im-ja supports the following input modes:

    * Direct input (romaji)
    * Hiragana
    * Katakana
    * Half-width katakana
    * Zenkaku
    * Unicode and JIS code input
    * Kanji lookup through radical selection
    * Kanji conversion using the following engines:
          o Canna
          o [Free]Wnn
          o Anthy
          o Skk(server)
          o Kanji character recognition (based on Kanjipad)"
