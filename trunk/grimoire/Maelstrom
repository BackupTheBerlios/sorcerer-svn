   VERSION=( "3.0.6" "3.0.5" )
  CATEGORY="game"
 ATTRIBUTE="x11"
    SOURCE=( "Maelstrom-$VERSION.tar.gz"
             "Star_Trek.zip"
             "Star_Wars.zip"
             "Maelstrom_1980.zip"
             "Extra_Sounds.zip"
             "Army_Of_Darkness_Sounds.zip"
             "Beavis_Butthead_Sounds.zip"
             "Stooges_Sounds.zip" )
       URL=( "http://www.devolution.com/~slouken/Maelstrom/src"
             "http://www.devolution.com/~slouken/Maelstrom/add-ons" )
  HOMEPAGE="http://www.devolution.com/~slouken/Maelstrom"
       REQ="SDL SDL_net unzip"
 FRESHMEAT="maelstrom"
      DESC="maelstrom is an excellet asteroids-type game

Maelstrom is an excellent Asteroids-type
game with sound and 3D objects.
It is fantastic for casual playing.
It plays over a network and has excellent graphics.
It compiles easily under both Linux and Solaris
and there are binaries for several UNIXs available."


build() {
default_build  &&

(

  cp  -a  Maelstrom_1980           /usr/games/Maelstrom
  cp  -a  NewSounds                /usr/games/Maelstrom
  cp  -a  Star_Trek                /usr/games/Maelstrom
  cp  -a  Star_Wars                /usr/games/Maelstrom
  cp  -a  Army_Of_Darkness_Sounds  /usr/games/Maelstrom
  cp  -a  Beavis_Butthead_Sounds   /usr/games/Maelstrom
  cp  -a  Stooges_Sounds           /usr/games/Maelstrom

)
}
