   VERSION=( "3.0.6" "3.0.5" )
  CATEGORY="game"
 ATTRIBUTE="x11"
 SOURCE[0]="Maelstrom-$VERSION"
 SOURCE[1]="Star_Trek.zip"
 SOURCE[2]="Star_Wars.zip"
 SOURCE[3]="Maelstrom_1980.zip"
 SOURCE[4]="Extra_Sounds.zip"
