# Make a custom spell if SSL signed CA certificates are required.
# 0.11.6 requires a newer version of telepathy-glib than will compile

   version stable 0.11.5 0.11.4 0.11.3
   version unstable 0.11.6
   require libnice libsoup telepathy-glib
      opts --without-ca-certificates
  category network
 attribute library makej multilib-concurrent
    source http://telepathy.freedesktop.org/releases/telepathy-gabble/telepathy-gabble-$VERSION.tar.gz
  homepage http://telepathy.freedesktop.org/wiki/
  estimate 1800
      desc 'library for jabber chatting'
