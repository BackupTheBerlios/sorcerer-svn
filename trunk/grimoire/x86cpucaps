   VERSION=( "0.3.6" )
  CATEGORY="utility"
 ATTRIBUTE="library new"
    SOURCE=("x86cpucaps-$VERSION.tar.gz")
       URL="http://members.jcom.home.ne.jp/jacobi/linux/files/"
  HOMEPAGE="http://members.jcom.home.ne.jp/jacobi/linux/softwares.html"
 FRESHMEAT=""
  ESTIMATE="12"
       REQ=( "" )
      DESC=("x86cpucaps is a library, which investigates CPU information "
            "This library can detect CPU IDs \(Family-Model-Stepping\), vendor
name strings \(\"GenuineIntel\", \"AuthenticAMD\", and so on\), and SIMD
capabilities.Furthermore, there are functions, estimating optimal Processor
Type \(for building kernel\), and estimating optimization flags for gcc.
" )

build(){
   make &&
   prepare_install &&
   make install
}
