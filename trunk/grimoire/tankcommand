   version stable 0.44 0.43
   require SDL_image SDL_mixer
  category game
 attribute x11
    source $SOURCEFORGE_URL tankcommand/tankcommand/tankcommand-$VERSION/tankcommand-linux-$VERSION.tar.gz
      info home http://tankcommand.sourceforge.net
      desc 'fast paced 2d arcade game
tankcommand is a fast paced 2D arcade game in which
the player must destroy all of the enemy units.
A balance between careful strategy and shoot-em-up action,
this game is a fun and exciting way to pass some spare time.'

build(){
LC_ALL=C grep  -rl '/usr/local/share' * |
xargs --max-lines=64 sed -i 's:usr/local/share:usr/share:g'
default_build
}
