   VERSION=( "0.44" "0.43" )
  CATEGORY="game"
 ATTRIBUTE="x11"
    SOURCE="tankcommand/tankcommand-linux-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://tankcommand.sourceforge.net"
       REQ="SDL_image SDL_mixer"
  ESTIMATE="393"
      DESC="tankcommand is a fast paced 2d arcade game.
tankcommand is a fast paced 2D arcade game in which
the player must destroy all of the enemy units.
A balance between careful strategy and shoot-em-up action,
this game is a fun and exciting way to pass some spare time."

build() {
grep       -rl  "/usr/local/share"  *  |
xargs      --max-lines 64  |
sed        -i   "s:usr/local/share:usr/share:g"
default_build
}
