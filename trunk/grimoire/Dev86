# case $HOSTTYPE in
#  x86_64) attribute broke ;;
# esac

    stable 0.16.18 0.16.17
  category development/assembler
 attribute console
    source http://www.debath.co.uk/dev86/Dev86src-$VERSION.tar.gz
      home http://www.debath.co.uk/
  eprovide bin86
  estimate 3000
      desc 'Bruce Evans C Compiler'

# Evert recommends removing /usr/bin/bcc from the Dev86 install
# in order for lilo to compile

build(){
make install "PREFIX=$DESTDIR/usr" &&
rm -f $DESTDIR/usr/bin/bcc
}
