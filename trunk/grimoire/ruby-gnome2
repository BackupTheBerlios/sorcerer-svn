   VERSION=( "0.16.0" "0.15.0" "0.14.1" )
  CATEGORY="development/interpreter/ruby"
 ATTRIBUTE="gnome library"
    SOURCE="ruby-gnome2/ruby-gnome2-all-$VERSION.tar.gz"
  HOMEPAGE="http://ruby-gnome2.sourceforge.jp/"
       URL="$SOURCEFORGE_URL"
#      REQ=( "libglade ruby"
# 0.16.0 gained additional requirements on gtkglext and poppler
       REQ=( "gtkglext libglade poppler ruby"
             "gnome-panel:::for additional bindings"
             "gtksourceview:::for additional bindings"
             "libgtkhtml:::for additional bindings"
             "librsvg:::for additional gnome bindings"
             "vte:::for additional gnome bindings" )
# libglade and gtk+ are only bindings required for
# spell nihongobenkyo to work
# Maybe make additional bindings optionally on or off?
  ESTIMATE="1100"
      DESC="ruby-gnome2 provides ruby bindings for gnome and gtk+ libraries."

build()  {
ruby extconf.rb  &&
make             &&
prepare_install  &&
make    install
}
