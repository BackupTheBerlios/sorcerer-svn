# 0.16.0 gained additional requirements on gtkglext and poppler
# libglade and gtk+ are only bindings required for
# spell nihongobenkyo to work
# Maybe make additional bindings optionally on or off?

   version stable 0.19.4 0.19.3 0.19.1
   version unstable 0.90.9 0.90.8 0.90.7
   require gtkglext libglade poppler ruby
  optional gnome-panel   '' '' for additional bindings
  optional gst-plugins-base '' '' for additional gnome bindings
  optional gtksourceview '' '' for additional bindings
  optional libgtkhtml    '' '' for additional bindings
  optional librsvg       '' '' for additional gnome bindings
  optional vte           '' '' for additional gnome bindings
  category development/interpreter/ruby
 attribute gnome library makej multilib-dual
    source $SOURCEFORGE_URL ruby-gnome2/ruby-gnome2/ruby-gnome2-$VERSION/ruby-gnome2-all-$VERSION.tar.gz
      info home http://ruby-gnome2.sourceforge.jp/
      desc 'ruby bindings for gnome and gtk+ libraries'

build(){
ruby extconf.rb &&
make &&
make install DESTDIR=$DESTDIR
}
