   VERSION=( "0.14.1" )
  CATEGORY="development"
 ATTRIBUTE="gnome library new"
    SOURCE="ruby-gnome2/ruby-gnome2-all-$VERSION.tar.gz"
  HOMEPAGE="http://ruby-gnome2.sourceforge.jp/"
       URL="$SOURCEFORGE_URL"
       REQ="gtk+ libglade ruby"
# libglade and gtk+ are only bindings required for
# spell nihongobenkyo to work
# Maybe make additional bindings optionally on or off?
  ESTIMATE="875"
      DESC="ruby-gnome2 provides ruby bindings for gnome and gtk+ libraries."

build()  {
ruby extconf.rb  &&
make             &&
prepare_install  &&
make    install
}
