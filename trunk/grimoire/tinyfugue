    stable 40s1
  category game
 attribute console
       url $SOURCEFORGE_URL
    source tinyfugue/tf-$VERSION.tar.gz
  homepage http://tinyfugue.sourceforge.net/
      desc 'tinyfuge is a flexible, screen-oriented MUD client.
TinyFugue is a power screen-oriented MUD client
that can talk to any type of MUD.
It has many abilities: input triggers,
full scripting, firewall support, and macros.'


build() {
sed  -i  's:\# TF="/usr/local:TF="/usr:'             unix/Config  &&
sed  -i  's:\# LIBDIR="/usr/local:LIBDIR="/usr:'     unix/Config  &&
sed  -i  's:\# SYMLINK="/usr/local:SYMLINK="/usr:'   unix/Config  &&
sed  -i  's:\# MANPAGE="/usr/local:MANPAGE="/usr:'   unix/Config  &&
sed  -i  "s:\# CCFLAGS=\"-g\":CCFLAGS=\"$CFLAGS\":"  unix/Config  &&
chmod  +x  unix/Config       &&
echo y  |  ./unixmake files  &&
prepare_install              &&
./unixmake install
}
