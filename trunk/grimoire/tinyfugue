   VERSION=( 40s1 )
    IGNORE="\-help\|[a-b]"
  CATEGORY='game'
 ATTRIBUTE='console'
    SOURCE="tinyfuge/tf-$VERSION.tar.gz"
  HOMEPAGE='http://tinyfugue.sourceforge.net/'
       URL="$SOURCEFORGE_URL"
#  HOMEPAGE='http://tf.tcp.com/~hawkeye/tf/'
#       URL='ftp://ftp.tcp.com/pub/mud/Clients/tinyfugue/'
       REQ='ncurses'
      DESC="TinyFugue is a flexible, screen-oriented MUD client.
TinyFugue is a power screen-oriented MUD client that can talk to any type
of MUD.  It has many abilities: input triggers, full scripting, firewall
support, and macros."


build() {
sed  -i  's:\# TF="/usr/local:TF="/usr:'             unix/Config  &&
sed  -i  's:\# LIBDIR="/usr/local:LIBDIR="/usr:'     unix/Config  &&
sed  -i  's:\# SYMLINK="/usr/local:SYMLINK="/usr:'   unix/Config  &&
sed  -i  's:\# MANPAGE="/usr/local:MANPAGE="/usr:'   unix/Config  &&
sed  -i  "s:\# CCFLAGS=\"-g\":CCFLAGS=\"$CFLAGS\":"  unix/Config  &&
chmod  +x  unix/Config       &&
echo y  |  ./unixmake files  &&
prepare_install              &&
./unixmake install
}
