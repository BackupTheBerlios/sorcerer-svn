    stable 2.36
   require MesaLib
  category graphic/library
 attribute library makej multilib-dual x11
    source $SOURCEFORGE_URL glui/Source/$VERSION/glui-$VERSION.tgz
      home http://glui.sourceforge.net/
#    forum http://sourceforge.net/projects/glui/forums
  estimate 500
      desc 'a graphic toolkit on top of glut written in C++ and OpenGL'

build(){
 cd src &&
 make && 
 mkdir -pvm 755  $DESTDIR/usr/{include,lib,share/doc/glui,share/glui} &&
 cp lib/*        $DESTDIR/usr/lib &&
 cp -a bin       $DESTDIR/usr/share/glui &&
 cp -a doc/*     $DESTDIR/usr/share/doc/glui &&
 cp -a include/* $DESTDIR/usr/include
}
