   version stable 1.1.9 1.1.6 X11R7.2-1.1.3
   version unstable 1.1.11 1.1.10 1.1.9 1.1.8
   require libXaw libXft libXinerama
  optional PAM '' '' for pluggable authentication
      opts --with-xdmconfigdir=/etc/X11/xdm
      opts --with-xdmscriptdir=/etc/X11/xdm
  category xorg/app
 attribute X11R7 x11 makej
    source $XORG_URL app/xdm-$VERSION.tar.bz2
      desc 'Display manager with support for XDMCP, host chooser'

current(){
 case $VERSION in
  1.1.9) grep -q "domain user" /etc/init.d/xdm ;;
 esac
}
