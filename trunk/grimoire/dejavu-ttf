   version stable 2.33 2.32 2.21 2.20
      info last  20100822
  category font
 attribute data
    source $SOURCEFORGE_URL dejavu/dejavu/$VERSION/dejavu-fonts-ttf-$VERSION.tar.bz2
      info last  20110305
      info home  http://dejavu.sourceforge.net/wiki/index.php/Main_Page
      info vurl http://dejavu-fonts.org/wiki/Download
      desc 'fork of ttf-bitstream-vera'

build(){
 [ -d ttf ] &&
 cd   ttf
 [ -f DejaVuSans.ttf ] &&
 mkdir -pv             $DESTDIR/usr/share/fonts/dejavu-ttf &&
 install -vm 644 *.ttf $DESTDIR/usr/share/fonts/dejavu-ttf
}

post_install(){ fc-cache -fv; }
