    stable 2.21 2.20 2.16 2.15 1.11 1.10
  category font
 attribute data
    source $SOURCEFORGE_URL dejavu/dejavu/$VERSION/dejavu-ttf-$VERSION.tar.bz2
  homepage http://dejavu.sourceforge.net/wiki/index.php/Main_Page
  estimate 50
      desc 'fork of ttf-bitstream-vera'

build(){
 [ -f DejaVuSans.ttf ] &&
 mkdir -pv             $DESTDIR/usr/share/fonts/dejavu-ttf &&
 install -vm 644 *.ttf $DESTDIR/usr/share/fonts/dejavu-ttf
}

post_install(){ fc-cache -fv; }
