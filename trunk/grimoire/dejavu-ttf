    stable 2.32 2.21 2.20
#     last 20100822
  category font
 attribute data
    source $SOURCEFORGE_URL dejavu/dejavu/$VERSION/dejavu-fonts-ttf-$VERSION.tar.bz2
      home http://dejavu.sourceforge.net/wiki/index.php/Main_Page
      vurl http://dejavu-fonts.org/wiki/Download
  estimate 50
      desc 'fork of ttf-bitstream-vera'

build(){
 [ -d ttf ] &&
 cd   ttf
 [ -f DejaVuSans.ttf ] &&
 mkdir -pv             $DESTDIR/usr/share/fonts/dejavu-ttf &&
 install -vm 644 *.ttf $DESTDIR/usr/share/fonts/dejavu-ttf
}

post_install(){ fc-cache -fv; }
