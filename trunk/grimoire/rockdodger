    stable 0.6.0a 0.6 0.5.1 0.4.2
   require SDL_image SDL_mixer
  category game
 attribute x11
       url $SOURCEFORGE_URL
    source spacerocks/rockdodger-$VERSION.tar.gz
  homepage http://spacerocks.sourceforge.net
case $VERSION in
 0.6.0a) use_gcc gcc-v3.4 ;;
esac
      desc 'rockdodger is a spaceship arcade style game.
Dodge the space rocks, use your shields, fire your thrusters,
fire lasers, cross your fingers, and kiss your ship goodbye.'

build(){
sed -i "s/-g/$CFLAGS/" Makefile
make            &&
prepare_install &&
make    install
}
