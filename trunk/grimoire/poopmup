   version stable 1.3beta 1.2
   version unstable 1.3beta1-src
   require SDL_image
  category game
 attribute x11
    source $SOURCEFORGE_URL poopmup/Version%201.x/1.3%20Beta/poopmup-$VERSION.tar.gz
  homepage http://sourceforge.net/projects/poopmup
      desc 'bird simulator shoot-em-up game
poopmup is a game, a sort of a shoot-em-up, but with a twist.'

build(){
PSP="/usr/share/poopmup"
PGP="/usr/bin/poopmup"
ULP="/usr/libexec/poopmup"
 RP="#!/bin/bash\ncd $PSP\n$ULP"
 CC="CC=g++ $CXXFLAGS -L/usr/X11R6/lib"

rm    -f *.o
chown -R root:root *
make "$CC" &&
mkdir -p           $DESTDIR/$PSP &&
cp    -a config    $DESTDIR/$PSP &&
cp    -a textures  $DESTDIR/$PSP &&
cp    -a poopmup.o $DESTDIR/$ULP &&
echo  -e "$RP"   > $DESTDIR/$PGP &&
chmod     755      $DESTDIR/$PGP
}
