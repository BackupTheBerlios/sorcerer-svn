    stable 5.6.4 5.6.3 5.6.2 5.6.1 5.6.0
   require Python allegro teTeX

    ignore 'macosx\|6-200'
  category game
 attribute x11
    source liquidwar-$VERSION.tar.gz
  homepage http://www.ufoot.org/liquidwar
       url http://savannah.nongnu.org/download/liquidwar/
  estimate 1500
      desc 'liquidwar is a unique multplayer wargame.
You control an army formed with thousands of pixels
(fighters) which look like liquid and try to eat your opponent.
You can play against a primitive NPC/AI or up to 5 other human players.
Network play is available.'

build(){
 case $VERSION in
  5.6.3) sed -i 's:data build_doc:data:
                 s:icon install_doc:icon:' Makefile.in ;;
 esac
 default_build
}
