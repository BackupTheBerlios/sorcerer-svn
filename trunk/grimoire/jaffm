   VERSION=( "1.3" )
  CATEGORY="file-manager"
 ATTRIBUTE="x11"
    SOURCE="jaffm-$VERSION.tar.bz2"
       URL="http://www.binary.is/download/"
  HOMEPAGE="http://jaffm.binary.is/"
       REQ="wxGTK"
  ESTIMATE="19"
      DESC="jaffm is a filemanager.
It uses the wxGTK library for the GUI interface.
It is mostly inspired by the List View in Mac OS Finder,
but also has Unix-handy features such as an interactive
location bar with Bash-style tab completion,
and a simple but elegant user interface."

build()  {
  make             &&
  prepare_install  &&
  make    install  PREFIX=/usr
}
