    stable 1.0.0.beta3 0.9.9.063
   require curl evas libXp libXScrnSaver libXtst openldap
  optional SDL '--enable-ecore-sdl --enable-ecore-evas-opengl-sdl'
      opts --enable-openssl --enable-ecore-evas-opengl-x11 --enable-ecore-evas-opengl-glew
  category development
 attribute library makej
 attribute multilib-fail
 attribute broke
#attribute multilib-concurrent multilib-dual
    source http://download.enlightenment.org/releases/ecore-$VERSION.tar.bz2
      info home  http://www.enlightenment.org/
      info docs  'http://www.enlightenment.org/p.php?p=docs&l=en'
  estimate 1000
      desc 'core functions for e17'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && [[ $CFLAGS =~ -m32 ]]
 then opts --x-libraries=/usr/lib
 fi
 default_build
}
