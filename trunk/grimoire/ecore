with version   stable 1.7.4 1.7.3 1.7.2
with base    curl evas libXp libXScrnSaver libXtst openldap
with elect   SDL '--enable-ecore-sdl --enable-ecore-evas-opengl-sdl'
with elect   ibus
with elect   scim
with also    --enable-openssl --enable-ecore-evas-opengl-x11 --enable-ecore-evas-opengl-glew
with also    --disable-static
with role    development
with trait   library makej multilib-concurrent
with source    stable http://download.enlightenment.org/releases/ecore-$VERSION.tar.bz2
with source  unstable http://download.enlightenment.org/releases/ecore-$VERSION.tar.bz2
with info    last 20121230
with info    home http://www.enlightenment.org/
with info    docs 'http://www.enlightenment.org/p.php?p=docs&l=en'
with info    cite 'core functions for e17'

build(){
 if   [[ $HOSTTYPE == x86_64 ]]; then
  if  [[ $CFLAGS =~ -m32 ]]
  then OPTS+=' --x-libraries=/usr/lib'
  else OPTS+=' --x-libraries=/usr/lib64'
  fi
 fi
 default_build
}
