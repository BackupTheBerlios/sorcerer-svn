with version stable 0.6 0.2
with base    MesaLib
case $HOSTTYPE in
 x86_64)
with base    NVIDIA-Linux-x86_64 ;;
      *)
with base    NVIDIA-Linux-x86 ;;
esac
with role    video
with trait   library makej multilib-concurrent optimize x11
with source  stable http://people.freedesktop.org/~aplattner/vdpau/libvdpau-$VERSION.tar.gz
with info    last 20130201
with info    home http://cgit.freedesktop.org/~aplattner/libvdpau
with info    cite 'Hardware Video Accelleration Library
Common API to accelerate video using hardware'
