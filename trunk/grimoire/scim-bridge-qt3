# solo only to prevent scim-bridge-qt3 and scim-bridge-qt4 from
# decompressing at the same time since they use the same tarball.
# The uncompression area is not designed to handle it.
    stable 0.4.15 0.4.14
   require scim qt-x11-free
  optional doxygen '' --disable-documents:for documentation
  category input
 attribute console library solo x11
       url $SOURCEFORGE_URL
    source scim/scim-bridge-$VERSION.tar.gz
  homepage http://www.scim-im.org/
      opts --prefix=/opt/kde3 --enable-agent --enable-qt3-immodule --enable-static=no --disable-qt4-immodule --disable-gtk2-immodule
 conflicts scim-bridge
  estimate 600
      desc 'scim-bridge-qt3 is a wrapper for scim.
It enables non ASCII language input in
with qt-x11-free and KDE 3.x programs.'

build(){
 extra_install(){
  install -vm 755 $SCRIPT_DIR/scim-bridge-qt3 /etc/bash.d/noninteractive/
 }

 default_build &&
 extra_install
}
