   VERSION=( 0.4.14 )
  CATEGORY='input'
 ATTRIBUTE='console library x11'
    SOURCE="scim/scim-bridge-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://www.scim-im.org/'
       REQ=( 'scim qt-x11-free'
             'doxygen::--disable-documents:for documentation' )
      OPTS='--prefix=/opt/kde3 --enable-agent --enable-qt3-immodule --enable-static=no --disable-qt4-immodule --disable-gtk2-immodule'
 CONFLICTS='scim-bridge'
  ESTIMATE='600'
      DESC='scim-bridge-qt3 is a wrapper for scim.
It enables non ASCII language input in
with qt-x11-free and KDE 3.x programs.'

build(){
 extra_install(){
  mkdir   -vp                                  /etc/bash.d/noninteractive
  install -vm 0755 $SCRIPT_DIR/scim-bridge-qt3 /etc/bash.d/noninteractive
 }

 default_build &&
 extra_install
}
