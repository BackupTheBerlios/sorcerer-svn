#!/bin/bash
# Set all CPU cores to maximum frequency
# This achieves maximum performance,
# maximum power consumption,
# maximum CPU heat production
# and maximum CPU fan noise.

if   (( UID == 0 )) && ! lsmod | grep -q cpufreq_performance
then modprobe cpufreq_performance
fi

for CPU in /sys/devices/system/cpu/cpu*/cpufreq/scaling_governor
do echo performance > $CPU
done
