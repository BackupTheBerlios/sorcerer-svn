#!/bin/bash

### BEGIN INIT INFO
# Provides: sorcery
# Required-Start: $local_fs
# Should-Start:
# Required-Stop: 
# Default-Start: 1 2 3 4 5
# Default-Stop:
# Short-Description: sorcery mounts tmpfs on /root/.sorcery
# Description: sorcery mounts tmpfs on /root/.sorcery
### END INIT INFO

. /lib/lsb/init-functions

NAME='/root/.sorcery'
OPTS='-o defaults,size=256m,nr_inodes=256k,mode=0700 -t tmpfs tmpfs'

parse "$@"
