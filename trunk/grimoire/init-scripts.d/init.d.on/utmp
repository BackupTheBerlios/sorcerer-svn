#!/bin/bash

### BEGIN INIT INFO
# Provides: utmp
# Required-Start: $local_fs run
# Required-Stop:
# Default-Start: 1 2 3 4 5
# Default-Stop:
# Short-Description: utmp creates login record /var/run/utmp
### END INIT INFO

. /lib/lsb/init-functions

NAME=/var/run/utmp

start(){
 run(){
  echo  -n  >    $NAME &&
  chown root:tty $NAME &&
  chmod 0664     $NAME
 }

 if   log_warning_msg  "$NAME creating"; run
 then log_success_msg  "$NAME created"
 else log_failure_msg  "$NAME not created"
 fi
}
       stop(){ :; }
    restart(){ :; }
try_restart(){ :; }
parse "$@"
