#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 500
# Required-Stop: $local_fs swap tmp
# Default-Stop: 0 6
# Short-Description: kill issues kill signals to lingering processes.
### END INIT INFO

if [ "$1" == try-restart ]; then exit 2; fi

. /lib/lsb/init-functions

flare(){
 log_warning_msg "$1 signal sending to all processes"; killall5 $2
 log_success_msg "$1 signal sent"
}

stop(){ flare TERM -15; sleep 3; flare KILL -9;  sleep 1; }
