#!/bin/bash

### BEGIN INIT INFO
# Provides: shm
# Required-Start: $local_fs
# Should-Start: udev
# Required-Stop: 
# Default-Start: 1 2 3 4 5
# Default-Stop:
# Short-Description: shm mounts tmpfs on /dev/shm
# Description: shm mounts tmpfs on /dev/shm
### END INIT INFO

. /lib/lsb/init-functions

NAME='/dev/shm'
SERV='mount'
OPTS='-t tmpfs tmpfs'

parse "$@"
