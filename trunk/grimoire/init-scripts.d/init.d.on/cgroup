#!/bin/bash

### BEGIN INIT INFO
# Required-Start: $local_fs
# Should-Start: dev
# Default-Start: S 1 2 3 4 5
# Short-Description: cgroup mounts cgroup on /dev/cgroup
# Long-Description: Read /usr/src/linux/Documentation/cgroups/cgroups.txt
### END INIT INFO

. /lib/lsb/init-functions

NAME=/dev/cgroup
OPTS='-t cgroup -o blkio,cpu,cpuset,freezer,memory cgroup'

parse "$@"
