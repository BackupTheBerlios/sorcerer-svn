#!/bin/bash

### BEGIN INIT INFO
# Provides: lock
# Required-Start: $local_fs
# Should-Start:
# Required-Stop: 
# Default-Start: 1 2 3 4 5
# Default-Stop:
# Short-Description: lock mounts tmpfs on /var/lock
# Description: lock mounts tmpfs on /var/lock
### END INIT INFO

. /lib/lsb/init-functions

OPTIONS='defaults,size=1m,nr_inodes=1k,mode=0750'

start()  {
  run()  {
    if    !  [   -d  /var/lock  ]
    then  mkdir  -p  /var/lock
    fi  &&
    mount  -o $OPTIONS  -t tmpfs  tmpfs  /var/lock
  }

  if    ! sed   's/#.*//'   /etc/fstab  |
          grep  -q          /var/lock;  then
    if    log_warning_msg  '/var/lock mounting';  run
    then  log_success_msg  '/var/lock mounted'
    else  log_failure_msg  '/var/lock not mounted'
    fi
  fi
}

help()  {  echo "Usage: $0 {start}" 1>&2;  }

case  $1  in
        start)  start  ;;
  try-restart)  :      ;;
            *)  help   ;;
esac
