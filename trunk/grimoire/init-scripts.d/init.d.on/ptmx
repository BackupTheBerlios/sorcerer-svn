#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 700
# Required-Start: $local_fs pts
# Should-Start: udev
# Default-Start: 1 2 3 4 5
# Short-Description: creates symbolic link from pts/ptmx to /dev/ptmx
### END INIT INFO

. /lib/lsb/init-functions

start(){
 if   [ -c       /dev/pts/ptmx ] &&
    ! [ -h       /dev/ptmx     ]; then
  rm -f          /dev/ptmx
  ln -s pts/ptmx /dev/ptmx
 fi
}

stop(){ :; }
 
parse "$@"
