#!/bin/bash
### BEGIN INIT INFO
# Default-Mode: 500
# Required-Start: pts
# Default-Start: 1 2 3 4 5
# Short-Description: runs console message capture logging daemon
### END INIT INFO

if [ "$1" == try-restart ] || ! [ -s /sbin/bootlogd ]; then exit; fi

. /lib/lsb/init-functions

server /sbin/bootlogd
options -l /var/log/console

parse "$@"
