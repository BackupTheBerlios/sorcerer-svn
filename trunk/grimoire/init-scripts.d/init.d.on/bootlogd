#!/bin/bash
### BEGIN INIT INFO
# Default-Mode: 500
# Required-Start: fstab udevd
# Default-Start: S
# Short-Description: runs console message capture logging daemon
### END INIT INFO

if [ "$1" == try-restart ] || ! [ -s /sbin/bootlogd ]; then exit; fi

. /lib/lsb/init-functions

server /sbin/bootlogd

if   grep    -q /media/root /etc/fstab
then options -l /media/root/var/log/console
else options -l            /var/log/console
fi

parse "$@"
