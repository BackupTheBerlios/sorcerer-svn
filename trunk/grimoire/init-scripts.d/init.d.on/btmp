#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 700
# Required-Start: $local_fs
# Default-Start: 1 2 3 4 5
# Short-Description: btmp creates login record /var/log/btmp
### END INIT INFO

. /lib/lsb/init-functions

NAME=/var/log/btmp

start(){
 run(){
  if   ! [   -d ${NAME%/*} ]
  then mkdir -p ${NAME%/*}
  fi &&
  echo  -n  >    $NAME &&
  chown root:tty $NAME &&
  chmod 600      $NAME
 }

 if   log_warning_msg "$NAME creating"; run
 then log_success_msg "$NAME created"
 else log_failure_msg "$NAME not created"
 fi
}
       stop(){ :; }
    restart(){ :; }
try_restart(){ :; }
parse "$@"
