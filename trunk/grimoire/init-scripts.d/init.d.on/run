#!/bin/bash

### BEGIN INIT INFO
# Provides: run
# Required-Start: $local_fs
# Should-Start:
# Required-Stop: 
# Default-Start: 1 2 3 4 5
# Default-Stop:
# Short-Description: run mounts tmpfs on /var/run
# Description: run mounts tmpfs on /var/run
### END INIT INFO

. /lib/lsb/init-functions

NAME='/var/run'
SERV='mount'
OPTS='-o defaults,size=1m,nr_inodes=1k,mode=0755 -t tmpfs tmpfs'

parse "$@"
