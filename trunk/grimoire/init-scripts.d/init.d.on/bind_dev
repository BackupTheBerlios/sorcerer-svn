#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 500
# Required-Start: mtab root-rw
# Default-Start: S
# Short-Description: binds /dev to /media/root/dev
### END INIT INFO

. /lib/lsb/init-functions

start(){
 [ -f /media/root/sbin/init ] &&
 if   log_warning_msg '/dev to /media/root/dev binding'; mount --bind /dev /media/root/dev
 then log_success_msg '/dev to /media/root/dev bound';
 else log_failure_msg '/dev to /media/root/dev not bound';
 fi
}

stop(){ :; }
try_restart(){ :; }
