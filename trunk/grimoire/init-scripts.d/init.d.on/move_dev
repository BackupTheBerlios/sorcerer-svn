#!/bin/dash

### BEGIN INIT INFO
# Required-Start: mtab root-rw
# Default-Start: S
# Short-Description: moves /dev to /media/root/dev
### END INIT INFO

. /lib/lsb/init-functions

start(){
 [ -f /media/root/sbin/init ] &&
 if   log_warning_msg '/dev to /media/root/dev moving'; mount --move /dev /media/root/dev
 then log_success_msg '/dev to /media/root/dev moved';
 else log_failure_msg '/dev to /media/root/dev not moved';
 fi
}

stop(){ :; }
try_restart(){ :; }
parse "$@"
