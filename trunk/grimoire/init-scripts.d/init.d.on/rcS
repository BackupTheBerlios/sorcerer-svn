#!/bin/bash
# Copyright 2011 by Kyle Sallee
# All Rights Reserved
# For use on Sorcerer only

trap : INT QUIT TSTP
export PATH=/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin
umask 022

run(){
 for S in /etc/rc.d/rcS.d/*; do $S start; done
 echo End sysinit
}

md(){ [ -d $1 ] || mkdir -p $1; }

I=/etc/init.d
L=/var/log/boot
D=$I/dev.d

[ -f $L/sysinit ] && return

if   [ -c $D/si ] &&  echo > $D/si
then cap(){ tee $L/sysinit > $D/si; }
else cap(){ tee $L/sysinit; }
fi

md $L
md $D
if   ! [    -f               /proc/mounts ] ||
     ! grep -q /var/log/boot /proc/mounts
then mount -o size=1m,nr_inodes=8,mode=700 -t tmpfs tmpfs $L
fi
run 2>&1 | cap
