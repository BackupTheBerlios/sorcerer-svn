#!/bin/bash

### BEGIN INIT INFO
# Provides: usb
# Required-Start: $local_fs
# Should-Start: proc udev
# Required-Stop: 
# Default-Start: 1 2 3 4 5
# Default-Stop:
# Short-Description: usb mounts usbfs on /proc/bus/usb
# Description: usb mounts usbfs on /proc/bus/usb
### END INIT INFO

. /lib/lsb/init-functions

NAME='/proc/bus/usb'
SERV='mount'
OPTS='-t usbfs usbfs'

parse "$@"
