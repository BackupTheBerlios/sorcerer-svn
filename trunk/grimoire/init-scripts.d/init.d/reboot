#!/bin/bash
### BEGIN INIT INFO
# Default-Mode: 500
# Default-Start: 6
# Required-Start: finale
# Should-Start: reboot-kexec
# Short-Description: reboots the box
### END INIT INFO

rootfs || exit 0

. /lib/lsb/init-functions

only start
deny control

start(){
 log_success_msg Rebooting
 /sbin/reboot -d -f -i
}
