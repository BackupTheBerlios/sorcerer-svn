#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 500
# Required-Start: proc
# Default-Start: S 1 2 3 4 5
# Short-Description: run mounts tmpfs on /run
### END INIT INFO

. /lib/lsb/init-functions

only start stop restart status
deny control
name /run
options '-o defaults,size=1m,nr_inodes=2k,mode=0755 -t tmpfs tmpfs'
