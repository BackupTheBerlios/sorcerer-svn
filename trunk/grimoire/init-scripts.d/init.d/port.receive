load_etc_roots(){
 local      d n a
 [ -f /etc/roots ] &&
 while read d n a; do
  root_mnt[$n]="$d"; root_ipa[$n]="$a"
   mnt_ipa[$d]="$a"; mnt_root[$d]="$n"
  ipa_root[$a]="$n";  ipa_mnt[$a]="$d"
 done < /etc/roots
}

