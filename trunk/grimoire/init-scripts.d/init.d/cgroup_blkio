#!/bin/bash

# Copyright Kyle Sallee 2011
# All rights reserved.
# For use with the distribution sorcerer only!

### BEGIN INIT INFO
# Default-Mode: 500
# Required-Start: cgroup_root
# Default-Start: S 1 2 3 4 5
# Short-Description: mounts cgroup file system on /sys/fs/cgroup/blkio
# Long-Description: Read /usr/src/linux/Documentation/cgroups/blkio-controller.txt
### END INIT INFO

. /lib/lsb/init-functions

only start stop restart status
deny control
name /sys/fs/cgroup/blkio
options '-t cgroup -o blkio,clone_children blkio'
