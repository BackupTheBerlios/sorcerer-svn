#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 500
# Default-Start: S 1 2 3 4 5
# Short-Description: loopback starts loopback device
### END INIT INFO

. /lib/lsb/init-functions

only start

start(){
 if   log_warning_msg "loopback configuring"; /sbin/ip link set lo up
 then log_success_msg "loopback configured"
 else log_failure_msg "loopback configuration failed"; return 1
 fi
}
