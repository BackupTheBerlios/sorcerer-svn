#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 500
# Default-Start: S
# Short-Description: creates directory /media/root if it is missing
### END INIT INFO

. /lib/lsb/init-functions

only start
deny control

start(){
 if [ -d /media/root ]; then return; fi
 if   log_warning_msg '/media/root directory creating'; mkdir -pm 755 /media/root
 then log_success_msg '/media/root directory created'
 else log_failure_msg '/media/root directory not created'
 fi
}
