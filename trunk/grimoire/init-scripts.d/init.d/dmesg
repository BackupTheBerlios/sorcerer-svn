#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 500
# Required-Start: $local_fs
# Default-Start: 1 2 3 4 5
# Short-Description: dmesg saves the kernel ring buffer to /etc/init.d/log.d/dmesg
### END INIT INFO

. /lib/lsb/init-functions

only start
name /var/log/init/dmesg
server /bin/dmesg
options -c

start(){
 if   log_warning_msg "$NAME writing"; $SERV $OPTS > $NAME
 then log_success_msg "$NAME written"
 else log_failure_msg "$NAME not written"
 fi
}
