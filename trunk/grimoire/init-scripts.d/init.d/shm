#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 500
# Required-Start: $local_fs
# Should-Start: udev
# Default-Start: 1 2 3 4 5
# Short-Description: mounts tmpfs on /dev/shm
### END INIT INFO

. /lib/lsb/init-functions

only start stop restart status
deny control
name /dev/shm
options '-t tmpfs tmpfs'
