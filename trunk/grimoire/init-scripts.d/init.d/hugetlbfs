#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 500
# Required-Start: proc
# Should-Start: dev
# Default-Start: S 1 2 3 4 5
# Short-Description: mounts hugetlbfs on /dev/hugetlbfs
### END INIT INFO

. /lib/lsb/init-functions

only start stop restart status
deny control
name /dev/hugetlbfs
options '-t hugetlbfs hugetlbfs'
