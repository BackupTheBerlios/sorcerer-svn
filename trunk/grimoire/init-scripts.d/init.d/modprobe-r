#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 500
# Required-Start: proc sys
# Should-Start: udev
# Default-Start: S
# Short-Description: unloads modules specified in /etc/modules.rm during boot
### END INIT INFO

if ! [ -f /etc/modules.rm ] ||
   ! [ -x /sbin/modprobe  ]
then exit 0
fi

. /lib/lsb/init-functions

only start

rmp(){
 [ -f /etc/modules.rm ] &&
 sed 's:#.*::;/^ *$/d' /etc/modules.rm |
 xargs -r --max-lines=64 modprobe -r
}

start(){
 log_warning_msg 'Modules unloading'; rmp
 log_success_msg 'Modules unloaded'
}
