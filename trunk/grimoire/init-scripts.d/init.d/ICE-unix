#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 500
# Required-Start: $local_fs
# Should-Start: tmp xorg.conf
# Default-Start: 1 2 3 4 5
# Short-Description: creates /tmp/.ICE-unix/
### END INIT INFO

. /lib/lsb/init-functions

only start
deny control
name /tmp/.ICE-unix

start(){
 if   [ -d $NAME ]; then return; fi
 if   log_warning_msg "$NAME create"; mkdir -pm 1777 $NAME
 then log_success_msg "$NAME create"
 else log_failure_msg "$NAME create"; return 1
 fi
}
