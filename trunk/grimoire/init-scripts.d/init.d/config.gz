#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 500
# Should-Start: proc
# Default-Start: S
# Short-Description: chmod 600 /proc/config.gz
### END INIT INFO

. /lib/lsb/init-functions

only start
name /proc/config.gz

start(){
 [ -f $NAME ] || return
 if   log_warning_msg "mode 600 change"; chmod 600 $NAME
 then log_success_msg "mode 600 change"
 else log_failure_msg "mode 600 change"; return 1
 fi
}
