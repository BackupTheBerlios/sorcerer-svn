#!/bin/bash

# Copyright Kyle Sallee 2011
# All rights reserved.
# For use with the distribution sorcerer only!

### BEGIN INIT INFO
# Default-Mode: 500
# Required-Start: cgroup_root
# Default-Start: S
# Short-Description: mounts cgroup file system on /sys/fs/cgroup/memory
# Long-Description: Read /usr/src/linux/Documentation/cgroups/memory.txt
### END INIT INFO

. /lib/lsb/init-functions

only start stop restart status
deny control
name /sys/fs/cgroup/memory
options '-t cgroup -o memory,clone_children memory'
