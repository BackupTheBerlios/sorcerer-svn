# This spell was replaced by the spell mame

# Server is not allowing curl downloads of the zip?
# Download manually if you want it.
# http://rbelmont.mameworld.info/sdlmame0135u1.zip

   version stable 0136 0135u2 0135u1 0133u5
   require GConf SDL
#  require GConf-dbus SDL
  category game development/emulator
 attribute x11
    source http://rbelmont.mameworld.info/sdlmame$VERSION.zip
      vurl 'http://rbelmont.mameworld.info/?page_id=163'
      info home 'http://rbelmont.mameworld.info/?page_id=163'
      desc 'multi arcade machine emulator using SDL'

build(){
sed -i 's:-Werror::g' makefile
make -f makefile &&
mkdir -p $DESTDIR/usr/bin &&
make -f makefile PREFIX=$DESTDIR/usr/bin/
}

current(){ echo mame | pipe_queue $CAST_QUEUE; }
