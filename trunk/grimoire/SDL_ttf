   VERSION=( "2.0.7" "2.0.6" "2.0.5" )
    IGNORE="devel"
  CATEGORY="graphic"
 ATTRIBUTE="library x11"
    SOURCE="SDL_ttf-$VERSION.tar.gz"
  HOMEPAGE="http://www.libsdl.org/projects/SDL_ttf"
       URL="http://www.libsdl.org/projects/SDL_ttf/release"
       REQ="SDL freetype"
  ESTIMATE="32"
 FRESHMEAT="sdl_ttf"
      DESC="SDL_ttf is a sample library for displaying truetype fonts."
			
build() {
	patch  -p1  <  $SCRIPT_DIR/SDL_ttf-2.0.6-freetype.patch

	cat  <<-  EOF  >>  SDL_ttf.h
	#define  ft_open_memory    FT_OPEN_MEMORY     /* deprecated */
	#define  ft_open_stream    FT_OPEN_STREAM     /* deprecated */
	#define  ft_open_pathname  FT_OPEN_PATHNAME   /* deprecated */
	#define  ft_open_driver    FT_OPEN_DRIVER     /* deprecated */
	#define  ft_open_params    FT_OPEN_PARAMS     /* deprecated */
	EOF

	default_build
}

