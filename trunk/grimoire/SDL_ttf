   version stable 2.0.11 2.0.10 2.0.9
   require MesaLib SDL freetype imake xorg-cf-files
      opts --enable-static=no
  category font/library graphic/library
 attribute library makej multilib-concurrent x11
    source http://www.libsdl.org/projects/SDL_ttf/release/SDL_ttf-$VERSION.tar.gz
      info last 20120116
      info home http://www.libsdl.org/projects/SDL_ttf/
      info docs http://www.libsdl.org/projects/SDL_ttf/docs/index.html
 freshmeat sdl_ttf
      desc 'library for displaying truetype fonts'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && [[ $CFLAGS =~ -m32 ]]
 then export LDFLAGS+=' -L/usr/lib'
 fi
 default_build
}
