    stable 1.30
   require SDL_image SDL_mixer

  category game
 attribute x11
    source orbital_eunuchs_sniper-$VERSION.tar.gz
       url http://filesingularity.timedoctor.org/
      vurl http://filesingularity.timedoctor.org/download.php?realfile=1&fileid=1
  homepage http://www.icculus.org/oes/
  estimate 200
      desc 'oesniper is a game to control an orbital laser to protect VIPs.

Orbital Eunuchs Sniper is a simple game
in which the player must control
an orbital laser to prevent harm
from coming to the VIPs (in blue squares)
in the form of human threats (in red squares).

Avoid killing the neutral humans,
however, or else you may be retired.'


build_old(){
SO="/usr/share/oesniper"
GO="/usr/bin/oesniper"

rm -f bin/snipe2d.x86.dynamic
cd      src     &&
make            &&
cd   ../bin     &&
prepare_install &&
mkdir -p  $SO   &&
cp    *   $SO   &&
echo  "#!/bin/sh"                  > $GO &&
echo  "cd  $SO"                   >> $GO &&
echo  "./snipe2d.x86.dynamic \$*" >> $GO &&
chmod a+x  $GO
}
