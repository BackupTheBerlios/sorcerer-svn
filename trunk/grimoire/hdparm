    stable 9.28 9.27 9.26 9.25 9.24 9.22
  category disk
 attribute console
    source $SOURCEFORGE_URL hdparm/hdparm/hdparm-$VERSION.tar.gz
  homepage http://sourceforge.net/projects/hdparm/
      desc 'utility to access/tune Linux EIDE drivers'

build(){
make                  &&
prepare_install       &&
make    install       \
        destdir=/usr  \
        sbindir=/sbin \
        mandir=/usr/man
}
