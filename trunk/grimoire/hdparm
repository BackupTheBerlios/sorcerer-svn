    stable 9.15 9.14 9.13 9.12 9.11 9.10 9.8 9.6 9.5 9.3
  category disk
 attribute console
       url $SOURCEFORGE_URL
    source hdparm/hdparm-$VERSION.tar.gz
  homepage http://sourceforge.net/projects/hdparm/
      desc 'hdparm is a utility to access/tune Linux EIDE drivers.'

build(){
make                  &&
prepare_install       &&
make    install       \
        destdir=/usr  \
        sbindir=/sbin \
        mandir=/usr/man
}
