    stable 9.3 8.9 8.8 8.7 8.6 8.5 8.1
  category disk
 attribute console
       url $SOURCEFORGE_URL
    source hdparm/hdparm-$VERSION.tar.gz
  homepage http://sourceforge.net/projects/hdparm/
      desc 'hdparm is a utility to access/tune Linux EIDE drivers.'

build(){
make                  &&
prepare_install       &&
make    install       \
        destdir=/usr  \
        sbindir=/sbin \
        mandir=/usr/man
}
