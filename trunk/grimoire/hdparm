   VERSION=( 8.5 8.1 7.7 7.3 7.2 6.9 6.8 6.7 6.6 6.5 6.3 6.1 )
  CATEGORY='disk'
 ATTRIBUTE='console'
    SOURCE="hdparm/hdparm-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://sourceforge.net/projects/hdparm/'
  ESTIMATE='20'
      DESC='hdparm is a utility to access/tune Linux EIDE drivers.'

build(){
 make                  &&
 prepare_install       &&
 make    install       \
         destdir=/usr  \
         sbindir=/sbin \
         mandir=/usr/man
}
