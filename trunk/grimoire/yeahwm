   VERSION=( "0.3.5" "0.3.4a" )
  CATEGORY="window-manager"
 ATTRIBUTE="x11"
    SOURCE="yeahwm_$VERSION.tar.gz"
       URL="http://phrat.de/"
  HOMEPAGE="http://phrat.de/"
       REQ="lesstif"
     WMBIN="/usr/bin/yeahwm"
  ESTIMATE="9"
      DESC="yeahwm is a minimalistic window manager based on evilwm.
It supports Xinerama and respects aspect
size hints (useful with Mplayer and tvtime).
It features creative usage of the mouse, tabbed titles that
can be repositioned (BeOS-like), and good keyboard control."

build()  {
  sed   -i  "s:#install yeahwm.1 :install yeahwm.1 :"  Makefile  &&
  make  allinone   &&
  prepare_install  &&
  make    install
}
