     PNAME=${SPELL#perl--}
   VERSION=( "1.000" )
  CATEGORY="perl"
 ATTRIBUTE="perl-module new"
    SOURCE="C/CJ/CJM/$PNAME-$VERSION.tar.gz"
       URL="http://www.cpan.org/authors/id/"
  HOMEPAGE="http://search.cpan.org/search?dist=$PNAME"
       REQ=( "perl" )
  ESTIMATE="15"
      DESC="$SPELL is a simple word wrapping routine"
