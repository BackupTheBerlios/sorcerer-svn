   VERSION=( "20060412" "20060401" "20060329" "20060324" "20060323" "20060322" "20060316" "20060313" "20060311" )
  CATEGORY="window-manager"
 ATTRIBUTE="x11"
    SOURCE="wmii-$VERSION.tar.gz"
       URL="http://wmii.de/snaps/"
  HOMEPAGE="http://wmii.de/"
  EPROVIDE="wmii"
     WMBIN="/usr/bin/wmiiwm"
       REQ="x11"
  ESTIMATE="98"
      DESC="wmii-dev are snapshots of the developmental version of wmii.
wmii is a customizable low memory x11 window manager.
wmii has tabbed, tiled and conventional window management modes."

build()  {
  sed  -i  "s:/usr/local:/usr:
            s:\${PREFIX}/etc:/etc:"  config.mk
  make             &&
  prepare_install  &&
  make    install
}
