  stable May2006
# May2006 fails compilation with gcc version 4.2.2
# May2006 fails compilation with gcc version 4.1.2
# May2006 fails compilation with gcc version 4.0.4
# hugs98 no current version known to compile
  CATEGORY='development/compiler'
 ATTRIBUTE='console broke'
    SOURCE="hugs98-plus-$VERSION.tar.gz"
       URL='http://cvs.haskell.org/Hugs/downloads/2006-05/'
  HOMEPAGE='http://www.haskell.org/hugs/'
       REQ='readline'
case  $VERSION  in
  May2006)  USE_GCC='gcc-v4.0'  ;;
esac
#   OPT[1]=':--with-pthreads::build Hugs using pthreads C library'
#   OPT[2]=':--enable-path-canonicalization::enable filepath canonicalization'
 FRESHMEAT='hugs'
  ESTIMATE='558'
      DESC='hugs98 is a functional programming system based on Haskell 98
Hugs 98 is a functional programming system based on 
interpreted Haskell 98, the de facto standard for 
non-strict functional programming languages.'


build()  {

build_old() {
./configure                     \
--prefix=/usr                   \
--with-pthreads                 \
--enable-path-canonicalization  \
$OPTS  &&
make              &&
prepare_install   &&
make    install  prefix=/usr
}

make             &&
prepare_install  &&
make    install
}
