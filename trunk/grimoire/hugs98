       URL="http://cvs.haskell.org/Hugs/downloads/$VERSION"
#      URL="http://cvs.haskell.org/Hugs/downloads"
  HOMEPAGE="http://www.haskell.org/hugs"
       REQ="readline"
#   OPT[1]=":--with-pthreads::build Hugs using pthreads C library"
