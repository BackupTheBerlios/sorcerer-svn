# No method for system wide installation?
# Must be installed into user's home directory?

   version stable 0.6.3 0.6.2.1
  category game
 attribute x11
    source $SOURCEFORGE_URL "worldforge/Ember%20%28OGRE%20client%29/${VERSION:0:5}/ember-media-$VERSION.tar.bz2"
      info last 20120713
      info home http://www.worldforge.org/
 freshmeat worldforgeember
      desc 'media for 3d client for both Cyphesis and Indri servers
The goal is for ember to be used with all
worlds created within the Worldforge project.'

build(){
 find * -type d | xargs -r --max-lines=64 chmod 755
 find * -type f | xargs -r --max-lines=64 chmod 644
 mkdir -pvm 755 "$DESTDIR/opt/ember-media"
 cp -av *       "$DESTDIR/opt/ember-media/"
}
