       REQ=( "bzip2 freetype jpeg libmng libpng libtool libxml2 tiff"
             "librsvg::--without-rsvg:for SVG vector-graphic files support"
             "perl--ExtUtils-ParseXS::--without-perl:to make PerlMagick"
