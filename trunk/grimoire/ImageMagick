  HOMEPAGE='http://www.imagemagick.org'
       REQ=( 'bzip2 freetype libmng libpng libxml2 tiff'
             'djvulibre:::for djvulibre document format support'
             'graphviz:::for drawing graphs'
             'jasper:::for jpeg-2000 support'
             'libXt:--with-x:--without-x:for x11 programs animate, display, and import'
             'libgsf:::for gnome structured file library support'
             'librsvg::--without-rsvg:for SVG vector-graphic files support'
             'libwmf::--without-wmf:for reading Microsoft WMF format'
