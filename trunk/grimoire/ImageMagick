# will investigate it on next release
  CATEGORY="printer"
 ATTRIBUTE="console x11"
    SOURCE="ImageMagick-$VERSION.tar.bz2"
       URL="ftp://ftp.imagemagick.org/pub/ImageMagick/
            ftp://ftp.imagemagick.net/pub/ImageMagick/
