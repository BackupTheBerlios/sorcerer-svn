   VERSION=( "0.5.2" )
  CATEGORY="audio/player"
 ATTRIBUTE="console new"
    SOURCE="xmmsfind/xmmsfind-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://xmmsfind.sourceforge.net"
       REQ="xmms"
  ESTIMATE="14"
      DESC="xmmsfind is a plugin for xmms
xmms plugin provides functionality to find
and play a file in the current play list.
While similar to the built-in 'jump to file'
xmmsfind is launched by an external command."

build() {
make             &&
prepare_install  &&
make    install
}
