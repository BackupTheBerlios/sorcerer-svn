# gphoto-suite provides libgphoto2 and gphoto2 in a single tarball.

    stable 2.4.2 2.4.1 2.4.0
   require hal jpeg libexif libtool libusb
  category video/digital-camera
 attribute library
       url $SOURCEFORGE_URL
    source gphoto/libgphoto2-$VERSION.tar.bz2
  homepage http://gphoto.sourceforge.net
 freshmeat libgphoto
  estimate 4900
      desc 'libgphoto2 provides a library for accessing almost 300 digital cameras.'

build(){
 case $VERSION in
  2.4.[0-2]) export ac_cv_lib_ltdl_lt_dlcaller_register=yes ;;
 esac
 default_build
}
