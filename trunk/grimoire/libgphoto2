   VERSION=( "2.2.1" "2.2.0" "2.1.6" "2.1.5" "2.1.4" "2.1.3" "2.1.2" "2.1.1" )
    IGNORE="pre\|rc\|^2\.3\."
  CATEGORY="video/digital-camera"
 ATTRIBUTE="library"
# This 2.2.1 does not seem to be put together correctly for compilation.
    SOURCE="gphoto/libgphoto2-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://gphoto.sourceforge.net"
       REQ="hal jpeg libexif libusb"
 FRESHMEAT="libgphoto"
  ESTIMATE="5780"
      DESC="libgphoto2 provides a library for accessing almost 300 digital cameras."

build()  {
  case  $VERSION  in
    2.2.1)  export    CFLAGS="-I$PWD $CFLAGS"
            export  CXXFLAGS="-I$PWD $CXXFLAGS"
            ln  -s  libgphoto2 gphoto2  
            cp  -a  libgphoto2_port/libgphoto2_port/*.h  gphoto2  ;;
  esac
  default_build
}
