    SOURCE="openldap-release/openldap-$VERSION.tgz"
  HOMEPAGE="http://www.openldap.org"
       URL="ftp://ftp.openldap.org/pub/OpenLDAP
            http://www.planetmirror.com/pub/openldap
            ftp://gd.tuwien.ac.at/infosys/network/OpenLDAP
