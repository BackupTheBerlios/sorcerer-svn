post_install(){
 default_post_install
          get_provider  pam_ldap |
 pipe     get_provider  nss_ldap |
 pipe     show_installed         |
 LC_ALL=C sort                   |
          uniq  -d               |
          pipe_queue $CAST_QUEUE com
}

