   VERSION=( "0.16" "0.15" "0.14" "0.13.2" "0.13.1" )
  CATEGORY="audio audio-editor"
 ATTRIBUTE="server x11"
    SOURCE="darkice/darkice-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://darkice.sourceforge.net"
       REQ=( "lame libvorbis"
             "alsa-lib:--with-alsa:--without-alsa:for audio ouput using alsa"
             "jackit:--with-jack:--without-jack:for jack low-latency audio server support" )
#            "faac:--with-faac:--without-faac:for encoding AAC streams"
      OPTS="--without-faac"
# faac support broken in 0.16 and causes compile error
  ESTIMATE="56"
      DESC="darkice is an icecast, icecast2, and shoutcast live audio streamer.
It takes audio input from a sound card, encodes it into MP3/Ogg Vorbis,
and sends the stream to one or more servers
(Icecast/Shoutcast if it's MP3, and Icecast2 if it's Ogg Vorbis)."
