   VERSION=( "0.14" "0.13.2" "0.13.1" )
  CATEGORY="audio audio-editor"
 ATTRIBUTE="server x11"
    SOURCE="darkice/darkice-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://darkice.sourceforge.net"
       REQ="lame libvorbis"
    OPT[0]="alsa,lib:--with-alsa:--without-alsa:for audio ouput using alsa"
 FRESHMEAT="darkice"
  ESTIMATE="48"
     SHORT="darkice is an icecast, icecast2, and shoutcast live audio streamer."
stream << EOF
darkice is an Icecast, Icecast2, and Shoutcast live audio streamer.
It takes audio input from a sound card, encodes it into MP3/Ogg Vorbis, 
and sends the stream to one or more servers 
(Icecast/Shoutcast if it's MP3, and Icecast2 if it's Ogg Vorbis).
EOF
