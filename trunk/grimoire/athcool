    stable 0.3.12 0.3.11 0.3.10 0.3.8
   require pciutils
  category utility
 attribute console
    source athcool-$VERSION.tar.gz
       url http://members.jcom.home.ne.jp/jacobi/linux/files/
      vurl http://members.jcom.home.ne.jp/jacobi/linux/softwares.html
  homepage http://members.jcom.home.ne.jp/jacobi/linux/softwares.html
  estimate 10
      desc 'athcool enables and disables powersaving mode for AMD K7.'

build(){
sed -i 's:-lpci:-lpci -lz:' Makefile
make            &&
prepare_install &&
make    install
}
