   version stable 0.3.12 0.3.11 0.3.10
   require pciutils
  category utility
 attribute console
    source http://members.jcom.home.ne.jp/jacobi/linux/files/athcool-$VERSION.tar.gz
      info vurl http://members.jcom.home.ne.jp/jacobi/linux/softwares.html
      info home  http://members.jcom.home.ne.jp/jacobi/linux/softwares.html
      desc 'enables and disables powersaving mode for AMD K7'

build(){
sed -i 's:-lpci:-lpci -lz:' Makefile
make &&
make install "DESTDIR=$DESTDIR"
}
