    stable 1.3 1.2 1.1 1.0 0.9 0.8
  unstable 1.4-rc1
   require ncurses
  category utility/editor
 attribute console
    source $GNU_URL moe/moe-$VERSION.tar.gz
  homepage http://www.gnu.org/software/moe/moe.html
   provide console-editor
      desc 'modeless 8-bit clean text editor for ISO-8859-15 and ASCII'

build(){
./configure          \
--prefix=/usr        \
--datadir=/usr/share \
--infodir=/usr/info  \
--mandir=/usr/man    \
CFLAGS="$CFLAGS"     \
CXXFLAGS="$CXXFLAGS" &&
make &&
make install DESTDIR=$DESTDIR
}
