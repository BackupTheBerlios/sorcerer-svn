    stable 0.9 0.8
   require ncurses
  category utility/editor
 attribute console
       url $GNU_URL
    source moe/moe-$VERSION.tar.bz2
  homepage http://www.gnu.org/software/moe/moe.html
   provide console-editor
  estimate 50
      desc 'moe is a modeless 8-bit clean text editor for ISO-8859-15 and ASCII.'

build(){
sed -i "s:-Wall -W -O2:$CXXFLAGS:" Makefile.in
./configure          \
--prefix=/           \
--datadir=/usr/share \
--infodir=/usr/info  \
--mandir=/usr/man    &&
make                 &&
prepare_install      &&
make    install
}
