   version   stable 1.4 1.3 1.2 1.1
   version unstable 1.5-pre1 1.4-rc1
   require ncurses
  category utility/editor
 attribute console
    source $GNU_URL moe/moe-$VERSION.tar.gz
      info good 20120625
      info last 20110116
      info home http://www.gnu.org/software/moe/moe.html
   provide console-editor
      desc 'modeless 8-bit clean text editor for ISO-8859-15 and ASCII'

build(){
./configure          \
--prefix=/usr        \
--datadir=/usr/share \
--infodir=/usr/info  \
--mandir=/usr/man    \
CFLAGS="$CFLAGS"     \
CXXFLAGS="$CXXFLAGS" &&
make &&
make install DESTDIR=$DESTDIR
}
