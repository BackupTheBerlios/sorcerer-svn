    stable 1.2 1.1 1.0
   require SDL libpng
  category game
 attribute x11
    source $SOURCEFORGE_URL glhack/glhack/$VERSION/glhack-$VERSION.tar.gz
  homepage http://glhack.sourceforge.net
  estimate 300
      desc 'SDL port of NetHack, the CRPG'

build(){
make &&
make install PREFIX=$DESTDIR/usr
}
