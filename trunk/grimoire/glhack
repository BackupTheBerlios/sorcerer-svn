   VERSION=( "1.2" "1.1" "1.0" )
  CATEGORY="game"
 ATTRIBUTE="x11"
    SOURCE="glhack/glhack-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://glhack.sourceforge.net"
       REQ="SDL libpng"
  ESTIMATE="280"
      DESC="glhack is a SDL port of NetHack, the role playing game."


build() {
make             &&
prepare_install  &&
make    install
}
