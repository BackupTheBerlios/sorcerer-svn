    stable 4_1 4_0
   require qt-x11-free fftw
  category graphic science
 attribute kde3
    source $SOURCEFORGE_URL digitizer/Engauge%20Digitizer/digitizer-4.1/digit-src-$VERSION.tar.gz
      info home  http://digitizer.sourceforge.net/
  estimate 100
 freshmeat digitizer
      desc 'engauge-digitizer converts an image showing a graph or map into numbers
Engauge Digitizer is a digitizing software that converts
an image file showing a graph or map, into numbers.
The image can come from a scanner, digital camera or screenshot.
The numbers can be read on the screen, 
and written or copied to a spreadsheet.'

build(){
 export QTDIR=/opt/kde3
 export PATH+=:/opt/kde3/bin

 sed -i "s:helpPath1(\".*\");:helpPath1(\"/usr/doc/${SPELL}/doc/usermanual\");:"  src/digitmain.cpp
 mv samples usermanual doc

 qmake -unix digitizer.pro &&
 make &&
 mkdir  -pvm 755                             $DESTDIR/opt/kde3/bin &&
 install -vm 755 -o root -g root bin/engauge $DESTDIR/opt/kde3/bin
}
