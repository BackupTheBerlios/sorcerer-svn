   VERSION=( "2.1.2" )
  CATEGORY="font/library"
 ATTRIBUTE="library new"
    SOURCE="xft-$VERSION.tar.gz"
       URL="http://freedesktop.org/software/fontconfig/releases/"
  HOMEPAGE="http://freedesktop.org/software/fontconfig/releases/"
       REQ="fontconfig"
      OPTS="--enable-static=no"
  ESTIMATE="85"
      DESC="xft library connects X applications with freetype.
xft uses fontconfig to locate fonts so it has no configuration files."

build()  {
case  $VERSION  in
  2.1.2)  sed  -i  "\,#include <freetype/freetype.h>,i#include <ft2build.h>" Xft.h  ;;
esac
default_build
}
