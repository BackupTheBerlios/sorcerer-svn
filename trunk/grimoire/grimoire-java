   VERSION=( "0.9.7" "0.9.6" "0.9.5" "0.9.4" "0.9.1" )
  CATEGORY="grimoire"
 ATTRIBUTE="core grimoire solo"
    SOURCE="java-grimoire/java-grimoire-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
   HOMEPAGE="http://sourceforge.net/projects/java-grimoire"
  EPROVIDE="grimoire,java java-grimoire catalog-java"
      DESC="grimoire-java contains a selection of java spells.

grimoire-java contains an optional grimoire 
with java related spells that are maintained 
independently of sorcerer's official grimoire.
Please send bug reports and improvements for the 
java-grimoire through
http://sourceforge.net/projects/java-grimoire
"


build()  {
  prepare_install                         &&
  mkdir      -p  $GRIMOIRE_LIBRARY        &&
  find       .   -type f  -printf "%P\n"  |
  grep       -v  "\.ccache/reference"     |
  tar_files  >   $GRIMOIRE_LIBRARY/$SPELL.tar
}
