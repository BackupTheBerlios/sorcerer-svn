   VERSION=( 20080402 )
  CATEGORY='security'
 ATTRIBUTE='console'
    SOURCE="refpolicy-$VERSION.tar.bz2"
  HOMEPAGE='http://oss.tresys.com/projects/refpolicy/wiki/DownloadRelease'
       URL='http://oss.tresys.com/files/refpolicy/'
       REQ='PyXML checkpolicy policycoreutils libsepol'
  ESTIMATE='50'
      DESC='refpolicy provides selinux reference policies.'

build(){
 [ -f Makefile ] &&
 prepare_install &&
 make    install-src install-headers conf
}

post_install(){
 default_post_install &&
 make -C /etc/selinux/refpolicy/src/policy install
}


# Local policy development:
#        make policy

# Compile and install the policy:
#        make install

# Compile, install, and load the policy:
#        make load

# Filesystem labeling:
#        make relabel
#        make checklabels
#        make restorelabels
