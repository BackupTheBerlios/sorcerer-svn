   version   stable 3.12.1 3.12.0
   version unstable 3.14.0
   require gtk+-v3 rarian
      opts --disable-static
  category graphic
 attribute gnome library makej multilib-concurrent
    source   stable $GNOME_URL sources/glade/${VERSION:0:4}/glade-$VERSION.tar.xz
    source unstable $GNOME_URL sources/glade/${VERSION:0:4}/glade-$VERSION.tar.xz
      info last 20120919
      info home http://glade.gnome.org/
