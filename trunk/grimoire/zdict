   VERSION=( "0.3.2" )
  CATEGORY="dictionary"
 ATTRIBUTE="x11 new"
    SOURCE="zdict-$VERSION.tar.gz"
       URL="http://zwin.org/projects/zdict/"
  HOMEPAGE="http://zwin.org/projects/zdict/"
       REQ="gtk+"
  ESTIMATE="11"
      DESC="zdict is a gtk+ dictionary viewer for the edict database."

build() {
sed  -i  "s:/prog/zdict:/usr/bin:;s:/run::"  Makefile
make             &&
prepare_install  &&
make    install
}
