   version   stable 0.16.1 0.16.0 0.14.2
   version unstable 0.17.4
   require glib
      opts --enable-vapigen --enable-static=no
  category development/compiler
 attribute gnome library makej multilib-concurrent
    source $GNOME_URL sources/vala/${VERSION:0:4}/vala-$VERSION.tar.xz
      info last 20120624
      info home http://live.gnome.org/Vala/
      desc 'programming langauge
vala is a new programming language that aims
to bring modern programming language features
to GNOME developers without imposing
any additional runtime requirements
and without using a different ABI
compared to applications and libraries written in C.'
