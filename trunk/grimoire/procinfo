   VERSION=( "18" )
  CATEGORY="utility"
 ATTRIBUTE="console"
    SOURCE="procinfo-$VERSION.tar.gz"
       URL="ftp://ftp.cistron.nl/pub/people/svm"
  HOMEPAGE="ftp://ftp.cistron.nl/pub/people/svm"
  disable  archive
  disable  necropolis
       REQ="ncurses"
  ESTIMATE="19"
      DESC="procinfo is a package to acquire useful information from /proc."

build() {
sed   "s/-ltermcap/-lncurses/" Makefile  |
make  -f  -                              &&
prepare_install                          &&
make  -e  PREFIX=/usr install
}
