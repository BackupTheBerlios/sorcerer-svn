   VERSION=( "18" )
  CATEGORY="utility"
 ATTRIBUTE="console"
       URL="ftp://ftp.cistron.nl/pub/people/svm"
  HOMEPAGE="ftp://ftp.cistron.nl/pub/people/svm"
   ARCHIVE="off"
       REQ="ncurses"
  ESTIMATE="19"
      DESC="procinfo is a package to acquire useful information from /proc.

procinfo is a package to allow you 
to get useful information from /proc.
/proc is the kernel filesystem.
This is a place you can go to acquire 
information from your running kernel.
"


build() {
sed   "s/-ltermcap/-lncurses/" Makefile  |
make  -f  -                              &&
prepare_install                          &&
make  -e  PREFIX=/usr install
}
