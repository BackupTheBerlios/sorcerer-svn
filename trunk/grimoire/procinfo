    stable 18
   require ncurses

  category utility
 attribute archive_off console
    source procinfo-$VERSION.tar.gz
       url ftp://ftp.cistron.nl/pub/people/00-OLD/svm/
  homepage ftp://ftp.cistron.nl/pub/people/00-OLD/svm/
  estimate 20
      desc 'procinfo is a package to acquire useful information from /proc.'

build(){
sed 's/-ltermcap/-lncurses/' Makefile |
make -f -       &&
prepare_install &&
make -e PREFIX=/usr install
}
