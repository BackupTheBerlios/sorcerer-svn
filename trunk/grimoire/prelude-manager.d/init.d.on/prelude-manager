#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 710
# Required-Start: $local_fs $network run
# Required-Stop:  $network
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: prelude manager provides an event receiving server
### END INIT INFO

. /lib/lsb/init-functions

PIDF=/var/run/prelude-manager.pid
SERV=/usr/bin/prelude-manager
NAME=prelude-manager
OPTS="-d -P $PIDF"

reload(){
 PIDS="$( pidofproc -p $PIDF $SERV )"
 if   [ -n            "$PIDS" ]
 then kill  -s SIGHUP  $PIDS  &&
      log_success_msg "$NAME configuration reloaded"
 fi
}

parse "$@"
