#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 510
# Required-Start: $local_fs $network run
# Required-Stop:  $network
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: prelude manager provides an event receiving server
### END INIT INFO

. /lib/lsb/init-functions

only start stop restart try-restart reload status
pid_file /var/run/prelude-manager.pid
server /usr/bin/prelude-manager
name prelude-manager
options "-d -P $PIDF"

reload(){
 PIDS="$( pidofproc -p $PIDF $SERV )"
 if   [ -n            "$PIDS" ]
 then kill  -s SIGHUP  $PIDS  &&
      log_success_msg "$NAME configuration reloaded"
 fi
}
