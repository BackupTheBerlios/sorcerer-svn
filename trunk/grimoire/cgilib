   VERSION=( "0.5" )
  CATEGORY="web"
 ATTRIBUTE="console server new"
    SOURCE="cgilib-$VERSION.tar.gz"
       URL="http://www.infodrom.org/projects/cgilib/download"
  HOMEPAGE="http://www.infodrom.org/projects/cgilib"
       REQ=""
  ESTIMATE="8"
      DESC="cgilib is a C library that provides an easy CGI interface.
CGI is also known as common gateway interface.
Programs and scripts that run on web servers are CGI."

build() {
case  $VERSION  in
  0.5)  sed  -i  's:"Library":\\"Library\\":'  cgitest.c  ;;
esac
make             &&
prepare_install  &&
install -m 0644 cgi.h     /usr/include  &&
install -m 0644 libcgi.a  /usr/lib
}
