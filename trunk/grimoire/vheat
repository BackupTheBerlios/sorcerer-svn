    stable public2
   require dumb
  category game
 attribute x11
    source http://www.gorenfeld.net/lou/vheat/vheat.$VERSION.tar.gz
  homepage http://www.gorenfeld.net/lou/vheat/
      desc 'top-down racing game in the style of Monaco GP'

build(){
sed -i "s:data/:/usr/share/games/vheat/data/:" cars.c main.c sounds.c track.c

make "CFLAGS=$CFLAGS -c $( allegro-config --cflags )" &&
mkdir    -p              $DESTDIR/usr/share/games/vheat/data &&
install  -m  644  data/* $DESTDIR/usr/share/games/vheat/data &&
install  -m  755  race   $DESTDIR/usr/bin/vheat
}
