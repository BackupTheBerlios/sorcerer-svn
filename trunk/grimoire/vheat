   VERSION=( public2 )
  CATEGORY='game'
 ATTRIBUTE='x11'
    SOURCE="vheat.${VERSION}.tar.gz"
       URL='http://www.gorenfeld.net/lou/vheat/'
  HOMEPAGE='http://www.gorenfeld.net/lou/vheat/'
       REQ='dumb'
      DESC='vheat is a top-down racing game in the style of Monaco GP.'

build(){
sed -i "s:data/:/usr/share/games/vheat/data/:" cars.c main.c sounds.c track.c

make  "CFLAGS=$CFLAGS -c $( allegro-config --cflags )" &&
prepare_install                                        &&
mkdir    -p              /usr/share/games/vheat/data   &&
install  -m  644  data/* /usr/share/games/vheat/data   &&
install  -m  755  race   /usr/bin/vheat
}
