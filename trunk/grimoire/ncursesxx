    stable 0.0.1beta4 0.0.1beta3
   require ncurses
  category development
 attribute console library
       url $SOURCEFORGE_URL
    source ndk-xx/ncursesxx-$VERSION.tar.bz2
  homepage ndk-xx.sourceforge.net
  estimate 30
      desc 'ncursesxx provides a modern alternative to current C++ ncurses bindings.'

build(){
cd src
sed -i "s:-O2:$CXXFLAGS:" Makefile
make            &&
prepare_install &&
make    install
}
