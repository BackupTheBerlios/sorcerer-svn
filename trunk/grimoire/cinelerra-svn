version_year_week  10
  CATEGORY="video-editor"
 ATTRIBUTE="x11 new"
    SOURCE="heroines/cinelerra-${VERSION}-src.tar"
REPOSITORY=( ""
             "svn co svn://cvs.cinelerra.org/repos/cinelerra/trunk/hvirtual"
             "svn up svn://cvs.cinelerra.org/repos/cinelerra/trunk/hvirtual" )
  HOMEPAGE="http://cvs.cinelerra.org/"
       REQ=( "OpenEXR a52dec alsa-lib faac faad2 ffmpeg fftw lame libdv libiec61883 libraw1394 libvorbis libx264 yasm libavc1394" )
  EPROVIDE="cinelerra cinelerraCV"
  ESTIMATE=""
      DESC="cinelerra-svn is a complete audio and video production kit."

build() {
  grep  -rl "\\-lfftw3" * |
  xargs -r  -l64 sed  -i "s:-lfftw3:-lfftw3f:" 

  export    CFLAGS="$( echo  $CFLAGS    |  sed  s/-fomit-frame-pointer// )" 
  export  CXXFLAGS="$( echo  $CXXFLAGS  |  sed  s/-fomit-frame-pointer// )" 
  export    CFLAGS="$( echo  $CFLAGS    |  sed  s/-O3/-O2/ )" 
  export  CXXFLAGS="$( echo  $CXXFLAGS  |  sed  s/-O3/-O2/ )" 
  export    CFLAGS="$( echo  $CFLAGS    |  sed  s/-funroll-all-loops// )" 
  export  CXXFLAGS="$( echo  $CXXFLAGS  |  sed  s/-funroll-all-loops// )" 

  ./autogen.sh  &&
  default_build
}
