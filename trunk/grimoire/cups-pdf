   version stable 2.6.0 2.5.1 2.5.0
   require cups
  category printer
 attribute console
    source http://www.cups-pdf.de/src/cups-pdf_$VERSION.tar.gz
      info last  2011104
      info home  http://www.cups-pdf.de/
      info docs  http://www.cups-pdf.de/documentation.shtml
      desc 'output from cups into PDF'

build(){
 custom_install(){
  mkdir  -pvm 755 $DESTDIR{/usr/lib/cups/backend,/etc/cups,/usr/share/cups/model}
  install -vm 755 cups-pdf               $DESTDIR/usr/lib/cups/backend
  install -vm 600 ../extra/cups-pdf.conf $DESTDIR/etc/cups
  install -vm 644 ../extra/CUPS-PDF.ppd  $DESTDIR/usr/share/cups/model
 }

 cd src
 gcc $CFLAGS $LDFLAGS -s -o cups-pdf cups-pdf.c &&
 custom_install
}
