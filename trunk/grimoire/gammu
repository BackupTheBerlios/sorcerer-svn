   require Python automake curl libdbi libusb unzip
  optional bluez '' '' for bluetooth protocol support
  optional mysql      '' '' for mysql support in SMSD
  optional openssl
  optional postgresql '' '' for postgresql support
      opts --enable-shared
  category network/telephone
