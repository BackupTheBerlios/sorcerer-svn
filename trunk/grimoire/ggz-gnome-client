inherit ggz
unset  REQ
    SOURCE="ggz-gnome-client-$VERSION.tar.gz"
       REQ="ggz-client-libs libgnomeui"
#      REQ="ggz-client-libs ggz-gtk-games gtk+"
  ESTIMATE="61"
      DESC="ggz-gnome-client provides a gnome client for playing GGZ."

build()  {
  case  $VERSION  in
    0.0.11)  sed  -i  "s:ggz-gnome.desktop::
                       s:motd-editor.desktop::"  Makefile.in  ;;
  esac
  default_build
}
