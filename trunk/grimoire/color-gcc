   VERSION=( "1.0.1rc6" )
  CATEGORY="utility"
 ATTRIBUTE="console new"
    SOURCE="colorifer/color-gcc-$VERSION.tar.bz2"
  HOMEPAGE="colorifer.sourceforge.net"
       URL="$SOURCEFORGE_URL"
       REQ="colorifer"
  ESTIMATE="5"
 FRESHMEAT="csed"
     SHORT="color-gcc provides config files to colorize gcc output."
      LONG="$SHORT
However it will not work without reconfiguring 
your sorcerer box and creating a gcc_wrapper script.
Wrapping gcc calls to colorize creates unnecessary additional overhead.
"


build()  {
  prepare_install  &&
  make    install
}
