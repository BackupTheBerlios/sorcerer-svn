# 1.8.10 is for Python >= 3.1.0
# 1.8.8 is a tar.gz
# 1.8.10 is a tar.bz2
# 1.8.10 is for Python3 however it does not seem to compile

   version   stable 1.8.8
   version unstable 1.10.0 1.8.10
   require Python cairo
  category graphic
 attribute library
#attribute multilib-fail
    source stable http://www.cairographics.org/releases/pycairo-$VERSION.tar.gz
    source unstable http://www.cairographics.org/releases/pycairo-$VERSION.tar.bz2
      info good 20120701
      info last 20110418
      info home http://cairographics.org/pycairo
      desc 'python wrapper for cairo'

# build is for pycairo 1.8.10
build_unstable(){
 ./waf configure --prefix=/usr &&
 ./waf -j1 &&
 DESTDIR=$DESTDIR ./waf install
}
