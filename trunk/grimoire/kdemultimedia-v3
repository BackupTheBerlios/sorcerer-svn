# akode no longer relased nor maintained, so spell removed from grimoire

# cdparanoia III-10.2.src headers are incomplete and cause compile error

   inherit kde-v3
case $VERSION in
 3.5.10) opts --without-kscd-cdda --without-cdparanoia ;;
esac
   require kdelibs-v3 libXxf86dga
  optional audiofile        --with-audiofile  --without-audiofile  for support audiofile
# optional akode            ''                ''                   for additional audio codec and output support for arts
# optional cdparanoia       --with-cdparanoia --without-cdparanoia to burn CDs
  optional flac             --with-flac       --without-flac       for the flac lossless audio codec 
  optional gst-plugins-base --with-gstreamer  --without-gstreamer  for GStreamer support
  optional lame             --with-lame       --without-lame       to encode mp3s
  optional libtheora        --with-theora     --without-theora     for support Ogg Theora 
  optional libvorbis        --with-vorbis     --without-vorbis     for the ogg vorbis audio codec
  optional speex            ''                ''                   for a voice codec
  optional taglib           --with-taglib     --without-taglib     for reading and editing metadata of audio files
  optional xine-lib         --with-xine       --without-xine       to use xine for rendering of mpeg-2 and DVDs
# switch   --with-kscd-cdda --without-kscd-cdda                    for CDDA support in kscd, select cdparanoia also
  category audio/cd audio/mixer
      desc 'Audio, CD, video players and mixer'
