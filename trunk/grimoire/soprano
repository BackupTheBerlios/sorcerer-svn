# http://soprano.sourceforge.ent/node/63 states
# Soprano 2.8.0 is the latest major release of the Qt RDF storage and parsing framework.
# It is targetted towards KDE 4.9 users and comes with a bunch of improvements over the 2.7 series:

   version   stable 2.7.6 2.6.51 2.6.0
   version unstable 2.8.0 2.7.6
   inherit kde-v4
   require clucene-core qt-everywhere-opensource redland
  optional doxygen
  category db
 attribute kde4 library makej multilib-concurrent
    source $SOURCEFORGE_URL soprano/Soprano/$VERSION/soprano-$VERSION.tar.bz2
      info good 20120702
      info last 20120627
      info home http://soprano.sourceforge.net/
      desc 'QT4 framework for RDF data'

build(){
 if    [[ $HOSTTYPE == x86_64 ]]; then
  if   [[ $CFLAGS   =~ -m32   ]]
  then unset JAVA_HOME
  else opts -DLIB_DESTINATION:STRING=/usr/lib64
  fi
 fi

 kde_build
}
