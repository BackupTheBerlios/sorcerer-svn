   VERSION=( 2.0.3 2.0.0 )
  CATEGORY='db'
 ATTRIBUTE='kde4 library'
    SOURCE="soprano/soprano-$VERSION.tar.bz2"
  HOMEPAGE='http://soprano.sourceforge.net/'
       URL="$SOURCEFORGE_URL"
       REQ=( 'clucene-core qt-x11-opensource redland' )
      OPTS='-DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4
            -DCMAKE_INSTALL_RPATH:PATH=/opt/kde4/lib:/opt/kde4/lib64
            -DCMAKE_SKIP_BUILD_RPATH:BOOL=TRUE
            -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=TRUE
            -DCMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=TRUE
            -DCMAKE_BUILD_TYPE=Release'
# case $HOSTTYPE in
#  x86_64) OPTS+=' -DLIB_DESTINATION=lib64' ;;
# esac
  ESTIMATE='500'
      DESC='soprano provides a QT4 framework for RDF data.'

build(){
 export PATH="/usr/kde4/bin:$PATH"
 mkdir build
 cd    build
 cmake $OPTS ..  &&
 make            &&
 prepare_install &&
 make    install
}
