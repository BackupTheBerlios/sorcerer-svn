   version stable 2.5.63 2.5.3 2.5.2 2.5.0
   version unstable 2.6.0
   inherit kde-v4
   require clucene-core qt-everywhere-opensource redland
  category db
 attribute kde4 library makej multilib-concurrent
    source $SOURCEFORGE_URL soprano/Soprano/$VERSION/soprano-$VERSION.tar.bz2
  homepage http://soprano.sourceforge.net/
  estimate 500
      desc 'QT4 framework for RDF data'

build(){
 if    [[ $HOSTTYPE == x86_64 ]]; then
  if   [[ $CFLAGS   =~ -m32   ]]
  then unset JAVA_HOME
  else opts -DLIB_DESTINATION:STRING=/opt/kde4/lib64
  fi
 fi

 kde_build
}
