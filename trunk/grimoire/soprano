   VERSION=( 2.0.0 )
  CATEGORY='db'
 ATTRIBUTE='library'
    SOURCE="soprano/soprano-$VERSION.tar.bz2"
  HOMEPAGE='http://soprano.sourceforge.net/'
       URL="$SOURCEFORGE_URL"
       REQ=( '' )
      OPTS='-DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_BUILD_TYPE=Release'
case $HOSTTYPE in
 x86_64) OPTS+=' -DLIB_DESTINATION=lib64' ;;
esac
  ESTIMATE='500'
      DESC='soprano provides a QT4 framework for RDF data.'

build(){
 export PATH="/usr/bin/qt4:$PATH"
 mkdir build
 cd    build
 cmake $OPTS ..  &&
 make            &&
 prepare_install &&
 make    install
}
