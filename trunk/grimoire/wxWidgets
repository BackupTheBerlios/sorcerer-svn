    stable 2.8.10 2.8.7 2.8.6 2.8.5 2.8.4 2.8.3 2.8.2 2.8.0
  unstable 2.9.1 2.9.0
   require gtk+
  optional SDL_mixer     '--enable-sound --with-sdl' '--disable-sound --without-sdl' to use SDL for audio
  optional esound '' '' for audio output through esound
  optional libgnomeprint --with-gnomeprint           --without-gnomeprint for gnome print support
      opts --enable-compat24 --enable-plugins --with-opengl --with-gtk=2 --enable-zipstream --enable-unicode

# --enable-accessibility
# enabling accessibility support in 2.8.0 causes compile failure.

  category graphic/library graphic/toolkit
 attribute library
    source $SOURCEFORGE_URL wxwindows/wxAll/$VERSION/wxWidgets-$VERSION.tar.bz2
  homepage http://www.wxwidgets.org
 freshmeat wxwidgets

#            ':--with-odbc::for the IODBC and wxODBC classes'
# --with-odbc also causes compile failure

# --with-sdl
# --with-opengl
# --enable-accessibility
# Above disabled by default, possible to enable.

  estimate 1700
      desc 'graphic toolkit library for wrapping other toolkits
such as: Win32; Mac OS X; GTK+; X11; Motif; WinCE; toolkits.
wxWidgets is a cross-platform c++ framework writing GUI applications
wxWidgets gives you a single, easy-to-use API for
writing GUI applications on multiple platforms.'

build(){

 install_contrib_headers(){
  cd contrib/include
  find |
  while read
  do    install -Dv $REPLY $DESTDIR/usr/include/wx-${VERSION:0:3}/$REPLY
  done  
  true
}

 case $VERSION in
  2.8.[0-7]) if   spell_installed wxPython
         then dispel --unsafe wxPython
              echo            wxPython | pipe_queue "$CAST_QUEUE" com
         fi ;;
  2.7.1) sed -i "s:animate:#animate:" contrib/src/Makefile.in ;;
 esac

 sed -i "s:OPTIMISE=\"-O2\":OPTIMISE=\"\":" configure

 ./configure \
 --prefix=/usr \
 --sysconfdir=/etc \
 --localstatedir=/var \
 $OPTS &&
 make &&
 cd   contrib &&
 make         &&
 cd   ..      &&
 make install DESTDIR=$DESTDIR &&
 cd   contrib &&
 make install DESTDIR=$DESTDIR &&
 cd   ..      &&
 install_contrib_headers
}
