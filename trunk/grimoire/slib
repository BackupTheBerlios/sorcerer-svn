   VERSION=( "2d6" "2d5" "2d4" )
    IGNORE="3a1"
# 2d6 is required for gnucash 1.8.8
  CATEGORY="development"
 ATTRIBUTE="library"
    SOURCE="slib$VERSION.zip"
  HOMEPAGE="http://www-swiss.ai.mit.edu/~jaffer/SLIB.html"
       URL="http://www.ibiblio.org/pub/gnu/slib
            http://swissnet.ai.mit.edu/ftpdir/scm"
       REQ="guile unzip"
  ESTIMATE="5"
      DESC="slib is a scheme library

slib is a scheme library used primarily for gnuCash.
"


build() {
DEST="$(  guile-config  info  pkgdatadir  )"

[      -d  slib  ]       &&
prepare_install          &&
mkdir  -p        $DEST   &&
cp     -R  slib  $DEST   &&
guile  -c "(use-modules (ice-9 slib)) (require 'new-catalog)" "/"
}
