   VERSION=( 3.0c )
  CATEGORY='administration/bootloader'
 ATTRIBUTE='library x86'
    SOURCE="gnu-efi-$VERSION.tar.gz"
       URL='ftp://ftp.hpl.hp.com/pub/linux-ia64/'
  HOMEPAGE='ftp://ftp.hpl.hp.com/pub/linux-ia64/'
