# Project ceased development in 2003?
   version stable 1.3.3-pre1 1.3.2 1.3.1
   require OpenSP
      opts --enable-static=no
  category documentation
 attribute console library makej multilib-dual
    source $SOURCEFORGE_URL openjade/openjade/${VERSION:0:5}/openjade-$VERSION.tar.gz
  homepage http://openjade.sourceforge.net
      info last 20030418
  estimate 1000
      desc 'an implementation of DSSSL SGML/XML'

build(){
 case $VERSION in
  1.3.3-pre1) sed -i 's:iostream\.h:iostream:' style/MultiLineInlineNote.cxx ;;
 esac
 if    [[ $HOSTTYPE == x86_64 ]]; then
  if   [[ $CFLAGS   =~ -m32   ]]
  then opts --enable-splibdir=/usr/lib
  else opts --enable-splibdir=/usr/lib64
  fi
 fi

 default_build
}
