# Project ceased development in 2003?
with version stable 1.3.3-pre1 1.3.2 1.3.1
with base    OpenSP
with also    --enable-static=no
with role    documentation
with trait   broke
with trait   console library makej multilib-dual
with source  $SOURCEFORGE_URL openjade/openjade/${VERSION:0:5}/openjade-$VERSION.tar.gz
with info    home http://openjade.sourceforge.net
with info    omit 20130101
#     info good 20120627
with info    last 20030418
with info    cite 'an implementation of DSSSL SGML/XML'

build(){
 case $VERSION in
  1.3.3-pre1) sed -i 's:iostream\.h:iostream:' style/MultiLineInlineNote.cxx ;;
 esac
 if    [[ $HOSTTYPE == x86_64 ]]; then
  if   [[ $CFLAGS   =~ -m32   ]]
  then with also --enable-splibdir=/usr/lib
  else with also --enable-splibdir=/usr/lib64
  fi
 fi

 default_build
}
