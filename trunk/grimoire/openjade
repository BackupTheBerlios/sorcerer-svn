    stable 1.3.3-pre1 1.3.2 1.3.1
   require OpenSP
    ignore 'pre\|rc\|_'
  category documentation
 attribute console
       url $SOURCEFORGE_URL
    source openjade/openjade-$VERSION.tar.gz
  homepage http://openjade.sourceforge.net
case $VERSION in
 1.3.2) use_gcc gcc-v3.4 ;;
esac
      opts --enable-static=no
  estimate 500
      desc 'openjade is an implementation of DSSSL SGML/XML'

build(){
case $VERSION in
 1.3.3-pre1) sed -i 's:iostream\.h:iostream:' style/MultiLineInlineNote.cxx ;;
 1.3.2) case $HOSTTYPE in
         x86_64) sed -i "1756d" configure ;;
        esac ;;
esac
default_build
}
