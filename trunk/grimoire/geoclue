# The software authors are not providing a URL that actually
# leads to the tarball, therefore using debian's copy.

   version stable 0.12.0
   require GConf libsoup
      opts --disable-static
  category network
 attribute library makej multilib-dual
    source ftp://ftp.debian.org/debian/pool/main/g/geoclue/geoclue_$VERSION.orig.tar.gz
      info last 20120327
      info home http://www.freedesktop.org/wiki/Softwaer/GeoClue
      info mail http://lists.freedesktop.org/mailman/listinfo/geoclue
      desc 'modular geoinformation service built on top of dbus.'

build(){
 case $VERSION in
  0.12.0) sed -i 's:-Werror::' configure ;;
 esac
 default_build
}
