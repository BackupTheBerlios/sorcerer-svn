# gqview linked with jpeg version 7 released on 20090627 appears buggy.
# In order to continue using the 6b legacy version of jpeg
# Please select legacy progress for jpeg or
# specify the version progress as 6b
# both can be done using # augur progress
# Execute # augur help progress
# in order to read verbose information.

   version stable 8d 8c 8b
      opts --enable-static=no
  category graphic/library
 attribute library lto makej multilib-dual optimize
    source http://www.ijg.org/files/ ftp://ftp.uu.net/graphics/jpeg/ jpegsrc.v$VERSION.tar.gz
      info last 20120116
      info home http://www.ijg.org/
 freshmeat libjpeg
      desc 'library that supports the JPEG image format
jpeg supplies support functions for the image
format JPEG, to programs that are linked to it.'

build(){
 install_extra_headers(){
  mkdir -pvm 755 $DESTDIR/usr/include
  for FILE in jinclude.h jpegint.h
  do  install -vm 644 $FILE $DESTDIR/usr/include
  done
 }

 default_build
 install_extra_headers
}
