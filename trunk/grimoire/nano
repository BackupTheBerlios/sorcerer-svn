   version   stable 2.2.6 2.2.5 2.2.4
   version unstable 2.3.1
   require ncurses
      opts --bindir=/bin --enable-all
  category utility/editor
 attribute console makej solo
    source http://www.nano-editor.org/dist/v${VERSION:0:3}/nano-$VERSION.tar.gz
      info home http://www.nano-editor.org/
      vurl http://www.nano-editor.org/download.php
   provide console-editor
      desc 'enhanced clone of the pico text editor'

build(){
 nanorc(){
  mkdir -pvm 755 "$DESTDIR/etc"
  find "$DESTDIR/usr/share/nano" -type f -name \*.nanorc \
       -printf "include \"/usr/share/nano/%f\"\n" > "$DESTDIR/etc/nanorc"
  chmod  -v  644 "$DESTDIR/etc/nanorc"
 }

 default_build &&
 nanorc
}
