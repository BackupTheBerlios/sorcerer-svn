  stable 4.5.16 4.5.15 4.5.14 4.5.12 4.5.11 4.5.10
  CATEGORY='utility'
 ATTRIBUTE='console solo'
    SOURCE="strace/strace-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://www.wi.leidenuniv.nl/~wichert/strace'
  ESTIMATE='250'
      DESC='strace traces system calls similar to trace and truss.
strace is a useful diagnositic, instructional, and debugging tool.
It is useful for solving problems with
programs for which the source is not available.'

build(){
sed -i 's:tcbtabsize = argc:tcbtabsize = 128:' strace.c
default_build
}
