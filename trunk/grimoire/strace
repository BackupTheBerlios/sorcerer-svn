   VERSION=( "4.5.9" "4.5.8" "4.5.7" "4.5.6" )
  CATEGORY="utility"
 ATTRIBUTE="console solo"
    SOURCE="strace/strace-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://www.wi.leidenuniv.nl/~wichert/strace"
   PROTECT="/usr/bin/strace"
  ESTIMATE="32"
      DESC="strace traces system calls similar to trace and truss.
strace is a useful diagnositic, instructional, and debugging tool.
It is useful for solving problems with
programs for which the source is not readily.
It is also used to track/discover installed and
modified files by spells in the sorcerer distribution."


build() {
sed  -i  "s:tcbtabsize = argc:tcbtabsize = 128:"  strace.c
default_build
}


post_remove() {
echo  $"To remove /usr/sbin/strace issue # rm -f /usr/sbin/strace"
}
