# Do not update separately from kde-v4 updates
# Does this replace raptor?
# it overwrites files from raptor
# version 2.0.0 compiled and installed fine

   version   stable 2.0.8 2.0.4 2.0.3 2.0.2 2.0.0
   require curl libxslt
      opts --enable-static=no
  category development
 attribute library makej multilib-concurrent
    source http://download.librdf.org/source/raptor2-$VERSION.tar.gz
      info good 20120702
      info last 20120624
      info home http://librdf.org/
      desc 'library for parsing and serializing RDF syntaxes'

build(){
 case $VERSION in
  2.0.3) grep -rl "curl/types\.h" * |
         xargs -r --max-lines=256 sed -i '\,curl/types\.h,d' ;;
 esac
 default_build
}
