   version stable 0.6 0.5 0.4 0.3
   require SDL_image SDL_mixer gcc-g++
  category game
 attribute x11
    source $SOURCEFORGE_URL freesynd/freesynd/freesynd-$VERSION/freesynd-$VERSION.tar.gz
      info last 20120315
      info home http://freesynd.sourceforge.net/
      desc 'reimplementation of syndicate style games'

build(){
 make_install(){
  mkdir  -pvm 755              $DESTDIR/usr/bin
  install -vm 755 src/freesynd $DESTDIR/usr/bin/
 }
 mkdir build
 cd    build
 cmake .. &&
 make     &&
 make_install
}

build_old(){
 rm -f bin/freesynd
 cd src
 make &&
 mkdir -pvm 755 $DESTDIR/usr/{bin,libexec,share/freesynd} &&
 chmod 755 freesynd &&
 mv        freesynd $DESTDIR/usr/libexec &&
 echo -e "#!/bin/bash\ncd /usr/share/freesynd\n/usr/libexec/freesynd $@" \
         > $DESTDIR/usr/bin/freesynd &&
 chmod 755 $DESTDIR/usr/bin/freesynd &&
 cd ../bin/ &&
 find data -type d | xargs chmod 755 &&
 find data -type f | xargs chmod 644 &&
 mv   data $DESTDIR/usr/share/freesynd/
}
