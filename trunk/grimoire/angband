# angband installs and modifies files under /usr/lib.
# Modifiable files should be kept in /var instead.
# gtk+ programs can not be setuid or setgid

# Source not fully DESTDIR compatible?
# failed during installation.

   version stable 3.2.0 3.0.9b 3.0.9
   require ncurses
  optional libXaw --with-x --disable-x for x11 graphical interface
  optional SDL_mixer '' ''             for sound effects
      opts --datadir=/usr/share --with-setgid=games
  sys_user games
  category game
 attribute console noheal x11
 attribute broke
      info home  http://rephial.org/
    source http://rephial.org/downloads/${VERSION:0:3}/angband-$VERSION.tar.gz
      desc 'single player CRPG'
