# angband installs and modifies files under /usr/lib.
# Modifiable files should be kept in /var instead.
# gtk+ programs can not be setuid or setgid

    stable 3.0.9 3.0.8 3.0.6 3.0.5
   require ncurses
  optional libXaw --with-x --disable-x for x11 graphical interface
  optional SDL_mixer '' ''             for sound effects
  category game
 attribute console x11 noheal
  homepage http://rephial.org/
    source http://rephial.org/downloads/${VERSION:0:3}/angband-$VERSION-src.tar.gz
      opts --datadir=/usr/share --with-setgid=games
  estimate 500
      desc 'angband is a single player CRPG.'


build(){

mkdir    -pm 755 /var/empty
groupadd -K GID_MIN=256 -K GID_MAX=511    games                      2>/dev/null
useradd  -K UID_MIN=256 -K UID_MAX=511 -g games -d /var/empty games  2>/dev/null

default_build
}
