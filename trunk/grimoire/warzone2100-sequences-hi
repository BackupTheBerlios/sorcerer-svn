   disable scavenge
   version stable 20091017
  category game
 attribute data
    source $SOURCEFORGE_URL warzone2100/warzone2100/Videos/2.2/high-quality-en/sequences.wz
#   source http://www.il.fontys.nl/~giel/warzone/videos/latest/en/hi/sequences.wz
      info home http://wz2100.net/
      desc '545M of high quality video for warzone2100'

build(){
mkdir -pvm 755 $DESTDIR/usr/share/warzone2100 &&
cp -av $SOURCE $DESTDIR/usr/share/warzone2100/
}
