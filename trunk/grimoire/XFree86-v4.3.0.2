generate_host_def()  {

  if  [  -z  "$XF86CardDrivers"  ];  then
  XF86CardDrivers="$ON_CARD_DRIVERS"
  fi

  echo  "#define XF86CardDrivers $XF86CardDrivers"  |  tr  '\n' ' '
  echo

  if  [  -z  "$DriDrivers"  ]
  then  echo  "#define DriDrivers /**/"
  else  echo  "#define DriDrivers $DriDrivers"  |  tr  '\n' ' '
        echo
