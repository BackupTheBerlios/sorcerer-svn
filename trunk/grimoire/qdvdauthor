# qdvdauthor did not script the vlc check properly in 1.2.0
    stable 1.2.0 1.1.0
   require dvdauthor qt-x11-free
  optional MPlayer  '--build-qplayer --with-mplayer-support' '' to use MPlayer as player backend
  optional vlc      '--build-qplayer --with-vlc-support'     '' to use VLC as player backend
  optional xine-lib '--build-qplayer --with-xine-support'    '' to use Xine as player backend

  category video/dvd
 attribute kde3 new broke
    source qdvdauthor/qdvdauthor-$VERSION.tar.gz
       url "$SOURCEFORGE_URL"
  homepage http://qdvdauthor.sourceforge.net
# At least one player backend is required
      opts --prefix=/opt/kde3 --qt-dir=/opt/kde3 --build-qslideshow
  estimate 979
      desc 'qdvdauthor is a QT GUI for DVD authoring
The goal of qdvdauthor is to provide a complete DVDAuthoring 
solution for Linux with the emphasis of ease of use and a 
complete set of functionality.'

build(){
 export QTDIR=/opt/kde3
 export PATH+=:/opt/kde3/bin

 ./configure $OPTS &&
 make              &&
 prepare_install   &&
 make    install
}
