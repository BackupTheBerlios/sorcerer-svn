build() {
  if ! [ -f /usr/lib/pkgconfig/libebook-1.0.pc ]; then
    ln -s /usr/lib/pkgconfig/libebook-*.pc  /usr/lib/pkgconfig/libebook-1.0.pc 
    clean=yes
  fi &&
  default_build  &&
  export LC_ALL=C &&
  echo YES | gnomemeeting-config-tool --install-schemas  --fix-permissions &&
  if [ "$clean" == "yes" ]; then
    rm -f /usr/lib/pkgconfig/libebook-1.0.pc
  fi
}
