   VERSION=( "1.0.2" "1.00" "0.98.5" )
  CATEGORY="telephony"
 ATTRIBUTE="gnome x11"
    SOURCE="sources/gnomemeeting/${VERSION:0:3}/gnomemeeting-$VERSION.tar.bz2"
       URL="$GNOME_URL"
  HOMEPAGE="http://www.gnomemeeting.org"
       REQ="SDL libbonoboui libgnomeui openh323 openldap"
 FRESHMEAT="gnomemeeting"
  GNOMEFTP="gnomemeeting"
  ESTIMATE="182"
     SHORT="gnomemeeting is a video conferencing and VoIP/IP telephoney application."
      LONG="
gnomemeeting is an H.323 compatible video conferencing 
and VoIP/IP telephony application that allows you to 
make audio and video calls to remote users with H.323 
hardware or software (such as Microsoft Netmeeting).
It supports all modern videoconferencing features, 
such as registering to an ILS directory, gatekeeper support, 
making multi-user conference calls using an external MCU, 
using modern Quicknet telephony cards, and making PC-to-phone calls.
"
