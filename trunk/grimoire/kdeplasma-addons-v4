# adding kdenetwork-v4 creates recursive requirement loop

   inherit kde-v4
   require kde-workspace eigen libkexiv2 marble
#  require kde-workspace kdenetwork-v4 eigen libkexiv2 marble
  optional scim
  category graphic
 conflicts ibus-qt
      desc 'Additional applets and themes'

build(){
 CFLAGS="${CFLAGS//-mno-mmx/}"
 CFLAGS="${CFLAGS//-mno-sse2/}"
 CFLAGS="${CFLAGS//-mno-sse/}"

 CXXFLAGS="${CXXFLAGS//-mno-mmx/}"
 CXXFLAGS="${CXXFLAGS//-mno-sse2/}"
 CXXFLAGS="${CXXFLAGS//-mno-sse/}"
 kde_build
}
