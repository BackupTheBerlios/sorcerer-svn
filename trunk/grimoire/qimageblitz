  stable 0.0.4
  CATEGORY='graphic'
 ATTRIBUTE='kde4 library'
    SOURCE="qimageblitz/qimageblitz-$VERSION.tar.bz2"
  HOMEPAGE='http://sourceforge.net/projects/qimageblitz'
       URL="$SOURCEFORGE_URL"
       REQ=( 'cmake qt-x11-opensource' )
      OPTS='-DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4
            -DCMAKE_INSTALL_RPATH:PATH=/opt/kde4/lib:/opt/kde4/lib64
            -DCMAKE_SKIP_BUILD_RPATH:BOOL=TRUE
            -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=TRUE
            -DCMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=TRUE
            -DCMAKE_BUILD_TYPE=Release'
# case $HOSTTYPE in
#  x86_64) OPTS+=' -DLIB_DESTINATION=lib64' ;;
# esac
  ESTIMATE='500'
      DESC='qimageblitz a graphical effect and filter library.'

build(){
 export PATH="/usr/bin/kde4:$PATH"
 mkdir build
 cd    build
 cmake $OPTS ..  &&
 make            &&
 prepare_install &&
 make    install
}
