# Where is version 0.0.6 being reported from?

   version stable 0.0.4
   inherit kde-v4
   require cmake qt-everywhere-opensource
  category graphic
 attribute kde4 library multilib-dual
    source $SOURCEFORGE_URL qimageblitz/qimageblitz/QImageBlitz%20$VERSION/qimageblitz-$VERSION.tar.bz2
      info home http://sourceforge.net/projects/qimageblitz
      desc 'graphical effect and filter library'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] &&
      [[ $CFLAGS   =~ -m32   ]] &&
      [[ $VERSION  == 0.0.4  ]]
 then
  mv blitz/CMakeLists.{txt,old}
  sed 's:COMMAND gcc:COMMAND gcc -m32:' \
      blitz/CMakeLists.old > \
      blitz/CMakeLists.txt
 fi
 kde_build
}
