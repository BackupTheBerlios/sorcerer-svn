    stable 0.0.4
   require cmake qt-x11-opensource
  category graphic
 attribute kde4 library
       url $SOURCEFORGE_URL
    source qimageblitz/qimageblitz-$VERSION.tar.bz2
  homepage http://sourceforge.net/projects/qimageblitz
      opts -DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4
      opts -DCMAKE_INSTALL_RPATH:PATH=/opt/kde4/lib:/opt/kde4/lib64
      opts -DCMAKE_SKIP_BUILD_RPATH:BOOL=TRUE
      opts -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=TRUE
      opts -DCMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=TRUE
      opts -DCMAKE_BUILD_TYPE=Release
  estimate 500
      desc 'qimageblitz a graphical effect and filter library.'

build(){
export PATH="/usr/bin/kde4:$PATH"
mkdir build
cd    build
cmake $OPTS ..  &&
make            &&
prepare_install &&
make    install
}
