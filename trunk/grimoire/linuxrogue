   VERSION=( "0.3" "0.2.2" "0.2.1" )
    IGNORE="^0\.3\.[2-3]"
# 0.3.2 and 0.3.3 do not compile
  CATEGORY="game"
 ATTRIBUTE="console"
    SOURCE="linuxrogue-$VERSION.tar.bz2"
       URL="http://puggy.symonds.net/~ash/stuff/linuxrogue"
  HOMEPAGE="http://puggy.symonds.net/~ash/stuff/linuxrogue"
#      URL="http://symonds.net/~ash/stuff/linuxrogue"
# HOMEPAGE="http://symonds.net/~ash/stuff/linuxrogue"
       REQ="ncurses"
  ESTIMATE="75"
      DESC="linuxrogue is the classic RPG adventure.

linuxrogue is a cleaned up version of 
the original port of Rogue for Linux.
Rogue is the classic RPG adventure.
"


build() {
mkdir    -p          doc  &&
cp  rogue-guide.txt  doc  &&

make  "CFLAGS=$CFLAGS -c -DUNIX -DUNIX_SYS5"  \
      "LDFLAGS=$LDFLAGS -lncurses"      &&
prepare_install                         &&
mkdir    -p                 /usr/games  &&
install  -s  -m 755  rogue  /usr/games
}
