   VERSION=( "0.3.4" "0.3" "0.2.2" "0.2.1" )
    IGNORE="^0\.3\.[2-3]"
  CATEGORY="game/rpg/ascii"
# newer versions of this have compile errors.
# Even with gcc-v3.3 it has a strange looking compile error
# gcc -Os -pipe -march=pentium3 -c -DUNIX -DUNIX_SYS5   -c -o hit.o hit.c
# gcc: Success
# make: *** [hit.o] Error 1
 ATTRIBUTE="console broken"
    SOURCE="linuxrogue-$VERSION.tar.bz2"
       URL="http://ashwin.zaatar.org/stuff/linuxrogue/"
  HOMEPAGE="http://ashwin.zaatar.org/stuff/linuxrogue/"
case  $VERSION  in
  0.3.4)  USE_GCC="gcc-v3.3"  ;;
esac
       REQ="ncurses"
  ESTIMATE="75"
      DESC="linuxrogue is the classic RPG adventure.
linuxrogue is a cleaned up version of 
the original port of Rogue for Linux.
Rogue is the classic RPG adventure."


build() {
mv     Makefile  Makefile.crlf
tr  -d  '\r'  <  Makefile.crlf  >  Makefile

mkdir    -p          doc  &&
cp  rogue-guide.txt  doc  &&

make  "CFLAGS=$CFLAGS -c -DUNIX -DUNIX_SYS5"  \
      "LDFLAGS=$LDFLAGS -lncurses"      &&
prepare_install                         &&
mkdir    -p                 /usr/games  &&
install  -s  -m 755  rogue  /usr/games
}
