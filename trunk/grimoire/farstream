   version stable 0.1.2
case $VERSION in
 0.1.2)
      opts --enable-introspection=no ;;
esac
   require gst-plugins-base libnice
      opts --disable-static
  category network/chat
 attribute library makej multilib-concurrent
    source http://freedesktop.org/software/farstream/releases/farstream/farstream-$VERSION.tar.gz
      info last 20120323
      info home http://www.freedesktop.org/wiki/Software/Farstream
 conflicts farsight2
      desc 'a collection of GStreamer modules and libraries for videoconferencing'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
