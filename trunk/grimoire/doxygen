   VERSION=( "1.3.9.1" "1.3.9" "1.3.8" )
    IGNORE="pdf\|manual"
  CATEGORY="documentation"
 ATTRIBUTE="console x11"
    SOURCE="doxygen-$VERSION.src.tar.gz"
  HOMEPAGE="http://www.stack.nl/~dimitri/doxygen"
       URL="ftp://ftp.stack.nl/pub/users/dimitri"
       REQ=( "bison perl"
             "teTeX:::for generating LaTeX, Postscript, and PDF output"
             "graphviz:::for generating graphs" )
 #         Not currently compatibile with qt 3.0.1
 # "qt-x11-free:--with-doxywizard::for GUI front-end"
  ESTIMATE="209"
      DESC="doxygen is a documentaiton system for C++, Jva, C and IDL.

doxygen is a cross-platform, JavaDoc-like
documentation system for C++, Java, C, and IDL.  
Doxygen can be used to generate an on-line class 
browser (in HTML) and/or an off-line reference 
manual (in LaTeX or RTF) from a set of source files.
Doxygen can also be configured to extract the 
code-structure from undocumented source files. 
This includes dependency graphs, class diagrams 
and hyperlinked source code. 
This type of information can be very useful to 
quickly find your way in large source distributions."


build()  {
#  would enable this if it was qt-x11-free 3.x compatible.
#  if  [  -d  /usr/include/qt  ];  then
#    mkdir    qt
#    cd       qt
#    ln  -sf  /usr/include/qt  include
#    ln  -sf  /usr/lib         lib
#    export   QTDIR="$PWD"
#    cd       ..
#  fi

if    spell_installed  $(  get_provider  coreutils  )
then  sed  -i  "s:fileutils:coreutils:g"  configure
fi

./configure  --prefix /usr  \
             $OPTS          &&
make                        &&
prepare_install             &&
make    install
}
