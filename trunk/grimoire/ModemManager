# Might require libgudev from udev with optional on glib

   version   stable 0.5.2.0
   version unstable 0.5.995.0
   require dbus-glib glib ppp udev
  category network
 attribute console gnome
    source   stable $GNOME_URL sources/ModemManager/${VERSION:0:3}/ModemManager-$VERSION.tar.xz
    source unstable $GNOME_URL sources/ModemManager/${VERSION:0:3}/ModemManager-$VERSION.tar.xz
      info good 20120729
      info last 20120323
      info home http://www.gnome.org/
      desc 'unified high level API for communicating with (mobile broadband) modems'

build(){
 case $VERSION in
  0.5.1.96) sed -i 's:-Werror::' configure ;;
 esac
 default_build
}
