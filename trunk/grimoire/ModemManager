with version   stable 0.6.0.0 0.5.2.0
#with version unstable 0.5.995.0
with base    dbus-glib glib ppp udev
with role    network
with trait   console gnome
with source    stable $GNOME_URL sources/ModemManager/${VERSION:0:3}/ModemManager-$VERSION.tar.xz
with source  unstable $GNOME_URL sources/ModemManager/${VERSION:0:3}/ModemManager-$VERSION.tar.xz
with info    last 20120901
with info    home http://www.gnome.org/
with info    cite 'unified high level API for communicating with (mobile broadband) modems'

build(){
 case $VERSION in
  0.5.1.96) sed -i 's:-Werror::' configure ;;
 esac
 default_build
}
