if  !  spell_installed   coreutils;  then
  mkdir  -p  $CAST_QUEUE
  touch      $CAST_QUEUE/coreutils
fi


# remove old queues
rm  -f  /var/log/sorcery/queue/install
rm  -f  /var/log/sorcery/queue/remove
true


if    !  [  -d  $MERGED_GRIMOIRE/library  ]  ||
      grep  -q  "library.tar.bz2"  \
                $MERGED_GRIMOIRE/library/DETAILS
then
  mkdir     -p  $MERGED_GRIMOIRE
  cp        -a  $LIBRARY_SPELL  $MERGED_GRIMOIRE
  cp        -a  $LIBRARY_SPELL  $GRIMOIRE_LIBRARY/library
fi
