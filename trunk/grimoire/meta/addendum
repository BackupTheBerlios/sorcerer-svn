if      [  -f   /usr/lib/libpng.so.3.1.2.5  ];  then
  if    !  ldd  /usr/lib/libpng.so.3.1.2.5  |  grep  -q  "libc"  ||
        !  ldd  /usr/lib/libpng.so.3.1.2.5  |  grep  -q  "libm"  ||
        !  ldd  /usr/lib/libpng.so.3.1.2.5  |  grep  -q  "libz"
  then  echo            "libpng"  >>  $INSTALL_QUEUE
  fi
fi
