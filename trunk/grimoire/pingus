# 0.7.2
# Fatal Errors:
#  * library 'boost_signals' not found

# 0.7.0 fails compilation because scons is unable to
# detect and use gcc that is within the PATH environment variable.


    stable 0.7.2 0.7.1 0.7.0 0.6.0
   require ClanLib scons
    ignore 'levelstag\|rc'
  category game
 attribute x11
 attribute broke
    source http://pingus.seul.org/files/pingus-$VERSION.tar.bz2
  homepage http://pingus.seul.org/
  estimate 1900
      desc 'pingus is a free Lemmings clone.'


build(){
scons &&
prepare_install &&
./install.sh /usr
}
