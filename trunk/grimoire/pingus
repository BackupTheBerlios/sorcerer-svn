build(){
build_old(){
case $VERSION in
 0.7.3) sed -i 's:boost_signals:boost_signals-mt:' SConstruct ;;
esac
scons &&
./install.sh $DESTDIR/usr
}

case $VERSION in
 0.7.4) sed -i 's:boost_signals:boost_signals-mt:' SConstruct ;;
esac
scons &&
make install PREFIX=$DESTDIR/usr
}
