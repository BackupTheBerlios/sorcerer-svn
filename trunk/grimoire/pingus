   version stable 0.7.3 0.7.2 0.7.1 0.7.0 0.6.0
   require SDL_image SDL_mixer boost scons
  category game
 attribute x11
    source http://pingus.seul.org/files/pingus-$VERSION.tar.bz2
  homepage http://pingus.seul.org/
      desc 'free Lemmings clone'

build(){
case $VERSION in
 0.7.3) sed -i 's:boost_signals:boost_signals-mt:' SConstruct ;;
esac
scons &&
./install.sh $DESTDIR/usr
}
