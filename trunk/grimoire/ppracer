   VERSION=( "0.2.1-2" )
    IGNORE="^0\.2-2"
  CATEGORY="game"
 ATTRIBUTE="x11 new"
    SOURCE="ppracer/ppracer-$VERSION.tar.bz2"
       URL="http://download.berlios.de"
  HOMEPAGE="http://racer.planetpenguin.de"
       REQ="SDL SDL_mixer libpng ppracer-data tcl"
      OPTS="--bindir=/usr/games"
  ESTIMATE="112"
      DESC="ppracer is a racing game featuring tux.
The goal is to slide down a mountain as fast as possible.
This will probably cause a blank screen with visible cursor
and no way out, except to switch to a virtual console and
pkill -9 ppracer."

build()  {
sed  -i  "s:/usr/local/share/ppracer:/usr/share/ppracer:"  src/game_config.cpp
default_build
}
