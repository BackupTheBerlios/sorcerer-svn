   version stable 0.5
   require alsa-lib bluez
  category bluetooth audio
 attribute console
    source $SOURCEFORGE_URL bluetooth-alsa/btsco/$VERSION/btsco-$VERSION.tgz
 freshmeat bluetooth-alsa
      info home  http://bluetooth-alsa.sourceforge.net/
      info docs  http://bluetooth-alsa.sourceforge.net/build.html
      desc 'connects bluetooth headsets with computers'

build(){
default_build &&
mkdir -p $DESTDIR/etc &&
install -vm 644 alsa-plugins/asound.conf $DESTDIR/etc/asound.conf.sample
}
