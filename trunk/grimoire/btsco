  stable 0.5
    IGNORE='^0\.4'
  CATEGORY='bluetooth audio'
 ATTRIBUTE='console new'
    SOURCE="bluetooth-alsa/btsco-$VERSION.tgz"
       URL="$SOURCEFORGE_URL"
 FRESHMEAT="bluetooth-alsa"
  HOMEPAGE='http://bluetooth-alsa.sourceforge.net/'
       REQ='alsa-lib bluez-libs'
  EPROVIDE='bluetooth-alsa'
  ESTIMATE='190'
      DESC='btsco makes bluetooth headsets connect with computers'

build() {
 default_build  &&
 install -v -m 0644 alsa-plugins/asound.conf  /etc/asound.conf.sample
}
