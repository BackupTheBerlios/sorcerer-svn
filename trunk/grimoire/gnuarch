# website unreachable on 20110130
   version stable 1.3.5 1.2.1
   require openssh
  category development
 attribute console
    source $GNU_URL gnu-arch/tla-$VERSION.tar.gz
      info home  http://www.gnuarch.org/
      desc 'revision control tool
gnuarch is a revision control, source code,
and configuration management tool.'

build(){
 mkdir src/=build
 cd    src/=build
 ../configure \
 --prefix=/usr \
 --config-shell /bin/bash \
 $OPTS &&
 make &&
 make test &&
 make install DESTDIR=$DESTDIR&&
 cd .. &&
 mkdir -vp                $DESTDIR/usr/doc/$SPELL &&
 cp    -vr ../=* docs-tla $DESTDIR/usr/doc/$SPELL
}
