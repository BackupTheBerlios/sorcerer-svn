# 4.1.1 is available from
# http://www1.mplayerhq.hu/MPlayer/releases/dvdnav/
    stable 0.1.10
   require automake libdvdread
  category video
 attribute library x11
       url $SOURCEFORGE_URL
    source dvd/libdvdnav-$VERSION.tar.gz
  homepage http://dvd.sourceforge.net
  estimate 400
      desc 'libdvdnav is a library navigating DVDs.'

build(){
sed -i 's:doc misc:misc:' Makefile.in
AM="AUTOMAKE=automake"
aclocal
./configure \
--prefix=/usr \
--sysconfdir=/etc \
-localstatedir=/var \
$OPTS &&
make            "$AM" &&
prepare_install &&
make    install "$AM"
}
