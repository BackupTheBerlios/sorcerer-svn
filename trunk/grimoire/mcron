   VERSION=( "1.0.1" "1.0.0" )
  CATEGORY="time"
 ATTRIBUTE="console"
    SOURCE="mcron/mcron-$VERSION.tar.gz"
       URL="$GNU_URL"
       REQ="ed guile init-functions mail-transport-agent"
  HOMEPAGE="http://www.gnu.org/software/mcron"
  EPROVIDE="cron"
  ESTIMATE="10"
      DESC="mcron is a 100% compatible Vixie cron replacement.
mcron is a 100% compatible Vixie cron replacement implemented using guile.
It accepts traditional crontabs and configuration files written in Scheme."

build() {
install_init()  {
  mv          /usr/bin/cron  /usr/sbin/cron
  mkdir   -p  /var/cron/tabs
  install -m  0755  $SCRIPT_DIR/mcron  /etc/init.d

  ln     -sf  ../init.d/mcron  /etc/rcS.d/S80mcron
  ln     -sf  ../init.d/mcron  /etc/rc0.d/K20mcron
  ln     -sf  ../init.d/mcron  /etc/rc6.d/K20mcron
}

 sed  -i  "s:\$HEAD -1:\$HEAD -n 1:"  configure
 default_build  &&
 install_init
}

post_install() {
  /lib/lsb/install_initd /etc/init.d/mcron
  /etc/init.d/mcron start
  true
}

pre_remove()   { 
  /etc/init.d/mcron stop
  /lib/lsb/remove_initd /etc/init.d/mcron
}
