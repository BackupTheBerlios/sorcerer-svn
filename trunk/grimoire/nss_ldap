   VERSION=( 259 258 257.2 257 256 255 254 253 252 251 250 )
  CATEGORY='security/authentication'
 ATTRIBUTE='library'
    SOURCE="nss_ldap-$VERSION.tar.gz"
       URL='http://www.padl.com/download/'
  HOMEPAGE='http://www.padl.com/OSS/nss_ldap.html'
       REQ='heimdal openldap'
case  $HOSTTYPE  in
  x86_64)  OPTS+=' --libdir=/lib64'  ;;
       *)  OPTS+=' --libdir=/lib'    ;;
esac
  ESTIMATE='270'
      DESC='nss_ldap is a library for using ldap for name service.
nss_ldap is an RFC 2307-compliant set of C library extensions which
allows X.500 and LDAP directory servers to be used as a primary source
of aliases, ethers, groups, hosts, networks, protocol, users, RPCs,
services and shadow passwords.'
