   VERSION=( "0.9" )
  CATEGORY="graphic"
 ATTRIBUTE="library x11"
    SOURCE="libcaca-$VERSION.tar.bz2"
  HOMEPAGE="http://sam.zoy.org/projects/libcaca"
       URL="http://sam.zoy.org/projects/libcaca"
#            "doxygen::--disable-doc:to build documentation"
       REQ=( "imlib2"
             "slang:--enable-slang:--disable-slang:for output using slang" )
      OPTS="--disable-doc"
  ESTIMATE="76"
      DESC="libcaca is a graphics library that outputs text instead of pixels.
Therefore, it can work on older video cards or text terminals.
It is not unlike aalib except it supports colour output."

case  $VERSION  in
  0.9) REQ="gcc-v3.4 imlib2"  ;;
esac

build() {
case  $VERSION  in
  0.9)  GCC3_VER=$( installed_version gcc-v3.4 )
        export  PATH="${PATH/gcc\/current/gcc/$GCC3_VER}"
        export  CCACHE_PATH="/opt/gcc/$GCC3_VER/bin"  ;;
esac
default_build
}
