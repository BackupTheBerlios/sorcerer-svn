# version 5.07 does not correctly identify zip files.

   version stable 5.08 5.06 5.05 5.04 5.03
   require zlib
      opts --disable-static
  category utility
 attribute console library makej multilib-concurrent solo
#  source ftp://ftp.gw.com/mirrors/unix/file/file-$VERSION.tar.gz
   source ftp://ftp.astron.com/pub/file/file-$VERSION.tar.gz
      info last  20110806
      info home  http://www.darwinsys.com/file/
      info mail  http://mx.gw.com/mailman/listinfo/file
    CFLAGS='-O2'
   LDFLAGS='-Wl,-O1'
   protect /usr/bin/file
   protect /usr/share/file
      desc 'attemps to classify files by their content'

build(){
 cp  $SCRIPT_DIR/magic         magic/Magdir/sorcerer
 cat $SCRIPT_DIR/magic.mime >> magic/magic.mime
 sed -i "\,Magdir/spectrum,aMagdir/sorcerer \\\\" magic/Makefile.*
 default_build
}
