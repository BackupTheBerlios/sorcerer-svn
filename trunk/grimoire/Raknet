with version stable 2_0
case $VERSION in
 2_0)
   use_gcc gcc-v4.5 ;;
esac
with base    gcc-g++
with role    game
with trait   hidden library x11
# trait broke
with source  http://www.sumwars.org/data/Raknet${VERSION}.tar.gz
with info    good 20120529
with info    home http://www.sumwars.org
with info    cite 'used during compilation of sumwars'

build(){
 local v
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then v=64
 fi
 make &&
 mkdir -pvm 755 $DESTDIR/usr/{include,lib/pkgconfig,lib$v/pkgconfig} &&
 make install INCLUDE_DIR=$DESTDIR/usr/include LIBS_DIR=$DESTDIR/usr/lib$v
}
