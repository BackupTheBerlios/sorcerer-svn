    stable 070
    ignore '0701b\|a\|b'
  category game
 attribute console
    source mangband-$VERSION.tar.gz
       url http://mangband.org/download/
  homepage http://mangband.org/
      desc 'mangband is a multiplayer angband game.'

build(){
 cd src

 MCFG='/etc/mangband.cfg'

 sed -i "s:mangband.cfg:$MCFG:"          server/init2.c
 sed -i "s:\./lib/:/usr/share/mangband:" config.h

 make             &&
 prepare_install &&
 cd ..           &&
 cp    -av mangband    \
           mangclient  \
           mangconsole \
           runserv     /usr/bin            &&
 mkdir -p              /usr/share/mangband &&
 cp    -a  lib/*       /usr/share/mangband &&
 if    ! [ -f         $MCFG ]
 then cp mangband.cfg $MCFG
 fi
}
