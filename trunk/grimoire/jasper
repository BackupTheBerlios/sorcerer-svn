   version stable 1.900.1
   require freeglut jpeg
      opts --enable-shared --disable-static
  category graphic
 attribute library lto makej multilib-concurrent
    source http://www.ece.uvic.ca/~frodo/jasper/software/jasper-$VERSION.zip
#   source http://www.ece.uvic.ca/~mdadams/jasper/software/jasper-$VERSION.zip
      info good 20120614
      info home http://www.ece.uvic.ca/~mdadams/jasper/
      info docs 'http://www.ece.uvic.ca/~mdadams/jasper/#doc'
      info mail 'http://www.ece.uvic.ca/~mdadams/jasper/#lists'
      desc 'JPEG-2000 part 1 encoding and decoding library
The JasPer project is an open-source initiative to provide a free
software-based reference implementation of the codec specified in
the JPEG-2000/JPEG2000 Part-1 standard (i.e. ISO/IEC 15444-1).'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && [[ $CFLAGS =~ -m32 ]]
 then opts --x-libraries=/usr/lib
 fi
 default_build
}
