   VERSION=( 2.0.2 )
  CATEGORY='audio/library audio/mixer'
 ATTRIBUTE='library kde3'
    SOURCE="30375-akode-$VERSION.tar.bz2"
       URL='http://www.kde-apps.org/content/download.php?content=30375&id=1&f=/'
  HOMEPAGE='http://wiki.kde.org/tiki-index.php?page=aKode'
       REQ=( 'arts'
             'alsa-lib:--with-alsa:--without-alsa:for output using alsa'
             'flac:--with-flac:--without-flac:for flac support'
             'jackit:--with-jack:--without-jack:for jackit low-latency audio server'
             'libsamplerate:--with-libsamplerate::for secret rabbit code support'
             'libvorbis:--with-vorbis:--without-vorbis:to play ogg/vorbis audio files'
             'libmad:--enable-libmad:--disable-libmad:for mpeg audio decoding'
             'pulseaudio:--with-polypaudio:--without-polypaudio:for polypaudio server support'
             'speex:--with-speex:--without-speex:for speex support' )
      OPTS='--prefix=/opt/kde3 --with-qt-dir=/opt/kde3 --disable-debug --enable-final'
# ffmpeg support not working yet
#            'ffmpeg:--with-ffmpeg:--without-ffmpeg:for ffmpeg support'
case $VERSION in
 2.0.2) OPTS+=' --without-ffmpeg' ;;
esac
  ESTIMATE='770'
      DESC='akode provides additional audio codec and output support for arts'
