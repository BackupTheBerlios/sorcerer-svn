    stable 2.0.2
   require arts
  optional alsa-lib      --with-alsa          --without-alsa       for output using alsa
  optional flac          --with-flac          --without-flac       for flac support
  optional jackit        --with-jack          --without-jack       for jackit low-latency audio server
  optional libsamplerate --with-libsamplerate ''                   for secret rabbit code support
  optional libvorbis     --with-vorbis        --without-vorbis     to play ogg/vorbis audio files
  optional libmad        --enable-libmad      --disable-libmad     for mpeg audio decoding
  optional pulseaudio    --with-polypaudio    --without-polypaudio for polypaudio server support
  optional speex         --with-speex         --without-speex      for speex support

  category audio/library audio/mixer
 attribute library kde3
    source http://www.carewolf.com/akode/akode-$VERSION.tar.bz2
  homepage http://wiki.kde.org/tiki-index.php?page=aKode
      opts --prefix=/opt/kde3 --with-qt-dir=/opt/kde3 --disable-debug --enable-final
# ffmpeg support not working yet
#            'ffmpeg:--with-ffmpeg:--without-ffmpeg:for ffmpeg support'
case $VERSION in
 2.0.2) OPTS+=' --without-ffmpeg' ;;
esac
  estimate 400
      desc 'akode provides additional audio codec and output support for arts'

build(){
 case $VERSION in
  2.0.2) sed -i '1i#include <cstdlib>' $( find . -name \*.cpp ) ;;
 esac
 default_build
}
