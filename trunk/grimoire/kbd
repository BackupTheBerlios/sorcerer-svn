   VERSION=( "1.12" )
  CATEGORY="utility"
 ATTRIBUTE="console"
    SOURCE="kbd-$VERSION.tar.gz"
       URL="ftp://ftp.win.tue.nl/pub/linux-local/utils/kbd"
  HOMEPAGE="ftp://ftp.win.tue.nl/pub/linux-local/utils/kbd"
       REQ="console-data perl"
       OPT="linuxdoc-tools:::for building HTML documentation"
 CONFLICTS="console-tools console-data"
  ESTIMATE="114"
     SHORT="kbd contains keytable files and keyboard utilities."


build()  {
  ./configure      &&
  make             &&
  prepare_install  &&
  make    install
}
