   VERSION=( "2.1" "2.0" )
    IGNORE="x86_64"
  CATEGORY="development"
 ATTRIBUTE="gnome"
    SOURCE="gswitchit/libxklavier-$VERSION.tar.gz"
  HOMEPAGE="http://www.freedesktop.org/Software/LibXklavier"
       URL="$SOURCEFORGE_URL"
       REQ="libxml2"
  ESTIMATE="98"
      DESC="libxklavier is a utility library to make XKB stuff easier."

build() {
case  $VERSION  in
  2.0)  grep   -lr               "\-Werror"  *  |
        xargs  -l64  sed   -i   "s:-Werror::g"  ;;
esac
default_build
}
