   version stable 5.2.1 5.1 5.0 4.0 3.8
   require glib iso-codes libXi libxkbfile
      opts --enable-static=no
case $VERSION in
 5.2.1)
      opts --enable-introspection=yes ;;
esac
  category development
 attribute gnome library makej multilib-concurrent
#   source $SOURCEFORGE_URL gswitchit/libxklavier-$VERSION.tar.gz
    source $GNOME_URL sources/libxklavier/${VERSION:0:3}/libxklavier-$VERSION.tar.xz
      info last 20120216
      info home http://www.freedesktop.org/Software/LibXklavier
      desc 'utility library to make XKB stuff easier'

build(){
 case $VERSION in
  5.2.1) sed -i 's:1\.30\.0:0.10.8:g' configure ;;
 esac
 default_build
}
