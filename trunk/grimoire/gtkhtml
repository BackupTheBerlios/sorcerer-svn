   version   stable 4.4.1
   version unstable 4.5.5
   require alsa-lib avahi enchant libsoup openssl xcb-util
  optional enchant
      opts --disable-silent-rules --enable-static=no
case $VERSION in
 3.32.1)
      opts --enable-deprecated-warning-flags=no ;;
 3.32.0)
      opts --enable-deprecated-warning-flags=no ;;
esac
  category network/web
 attribute gnome library makej multilib-concurrent
    source   stable $GNOME_URL sources/gtkhtml/${VERSION:0:3}/gtkhtml-$VERSION.tar.xz
    source unstable $GNOME_URL sources/gtkhtml/${VERSION:0:3}/gtkhtml-$VERSION.tar.xz
      info last 20120416
      info home http://www.gnome.org
      desc 'light weight html rendering/editing library'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
