   version stable 1.0.3 1.0.1 1.0.0
   require SDL
  optional modplugxmms --enable-modplug --disable-modplug to enable modules decoding via libmodplug
  optional libmikmod   --enable-mikmod  --disable-mikmod  to enable module decoding via libmikmod
  optional libvorbis   --enable-vorbis  --disable-vorbis  to enable Ogg Vorbis decoding
# optional smpeg       --enable-smpeg   --disable-smpeg   to enable MP3 decoding
  optional flac        --enable-flac    --disable-flac    to enable FLAC decoding
  optional physfs      --enable-physfs  --disable-physfs  to enable EXPERIMENTAL audio converter
  optional speex       --enable-speex   --disable-speex   to enable SPX decoding

    switch --enable-debug --disable-debug debug mode
    switch --enable-voc   --disable-voc  for VOC decoding
    switch --enable-wav   --disable-wav  for WAV decoding
    switch --enable-raw   --disable-raw  for RAW decoding
    switch --enable-aiff  --disable-aiff for AIFF decoding
    switch --enable-shn   --disable-shn  for SHN decoding
    switch --enable-midi  --disable-midi for midi decoding

      opts --disable-static

  category audio/library
 attribute library makej multilib-concurrent x11
    source http://icculus.org/SDL_sound/downloads/SDL_sound-$VERSION.tar.gz
      info home  http://icculus.org/SDL_sound/
 freshmeat sdlsound
      desc 'library for decoding several sound formats
SDL_sound is a library that handles the decoding of several popular
sound file formats, such as .WAV and .MP3.'

build(){
 sed -i 's,PATH="$prefix/bin:$prefix/usr/bin:$PATH",PATH="$PATH",' configure
 default_build
}
