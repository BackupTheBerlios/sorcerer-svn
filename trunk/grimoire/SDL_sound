   VERSION=( "1.0.1" "1.0.0" "0.1.5" )
  CATEGORY="audio"
 ATTRIBUTE="library x11"
  HOMEPAGE="http://icculus.org/SDL_sound"
       URL="http://icculus.org/SDL_sound/downloads"
       REQ=( "SDL"
             "modplugxmms:--enable-modplug:--disable-modplug:to enable modules decoding via libmodplug"
             "libmikmod:--enable-mikmod:--disable-mikmod:to enable module decoding via libmikmod"
             "libvorbis:--enable-vorbis:--disable-vorbis:to enable Ogg Vorbis decoding"
             "smpeg:--enable-smpeg:--disable-smpeg:to enable MP3 decoding"
             "flac:--enable-flac:--disable-flac:to enable FLAC decoding"
             "physfs:--enable-physfs:--disable-physfs:to enable EXPERIMENTAL audio converter"
             "speex:--enable-speex:--disable-speex:to enable SPX decoding"
             ":--enable-debug:--disable-debug:debug mode"
             ":--enable-voc:--disable-voc:for VOC decoding"
             ":--enable-wav:--disable-wav:for WAV decoding"
             ":--enable-raw:--disable-raw:for RAW decoding"
             ":--enable-aiff:--disable-aiff:for AIFF decoding"
             ":--enable-shn:--disable-shn:for SHN decoding"
             ":--enable-midi:--disable-midi:for midi decoding" )
 FRESHMEAT="sdlsound"
