build(){
 local DEST=/usr/lib/hotplug/firmware/isl3890.firmware

 [[ -f ${SOURCE[0]} ]] &&
 [[ -f ${SOURCE[1]} ]] &&
 [[ -f ${SOURCE[2]} ]] &&
 [[ -f ${SOURCE[3]} ]] &&
 [[ -f ${SOURCE[4]} ]] &&
 [[ -f ${SOURCE[5]} ]] &&
 prepare_install       &&
 mkdir  -pvm 755              $DEST &&
 install -vm 755 ${SOURCE[0]} $DEST &&
 install -vm 755 ${SOURCE[1]} $DEST &&
 install -vm 755 ${SOURCE[2]} $DEST &&
 install -vm 755 ${SOURCE[3]} $DEST &&
 install -vm 755 ${SOURCE[4]} $DEST &&
 install -vm 755 ${SOURCE[5]} $DEST
}
