    source http://daemonizer.de/prism54/prism54-fw/fw-usb/2.13.1.0.arm.1
  homepage http://wireless.kernel.org/en/users/Drivers/p54
  estimate 500
      desc 'SoftMAC and FullMAC firmware for wireless NICs'

build(){
 mkdir   -pm 755 $DESTDIR/lib/firmware &&
 install -vm 644 ${SOURCE[0]} $DESTDIR/lib/firmware/isl3886pci &&
 install -vm 644 ${SOURCE[1]} $DESTDIR/lib/firmware/isl3886usb &&
 install -vm 644 ${SOURCE[2]} $DESTDIR/lib/firmware/isl3887usb &&
 install -vm 644 ${SOURCE[3]} $DESTDIR/lib/firmware/isl3886    &&
 install -vm 644 ${SOURCE[4]} $DESTDIR/lib/firmware/isl3890usb &&
 install -vm 644 ${SOURCE[5]} $DESTDIR/lib/firmware/isl3887usb_bare
}
