  VERSION=( "20" )
 CATEGORY="web"
ATTRIBUTE="server"
   SOURCE="ijb$VERSION.tar.Z"
      URL="http://www.junkbuster.com"
 HOMEPAGE="http://www.junkbuster.com"
FRESHMEAT="internetjunkbuster"
     DESC="ijb, internet junk buster is an ad filtering web proxy.
The Internet Junkbuster Proxy (TM) blocks unwanted banner ads
and protects your privacy from cookies and other threats.
It's free under the GPL.
It works as a proxy that stands between your browser
and the Internet, checking every HTTP request for each
resource (including graphics) against a blockfile of
URLs before sending it over the Internet.
It can be configured as a plain old
non-caching, non-blocking proxy as well."

build() {
 install_conf()  {

  mkdir  -p                 /var/log/junkbuster
  mkdir  -p                 /usr/doc/junkbuster
  cp     -f  ijbman.html    /usr/doc/junkbuster
  cp     -f  ijbfaq.html    /usr/doc/junkbuster
  cp     -f  junkbuster.1   /usr/man/man8/junkbuster.8
  mkdir  -p                 /etc/junkbuster
  cp         *.ini          /etc/junkbuster/

  [  -f  /etc/init.d/junkbuster.sh  ]  ||
  cp     $SCRIPT_DIR/junkbuster.sh  /etc/init.d

  ln     -sf  ../init.d/junkbuster.sh  /etc/rc3.d/S40junkbuster
  ln     -sf  ../init.d/junkbuster.sh  /etc/rc4.d/S40junkbuster
  ln     -sf  ../init.d/junkbuster.sh  /etc/rc5.d/S40junkbuster

  ln     -sf  ../init.d/junkbuster.sh  /etc/rc0.d/K60junkbuster
  ln     -sf  ../init.d/junkbuster.sh  /etc/rc1.d/K60junkbuster
  ln     -sf  ../init.d/junkbuster.sh  /etc/rc2.d/K60junkbuster
  ln     -sf  ../init.d/junkbuster.sh  /etc/rc6.d/K60junkbuster

 }

 if    [  -d  /etc/junkbuster  ]
 then  cp     /etc/junkbuster/*  .
 fi

 make             &&
 prepare_install  &&
 install -s -m 755 junkbuster /usr/sbin/junkbuster  &&
 install_conf
}

post_install() {
 default_post_install
 /etc/init.d/junkbuster  start
 true
}

pre_remove() {
 default_pre_remove
 /etc/init.d/junkbuster  stop
 true
}

