   version stable 3.0.2 3.0.1 3.0.0 2.91.6
   require GConf gnome-bluetooth libunique nautilus
#  require gnome-bluetooth libunique nautilus
#  require GConf avahi dbus-glib gnome-bluetooth libcanberra libnotify
#  require GConf-dbus avahi dbus-glib gnome-bluetooth libcanberra libnotify
  category network/file-share
 attribute gnome library makej multilib-concurrent
    source $GNOME_URL sources/gnome-user-share/${VERSION:0:3}/gnome-user-share-$VERSION.tar.xz
      info last 20120323
      info home http://www.gnome.org/softwaremap/projects/gnome-user-share
      desc 'interface to various user-level file sharing programs'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
