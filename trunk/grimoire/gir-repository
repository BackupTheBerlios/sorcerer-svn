       url $GNOME_URL
    source sources/gir-repository/${VERSION:0:3}/gir-repository-$VERSION.tar.bz2
  homepage http://www.gnome.org
      opts --enable-static=no
  estimate 700
      desc 'gir files used by gobject-introspection for easier language binding'

