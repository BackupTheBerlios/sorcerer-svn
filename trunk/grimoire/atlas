# atlas 3.8.3 might be broke.
# Wastes huge amounts of CPU time during compilation on an athlon-xp
# and it fails every time.

   version   stable 3.8.3
   version unstable 3.9.72 3.9.71 3.9.70 3.9.69
# Not sure if LAPACK is required (separately) for 3.9.25
   require gcc-fortran LAPACK
      opts --nof77
  category mathematics
 attribute console lto_off
#attribute makej
# does not install libraries multilib but compiles that way fine.
 attribute multilib-fail

# Disable automatic detection if CPU throttling is enabled because if it is,
# the cast would fail. Some computers (often laptops) have BIOS that does
# not allow users to disable throttling. Of course if throttling is enabled,
# ATLAS install will be junk because the timings will be completely random.
      opts '-Si cputhrchk 0'
case $VERSION in
 3.9*) source $SOURCEFORGE_URL math-atlas/Developer%20%28unstable%29/$VERSION/atlas$VERSION.tar.bz2
       source http://www.netlib.org/lapack/lapack.tgz ;;
    *) source $SOURCEFORGE_URL math-atlas/Stable/$VERSION/atlas$VERSION.tar.bz2 ;;
esac
      info home http://math-atlas.sourceforge.net/
      info docs 'http://math-atlas.sourceforge.net/faq.html#doc'
      desc 'automatically tuned routines for linear algebra'

build(){
new_build(){
 local B
 adjust_soname(){
  sed -i "s:-soname \$(LIBINSTdir)/\(lib[^ ]*\.so\):-soname \1.$VERSION:" lib/Makefile
 }

 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then opts --libdir=/usr/lib64; B=64
 else B=32
 fi

 mkdir build &&
 cd    build &&
 ../configure -b $B        \
    -Ss flapack ../lapack* \
    -D c    '-DWALL'       \
    -Fa alg '-fPIC'        \
    --prefix=$DESTDIR/usr  \
    --shared               \
    $OPTS      &&
 adjust_soname &&
 make          &&
# make check    &&
# make ptcheck  &&
# make time     &&
 make install
}

old_build(){
 local B
 make_shared(){
  case $VERSION in
   3.8.3) sed -i 's:\(-shared\):\1 --allow-multiple-definition:' lib/Makefile ;;
  esac
 
  cd lib  &&
  make shared  &&
  make ptshared  &&
  if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]; then
   mkdir -pm 755 $DESTDIR/usr/lib64
   install -v -m 0755 -o root -g root *.so $DESTDIR/usr/lib64
  else
   mkdir -pm 755 $DESTDIR/usr/lib
   install -v -m 0755 -o root -g root *.so $DESTDIR/usr/lib
  fi &&
  cd -
 }

 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then opts --libdir=/usr/lib64; B=64
 else opts --libdir=/usr/lib;   B=32
 fi

 mkdir build &&
 cd    build &&
 ../configure -b $B \
  -D gc  '-DWALL'   \
  -Fa alg '-fPIC'   \
  --with-netlib-lapack=/usr/lib/lapack/liblapack_netlib.a \
  --prefix=$DESTDIR/usr \
  $OPTS
 make &&
# make check &&
# make ptcheck &&
# make time &&
 make_shared &&
 make install
}
 
 case $VERSION in
   3.8*) old_build ;;
   3.9*) new_build ;;
 esac
}
