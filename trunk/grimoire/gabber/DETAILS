   VERSION="0.8.7"
  CATEGORY="chat"
 ATTRIBUTE="gnome x11"
    SOURCE="gabber/gabber-$VERSION"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://gabber.sourceforge.net"
       REQ="libsigc++ gtkmm gnomemm libunicode gal"
