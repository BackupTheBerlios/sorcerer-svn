   VERSION=( "0.8.7" )
  CATEGORY="chat"
 ATTRIBUTE="gcc2 gnome x11"
    SOURCE="gabber/gabber-$VERSION"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://gabber.sourceforge.net"
       REQ="libsigc++.1 gtkmm gnomemm libunicode gal"
    OPT[0]="openssl:::for encrypted communication"
    OPT[1]="gnupg:::for encrypted communication"
    OPT[2]="xmms:--enable-xmms:--disable-xmms:for XMMS music info support"
 FRESHMEAT="gabber"
     SHORT="Gabber is a GNOME Jabber chat client."
cat << EOF
Gabber is a Jabber client for GNOME.
Jabber is a flexible distributed 
Open Source instant messaging system.
It also happens to allow communication 
with other instant messaging systems, 
such as ICQ, AIM, Yahoo!, MSN, and even IRC.
EOF
