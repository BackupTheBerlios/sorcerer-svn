   version stable 0.6.0 0.5.0 0.2.0
   require tomoe-gtk uim
  category input
 attribute library x11
    source $SOURCEFORGE_URL tomoe/uim-tomoe-gtk/uim-tomoe-gtk-$VERSION/uim-tomoe-gtk-$VERSION.tar.gz
  homepage http://sourceforge.jp/projects/tomoe/
      desc 'handwriting identification library for use with uim'

build(){
 case $VERSION in
  0.6.0) export PKG_CONFIG_PATH=/opt/gucharmap/2.23/lib/pkgconfig ;;
 esac
 default_build
}
