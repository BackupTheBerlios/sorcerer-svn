      DESC="uim-tomoe-gtk provides handwriting identification library."

build()  {
  case  $VERSION  in
    0.2.0)  sed  -i  "1i#include <locale.h>"  src/uim-tomoe-gtk.c  ;;
  esac
  default_build
}
