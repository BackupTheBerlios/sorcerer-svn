   version stable 2.0
   require SDL openal
  category game/3d/flightsim
 attribute makej optimize x11
    source https://github.com/rixed/fachoda-complex/tarball/release/2.0?filename=/fachoda-complex-$VERSION.tar.gz
      info last 20120224
      info home https://github.com/rixed/fachoda-complex/
      info vurl https://github.com/rixed/fachoda-complex
      desc 'airplane arcade simulator'
CURL_PARAM='-k'

build(){
 cd src
 sed -i 's:/usr/local:/usr:
         s:/lib/games:/share:
         s:/games:/bin:' Makefile
 make &&
 make install DESTDIR=$DESTDIR
}
