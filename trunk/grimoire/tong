   version stable 1.1p 1.0
   require SDL_image SDL_mixer
  category game
 attribute x11
    source http://www.nongnu.org/tong/tong-$VERSION.tar.gz
      info good 20120711
      info home http://www.nongnu.org/tong/
      desc 'Tetris and Pong in the same place at the same time'

build(){
 sed -i "s:media/:/usr/share/games/tong/media/:" $( grep -rl "media/" *  )
 sed -i "s:-O3:$CXXFLAGS:" Makefile
 make &&
 mkdir   -pvm 755 $DESTDIR/usr/{bin,share/games/tong} &&
 install  -vm 755 -o root -g root -D tong $DESTDIR/usr/bin/tong &&
 cp       -r media $DESTDIR/usr/share/games/tong
}
