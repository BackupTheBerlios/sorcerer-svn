       REQ=( 'alsa-lib bzip2 cmake e2fsprogs giflib kde-symlinks libXpm libXtst lua pcre shared-mime-info soprano strigi'
             'aspell:::For spell checking' 
             'avahi:::for zero conf support'
             'enchant:::for spell checking'
