    stable 2.44 2.43 2.041 2.39 2.35 2.30
   require gd perl libXpm
  category perl
 attribute perl-module
    source http://www.cpan.org/authors/id//L/LD/LDS/GD-$VERSION.tar.gz
  homepage http://search.cpan.org/search?dist=GD
  estimate 70
      desc 'perl module providing interface to GD Graphics Library'

build(){
 install_html(){
  [       -d                              /usr/doc/perl--GD ] ||
  mkdir   -p                              /usr/doc/perl--GD
  install -vm 644 -o root -g root GD.html /usr/doc/perl--GD
 }

 perl Makefile.PL        &&
 make "OPTIMIZE=$CFLAGS" &&
 make            html    &&
 prepare_install         &&
 make    install         &&
         install_html
}
