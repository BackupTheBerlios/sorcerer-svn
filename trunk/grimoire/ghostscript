    stable 8.62 8.61 8.60 8.56 8.54-gpl 8.50 8.51 8.15 8.01
   require ghostscript-fonts-other ghostscript-fonts-std jpeg zlib
  optional libXext --with-x --without-x for x11 support
  optional libXt   --with-x --without-x for x11 support
    ignore 'fonts\|^8\.5[1-4]'
  category printer
 attribute console x11
       url $SOURCEFORGE_URL
    source ghostscript/ghostscript-$VERSION.tar.bz2
  homepage http://www.ghostscript.com
  estimate 3800
      desc 'ghostcript is a an interpreter for the PostScript langauge.
ghostscript is the name of a set of software that provides:
* An interpreter for the PostScript language and the PDF file format,
* A set of C procedures (the Ghostscript library) that implement the
  graphics capabilities that appear as primitive operations in the
  PostScript language, and
* A wide variety of output drivers for various file formats and
  printers.'

build()  {
./configure            \
--build=$BUILD         \
--prefix=/usr          \
--sysconfdir=/etc      \
--localstatedir=/var   \
$OPTS                  &&
make                   &&
#make  so               &&
prepare_install        &&
make    install
#make  soinstall
}
