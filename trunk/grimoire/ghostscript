build(){
 export CFLAGS+=' -fPIC'
 ./configure \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --prefix=/usr \
  --enable-dynamic &&
 make so &&
 make soinstall install "DESTDIR=$DESTDIR"
}

