   version stable 0.4.3 0.3.11 0.3.5 0.3.4
   require avahi libsoup
      opts --enable-static=no
  category utility
 attribute gnome library makej multilib-concurrent
    source $GNOME_URL sources/libepc/${VERSION:0:3}/libepc-$VERSION.tar.xz
      info last 20111121
      info home http://www.gnome.org
      desc 'publish and consume library'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
