# Might not be trackable
# Only installs a static ar library

   version stable 1.3.1 1.3.0 1.2.2 1.2.0 1.1.3
  category video/codec video/library
 attribute library
#attribute multilib-fail
    source http://downloads.xvid.org/downloads/xvidcore-$VERSION.tar.gz
      vurl "http://www.xvid.org/Downloads.43.0.html"
      info last  20110329
      info home  http://www.xvid.org/
 freshmeat xvid
      desc 'MPEG-4 video codec
XviD is a high performance and high
quality MPEG-4 video de-/encoding solution.'


build(){
 local ARCH
 if   [[ $HOSTTYPE == x86_64 ]] && [[ $CFLAGS =~ -m32 ]]
 then ARCH=i686
 else ARCH=$HOSTTYPE
 fi
 export CFLAGS+=' -fPIC'
 cd build/generic
 setarch $ARCH         \
 ./configure           \
  --prefix=/usr        \
  --sysconfdir=/etc    \
  --localstatedir=/var &&
 make &&
 make install "DESTDIR=$DESTDIR"
}
