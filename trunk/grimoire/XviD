    stable 1.1.3 1.1.2 1.1.1 1.1.0
    secure 1.1.3
  category video/codec video/library
 attribute library
    source http://downloads.xvid.org/downloads/xvidcore-$VERSION.tar.bz2
  homepage http://www.xvid.org
 freshmeat xvid
  estimate 150
      desc 'XviD is an MPEG-4 video codec.
XviD is a high performance and high
quality MPEG-4 video de-/encoding solution.'


build(){
cd build/generic
./configure          \
--prefix=/usr        \
--sysconfdir=/etc    \
--localstatedir=/var &&
make                 &&
prepare_install      &&
make    install
}
