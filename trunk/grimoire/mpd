   VERSION=( "0.11.5" )
  CATEGORY="audio-player"
 ATTRIBUTE="server new"
    SOURCE="mpd-$VERSION.tar.gz"
       URL="http://mercury.chem.pitt.edu/~shank"
  HOMEPAGE="http://www.musicpd.org"
       REQ=( "libao"
             "audiofile::--disable-audiofile:to play wave files"
             "faad2::--disable-aac:to play MP4/AAC files"
             "flac::--disable-flac:to play FLAC files"
             "libmad::--disable-mp3:to play MP3 files"
             "libid3tag::--disable-id3:to read ID3 tags"
             "libmikmod::--disable-mod:for playing Mod files"
             "libvorbis::--disable-ogg:for playing Ogg Vorbis files" )
      OPTS="--disable-mpd-id3tag --disable-mpd-mad"
  ESTIMATE="225"
      DESC="mpd is a server for playing streamed or remotely stored music.
It supports MP3, Ogg Vorbis, FLAC, AAC, Mod, and wave."
