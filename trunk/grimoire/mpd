    stable 0.15.4 0.15.3 0.15.2 0.15.1 0.15 0.14.2 0.14.1 0.14
   require curl libao
  optional audiofile  '' --disable-audiofile to play wave files
  optional faad2      '' --disable-aac       to play MP4/AAC files
  optional flac
  optional ffmpeg
  optional lame
  optional libmad     '' --disable-mp3       to play MP3 files
  optional libid3tag  '' --disable-id3       to read ID3 tags
  optional libmikmod  '' --disable-mod       for playing Mod files
  optional libmpcdec  '' ''                  for to play musepack audio files
  optional libsamplerate
  optional libshout   '' --disable-shout     for playing shoutcast streaming audio
  optional libtheora
  optional libvorbis  '' --disable-ogg       for playing Ogg Vorbis files
  optional pulseaudio '' ''                  for pulseaudio audio mixing support
  optional speex
  optional sqlite
  category audio/player
 attribute server
    source $SOURCEFORGE_URL musicpd/mpd-$VERSION.tar.bz2
#   source http://www.musicpd.org/uploads/files/mpd-$VERSION.tar.bz2
  homepage http://www.musicpd.org/
      opts --disable-mpd-id3tag --disable-mpd-mad --disable-oggflac
  estimate 400
      desc 'server for playing streamed or remotely stored music
It supports MP3, Ogg Vorbis, FLAC, AAC, Mod, and wave.'
