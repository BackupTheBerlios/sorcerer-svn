   version stable 1.2.0
   require gtk+
      opts --enable-static=no
  category graphic
 attribute library makej multilib-concurrent x11
    source $SOURCEFORGE_URL gtkglext/gtkglext/$VERSION/gtkglext-$VERSION.tar.bz2
      info last 20060205
      info home http://projects.gnome.org/gtkglext/
      info docs http://projects.gnome.org/gtkglext/doc.html
      desc 'OpenGL extention to gtk+'

build(){
 if    [[ $HOSTTYPE == x86_64 ]]; then
  if   [[ $CFLAGS   =~ -m32   ]]
  then opts --x-libraries=/usr/lib    --host=${MACHTYPE/x86_64/i686} 
  else opts --x-libraries=/usr/lib64
  fi
 else  opts --x-libraries=/usr/lib
 fi

 default_build
}
