   VERSION=( "1.5" "1.2" )
  CATEGORY="network/email"
 ATTRIBUTE="library"
    SOURCE="eps-$VERSION.tar.gz"
       URL="http://www.inter7.com/eps/"
  HOMEPAGE="http://www.inter7.com/eps.html"
      DESC="eps is a library for email processing.
eps is intended to give people the ability
to write their own email processing tools.
Whether you want to process incoming and outgoing emails,
or just analyze a message, this package is intended to
aid in that endeavor."


build() {
sed  -i  "s:-O3 -funroll-loops:$CFLAGS:"  Makefile
make             &&
prepare_install  &&
make    install
}
