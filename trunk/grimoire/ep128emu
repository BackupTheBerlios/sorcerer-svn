# Spell has not be tested and installed.
# requires a custom build()
# 2.0.8.1 fails compilation
# 2.9.1 and 2.0.9 failed compilation

   version stable 2.0.9.1
   require fltk portaudio scons
  category development/emulator game
 attribute x11
 attribute broke
    source $SOURCEFORGE_URL ep128emu/ep128emu2/ep128emu-$VERSION/ep128emu-$VERSION.tar.bz2
      info home  http://ep128emu.sourceforge.net/
      desc 'Enterpirese 128 Z80 microprocessor based computer emulator
Some ancient software for this machine available from:
http://www.ep128.hu/Menu.htm'

build(){
 scons &&
 mkdir  -pvm 755          $DESTDIR/usr/bin &&
 install -vm 755 ep128emu $DESTDIR/usr/bin &&
 install -vm 755 tapeedit $DESTDIR/usr/bin
}
