   version stable 0.1.2
      info last  20050131
   require kdelibs-v3 avahi nss-mdns
      opts --prefix=/opt/kde3 --with-qt-dir=/opt/kde3 --disable-debug --enable-final
  category kde-extragear
 attribute kde3
    source http://helios.et.put.poznan.pl/~jstachow/pub/kdnssd-avahi_$VERSION.orig.tar.gz
      info home  http://helios.et.put.poznan.pl/~jstachow/pub/
      desc 'enables using avahi with KDE as an alternative to mdnsd
Setup information can be found
at http://wiki.kdenews.org/tiki-index.php?page=Zeroconf+in+KDE'

build(){
 case $VERSION in
  0.1.2) sed -i "s:2\.5:2\.6:g
                 s:1.7:1.1:" admin/cvs.sh ;;
 esac 

 make -f admin/Makefile.common &&
 default_build
}
