# *** KDE requires automake 1.6.1 or newer
   VERSION=( 0.1.2 )
  CATEGORY='kde-extragear'
 ATTRIBUTE='kde3 broken'
    SOURCE="kdnssd-avahi_$VERSION.orig.tar.gz"
       URL='http://helios.et.put.poznan.pl/~jstachow/pub/'
  HOMEPAGE='http://helios.et.put.poznan.pl/~jstachow/pub/'
       REQ='kdelibs-v3 avahi nss-mdns'
#     OPTS='--disable-rpath --disable-gcc-hidden-visibility --enable-new-ldflags --disable-debug --disable-warnings --disable-dependancy-tracking --enable-final'
      OPTS='--prefix=/opt/kde3 --with-qt-dir=/opt/kde3 --disable-debug --enable-final'
  ESTIMATE='350'
      DESC='kdnssd-avahi enables using avahi with KDE as an alternative to mdnsd
Setup information can be found
at http://wiki.kdenews.org/tiki-index.php?page=Zeroconf+in+KDE'

build(){
 case $VERSION in
  0.1.2) sed -i "s:2\.5:2\.6:g" admin/cvs.sh ;;
 esac 

 make -f admin/Makefile.common &&
 default_build
}
