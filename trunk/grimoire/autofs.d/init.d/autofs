#!/bin/bash
### BEGIN INIT INFO
# Default-Mode: 710
# Provides: $remote_fs
# Required-Start: $local_fs $network
# Should-Start: portmap
# Required-Stop: $network
# Default-Start: 3 4 5
# Default-Stop: 0 1 2 6
# Short-Description: autofs is a userpsace automounter
### END INIT INFO

. /lib/lsb/init-functions

NAME=automount
SERV=/usr/sbin/automount
OPTS=--verbose
# Potentially redefine the options by sourcing AFILE
AFILE=/etc/automount.conf
[ -f "$AFILE" ] && . "$AFILE"

parse "$@"
