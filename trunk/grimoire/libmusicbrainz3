   version stable 3.0.3
   require cmake libdiscid neon
  category audio/library
 attribute library
 attribute broke
#attribute multilib-fail
    source ftp://ftp.musicbrainz.org/pub/musicbrainz/libmusicbrainz-$VERSION.tar.gz
  homepage http://www.musicbrainz.org/
  estimate 120
      desc 'second generation incarnation of the CD Index
This server is designed to enable Audio CD and MP3/Vorbis players 
to download metadata about the music they are playing.'

build(){
 case $VERSION in
  3.0.1) sed -i '1i#include <cstdlib>' src/utils_private.cpp ;;
 esac
 default_build
}
