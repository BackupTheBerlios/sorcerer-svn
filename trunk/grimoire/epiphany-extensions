   version   stable 3.4.0 3.2.0 2.91.92 2.32.0
   version unstable 3.4.0 3.3.90
   require epiphany pcre
  category network/web
 attribute gnome
#attribute broke
    source $GNOME_URL sources/epiphany-extensions/${VERSION:0:3}/epiphany-extensions-$VERSION.tar.xz
      info last 20120327
      info home http://www.gnome.org/projects/epiphany/extensions.html
 freshmeat ephy-extensions
      desc 'collection of extensions for Epiphany web browser
It includes mouse gestures, a popup blocker,
the ability to move tabs to other windows without drag-and-drop,
an extension template to ease writing your own extension,
an error viewer and validator, a certificate viewer,
and the ability to connect Epiphany to the Dashboard.'


build_old(){
 MVER="$( installed_version $( get_provider mozilla ) )"
 opts --with-mozilla-snapshot=$MVER
 export LDFLAGS+=' -Wl,-rpath,/usr/lib/mozilla'
 default_build
}
