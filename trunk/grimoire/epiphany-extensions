with version   stable 3.6.0 3.4.0 3.2.0
#with version unstable 3.4.0
with base    epiphany pcre
with role    network/web
with trait   gnome
#trait broke
with source    stable $GNOME_URL sources/epiphany-extensions/${VERSION:0:3}/epiphany-extensions-$VERSION.tar.xz
with source  unstable $GNOME_URL sources/epiphany-extensions/${VERSION:0:3}/epiphany-extensions-$VERSION.tar.xz
with info    last 20121007
with info    home http://www.gnome.org/projects/epiphany/extensions.html
with info    freecode ephy-extensions
with info    cite 'collection of extensions for Epiphany web browser
It includes mouse gestures, a popup blocker,
the ability to move tabs to other windows without drag-and-drop,
an extension template to ease writing your own extension,
an error viewer and validator, a certificate viewer,
and the ability to connect Epiphany to the Dashboard.'


build_old(){
 MVER="$( installed_version $( get_provider mozilla ) )"
with also    --with-mozilla-snapshot=$MVER
 export LDFLAGS+=' -Wl,-rpath,/usr/lib/mozilla'
 default_build
}
