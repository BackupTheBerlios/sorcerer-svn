   VERSION=( "20041221" "20041220" )
  CATEGORY="utility"
 ATTRIBUTE="console new"
    SOURCE="listps-src-$VERSION.tar.gz"
       URL="http://csl.sublevel3.org/listps"
  HOMEPAGE="http://csl.sublevel3.org/listps"
       REQ=""
  ESTIMATE="6"
      DESC="lsitps shows all running process, including hidden ones.
It does this by explicitly querying the /proc filesystem for process 
IDs in the range 1 to 33000."

build()  {
  sed  -i  "s:-O3:$CXXFLAGS:"  Makefile
  make  &&
  prepare_install  &&
  make    install
}
