    stable 0.2.0 0.1.0
   require SDL_image SDL_mixer mxml
  category game/board/chess
 attribute x11
       url 'http://download.berlios.de/
            http://download2.berlios.de/'
    source dreamchess/dreamchess-$VERSION.tar.gz
  homepage http://dreamchess.berlios.de/
  estimate 600
      desc '3D chess game'

build(){
case $VERSION in
 0.2.0) sed -i 's:-lmxml:-lmxml -lpthread:' configure
        export CFLAGS+=' -D_THREAD_SAFE -D_REENTRANT' ;;
esac
default_build
}
