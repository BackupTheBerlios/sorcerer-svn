   version stable 0.2.0
   require SDL_image SDL_mixer mxml
  category game/board/chess
 attribute x11
    source http://download.berlios.de/ \
           http://download2.berlios.de/ \
           dreamchess/dreamchess-$VERSION.tar.gz
      info good 20120605
      info last 20071118
      info home http://dreamchess.berlios.de/
      desc '3D chess game'

build(){
 case $VERSION in
  0.2.0) sed -i 's:-lmxml:-lmxml -lpthread:' configure
         export CFLAGS+=' -D_THREAD_SAFE -D_REENTRANT' ;;
 esac
 default_build
}
