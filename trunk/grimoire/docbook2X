   version stable 0.8.8
   require libxslt perl--XML-Parser perl--XML-SAX
      opts --with-xslt-processor=libxslt
  category documentation
 attribute console
    source $SOURCEFORGE_URL docbook2x/docbook2x/$VERSION/docbook2X-$VERSION.tar.gz
      info good 20120605
      info last 20070303
      info home http://docbook2x.sourceforge.net/
      info docs http://docbook2x.sourceforge.net/latest/doc/docbook2X.html
      desc 'converts DocBook files into man and info pages page'

