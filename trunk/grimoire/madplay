   VERSION=( "0.15.2b" "0.15.1b" "0.14.2b" )
  CATEGORY="audio-player"
 ATTRIBUTE="console"
    SOURCE="mad/madplay-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://mad.sourceforge.net"
       REQ="libid3tag libmad"
       OPT="esound:::for enlightenment sound daemon output"
  EPROVIDE="mad,play mad"
  ESTIMATE="46"
     SHORT="madplay is a 24 bit capable .mp3 decoder"
      LONG="
madplay is a high-quality MPEG audio decoder.
It currently supports MPEG-1 and the MPEG-2 
extension to Lower Sampling Frequencies, 
as well as the so-called MPEG 2.5 format.
All three audio layers  
(Layer I, Layer II, and Layer III a.k.a. MP3) 
are fully implemented.
"
