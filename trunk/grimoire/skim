   VERSION=( "1.4.5" )
  CATEGORY="utility/keyboard"
 ATTRIBUTE="kde new broken"
# has compile error
    SOURCE="scim/skim-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://www.scim-im.org/"
       REQ="kdelibs scim scons"
  ESTIMATE="1330"
      DESC="skim is an input method based upon scim-lib"

build()  {
  ./configure      \
  prefix=/usr      \
  qtincludes=/usr/include/qt  \
  $OPTS            &&
  scons            &&
  prepare_install  &&
  scons   install
}
