   version stable 1.2 1.1
   require zlib
  category utility/editor
 attribute console library
 attribute broke
#   source $SOURCEFORGE_URL hspell/hspell-$VERSION.tar.gz
    source http://hspell.sourceforge.net/hspell-$VERSION.tar.gz
      info last 20120302
      info home http://hspell.sourceforge.net/
      info docs http://hspell.sourceforge.net/docs.html
      vurl http://hspell.sourceforge.net/download.html
      desc 'Hewbrew spelling checker'

build(){
 export CFLAGS+=' -fPIC'
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then opts --libdir=/usr/lib64; mkdir -pvm 755 $DESTDIR/usr/lib64
 else opts --libdir=/usr/lib;   mkdir -pvm 755 $DESTDIR/usr/lib
 fi
 default_build
}
