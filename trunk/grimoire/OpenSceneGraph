# broke because OpenSceneGraph verson 2.8.3 does not work
# with curl's newer headers.
# unknown what version of curl is required in order to compile
# OpenSceneGraph
# Not certain if OpenSceneGraph is multilib compatible or not.

    stable 2.8.3 2.8.2 2.8.1
   require LibVNCServer curl giflib librsvg openexr poppler xine-lib
  category graphic
 attribute library x11
#attribute multilib-fail
#attribute broke
    source http://www.openscenegraph.org/downloads/stable_releases/OpenSceneGraph-$VERSION/source/OpenSceneGraph-$VERSION.zip
      vurl http://www.openscenegraph.org/projects/osg/wiki/Downloads
      info home  http://www.openscenegraph.org/projects/osg
      info docs  http://www.openscenegraph.org/projects/osg/wiki/Support
  estimate 2000
      desc '3D graphics toolkit'

build(){
 export CXXFLAGS+=' -D__STDC_CONSTANT_MACROS'
 default_build
}
