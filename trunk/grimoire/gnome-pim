# gnomecal does not work?
# This might not even work since libmimedir can not longer be downloaded.

   version stable 1.4.6 1.91.1 1.91.0 1.90.2 1.90.1
   require libgnomeui libmimedir
  category utility/office utility/time
 attribute gnome
 attribute broke
#   source http://me.in-berlin.de/~jroger/gnome-pim/gnome-pim-$VERSION.tar.gz
    source $GNOME_URL sources/gnome-pim/${VERSION:0:3}/gnome-pim-$VERSION.tar.gz
      info home http://www.gnome.org/gnome-office/gnome-pim.shtml
      desc 'calendar tool and address book
This package contains a calendar tool with notifications
and multiple views, and an address book.'

build(){
case $VERSION in
 1.91.1) patch -p1 < $SCRIPT_DIR/gnome-pim.patch ;;
esac
 ./configure \
 --prefix=/usr \
 --sysconfdir=/etc \
 --localstatedir=/var \
 $OPTS &&
 make &&
 make install DESTDIR=$DESTDIR
}
