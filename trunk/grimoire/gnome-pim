    stable 1.91.1 1.91.0 1.90.2 1.90.1
   require libgnomeui libmimedir
  category utility/office utility/time
 attribute gnome
    source http://me.in-berlin.de/~jroger/gnome-pim/gnome-pim-$VERSION.tar.gz
  homepage http://www.gnome.org/gnome-office/gnome-pim.shtml
      desc 'gnome-pim contains a calendar tool and address book.
This package contains a calendar tool with notifications
and multiple views, and an address book.'

build(){
 patch -p1 < $SCRIPT_DIR/gnome-pim.patch
 ./configure          \
 --prefix=/usr        \
 --sysconfdir=/etc    \
 --localstatedir=/var \
 $OPTS                &&
 make                 &&
 prepare_install      &&
 make    install
}

