    stable 1.1 0.9b 0.9 0.8
    ignore 'b'
  category archive
 attribute console new
  homepage http://www.ibiblio.org/pub/Linux/system/backup
    source ftp://ftp.ibiblio.org/pub/linux/system/backup/mt-st-$VERSION.tar.gz
      desc 'mt-st provides magnetic tape control tools for SCSI tapes

Includes a mt-like program supporting additional commands using ioctls
specific to the Linux SCSI tape driver, and the program
stinit to define the SCSI tape devices in system startup scripts.'

build(){
 case $VERSION in
  0.9b) sed -i 's:<linux/qic117.h>:"qic117.h":' mtio.h ;;
 esac 

 make &&
 prepare_install &&
 make    install
}
