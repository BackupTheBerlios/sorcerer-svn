   version stable 2.8.8 2.8.6
   require dbus-glib gettext gtk+ libsexy
  optional Python  --enable-python        --disable-python  to enable use of Python scripting
  optional enchant --enable-spell=libsexy ''                for spelling support
  optional openssl --enable-openssl       --disable-openssl for secure connections
  optional perl    ''                     --disable-perl    to run xchat perl scripts
  optional tcl     --enable-tcl           --disable-tcl     to enable use of tcl scripting
      opts --disable-zvt
  category network/chat
 attribute console makej x11
    source http://www.xchat.org/files/source/${VERSION:0:3}/xchat-$VERSION.tar.bz2
  homepage http://www.xchat.org/
      desc 'IRC client'

build(){
 if  [[ $HOSTTYPE == x86_64 ]]; then
  if [[ $CFLAGS   =~ -m32   ]]
  then OPTS+=' --enable-tcl=/usr/lib'
  else OPTS+=' --enable-tcl=/usr/lib64'
  fi
 fi
 default_build
}
