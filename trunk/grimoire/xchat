   version stable 2.8.8
   require dbus-glib gettext gtk+ libsexy
  optional Python  --enable-python        --disable-python  to enable use of Python scripting
  optional enchant --enable-spell=libsexy ''                for spelling support
  optional openssl --enable-openssl       --disable-openssl for secure connections
  optional perl    ''                     --disable-perl    to run xchat perl scripts
  optional tcl     --enable-tcl           --disable-tcl     to enable use of tcl scripting
      opts --disable-zvt
  category network/chat
 attribute console makej x11
 attribute broke
    source http://www.xchat.org/files/source/${VERSION:0:3}/xchat-$VERSION.tar.xz
      info omit 20120529
      info last 20100529
      info home http://www.xchat.org/
      desc 'IRC client'

build(){
 if    [[ $HOSTTYPE == x86_64 ]]; then
  if   [[ $CFLAGS   =~ -m32   ]]
  then OPTS+=' --enable-tcl=/usr/lib'
  else OPTS+=' --enable-tcl=/usr/lib64'
  fi
 fi
 case $VERSION in
  2.8.8) sed -i 's:glib/gi18n.h:glib.h:' src/fe-gtk/sexy-spell-entry.c \
                                         src/common/dbus/dbus-plugin.c
         sed -i 's:glib/ghash.h:glib.h:' src/common/{text,servlist}.c
         sed -i 's:glib/gslist.h:glib.h:' src/common/xchat.h
         sed -i 's:glib/glist.h:glib.h:' src/common/xchat.h
         sed -i 's:glib/gutils.h:glib.h:' src/common/xchat.h
         sed -i 's:glib/giochannel.h:glib.h:' src/common/xchat.h
         sed -i 's:glib/gstrfuncs.h:glib.h:' src/common/xchat.h
         sed -i 's:glib/gprintf.h:glib.h:' src/common/xchat.h
         sed -i 's:glib/gprintf.h:glib.h:' src/common/modes.c
         sed -i 's:glib/gmarkup.h:glib.h:' src/common/util.c ;;
 esac
 default_build
}
