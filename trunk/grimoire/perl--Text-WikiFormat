     PNAME=${SPELL#perl--}
   VERSION=( "0.78" )
  CATEGORY="perl"
 ATTRIBUTE="perl-module new"
    SOURCE="C/CH/CHROMATIC/$PNAME-$VERSION.tar.gz"
       URL="http://www.cpan.org/authors/id/"
  HOMEPAGE="http://search.cpan.org/search?dist=$PNAME"
       REQ=( "perl" )
  ESTIMATE="20"
      DESC="$SPELL converts text from a simple Wiki markup language
to whatever your little heart desires, provided you can
