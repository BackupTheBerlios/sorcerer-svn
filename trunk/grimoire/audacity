   VERSION=( "1.3.2" "1.2.5" "1.2.4b" "1.2.4" "1.2.3" "1.2.2" "1.2.1" "1.2.0" )
    IGNORE="pre\|^1\.3\."
  CATEGORY="audio/editor"
 ATTRIBUTE="x11"
# Using developmental version of audacity, 1.3.x
# in order for it to be able to use wxGTK 2.6.x
    SOURCE="audacity/audacity-src-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://audacity.sourceforge.net"
# If libsamplerate is not a requirement
# then audacity uses internal libresample library
       REQ=( "libsndfile wxGTK"
             "flac::--without-flac:for flac audio codec support"
             "jackit:::for jackit audio output software mixer support"
             "ladspa_sdk::--without-ladspa:for ladspa audio processor support"
             "libid3tag::--without-id3tag:for mp3 id3 tag support"
             "libmad::--without-mad:for mad mpeg 3 codec support"
             "libsamplerate:--with-libsamplerate::for changing audio digitization rates"
             "libvorbis::--without-vorbis:for ogg-vorbis codec support"
             "portaudio:--with-portaudio=v18::for portaudio support"
             "soundtouch::--without-soundtouch:for pitch adjustment"
             "twolame::--without-twolame:for mp2 export support" )
      OPTS="--with-lib-preference=system"
# Unknown or unassociated switches
# --with-portmixer
# --with-rtaudio
# --with-nyquist
# --with-audiounits
# Probably need some more spells, anyone want those?

# lame support removed in audacity versions 1.3.x ?
#            "lame::--without-lame:for lame mpeg 3 codec support"

  ESTIMATE="5847"
      DESC="audacity is a soundfile editor.
audacity is a program that lets you manipulate digital audio waveforms.
In addition to letting you record sounds directly from within the program,
it imports many sound file formats, including WAV, AIFF, and MP3."
