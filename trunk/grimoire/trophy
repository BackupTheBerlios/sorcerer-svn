   VERSION=( "1.1.5" "1.1.3" )
  CATEGORY="game"
 ATTRIBUTE="new x11 broken"
# Not certain what ClanLib trophy is supposed to compile with
    SOURCE="trophy/trophy-$VERSION.tar.gz"
#   SOURCE="trophy/trophy-$VERSION-src.tar.gz"
  HOMEPAGE="http://trophy.sourceforge.net"
       URL="$SOURCEFORGE_URL"
       REQ="ClanLib"
  ESTIMATE="38"
      DESC="trophy is a top down racing game."


build_old() {
make_install()  {
  mkdir    -p                   /usr/share/trophy
  cp       -a       resources*  /usr/share/trophy/
  mkdir    -p                   /usr/bin
  install  -m 0755  trophy      /usr/bin/
}

cd       trophy
rm   -f  trophy
sed  -i  "s:-O3:$CXXFLAGS:
          s:/local::"  Makefile
make             &&
prepare_install  &&
   make_install
}
