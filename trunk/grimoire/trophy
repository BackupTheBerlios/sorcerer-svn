   VERSION=( "1.1.3" )
  CATEGORY="game"
 ATTRIBUTE="new x11"
    SOURCE="trophy/trophy-$VERSION-src.tar.gz"
  HOMEPAGE="http://trophy.sourceforge.net"
       URL="$SOURCEFORGE_URL"
       REQ="ClanLib"
  ESTIMATE="38"
      DESC="trophy is a top down racing game."


build() {
make_install()  {
  mkdir    -p                   /usr/share/trophy
  cp       -a       resources*  /usr/share/trophy
  mkdir    -p                   /usr/games
  install  -m 0755  trophy      /usr/games
}

cd       trophy
rm   -f  trophy
sed  -i  "s:-O3:$CXXFLAGS:
          s:/local::"  Makefile
make             &&
prepare_install  &&
   make_install
}
