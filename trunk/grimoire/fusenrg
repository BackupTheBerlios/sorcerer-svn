    stable 0.04
   require fuse
  category disk/file-system
 attribute console new
    source $SOURCEFORGE_URL fusenrg/fusenrg/fusenrg-$VERSION/fusenrg-$VERSION.tbz2
  homepage http://fusenrg.sourceforge.net/
  estimate 100
      desc 'fuse module for mounting nrg image files'

build(){
make &&
mkdir -p "$DESTDIR/usr/bin"
install -m 755 fusenrg "$DESTDIR/usr/bin/"
}
