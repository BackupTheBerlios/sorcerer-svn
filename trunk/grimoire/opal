# opal is also available from http://www.voxgratia.org/downloads.html
# However that version may be useless for use with ekiga
# 3.6.8 failed to compile 

   version stable 3.10.2 3.10.1 3.8.3 3.8.1 3.6.8
   require expat ffmpeg libtheora openldap ptlib speex x264
# gsm source is missing
# optional gsm
  optional libtheora
  optional x264
      opts --disable-static
case $VERSION in
 3.10.2)
      opts --disable-plugins ;;
 3.10.1)
      opts --disable-plugins ;;
 3.8.3)
      opts --disable-celt ;;
esac
  category utility
 attribute gnome library
#attribute makej multilib-concurrent
    source $GNOME_URL sources/opal/${VERSION:0:4}/opal-$VERSION.tar.xz
      info last 20110823
      info home http://www.ekiga.org/
 freshmeat none
      desc 'undescribed library used by ekiga'

build(){
# for ffmpeg version 0.6
#   CFLAGS+=' -D__STDC_CONSTANT_MACROS'
# CXXFLAGS+=' -D__STDC_CONSTANT_MACROS'
# export CFLAGS CXXFLAGS
 default_build
}

