    stable 2.2.11 2.2.8 2.2.6 2.2.5 2.2.4 2.2.3 2.2.2 2.2.1 2.2.0
   require openldap pwlib speex

  category utility
 attribute library
    source opal-$VERSION.tar.gz
#      url http://www.gnomemeeting.org/admin/downloads/latest/sources/sources/
#      url http://www.ekiga.org/admin/downloads/latest/sources/sources/
#      url http://seconix.com/misc/ekiga-2.0.3/
       url http://www.ekiga.org/admin/downloads/latest/sources/sources/
      vurl http://www.ekiga.org/index.php?rub=5&path=sources/sources
  homepage http://www.ekiga.org/
case $VERSION in
 2.2.11) require libtool-v1.5 ;;
esac
 freshmeat none
  estimate 300
      desc 'opal is undescribed library used by ekiga'
# oddly enough 2.2.2 must be compiled with default_build
# because it does not work correctly with DESTDIR
## sorcery no longer builds using DESTDIR, turned out bad.
# build()  {
#   default_build
# }

build(){
 case $VERSION in 
  2.2.11) export CFLAGS+=' -I/opt/libtool/include'
          export CXXFLAGS+=' -I/opt/libtool/include'
          export LDFLAGS+=' -L/opt/libtool/lib -R/opt/libtool/lib' ;;
 esac
 default_build
}
