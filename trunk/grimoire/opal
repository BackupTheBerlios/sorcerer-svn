# opal is also available from http://www.voxgratia.org/downloads.html
# However that version may be useless for use with ekiga
# 3.6.8 failed to compile 

with version stable 3.10.7 3.10.2 3.10.1
with base    expat ffmpeg libtheora openldap ptlib speex x264
# gsm source is missing
#with elect   gsm
with elect   libtheora
with elect   x264
with also    --disable-static
case $VERSION in
 3.10.7)
with also    --disable-plugins ;;
 3.10.2)
with also    --disable-plugins ;;
 3.10.1)
with also    --disable-plugins ;;
 3.8.3)
with also    --disable-celt ;;
esac
with role    utility
with trait   gnome library
#trait makej multilib-concurrent
with source  $GNOME_URL sources/opal/${VERSION:0:4}/opal-$VERSION.tar.xz
with info    last 20120824
with info    home http://www.ekiga.org/
with info    freecode none
with info    cite 'undescribed library used by ekiga'

build(){
# for ffmpeg version 0.6
#   CFLAGS+=' -D__STDC_CONSTANT_MACROS'
# CXXFLAGS+=' -D__STDC_CONSTANT_MACROS'
# export CFLAGS CXXFLAGS
 default_build
}

