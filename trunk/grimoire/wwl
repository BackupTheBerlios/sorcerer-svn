   VERSION=( "1.2" )
  CATEGORY="utility/ham"
 ATTRIBUTE="console"
    SOURCE="wwl-$VERSION.tar.gz"
  HOMEPAGE="http://freshmeat.net/projects/wwl"
       URL="http://www.ibiblio.org/pub/Linux/apps/ham"
 FRESHMEAT="wwl"
      DESC="World-Wide Maidenhead converter for hamradio.
Given two Maidenhead locators, WWL calculates distance and azimuth.
This is for ham-radio users."

build() {
sed  -i  "s/-O2/$CFLAGS/"  Makefile
make  &&
prepare_install  &&
install  -m 0755  wwl  /usr/bin
}
