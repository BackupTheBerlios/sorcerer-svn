    stable 0.99.6 0.99.5 0.99.4
    secure 0.99.5
   require hicolor-icon-theme libXtst ncurses readline xine-lib
  optional curl  '' ''              for downloading skins
  optional aalib '' --without-aalib for ascii art output menu
  optional lirc  '' ''              for LIRC remote control support
  category video/dvd video/player
 attribute x11
    source $SOURCEFORGE_URL xine/xine-ui/$VERSION/xine-ui-$VERSION.tar.xz
  homepage http://xine.sourceforge.net
  estimate 900
      desc 'interface to xine, a free video player'

build(){
 default_build &&
 install -vdm 755 /usr/share/applications &&
 ln -s /usr/share/xine/desktop/xine.desktop /usr/share/applications/
}
