   version stable 1.1 1.0
   require ocaml
  category development/interpreter
 attribute library
    source http://www.recherche.enac.fr/opti/facile/distrib/facile-$VERSION.tar.gz
      info good 20120606
      info last 20070328
      info home http://www.recherche.enac.fr/opti/facile/
      desc 'Functional Constraint Library implemented in Objective Caml'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then local LDIR=/usr/lib64
 else local LDIR=/usr/lib
 fi

 ./configure &&
 make &&
 mkdir -pvm 755         "$DESTDIR$LDIR/ocaml/facile" &&
 make install "FACILEDIR=$DESTDIR$LDIR/ocaml/facile"
}
