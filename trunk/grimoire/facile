# broke because ocaml is broke

   version stable 1.1 1.0
   require ocaml
  category development/interpreter
 attribute library new
 attribute broke
    source http://www.recherche.enac.fr/opti/facile/distrib/facile-$VERSION.tar.gz
      info home  http://www.recherche.enac.fr/opti/facile/
      desc 'Functional Constraint Library implemented in Objective Caml'

build(){
 ./configure &&
 make &&
 mkdir -p $DESTDIR/usr/lib/ocaml/facile &&
 make install "FACILEDIR=$DESTDIR/usr/lib/ocaml/facile"
}
