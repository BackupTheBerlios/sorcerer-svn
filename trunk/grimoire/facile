   VERSION=( "1.1" "1.0" )
  CATEGORY="development/interpreter"
 ATTRIBUTE="library new"
    SOURCE="facile-$VERSION.tar.gz"
       URL="http://www.recherche.enac.fr/opti/facile/distrib/"
  HOMEPAGE="http://www.recherche.enac.fr/opti/facile/"
       REQ="ocaml"
  ESTIMATE="110"
      DESC="facile is a Functional Constraint Library implemented in Objective Caml."

build()  {
  ./configure      &&
  make             &&
  prepare_install  &&
  make    install
}
