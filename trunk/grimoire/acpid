   VERSION=( "1.0.4" "1.0.3" "1.0.2" "1.0.1" )
    IGNORE="2001"
  CATEGORY="utility"
 ATTRIBUTE="console"
    SOURCE="acpid/acpid-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://acpid.sourceforge.net"
  ESTIMATE="11"
      DESC="acpid is the ACPI Event Daemon for power management.
acpid is a completely flexible and expandable mechanism 
for delivering ACPI events from the kernel to user-space.
It can be configured to perform any action at all when events occur, 
through regex matches and arbitrary action rules."

build() {
 install_config()  {
  mkdir    -p       /etc/init.d        /etc/acpi/events
  install  -m 755   debian/default.sh  /etc/acpi
  install           debian/default     /etc/acpi/events
  cp           $SCRIPT_DIR/acpid.sh    /etc/init.d
 }

 CF="CFLAGS=${CFLAGS} -g -Wall -DVERSION=\"\\\"${VERSION}\\\"\""
 MD="MAN8DIR=/usr/man/man8"

 make             "$CF"  &&
 prepare_install         &&
 make    install  "$MD"  &&
 install_config
}

pre_remove() {
 default_pre_remove
 /etc/init.d/acpid.sh  stop
}

