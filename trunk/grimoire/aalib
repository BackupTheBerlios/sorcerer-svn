# The stable release of aalib no longer used,
# because it fails compilation
# 1.4rc5 used instead
# However project ceased updating in Apr 25 2001
    stable 1.4rc5 1.2
  optional ncurses --with-curses-driver=yes --with-curses-driver=no use ncurses for output
  optional slang   --with-slang-driver=yes  --with-slang-driver=no  use slang for output
  optional gpm     ''                        ''                     for general purpose mouse driver support
  optional libX11  --with-x                 --without-x             for x11 mouse input and graphic output support

  category graphic/library
 attribute console library
case $HOSTTYPE in
  x86_64) attribute broke ;;
esac
    source $SOURCEFORGE_URL aa-project/aalib-$VERSION.tar.gz
  homepage http://aa-project.sourceforge.net/aalib
  estimate 500
      desc 'aalib is a portable ASCII art GFX library.'

build(){
 if [ $HOSTTYPE == x86_64 ]; then
  sed -i '155i   | x86_64-* \\'                  config.sub
  sed -i 's:i\[34567\]86):i\[34567\]86|x86_64):' config.sub
 fi

 export   CFLAGS+=' -fPIC'
 export CXXFLAGS+=' -fPIC'

 default_build
}
