    stable 1.0.22 1.0.21
   require gnome-print oaf
    ignore 'activation'
  category development
 attribute gnome library
       url $GNOME_URL
    source sources/bonobo/${VERSION:0:3}/bonobo-$VERSION.tar.bz2
  homepage http://www.gnome.org
case $VERSION in
 1.0.22) use_gcc gcc-v3.4 ;;
esac
  estimate 1100
      desc 'bonobo are CORBA interfaces for creating reusable components.
bonobo is a set of language and system independant
CORBA interfaces for creating reusable components,
controls and creating compound documents.'

build(){
./configure          \
--prefix=/usr        \
--localstatedir=/var \
--sysconfdir=/etc    &&
make                 &&
prepare_install      &&
make    install
}
