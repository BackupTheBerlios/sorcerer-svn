   VERSION=( "0.99.2" )
    IGNORE="dcd\|src\|exe"
  CATEGORY="cd"
 ATTRIBUTE="console"
    SOURCE="dcdplayer/dcd-$VERSION.tar.gz"
  HOMEPAGE="http://dcdplayer.sourceforge.net"
       URL="$SOURCEFORGE_URL"
       REQ="musicbrainz"
#      URL="http://www.technopagan.org/dcd"
# HOMEPAGE="http://www.technopagan.org/dcd"
  disable  archive
  disable  necropolis
  ESTIMATE="16"
      DESC="dcd is a simple command-line CD player."


build()  {
case  $VERSION  in
  0.99.2)  sed    -i      "s:/dev/cdroms/cdrom0:/dev/cdrom:
                           s:-lstdc++::
                           s:-O2::"  Makefile  ;;
esac
make             &&
prepare_install  &&
make    install
}
