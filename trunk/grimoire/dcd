    stable 0.99.2
   require libmusicbrainz
  category audio/cd
 attribute console
       url $SOURCEFORGE_URL
    source dcdplayer/dcd-$VERSION.tar.gz
  homepage http://dcdplayer.sourceforge.net
      desc 'dcd is a simple command-line CD player.'


build(){
case $VERSION in
 0.99.2) sed -i 's:/dev/cdroms/cdrom0:/dev/cdrom:
                 s:-lstdc++::
                 s:-O2::' Makefile ;;
esac
make &&
prepare_install &&
make    install
}
