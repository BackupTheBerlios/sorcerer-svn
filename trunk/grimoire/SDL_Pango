    stable 0.1.2
   require SDL pango

  category graphic/library
 attribute library x11
    source sdlpango/SDL_Pango-0.1.2.tar.gz
    source SDL_Pango-0.1.2-API-adds.patch
       url "$SOURCEFORGE_URL"
       url http://zarb.org/~gc/t/
  homepage http://sdlpango.sourceforge.net/
      opts --enable-static=no
  estimate 200
      desc 'SDL_Pango provides glue between pango and SDL for perl programs'

build(){
 case $VERSION in
  0.1.2) patch -p0 < $SOURCE_CACHE/SDL_Pango/0.1.2/${SOURCE[1]} ;;
 esac
 default_build
}
