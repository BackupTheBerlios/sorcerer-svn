# multilib-fail because net-snmp is multilib-fail

   version stable 1.0.7
   require Python automake curl net-snmp openldap
      opts --enable-static=no --disable-fatal-warnings
  category disk/file-system
 attribute console library makej multilib-fail
    source http://hg.linux-ha.org/glue/archive/glue-$VERSION.tar.bz2
      info home  http://www.linux-ha.org/wiki/Main_Page
      info guide http://www.linux-ha.org/doc/users-guide/users-guide.html
      desc 'cluster glue'

build(){
 [ -f configure ] || ./autogen.sh
 default_build
}
