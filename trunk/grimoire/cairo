# pango 1.22.0 requires cairo 1.7.6
# 1.6.4 gained requirement on pixman >= 0.10.0

# Making glitz optional mandatory so it can be optional
# for xulrunner and firefox if desired.

    stable 1.8.0 1.7.6 1.6.4 1.4.14 1.4.12
    secure 1.6.4 1.4.14 1.4.12
   require fontconfig glitz libXrender libpng pixman
  optional xcb-util --enable-xcb=yes   --enable-xcb=no   for xcb support
# optional glitz    --enable-glitz=yes --enable-glitz=no for OpenGL backend support
      opts --enable-glitz=yes
  category graphic/library
 attribute library
    source http://www.cairographics.org/releases/ \
           http://www.cairographics.org/snapshots/ \
           cairo-$VERSION.tar.gz
     opts --enable-static=no
  homepage http://www.cairographics.org/introduction
  estimate 800
      desc 'cairo provides a vector graphics library'
