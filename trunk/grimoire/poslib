   VERSION=( "1.0.5" )
    IGNORE="1.0.6"
  CATEGORY="dns\|pre"
 ATTRIBUTE="library broken"
# invalid gzip compression on 1.0.6
    SOURCE="posadis/poslib-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://www.posadis.org/poslib"
  ESTIMATE="198"
      DESC="poslib is a library which provides easy access to DNS."


build() {
CXXF="CXXFLAGS=$CXXFLAGS -Wall -funsigned-char -D_REENTRANT"

./configure  --build=$BUILD        \
             --prefix=/usr         \
             --sysconfdir=/etc     \
             --localstatedir=/var  \
             $OPTS                 &&
make        "$CXXF"                &&
prepare_install                    &&
make    install
}
