   VERSION=( "3.1.8-11" )
  CATEGORY="time"
 ATTRIBUTE="console"
    SOURCE="at_$VERSION.tar.gz"
       URL="ftp://ftp.debian.org/debian/pool/main/a/at"
       REQ="bison flex"
  HOMEPAGE="unknown"
  ESTIMATE="122"
      DESC="at including batch are periodic schedulers.
at contains at and batch which are daemons that allow processes
to be schedule to run at a later date or when system load permits."

build() {
init_install()  {
  install  -m 0755  $SCRIPT_DIR/atd            /etc/init.d
  install  -m 0644  -o root  -g root  at.deny  /etc
}

mkdir  -p  /var/spool/atjobs
SENDMAIL='#define  SENDMAIL  "/usr/sbin/sendmail"'

./configure                        \
--build=$BUILD                     \
--prefix=/usr                      \
--sysconfdir=/etc                  \
--localstatedir=/var               \
$OPTS                              &&
echo  "$SENDMAIL"  >>  config.h    &&
make                               &&
prepare_install                    &&
make    install                    &&
   init_install
}

post_install() {
  /lib/lsb/install_initd /etc/init.d/atd
  /etc/init.d/atd start
  true
}

pre_remove() {
  /lib/lsb/remove_initd /etc/init.d/atd
  /etc/init.d/atd stop
  true
}
