 sed -i 's:$(LDFLAGS):$(LDFLAGS) -lgdk-x11-2.0 -lgdk_pixbuf-2.0 -lgobject-2.0 -lglib-2.0 -lgtk-x11-2.0:' \
 apps/{alsamixer,kbd,player,plugincfg,recorder,transcoder,visualizer}/Makefile.in
