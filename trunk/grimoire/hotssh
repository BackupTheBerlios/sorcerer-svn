# Not certain if this installs properly

    stable 0.2.7
   require Python gtk+ openssh
      opts --enable-static=no
  category network/security
 attribute gnome
    source $GNOME_URL sources/hotssh/${VERSION:0:3}/hotssh-$VERSION.tar.bz2
      info home  http://projects.gnome.org/hotssh/
      desc 'an interface to openssh for gnome'

build(){
 python ./waf configure --prefix=$DESTDIR/usr &&
 python ./waf &&
 python ./waf install
}
