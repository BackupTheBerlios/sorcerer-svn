    stable 0.2.7 0.2.6 0.2.5
   require Python gtk+ openssh
  category network/security
 attribute gnome
       url $GNOME_URL
    source sources/hotssh/${VERSION:0:3}/hotssh-$VERSION.tar.bz2
  homepage http://projects.gnome.org/hotssh/
      opts --enable-static=no
      desc 'an interface to openssh for gnome'

build(){
python ./waf configure --prefix=/usr &&
python ./waf &&
prepare_install &&
python ./waf install
}
