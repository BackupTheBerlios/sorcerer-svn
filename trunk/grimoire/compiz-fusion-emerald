   VERSION=( "0.5.2" )
  CATEGORY="window-manager"
 ATTRIBUTE="x11"
    SOURCE="emerald-$VERSION.tar.bz2"
       URL="http://releases.compiz-fusion.org/${VERSION}/"
  HOMEPAGE='http://compiz-fusion.org/'
       REQ="compiz compiz-fusion-emerald-themes intltool libwnck"
  ESTIMATE="710"
 FRESHMEAT="none"
      DESC="emerald provides window decorator"

build()  {
  CFLAGS="$CFLAGS -D WNCK_WINDOW_MODAL_DIALOG=127"
  [  -f  autogen.sh  ]  &&
       ./autogen.sh
  default_build
}
