   VERSION=( "2.5.3" "2.5.2" "2.5.1" "2.5.0" "2.4.0" "2.3.1" "2.3.0" )
    IGNORE="theme\|iconset\|w32\|doc\|gtk2\|i18n\|rc\|TS\|plugins\|beta"
  CATEGORY="network/email network/news"
 ATTRIBUTE="client x11"
    SOURCE="sylpheed-claws/sylpheed-claws-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://www.sylpheed-claws.net/"
# HOMEPAGE="http://sylpheed-claws.sourceforge.net"
   PROVIDE="email-client"
# No spell for Mail-SpamAssassin in grimoire
#            "Mail-SpamAssassin:--enable-spamassassin-plugin::Build SpamAssassin plugin"
       REQ=( "gtk+ libetpan startup-notification"
             "aspell:--enable-aspell::for spell checking support"
             "clamav:--enable-clamav-plugin::Build Clam AntiVirus"
             "compface:::for compface support"
             "dillo:--enable-dillo-viewer-plugin::Build Dillo plugin for html mail rendering"
             "gpgme:--enable-gpgme::for encrypted email"
             "libgnomeprintui:::for printing of email in gnome"
             "openldap:::for ldap support"
             "openssl:--enable-ssl --enable-openssl::for pop3s and imaps support" )
# gtkmathview is not in the grimoire
#            "gtkmathview:--enable-mathml-viewer-plugin::Build MathML-Viewer plugin"
  EPROVIDE="sylpheed"
  ESTIMATE="2400"
#FRESHMEAT="sylpheed"
      DESC="sylpheed-claws is an e-mail client and news reader based on gtk+.
sylpheed-claws is a gtk+ based, lightweight, and fast email client.
Almost all commands are accessible with the keyboard.
It also has many features such as multiple accounts,
POP3/APOP support, thread display, and multipart MIME.
The messages are managed in the MH format, so you'll
be able to use it together with another mailer that
uses the MH format."
