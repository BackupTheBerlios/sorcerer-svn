# Disable introspection since introspection is broke with clutter
# broke because evolution is broke
 attribute broke

    stable 2.12.1 2.12.0 2.10.12

case $VERSION in
 2.12.1)
      opts --enable-introspection=no ;;
 2.12.0)
      opts --enable-introspection=no ;;
esac
   require brasero clutter-gtk exiv2
#  require libXtst libexif libgnomeui
  optional libgphoto2 '' --disable-gphoto2 for digital camera library
  category graphic/viewer
 attribute gnome
    source $GNOME_URL sources/gthumb/${VERSION:0:4}/gthumb-$VERSION.tar.bz2
  homepage http://www.gnome.org
      opts --enable-static=no
  estimate 6600
      desc 'image viewer and browser utility for GNOME'
