    stable 5.1.0
   require libpng
  category game
 attribute console
    source http://binaries.openttd.org/extra/grfcodec/$VERSION/grfcodec-$VERSION-source.tar.gz
  homepage http://www.openttd.org/en/download-grfcodec
      vurl http://www.openttd.org/en/download-grfcodec
  estimate 100
      desc 'codec to recompile the original Transport Tycoon Deluxe graphics'

build(){
 make prefix=/usr &&
 make prefix=/usr DESTDIR="$DESTDIR" install
}
