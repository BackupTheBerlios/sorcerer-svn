   VERSION=( "1.0.1" "1.0" "1.0rc1" "0.9.3" "0.9.2" )
    IGNORE="fdr"
  CATEGORY="ham"
 ATTRIBUTE="kde"
    SOURCE="kpsk/kpsk-$VERSION"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://sourceforge.net/projects/kpsk"
       REQ="db kdebase"
  ESTIMATE="131"
      DESC="kpsk is a KDE based hamradio psk-31 terminal and logbook.

kpsk is a PSK31 digital radio communications
application for use by licensed amateur radio
operators and designed specifically for the
KDE desktop environment.
"


build() {
sed  -i  "s:<db4/db.h>:<db.h>:"  kpsk/logcore.h

if    [  -f  /usr/lib/libdb-4.2.so  ];  then
  sed  -i  "s:4\.0:4.2:"  configure
  sed  -i  "s:dxccdb, dxccfile:dxccdb, NULL, dxccfile:"  kpsk/logcore.cpp
  sed  -i  "s:calldb, logfile:calldb, NULL, logfile:"    kpsk/logcore.cpp
fi

./configure  --build=$BUILD        \
             --prefix=/usr         \
             --sysconfdir=/etc     \
             --localstatedir=/var  \
             $OPTS                 &&
echo  "#define  HAVE_LIBDB_4_0"  >>  config.h  &&
make             &&
prepare_install  &&
make    install
}
