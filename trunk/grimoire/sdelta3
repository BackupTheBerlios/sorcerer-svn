   VERSION=( 20060216 )
  CATEGORY='archive'
 ATTRIBUTE='console'
    SOURCE="sdelta3-$VERSION.tar.bz2"
#      URL='http://ftp.berlios.de/pub/sdelta/files/'
       URL='ftp://ftp.berlios.de/pub/sdelta/files/'
  HOMEPAGE='http://sdelta.berlios.de'
       REQ=( 'bzip2 gzip p7zip'
             'libgcrypt:::to use libgcrypt instead of openssl to generate sha1sum'
             'openssl:::to use openssl instead of libgcrypt to generate sha1sum' )
  EPROVIDE='sdelta'
  ESTIMATE='14'
      DESC="sdelta3 is a dictionary compressor.
sdelta3's primary use is to reduce
the amount of bytes transferred
when source upgrades are downloaded.
It can reduce the average downloading amount
for upgrading source tarballs better than 90%

sdelta3 must be installed and the sdelta
feature enabled within sorcery for
Sorcerer boxes to request and download
source upgrade patches."

build() {
  make             &&
  prepare_install  &&
  make    install
}
