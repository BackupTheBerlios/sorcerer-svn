   version stable 0.2.33 0.2.32 0.2.31
   require libX11 libpng
      opts --enable-static=no
  category video/television
 attribute library
 attribute broke
    source $SOURCEFORGE_URL zapping/zvbi/$VERSION/zvbi-$VERSION.tar.bz2
  homepage http://zapping.sourceforge.net
  estimate 800
      desc 'teletext decoder library'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then opts --x-libraries=/usr/lib64
 else opts --x-libraries=/usr/lib
 fi
 default_build
}
