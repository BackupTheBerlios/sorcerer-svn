. $GRIMOIRE/linux/PRE_BUILD
  # Although rsbac provides support for using pax
  # there is a rejected hunk when 
  # both pax and rsbac patches are applied.
# cat          $(  guess_filename  ${SOURCE[1]}  )  |
# patch   -p1
unpack                           ${SOURCE[2]}
gzip    -cd  $(  guess_filename  ${SOURCE[3]}  )  |
patch   -p1
SCX=4
while  [  -n  "${SOURCE[$SCX]}"  ]
do  cat  $(  guess_filename  ${SOURCE[$SCX]}  )  |
    patch  -p1
    ((  SCX++  ))
done
sed  -i  "s:^EXTRAVERSION:# EXTRAVERSION:"  Makefile
