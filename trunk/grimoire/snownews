   VERSION=( "1.5.7" )
  CATEGORY="rss"
 ATTRIBUTE="server console new"
    SOURCE="snownews-$VERSION.tar.gz"
       URL="http://kiza.kcore.de/software/snownews/download/"
  HOMEPAGE="http://kiza.kcore.de/software/snownews/"
       REQ="libxml2 ncurses"
  ESTIMATE="38"
      DESC="snownews is a text mode RSS/RDF newsreader.
It supports all versions of RSS natively,
and other feed formats via plugins."

build()  {
  grep   -lr  "\-lintl"   *  |  xargs  -l64  sed  -i  "s:-lintl::g"
  grep   -lr  "\-liconv"  *  |  xargs  -l64  sed  -i  "s:-liconv::g"
  default_build
}
