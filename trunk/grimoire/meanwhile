   version stable 1.0.2
   require doxygen glib
      opts --disable-static
  category network/chat
 attribute library makej multilib-concurrent
    source $SOURCEFORGE_URL meanwhile/meanwhile/$VERSION/meanwhile-$VERSION.tar.gz
      info last 20051230
      info home http://meanwhile.sourceforge.net
      desc 'an open implementation of the Lotus Sametime Community Client protocol'

build(){
 case $VERSION in
  1.0.2) grep -lr "<glib/" * | xargs -r --max-lines=32 \
         sed -i 's:#include <glib/ghash.h>:#include <glib.h>:
                 s:#include <glib/glist.h>:#include <glib.h>:
                 s:#include <glib/gstring.h>:#include <glib.h>:' ;;
 esac
 default_build
}

current(){
 case $VERSION in
  1.0.2) ! grep -q '#include <glib/glist.h>' /usr/include/meanwhile/mw_st_list.h ;;
 esac
}
