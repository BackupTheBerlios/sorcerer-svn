# Starting with 0.4.1 it is possible to build gmanedit
# with only gtk+ and not the gnome requirements

    stable 0.4.2
#     last 20081111
   require libgnomeui
  category utility/editor
 attribute gnome
    source $SOURCEFORGE_URL gmanedit2/gmanedit/gmanedit-$VERSION/gmanedit-$VERSION.tar.gz
      home http://sourceforge.net/projects/gmanedit2/
  estimate 100
      desc 'gtk+ manual page editor'
