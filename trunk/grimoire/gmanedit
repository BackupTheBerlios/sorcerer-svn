# Starting with 0.4.1 it is possible to build gmanedit
# with only gtk+ and not the gnome requirements
    stable 0.4.1 0.4
   require libgnomeui

  category utility/editor
 attribute gnome
    source gmanedit2/gmanedit-$VERSION.tar.gz
       url "$SOURCEFORGE_URL"
  homepage http://sourceforge.net/projects/gmanedit2/
  estimate 100
      desc 'gmanedit is a gtk+ manual page editor.'
