   VERSION=( "1.34.7" "1.34.0" "1.32" "1.30" "1.28" "1.26" "1.24" "1.22" "1.20" )
  CATEGORY="security"
 ATTRIBUTE="console broken"
# 1.34.7 has:
# matchpathcon.lo: In function `set_matchpathcon_flags':
# matchpathcon.c:(.text+0x76): undefined reference to `___tls_get_addr'
#
# Probably should not happen since glibc is compiled with TLS support.
# and the kernel headers are from linux 2.6.x

# Once installed and linked with it may be dangerous to remove.
# May be possible to break a glibc linked with libselinux by
# force removing libselinux.
    SOURCE="libselinux-$VERSION.tgz"
  HOMEPAGE="http://www.nsa.gov/selinux/"
       URL="http://www.nsa.gov/selinux/archives/"
       REQ="libsepol"
  ESTIMATE="127"
      DESC="libselinux provides a library and simple utilities that use it."

build()  {
#sed  -i  "s/#define DEFAULT_POLICY_VERSION 15/#define DEFAULT_POLICY_VERSION 16/" src/policyvers.c  &&
  make  "CFLAGS=$CFLAGS"  &&
  prepare_install  &&
  make    install
}
