# Does not support DESTDIR type install

# if gtk+ is an absolute requirement
# then oss requires an attribute of x11 isntead of console

   version stable v4.2-build2002 v4.2-build2001 v4.2-build2000 v4.1-build1052b
   require gtk+
  category audio
 attribute linux-26-module x11 broke
 attribute broke
    source http://www.4front-tech.com/developer/sources/stable/gpl/oss-$VERSION-src-gpl.tar.bz2
  homepage http://www.opensound.com/
      opts --enable-libsalsa=YES
      opts --config-midi=YES
#immutable /usr/lib/oss/etc/installed_drivers
# volatile /usr/lib/oss/etc/installed_drivers
#immutable /usr/lib/oss/etc/mixer.save
# volatile /usr/lib/oss/etc/mixer.save
      desc 'Open Sound System GPL version 4'

build(){
unset LDFLAGS
mkdir ../build_dir
cd    ../build_dir
../*/configure &&
make &&
make install
}
