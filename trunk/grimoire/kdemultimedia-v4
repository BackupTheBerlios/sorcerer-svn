# cdparanoia III-10.2.src headers are incomplete and cause compile error

   inherit kde-v4
   require kdelibs-v4
# optional cdparanoia
  optional flac
  optional lame
  optional libmusicbrainz
  optional libtunepimp
  optional libvorbis
  optional taglib
  optional xine-lib
  category audio/cd audio/mixer
  estimate 1000
      desc 'CD, audio, video players and audio mixer'

build(){
 case $VERSION in
  4.1.2) echo 'SET(CDPARANOIA_FOUND FALSE)' > cmake/modules/FindCdparanoia.cmake ;;
 esac
 kde_build
}
