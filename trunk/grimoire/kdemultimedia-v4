# After next compile double check lddof for libmusicbrainz3

inherit kde-v4
  CATEGORY='audio/cd audio/mixer'
        REQ=( 'kdelibs-v4'
              'cdparanoia:::to burn CDs'
              'flac:::for the flac lossless audio codec'
              'lame:::to encode mp3s'
              'libmusicbrainz:::for downloading music metadata'
              'libtunepimp:::for musicbrainz tagging in Juk'
              'libvorbis:::for the ogg vorbis audio codec'
              'taglib:::for reading and editing metadata of audio files' )
 CONFLICTS='kdemultimedia'
  ESTIMATE='1100'
      DESC='kdemultimedia-v4 contains applications like a CD player and mixer.'
