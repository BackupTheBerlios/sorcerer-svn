    stable 0.2.5
   require imlib2

  category graphic
 attribute x11 new
    source $VERSION/habak-$VERSION.tar.gz
       url http://download.gna.org/fvwm-crystal/habak/
  homepage https://gna.org/projects/fvwm-crystal/
  estimate 10
      desc 'habak is a utility for setting the desktop background or wallpaper'

build(){
make            &&
prepare_install &&
install -vm 755 habak /usr/bin
}
