   VERSION=( "0.2.5" )
  CATEGORY="graphic"
 ATTRIBUTE="x11 new"
    SOURCE="habak-$VERSION.tar.gz"
       URL="http://download.berlios.de/fvwm-crystal"
  HOMEPAGE="http://fvwm-crystal.berlios.de/"
       REQ="imlib2"
  ESTIMATE="13"
      DESC="habak is a utility for setting the desktop background or wallpaper"

build() {
make             &&
prepare_install  &&
install -m 0755 habak /usr/bin
}
