    stable 0.2.5
   require imlib2
  category graphic
 attribute x11
    source http://download.gna.org/fvwm-crystal/habak/$VERSION/habak-$VERSION.tar.gz
      home http://gna.org/projects/fvwm-crystal/
      desc 'utility for setting the desktop background or wallpaper'

build(){
 make &&
 mkdir  -pvm 755       $DESTDIR/usr/bin &&
 install -vm 755 habak $DESTDIR/usr/bin
}
