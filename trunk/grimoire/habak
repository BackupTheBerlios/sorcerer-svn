    stable 0.2.5
   require imlib2
  category graphic
 attribute x11
    source http://download.gna.org/fvwm-crystal/habak/$VERSION/habak-$VERSION.tar.gz
  homepage https://gna.org/projects/fvwm-crystal/
      desc 'habak is a utility for setting the desktop background or wallpaper'

build(){
make &&
prepare_install &&
install -vm 755 habak /usr/bin
}
