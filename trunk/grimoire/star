    stable 1.5.1 1.5 1.4.3
   require e2fsprogs acl
  category archive
 attribute console
    source ftp://ftp.berlios.de/pub/star/star-$VERSION.tar.bz2
  homepage http://cdrecord.berlios.de/old/private/star.html
  estimate 2100
      desc 'fast POSIX-compliant tar archiver'

build(){
grep -rl linux/ext2_fs.h * | xargs chmod 644
grep -rl linux/ext2_fs.h * | xargs sed -i s:linux/ext2_fs.h:ext2fs/ext2_fs.h:
make &&
mkdir -pv 755         $DESTDIR/opt/star &&
make install INS_BASE=$DESTDIR/opt/star
}
