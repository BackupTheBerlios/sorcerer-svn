   VERSION=( "2.0.0-rc3" "2.0.0-rc2" )
  CATEGORY="network file-transfer"
 ATTRIBUTE="client console"
    SOURCE="hping$VERSION.tar.gz"
       URL="http://www.hping.org"
  HOMEPAGE="http://www.hping.org"
  ESTIMATE="76"
      DESC="hping is a network tool for sending custom packets.
hping is a network tool able to send custom ICMP/UDP/TCP packets
and to display target replies like ping does with ICMP replies.
It handles fragmentation and arbitrary packet body and size,
and can be used to transfer files under supported protocols.

Using hping, you can:
	test firewall rules,
	perform [spoofed] port scanning,
	test net performance using different protocols,
	packet size,
	TOS (type of service),
	and fragmentation,
	do path MTU discovery,
	tranfer files,
	perform traceroute-like actions under different protocols,
	fingerprint remote OSs,
	audit a TCP/IP stack, etc.
hping is a good tool for learning TCP/IP."

build() {

patch   bytesex.h << EOF
10a11
>       || defined(__x86_64__) \\
EOF

./configure  --build=$BUILD        \
             --prefix=/usr         \
             --sysconfdir=/etc     \
             --localstatedir=/var  \
             $OPTS                 &&
make         "CCOPT=$CFLAGS"       \
             "PCAP=$LDFLAGS"       &&
prepare_install                    &&
mkdir  -p                         /usr/man/man8  &&
make    install  "INSTALL_MANPATH=/usr/man"      &&
gzip   -9  /usr/man/man8/hping2.8                &&
ln     -s                hping2.8.gz             \
           /usr/man/man8/hping.8.gz
}
