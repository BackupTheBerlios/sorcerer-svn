   VERSION=( 0.11.56 0.11.55 0.11.54 0.11.51 )
    IGNORE='bashcomp\|^0\.11\.5[2-3]'
  CATEGORY='utility/file-manager'
 ATTRIBUTE='x11'
    SOURCE="gentoo/gentoo-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://www.obsession.se/gentoo'
       REQ=( 'automake gtk+-v1.2 file'
             'gamin:::for automatic filesystem modification notice' )
  ESTIMATE='950'
      DESC='gentoo is a gtk+-v1.2 based file manager.
gentoo is a modern, powerful, flexible, and
utterly configurable file manager for UNIX
systems, written using the gtk+-v1.2 toolkit.
It aims to be 100% graphically configurable;
there is no need to edit config files by hand
and then restart the application.
Gentoo is somewhat inspired in its
look & feel by the classic Amiga program
DirectoryOpus 4, but is not a clone.'

build() {
rm  -f  configure
autoreconf -i
automake   -afc
./configure              \
--prefix=/usr            \
--sysconfdir=/etc/gentoo \
--localstatedir=/var     &&
make             &&
prepare_install  &&
make    install  &&
mkdir    -p                      /usr/share/pixmaps  &&
install  -m 644 icons/gentoo.png /usr/share/pixmaps
}
