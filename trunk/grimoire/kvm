    stable 88 87 86
   require alsa-lib bluez-libs curl cyrus-sasl gnutls pciutils zlib
  optional SDL '' '--disable-sdl'
# --disable-gfx-check'
      opts --audio-drv-list=alsa
      opts --audio-card-list=ac97
  category development/emulator
 attribute console
    source $SOURCEFORGE_URL kvm/kvm/$VERSION/kvm-$VERSION.tar.gz
  homepage http://www.linux-kvm.org/page/Main_Page
  eprovide qemu
  estimate 300
      desc 'userspace tools for kernel virtual machine emulation
kvm is a fork of qemu
This is the developmental branch.
qemu-kvm is the stable branch'

build(){
# Removed the following file so that kernel modules are not built
# since kernel modules are already provided in the vanillia linux kernel.
rm -f kvm/kernel/configure
./configure      \
--disable-werror \
--prefix=/usr    \
$OPTS &&
make  &&
make install DESTDIR=$DESTDIR
}
