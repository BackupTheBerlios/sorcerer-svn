   version stable 1.5.8 1.5.7
      info last  20101103
   require MesaLib
#  require libXi libXmu
  category graphic/library
 attribute library x11
    source $SOURCEFORGE_URL glew/glew/$VERSION/glew-$VERSION.tgz
      info home  http://glew.sourceforge.net/
      info mail  'http://sourceforge.net/mail/?group_id=67586'
  estimate 50
      desc 'an OpenGL extension wrangler library'

build(){
 make &&
 mkdir -pvm 755 $DESTDIR/usr/lib/pkgconfig &&
 make install GLEW_DEST=$DESTDIR/usr &&
 rm -f $DESTDIR/usr/lib/libGLEW.a
}
