    stable 1.5.2 1.5.0
   require MesaLib
#  require libXi libXmu
  category graphic/library
 attribute library x11
case $VERSION in
 1.5.0)
    source $SOURCEFORGE_URL glew/glew/$VERSION/glew-$VERSION-src.tgz ;;
     *)
    source $SOURCEFORGE_URL glew/glew/$VERSION/glew-$VERSION.tgz ;;
esac
  homepage http://glew.sourceforge.net/
      desc 'an OpenGL extension wrangler library'

build(){
make &&
prepare_install &&
make    install
}
