   version stable 7.8.352 7.8.116 v7.6.112
   require zlib
  optional MesaLib '' --without-GLUT for OpenGL support
  optional SDL '' '' for SDL x11 output support
  optional SDL_mixer '' '' for SDL audio output support
  optional fftw --with-fftw --without-fftw for fourier transformation
  optional freetype --with-freetype --without-freetype for freetype font support
  optional gdbm '' --without-gdbm for gdbm support
  optional giflib '' --without-gif for uncompressed gif graphic image support
  optional gtk+ '' --without-GTK for x11 output using the gtk+ library
  optional gtkglarea '' '' for gtk+ output using OpenGL
  optional gmp '' --without-gmp for bignums support
  optional gnome-panel
  optional jpeg '' --without-jpeglib for jpeg graphic image support
  optional lame '' '' for mp3 encoding support
  optional libffi
  optional librsvg '' --without-svg for svg support
  optional mysql '' --without-mysql for mysql support
  optional nasm '' --without-nasm for nasm support
  optional nettle --with-nettle --without-nettle for encryption support
  optional openssl '' '' for encryption support
  optional pcre '' --without-pcre for perl regular expression support
  optional postgresql '' --without-postgres for postgresql support
  optional sane-backends '' --without-sane for scanner support
  optional tiff '' --without-tifflib for tiff graphic image support
  optional unixODBC '' '' for windows database access 
      opts --without-ffmpeg
