    stable 0.13.6 0.12.4 0.12.3 0.12.2
   require aspell gst-plugins-good libglademm pcre

    ignore 'alpha'
  category video/editor
 attribute x11
    source subtitleeditor-$VERSION.tar.gz
       url http://kitone.free.fr/subtitleeditor/files/
  homepage http://kitone.free.fr/subtitleeditor/
  estimate 300
      desc 'subtitleeditor is a gtk+ video subtitle editor.'

build(){
 case $VERSION in
  0.13.6) find . -name \*.cc | xargs -r --max-lines=64 sed -i '1i#include <cstring>' ;;
 esac
 default_build
}
