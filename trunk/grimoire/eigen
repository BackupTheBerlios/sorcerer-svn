   VERSION=( 1.0.5 )
    IGNORE='alpha'
  CATEGORY='utility/math'
 ATTRIBUTE='library'
    SOURCE="eigen-$VERSION.tar.gz"
  HOMEPAGE='http://eigen.tuxfamily.org/'
       URL='http://download.tuxfamily.org/eigen/'
       REQ='cmake'
      OPTS='-DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_BUILD_TYPE=Release'
  ESTIMATE='10'
      DESC='eigen is vector and matrix math library'

build(){
 mkdir build
 cd    build
 cmake $OPTS ..  &&
 make            &&
 prepare_install &&
 make    install
}
