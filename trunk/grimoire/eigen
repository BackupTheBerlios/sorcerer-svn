# This has a weird tarball name and can not be tracked,
# because the tarball name is just the $VERSION.tar.bz2

    stable 2.0.9 2.0.6 2.0.2 2.0.1 2.0.0 1.0.5
   require cmake
  category utility/math
 attribute library 
#   source http://download.tuxfamily.org/eigen/eigen-$VERSION.tar.bz2
    source http://bitbucket.org/eigen/eigen2/get/$VERSION.tar.bz2
      vurl 'http://eigen.tuxfamily.org/index.php?title=Main_Page#Download'
  homepage http://eigen.tuxfamily.org/
      opts -DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4
      opts -DCMAKE_INSTALL_RPATH:PATH=/opt/kde4/lib:/opt/kde4/lib64
      opts -DCMAKE_SKIP_BUILD_RPATH:BOOL=TRUE
      opts -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=TRUE
      opts -DCMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=TRUE
      opts -DCMAKE_BUILD_TYPE=Release
      desc 'vector and matrix math library'

build(){
mkdir build
cd    build
cmake $OPTS ..  &&
make            &&
prepare_install &&
make    install
}
