   VERSION=( 1.0.5 )
    IGNORE='alpha'
  CATEGORY='utility/math'
 ATTRIBUTE='library'
    SOURCE="eigen-$VERSION.tar.gz"
  HOMEPAGE='http://eigen.tuxfamily.org/'
       URL='http://download.tuxfamily.org/eigen/'
       REQ='cmake'
      OPTS='-DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4
            -DCMAKE_INSTALL_RPATH=/opt/kde4/lib
            -DCMAKE_SKIP_BUILD_RPATH:BOOL=TRUE
            -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=TRUE
            -DCMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=TRUE
            -DCMAKE_BUILD_TYPE=Release'
  ESTIMATE='10'
      DESC='eigen is vector and matrix math library'

build(){
 mkdir build
 cd    build
 cmake $OPTS ..  &&
 make            &&
 prepare_install &&
 make    install
}
