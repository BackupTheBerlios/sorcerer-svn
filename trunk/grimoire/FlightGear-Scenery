  estimate 1800
      desc 'FlightGear-Scenery provides additional locations for FlightGear.'

build(){
 if   [ $SPELL == FlightGear-Scenery ]
 then default_build
 else
  prepare_install &&
  true
  cp -av * /usr/share/FlightGear/Scenery/
 fi
}
