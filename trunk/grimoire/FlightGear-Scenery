if [ $SPELL == FlightGear-Scenery ]; then
 attribute profile
   require fgfs-base
  optional FlightGear-Scenery-BasePackage '' '' for additional scenery
  optional FlightGear-Scenery-Honolulu '' '' for additional scenery
  optional FlightGear-Scenery-LasVegas '' '' for additional scenery
  optional FlightGear-Scenery-London '' '' for additional scenery
  optional FlightGear-Scenery-NewYork '' '' for additional scenery
  optional FlightGear-Scenery-Paris '' '' for additional scenery
  optional FlightGear-Scenery-SharedModels '' '' for additional scenery
  optional FlightGear-Scenery-Tokyo '' '' for additional scenery
  optional FlightGear-Scenery-WashintonDC '' '' for additional scenery
fi
  estimate 1800
      desc 'FlightGear-Scenery provides additional locations for FlightGear.'

build(){
 if   [ $SPELL == FlightGear-Scenery ]
 then default_build
 else
  prepare_install &&
  true
  cp -av * /usr/share/FlightGear/Scenery/
 fi
}
