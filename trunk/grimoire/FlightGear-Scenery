  ESTIMATE='1800'
      DESC='FlightGear-Aircraft provides additional Aircraft for FlightGear.'

if ! [ $SPELL == FlightGear-Scenery ]; then
 unset REQ
       REQ='FlightGear-Scenery-SharedModels'
fi


build(){
 if   [ "$SPELL" == FlightGear-Scenery ]
 then default_build
 else
  prepare_install &&
  true
  cp -av * /usr/share/FlightGear/Scenery/
 fi
}
