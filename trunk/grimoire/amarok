   VERSION=( "1.4.7" "1.4.6" "1.4.5" "1.4.4" "1.4.3" "1.4.2" "1.4.1" "1.4.0a" "1.4.0" "1.3.8" )
    IGNORE="PHP\|beta\|1\.3\.9"
  CATEGORY="audio/player kde-extragear"
 ATTRIBUTE="gui kde"
#   SOURCE="amarok/amarok-$VERSION.tar.bz2"
#      URL="$SOURCEFORGE_URL"
#   SOURCE="amarok-$VERSION.tar.bz2"
#      URL="http://mirrors.ibiblio.org/pub/mirrors/kde/stable/amarok/$VERSION/src/"
    SOURCE="stable/amarok/$VERSION/src/amarok-$VERSION.tar.bz2"
       URL="$KDE_URL"
  HOMEPAGE="http://amarok.kde.org"
       REQ=( "kdelibs ruby sqlite taglib"
             "faad2:--with-mp4v2::for MP4/AAC tag reading and writing, remember to compile faad2 with libmp4v2"
             "gst-plugins-base::--without-gstreamer:to use GStreamer as multimedia backend, recomended"
             "k3b:::for CD-burning support"
             "kdebase:::to install amaroK side bar to konqueror"
             "kdemultimedia:::for playing audio CDs"
             "libgpod:--with-libgpod:--without-libgpod:for ipod support"
             "mysql:--enable-mysql:--disable-mysql:build amaroK with MySQL support"
             "postgresql:--enable-postgresql:--disable-postgresql:build amaroK with PostgreSQL support"
             "xine-lib::--without-xine:to use xine-lib as multimedia backend, also recomended"
             "xmms:--with-xmms:--without-xmms:XMMS visualization support" )
#            "arts::--without-arts:to use aRts as multimedia backend, avoid using arts"
  ESTIMATE="3000"
 FRESHMEAT="amarok"
#            "sqlite:--without-included-sqlite::to use system SQlite or amaroK SQlite"
# amarok does not compile with --enable-final
      OPTS="--disable-debug --without-included-sqlite"
[ $HOSTTYPE == "x86_64" -a $VERSION == "1.4.3" ]  &&
OPTS="$OPTS --enable-libsuffix=none"
      DESC="amarok is a music player for Linux and Unix with an intuitive interface.
Its interface uses a powerful \"browser\" metaphor that allows you to create playlists 
that make the most of your music collection." 
