   VERSION=( "0.7.5" "0.7.4" "0.7.3" "0.7.2" "0.7.1" )
    IGNORE="LXP"
  CATEGORY="window-manager"
 ATTRIBUTE="x11"
    SOURCE="idesk/idesk-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://idesk.sourceforge.net/"
       REQ="fontconfig imlib2"
  ESTIMATE="230"
      DESC="idesk provides icons on an X11 desktop.
Its features include transparency,
configurable actions to run shell commands,
PNG, SVG (in old versions), GIF image support,
and XFT anti-aliased fonts.
Other features include Imlib2 support (Imlib is deprecated),
pseudo-transparency, the ability to only show captions on
mouseover, tooltip on mouseover, startup notification, and more."

build() {
rm  -f  configure
autoreconf -i
automake   -afc
default_build
}
