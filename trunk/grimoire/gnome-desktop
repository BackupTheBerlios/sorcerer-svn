with version   stable 3.8.1 3.8.0.1 3.8.0 3.6.3
with version unstable 3.8.1
with base    GConf Imaging glib-networking gnome-doc-utils gtk+-3.0 imake itstool libxkbfile startup-notification xorg-cf-files
with also    --enable-static=no --enable-gtk-doc=no --enable-gtk-doc-html=no --enable-gtk-doc-pdf=no
with role    window-manager
with trait   gnome library makej multilib-concurrent
with source    stable $GNOME_URL sources/gnome-desktop/${VERSION:0:3}/gnome-desktop-$VERSION.tar.xz
with source  unstable $GNOME_URL sources/gnome-desktop/${VERSION:0:3}/gnome-desktop-$VERSION.tar.xz
with info    last 20130417
with info    home http://www.gnome.org
with info    cite 'API lib for gnome'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
