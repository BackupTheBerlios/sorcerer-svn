   version   stable 3.4.2 3.4.1 3.4.0
   version unstable 3.6.0
   require GConf Imaging glib-networking gnome-doc-utils gtk+-v3 imake startup-notification xorg-cf-files
      opts --enable-static=no --enable-gtk-doc=no --enable-gtk-doc-html=no --enable-gtk-doc-pdf=no
  category window-manager
 attribute gnome library makej multilib-concurrent
    source   stable $GNOME_URL sources/gnome-desktop/${VERSION:0:3}/gnome-desktop-$VERSION.tar.xz
    source unstable $GNOME_URL sources/gnome-desktop/${VERSION:0:3}/gnome-desktop-$VERSION.tar.xz
      info last 20120925
      info home http://www.gnome.org
      desc 'API lib for gnome'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
