  stable 3-20080707 3-20080411 2-20040729
    IGNORE='2002'
  CATEGORY='window-manager'
#ATTRIBUTE='x11'
 ATTRIBUTE='x11 broke'
    SOURCE="ion-$VERSION.tar.gz"
  HOMEPAGE='http://modeemi.cs.tut.fi/~tuomov/ion/'
       URL='http://iki.fi/tuomov/dl/'
      VURL='http://modeemi.cs.tut.fi/~tuomov/ion/download.html'
       REQ='libXft libXinerama libtool lua'
     WMBIN='/usr/bin/ion'
  ESTIMATE='720'
      DESC='ion is a keyboard-friendly tiling window manager
ion, based on PWM, is a keyboard-friendly window manager
with a very text-editorish interface and no overlapping windows.'


build(){
echo "EXTRA_LIBS += `xft-config --libs`"       >> system.mk
echo "EXTRA_INCLUDES += `xft-config --cflags`" >> system.mk
echo "DEFINES += -DCF_XFT"                     >> system.mk
sed -i "s:LUA_PATH=/usr/local:LUA_PATH=/usr:
         s:LUA_DIR=/usr/local:LUA_DIR=/usr:"      system.mk

PRE='PREFIX=/usr'
ETC='ETCDIR=/etc/ion'

make    depend  $PRE $ETC &&
make            $PRE $ETC &&
prepare_install           &&
mkdir  -p       /etc/ion  &&
make    install $PRE $ETC
}
