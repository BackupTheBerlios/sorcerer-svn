#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 510
# Provides: gui_login
# Short-Description: Reboots after sorcerer-sentient installs
### END INIT INFO

. /lib/lsb/init-functions
only try-restart

try_restart(){
 dispel_restart(){
  while pgrep -u root "^cast$"
  do    sleep 30
  done
  augur queue dispel/immune-boot-sentient
  dispel
  while pgrep -u root "^dispel$"
  do    sleep 15
  done
  /etc/init.d/kdm status &>/dev/null ||
  shutdown -r now
 }

 if [ -f /etc/sorcery/log/version/immune-boot-sentient ]
 then dispel_restart &
 fi
}
