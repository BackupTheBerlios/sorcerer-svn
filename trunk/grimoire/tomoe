# Does this have a compile requirement on subversion
# but does not link to it?
# tomoe 0.6.0 has unavoidable requirement on subversion

    stable 0.6.0
   require subversion
  category input
 attribute console library
    source $SOURCEFORGE_URL tomoe/tomoe/tomoe-$VERSION/tomoe-$VERSION.tar.gz
  homepage http://sourceforge.jp/projects/tomoe/
      opts --disable-dict-ruby --without-ruby --enable-static=no
#     opts --disable-dict-ruby --without-ruby --without-svn-lib --enable-static=no
  estimate 900
      desc 'handwriting identification library'

build(){
case $VERSION in
0.6.0) export CFLAGS+=' -I/usr/include/apr-1/' ;;
esac
default_build
}
