   version stable 20070708
   require fuse glib zlib
  category disk/file-system
 attribute console
    source http://www.ubiz.ru/dm/fuseiso-$VERSION.tar.bz2
      info good 20120607
      info last 20070708
      info home http://www.ubiz.ru/dm/
      desc 'fuse module for mounting iso9660 image files'

build(){
 if [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then export LDFLAGS+=' -L/lib64'
 else export LDFLAGS+=' -L/lib'
 fi
 default_build
}
