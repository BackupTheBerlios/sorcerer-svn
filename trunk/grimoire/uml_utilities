      desc 'tools for user mode linux'

build(){
 case $HOSTTYPE in
  x86_64) sed -i 's:/usr/bin:/bin:; s:/usr/lib:/lib64:' Makefile ;;
       *) sed -i 's:/usr/bin:/bin:; s:/usr/lib:/lib:'   Makefile ;;
 esac
 make all install "DESTDIR=$DESTDIR"
}
