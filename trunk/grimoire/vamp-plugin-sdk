   version stable 2.4
   require libsndfile
  category audio/editor
 attribute hidden library lto makej multilib-dual
#attribute hidden library lto makej multilib-concurrent
    source http://code.soundsoftware.ac.uk/attachments/download/517/vamp-plugin-sdk-$VERSION.tar.gz
      info vurl http://www.vamp-plugins.org/develop.html
      info docs https://code.soundsoftware.ac.uk/embedded/vamp-plugin-sdk/index.html
      info forum http://vamp-plugins.org/forum/
      info email http://sourceforge.net/mail?group_id=192001
      info last 20120825
      info home http://www.vamp-plugins.org/
      desc 'audio processing plugin system
for plugins that extract information from audio data'

build(){
 default_build &&
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then mv $DESTDIR/usr/lib $DESTDIR/usr/lib64
      sed -i 's:/lib$:/lib64:' $DESTDIR/usr/lib64/pkgconfig/*.pc
 fi
}
