    stable 1.6 1.5 1.4 1.3.1 1.3
      opts -DWITH_ASF:BOOL=TRUE -DWITH_MP4:BOOL=TRUE
   require zlib
  category audio/editor
 attribute library x11
    source http://developer.kde.org/~wheeler/files/src/taglib-$VERSION.tar.gz
  homepage http://developer.kde.org/~wheeler/taglib.html
  estimate 150
      desc 'library for reading and editing metadata of audio files
taglib supporst ID3v1 ID3v2 mp3, ogg vorbis, and flac files.'

current(){
case $VERSION in
 1.6) grep -q '#define   TAGLIB_WITH_MP4 1' /usr/include/taglib/taglib_config.h ;;
esac
}
