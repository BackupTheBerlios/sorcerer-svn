    stable 0.3.11
#     last 20060214
   require SDL
  category video/television
 attribute x11
    source $SOURCEFORGE_URL effectv/EffecTV/$VERSION/effectv-$VERSION.tar.bz2
      home http://effectv.sourceforge.net/
  estimate 50
      desc 'real-time video effector'

build(){
 make "CFLAGS.opt=$CFLAGS" &&
 make install bindir=/usr/bin mandir=/usr/man "DESTDIR=$DESTDIR"
}
