   VERSION=( "0.3.11" "0.3.10" "0.3.9" "0.3.8" "0.3.7" )
    IGNORE="bsb\|4j-\|rc"
  CATEGORY="video/television"
 ATTRIBUTE="x11"
    SOURCE="effectv/effectv-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://effectv.sourceforge.net"
       REQ="SDL"
  ESTIMATE="81"
      DESC="effectv is a real-time video effector."


build() {
make  "CFLAGS.opt=$CFLAGS"  &&
prepare_install             &&
make    install  bindir=/usr/bin  mandir=/usr/man
}
