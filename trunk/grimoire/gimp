build() {
  OF="/opt/fontconfig"
 OFI="$OF/include"
 OFL="$OF/lib"
OFLP="$OFL/pkgconfig"

export  PKG_CONFIG_PATH="$OFLP"
export               CC="gcc  -I$OFI"
export          LDFLAGS="-L$OFL  -Wl,-rpath,$OFL  -Wl,-rpath-link,$OFL  $LDFLAGS"

default_build
}


post_install()  {
GP=$(  get_provider  gutenprint  )

if     spell_installed  $GP  &&
    !  grep   -q   "GIMP plugin... yes"  $COMPILE_LOGS/$GP
then   unlock_cast
       cast  $GP
fi
}
