build() {
  OF="/opt/fontconfig"
 OFI="$OF/include"
 OFL="$OF/lib"
OFLP="$OFL/pkgconfig"

export  PKG_CONFIG_PATH="$OFLP"
export               CC="gcc  -I$OFI"
export          LDFLAGS="-L$OFL  -Wl,-rpath,$OFL  -Wl,-rpath-link,$OFL  $LDFLAGS"

./configure  --build=$BUILD         \
             --prefix=/usr          \
             --sysconfdir=/etc      \
             --localstatedir=/var   \
             $OPTS                  &&
make                                &&
prepare_install                     &&
make    install
}


post_install()  {
GP=$(  get_provider  gimp-print  )

if     spell_installed           $GP      &&
    !  bzip2  -cd  $COMPILE_LOGS/$GP.bz2  |
       grep   -q   "GIMP plugin... yes"
then   unlock_cast
       cast  $GP
fi
}
