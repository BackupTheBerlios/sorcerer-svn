a image format converter, etc.

To print from gimp cast gutenprint."

build_old() {
  OF="/opt/fontconfig"
 OFI="$OF/include"
 OFL="$OF/lib"
OFLP="$OFL/pkgconfig"

export  PKG_CONFIG_PATH="$OFLP"
export               CC="gcc  -I$OFI"
export          LDFLAGS="-L$OFL  -Wl,-rpath,$OFL  -Wl,-rpath-link,$OFL  $LDFLAGS"
OPTS="$OPTS --disable-print"

default_build
}


post_install()  {
local  GP=$(  get_provider  gutenprint  )

if     spell_installed           $GP  &&
       !  [  -f      $CAST_QUEUE/$GP  ]
then   echo  com  >  $CAST_QUEUE/$GP
fi
}
