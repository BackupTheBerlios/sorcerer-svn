# Yes perl is optional, but probably every box has it installed.
#            'perl::--disable-perl:for perl modules and plugins'

    stable 2.6.11 2.6.10
  unstable 2.7.0
   require dbus-glib gegl hicolor-icon-theme libXpm libexif libmng librsvg
  optional WebKit     ''  --without-webkit  for help browser
  optional alsa-lib   ''  ''                for midi controller input module to support alsa
  optional lcms       ''  ''                for lightweight color managment support
  optional libwmf     ''  ''                for plugin to convert WMF files
  optional libgnomeui ''  ''                for gnome support
  optional pygtk      ''  --disable-python  to enable scripts written in Python
  optional poppler    ''  --without-poppler for PDF support
  category graphic/viewer graphic/editor
 attribute library makej multilib-concurrent setarch x11
    source ftp://ftp.gimp.org/pub/gimp/ v${VERSION:0:3}/gimp-$VERSION.tar.bz2
      info home  http://www.gimp.org/
      info docs  http://www.gimp.org/docs/
  estimate 7800
 freshmeat thegimp
      desc 'GNU Image Manipulation Program
It is a freely distributed piece of software 
suitable for such tasks as photo retouching, 
image composition and image authoring.
It can be used as a simple paint program, 
an expert quality photo retouching program, 
an online batch processing system, 
a mass production image renderer, 
a image format converter, etc.

To print from gimp cast gutenprint.'

post_install(){
 local GP=$( get_provider gutenprint )

 if   spell_installed        $GP &&
      ! [ -f     $CAST_QUEUE/$GP ]
 then echo com > $CAST_QUEUE/$GP
 fi
}
