   VERSION=( "0.6.0" )
  CATEGORY="window-manager"
 ATTRIBUTE="x11 new"
    SOURCE="$VERSION/ccsm-$VERSION.tar.bz2"
       URL="http://releases.compiz-fusion.org/"
