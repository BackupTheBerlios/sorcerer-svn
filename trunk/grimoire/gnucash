build() {
#  export  PATH="/opt/guile/1.4.1/bin:$PATH"

bash  \
./configure  --prefix=/usr         \
             --sysconfdir=/etc     \
             --localstatedir=/var  \
             $OPTS                 &&
make             &&
prepare_install  &&
make    install
}
