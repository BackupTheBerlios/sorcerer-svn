#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 510
# Required-Start: $syslog gizmod run
# Required-Stop: gizmod
# Should-Stop: $syslog
# Default-Start: 3 4 5
# Default-Stop: 0 1 2 6
# Short-Description: gizmoc provides the gizmod client
### END INIT INFO

. /lib/lsb/init-functions

only start stop restart try-restart status
pid_file /var/run/gizmoc.pid
server /usr/bin/gizmoc

start(){
 log_warning_msg 'gizmoc starting'
 $SERV &
 sleep 0.1
 echo $! > $PIDF
 log_success_msg 'gizmoc started'
}
