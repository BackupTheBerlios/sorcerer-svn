   VERSION=( "0.68" "0.66" "0.65" "0.64" "0.63" "0.62" "0.61" )
    IGNORE="xp\|sys\|rc"
  CATEGORY="network/email"
 ATTRIBUTE="console"
    SOURCE="courier/cone-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://www.courier-mta.org/cone/index.html"
       REQ=( "perl ncurses libxml2 openssl"
             "aspell:::for spell checking"
             "openldap:::for ldap access" )
   PROVIDE="email-client"
  ESTIMATE="3711"
      DESC="cone is a text mail client with POP3, IMAP accounts and local mail folders.
Cone seamlessly handles multiple POP3,
IMAP accounts, and local mail folders.
Cone is also a simple newsreader.
Cone is designed to be foolproof enough
to be used by inexperienced users,
but also offers advanced features for power users."

build()  {
./configure           \
--build=$BUILD        \
--prefix=/usr         \
--sysconfdir=/etc     \
--localstatedir=/var  \
$OPTS                 &&
make                  &&
make    check         &&
prepare_install       &&
make    install       &&
make    install-configure
}
