   VERSION=( "3.6.1" "3.6" "3.5" )
 ATTRIBUTE="x11"
  CATEGORY="graphic"
    SOURCE="povray-$VERSION.tar.bz2"
  HOMEPAGE="http://www.povray.org/"
       URL="http://www.povray.org/ftp/pub/povray/Official/Unix/
             ftp://ftp.povray.org/pub/povray/Official/Unix/"
       REQ="jpeg libpng zlib tiff"
  ESTIMATE="205"
      DESC="povray is the Persistence Of Vision Raytracing Toolkit

The Persistence of Vision Raytracer is a high-quality,
totally free tool for creating stunning three-dimensional graphics."


build()  {
# sed  -i  's: FILL IN .*":Sorcerer:'  source/optout.h
  ./configure  COMPILED_BY="$SORCERER"  \
               --build=$BUILD         \
               --prefix=/usr          \
               --sysconfdir=/etc      \
               --localstatedir=/var   \
               $OPTS                  &&
  make                                &&
  prepare_install                     &&
  make    install
}
