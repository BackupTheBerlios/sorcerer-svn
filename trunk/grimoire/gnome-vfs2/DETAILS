   VERSION=( "2.0.2" "2.0.1" )
  CATEGORY="development"
 ATTRIBUTE="gnome library x11"
    SOURCE="2.0.1/sources/gnome-vfs/gnome-vfs-$VERSION"
  HOMEPAGE="http://www.gnome.org"
       URL="$GNOME_URL"
       REQ="libxml2 glib2 GConf2 libbonobo gnome-mime-data"
    OPT[0]="openssl:::for secure socket connections"
    OPT[1]="cdparanoia:::for writing CDs"
  GNOMEFTP="gnome-vfs"
     SHORT="gnome-vfs provides the Gnome Virtual File System."
cat << EOF
gnome-vfs
This is the GNOME Virtual File System.
GNOME VFS is currently used as one of the foundations of the Nautilus
file manager.
EOF
