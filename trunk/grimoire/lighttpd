    stable 1.4.19 1.4.18 1.4.17 1.4.16
    secure 1.4.19
   require bzip2 init-functions pcre zlib
  optional php '' '' for php support

    ignore '\-1'
  category network/web
 attribute console server
    source lighttpd-$VERSION.tar.gz
       url http://www.lighttpd.net/download/
  homepage http://www.lighttpd.net/

#       url http://jan.kneschke.de/projects/lighttpd/download/
#  homepage http://jan.kneschke.de/projects/lighttpd/
  estimate 1700
      desc 'lighttpd is a secure, fast, compliant, and very flexible Web server.
It has been optimized for high-performance environments.
It has a very low memory footprint compared to other Web servers,
and it takes care of CPU load.
It has an advanced feature set that includes FastCGI,
CGI, Auth, Output-Compression, URL-Rewriting, and much more.
It has support for PHP and CGI as well.'

build(){
 default_build &&
 install -m 0600 doc/lighttpd.conf /etc/
}
