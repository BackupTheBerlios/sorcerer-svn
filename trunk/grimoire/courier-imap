   VERSION=( "4.1.1" "4.1.0" "4.0.6" "4.0.5" "4.0.4" )
  CATEGORY="network/email"
 ATTRIBUTE="console server new"
    SOURCE="courier/courier-imap-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://courier-mta.org/"
       REQ=( "courier-authlib fam"
             "openssl:::for imaps"
             ":--enable-workarounds-for-imap-client-bugs::to enable workarounds for broken imap clients" )
      OPTS="--disable-root-check"
  ESTIMATE="593"
 FRESHMEAT="courier-imap"
      DESC="courier-imap provides an IMAP email client server.
It provides access to maildir type mailboxes.
It supports folders, custom authentication modules, and virtual mailboxes. 
A compatible POP3 server is also provided. "

build() {
default_build  &&
make    install-configure
}
