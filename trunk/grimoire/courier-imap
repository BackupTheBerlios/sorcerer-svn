# 4.8.2 version mining scripts scanned it,
# but it is not available for download?

   version stable 4.9.3 4.9.2 4.9.1 4.9.0 4.8.1
   require courier-authlib gdbm
#  require courier-authlib gamin gdbm
  optional openssl '' '' for imaps
    switch --enable-workarounds-for-imap-client-bugs '' to enable workarounds for broken imap clients
      opts --disable-root-check
  category network/email
 attribute console makej server
    source $SOURCEFORGE_URL courier/imap/$VERSION/courier-imap-$VERSION.tar.bz2
      info last  20110603
      info home  http://www.courier-mta.org/
      desc 'IMAP email client server
It provides access to maildir type mailboxes.
It supports folders, custom authentication modules, and virtual mailboxes. 
A compatible POP3 server is also provided. '

build(){
 default_build &&
 make install-configure "DESTDIR=$DESTDIR"
}
