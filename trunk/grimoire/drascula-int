with info    good 20130724
with info    last 20101005
with version stable 1.1
with role    game development/emulator
with trait   data
with source  stable $SOURCEFORGE_URL scummvm/extras/Drascula_%20The%20Vampire%20Strikes%20Back/drascula-int-$VERSION.zip
with info    cite 'Drascula: The Vampire Strikes Back, Spanish German French Italian Addon'

build(){
 chmod -R 644 */*
 mkdir -pvm 755 "$DESTDIR"/usr/share/games/drascula/ &&
 cp    -av *    "$DESTDIR"/usr/share/games/drascula/
}
