# tarball no longer available for download,

   version_year_month
#  version stable 20120816 20110818
   require git
  category kernel
 attribute archive_off firmware
    source stable linux-firmware-$VERSION.tar master git://git.kernel.org/pub/scm/linux/kernel/git/firmware/linux-firmware.git
#   source $KERNEL_URL pub/linux/kernel/people/dwmw2/firmware/linux-firmware-$VERSION.tar.bz2
#   source http://sources.silverice.org/linux-firmware/$VERSION/linux-firmware-$VERSION.tar.xz
      info last 20120816
      info home http://git.kernel.org/?p=linux/kernel/git/dwmw2/linux-firmware.git
      desc 'free and non free firmware for linux kernel hardware drivers'

build(){
 mkdir -pvm 755 $DESTDIR/lib/firmware
 cp    -a   *   $DESTDIR/lib/firmware/
}
