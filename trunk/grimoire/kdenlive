# git repository is at git://anongit.kde.org/kdenlive

   version stable 0.9.2 0.9 0.8.2.1
   require kdelibs-v4 kde-runtime mlt
      opts -DCMAKE_INSTALL_PREFIX:PATH=/usr
      opts -DCMAKE_INSTALL_RPATH:PATH=/usr/lib64:/usr/lib
      opts -DCMAKE_SKIP_BUILD_RPATH:BOOL=TRUE
      opts -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=TRUE
      opts -DCMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=TRUE
      opts -DCMAKE_BUILD_TYPE=Release
  category video/editor
 attribute kde4 makej
    source $KDE_URL stable/kdenlive/$VERSION/src/kdenlive-$VERSION.tar.bz2
#   source $SOURCEFORGE_URL kdenlive/kdenlive/$VERSION/kdenlive-$VERSION.tar.gz
      info last 20120531
      info home http://kdenlive.org/
      info docs http://kdenlive.org/support
      info forum http://kdenlive.org/forum
      desc 'video editor that uses KDE and QT libraries'
