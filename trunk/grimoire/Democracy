build()  {
  [  -d  platform/gtk-x11  ]  &&
  cd     platform/gtk-x11     &&
  sed    -i  's:boost_python:boost_python-gcc-mt:'  setup.py  &&
  prepare_install  &&
  python setup.py install
}
