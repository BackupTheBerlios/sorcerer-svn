   VERSION=( "0.8.5" "0.8.4.1" "0.8.4" )
  CATEGORY="video/television"
 ATTRIBUTE="x11 new broken"
# Requires an older version of mozilla installed than seamonkey provides.
# I might fix this if someone wants it.
    SOURCE="Democracy-$VERSION.tar.gz"
       URL="ftp://ftp.osuosl.org/pub/pculture.org/democracy/src/"
  HOMEPAGE="http://www.getdemocracy.com/"
       REQ="Pyrex boost mozilla"
  ESTIMATE="129"
      DESC="Democracy is an Internet tv/video player."

build()  {
  [  -d  platform/gtk-x11  ]  &&
  cd     platform/gtk-x11     &&
#  grep   -rl  mozilla  *  |
#  xargs  -l64  sed  -i  "s:mozilla:seamonkey:g"  &&
  sed    -i  "s:boost_python:boost_python-gcc-1_32:"  setup.py  &&
  prepare_install  &&
  python setup.py install
}
