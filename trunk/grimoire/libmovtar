    stable 0.1.3
   require SDL glib-v1.2 jpeg
    ignore 'rc'
  category video
 attribute library x11
       url $SOURCEFORGE_URL
    source mjpeg/libmovtar-$VERSION.tar.gz
  homepage http://mjpeg.sourceforge.net
case $VERSION in
 0.1.3) use_gcc gcc-v3.4 ;;
esac
      opts --enable-shared
#   'jpeg-mmx:::for MMX enabled jpeg graphic library'
  estimate 100
      desc 'libmovtar is a library for the movtar MJPEG video format.
libmovtar is the support library and various tools
which together implement the movtar MJPEG video format.'

build(){
 install_shared_library(){
  cd /usr/lib
  ld --whole-archive -share -o libmovtar.so.1 libmovtar.a
  ln -vsf libmovtar.so.1 libmovtar.so
  rm -f   libmovtar.a
 }

default_build &&
install_shared_library
}
