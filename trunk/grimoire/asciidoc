       url "$SOURCEFORGE_URL"
  homepage http://www.methods.co.nz/asciidoc
  estimate 10
      desc 'asciidoc is a text formatting langauge like HTML.
asciidoc is a presentable text document format
for writing articles, UNIX man pages
and other small to medium sized documents.
The asciidoc command translates AsciiDoc files to
HTML, DocBook, LinuxDoc and other formats.'

build(){
 sed -i 's:/usr/local:/usr:g' install.sh
 prepare_install &&
       ./install.sh
}
