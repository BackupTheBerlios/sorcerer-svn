# 4.4.0 gained solo attribute so that
# find and xargs can be installed in /bin rather than /usr/bin
# so that /etc/init.d/fstab provided by init-scripts can execute properly

    stable 4.4.0 4.2.33 4.2.32 4.2.31
    secure 4.4.0 4.2.33 4.2.32 4.2.31
  category utility
 attribute console solo
       url $GNU_URL
    source findutils/findutils-$VERSION.tar.gz
  homepage http://www.gnu.org/software/findutils
   protect /bin/find
   protect /bin/xargs
  estimate 1000
      desc 'findutils contains utilities for locating files.
find	finds files that match certain criteria performs
	arbitrary operations on them interactively and
	in shell scripts
locate	scans a database for file names that match a pattern
xargs	applies a command to a list of files'

build(){
 default_build &&
 mv -v /usr/bin/{find,xargs} /bin/	&&
 # If find is moved to /bin, updatedb must be adjusted
 sed -i 's:BINDIR=/usr/bin:BINDIR=/bin:' /usr/bin/updatedb
}

current(){
 case $VERSION in
  4.4.0) [ -f /bin/find ] ;;
 esac
}
