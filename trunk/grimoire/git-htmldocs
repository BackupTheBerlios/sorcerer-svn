   inherit git
  category development documentation
 attribute console
    source http://git-core.googlecode.com/files/git-htmldocs-$VERSION.tar.gz
#   source $KERNEL_URL pub/software/scm/git/git-htmldocs-$VERSION.tar.bz2
      info home  http://git-scm.com/
      info docs  http://git-scm.com/documentation
      desc 'HTML documentaion for git'

build(){
 DOC_DIR=$DESTDIR/usr/doc/git/html
 install -vd $DOC_DIR &&
 cp -vr *    $DOC_DIR
}
