    stable 0.14.8 0.14.7 0.14.6
   require boost openssl
      opts --enable-static=no
  category network/file-share
 attribute library multilib-fail
#   source $SOURCEFORGE_URL libtorrent/libtorrent/libtorrent-$VERSION/libtorrent-rasterbar-$VERSION.tar.gz
    source http://libtorrent.googlecode.com/files/libtorrent-rasterbar-$VERSION.tar.gz
  homepage http://www.rasterbar.com/products/libtorrent
  estimate 400
      desc 'c++ BitTorrent library'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then opts --with-boost-libdir=/usr/lib64
 else opts --with-boost-libdir=/usr/lib
 fi
 default_build
}
