    stable 0.4 0.3
   require cmake kdelibs-v3

  category game
 attribute kde3
# 0.4 has unusual compile method
# maybe fix it if 0.5 also has no configure
    source ksudoku/ksudoku-$VERSION.tar.gz
       url "$SOURCEFORGE_URL"
  homepage http://ksudoku.sourceforge.net/
case $VERSION in
 0.4) use_gcc gcc-v4.2 ;;
esac
      opts -DCMAKE_INSTALL_PREFIX:PATH=/opt/kde3
      opts -DCMAKE_INSTALL_RPATH:PATH=/opt/kde3/lib:/opt/kde3/lib64
      opts -DCMAKE_SKIP_BUILD_RPATH:BOOL=TRUE
      opts -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=TRUE
      opts -DCMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=TRUE
      opts -DCMAKE_BUILD_TYPE=Release
  estimate 160
      desc 'ksudoku is a fully-featured Sudoku puzzle generator and solver for KDE.
With it you can generate and play 3D and 2D puzzles of different sizes and levels. 
The main algorithm is fast and extendable to any general graph coloring problem.'

build(){
 mkdir build     &&
 cd    build     &&
 cmake $OPTS ..  &&
 make            &&
 prepare_install &&
 make    install
}
