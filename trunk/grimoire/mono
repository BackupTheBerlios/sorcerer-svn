    stable 1.9.1 1.9 1.2.6
    secure 1.9.1 1.9 1.2.6
   require cairo libgdiplus libselinux
  category development/interpreter
 attribute console x11
    source http://go-mono.com/sources/mono/mono-$VERSION.tar.bz2
  homepage http://www.mono-project.com
      vurl http://go-mono.com/sources-stable/
      opts --enable-static=no
 freshmeat monoproject
  estimate 10000
      desc 'mono provides interpreter for .net client and server programs.
Can run .net, java, Python.'

build_old(){
# Since mono's \.pc$ files are written with an improper assumption
# they must be corrected in order that they can be moved to
# /usr/lib.pc and still properly indicate the location of
# the mono libraries.
sed -i 's:\.\./\.\.:..:' scripts/mono-nunit.pc.in data/{mono,mono-cairo}.pc.in
default_build
}
