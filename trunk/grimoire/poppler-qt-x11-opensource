   inherit poppler
   require qt-x11-opensource
#     opts --prefix=/opt/kde4 --enable-poppler-qt4 --enable-zlib --disable-poppler-qt
      opts -DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4
# Install unsupported xpdf headers (needed by calibre)
      opts -DENABLE_XPDF_HEADERS:BOOL=TRUE 
  estimate 600
      desc 'poppler-qt-x11-opensource is a PDF rendering library with qt-x11-opensource support.'

build(){
export LDFLAGS+=' -Wl,-rpath,/opt/kde4/lib'
export PATH+=:/opt/kde4/bin
default_build
}
