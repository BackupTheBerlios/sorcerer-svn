   inherit poppler
   require qt-everywhere-opensource
      opts -DENABLE_XPDF_HEADERS:BOOL=TRUE
      opts -DWITH_GObjectIntrospection:BOOL=OFF
# -DENABLE_XPDF_HEADERS:BOOL=TRUE installs unsupported xpdf headers (needed by calibre)
 attribute library makej
#attribute multilib-dual
      desc 'PDF rendering library with qt-everywhere-opensource support'

build(){ (
 if    [[ $HOSTTYPE == x86_64 ]]; then
  if   [[ $CFLAGS   =~ -m32   ]]
  then  export LDFLAGS+=' -Wl,-rpath,/opt/kde4/i686/lib'
        export PATH+=:/opt/kde4/i686/bin
        export OPTS+=' -DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4/i686'
  else  export LDFLAGS+=' -Wl,-rpath,/opt/kde4/lib64'
        export PATH+=:/opt/kde4/bin
        export OPTS+=' -DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4'
  fi
 else   export LDFLAGS+=' -Wl,-rpath,/opt/kde4/lib'
        export PATH+=:/opt/kde4/bin
        export OPTS+=' -DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4'
 fi
 default_build
) }
