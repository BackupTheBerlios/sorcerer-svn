   version stable 014
   require SDL_image SDL_mixer SDL_ttf
  category game
 attribute x11
    source https://github.com/downloads/clintbellanger/flare/flare_src_v$VERSION.zip
CURL_PARAM='-k'
      info last  20110809
      info home  http://clintbellanger.net/rpg/
      vurl       http://clintbellanger.net/rpg/
      info forum http://opengameart.org/forums/projects/flare
      desc 'isometric action RPG game similar to Diablo'

build(){
 make_install(){
  cd ..
  mkdir  -pvm 755       $DESTDIR/usr/bin  $DESTDIR/usr/share/flare
  install -vm 755 flare $DESTDIR/usr/bin/
  rm -rf build src flare
  find * -type f | xargs --max-lines=256 chmod 644
  find * -type d | xargs --max-lines=256 chmod 755
  cp -av * $DESTDIR/usr/share/flare/
 }

 if   [ -d flare_src_v014/build ]
 then   cd flare_src_v014/build
 fi

 cmake . &&
 make &&
 make_install

}
