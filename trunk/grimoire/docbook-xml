   VERSION=( "4.5" )
  XVERSION=( "1.71.1" )
  CATEGORY="documentation"
 ATTRIBUTE="data"
    SOURCE=( "docbook-xml-$VERSION.zip"
             "docbook/docbook-xsl-$XVERSION.tar.bz2"
             "buildDocBookCatalog" )
#             "docbook-xml-4.4.zip"
#             "docbook-xml-4.3.zip"
#             "docbook-xml-4.2.zip"
#             "docbkx412.zip"
       URL=( "http://www.oasis-open.org/docbook/xml/$VERSION/"
             "$SOURCEFORGE_URL"
             "http://www.xmlsoft.org/" )
  HOMEPAGE="http://www.oasis-open.org/docbook/xml/$VERSION/"
  EPROVIDE="ISO-sgml-xml"
       REQ="libxml2 unzip"
  ESTIMATE="1160"
      DESC="docbook-xml provides docbook-xml."


build()  {
  docbook_install()  {
    mkdir  -p  -m 0755  /usr/share/xml/docbook/xml-dtd-$VERSION
    cp     -av *        /usr/share/xml/docbook/xml-dtd-$VERSION/
    mkdir  -p  -m 0755  /etc/xml
    sed  "s:iso-:iso:
          s:check=.*:check=true:"  \
         $SOURCE_CACHE/docbook-xml/$VERSION/buildDocBookCatalog  \
                                          > buildDocBookCatalog
    bash                                    buildDocBookCatalog  --version=4.5
#    cd  /usr/share/xml/docbook/xml-dtd-$VERSION/docbook-xsl-$XVERSION
#    ./install.sh --batch
## The xml style sheet installer claims it should not be run by root
## Perhaps it is not required.
  }

  [  -f  catalog.xml  ]  &&
  prepare_install        &&
  docbook_install
}
