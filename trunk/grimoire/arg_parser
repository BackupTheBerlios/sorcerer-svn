# Is this supposed to install library files?
# Nothing requires arg_parser?

   version stable 1.5 1.4 1.3 1.2 1.1
   require gcc-g++
      opts --enable-static=no
  category development
 attribute library multilib-dual
    source http://download.savannah.gnu.org/releases-noredirect/arg-parser/arg_parser-$VERSION.tar.gz
      info home  http://www.nongnu.org/arg-parser/arg_parser.html
      info docs  http://www.nongnu.org/arg-parser/manual/arg_parser_manual.html
      desc 'library for parsing command line arguments'

build(){
 local CC CXX
 if   [[ $CFLAGS =~ -m32 ]]
 then CC="gcc -m32"; CXX="g++ -m32"
 else CC="gcc";      CXX="g++"
 fi

 ./configure           \
  --prefix=/usr        \
  --datadir=/usr/share \
  --infodir=/usr/info  \
  --mandir=/usr/man    \
  CFLAGS="$CFLAGS"     \
  CXXFLAGS="$CXXFLAGS" \
  CC="$CC"             \
  CXX="$CXX"           &&
 make                  &&
 make install "DESTDIR=$DESTDIR"
}
