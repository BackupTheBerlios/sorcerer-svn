    stable 1.5 1.4 1.3 1.2 1.1
   require gcc-g++
      opts --enable-static=no
  category development
 attribute library
 attribute multilib-fail
    source http://download.savannah.gnu.org/releases-noredirect/arg-parser/arg_parser-$VERSION.tar.gz
      home http://www.nongnu.org/arg-parser/arg_parser.html
      docs http://www.nongnu.org/arg-parser/manual/arg_parser_manual.html
  estimate 300
      desc 'library for parsing command line arguments'

build(){
 ./configure          \
 --prefix=/usr        \
 --datadir=/usr/share \
 --infodir=/usr/info  \
 --mandir=/usr/man    \
 CFLAGS="$CFLAGS"     \
 CXXFLAGS="$CXXFLAGS" &&
 make                 &&
 make install "DESTDIR=$DESTDIR"
}

