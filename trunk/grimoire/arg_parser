    stable 1.3 1.2 1.1
      opts --enable-static=no
  category development
 attribute library
    source http://download.savannah.gnu.org/releases-noredirect/arg-parser/arg_parser-$VERSION.tar.gz
  homepage http://www.nongnu.org/arg-parser/arg_parser.html
  estimate 300
      desc 'library for parsing command line arguments'

build(){
./configure          \
--prefix=/usr        \
--datadir=/usr/share \
--infodir=/usr/info  \
--mandir=/usr/man    \
CFLAGS="$CFLAGS"     \
CXXFLAGS="$CXXFLAGS" &&
make                 &&
prepare_install      &&
make    install
}

