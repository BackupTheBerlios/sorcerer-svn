    stable 1.0.1
  category game/3d/flightsim
 attribute archive_off data profile x11
   require FlightGear-Scenery-SharedModels
   disable scavenge
    source ftp://ftp.flightgear.org/pub/fgfs/Scenery-$VERSION/ \
           ftp://baron.flightgear.org/pub/fgfs/Scenery-$VERSION/ \
           ftp://ftp.kingmont.com/pub/kingmont/flight_simulators/flightgear/Scenery-$VERSION/ \
           ftp://flightgear.totalpilot.com/pub/fgfs/Scenery-$VERSION/ \
           ftp://ftp.darklands.cx/pub/fgfs/Scenery-$VERSION/ \
           ftp://ftp.planetmirror.com/pub/fgfs/Scenery-$VERSION/ \
           w080n40.tgz
      desc 'additional scenery for FlightGear'

build(){
 mkdir -p $DESTDIR/usr/share/FlightGear/Scenery/
 cp -av * $DESTDIR/usr/share/FlightGear/Scenery/
}
