with info    last 20130515
with version   stable 3.8.2 3.8.1 3.8.0
with version unstable 3.8.2
with base    avahi gtk-vnc libpeas libsecret telepathy-glib vte
#with base    avahi gnome-panel gtk-vnc libpeas libsecret vte
with role    utility/terminal-emulator
with trait   gnome
with source    stable $GNOME_URL sources/vinagre/${VERSION:0:3}/vinagre-$VERSION.tar.xz
with source  unstable $GNOME_URL sources/vinagre/${VERSION:0:3}/vinagre-$VERSION.tar.xz
with info    home http://www.gnome.org
with info    cite 'VNC client for GNOME'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
