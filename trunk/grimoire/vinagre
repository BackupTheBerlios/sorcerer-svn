   version   stable 3.4.1 3.4.0 3.2.2 3.2.0 3.0.0
   version unstable 3.5.1 3.4.1 3.4.0 3.3.92 3.3.4
   require avahi gnome-panel gtk-vnc libpeas vte
  category utility/terminal-emulator
 attribute gnome
    source $GNOME_URL sources/vinagre/${VERSION:0:3}/vinagre-$VERSION.tar.xz
      info last 20120416
      info home http://www.gnome.org
      desc 'VNC client for GNOME'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
