   version   stable 3.6.0 3.4.2
#  version unstable 3.5.92
   require avahi gnome-panel gtk-vnc libpeas libsecret vte
  category utility/terminal-emulator
 attribute gnome
    source   stable $GNOME_URL sources/vinagre/${VERSION:0:3}/vinagre-$VERSION.tar.xz
    source unstable $GNOME_URL sources/vinagre/${VERSION:0:3}/vinagre-$VERSION.tar.xz
      info last 20120930
      info home http://www.gnome.org
      desc 'VNC client for GNOME'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
