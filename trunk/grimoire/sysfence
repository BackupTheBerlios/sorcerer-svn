   VERSION=( "0.16" "0.15" "0.14" "0.13" )
  CATEGORY="utility"
 ATTRIBUTE="console"
    SOURCE="sysfence/sysfence-$VERSION.tar.gz"
  HOMEPAGE="http://sysfence.sourceforge.net"
       URL="$SOURCEFORGE_URL"
  ESTIMATE="29"
      DESC="sysfence is a Linux resource monitoring tool.
It checks resource levels (load average, memory, swap, etc.)
and performs an action if specified thresholds have been exceeded.
It can be used for alerting admins, dumping system stats,
or just killing processes."


build() {
make  "CFLAGS=$CFLAGS"  &&
prepare_install         &&
make    install  PREFIX=/usr
}
