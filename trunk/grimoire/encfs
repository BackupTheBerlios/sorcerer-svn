    stable 1.4.2 1.4.1.1 1.4.1 1.4.0
   require fuse openssl rlog
    ignore 'rc'
  category security/encryption
 attribute console
 attribute broke
#   source http://encfs.googlecode.com/files/encfs-$VERSION.tgz
  homepage http://www.arg0.net/encfs
  estimate 400
      desc 'encfs is an encrypted pass-through filesystem using FUSE kernel module.
Similarly to CFS and other pass-through filesystems,
all data is encrypted and stored in the underlying filesystem.
Unlike loopback filesystems, this does not
have any predetermined filesystem size.'
