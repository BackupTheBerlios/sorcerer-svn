   inherit kde-v4
   require kde-runtime libkipi
  category graphic/editor
 attribute makej
    source   stable $KDE_URL   stable/$VERSION/src/$SPELL-$VERSION.tar.xz
    source unstable $KDE_URL unstable/$VERSION/src/$SPELL-$VERSION.tar.xz
      desc 'application for making screenshots
It is capable of capturing images of the whole desktop, a single window,
a section of a window, a selectedrectangular region or a freehand region.
The images can then be saved in a variety of formats.'
