   inherit ksquirrel
   require OpenEXR giflib
  optional jasper '' '' for viewing jpeg2000 files
  optional libmng '' '' for viewing mng files
  optional libwmf '' '' for viewing wmf files
 attribute kde3 library
    source $SOURCEFORGE_URL ksquirrel/ksquirrel-libs-$VERSION.tar.bz2
  estimate 1500
      desc 'ksquirrel-libs provides image codecs for ksquirrel.'
