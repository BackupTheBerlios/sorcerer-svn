# disabling gobject-introspection since it is disabled for polkit

   version stable 0.101 0.100
   require gtk+-v3 polkit
      opts --disable-gtk-doc --enable-static=no
      opts --with-gtk=3.0
case $VERSION in
 0.100)
      opts --enable-introspection=no ;;
esac
  category security
 attribute gnome makej library multilib-concurrent
    source http://hal.freedesktop.org/releases/polkit-gnome-$VERSION.tar.bz2
      info last  20110313
  homepage http://hal.freedesktop.org/docs/PolicyKit-gnome/
  estimate 400
 conflicts PolicyKit-gnome
      desc 'Authentication Agent for PolicyKit that integrates with GNOME'
