#!/bin/bash
if   [ -d /usr/lib64/games/speed-dreams-2 ]
then exec /usr/bin/speed-dreams-2 -D /usr/share/games/speed-dreams-2 -L /usr/lib64/games/speed-dreams-2 "$@"
elif [ -d /usr/lib/games/speed-dreams-2 ]
else exec /usr/bin/speed-dreams-2 -D /usr/share/games/speed-dreams-2 -L /usr/lib/games/speed-dreams-2 "$@"
else echo "Unable to locate speed-dreams-2's libdir" 1>&2; exit 1
fi

