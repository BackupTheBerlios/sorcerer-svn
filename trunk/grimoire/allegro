   VERSION=( "4.0.3" "4.0.2" )
    IGNORE="^4\.1\.\|enduser\|msvc"
  CATEGORY="game"
 ATTRIBUTE="library x11"
    SOURCE="alleg/allegro-$VERSION"
  HOMEPAGE="http://alleg.sourceforge.net"
       URL="$SOURCEFORGE_URL"
    OPT[0]="arts::--disable-artsdigi:to output through arts sound mixer"
    OPT[1]="esound::--disable-esddigi:to work output through enlightenment sound mixer"
    OPT[2]="svgalib::--disable-svgalib:for svgalib graphics output"
    OPT[3]="x11::-without-x:for x11 graphics output"
 FRESHMEAT="allegro"
  ESTIMATE="1294"
     SHORT="allegro is a cross-platform game library."
      LONG="
allegro is a multi-platform game library that 
provides many functions for graphics, sounds, 
player input (keyboard, mouse, and joystick), and timers.
It also provides fixed and floating point mathematical
functions, 3D functions, file management functions, 
compressed datafile, and a GUI.
"

build()  {
  sed  -i  "s/-O2/$CFLAGS/"  configure
  default_build
}
