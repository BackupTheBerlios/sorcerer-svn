   VERSION=( "2.1.9" "2.1.8" "2.1.7" "2.1.6" "2.1.4" "2.1.3" "2.1.2" "2.1.1" "2.1" "2.0" )
    IGNORE="2001\|alpha\|apidoc\|beta"
  CATEGORY="network"
 ATTRIBUTE="console x11 library"
    SOURCE="libchipcard/libchipcard2-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://www.libchipcard.de"
       REQ=( "gwenhywfar libusb opensc sysfsutils"
             "kdelibs:::for building KMedicalCard KCardDebugger" )
# may have requirement on sysfsutils
  ESTIMATE="2530"
      DESC="libchipcard2 is a library for accessing chipcards via terminals/readers.
libchipcard is a C++ framework for easy access to
chipcards/smartcards via chip card terminals/readers.
It uses the CTAPI library provided by the manufacturer
of the reader and provides a filesystem on memory chip cards.
It works under Linux, FreeBSD, and Windows, and has been
tested with Towitoko and Kobil readers even in parallel."

build()  {
  case  $VERSION  in
    1.9.19beta)  grep   -lr                        "sysfs_open_device_tree" *  |
                 xargs  --max-lines=64  sed  -i  "s:sysfs_open_device_tree:sysfs_open_class_device_path:"  ;;
    2.0)         grep   -lr                        "sysfs_open_device_tree" *  |
                 xargs  --max-lines=64  sed  -i  "s:sysfs_open_device_tree:sysfs_open_class_device_path:"  ;;
    2.1)         grep   -lr                        "sysfs_open_device_tree" *  |
                 xargs  --max-lines=64  sed  -i  "s:sysfs_open_device_tree:sysfs_open_class_device_path:"  ;;
    2.1.1)       grep   -lr                        "sysfs_open_device_tree" *  |
                 xargs  --max-lines=64  sed  -i  "s:sysfs_open_device_tree:sysfs_open_class_device_path:"  ;;
  esac
  default_build
}
