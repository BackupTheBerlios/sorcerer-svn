# A compile error occurs if indilib compiles while indilib is installed.

   version stable 0.5
   require cfitsio libnova libusb-compat zlib
      opts --enable-static=no
  category science/astronomy
 attribute library makej multilib-concurrent
    source $SOURCEFORGE_URL indi/indilib/$VERSION/indilib-$VERSION.tar.gz
      info home  http://indi.sourceforge.net/
      info mail  'http://sourceforge.net/mail/?group_id=90275'
 conflicts indilib
  estimate 1500
      desc 'protocol library for operating astronomical instrumentation'

build(){
case $VERSION in
 0.5) sed -i '1i#include <string.h>' src/sbigcam.cpp ;;
esac
default_build
}

current(){ echo libindi0 | pipe_queue $CAST_QUEUE com; }
