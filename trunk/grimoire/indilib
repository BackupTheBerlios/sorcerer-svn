# A compile error occurs if indilib compiles while indilib is installed.

    stable 0.5
   require cfitsio libnova libusb-compat zlib
   category science/astronomy
  attribute library
    source $SOURCEFORGE_URL indi/indilib/$VERSION/indilib-$VERSION.tar.gz
   homepage http://indi.sourceforge.net/index.php/Main_Page
       opts --enable-static=no
  conflicts indilib
   estimate 700
       desc 'indilib provides a protocol library for operating astronomical instrumentation.'

build(){
case $VERSION in
 0.5) sed -i '1i#include <string.h>' src/sbigcam.cpp ;;
esac
default_build
}

current(){ echo libindi0 | pipe_queue $CAST_QUEUE com; }
