   VERSION=( "0.6.1.1" "0.6.1" "0.6.0" )
  CATEGORY="television"
 ATTRIBUTE="x11 new broken"
# This is broken because wxPython is broken.
    SOURCE="tunapie/tunapie_$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://sourceforge.net/projects/tunapie/"
       REQ="wxPython-v2.4"
  ESTIMATE="238"
      DESC="tunapie is a directory browser for internet radio and TV streams.
At present, it uses the shoutcast server,
but compatibility with other services is planned.
Tunapie allows you to search for streams and then launch
an audio player (xmms) or NSV viewer (mplayer) of choice.
It also allows recording of audio and video streams using streamripper."

build()  {
cp src/tuneradult.py src/tuner.py
sed  -i  "s:/usr/local:/usr:"  tunapie
python src/compile                 &&
prepare_install                    &&
install -m 0755 tunapie /usr/bin   &&
mkdir   -p     /usr/share/tunapie  &&
cp  src/*.py*  /usr/share/tunapie
}
