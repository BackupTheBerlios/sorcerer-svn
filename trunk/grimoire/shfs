    stable 0.35 0.34 0.33 0.32 0.31-1 0.30-1
   require openssh

  category network/file-share kernel
 attribute linux-26-module
    source shfs/shfs-$VERSION.tar.gz
       url "$SOURCEFORGE_URL"
  homepage http://shfs.sourceforge.net
  estimate 45
      desc "shfs provides a kernel modules for mounting remote filesystems via ssh.
shfs is a simple and easy-to-use
Linux kernel module which allows you
to mount remote filesystems using a
plain shell (ssh/rsh) connection.
It supports some nice features like
number of different caches for access
speedup, target system optimizations, etc."


build() {
KERNEL=$(  installed_version  $(  get_provider linux-kernel  )  )

sed  -i  "s/\$(shell uname -r)/$KERNEL/"  shfs/Makefile 

make             &&
prepare_install  &&
make    install
}
