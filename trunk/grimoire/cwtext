   VERSION=( "0.94" "0.93" "0.91" )
  CATEGORY="ham"
 ATTRIBUTE="console"
    SOURCE="cwtext/cwtext-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://cwtext.sourceforge.net"
       REQ="Python"
  ESTIMATE="13"
      DESC="cwtext converts text to morse code.
Convert text to International Morse Code.
Input is ASCII text.
Output can be: - . -..- - on the console,
raw 8bit PCM suitable for piping to /dev/audio,
.wav files or even (mp3|ogg).
Good for headlines on your MP3 player or code practice."


build() {
make             &&
prepare_install  &&
install  -sc  -m 0755  cwtext  /usr/bin  &&
install  -sc  -m 0755  cwpcm   /usr/bin
}
