    stable 15.32.2.9
   require udev
  category kernel network
 attribute firmware
    source http://www.intellinuxwireless.org/iwlwifi/downloads/iwlwifi-3945-ucode-$VERSION.tgz
      home http://www.intellinuxwireless.org/
      vurl "http://intellinuxwireless.org/?n=downloads"
      desc 'firmware for iwlwifi kernel module'

build(){
mkdir  -pvm 755                      $DESTDIR/lib/firmware &&
install -vm 644 iwlwifi-3945-2.ucode $DESTDIR/lib/firmware/
}
