    stable 4.5.20
    ignore '\.NC\|cd'
  category db
 attribute library
    source db-$VERSION.tar.gz
    source patch.$VERSION.1
    source patch.$VERSION.2
       url http://download.oracle.com/berkeley-db/
       url http://www.oracle.com/technology/products/berkeley-db/db/update/4.5.20/
      opts --enable-static=no
  homepage http://www.oracle.com/technology/software/products/berkeley-db/db/index.html
      vurl http://www.oracle.com/technology/software/products/berkeley-db/db/index.html
 freshmeat berkeleydb
  estimate 900
      desc 'db-v4.5 provides Berkeley DB database version 4.5.20 patched.'

build(){
PCX=1
while [ -n "${SOURCE[$PCX]}" ]; do
 patch -p0 < $SOURCE_CACHE/$SPELL/$VERSION/${SOURCE[$PCX]}
 (( PCX++ ))
done

cd build_unix &&
../dist/configure  \
--prefix=/opt/db/4.5 \
--build=$BUILD     \
--enable-dynamic   \
--enable-compat185 \
--enable-cxx       \
$OPTS              &&
make               &&
prepare_install    &&
make    install    &&
rm -rf /usr/docs
}


post_install(){
 default_post_install
           get_provider openldap |
 pipe      show_installed        |
 LC_ALL=C  sort                  |
           uniq -d               |
           pipe_queue $CAST_QUEUE com
}
