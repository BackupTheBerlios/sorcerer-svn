   version stable 2.11.0 2.9.1
   require jdk
  category utility
 attribute console library new
 attribute broke
    source $APACHE_URL xerces/j/source/Xerces-J-src.${VERSION}.tar.gz
    source $APACHE_URL xerces/j/source/Xerces-J-tools.${VERSION}.tar.gz
  homepage http://xml.apache.org/xerces2-j
      desc 'fully compliant XML parser from Apache'

build(){
 xerces_install(){
  XJDIR=$DESTDIR/usr/share/xerces-j
  mkdir -vp        $XJDIR &&
  cp -av ./build/* $XJDIR
 }

 export JAVA_HOME=/opt/jdk

 # This should force java not to use X11 during installation but
 # it does not help so we cannot build target 'all'
 sed -i "s:\(/bin/java\):\1 -Djava.awt.headless=true:" build.sh

 bash ./build.sh jars &&
 xerces_install  
}
