with version stable 20120101
with role    profile
with trait   profile
with info    good 20120910
with info    home http://sorcerer.silverice.org
with info    cite "profile spell that ensures /usr/src/linux is present"

build(){ :; }
post_install(){
 if ! [ -f /usr/src/linux/Makefile ]; then
  echo linux | pipe_queue $MOIL_QUEUE
  echo linux | pipe_queue $LOAD_QUEUE
  leech
 fi
}
