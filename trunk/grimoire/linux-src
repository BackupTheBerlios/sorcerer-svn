   version stable 20120101
  category profile
 attribute profile
      info good 20120910
      info home http://sorcerer.silverice.org
      desc "profile spell that ensures /usr/src/linux is present"

build(){ :; }
post_install(){
 if ! [ -f /usr/src/linux/Makefile ]; then
  echo linux | pipe_queue $CAST_QUEUE
  echo linux | pipe_queue $LEECH_QUEUE
  leech
 fi
}
