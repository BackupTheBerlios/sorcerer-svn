   VERSION=( "0.4" )
  CATEGORY="utility/file-manager"
 ATTRIBUTE="x11"
    SOURCE="mfm-$VERSION.tar.gz"
  HOMEPAGE="http://sg67.altervista.org/mfm/index.html"
      VURL="http://sg67.altervista.org/mfm/index.html"
       URL="http://sg67.altervista.org/mfm/download/"
       REQ="fltk"
  ESTIMATE="75"
      DESC="mfm short for my file manager is a lightweight file manager."

build()  {
  mkdir  -p  $DESTDIR/usr/{bin,share/doc}
  make        all  TARGET=$DESTDIR/usr
  prepare_install  &&
  make    install  TARGET=$DESTDIR/usr
}
