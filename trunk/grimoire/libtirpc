   version stable 1.0.8 0.1.7
   require pkgconfig
  category network
 attribute server
    source $SOURCEFORGE_URL libtirpc/OldFiles/libtirpc-$VERSION.tar.bz2
  homepage http://nfsv4.bullopensource.org/doc/tirpc_rpcbind.php
      opts --enable-static=no --libdir=/lib
      desc 'transport independent remote procedure call library
libtirpc is required for using NFSv4 over IPv6 networks.'

build(){
 default_build &&
 mkdir -p $DESTDIR/usr/lib &&
 mv $DESTDIR/lib/pkgconfig $DESTDIR/usr/lib
}
