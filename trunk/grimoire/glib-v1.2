   VERSION=( "1.2.10" )
  CATEGORY="development"
 ATTRIBUTE="library"
    SOURCE="glib-$VERSION.tar.gz"
  HOMEPAGE="http://www.gtk.org/"
       URL="ftp://ftp.gtk.org/pub/gtk/v1.2/"
       REQ="pkgconfig" 
  ESTIMATE="302"
      DESC="glib-v1.2 is a library of useful C routines for trees, hashes, and lists."

build()  {
patch  <<  EOF
diff -r -U2 glib-1.2.10/glib.h glib-1.2.10/glib.h
--- glib-1.2.10/glib.h	2001-02-26 20:44:38.000000000 -0700
+++ glib-1.2.10/glib.h	2001-02-26 20:44:38.000000000 -0700
@@ -273,5 +273,5 @@
  * macros, so we can refer to them as strings unconditionally.
  */
-#ifdef	__GNUC__
+#if	defined(__GNUC__) && (__GNUC__ == 3  && __GNUC_MINOR__ < 4)
 #define	G_GNUC_FUNCTION		__FUNCTION__
 #define	G_GNUC_PRETTY_FUNCTION	__PRETTY_FUNCTION__
EOF


case  $( arch )  in
  x86_64)
    sed  -i  '209i  | x86-* | x86_64-* \\'            config.sub
    sed  -i  's:i\[34567\]86):i\[34567\]86|x86_64):'  config.sub
  ;;
esac

default_build
}
