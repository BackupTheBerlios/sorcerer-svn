  stable 1.37 1.36.02 1.36 1.31 1.30
    IGNORE='freely\|fb\|fs\|riscos\|win'
  CATEGORY='audio/speech'
 ATTRIBUTE='console'
    SOURCE="espeak/espeak-$VERSION-source.zip"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://espeak.sourceforge.net/'
       REQ='portaudio'
  ESTIMATE='400'
 FRESHMEAT='espeak'
      DESC='speak also called espeak is a software speech synthesizer for English.'

build(){
 manual_install(){
  install -m 755 speak /usr/bin
  cd ..
  find -type f | xargs --max-lines=64 chmod 644
  find -type d | xargs --max-lines=64 chmod 755
  cp   -av espeak-data /usr/share
 }

 cd src
 make            &&
 prepare_install &&
  manual_install
}
