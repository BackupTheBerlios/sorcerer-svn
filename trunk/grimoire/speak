# 1.43.03-source might support make install
# and has support for DESTDIR

    stable 1.44.03-source 1.43.03-source 1.42.04-source 1.42.03-source 1.41.01-source 1.40.02-source 1.39-source 1.38-source 1.37-source
   require portaudio
  category audio/speech
 attribute console
 attribute broke
    source $SOURCEFORGE_URL espeak/espeak/espeak-${VERSION:0:4}/espeak-$VERSION.zip
  homepage http://espeak.sourceforge.net/
  estimate 200
 freshmeat espeak
      desc 'also called espeak is a software speech synthesizer for English'

build(){
 manual_install(){
  mkdir -p $DESTDIR/usr/{bin,share}
  install -m 755 speak $DESTDIR/usr/bin
  cd ..
  find -type f | xargs --max-lines=64 chmod 644
  find -type d | xargs --max-lines=64 chmod 755
  cp -av espeak-data $DESTDIR/usr/share
 }

 cd src
 make &&
 manual_install
}
