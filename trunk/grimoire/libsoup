   VERSION=( "2.2.1" "2.2.0" "1.99.28" "1.99.26" "1.99.23" )
    IGNORE="^2\.[1-2]\."
  CATEGORY="web"
 ATTRIBUTE="library"
    SOURCE="sources/libsoup/${VERSION:0:3}/libsoup-$VERSION.tar.bz2"
  HOMEPAGE="http://www.gnome.org"
       URL="$GNOME_URL"
       REQ=( "glib "gnutls" libxml2" )
  ESTIMATE="171"
      DESC="libsoup is the simple object access protocol library.
libsoup is a SOAP (Simple Object Access Protocol) implementation in C.
It provides an queued asynchronous callback-based mechanism
for sending and servicing SOAP requests,
and a WSDL (Web Service Definition Language)
to C compiler which generates client stubs,
and server skeletons for easily
calling and implementing SOAP methods."


build() {
case  $VERSION  in
  1.99.28)  sed  -i  "s:GNUTLS_CERT_CORRUPTED:GNUTLS_CERT_INVALID:"  libsoup/soup-gnutls.c  ;;
esac
default_build
}
