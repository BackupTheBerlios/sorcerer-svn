    stable 1.0.9
  category network/web
 attribute library
       url $GNOME_URL
    source sources/libghttp/${VERSION:0:3}/libghttp-$VERSION.tar.gz
  homepage http://www.gnome.org
      opts --enable-static=no
  estimate 150
      desc 'libghttp is the gnome http client library.
gnome-http -- gnome http client library
maybe required by Enlightenment for autoupgrades?'

build()
{
	patch -p1 < $SCRIPT_DIR/libghttp.patch &&
	libtoolize -i -c -f                    &&
	aclocal                                &&
	autoconf                               &&
	default_build
}
