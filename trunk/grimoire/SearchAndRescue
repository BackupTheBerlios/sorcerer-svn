  estimate 150
      desc 'SearchAndRescue is a 3d helicopter game.
SearchAndRescue is a game in which the player pilots rescue
helicopters to rescue victims in various situations of distress.'


build(){
./configure Linux &&
make              &&
prepare_install   &&
make    install
}
