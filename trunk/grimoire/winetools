   VERSION=( "2.1.0" )
  CATEGORY="emulator"
 ATTRIBUTE="x11"
    SOURCE="winetools-$VERSION.tgz"
       URL="http://franksworld.net/files"
  HOMEPAGE="http://franksworld.net/winetools.html"
       REQ="Xdialog"
  ESTIMATE="5"
      DESC="winetools helps automize Wine installation tasks."


build() {
  rm  -f  Xdialog
  sed -i  "s:/opt/winetools/Xdialog:Xdialog:"  wt*
  [   -x  install.sh  ]  &&
  prepare_install        &&
        ./install.sh
}
