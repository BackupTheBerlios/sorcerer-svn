    stable 0.3.4 0.3.3 0.3.2
   require jackit kdelibs-v4
  category audio/utility kde-extragear
 attribute kde4 x11
       url $SOURCEFORGE_URL
    source qjackctl/qjackctl-$VERSION.tar.gz
  homepage http://qjackctl.sourceforge.net/
      opts --prefix=/opt/kde4 --with-qt=/opt/kde4
  estimate 180
      desc 'qjackctl controls the jack sound server daemon
qjackctl provides a simple GUI dialog for setting
several JACK daemon parameters, which are properly
saved between sessions, and a way to control the
status of the audio server daemon.
With time, this primordial interface has become richer by
including a enhanced patchbay and connection control features.'

build(){
 ./configure           \
  --sysconfdir=/etc    \
  --localstatedir=/var \
 $OPTS           &&
 make            &&
 prepare_install &&
 make    install
}
