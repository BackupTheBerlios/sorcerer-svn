# libsysfs.so.2 moved to /lib because pcmciautils requires it
    VERSION=( 2.0.0 2.1.0 1.3.0 )
# 2.1.0 has compile errors on some architectures
     IGNORE='rc'
   CATEGORY='utility'
  ATTRIBUTE='console library'
     SOURCE="linux-diag/sysfsutils-$VERSION.tar.gz"
        URL="$SOURCEFORGE_URL"
   HOMEPAGE='http://linux-diag.sourceforge.net/Sysfsutils.html'
       OPTS='--enable-static=no'
   ESTIMATE='370'
       DESC='sysfsutils provides utilities for using sysfs.'

build(){
 OPTS+=' --libdir=/lib'
 case $HOSTTYPE in
  x86_64) OPTS+='64' ;;
 esac
 default_build
}
