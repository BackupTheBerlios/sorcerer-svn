   VERSION=( 0.2.1 0.2 0.1 )
  CATEGORY='utility/terminal-emulator'
 ATTRIBUTE='x11'
    SOURCE="multi-aterm-$VERSION.tar.gz"
       URL='http://www.nongnu.org/materm/'
  HOMEPAGE='http://www.nongnu.org/materm/'
       REQ=( "libXpm"
             "jpeg:--enable-jpeg::for jpeg background support"
             "libpng:--enable-png::for png background support"
             ":--enable-mousewheel::for mousewheels or extra buttons"
             ":--enable-fading::enable colors fading when off focus"
             ":--enable-utmp::enable utmp/utmpx support"
             ":--enable-utmp --enable-wtmp::enable wtmp support"
             ":--enable-ttygid::enable ttygid for group tty"
             ":--enable-kanji::for kanji support"
             ":--enable-big5::for big5 support"
             ":--enable-greek::for greek keyboard support"
             ":--enable-thai::for thai support" )
  ESTIMATE='270'
 FRESHMEAT="materm"
      DESC="multi-aterm is an tabular aterm replacement.
multi-aterm is a multi-terminal for the X Windows
system based on aterm that provides tabbed
functionality without requiring KDE or GNOME."
