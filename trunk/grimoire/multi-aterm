   version stable 0.2.1 0.2 0.1
   require libXpm
  optional jpeg   --enable-jpeg '' for jpeg background support
  optional libpng --enable-png  '' for png background support
  switch --enable-mousewheel           '' for mousewheels or extra buttons
  switch --enable-fading               '' enable colors fading when off focus
  switch --enable-utmp                 '' enable utmp/utmpx support
  switch '--enable-utmp --enable-wtmp' '' enable wtmp support
  switch --enable-ttygid               '' enable ttygid for group tty
  switch --enable-kanji                '' for kanji support
  switch --enable-big5                 '' for big5 support
  switch --enable-greek                '' for greek keyboard support
  switch --enable-thai                 '' for thai support
  category utility/terminal-emulator
 attribute x11
    source http://www.nongnu.org/materm/multi-aterm-$VERSION.tar.gz
      info home http://www.nongnu.org/materm/
 freshmeat materm
      desc 'multi-aterm is an tabular aterm replacement.
multi-aterm is a multi-terminal for the X Windows
system based on aterm that provides tabbed
functionality without requiring KDE or GNOME.'
