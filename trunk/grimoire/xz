    stable 4.999.9beta
  unstable 4.999.9beta-180-ge23e
      opts --enable-static=no --bindir=/bin
  category archive
 attribute console
    source http://tukaani.org/xz/xz-$VERSION.tar.bz2
      vurl http://tukaani.org/xz
  homepage http://tukaani.org/xz/
  estimate 600
      desc 'zlib like interface and command line tools that use LZMA compression'

build(){
sed -i 's:\$(libdir)/pkgconfig:/usr/lib/pkgconfig:'  src/liblzma/Makefile.in
if   [ $HOSTTYPE == x86_64 ]
then OPTS+=' --libdir=/lib64'
else OPTS+=' --libdir=/lib'
fi
default_build
}
