# 1.0.1 and 1.0.2 can not even find it's own library that it installs.
# 1.0.x is from 2005

# Now hosted at github?  Uncertain.

with info    good 20120607
with info    last 20091022
with version stable 1.1.17 1.0.0
case $VERSION in
 1.1.17)
with base    automake libtool ;;
esac
with base    libxml2 pcre
with also    --disable-libgc --disable-static
with role    development/interpreter
with trait   console
with source  stable $SOURCEFORGE_URL ferite/ferite/${VERSION:0:3}/ferite-$VERSION.tar.gz
#   source $SOURCEFORGE_URL ferite/ferite/1.0%20final/ferite-$VERSION.tar.gz
with info    home http://www.ferite.org/
with info    cite 'high level scripting language
It is used with C, C++ and other object oriented languages.
You can add it to your current project
or use it as a standalone project.
This will be used in the future with
development in the Enlightenment project.'

build(){
 case $VERSION in
  1.1.17) sed -i 's:-L$prefix/lib::' configure.ac
          aclocal; automake -acf; libtoolize -cf ;;
 esac
 default_build
}
