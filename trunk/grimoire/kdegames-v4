  category game
 attribute library makej
  estimate 5000
      desc 'games like mahjongg, snake, asteroids, and tetris'

build_old(){
 for    DIR in $OPTS; do
  case $DIR in
   --exclude-*) rm -frv "${DIR/--exclude-/}" ;;
  esac
 done

 default_build
}
