# Edit slib spell if adjusting guile to version 1.8.x
# Maybe nothing yet can compile with guile version 2.0.0

   version stable 2.0.5 2.0.3 1.8.8 1.6.8
   version latest 2.0.5 2.0.3 2.0.2 2.0.1 2.0.0
   require gc libtool ncurses readline
case $VERSION in
 2.*)
   require libunistring ;;
esac
      opts --enable-static=no --disable-rpath
      opts --disable-error-on-warning
  category development
 attribute console library makej multilib-concurrent
case $VERSION in
 2*)
    source $GNU_URL guile/guile-$VERSION.tar.xz ;;
 1*)
    source $GNU_URL guile/guile-$VERSION.tar.gz ;;
esac
      info last 20120130
      info home http://www.gnu.org/software/guile/
      info docs http://www.gnu.org/software/guile/docs/docs.html
      info mail http://www.gnu.org/software/guile/mail/mail.html
 freshmeat none
      desc 'portable, embeddable Scheme implementation'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && [[ $CFLAGS =~ -m32 ]]
 then opts --bindir=/usr/bin32
 fi
 default_build
}
