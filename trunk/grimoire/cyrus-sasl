   version stable 2.1.23
   version unstable 2.1.24rc1
   require e2fsprogs gss openssl
  optional Linux-PAM ''                      '' for optional pluggable authentication
  optional heimdal   --with-gss_impl=heimdal '' for kerberos 5 authentication
      opts --enable-login --enable-ntlm
  category security/authentication security/encryption
 attribute library multilib-concurrent
#attribute makej
    source ftp://ftp.andrew.cmu.edu/pub/cyrus-mail/cyrus-sasl-$VERSION.tar.gz
      info last  20090514
      info home  http://www.cyrusimap.org/
 freshmeat cyrussasl
  estimate 1700
      desc 'library for secure network authentication
cyrus-sasl is a generic library for easy integration of secure 
network authentication to any client or server application.
It supports authentication via standard plaintext methods 
as well as CRAM-MD5 and DIGEST-MD5 shared secret methods 
and KERBEROS_V4 and GSSAPI Kerberos methods.
The SASL protocol framework is used by SMTP, IMAP, 
ACAP, LDAP, and other standard protocols.'

build(){ (
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then opts --with-plugindir=/usr/lib64/sasl2 
      opts --with-configdir=/usr/lib64/sasl2
 else opts --with-plugindir=/usr/lib/sasl2 
      opts --with-configdir=/usr/lib/sasl2
 fi

 sed -i 's:*mbdb, path, NULL,:*mbdb, (DB_TXN *) NULL, path, NULL,:' \
     sasldb/db_berkeley.c utils/dbconverter-2.c

 if   [[ $CFLAGS =~ -m32 ]]
 then CC="gcc -m32" default_build
 else               default_build
 fi
) }
