   version stable 2.0.0
   require ccrtp
      opts --enable-static=no
  category audio/codec audio/library
 attribute library setarch
    source $GNU_URL ccrtp/libzrtpcpp-$VERSION.tar.gz
      info good 20120716
      info last 20110529
      info home http://www.twinklephone.com/
      desc 'secure voice communication library'

build(){
 default_build &&
 if   [ -f $DESTDIR/usr/lib64/pkgconfig/libzrtpcpp.pc ]
 then sed -i 's:/usr/lib$:libdir=/usr/lib64:' \
           $DESTDIR/usr/lib64/pkgconfig/libzrtpcpp.pc
 fi
}
