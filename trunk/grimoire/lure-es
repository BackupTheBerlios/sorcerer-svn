     stable 1.1
   category game development/emulator
  attribute archive_off data solo
     source $SOURCEFORGE_URL scummvm/extras/Lure%20of%20the%20Temptress/lure-es-$VERSION.zip
       desc 'Lure of the Temptress (Spanish)'

build(){
 chmod -R 644 */*
 mkdir -vp   $DESTDIR/usr/share/games/lure &&
 cp    -av * $DESTDIR/usr/share/games/lure/
}
