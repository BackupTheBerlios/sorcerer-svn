   version stable 0.5.906 0.5.905 0.5.904 0.5.903
   require libXaw xine-lib xulrunner
#     opts --disable-lirc --disable-ffjs --disable-seajs
#     opts --disable-lirc --disable-mozjs --disable-ffjs --disable-seajs

# It will not use lirccd as it should, because it expects a pkgconfig file
# which does not exist,
# and it can not detect installed
  optional lirc '' '' for infrared remote control support
  category video/dvd video/player
 attribute x11
