build_old(){
(
export JS_CFLAGS="$( pkg-config --cflags mozilla-js )"
export JS_CFLAGS+=" $( pkg-config --cflags libxul-unstable )"
export JS_LIBS="$( pkg-config --libs mozilla-js )"
export JS_LIBS+=" $( pkg-config --libs libxul-unstable )"
default_build
)
}
