   VERSION=( "3.6.1" )
  CATEGORY="administration/monitoring web"
 ATTRIBUTE="x11 new"
    SOURCE="pub/rt/release/rt-$VERSION.tar.gz"
       URL="http://download.bestpractical.com/"
  HOMEPAGE="http://www.bestpractical.com/rt"
       REQ=( "perl httpd perl--Test-Inline perl--DBIx-SearchBuilder 
              perl--Text-Template perl--HTML-Scrubber 
              perl--Locale-Maketext-Fuzzy perl--Locale-Maketext-Lexicon 
              perl--Log-Dispatch perl--Net-SNMP perl--MIME-tools 
              perl--Text-Wrapper perl--Time-modules perl--TermReadKey 
              perl--Text-Quoted perl--Tree-Simple perl--Module-Versions-Report 
              perl--UNIVERSAL-require perl--Calendar-Simple perl--Regexp-Common
              perl--Apache-Test perl--libwww perl--Test-WWW-Mechanize 
              perl--XML-Simple perl--GD perl--Test-Expect perl--Module-Refresh
              perl--HTML-Format perl--HTML-Mason perl--MLDBM perl--XML-RSS
              perl--Apache-Session perl--HTTP-Server-Simple-Mason
              perl--GDGraph perl--Text-WikiFormat perl--Apache-DBI" 
             "perl--DBD-mysql:--with-db-type=mysql::for mysql support (choose one database)"
             "perl--DBD-Pg:--with-db-type=Pg::for PostgreSQL support (choose onedatabase)"
           )
   EXCLUDE="/opt/rt3.sav"
  ESTIMATE="229"
      DESC="rt is an enterprise-grade ticketing system
that enables a group of people to intelligently and 
efficiently manage tasks, issues, and requests submitted
