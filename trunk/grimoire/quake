    stable 106
   require lha unzip
    ignore '108'
  category game
 attribute data
    source ftp://ftp.idsoftware.com/idstuff/quake/quake$VERSION.zip
  homepage http://www.idsoftware.com/games/quake/quake/
      desc 'quake provides the shareware quake 1'

build(){
prepare_install &&
mkdir -vp /usr/share/games/quake &&
cd        /usr/share/games/quake &&
lha x $BUILD_DIR/resource.1
}
