   VERSION=( 106 )
    IGNORE="108"
  CATEGORY='game'
 ATTRIBUTE='data'
    SOURCE="quake$VERSION.zip"
       URL='ftp://ftp.idsoftware.com/idstuff/quake/'
  HOMEPAGE='http://www.idsoftware.com/games/quake/quake/'
       REQ='lha unzip'
      DESC="quake provides the shareware quake 1"


build() {
prepare_install                    &&
mkdir  -p  /usr/share/games/quake  &&
cd         /usr/share/games/quake  &&
lha     x  $BUILD_DIR/resource.1
}
