   version stable 449 444 443 441 440 438
   require ncurses
  category utility
 attribute console solo
    source http://www.greenwoodsoftware.com/less/less-$VERSION.tar.gz
      info vurl http://www.greenwoodsoftware.com/less/download.html
      info last 20120628
      info home http://www.greenwoodsoftware.com/less/
      info mail http://www.greenwoodsoftware.com/less/less-announce.html
      desc 'paginator that allows backward and forward movement'

build(){
 default_build &&
 mkdir -pvm 755 $DESTDIR/bin &&
 mv             $DESTDIR/usr/bin/less $DESTDIR/bin
}
