    version stable 1.0
    require drascula-audio
   optional drascula-int
   category game development/emulator
  attribute archive_off data
     source $SOURCEFORGE_URL scummvm/extras/Drascula_%20The%20Vampire%20Strikes%20Back/drascula-$VERSION.zip
       info good 20120716
       info last 20080830
       desc 'Drascula: The Vampire Strikes Back, Freeware Version (English)'

build(){
 chmod -R 644 */*
 mkdir -pvm 755 $DESTDIR/usr/share/games/drascula &&
 cp    -av *    $DESTDIR/usr/share/games/drascula/
}
