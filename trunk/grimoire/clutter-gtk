# Disable introspection because clutter source fails introspection
# 0.91.8 require gtk+ 3.x version

   version stable 0.10.8 0.10.2
case $VERSION in
 0.10.8)
      opts --enable-introspection=no ;;
esac
   require clutter
  category audio/cd
 attribute gnome library makej multilib-concurrent
    source http://www.clutter-project.org/sources/clutter-gtk/${VERSION:0:4}/clutter-gtk-$VERSION.tar.bz2
      info home  http://clutter-project.org/
      info docs  http://www.clutter-project.org/documentation
  estimate 260
      desc 'library for creating fast visually rich animated GUIs'
