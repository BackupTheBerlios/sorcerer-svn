    stable 1.7 1.6.2 1.6 1.5 1.4 1.3.1 1.3 1.2.2 1.2 1.1 1.0
   require flex libgnomeprint
  optional hamlib --enable-hamlib '' to read frequence of rig over serial port

  category utility/ham
 attribute x11
    source xlog-$VERSION.tar.gz
       url http://pg4i.chronos.org.uk/download/
  homepage http://pg4i.chronos.org.uk/linux/xlog.html
  estimate 500
      desc 'xlog is a ham radio logging program for X'

build(){
./configure          \
--prefix=/usr        \
--sysconfdir=/etc    \
--localstatedir=/var \
$OPTS               &&
make                &&
prepare_install     &&
make    install-strip
}
