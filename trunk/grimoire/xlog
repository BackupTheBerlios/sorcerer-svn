   version stable 2.0.5 2.0.4 2.0.3 2.0.2
   require flex hamlib libgnomeprint
  optional hamlib --enable-hamlib '' to read frequence of rig over serial port
  category utility/ham
 attribute x11
#   source http://pg4i.chronos.org.uk/download/xlog-$VERSION.tar.gz
    source http://savannah.spinellicreations.com/xlog/xlog-$VERSION.tar.gz
      info last  20110223
  homepage http://pg4i.chronos.org.uk/linux/xlog.html
  estimate 1000
      desc 'ham radio logging program for X'

build(){
 ./configure \
  --prefix=/usr \
  --sysconfdir=/etc \
  --localstatedir=/var \
  $OPTS &&
 make &&
 make install-strip DESTDIR=$DESTDIR
}
