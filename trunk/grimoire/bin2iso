# Never new versions
# version 0.4 released 20070501
# Website unreachable 20120603
# might not exist at the Sorcerer master source cache.

   version stable 0.4
  category disk/cd
 attribute console
    source http://mange.dynalias.org/linux/bin2iso/bin2iso-$VERSION.c
#     info good 20120603
      info last 20070501
      info home http://mange.dynalias.org/linux/bin2iso/
      desc 'converts img and bin files to iso9660'

build(){
mkdir -pvm 755 $DESTDIR/usr/bin
gcc $CFLAGS $LDFLAGS $SOURCE -o $DESTDIR/usr/bin/bin2iso &&
chmod 755 $DESTDIR/usr/bin/bin2iso
}
