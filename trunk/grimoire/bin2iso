# Never new versions
# version 0.4 released 20070501

    stable 0.4
  category disk/cd
 attribute console
    source http://mange.dynalias.org/linux/bin2iso/bin2iso-$VERSION.c
      home http://mange.dynalias.org/linux/bin2iso/
      desc 'converts img and bin files to iso9660'

build(){
mkdir -p $DESTDIR/usr/bin
gcc $CFLAGS $LDFLAGS $SOURCE -o $DESTDIR/usr/bin/bin2iso &&
chmod 755 $DESTDIR/usr/bin/bin2iso
}
