# Spell is incomplete
# Better to use ZRAM module available in the staging section of linux

   version stable 0.6.2
      opts --enable-static=no --enable-shared
  category archive
 attribute console linux-26-module makej
 attribute broke
    source http://compcache.googlecode.com/files/compcache-$VERSION.tar.gz
      info home  http://code.google.com/p/compcache/
 freshmeat none
      desc 'userspace for ramzswap which acts as a swap disk
Pages swapped to this disk are compressed and stored in memory itself.

This probably requires ZRAM which is a driver in the staging section
of the linux kernel configuration'

build(){
 make_install(){
  mkdir  -pvm 755 $DESTDIR/lib/modules $DESTDIR/usr/man/man1 $DESTDIR/usr/bin
  install -vm 644 sub-projects/rzscontrol/man/rzscontrol.1   $DESTDIR/usr/man/man1/
  install -vm 755 sub-projects/rzscontrol/rzscontrol         $DESTDIR/usr/bin
 }
  
 LVER="$( installed_version $( get_provider linux-kernel ) )"
 make KERNEL_BUILD_PATH=/lib/modules/$LVER/build &&
 make_install
}
