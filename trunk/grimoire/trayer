   VERSION=( 1.0 )
  CATEGORY='window-manager'
 ATTRIBUTE='x11 new broken'
    SOURCE="trayer-$VERSION.tar.gz"
       URL='http://download.berlios.de/fvwm-crystal/'
  HOMEPAGE='http://fvwm-crystal.berlios.de/'
       REQ='gtk+'
case $VERSION in
 1.0) USE_GCC=gcc-v4.0 ;;
esac
  ESTIMATE='25'
      DESC='trayer provides notification area/systray'

build() {
make             &&
prepare_install  &&
make    install
}
