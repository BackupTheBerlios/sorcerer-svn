   version stable 3.0.1 3.0.0
   require brasero gstreamer libmusicbrainz3 libnotify
  category audio audio/cd
 attribute gnome
    source $GNOME_URL sources/goobox/${VERSION:0:3}/goobox-$VERSION.tar.xz
      info last 20120403
      info home http://www.gnome.org
      desc 'goobox is a CD player and ripper for GNOME'

