   version stable 2.0.0 1.9.2
   require gstreamer libmusicbrainz libnotify
  category music/cd
 attribute gnome
    source $GNOME_URL sources/goobox/${VERSION:0:3}/goobox-$VERSION.tar.bz2
  homepage http://www.gnome.org
      desc 'goobox is a CD player and ripper for GNOME'

