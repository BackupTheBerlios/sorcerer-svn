# no longer supported by software author?

   version stable 1.1.0
   require SDL_image SDL_mixer
  category game
 attribute x11
    source $SOURCEFORGE_URL twind/twind/$VERSION/twind-$VERSION.tar.gz
      info good 20120711
      info last 20060528
      info home http://www.linux-games.com
      desc 'a block removal game'

build(){
sed -i "s:/usr/local:$DESTDIR/usr:
        s:-Wall -g:$CFLAGS:
        s:-lm:-lm $LDFLAGS:" Makefile
make &&
mkdir -pvm 755 $DESTDIR/usr/bin &&
make install
}
