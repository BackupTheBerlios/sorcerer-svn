    stable 1.1.0
   require SDL_image SDL_mixer

    ignore '^1\.0'
  category game
 attribute new x11
    source twind/twind-$VERSION.tar.gz
  homepage http://www.linux-games.com
       url "$SOURCEFORGE_URL"
  estimate 7
      desc 'twind is twin distress, a block removal game.'


build(){
 sed -i "s:/local::
         s:-Wall -g:$CFLAGS:
         s:-lm:-lm $LDFLAGS:" Makefile
 make            &&
 prepare_install &&
 make    install
}
