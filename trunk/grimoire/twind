   VERSION=( "1.1.0" )
  CATEGORY="game"
 ATTRIBUTE="new x11"
    SOURCE="twind/twind-$VERSION.tar.gz"
  HOMEPAGE="http://www.linux-games.com"
       URL="$SOURCEFORGE_URL"
       REQ="SDL_image SDL_mixer"
      OPTS="--bindir=/usr/games"
  ESTIMATE="7"
 FRESHMEAT="twind"
     SHORT="twind is twin distress, a block removal game."


build()  {
  sed  -i  "s:/local::
            s:-Wall -g:$CFLAGS:
            s:-lm:-lm $LDFLAGS:"  Makefile
  make             &&
  prepare_install  &&
  make    install
}
