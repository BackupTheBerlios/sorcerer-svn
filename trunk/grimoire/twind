    stable 1.1.0
   require SDL_image SDL_mixer
  category game
 attribute new x11
    source $SOURCEFORGE_URL twind/twind/$VERSION/twind-$VERSION.tar.gz
  homepage http://www.linux-games.com
      desc 'twin distress, a block removal game'

build(){
sed -i "s:/usr/local:$DESTDIR/usr:
        s:-Wall -g:$CFLAGS:
        s:-lm:-lm $LDFLAGS:" Makefile
make &&
make install
}
