   VERSION=( "0.2" )
  CATEGORY="terminal-emulator"
 ATTRIBUTE="x11 new"
    SOURCE="yeahconsole-$VERSION.tar.gz"
       URL="http://phrat.de"
  HOMEPAGE="http://phrat.de/yeahtools.html"
       REQ="x11"
  ESTIMATE="10"
      DESC="yeahconsole provides xterm at top of screen similar to game console.
Yeahconsole puts an xterm window on top of your screen that
behaves like the console found in many games (similar to kuake).
Its visibility can be toggled by a keyboard shortcut.

It may require yeahwm, because it crashes with evilwm."


build()  {
make             FLAGS="$CFLGAS $LDFLAGS"  &&
prepare_install                            &&
make    install  PREFIX=/usr               &&
install  -m 0644  -o root  -g root  README  /usr/doc/yeahconsole
}
