    stable 0.8.5 0.8.4 0.8.3 0.8.2 0.8.1 0.8.0
   require curl libtorrent openssl
  category network/file-share
 attribute console
    source http://libtorrent.rakshasa.no/downloads/rtorrent-$VERSION.tar.gz
  homepage http://libtorrent.rakshasa.no/
case $VERSION in
 0.8.[1-4]) use_gcc gcc-v4.2 ;;
esac
      opts --disable-debug
    CFLAGS='-O3'
  CXXFLAGS='-O3'
   LDFLAGS='-Wl,-O1'
  estimate 400
 freshmeat rtorrent
      desc 'rtorrent is a ncurses client for bittorrent.
It supports saving of sessions.
It allows the user to add and remove torrents.'
