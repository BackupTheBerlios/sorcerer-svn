    stable 0.8.7 0.8.6 0.8.5
   require curl libtorrent openssl
  category network/file-share
 attribute console
    source http://libtorrent.rakshasa.no/downloads/rtorrent-$VERSION.tar.gz
  homepage http://libtorrent.rakshasa.no/
      opts --disable-debug
    CFLAGS='-O3'
  CXXFLAGS='-O3'
   LDFLAGS='-Wl,-O1'
  estimate 400
      desc 'ncurses client for bittorrent
It supports saving of sessions.
It allows the user to add and remove torrents.'

build(){
 install_doc(){
  mkdir  -pm 755 $DESTDIR/{etc,/usr/man/man1}
  install -m 644 doc/rtorrent.1  $DESTDIR/usr/man/man1/
  install -m 644 doc/rtorrent.rc $DESTDIR/etc/
 }

default_build &&
install_doc
}
