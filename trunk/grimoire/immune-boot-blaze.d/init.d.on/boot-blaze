#!/bin/bash

### BEGIN INIT INFO
# Required-Start: $local_fs
# Should-Start: tmp
# Default-Start: 2 3 4 5
# Short-Description: boot-blaze reduces system startup and login time
### END INIT INFO

if [ "$1" == try-restart ]; then exit 0; fi
if read < /proc/cmdline; [[ $REPLY =~ boot=IR ]]; then exit 0; fi

. /lib/lsb/init-functions

server /usr/sbin/bootblaze
parse "$@"
