    stable 008
   require sysfsutils
  category utility
 attribute console library
    source http://kernel.org/pub/linux/utils/kernel/cpufreq/cpufrequtils-$VERSION.tar.bz2
  homepage http://kernel.org/pub/linux/utils/kernel/cpufreq/cpufrequtils.html
  estimate 60
      desc 'library for accessing CPU throttling'

build(){
 prog_install(){
  mkdir -p 755 $DESTDIR/bin
  for REPLY in $SCRIPT_DIR/bin/*
  do  install -m 755 $REPLY $DESTDIR/bin
  done
 }

 make &&
 make install "DESTDIR=$DESTDIR" &&
 prog_install &&
 if   [[ $HOSTTYPE == x86_64   ]]; then
  if  [[ $CFLAGS   =~ -m32     ]]; then mv $DESTDIR/usr/lib{,32}
                                   else mv $DESTDIR/usr/lib{,64}
   if [[ -d $DESTDIR/usr/lib32 ]]; then mv $DESTDIR/usr/lib{32,}; fi
  fi
 fi
}
