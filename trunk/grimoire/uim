   VERSION=( 1.3.1 1.3.0 1.2.1 )
    IGNORE="alpha\|beta"
  CATEGORY='input'
 ATTRIBUTE='console library x11'
    SOURCE="uim-$VERSION.tar.bz2"
       URL='http://uim.freedesktop.org/releases/'
