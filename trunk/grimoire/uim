   VERSION=( 1.4.1 1.3.1 1.3.0 1.2.1 )
    IGNORE='alpha\|beta'
  CATEGORY='input'
 ATTRIBUTE='console library x11'
    SOURCE="uim-$VERSION.tar.bz2"
       URL='http://uim.freedesktop.org/releases/uim/stable/'
  HOMEPAGE='http://uim.freedesktop.org/wiki/'
# In uim 1.4.1 there might be a kde-applet, but for kde 3.x?
#             ':--enable-kde-applet::for kde panel applet'
       REQ=( ''
             'Canna:--with-canna::for canna Japanese input system'
             'anthy::--without-anthy:for anthy Japanese input system'
             'gnome-panel::--disable-applet:for gnome applet indicator'
             'gtk+::--without-gtk2:for gtk tools and immodule'
             'm17n-lib:::for a multilingual text processing library'
             'mana::--without-mana:for mana Japanese input system'
             'prime::--without-prime:for prime Japanese input system' )
      OPTS='--enable-dict --enable-static=no'
  ESTIMATE='2000'
      DESC='uim is a multilingual input method library.
The project goal is to provide a flexible
development platform and useful user environment for input methods.'

build(){
 case $VERSION in
  1.4.1) sed -i 's:1i#include <iostream>
                   1iusing namespace std' xim/ximserver.cpp ;;
 esac
 default_build
}
