    stable 1.5.7 1.5.6 1.5.5 1.5.4 1.5.3 1.5.1
  optional Canna       --with-canna ''               for canna Japanese input system
  optional anthy       ''           --without-anthy  for anthy Japanese input system
  optional gnome-panel ''           --disable-applet for gnome applet indicator
  optional gtk+        ''           --without-gtk2   for gtk tools and immodule
  optional m17n-lib    ''           ''               for a multilingual text processing library
  optional mana        ''           --without-mana   for mana Japanese input system
  optional prime       ''           --without-prime  for prime Japanese input system
  category input
 attribute console library x11
    source http://uim.googlecode.com/files/uim-$VERSION.tar.bz2
  homepage http://uim.freedesktop.org/wiki/
      vurl http://code.google.com/p/uim/
      opts --enable-dict --enable-static=no
  estimate 2300
      desc 'multilingual input method library'

post_install(){
 if   spell_installed gtk-query-immodules-2.0
 then echo            gtk-query-immodules-2.0 | pipe_queue $CAST_QUEUE com
 fi
 default_post_install
}
