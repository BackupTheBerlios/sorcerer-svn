    stable 4_2
  category font/library
 attribute library new
    source http://download.icu-project.org/files/icu4c/4.2/icu4c-4_2-src.tgz
  homepage http://icu-project.org/
  estimate 1996
   require glibc
      desc 'ICU is a mature, widely used set of C/C++ and Java libraries providing Unicode and Globalization support for software applications
'

build(){
  cd source/              &&
  ./runConfigureICU Linux --prefix=/usr &&
  make                    &&
  prepare_install         &&
  make    install
}
