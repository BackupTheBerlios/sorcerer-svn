   version stable 4_6 4_2_1 4_2
      info last  20101202
   require gcc-g++
# Why require glibc?  Does this only install on glibc and not uClibc?
#  require glibc
  category font/library
 attribute hidden library makej multilib-dual
    source http://download.icu-project.org/files/icu4c/${VERSION//_/.}/icu4c-$VERSION-src.tgz
      info home  http://icu-project.org/
      info docs  http://userguide.icu-project.org/
#     vurl http://site.icu-project.org/download
      desc 'set of C/C++ and Java libraries that provide Unicode and Globalization
support for software applications'

build(){
 cd source/ &&
 ./runConfigureICU Linux --prefix=/usr &&
 make &&
 make install DESTDIR=$DESTDIR
}
