   VERSION=( "2.8" "2.7" )
  CATEGORY="audio/mixer"
 ATTRIBUTE="console x11"
    SOURCE="aumix-$VERSION.tar.bz2"
       URL="http://www.jpj.net/~trevor/aumix/"
