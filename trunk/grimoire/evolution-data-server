build(){
 export pkg-config info instead of using configure switches
 # --with-nspr-includes
 export   CFLAGS+=" $( pkg-config --cflags nspr )"
 export CXXFLAGS+=" $( pkg-config --cflags nspr )"
 #export  LDFLAGS+=" $( pkg-config --libs   nspr )"
 default_build
}
