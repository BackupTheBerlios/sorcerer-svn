   version stable 1.4.3p1
   require expat pcre zlib
      opts --config=Linux --no-tests --no-samples --unbundled --shared
  category development/compiler
 attribute console library makej multilib-concurrent
    source $SOURCEFORGE_URL poco/sources/poco-${VERSION:0:5}/poco-$VERSION.tar.gz
      info last 20120123
      info home http://pocoproject.org/
      desc 'c++ library for building network and internet based apps'

build(){
 fix_install(){
  if [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
  then mv $DESTDIR/usr/lib{,64}
  fi
 }

 default_build &&
 fix_install
}
