   VERSION=( "1.0" )
  CATEGORY="utility"
 ATTRIBUTE="console"
       URL="http://graflex.org/klotz/software/progress"
  HOMEPAGE="http://graflex.org/klotz/software/progress"
  ESTIMATE="3"
      DESC="progress is a pipe utility that reports progress of data through stderr.

progress is a utility used in a pipe to report 
the progress of data transfer to standard error.
Command-line arguments specify how frequently to report, 
what character to use to report, and how much buffering to do.
"


build() {
[  -f         progress.c  ]                &&
gcc  $CFLAGS  progress.c  -o progress      &&
prepare_install                            &&
install  -s  -m 755  progress    /usr/bin  &&
install      -m 644  progress.1  /usr/man/man1
}
