# not sure where this is getting the -L/usr/lib64 during multilib compilation

   version stable 0.7.2-free 0.7.1-free
   require MesaLib fontconfig fribidi
      opts --enable-static=no
  category font/library
 attribute library makej multilib-dual
#attribute multilib-fail
    source $SOURCEFORGE_URL quesoglc/QuesoGLC%20free/${VERSION:0:5}/quesoglc-$VERSION.tar.bz2
      info home http://quesoglc.sourceforge.net/
      desc 'library for rendering fonts using OpenGL'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] &&
      [[ $CFLAGS   =~ -m32   ]]
 then opts --x-libraries=/usr/lib
 fi
 default_build
}
