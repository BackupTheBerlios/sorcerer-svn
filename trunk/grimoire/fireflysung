    stable 1.3.0
   require fontconfig
  category font
 attribute data
    source http://www.study-area.org/apt/firefly-font/fireflysung-$VERSION.tar.gz
  homepage http://www.study-area.org/apt/firefly-font/
      desc 'firelysung provides truetype unicode fonts for Chinese.'

build(){
 install_fonts(){
  mkdir -p        /usr/lib/X11/fonts/TrueType
  cp    -av *.ttf /usr/lib/X11/fonts/TrueType/
  fc-cache        /usr/lib/X11/fonts/TrueType/
 }

 [ -f fireflysung.ttf ] &&
 prepare_install &&
         install_fonts
}
