   version stable 1.3.0
   require fontconfig
  category font
 attribute data
    source http://www.study-area.org/apt/firefly-font/fireflysung-$VERSION.tar.gz
      info good 20120607
      info last 20050327
      info home http://www.study-area.org/apt/firefly-font/
      desc 'truetype unicode fonts for Chinese'

build(){
 install_fonts(){
  mkdir -pvm 755  $DESTDIR/usr/share/fonts/TrueType
  cp    -av *.ttf $DESTDIR/usr/share/fonts/TrueType/
# fc-cache        $DESTDIR/usr/share/fonts/TrueType/
 }

 [ -f fireflysung.ttf ] &&
 install_fonts
}

post_install(){
 default_post_install
 fc-cache usr/share/fonts/TrueType/
}
