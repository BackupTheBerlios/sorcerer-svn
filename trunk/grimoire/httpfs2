   version stable 0.1.4
   require fuse
#  require asciidoc fuse
  category network/file-share
 attribute console client
    source $SOURCEFORGE_URL httpfs/httpfs2/httpfs2-$VERSION.tar.gz
      info good 20120609
      info last 20100313
      info home http://httpfs.sourceforge.net/
      desc 'fuse based read only filesystem across HTTP'

build(){
 make httpfs2 &&
 mkdir  -pvm 755               $DESTDIR/{sbin,usr/doc/httpfs2} &&
 install -vm 755 httpfs2       $DESTDIR/sbin/                  &&
 install -vm 644 httpfs2.1.txt $DESTDIR/usr/doc/httpfs2/
}
