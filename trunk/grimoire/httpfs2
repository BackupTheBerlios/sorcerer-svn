    stable 0.1.3
   require fuse
#  require asciidoc fuse
  category network/file-share
 attribute console client
    source $SOURCEFORGE_URL httpfs/httpfs2/httpfs2-$VERSION.tar.gz
  homepage http://httpfs.sourceforge.net/
      desc 'fuse based read only filesystem across HTTP'

build(){
make httpfs2 &&
prepare_install &&
install -vm 755 httpfs2 /sbin/ &&
mkdir  -vpm 755 /usr/doc/httpfs2 &&
install -vm 644 httpfs2.1.txt /usr/doc/httpfs2/
}
