# neon support is not current
# uses neon bundled with gnome-vfs source
#     opts --disable-http-neon

# The lack of cooperation between Gnome KDE, QT, and avahi authors
# has caused a circular requirement loop that is best broken here
# by not including avahi in requirements although
# gnome-vfs does have an optional on avahi.

# installed gnome-vfs causes firefox to crash
# installed gnome-vfs causes ntfsprogs to fail compilation

   version stable 2.24.4 2.24.3 2.24.2
   require GConf e2fsprogs gnome-mime-data libbonobo neon
#  require GConf e2fsprogs gnome-mime-data hal libbonobo neon
  optional cdparanoia '' ''              for writing CDs
# optional gamin      '' ''              for file alteration monitoring
  optional heimdal    '' ''              for kerberos authentication support
  optional openssl    '' ''              for secure socket connections
  optional samba      '' --disable-samba for connecting to Microsoft networks
      opts --enable-static=no
  category development
 attribute gnome library makej multilib-concurrent
 attribute broke deprecated
    source $GNOME_URL sources/gnome-vfs/${VERSION:0:4}/gnome-vfs-$VERSION.tar.bz2
      info home http://developers.gnome.org/doc/API/gnome-vfs
      desc 'Gnome Virtual File System'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
