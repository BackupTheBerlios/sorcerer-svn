with version unstable 1.1.90
case $VERSION in
 0.10.13)
with base    ffmpeg-v0.7 ;;
 0.11.2)
with base    ffmpeg-v0.7 ;;
esac
with base    gst-plugins-base
with also    --disable-examples --enable-static=no --enable-lgpl
