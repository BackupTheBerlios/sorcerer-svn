    stable 3.4.3.01
   require ncurses
  optional libX11 '--enable-x11-graphics --enable-default-graphics=x11' '' for X11 graphic interface
  category game
 attribute noheal x11 broke
    source $SOURCEFORGE_URL auto-nethack/auto-nethack/$VERSION/autonethack-$VERSION.tar.bz2
  homepage http://auto-nethack.sourceforge.net
# gtk+ programs may not run guid games.
#   'gtk+:--enable-gtk2hack-graphics --enable-default-graphics=gtk2::Enable gtk2hack graphic interface'
  estimate 328
      desc 'easier to install nethack'

build(){
 chown_installed(){
  chown root:games $DESTDIR/usr/games/lib/nethackdir
  chmod 0775       $DESTDIR/usr/games/lib/nethackdir
  chown root:games $DESTDIR/usr/games/lib/nethackdir/nethack
  chmod 2755       $DESTDIR/usr/games/lib/nethackdir/nethack
  chown root:games $DESTDIR/usr/games/lib/nethackdir/{save,perm,record,logfile}
  chmod 0775       $DESTDIR/usr/games/lib/nethackdir/save
  chmod 0664       $DESTDIR/usr/games/lib/nethackdir/{perm,record,logfile}
 }

 default_build &&
 chown_installed
}
