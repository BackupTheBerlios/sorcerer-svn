# version 3.5.5 does not appear to be on kde's ftp server.
# 3.5.4 disappeared?

#   stable 3.5.4 3.5.3 3.5.2 3.5.1 3.5.0
   version stable 3.5.2
   require kdelibs-v3
  optional ctags      ''                ''                     for source browsing functionality 
  optional cvs        --enable-cvs       --disable-cvs         for cvs vcs support 
# optional graphviz   ''                 ''                    for graphical classbrowser
  optional htdig      ''                 ''                    for help functionality
  optional subversion --enable-subversion --disable-subversion for subversion vcs support

  switch --enable-ada           --disable-ada           support prog. lang. Ada
  switch --enable-bash          --disable-bash          support prog. lang. bash
  switch --enable-cpp           --disable-cpp           support prog. lang. C and C++
  switch --enable-fortran       --disable-fortran       support prog. lang. Fortran
  switch --enable-haskell       --disable-haskell       support prog. lang. haskell
  switch --enable-java          --disable-java          support prog. lang. Java
  switch --enable-pascal        --disable-pascal        support prog. lang. Pascal
  switch --enable-perl          --disable-perl          support prog. lang. perl
  switch --enable-php           --disable-php           support prog. lang. PHP
  switch --enable-python        --disable-python        support prog. lang. Python
  switch --enable-ruby          --disable-ruby          support prog. lang. ruby
  switch --enable-sql           --disable-sql           support prog. lang. support for SQL
  switch --enable-antproject    --disable-antproject    support build tool ant
  switch --enable-autoproject   --disable-autoproject   support build tool autotools
  switch --enable-customproject --disable-customproject support build tool for custom makefiles
  switch --enable-scriptproject --disable-scriptproject support build tool for script
  switch --enable-trollproject  --disable-trollproject  support build tool for qmake

   inherit kde-v3
  category development
    source stable/apps/KDE3.x/ide/kdevelop-$VERSION.tar.bz2
  homepage http://www.kdevelop.org/
      desc 'C/C++ development environment
kdevelop is an integrated development environment
which makes the creation and development of GNU
Standard Applications an easy task even for beginners.
Highlights of the current release are: an application
wizard for easy creation of KDE 2&3, Qt 2&3, GNOME,
and terminal C/C++ projects, full project management,
a syntax-highlighting editor, an integrated dialog editor
for the Qt/KDE GUI libraries, an internal debugger,
a full-featured classbrowser with classtools, CVS
support, an integrated HTML-based helpsystem
offering manuals and class-references, and extensive
search mechanisms to browse sources and documentation.'

build(){
 [ -f configure ] ||
 make -f Makefile.cvs
 default_build
}
