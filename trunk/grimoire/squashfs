    stable 4.0
   require zlib
  category disk/file-system
 attribute console
    source $SOURCEFORGE_URL squashfs/squashfs/squashfs$VERSION/squashfs$VERSION.tar.gz
  homepage http://squashfs.sourceforge.net/
      desc 'squashfs provides tools for creating squashfs images.'

build(){
cd squashfs-tools
make &&
make install INSTALL_DIR=$DESTDIR/usr/sbin
}
