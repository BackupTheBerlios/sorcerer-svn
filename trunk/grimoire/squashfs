   version stable 4.2
   require zlib
  category disk/file-system
 attribute console
    source $SOURCEFORGE_URL squashfs/squashfs/squashfs$VERSION/squashfs$VERSION.tar.gz
      info good 20120709
      info last 20110228
      info home http://squashfs.sourceforge.net/
      desc 'tools for creating squashfs images'

build(){
cd squashfs-tools
make &&
make install INSTALL_DIR=$DESTDIR/usr/sbin
}
