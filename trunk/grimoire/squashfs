    stable 4.0
   require zlib
  category disk/file-system
 attribute console
       url $SOURCEFORGE_URL
    source squashfs/squashfs$VERSION.tar.gz
  homepage http://squashfs.sourceforge.net/
      desc 'squashfs provides tools for creating squashfs images.'

build(){
cd squashfs-tools
make &&
prepare_install &&
make    install INSTALL_DIR=/usr/sbin
}
