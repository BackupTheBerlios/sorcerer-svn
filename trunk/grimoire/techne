# Version 0.2 requires WebKit
# version 0.2 compile not tested.
# multilib-fail because openal is multilib-fail

    stable 0.1
  unstable 0.2
   require MesaLib fontconfig freetype libpng lua ode openal
  category game/3d
 attribute library makej x11
 attribute multilib-fail
    source http://download.savannah.gnu.org/releases/techne/techne-$VERSION.tar.gz
  homepage http://www.nongnu.org/techne/
  estimate 1000
      desc 'physical simulator and renderer'

build(){
 sed -i 's:lua5\.1:lua:
         s:luac]:luac:' configure
 default_build
}
