  stable 0.09 0.08 0.07 0.06
  CATEGORY='dockapps'
 ATTRIBUTE='new x11'
    SOURCE="wmifinfo-$VERSION.tgz"
       URL='http://zevv.nl/play/code/wmifinfo/'
  HOMEPAGE='http://zevv.nl/play/code/wmifinfo/'
       REQ='libXpm'
  ESTIMATE='14'
      DESC='wmifinfo is a WM applet showing network info
for all available interfaces. 
It shows the IP address, netmask, gateway, and 
MAC address. If used on a wireless (802.11) 
network card, it also shows a signal strength indicator.'

build() {
  sed -i 's:/usr/local:/usr:' Makefile

  make             &&
  prepare_install  &&
  make   install
}
