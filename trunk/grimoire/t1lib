    stable 5.1.2 5.1.1 5.1.0 5.0.2 5.0.1 5.0.0 1.3.1
    secure 5.1.2 5.1.1
   require libXaw
  category font/library
 attribute library
    source ftp://sunsite.unc.edu/pub/Linux/libs/graphics/t1lib-$VERSION.tar.gz
  homepage http://www.foolabs.com/xpdf/
      opts --enable-static=no
  estimate 400
      desc 'Type1 fonts rasterization library
t1lib is a library written in C which implements
functions for generating bitmaps from Adobe Type 1 fonts.
It uses most internal parts of the Type 1 rasterizer
provided with X11R5 and newer but tries avoid the
disadvantages known from that rasterizer.'

build(){
./configure \
--prefix=/usr &&
make without_doc &&
make install DESTDIR=$DESTDIR
}
