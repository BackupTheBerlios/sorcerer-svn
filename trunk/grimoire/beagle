# No package 'taglib-sharp' found
# 0.3.8 has new requirements

    stable 0.3.9 0.3.7 0.2.18
  unstable 0.3.9 0.3.8
   require gmime gnome-sharp libXScrnSaver ndesk-dbus-glib sqlite
  optional evolution-sharp '' ''             for evolution support
  optional monodoc         '' --disable-docs for building documentation
  category utility
 attribute gnome
       url $GNOME_URL
    source sources/beagle/${VERSION:0:3}/beagle-$VERSION.tar.bz2
  homepage http://www.gnome.org
  estimate 1000
      desc 'beagle is a find utility'

configure(){
 if  ! [ -f              $OPT_ON_LOGS/gmime ] ||
     ! grep -q   mono    $OPT_ON_LOGS/gmime 2>/dev/null
 then  echo      mono >> $OPT_ON_LOGS/gmime
  if   [ -f              $OPT_OFF_LOGS/gmime ] &&
       grep -qx mono     $OPT_OFF_LOGS/gmime
  then sed  -i '/mono/d' $OPT_OFF_LOGS/gmime
  fi
  generate_index
 fi
}
