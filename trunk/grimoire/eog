   version   stable 3.4.0 3.2.2 3.2.0 3.0.0
   version unstable 3.4.0 3.3.92 3.3.91
   require dbus-glib gnome-desktop gsettings-desktop-schemas libexif libpeas librsvg
  optional lcms2
  category graphic/viewer
 attribute gnome library makej multilib-concurrent
    source $GNOME_URL sources/eog/${VERSION:0:3}/eog-$VERSION.tar.xz
      info last 20120327
      info home http://www.gnome.org
      desc 'image viewer program
eog is eye of gnome an image viewing and cataloging program.
It is meant to be a fast and functional image viewer
as well as an image cataloging program.'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
