# 3.6.21 available but DNS to namesys.com is not
#   stable 3.6.21 3.6.20 3.6.19 3.6.18
    stable 3.6.20 3.6.19 3.6.18
   require e2fsprogs
  category disk/file-system
 attribute console
  homepage http://www.namesys.com/
       url 'ftp://ftp.namesys.com/pub/
            ftp://ftp.lugoj.org/pub/reiserfs/devlinux.com/pub/namesys/
            ftp://ftp.tu-graz.ac.at/mirror/reiserfs/
            ftp://cambuca.ldhs.cetuc.puc-rio.br/pub/reiserfs-ftp/a/
            ftp://ftp.exinferis.de/reiserfs/
            ftp://mirror.nucba.ac.jp/mirror/reiserfs/
            http://mirror.nucba.ac.jp/mirror/reiserfs/
            ftp://linux.sarang.net/mirror/driver/fs/reiserfs/
            ftp://ftp.ps.pl/pub/linux/reiserfs/
            ftp://ftp.roedu.net/pub/mirrors/ftp.namesys.com/pub/'
    source reiserfsprogs/reiserfsprogs-$VERSION.tar.gz
      opts --sbindir=/sbin
  estimate 450
      desc 'reiserfsprogs contains tools for using reiser file system.

reiserfs is a evolutionary new approach to file system design
which stores not just filenames but the files themselves in a B*-tree.'


current(){
 case $VERSION in
  3.6.20) [ -f /sbin/fsck.reiserfs ] ;;
 esac
}
