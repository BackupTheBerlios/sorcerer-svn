    stable 0.3.0 0.2.0 0.1.1 0.1.0 0.0.19
case $VERSION in
 0.3.0) use_gcc gcc-v4.2 ;;
esac
   require SDL_image SDL_mixer SDL_net fftw scons
  category game
  attribute x11 new
       url $SOURCEFORGE_URL
    source dangerdeep/danger_from_the_deep-src/$VERSION/dangerdeep-$VERSION.tar.gz
    source dangerdeep/danger_from_the_deep-data/$VERSION/dangerdeep-data-$VERSION.zip
  homepage http://dangerdeep.sourceforge.net
  estimate 150
      desc 'World War II german submarine simulation'

build(){
sed -i 's:/usr/local/:/usr/:' SConstruct
scons           &&
prepare_install &&
scons   install &&
cp -r data /usr/share/dangerdeep
}
