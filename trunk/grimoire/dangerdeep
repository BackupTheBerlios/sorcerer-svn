   VERSION=( "0.0.19" )
  CATEGORY="game"
 ATTRIBUTE="x11 new"
    SOURCE="dangerdeep/dangerdeep-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://dangerdeep.sourceforge.net"
       REQ="SDL_image SDL_mixer SDL_net fftw scons"
      OPTS="--bindir=/usr/games"
  ESTIMATE="96"
      DESC="dangerdeep is a World War II german submarine simulation."

build() {
sed    -i  "s:libpath = \[\]:libpath = ['/usr/X11R6/lib']:
            s:-Wall -g -O2:$CXXFLAGS:" SConstruct
scons            &&
prepare_install  &&
scons   install
}
