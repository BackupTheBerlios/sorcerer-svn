    stable 0.3.0 0.2.0 0.1.1 0.1.0 0.0.19
   require SDL_image SDL_mixer SDL_net fftw scons
    ignore 'data\|i386\|win32'
  category game
  attribute x11 new
    source dangerdeep/dangerdeep-$VERSION.tar.gz
    source dangerdeep/dangerdeep-data-$VERSION.zip
       url "$SOURCEFORGE_URL"
  homepage http://dangerdeep.sourceforge.net
  estimate 150
      desc 'dangerdeep is a World War II german submarine simulation.'

build(){
sed -i 's:/usr/local/:/usr/:' SConstruct
scons           &&
prepare_install &&
scons   install &&
cp -r data /usr/share/dangerdeep
}
