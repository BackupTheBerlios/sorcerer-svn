   VERSION=( "20060213" )
  CATEGORY="disk utility"
 ATTRIBUTE="console"
    SOURCE="prelink-$VERSION.tar.bz2"
       URL="http://people.redhat.com/jakub/prelink/"
  HOMEPAGE="http://people.redhat.com/jakub/prelink/"
       REQ="libelf"
   EXCLUDE="/etc/prelink.conf
            /etc/prelink.cache"
  ESTIMATE="640"
      DESC="prelink modifies ELFs to expedite runtime linking.
Since nearly all ELFs link with glibc libraries
glibc should be cast after prelink is first installed.
Then, ELFs will be prelinked automatically on updates."

build()  {
  default_build  &&
  touch  /etc/prelink.conf
}
