   VERSION=( "v19" )
  CATEGORY="audio/library"
 ATTRIBUTE="library new"
    SOURCE="pa_snapshot_$VERSION.tar.gz"
       URL="http://www.portaudio.com/archives/"
  HOMEPAGE="http://www.portaudio.com/"
       REQ=( ""
             "alsa-lib::--without-alsa:for alsa support"
             "jackit::--without-jack:for jack audio mixer support" )
      OPTS="--enable-cxx --prefix=/opt/portaudio"
 FRESHMEAT="none"
  ESTIMATE="650"
      DESC="pa_snapshot_v19 is the developmental version of port audio."

build()  {
  sed  -i  "s:-o lib/:-lpthread -o lib/:"  Makefile.in
  default_build  &&
  local  LP="/lib/pkgconfig"  &&
  mkdir  -p                        /usr/$LP  &&
  cp     -a  /opt/portaudio/$LP/*  /usr/$LP
}
