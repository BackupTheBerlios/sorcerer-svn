   version stable 1.510 1.508 1.504
   require fontconfig mkfontdir
  category xorg/font
 attribute X11R7 font makej
    source "http://scripts.sil.org/cms/scripts/render_download.php?&format=file&media_id=GentiumPlus-${VERSION}.zip&filename=/GentiumPlus-${VERSION}.zip"
      info last 20120803
      info home http://scripts.sil.org/Gentium
      info docs "http://scripts.sil.org/cms/scripts/page.php?item_id=Gentium_Technical"
      info vurl "http://scripts.sil.org/cms/scripts/page.php?site_id=nrsi&item_id=Gentium_download"
      desc 'font with Roman, Latin, Cyrillic and Greek characters'

build(){
local FDIR=$DESTDIR/usr/share/fonts/TTF

mv documentation docs
mkdir -pvm 755 docs &&
mv *.txt       docs &&
mkdir -pvm 755        $FDIR &&
install -vm 644 *.ttf $FDIR &&
mkfontscale           $FDIR &&
mkfontdir             $FDIR
}

post_install(){ fc-cache /usr/share/fonts/TTF; }
