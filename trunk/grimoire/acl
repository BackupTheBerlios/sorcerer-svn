# acl-2.2.49.src.tar.gz	20-Nov-2009 06:50 	354K

    stable 2.2.49 2.2.47-1 2.2.45-1
   require attr
  category disk/file-system
 attribute console solo
#   source ftp://oss.sgi.com/projects/xfs/cmd_tars/acl_$VERSION.tar.gz
#     home http://oss.sgi.com/projects/xfs/
    source http://download.savannah.gnu.org/releases/acl/acl-$VERSION.src.tar.gz
      home http://savannah.nongnu.org/projects/acl
  estimate 700
 freshmeat none
      desc 'access control list for XFS and ext3'

build(){

 export OPTIMIZER="$CFLAGS"
 unset              CFLAGS
 export DEBUG=-DNDEBUG
 export DIST_ROOT="$DESTDIR"

 make configure &&
 make &&
 make install install-lib install-dev &&
 rm -f $DESTDIR/{,/usr}/lib{,64}/libacl.a
}
