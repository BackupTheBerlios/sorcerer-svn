# --without-wx      \
#--with-gtk        \
build(){
 [ -d Amaya ] &&
 cd   Amaya
 mkdir  obj        &&
 cd     obj        &&
 ../configure      \
 --prefix=/opt     \
 --bindir=/usr/bin \
 --enable-system-wx \
 --enable-system-libwww \
 --enable-system-raptor \
 $OPTS             &&
 make              &&
 prepare_install   &&
 make    install
}
