   VERSION=( 9.99-4 9.55-2 9.52 9.51 9.5 )
  CATEGORY='network/web'
 ATTRIBUTE='client x11'
#ATTRIBUTE='client x11 broken'
# 20080105 No versions of amaya are known to compile
# The only old version of amaya that compiled
# is no longer available for download.
    SOURCE="amaya-fullsrc-$VERSION.tgz"
  HOMEPAGE='http://www.w3.org/Amaya'
      VURL='http://www.w3.org/Amaya/User/SourceDist.html'
       URL='http://wam.inrialpes.fr/software/amaya/'
#       URL='http://www.w3.org/Amaya/Distribution/
#             ftp://ftp.w3.org/pub/amaya/'
       REQ='imlib'
  ESTIMATE='2000'
      DESC='amaya is a web browser and WYSIWYG authoring tool.
amaya is a complete web browsing and authoring
environment and comes equipped with a WYSIWYG
style of interface, similar to that of the most
popular commercial browsers.
With such an interface, users do not
need to know the HTML or CSS languages.'

build() {
[  -d  Amaya  ]  &&
cd     Amaya
mkdir  obj           &&
cd     obj           &&
../configure         \
--prefix=/opt        \
--bindir=/usr/bin    \
--without-wx         \
--with-gtk           \
$OPTS                &&
make                 &&
prepare_install      &&
make    install
}
