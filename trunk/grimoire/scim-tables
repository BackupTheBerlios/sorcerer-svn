   version stable 0.5.11 0.5.10
   require scim
      opts --enable-static=no
  category input
 attribute console library x11
    source $SOURCEFORGE_URL scim/scim-tables/$VERSION/scim-tables-$VERSION.tar.gz
      info last 20120709
      info home http://www.scim-im.org/
      desc 'data files for scim generic table input module

the directory structure is:

zh/             data files for Chinese (Simplified and Traditional).
ja/             data files for Japanese.
ko/             data files for Korean.
additional/     data files for some other languages, such as Russian etc.'

build(){
 case $VERSION in
  0.5.8) sed -i "1i#include <cstring>" $( find . -name \*.cpp ) ;;
 esac
 default_build
}
