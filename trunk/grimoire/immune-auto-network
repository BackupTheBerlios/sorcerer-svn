   version stable 20120404
   require dhcpcd iproute2 wireless_tools
  category immune-system
 attribute archive_off console
      info last 20120404
      info home http://sorcerer.silverice.org/
      desc "automatic network configuration"

build(){
 mkdir  -pvm 755                          $DESTDIR/sbin
 install -vm 700 $SCRIPT_DIR/auto-network $DESTDIR/sbin
}
