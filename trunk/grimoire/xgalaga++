    stable 0.8.2 0.8.1
   require libXpm
  sys_user games
  category game
 attribute x11
    source http://marc.mongenet.ch/OSS/XGalaga/xgalaga++_$VERSION.tar.gz
  homepage http://marc.mongenet.ch/OSS/XGalaga/
  estimate 100
      desc 'classic single screen verticle shoot em up inspired by xgalaga'

build(){
 mkdir -p $DESTDIR/usr/share/man/man6 \
          $DESTDIR/usr/bin \
          $DESTDIR/var/games &&
 make     all &&
 make install \
      installprefix=$DESTDIR/usr \
      bindir=$DESTDIR/usr/bin \
      HIGH_SCORES_FILE=$DESTDIR/var/games/xgalaga++.scores
}
