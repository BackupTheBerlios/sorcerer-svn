  stable 0.8
  CATEGORY='game'
 ATTRIBUTE='x11'
    SOURCE="xgalaga++_$VERSION.tar.gz"
       URL='http://marc.mongenet.ch/OSS/XGalaga/'
  HOMEPAGE='http://marc.mongenet.ch/OSS/XGalaga/'
       REQ='libXpm'
case $VERSION in
 0.8) USE_GCC=gcc-v4.2 ;;
esac
  ESTIMATE='100'
      DESC='xgalaga++ is a classic single screen verticle shoot em up inspired by xgalaga.'

build(){
mkdir    -p -m 0755 /var/empty
groupadd -K GID_MIN=256 -K GID_MAX=511    games                      2>/dev/null
useradd  -K UID_MIN=256 -K UID_MAX=511 -g games -d /var/empty games  2>/dev/null

 mkdir -p /var/games
 make        all &&
 prepare_install &&
 make    install bindir=/usr/bin
}
