# LSB-compliant init.d scripts for use with the distribution sorcerer only!
# Copyright Kyle Sallee 2005, 2006, 2007.  All rights reserved.

   VERSION=( 3.1.0 3.0 )
  CATEGORY='administration/boot'
 ATTRIBUTE='archive_off console'
  HOMEPAGE='http://www.linuxbase.org/spec/refspecs/LSB_3.1.0/LSB-Core-generic/LSB-Core-generic/iniscrptfunc.html'
  ESTIMATE='3'
      DESC="init-functions provides /lib/lsb/init-functions.
init-functions provides /lib/lsb/init-functions as specified in
$HOMEPAGE"

build() {
  prepare_install
  mkdir    -p                                   /lib/lsb
  install  -m 0644  $SCRIPT_DIR/init-functions  /lib/lsb
  install  -m 0755  $SCRIPT_DIR/initd           /lib/lsb/install_initd
  ln       -f       /lib/lsb/install_initd      /lib/lsb/remove_initd
}
