   VERSION=( "1.4.9" "1.4.8" "1.4.7" "1.4.6" "1.4.5" )
  CATEGORY="development/interpreter"
 ATTRIBUTE="library"
    SOURCE="slang-$VERSION.tar.bz2"
       URL="ftp://space.mit.edu/pub/davis/slang/v${VERSION:0:3}/"
  HOMEPAGE="http://space.mit.edu/~davis/slang/"
  ESTIMATE="198"
      DESC="slang is a powerful interpreted language.
slang is a powerful interpreted language that may be
embedded into an application to make it extensible.
Examples of applications that take advantage of
the interpreter includejed, slrn, and mutt."

build() {
./configure          \
--build=$BUILD       \
--prefix=/usr        &&
make    elf          &&
prepare_install      &&
make    install-elf  &&
make    install-links
}
