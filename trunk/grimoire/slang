    stable 2.1.3 2.1.2 1.4.9 1.4.8 1.4.7 1.4.6 1.4.5
  optional libpng '' '' for png module
  optional pcre   '' '' for pcre module
  category development/interpreter
 attribute library
       url "ftp://ftp.fu-berlin.de/pub/unix/misc/slang/v${VERSION:0:3}/
            ftp://ftp.ntua.gr/pub/lang/slang/slang/v${VERSION:0:3}/
            ftp://ftp.plig.org/pub/slang/v${VERSION:0:3}/"
    source slang-$VERSION.tar.bz2
  homepage http://www.jedsoft.org/slang/
  estimate 450
      desc 'slang is an interpreted language.
slang is an interpreted language that may be
embedded into an application to make it extensible.
Examples of applications that take advantage of
the interpreter includejed, slrn, and mutt.'

build(){
./configure       \
--build=$BUILD    \
--prefix=/usr     \
--sysconfdir=/etc &&
make    elf       &&
prepare_install   &&
make    install-elf
#  &&
# make    install-links
}
