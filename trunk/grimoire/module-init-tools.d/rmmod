#!/bin/bash

if /sbin/rmmod "$@" &&
   [ -t 1 ] &&
   (( $# == 1 )) &&
   ! grep -qx "$1" /etc/modules.rm &&
   ! grep -qx "$1" /etc/modules.rm.asked
then
 read -t 10 -n 1 -p "Also unload $1 during boot? [y|N]: "
 case $REPLY in
  y|Y) echo "$1" >> /etc/modules.rm ;;
    *) echo "$1" >> /etc/modules.rm.asked ;;
 esac
fi
