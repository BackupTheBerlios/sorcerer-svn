    stable 20050830
   require alsa-lib speex

  category network/telephone
 attribute console new
    source speextalk-$VERSION.tar.gz
       url http://www.eleves.ens.fr/home/george/info/prg/
  homepage http://www.eleves.ens.fr/home/george/info/prg/speextalk.html
  estimate 20
      desc 'speextalk is a simple voice-over-IP program that uses the speex codec.'

build(){
make CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" PREFIX=/usr &&
prepare_install &&
make    install PREFIX=/usr
}
