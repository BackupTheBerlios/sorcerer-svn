# Version 1.0.1 requires libdrm version 2.4.34 or above
# However MesaLib version 8.0.4 requires libdrm version 2.4.33
# Therefore, this probably will not compile.
# I do not know why MesaLib authors have not made a new release tarball
# even 2 months after xf86-video-nouveau released version 1.0.1

   version   stable 0.0.16+git20120322+ab7291d
   version unstable 1.0.2
   require autoconf util-macros
   require xorg-server
      opts --disable-static
  category xorg/driver
 attribute x11 X11R7 library makej multilib-concurrent optimize
    source   stable http://cgit.freedesktop.org/nouveau/xf86-video-nouveau/snapshot/xf86-video-nouveau-$VERSION.tar.gz
    source unstable http://nouveau.freedesktop.org/release/xf86-video-nouveau-$VERSION.tar.bz2
      info last 20120917
 conflicts NVIDIA-Linux-x86_64 NVIDIA_Linux-x86
      info home http://nouveau.freedesktop.org/wiki/
      info desc xorg driver for nvidia cards
build(){
 if   [ -f autogen.sh ] && ! [ -f configure ]
 then autoreconf -v --install
 fi
 default_build
}
