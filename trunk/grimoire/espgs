   VERSION=( "8.15.4" "8.15.3" "8.15.2" "8.15.1" "7.07.1" "7.05.6" )
    IGNORE="rc"
  CATEGORY="printer"
 ATTRIBUTE="console x11"
    SOURCE="espgs-$VERSION-source.tar.bz2"
       URL="http://ftp.easysw.com/pub/ghostscript/$VERSION/"
#    SOURCE="espgs/espgs-$VERSION-source.tar.bz2"
#       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://www.cups.org/espgs"
       REQ=( "ghostscript-fonts-other ghostscript-fonts-std glib-v1.2 jpeg libpng"
             "cups:--enable-cups:--disable-cups:for CUPS support"
             "libXt:--with-x:--without-x:for x11 support" )
#            "x11:--with-x --with-gimp-print:--without-x --without-gimp-print:for x11 support" )
#            "gutenprint:--with-gimp-print::to build the gimp-print (stp) driver"
# 8.15.4 has no optional on gimp-print or gutenprint
      OPTS="--with-omni --with-ijs"
  EPROVIDE="ghostscript"
  ESTIMATE="3440"
      DESC="espgs is an enhanced version of GNU Ghostscript with better printer support.
espgs is ESP Ghostscript is a customized version of GNU
Ghostscript that includes an enhanced
autoconf-based configuration script, the CUPS
raster driver to support CUPS raster printer
drivers, and additional patches and drivers
from various Linux distributors."

build()  {
./configure            \
--build=$BUILD         \
--prefix=/usr          \
--sysconfdir=/etc      \
--localstatedir=/var   \
$OPTS                  &&
make                   &&
#make  so               &&
prepare_install        &&
make    install
#make  soinstall
}
