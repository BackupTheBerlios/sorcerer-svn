#  VERSION=( 4.0 3.9p1 3.7p1 )
   VERSION=(       3.9p1 3.7p1 )
# Not sure what 4.0 is, but it appears to be missing many files?
# Perhaps only versions that have a p? extention on them are
# portable to non BSD operating systems?
  CATEGORY='utility/time'
 ATTRIBUTE='client server console'
    SOURCE="openntpd-$VERSION.tar.gz"
       URL='ftp://ftp.openbsd.org/pub/OpenBSD/OpenNTPD/'
  HOMEPAGE='http://www.ntp.org'
       REQ='init-functions openssl'
      OPTS='--with-privsep-user=nobody --with-privsep-path=/var/empty'
  EPROVIDE='ntp'
  ESTIMATE='48'
      DESC='openntpd synchronizes system time with an ntp server.'
