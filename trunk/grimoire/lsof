    stable 4.80 4.81 4.79 4.78
  unstable 4.81
   require libselinux
  category utility
 attribute console
case ${VERSION} in
    4.81) unset OLD;;
    *) OLD=OLD/;;
esac
  homepage ftp://lsof.itap.purdue.edu/pub/tools/unix/lsof/
       url 'ftp://lsof.itap.purdue.edu/pub/tools/unix/lsof/${OLD}
            ftp://ftp.cerias.purdue.edu/pub/tools/unix/sysutils/lsof/${OLD}
            ftp://ftp.tau.ac.il/pub/unix/admin/
            ftp://ftp.cert.dfn.de/pub/tools/admin/lsof/${OLD}
            ftp://ftp.fu-berlin.de/pub/unix/tools/lsof/${OLD}
            ftp://ftp.kaizo.org/pub/lsof/${OLD}
            ftp://ftp.tu-darmstadt.de/pub/sysadmin/lsof/${OLD}
            ftp://ftp.tux.org/pub/sites/vic.cc.purdue.edu/tools/unix/lsof/${OLD}
            ftp://gd.tuwien.ac.at/utils/admin-tools/lsof/${OLD}
            ftp://sunsite.ualberta.ca/pub/Mirror/lsof/${OLD}
            ftp://the.wiretapped.net/pub/security/host-security/lsof/${OLD}'
    source lsof/lsof_$VERSION.tar.bz2
  estimate 200
      desc 'lsof lists open files.
lsof is a Unix-specific diagnostic tool.
Its name stands for LiSt Open Files.
It lists information about any files that are
open by processes currently running on the system.
It can also list communications open by each process.'


build(){
tar -xf  ${SPELL}_${VERSION}_src.tar &&
cd  ${SPELL}_${VERSION}_src          &&
yes | ./Configure      linux         &&
sed -i "s/-O/$CFLAGS/" Makefile      &&
make                                 &&
prepare_install                      &&
install -m 0755 lsof   /usr/bin      &&
mkdir   -p             /usr/man/man8 &&
install -vm 644 lsof.8 /usr/man/man8
}
