   VERSION=( 0.7 )
    IGNORE="directive"
  CATEGORY='utility/terminal-emulator'
 ATTRIBUTE='console new'
    SOURCE="dtach/dtach-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://dtach.sourceforge.net/'
#      REQ='libelf ncurses'
  ESTIMATE='102'
      DESC="dtach is a program similar to screen.
However unlike screen dtach does not have a terminal emulation layer."


build()  {
bzip2  -9   dtach.1
./configure      &&
make             &&
prepare_install  &&
install  -m 0755  -s  dtach        /usr/bin  &&
install  -m 0644      dtach.1.bz2  /usr/man/man1
}
