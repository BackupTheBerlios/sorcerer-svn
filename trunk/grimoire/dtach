    stable 0.8 0.7
  category utility/terminal-emulator
 attribute console
    source $SOURCEFORGE_URL dtach/dtach/$VERSION/dtach-$VERSION.tar.gz
  homepage http://dtach.sourceforge.net/
  estimate 100
      desc 'program similar to screen
However unlike screen dtach does not have a terminal emulation layer.'

build(){
bzip2 -9 dtach.1
./configure &&
make &&
mkdir -p $DESTDIR/usr/{bin,man/man1} &&
install -vm 755 -s dtach       $DESTDIR/usr/bin &&
install -vm 644    dtach.1.bz2 $DESTDIR/usr/man/man1
}
