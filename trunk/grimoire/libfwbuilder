    stable 4.1.1 4.1.0 4.0.2 4.0.1 4.0.0
   require qt-everywhere-opensource
  optional net-snmp '' '' for net-snmp integration
  optional openssl  '' '' for secure socket connections
  category network
 attribute kde4 library
    source $SOURCEFORGE_URL fwbuilder/Current_Packages/$VERSION/libfwbuilder-$VERSION.tar.gz
  homepage http://www.fwbuilder.org
      opts --prefix=/opt/kde4 --with-qt-dir=/opt/kde4 --disable-debug --enable-final
  estimate 550
      desc 'libraries required by fwbuilder'

build(){
 echo /opt/kde4 > qtdir
(
 export PATH+=:/opt/kde4/bin
 ./autogen.sh &&
 INSTALL_ROOT=$DESTDIR default_build
)
}
