   VERSION=( "0.5" "0.4" )
    IGNORE="rc"
  CATEGORY="disk/cd"
 ATTRIBUTE="x11 new"
    SOURCE="releases/isomaster-$VERSION.tar.bz2"
  HOMEPAGE="http://littlesvr.ca/isomaster/"
       URL="http://littlesvr.ca/isomaster/"
       REQ="gtk+"
  ESTIMATE="60"
      DESC="isomaster is a graphical CD image editor (isofs)"

build() {
  sed  -i "s:/usr/local:/usr:"  Makefile
  make             &&
  prepare_install  &&
  make    install
}
