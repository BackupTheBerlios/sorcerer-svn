    stable 1.3.3 1.3
   require gtk+
    ignore 'rc'
  category disk/cd
 attribute x11
    source http://littlesvr.ca/isomaster/releases/isomaster-$VERSION.tar.bz2
  homepage http://littlesvr.ca/isomaster/
      vurl http://littlesvr.ca/isomaster/downloads.php
  estimate 200
      desc 'isomaster is a graphical CD image editor (isofs)'

build(){
sed -i 's:/usr/local:/usr:' Makefile
make &&
prepare_install &&
make    install
}
