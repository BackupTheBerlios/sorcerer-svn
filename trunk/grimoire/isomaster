   version stable 1.3.8
   require gtk+
  category disk/cd
 attribute makej x11
    source http://littlesvr.ca/isomaster/releases/isomaster-$VERSION.tar.bz2
      info home  http://littlesvr.ca/isomaster/
      vurl http://www.littlesvr.ca/isomaster/download/
      desc 'graphical CD image editor (isofs)'

build(){
 if   [ -d isomaster-$VERSION ]
 then   cd isomaster-$VERSION
 fi
 make         PREFIX=/usr &&
 make install PREFIX=/usr DESTDIR=$DESTDIR
}
