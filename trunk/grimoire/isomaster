   VERSION=( "0.4" )
  CATEGORY="disk/cd"
 ATTRIBUTE="x11 new"
    SOURCE="releases/$SPELL-${VERSION}.tar.bz2"
  HOMEPAGE="http://littlesvr.ca/isomaster/"
       URL="http://littlesvr.ca/isomaster/"
       REQ=""
  ESTIMATE="350"
      DESC="$SPELL is a graphical CD image editor (isofs)"

build() {
  sed  -i "s:/usr/local:/usr:"  Makefile
  make			&&
  prepare_install	&&
  make    install
}
