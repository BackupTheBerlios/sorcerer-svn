# boost is a mandatory requirement.
#            'boost:::for libsyndication'
# Is the above still true?

   inherit kde-v4
   require akonadi boost gpgme libical kdelibs-v4
  optional cyrus-sasl '' '' for Sieve kioslaves and IMAP login authentication
  optional openldap   '' '' for authentication by LDAP
  category utility/office
  estimate 1800
      desc 'Personal information mangement libraries'

build(){
kde_build &&
case $VERSION in
4.2.0) [ -h /opt/kde4/lib/libakonadi-kabc.so ] || ln -s libakonadi-kabc.so.4 /opt/kde4/lib/libakonadi-kabc.so ;;
4.3.0) [ -h /opt/kde4/lib/libkholidays.so    ] || ln -s libkholidays.so.4    /opt/kde4/lib/libkholidays.so ;;
esac
}
