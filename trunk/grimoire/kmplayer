   VERSION=( 0.11.0-rc1 0.10.0c 0.10.0b 0.10.0a 0.10.0 0.9.4a 0.9.4 )
    IGNORE='KDE\|pre\|rc'
  CATEGORY='audio/player video/dvd video/player kde-extragear'
 ATTRIBUTE='gui kde new'
    SOURCE="kmplayer-$VERSION.tar.bz2"
       URL='http://kmplayer.kde.org/pkgs/'
  HOMEPAGE='http://kmplayer.kde.org/'
#      REQ=( 'dbus-qt3 kdelibs MPlayer'
       REQ=( 'kdelibs MPlayer'
             'ffmpeg:::for frontend for ffmpeg and broadcasting/recording http streams'
             'gst-plugins-base::--without-gstreamer:to use GStreamer as multimedia backend'
             'xine-lib::--without-xine:to play DVD' )
#            'arts::--without-arts:to use aRts' )
      OPTS='-DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_BUILD_TYPE=Release'
  ESTIMATE='800'
      DESC='kmplayer is a video player plugin for Konqueror
and basic MPlayer/Xine/ffmpeg/ffserver/VDR frontend for KDE'

build(){
build_old(){
 export PATH="/usr/bin/qt4:$PATH"
 default_build
}

 export PATH="/usr/bin/qt4:$PATH"
 mkdir build     &&
 cd    build     &&
 cmake $OPTS ..  &&
 make            &&
 prepare_install &&
 make    install
}
