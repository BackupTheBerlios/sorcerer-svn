    stable 0.11.1a 0.11.1 0.11.0-rc1 0.10.0c
   require kdelibs-v4 MPlayer
  optional ffmpeg           '' ''                  for frontend for ffmpeg and broadcasting/recording http streams
  optional gst-plugins-base '' --without-gstreamer to use GStreamer as multimedia backend
  optional xine-lib         '' --without-xine      to play DVD
  category audio/player video/dvd video/player kde-extragear
 attribute kde4
    source http://kmplayer.kde.org/pkgs/kmplayer-$VERSION.tar.bz2
  homepage http://kmplayer.kde.org/
      opts -DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4
      opts -DCMAKE_INSTALL_RPATH:PATH=/opt/kde4/lib:/opt/kde4/lib64
      opts -DCMAKE_SKIP_BUILD_RPATH:BOOL=TRUE
      opts -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=TRUE
      opts -DCMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=TRUE
      opts -DCMAKE_BUILD_TYPE=Release
case $VERSION in
 0.11.0-rc1) use_gcc gcc-v4.2 ;;
esac
  estimate 500
      desc 'kmplayer is a video player plugin for Konqueror
and basic MPlayer/Xine/ffmpeg/ffserver/VDR frontend for KDE'

build(){
 export PATH+=:/opt/kde4/bin
 mkdir build     &&
 cd    build     &&
 cmake $OPTS ..  &&
 make            &&
 prepare_install &&
 make    install
}
