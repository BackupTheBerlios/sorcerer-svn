   VERSION=( 1.2.0 )
  CATEGORY='game'
 ATTRIBUTE='x11'
    SOURCE="shootingstar-$VERSION.tar.gz"
       URL='http://www.2ndpoint.fi/ss/'
  HOMEPAGE='http://www.2ndpoint.fi/ss/'
       REQ='SDL_image SDL_mixer'
  ESTIMATE='99'
      DESC='shootingstar is a top down shooter arcade game.

shootingstar is a top down shooter arcade game.'


build(){
 ./configure       \
 --prefix=/usr     \
 --bindir=/usr/bin &&
 make              &&
 prepare_install   &&
 make    install
}
