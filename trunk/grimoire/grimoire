version_year_day  180  $LAG
  CATEGORY="grimoire"
 ATTRIBUTE="grimoire solo"
    SOURCE="grimoire-$VERSION.tar.bz2"
       URL="http://sorcerer.aakin.net/download/grimoire"
  HOMEPAGE="ftp://ftp.berlios.de/pub/sorcerer/grimoire"
  ESTIMATE="5"
      DESC="grimoire is the official grimoire of sorcerer."

build()  {
  prepare_install                              &&
  mkdir      -p  $GRIMOIRE_LIBRARY             &&
  find       .   -type f  -printf "%P\n"       |
  grep       -v  "\.ccache/reference\|\.log$"  |
  tar_files  >   $GRIMOIRE_LIBRARY/$SPELL.tar
}
