version_year_day 180 $LAG
  CATEGORY='grimoire'
 ATTRIBUTE='grimoire solo stale'
    SOURCE="grimoire-$VERSION.tar.bz2"
       URL='http://sorcerer.silverice.org/download/grimoire/'
  HOMEPAGE='http://sorcerer.silverice.org/'
  ESTIMATE='5'
      DESC='grimoire is the official grimoire of sorcerer.'

build(){
 echo "$LAG days behind available grimoire."
 [  -f  grimoire  ] &&
 [  -f  sorcery   ] &&
 prepare_install    &&
 mkdir     -p $GRIMOIRE_LIBRARY &&
 find      .  -type f  -printf "%P\n" |
 tar_files >  $GRIMOIRE_LIBRARY/$SPELL.tar
}
