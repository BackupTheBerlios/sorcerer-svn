version_year_day 31 $LAG
  category grimoire
 attribute grimoire archive_off solo stale
    source http://sorcerer.silverice.org/download/grimoire/grimoire-$VERSION.tar.xz
      info home http://sorcerer.silverice.org/
 conflicts grimoire-sentient
      desc 'the official grimoire of sorcerer'

build(){
echo "$LAG days behind available grimoire."
[[ -f grimoire ]] &&
[[ -f sorcery  ]] &&
mkdir -pm 755 $DESTDIR/$GRIMOIRE_LIBRARY &&
find  . -type f -printf "%P\n" |
tar_files >   $DESTDIR/$GRIMOIRE_LIBRARY/$SPELL.tar &&
chmod 600     $DESTDIR/$GRIMOIRE_LIBRARY/$SPELL.tar
}

post_install(){
 merge_grimoires
 generate_index
 local s="$( get_provider sorcery )"
 augur newer "$s"
 if [ -f "$CAST_QUEUE/new/$s" ]; then
  mv     "$CAST_QUEUE/new/$s" "$CAST_QUEUE/"
  [     -d      "$LEECH_QUEUE" ] ||
  mkdir -pm 700 "$LEECH_QUEUE"
  echo  -n    > "$LEECH_QUEUE/$s"
 fi
 
 default_post_install
}
