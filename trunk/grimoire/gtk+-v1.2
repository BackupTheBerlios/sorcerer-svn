   VERSION=( "1.2.10" )
  CATEGORY="graphic"
 ATTRIBUTE="library x11"
    SOURCE="gtk+-$VERSION.tar.gz"
       URL="ftp://ftp.gtk.org/pub/gtk/v1.2"
  HOMEPAGE="http://www.gtk.org"
       REQ="glib-v1.2 x11"
#    AVOID="perl"
  ESTIMATE="731"
      DESC="gtk+-v1.2 is a toolkit for creating GUIs."

build() {
  case $( arch ) in
   x86_64)
	sed -i '200i   | x86_64-* \\'			config.sub
	sed -i 's:i\[34567\]86):i\[34567\]86|x86_64):'	config.sub
   ;;
  esac

  default_build
}
