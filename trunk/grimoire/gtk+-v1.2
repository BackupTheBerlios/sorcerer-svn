# broke because glib-v1.2 is broke

   version stable 1.2.10
   require glib-v1.2 libXext
      opts --enable-static=no
  category graphic/library
 attribute library makej multilib-concurrent x11
 attribute broke
    source ftp://ftp.gtk.org/pub/gtk/v1.2/gtk+-$VERSION.tar.gz
      info home  http://www.gtk.org/
      info docs  http://www.gtk.org/documentation.html
      desc 'toolkit for creating GUIs'

build(){
 case $HOSTTYPE in
  x86_64) sed -i '200i   | x86_64-* \\' config.sub
          sed -i 's:i\[34567\]86):i\[34567\]86|x86_64):' config.sub ;;
 esac
 #sed -i 's:$libdirs @x_ldflags@::' gtk-config.in
 default_build &&
 if   [[  -f                $DESTDIR/usr/lib/pkgconfig/gdk.pc ]]
 then sed -i 's:lib64:lib:' $DESTDIR/usr/lib/pkgconfig/gdk.pc
 fi
}
