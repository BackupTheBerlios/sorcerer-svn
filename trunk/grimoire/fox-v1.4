build(){
export LDFLAGS+=' -L/usr/X11R6/lib'
./configure          \
--build=$BUILD       \
--prefix=/usr        \
--sysconfdir=/etc    \
--localstatedir=/var \
--enable-release     \
--program-suffix=-1.4 \
$OPTS &&
make    "CXXFLAGS=$CXXFLAGS" &&
prepare_install
make    install
}
