   inherit git
  category development documentation
 attribute console
    source http://git-core.googlecode.com/files/git-manpages-$VERSION.tar.gz
#   source $KERNEL_URL pub/software/scm/git/git-manpages-$VERSION.tar.bz2
      info good 20120608
      info home http://git-scm.com/
      info docs http://git-scm.com/documentation
      desc 'man pages for git'

build(){
 local MAN_DIR=$DESTDIR/usr/share/man
 install -vdm 755 $MAN_DIR &&
 cp -vr *         $MAN_DIR
}
