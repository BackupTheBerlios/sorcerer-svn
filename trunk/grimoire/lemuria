   version stable 2.1.0 2.0.0 
   require MesaLib libXinerama
  optional gmerlin
  category audio/player
 attribute library x11
    source $SOURCEFORGE_URL gmerlin/lemuria/$VERSION/lemuria-$VERSION.tar.gz
      info good 20120615
      info last 20100224
      info home http://gmerlin.sourceforge.net
      desc 'OpenGL visualization for xmms and gmerlin-visualizer'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then export LDFLAGS+=' -L/usr/lib64'
 fi
 default_build
}
