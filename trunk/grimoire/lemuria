# broke while gmerlin is broke
with trait   broke
with version stable 2.1.0 2.0.0 
with base    MesaLib libXinerama
with elect   gmerlin
with role    audio/player
with trait   library x11
with source  $SOURCEFORGE_URL gmerlin/lemuria/$VERSION/lemuria-$VERSION.tar.gz
with info    good 20120615
with info    last 20100224
with info    home http://gmerlin.sourceforge.net
with info    cite 'OpenGL visualization for xmms and gmerlin-visualizer'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then export LDFLAGS+=' -L/usr/lib64'
 fi
 default_build
}
