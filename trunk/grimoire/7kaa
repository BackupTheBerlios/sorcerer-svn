    stable 2.14.0
   require SDL 7kaa-data openal
  category game
 attribute x11
    source $SOURCEFORGE_URL "skfans/Seven%20Kingdoms%20AA/Source/7kaa-$VERSION.tar.bz2"
  homepage http://7kfans.com/
  estimate 360
      desc 'mix of RTS and turn-based strategy game'

build(){
./configure.pl &&
./build.pl &&
mkdir -p    $DESTDIR/usr/bin &&
cp src/7kaa $DESTDIR/usr/bin
}
