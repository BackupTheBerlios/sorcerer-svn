   VERSION=( "6.2.1" )
  CATEGORY="graphic"
 ATTRIBUTE="library new broken"
    SOURCE="mesa3d/MesaLib-$VERSION.tar.bz2"
  HOMEPAGE="http://www.mesa3d.org"
       URL="$SOURCEFORGE_URL"
       REQ=""
  ESTIMATE="325"
      DESC="MesaLib is a 3-D graphics library with an API similar to OpenGL.
Remember to add Load 'glx' and remove Load 'dri' in  your XF86Config file"

build() {
make    linux    &&
prepare_install  &&
mkdir /usr/local/include                         2>/dev/null  &&
mkdir /usr/local/include/GL                      2>/dev/null  &&
mkdir /usr/local/lib                             2>/dev/null  &&
cp  -f   ./include/GL/*.h /usr/local/include/GL  2>/dev/null  &&
cp  -fd  ./lib*/lib* /usr/local/lib              2>/dev/null
}
