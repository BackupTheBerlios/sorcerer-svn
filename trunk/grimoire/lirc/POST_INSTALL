                       TEMP_MODULES_CONF="/tmp/modules.conf.$$.$RANDOM"
rm  -rf               $TEMP_MODULES_CONF
cp  /etc/modules.conf $TEMP_MODULES_CONF
grep  -v  "lirc"   <  $TEMP_MODULES_CONF  >  /etc/modules.conf
rm  -rf               $TEMP_MODULES_CONF

MOD="/etc/modules.conf"
INC="include  /etc/modules.d/lirc"

grep    -q  "$INC"      $MOD  ||
echo        "$INC"  >>  $MOD
depmod  -a  -q
true
