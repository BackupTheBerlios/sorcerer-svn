   version stable 0.99
   require perl--XML-NamespaceSupport perl--XML-SAX-Base
  category perl
 attribute perl-module
    source http://www.cpan.org/authors/id/G/GR/GRANTM/XML-SAX-$VERSION.tar.gz
      info good 20120629
      info last 20110904
      info home http://search.cpan.org/search?dist=XML-SAX
      desc 'perl module for parsing XML with SAX2 interface'

build(){
 local  PVER=$( installed_version $( get_provider perl ) )
 local  PERL5LIB
 export PERL5LIB=$DESTDIR/usr/lib/perl5/site_perl/$PVER
 yes n | default_build
}
