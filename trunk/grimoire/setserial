   VERSION=( "2.17" )
  CATEGORY="utility"
 ATTRIBUTE="console old_init"
    SOURCE="setserial/setserial-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://setserial.sourceforge.net"
      DESC="setserial is a configuration tool to setup serial ports"

build() {
default_build  &&
install -m 0600  serial.conf  /etc
# cp  rc.serial  /etc/init.d/serial.sh
}
