    stable 2.17
  category utility
 attribute console old_init
    source $SOURCEFORGE_URL setserial/setserial/$VERSION/setserial-$VERSION.tar.gz
  homepage http://setserial.sourceforge.net
      desc 'setserial is a configuration tool to setup serial ports'

build(){
default_build  &&
install -vm 600 serial.conf /etc
}
