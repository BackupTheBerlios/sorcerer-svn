   version stable 2.17
  category utility
 attribute console old_init
    source $SOURCEFORGE_URL setserial/setserial/$VERSION/setserial-$VERSION.tar.gz
      info good 20120704
      info last 20000209
      info home http://setserial.sourceforge.net
      desc 'configuration tool to setup serial ports'

build(){
 mkdir  -pvm 755 $DESTDIR/{bin,etc,usr/man/man8}
 default_build &&
 install -vm 600 serial.conf $DESTDIR/etc
}
