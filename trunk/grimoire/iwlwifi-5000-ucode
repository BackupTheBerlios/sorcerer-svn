    stable 8.24.2.12
   require udev
  category kernel network
 attribute firmware
    source http://intellinuxwireless.org/iwlwifi/downloads/iwlwifi-5000-ucode-$VERSION.tgz
  homepage http://intellinuxwireless.org
      vurl "http://intellinuxwireless.org/?n=downloads"
      desc 'firmware for Intel PRO/Wireless 5000 card'

build(){
prepare_install &&
mkdir -vp /lib/firmware &&
install -vm 644 iwlwifi-5000*.ucode /lib/firmware
}
