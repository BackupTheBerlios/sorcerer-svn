# multilib-fail because systemd is multilib-fail
# version 1.98.0 breaks's kde's device notifier.

   version   stable 2.0.0 1.0.4
   version unstable 2.0.0
   require libatasmart polkit systemd
      opts --disable-gtk-doc --disable-gtk-doc-html --disable-gtk-doc-pdf
      opts --enable-static=no
case $VERSION in
 1.*) opts --disable-man-pages ;;
 2.*) opts --disable-man ;;
esac 
  category disk
 attribute client library lto makej multilib-concurrent server
    source   stable http://udisks.freedesktop.org/releases/udisks-$VERSION.tar.bz2
    source unstable http://udisks.freedesktop.org/releases/udisks-$VERSION.tar.bz2
      info last 20121004
      info home http://www.fredesktop.org/wiki/Software/udisks
      info docs http://udisks.freedesktop.org/docs/latest/
#     info home http://people.freedesktop.org/~david/
 conflicts DeviceKit-disks
      desc 'storage daemon and command line client for disks/block devices

 o  A storage daemon that implements well-defined D-Bus interfaces
    that can be used to query and manipulate storage devices.

 o  a command-line tool, udisks(1), that can be used to query and
    use the daemon'
