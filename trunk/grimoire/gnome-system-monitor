with info    last 20130518
with version   stable 3.8.2.1 3.8.2 3.8.0 3.6.1
with version unstable 3.9.5
with base    gnome-doc-utils gst-python gtkmm libgtop librsvg libwnck
with also    --disable-rpath
with role    window-manager
with trait   gnome makej
with source    stable $GNOME_URL sources/gnome-system-monitor/${VERSION:0:3}/gnome-system-monitor-$VERSION.tar.xz
with source  unstable $GNOME_URL sources/gnome-system-monitor/${VERSION:0:3}/gnome-system-monitor-$VERSION.tar.xz
with info    home http://www.gnome.org
with info    cite 'system monitor'

build(){
 case $VERSION in
  3.0.0) sed -i 's:0\.41\.0:0.40.6:' configure ;;
 esac
 default_build
}
