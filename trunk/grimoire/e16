# .001$ versions are snapshots?

  category window-manager
 attribute x11
       url $SOURCEFORGE_URL
  homepage http://www.enlightenment.org/
      opts --enable-static=no

if [ $SPELL == e16 ]; then
   stable  1.0.1 1.0.0.001 1.0.0 0.16.8.15 0.16.8.14 0.16.8.13 0.16.8.12 0.16.8.11 0.16.8.10 0.16.8.9 0.16.8.6
   require e16-theme-BrushedMetal-Tigert imlib2 libXcomposite libXdamage libXft libXinerama libXrandr xbitmaps
  optional libghttp             '' '' for automatic enlightenment upgrades
  optional esound               '' '' for enlightenment sound mixer
  optional epplets              '' '' for useful gadgets
  optional Eterm                '' '' for terminal emulator
  optional e16-theme-BlueSteel  '' '' for optional theme
  optional e16-theme-Ganymede   '' '' for optional theme
  optional e16-theme-ShinyMetal '' '' for optional theme
    source $SOURCEFORGE_URL enlightenment/e16/$VERSION/e16-$VERSION.tar.gz
     wmbin /usr/bin/starte16
  estimate 700
      desc 'themeable fast flexible X11 windows Manager
It is configurable as possible in both look and feel.
In addition, Enlightenment provides an applet API that 
provides functionality somewhere between the GNOME 
applet system and Dock Apps from Afterstep/WindowMaker.'
fi

