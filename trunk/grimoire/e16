build(){
 ./configure        \
  --prefix=/usr     \
  --sysconfdir=/etc \
  --enable-fsstd    \
  $OPTS            &&
 make              &&
 make install "DESTDIR=$DESTDIR"
}


case $SPELL in
 edox-data) common_set; desc "$SPELL provides documentation for enlightenment." ;;
esac
