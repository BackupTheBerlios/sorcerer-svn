build(){
 ./configure       \
 --prefix=/usr     \
 --sysconfdir=/etc \
 --enable-fsstd    \
 $OPTS             &&
 make              &&
 prepare_install   &&
 make    install
}


common_set(){ source enlightenment/$SPELL-$VERSION.tar.gz; }
 theme_set(){ source enlightenment/$SPELL-$VERSION.tar.gz; }


case $SPELL in
  e16-theme-*) estimate 16; category graphic/theme; attribute data
               theme_set; desc "$SPELL provides a theme for e16."
               VERSION="${VERSION:0:6}" ;;
  e16-themes)  estimate 16; category graphic/theme; attribute data
               theme_set; desc "themes for e16" ;;
 edox-data) common_set; desc "$SPELL provides documentation for enlightenment." ;;
   epplets) common_set; desc "$SPELL provides gadgets for enlightenment." ;;
esac
