# atmel-firmware provides newer firmware for these cards

   version stable 0.1
   require udev
  category kernel network wireless
 attribute firmware
    source http://download.berlios.de/at76c503a/at76_usb-firmware-$VERSION.tar.gz
      info home  http://at76c503a.berlios.de/
      desc 'firmware for Atmel AT76C503/505A based USB WLAN adapters

Known devices with this chip are:
- Belkin F5D6050
- Dynalink/Askey WLL013
- Linksys WUSB11 v2.6
- Netgear MA101B
and many more.'

build(){
 [ -f README ] &&
 mkdir   -p           $DESTDIR/lib/firmware &&
 install -m 644 *.bin $DESTDIR/lib/firmware
}
