#!/bin/bash

### BEGIN INIT INFO
# Provides: dmesg
# Required-Start: $local_fs $syslog
# Required-Stop:
# Default-Start: 1 2 3 4 5
# Default-Stop:
# Short-Description: kbd loads the keyboard map and console font
# Description:       kbd loads the keyboard map and console font
#	Configuration files:	/etc/kbd/keymap.conf
#				/etc/kbd/font.conf
### END INIT INFO

start()  {
  if    [  -x  /bin/loadkeys  ]  &&  [  /etc/kbd/keymap.conf  ]
  then         /bin/loadkeys       $(<  /etc/kbd/keymap.conf  )
  fi

  if    [  -x  /usr/bin/setfont  ]  &&  [  /etc/kbd/font.conf  ]
  then         /usr/bin/setfont       $(<  /etc/kbd/font.conf  )
  fi
}

help()  {
  echo "Usage: $0 {start}" 1>&2
}

case  $1  in
         start)  start        ;;
             *)  help         ;;
esac
