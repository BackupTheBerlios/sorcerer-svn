   version stable 0.11.2
   require WebKit curl librsvg qt-everywhere-opensource startup-notification
      opts --enable-static=no --disable-werror --disable-debug
  category network/ftp
 attribute console
    source http://google-gadgets-for-linux.googlecode.com/files/google-gadgets-for-linux-$VERSION.tar.bz2
      info home  http://code.google.com/p/google-gadgets-for-linux/
  estimate 3600
      desc 'library for running desktop gadgets'

build(){
 export PKG_CONFIG_PATH=/opt/kde4/lib/pkgconfig
 ./configure \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --prefix=/usr \
 $OPTS &&
 make &&
 make install DESTDIR=$DESTDIR
}
