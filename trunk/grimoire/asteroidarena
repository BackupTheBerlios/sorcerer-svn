   VERSION=( "0.1.0" )
  CATEGORY="game"
 ATTRIBUTE="x11"
    SOURCE="arena-$VERSION.tar.gz"
  HOMEPAGE="http://www.gla55pak.com/lameduckie/02june/asteroidarena"
       URL="http://www.gla55pak.com/lameduckie/02june/asteroidarena"
       REQ="ClanLib"
      OPTS="--bindir=/usr/games"
  ESTIMATE="56"
     SHORT="asteroidarena is an asteroids clone."


build() {
  sed  -i  "s:resource.dat:/usr/share/arena/resource.dat:"  src/Resource.h
  sed  -i  "s:img/:/usr/share/arena/img/:g"                 src/resource.dat

  default_build  &&
  mkdir  -p                    /usr/share/arena  &&
  cp     -r  src/img           /usr/share/arena  &&
  cp         src/resource.dat  /usr/share/arena
}
