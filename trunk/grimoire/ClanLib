    stable 0.8.1 0.8.0
   require automake freetype jpeg libpng
  optional DirectFB  '' '' for DirectFB support
  optional MesaLib   '' '' for openGL support
  optional SDL_gfx   '' '' for SDL support
  optional libmikmod '' '' to play amiga mod audio files
  optional libvorbis '' '' to play ogg/vorbis audio files
  optional nas       '' '' for network audio server support

    ignore 'docs\|examples'
  category graphic
 attribute library x11
    source ClanLib-$VERSION.tgz
       url http://clanlib.org/download/releases-${VERSION:0:3}/
  homepage http://clanlib.org
case $VERSION in
 0.8.[0-1]) use_gcc gcc-v4.0 ;;
esac
      opts --enable-static=no
  estimate 4800
 freshmeat clanlib
      desc 'ClanLib is a multi-platform game development library
Clanlib is a medium level development kit.
At its lowest level it provides a platform 
independent way of dealing with display, sound,
input, networking, files, threadding and such.'


build(){
 export   CFLAGS="${CFLAGS/-O3/-O2}"
 export CXXFLAGS="${CXXFLAGS/-O3/-O2}"
 export  LDFLAGS="-lz $LDFLAGS"

 ./autogen.sh
 ./configure     \
 --prefix=/usr   \
 $OPTS           &&
 make            &&
 prepare_install &&
 make    install
}
