with version   stable 3.6.1 3.6.0 3.4.1
#with version unstable 3.6.1
with base    itstool yelp-xsl
with also    --enable-static=no
with role    documentation
with trait   gnome library makej multilib-concurrent
with source    stable $GNOME_URL sources/yelp-tools/${VERSION:0:3}/yelp-tools-$VERSION.tar.xz
with source  unstable $GNOME_URL sources/yelp-tools/${VERSION:0:3}/yelp-tools-$VERSION.tar.xz
with info    last 20121021
with info    home http://www.gnome.org
with info    cite 'gnome help browser tools'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
