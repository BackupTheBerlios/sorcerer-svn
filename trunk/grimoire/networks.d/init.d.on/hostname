#!/bin/bash

### BEGIN INIT INFO
# Required-Start: proc
# Default-Start: S
# Short-Description: hostname sets the box's name
### END INIT INFO

. /lib/lsb/init-functions

start(){
 log_warning_msg "hostname setting"
 [ -f   /etc/hostname ] &&
 read < /etc/hostname
 echo ${REPLY:-noname} > /proc/sys/kernel/hostname
 log_success_msg "hostname is now $REPLY"
}

parse "$@"
