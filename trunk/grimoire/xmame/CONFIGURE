TEMP=$(  grep  -v  "EDIT_MAKEFILE="     $SPELL_CONFIG  )
echo  "$TEMP"  >>                       $SPELL_CONFIG

if  [  -f  $  $CONFIG_LOGS/$SPELL/makefile.unix  ]
then  CUSTOM=n
else  CUSTOM=y
fi

if    query  "Would you like to edit the makefile?"  $CUSTOM
then  echo   "EDIT_MAKEFILE=true"   >>  $SPELL_CONFIG
else  echo   "EDIT_MAKEFILE=false"  >>  $SPELL_CONFIG
fi
