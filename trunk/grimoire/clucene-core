# Possible gcc 4.4.2 patch at http://bugs.gentoo.org/254254

    stable 0.9.21b 0.9.20
   require gcc-g++
  category development
 attribute library
    source $SOURCEFORGE_URL clucene/clucene-core-stable/$VERSION/clucene-core-$VERSION.tar.bz2
  homepage http://clucene.sourceforge.net/
      opts --enable-static=no
  estimate 700
      desc 'searching API'

build(){
 ./configure           \
  --sysconfdir=/etc    \
  --localstatedir=/var \
  --prefix=/usr        \
 $OPTS           &&
 make            &&
 prepare_install &&
 make    install
}
