    stable 0.9.20
  unstable 0.9.23.0-Source
  category development
 attribute library
    source $SOURCEFORGE_URL clucene/clucene-core-stable/$VERSION/clucene-core-$VERSION.tar.bz2
  homepage http://clucene.sourceforge.net/
      opts --enable-static=no
  estimate 800
      desc 'clucene-core provides a searching API'

build(){
 ./configure           \
  --sysconfdir=/etc    \
  --localstatedir=/var \
  --prefix=/usr        \
 $OPTS           &&
 make            &&
 prepare_install &&
 make    install
}
