    stable 1.2.4 1.2.3
   require proj tiff
  category utility/gis
 attribute console
    source ftp://ftp.remotesensing.org/pub/geotiff/libgeotiff/libgeotiff-$VERSION.tar.gz
  homepage http://www.remotesensing.org/geotiff/geotiff.html
      opts --enable-static=no
  estimate 100
      desc 'library for reading and writing GeoTIFF info tags'

build(){
# Unset LDFLAGS because
# the compilation fails if LDFLAGS='-Wl,-s' with message
#  ld: unknown option '-Wl,-s'

export LDFLAGS="${LDFLAGS//-Wl,-s/}"

sed -i "s:/usr/local:@prefix@:" bin/Makefile.in

autoconf &&
./configure \
--prefix=/usr \
--datarootdir=/usr/share &&
make &&
make install DESTDIR=$DESTDIR
}
