with version stable 1.4.0
with base    proj tiff
with also    --enable-static=no
with role    utility/gis
with trait   console
with trait   broke
with source  http://download.osgeo.org/geotiff/libgeotiff/libgeotiff-$VERSION.tar.gz
#   source ftp://ftp.remotesensing.org/pub/geotiff/libgeotiff/libgeotiff-$VERSION.tar.gz
#     info good 20120716
with info    last 20120329
with info    home http://trac.osgeo.org/geotiff/
with info    cite 'library for reading and writing GeoTIFF info tags'

build_old(){
 # Unset LDFLAGS because
 # the compilation fails if LDFLAGS='-Wl,-s' with message
 #  ld: unknown option '-Wl,-s'

 export LDFLAGS="${LDFLAGS//-Wl,-s/}"

 sed -i "s:/usr/local:@prefix@:" bin/Makefile.in

 autoconf &&
 ./configure \
  --prefix=/usr \
  --datarootdir=/usr/share &&
 make &&
 make install DESTDIR=$DESTDIR
}
