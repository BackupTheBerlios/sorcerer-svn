if  [  "$SPELL"  ==  "matchbox"  ];  then
    stable 1.1
   require matchbox-common  matchbox-window-manager
  optional matchbox-keyboard      '' '' for on screen keyboard
  optional matchbox-nest          '' '' for running at a particuliar sub resolution
  optional matchbox-panel-manager '' '' for panel and applet support
  optional matchbox-tests         '' '' for an additional theme
  optional matchbox-themes-extra  '' '' for extra themes
  optional mb-desktop-xine        '' '' for viewing videos

else
    source $SPELL/${VERSION:0:3}/$SPELL-$VERSION.tar.bz2
       url http://projects.o-hand.com/matchbox/sources/
fi
  category window-manager
 attribute x11 new
  homepage http://projects.o-hand.com/matchbox/
  estimate 5
      desc 'matchbox is a window manager for embedded platforms.
Please read the matchbox homepage for a detailed description.'
