   version stable 0.20.3 0.20.1 0.13.2 0.9.3 0.9.2 0.9.1 0.9.0
  optional php '' '' for php support
  category network/web
 attribute console server
    source http://www.monkey-project.com/releases/${VERSION:0:4}/monkey-$VERSION.tar.gz
      info last 20111015
      info docs http://www.monkey-project.com/documentation/index
      info home http://www.monkey-project.com/
      vurl http://www.monkey-project.com/downloads
      desc 'web server
monkey is a small web (HTML 1.1) server written in C.
It has support for PHP and CGI as well.'

build(){
 sed -i "s:-g -O2 -Wall:${CFLAGS}:" configure
 ./configure \
  --prefix=/usr/share/monkey \
  --bindir=/usr/sbin \
  --sysconfdir=/etc/monkey \
  --logdir=/var/log/monkey \
  $OPTS &&
 make &&
 make install DESTDIR=$DESTDIR
}
