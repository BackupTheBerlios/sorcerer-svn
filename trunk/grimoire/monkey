   version stable 0.9.3 0.9.2 0.9.1 0.9.0
  optional php '' '' for php support
  category network/web
 attribute console server
#   source http://monkeyd.sourceforge.net/versions/monkey-$VERSION.tar.gz
    source http://www.monkey-project.com/versions/monkey-$VERSION.tar.gz
  homepage http://monkeyd.sourceforge.net/
      vurl http://monkeyd.sourceforge.net/
      desc 'web server
monkey is a small web (HTML 1.1) server written in C.
It has support for PHP and CGI as well.'

build(){
sed -i "s:-g -O2 -Wall:${CFLAGS}:" configure
./configure \
--prefix=/usr/share/monkey \
--bindir=/usr/sbin         \
--sysconfdir=/etc/monkey   \
--logdir=/var/log/monkey   \
--lang=en                  \
$OPTS &&
make  &&
make install DESTDIR=$DESTDIR
}
