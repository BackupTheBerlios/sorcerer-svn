   VERSION=( "0.2" )
  CATEGORY="development"
 ATTRIBUTE="library"
    SOURCE="colormake-$VERSION.tar.gz"
       URL="http://bre.klaki.net/programs/colormake/"
  HOMEPAGE="http://bre.klaki.net/programs/colormake/"
       REQ="perl"
      DESC="colormake provides a wrapper to colorize make's output.
colormake is a simple wrapper for making the output
from make easier to read (more colorful),
and errors easier to find in messy compilations.
It was inspired by Micheal T. Babcock's excellent
log colorize program."


build() {
prepare_install  &&
install  colormake.pl  cmake  clmake  /usr/bin
}
