# 1.2.12 acquired optional on nas

    stable 1.2.14 1.2.13 1.2.12
   require yasm
  optional DirectFB --enable-video-directfb --disable-video-directfb for directfb video output
  optional alsa-lib --enable-alsa           --disable-alsa           for output using ALSA
  optional esound   '--enable-dlopen --enable-esd-shared' ''         for simultaneous sound playing and mixing
      opts --disable-rpath --enable-static=no
  category graphic/library
 attribute library
    source http://www.libsdl.org/release/SDL-$VERSION.tar.gz
      home http://www.libsdl.org/
    CFLAGS='-O3'
   LDFLAGS='-Wl,-O1'
 freshmeat sdl
  estimate 800
      desc 'Simple Direct Layer library
It provides a portable interface for graphic, audio, input programming.
SDL is a library that allows portable low-level access
to a video framebuffer, audio output, mouse, and keyboard.'

build_old(){
 # SDL unnecessarily links using g++.
 grep -lr CXXLINK * |
 xargs --max-lines=64 sed -i "s:\$(CXXLINK):\$(LINK):"
 default_build
}
