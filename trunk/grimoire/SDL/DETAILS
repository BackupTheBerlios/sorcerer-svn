   VERSION=( "1.2.7" )
    IGNORE="devel"
  CATEGORY="graphic"
 ATTRIBUTE="library x11"
    SOURCE="SDL-$VERSION.tar.gz"
       URL="http://www.libsdl.org/release"
  HOMEPAGE="http://www.libsdl.org"
       REQ="nasm x11"
    OPT[0]="aalib:--enable-video-aalib::for ascii art rendering"
    OPT[1]="esound:--enable-dlopen --enable-esd-shared::for simultaneous sound playing and mixing"
    OPT[2]="arts:--enable-dlopen --enable-arts-shared::for simulatenous sound playing and mixing"
    OPT[3]="DirectFB:--enable-video-directfb:--disable-video-directfb:for directfb video output"
    OPT[4]="alsa-lib:--enable-alsa:--disable-alsa:for output using ALSA"
 FRESHMEAT="sdl"
  ESTIMATE="730"
     SHORT="SDL is a portable game library for low-level access to hardware."
      LONG="
SDL is a library that allows you portable low-level access 
to a video framebuffer, audio output, mouse, and keyboard.
With SDL, it is easy to write portable games which run on Linux 
(x86, Sparc, PPC, Alpha), Solaris (Sparc), Win32 (95, 98, NT), 
BeOS (x86), and MacOS (PPC).
"
