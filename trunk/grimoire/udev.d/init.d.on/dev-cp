#!/bin/bash

### BEGIN INIT INFO
# Provides: dev-cp
# Required-Start: proc sys
# Should-Start:
# Required-Stop:  
# Default-Start: S
# S 1 2 3 4 5
# Default-Stop:
# Short-Description: dev-cp copies /lib/udev/dev/* to /dev/
# Description: dev-cp copies /lib/udev/dev/* to /dev/
### END INIT INFO

. /lib/lsb/init-functions

NAME=dev-cp

start(){
 mount -o defaults,size=1m,nr_inodes=4k,mode=0755 -t tmpfs tmpfs /dev
 if   log_warning_msg "$NAME copying"; cp -a /lib/udev/dev/* /dev
 then log_success_msg "$NAME copied"
 else log_failure_msg "$NAME not copied"
 fi
 }

stop(){ :; }

parse "$@"
