#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 500
# Required-Start: proc
# Default-Start: S
# Short-Description: dev mounts tmpfs on /dev
### END INIT INFO

. /lib/lsb/init-functions

only start stop restart status
name /dev
options '-o defaults,size=1m,nr_inodes=64k,mode=0755 -t devtmpfs devtmpfs'
