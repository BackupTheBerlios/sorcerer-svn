   VERSION=( "1.2.10" "1.2.9" "1.2.8" "1.2.7" )
  CATEGORY="audio-player"
 ATTRIBUTE="x11"
    SOURCE="xmms-$VERSION.tar.gz"
       URL="http://www.xmms.org/files/1.2.x
             ftp://ftp.xmms.org/xmms/1.2.x"
  HOMEPAGE="http://www.xmms.org"
       REQ=( "gtk+-v1.2 libxml"
             "alsa-lib::--disable-alsa:for alsa sound support"
             "esound::--disable-esd:for output through esound mixer"
             "libmikmod::--disable-mikmod:to play mod files"
             "libvorbis::--disable-vorbis:to play ogg vorbis files"
             ":--enable-ipv6::to enable IPv6 support" )
  ESTIMATE="653"
      DESC="xmms is a multimedia player based on the look of WinAmp.
XMMS plays MPEG layer 1/2/3, Ogg Vorbis, WAV, all formats 
supported by libmikmod, and CD audio.  XMMS has a plugin 
system for Input / Output / Effects / Visualization, and 
through plugins it can play a lot more sound and video formats."

build()  {
default_build  &&
cd  libxmms    &&
default_build  &&
install  -m 0644  ../xmms/i18n.h  /usr/include/xmms
}
