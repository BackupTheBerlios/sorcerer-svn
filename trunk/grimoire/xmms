    stable 1.2.11 1.2.10 1.2.9 1.2.8 1.2.7
   require MesaLib gtk+-v1.2 libxml
  optional alsa-lib  ''            --disable-alsa   for alsa sound support
  optional esound    ''            --disable-esd    for output through esound mixer
  optional libmikmod ''            --disable-mikmod to play mod files
  optional libvorbis ''            --disable-vorbis to play ogg vorbis files
  switch           --enable-ipv6 ''               to enable IPv6 support
  category audio/network audio/player
 attribute x11
       url 'http://www.xmms.org/files/
             ftp://ftp.xmms.org/xmms/'
    source ${VERSION:0:3}.x/xmms-$VERSION.tar.gz
      vurl http://www.xmms.org/download.php
  homepage http://www.xmms.org/
case $VERSION  in
 1.2.10) use_gcc gcc-v3.4 ;;
esac
      opts --enable-static=no
  estimate 2200
      desc 'xmms is a multimedia player based on the look of WinAmp.
XMMS plays MPEG layer 1/2/3, Ogg Vorbis, WAV, all formats 
supported by libmikmod, and CD audio.  XMMS has a plugin 
system for Input / Output / Effects / Visualization, and 
through plugins it can play a lot more sound and video formats.'


build()  {
default_build  &&  cd  libxmms  &&
default_build  &&
install  -m 0644  ../xmms/i18n.h  /usr/include/xmms
}
