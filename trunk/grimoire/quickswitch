    stable 1.05 1.02
   require perl
  category network utility
 attribute console
       url $SOURCEFORGE_URL
    source quickswitch/quickswitch-$VERSION.tar.gz
  homepage http://edgesolutions.ca/article.php?sid=21
      desc 'quickswitch is a network profile manager for laptops.
quickswitch is a utility that lets Linux/Unix laptop
users create and use roaming network profiles.
Instead of individually reconfiguring the network card,
changing DNS entries, hosts files ete... one can create
a single centralized file for all the network different profiles.'

build(){
sed -i 's:switchto.conf:quickswitch/switchto.conf:' switchto switcher
prepare_install &&
mkdir   -pm 700  /etc/quickswitch &&
install -vm 600 switchto.conf /etc/quickswitch/switchto.conf.example &&
install -vm 755 switchto switcher /usr/bin
}
