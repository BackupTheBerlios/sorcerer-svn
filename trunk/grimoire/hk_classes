   VERSION=( "0.8.1-test1" )
  CATEGORY="development"
 ATTRIBUTE="library new"
    SOURCE="hk-classes/hk_classes-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://hk-classes.sourceforge.net/"
       REQ=( "Python fontconfig freetype"
             "mysql::--without-mysql:for MySQL support"
             "sqlite::--without-sqlite3:for SQLite support" 
             "postgresql::--without-postgres:for postgresql support" )
  ESTIMATE="272"
 FRESHMEAT="hk_classes"
      DESC="hk_classes is a set of C++ libraries for rapid development of database applications"

build() {
default_build
if [ -f /usr/lib/hk_classes/libhk_classes.so.10 ];
then
  ln -s /usr/lib/hk_classes/libhk_classes.so.10 /usr/lib/libhk_classes.so.10
fi
}

