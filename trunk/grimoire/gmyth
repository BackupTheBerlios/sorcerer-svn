   version stable 0.7.1
   require curl glib libxml2 mysql
      opts --enable-static=no
  category network/library
 attribute library makej multilib-concurrent
    source $SOURCEFORGE_URL gmyth/gmyth/$VERSION/gmyth-$VERSION.tar.gz
      info last 20080303
      info home http://gmyth.sourceforge.net/wiki/index.php/Main_Page
      desc 'library to access MythTV backend services'

build(){
 case $VERSION in
  0.7.1) grep -lr 'curl/types\.h' * | xargs --max-lines=64 \
         sed -i '\,curl/types.h,d' ;;
 esac
 default_build
}
