    stable 20020815
   require cabextract fontconfig
  category font
 attribute data
       url $SOURCEFORGE_URL
    source corefonts/andale32.exe
    source corefonts/arial32.exe
    source corefonts/arialb32.exe
    source corefonts/comic32.exe
    source corefonts/courie32.exe
    source corefonts/georgi32.exe
    source corefonts/impact32.exe
    source corefonts/times32.exe
    source corefonts/trebuc32.exe
    source corefonts/verdan32.exe
    source corefonts/wd97vwr32.exe
    source corefonts/webdin32.exe
  homepage http://sourceforge.net/projects/corefonts/
      desc 'corefont provides Microsoft core fonts.'

build(){
 install_fonts(){
  mkdir -p             /usr/share/fonts/corefonts
  cp    -v *.{TTF,ttf} /usr/share/fonts/corefonts/ &&
  fc-cache             /usr/share/fonts/corefonts/
 }

 cabextract $SOURCE_CACHE/corefonts/$VERSION/*.exe
 prepare_install &&
         install_fonts
}
