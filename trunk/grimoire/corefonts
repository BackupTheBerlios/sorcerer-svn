with version stable 20020815
with base    cabextract fontconfig
with role    font
with trait   archive_off data
with source  $SOURCEFORGE_URL corefonts/the%20fonts/final/andale32.exe
with source  $SOURCEFORGE_URL corefonts/the%20fonts/final/arial32.exe
with source  $SOURCEFORGE_URL corefonts/the%20fonts/final/arialb32.exe
with source  $SOURCEFORGE_URL corefonts/the%20fonts/final/comic32.exe
with source  $SOURCEFORGE_URL corefonts/the%20fonts/final/courie32.exe
with source  $SOURCEFORGE_URL corefonts/the%20fonts/final/georgi32.exe
with source  $SOURCEFORGE_URL corefonts/the%20fonts/final/impact32.exe
with source  $SOURCEFORGE_URL corefonts/the%20fonts/final/times32.exe
with source  $SOURCEFORGE_URL corefonts/the%20fonts/final/trebuc32.exe
with source  $SOURCEFORGE_URL corefonts/the%20fonts/final/verdan32.exe
with source  $SOURCEFORGE_URL corefonts/the%20fonts/final/wd97vwr32.exe
with source  $SOURCEFORGE_URL corefonts/the%20fonts/final/webdin32.exe
with info    good 20120604
with info    last 20020815
with info    home http://sourceforge.net/projects/corefonts/
with info    cite 'Microsoft core fonts'

build(){
 install_fonts(){
  mkdir -pvm 755       $DESTDIR/usr/share/fonts/corefonts
  cp    -v *.{TTF,ttf} $DESTDIR/usr/share/fonts/corefonts/ &&
  fc-cache             $DESTDIR/usr/share/fonts/corefonts/
 }

 mkdir -pvm 755 ${BUILD_DIR:=$SOURCE_DIR/$SPELL/$SPELL-$VERSION}
 cd             ${BUILD_DIR}
 cabextract $SOURCE_CACHE/corefonts/$VERSION/*.exe
 install_fonts
}
