    stable 20020815
   require cabextract fontconfig
  category font
 attribute data
    source $SOURCEFORGE_URL corefonts/the%20fonts/final/andale32.exe
    source $SOURCEFORGE_URL corefonts/the%20fonts/final/arial32.exe
    source $SOURCEFORGE_URL corefonts/the%20fonts/final/arialb32.exe
    source $SOURCEFORGE_URL corefonts/the%20fonts/final/comic32.exe
    source $SOURCEFORGE_URL corefonts/the%20fonts/final/courie32.exe
    source $SOURCEFORGE_URL corefonts/the%20fonts/final/georgi32.exe
    source $SOURCEFORGE_URL corefonts/the%20fonts/final/impact32.exe
    source $SOURCEFORGE_URL corefonts/the%20fonts/final/times32.exe
    source $SOURCEFORGE_URL corefonts/the%20fonts/final/trebuc32.exe
    source $SOURCEFORGE_URL corefonts/the%20fonts/final/verdan32.exe
    source $SOURCEFORGE_URL corefonts/the%20fonts/final/wd97vwr32.exe
    source $SOURCEFORGE_URL corefonts/the%20fonts/final/webdin32.exe
  homepage http://sourceforge.net/projects/corefonts/
      desc 'corefont provides Microsoft core fonts.'

build(){
 install_fonts(){
  mkdir -p             $DESTDIR/usr/share/fonts/corefonts
  cp    -v *.{TTF,ttf} $DESTDIR/usr/share/fonts/corefonts/ &&
  fc-cache             $DESTDIR/usr/share/fonts/corefonts/
 }

 mkdir -p ${BUILD_DIR:=$SOURCE_DIR/$SPELL/$SPELL-$VERSION}
 cd       ${BUILD_DIR}
 cabextract $SOURCE_CACHE/corefonts/$VERSION/*.exe
 install_fonts
}
