   VERSION=( "20020815" )
  CATEGORY="font"
 ATTRIBUTE="data"
    SOURCE=( "corefonts/andale32.exe"
             "corefonts/arial32.exe"
             "corefonts/arialb32.exe"
             "corefonts/comic32.exe"
             "corefonts/courie32.exe"
             "corefonts/georgi32.exe"
             "corefonts/impact32.exe"
             "corefonts/times32.exe"
             "corefonts/trebuc32.exe"
             "corefonts/verdan32.exe"
             "corefonts/wd97vwr32.exe"
             "corefonts/webdin32.exe" )
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://sourceforge.net/projects/corefonts/"
       REQ="cabextract fontconfig"
BC_EXCLUDE="\,^/usr/share/fonts/,d"
  ESTIMATE="5"
      DESC="corefont provides Microsoft's core fonts."


build()  {
  install_fonts()  {
    mkdir  -p               /usr/share/fonts/corefonts
    cp     -v  *.{TTF,ttf}  /usr/share/fonts/corefonts/  &&
    fc-cache                /usr/share/fonts/corefonts/
  }

  cabextract  $SOURCE_CACHE/corefonts/$VERSION/*.exe
  prepare_install  &&
          install_fonts
}
