   VERSION=( 1.1.13 1.1.12 1.1.11.1 )
      SAFE=( 1.1.13 )
  CATEGORY='video'
 ATTRIBUTE='library x11'
    SOURCE="xine/xine-lib-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://xine.sourceforge.net'
# doesn't work with aalib-1.2
       REQ=( 'MesaLib libXinerama libXvMC libmng libpng'
             'ImageMagick::--disable-imagemagick:to convert and display different image formats'
             'SDL::--disable-sdl:for output through SDL'
             'XviD:--with-xvid-prefix=/usr::for mpeg 4 decoding'
             'aalib::--disable-aalib:for ascii art rendering'
             'esound::--disable-esd:for output through esound'
             'faad2:--enable-faad:--disable-faad:to build the faad decoder'
             'ffmpeg:--with-external-ffmpeg::instead of included ffmpeg'
             'flac::--disable-flac:for FLAC support'
             'gnome-vfs::--disable-gnome:for gnome-vfs plugin'
             'libcaca:::for color ascii rendering'
             'libtheora:::to play theora streams'
             'libvorbis:::for support of the ogg vorbis audio codec'
             'pulseaudio:::for pulseaudio audio mixing'
             'speex::--disable-speex:to enable SPX decoding'
             'w32codec:--with-w32-path=/usr/lib/win32::for more codecs support' )
#            'arts::--disable-arts:for arts audio mixing'
# 1.1.13 gained optional on libmodplug, but why?
    CFLAGS='-O3'
   LDFLAGS='-Wl,-O1'
 FRESHMEAT='xine'
  ESTIMATE='9000'
      DESC='xine-lib contains the libraries for xine, a free video player.'
