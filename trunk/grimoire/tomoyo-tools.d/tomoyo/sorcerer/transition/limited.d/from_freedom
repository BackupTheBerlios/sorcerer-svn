# Entry into
# <kernel> /domain/limited
# <kernel> /media/root/domain/limited
# permitted from
# <kernel> /domain/freedom
# <kernel> /media/root/domain/freedom

confirm(){
 [ -n "$(
  /usr/sbin/tomoyo-pstree |
  /bin/sed "\,($PPID) <kernel> /domain/freedom$,p
            \,($PPID) <kernel> /media/root/domain/freedom$,p;d" )" ]
}

if   confirm; then
 if   [ -n "$1" ]
 then PROG="$1"; shift 1; exec $REPLY "$@"
 else exec /bin/bash -
 fi
fi
