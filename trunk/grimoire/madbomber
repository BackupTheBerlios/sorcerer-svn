   version stable 0.2.5
   require SDL_image SDL_mixer
  category game
 attribute x11
    source ftp://ftp.tuxpaint.org/unix/x/madbomber/src/madbomber-$VERSION.tar.gz
#   source ftp://ftp.billsgames.com/unix/x/madbomber/src/madbomber-$VERSION.tar.gz
      info good 20120625
      info last 20030817
      info vurl http://www.newbreedsoftware.com/madbomber/download/
      info home http://www.newbreedsoftware.com/madbomber/
      desc 'clone of the Atari 2600 video game Kaboom
Mad Bomber is a clone of the excellent 1981 Atari 2600
video game Kaboom! by Larry Kaplan of Activision.'

build(){
make "CC=gcc $CFLAGS" &&
mkdir -pvm 755 $DESTDIR/usr/bin &&
make "CC=gcc $CFLAGS" DATA_PREFIX=$DESTDIR/usr/share/madbomber/ \
                       BIN_PREFIX=$DESTDIR/usr/bin/ install
}
