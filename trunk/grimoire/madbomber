   VERSION=( "0.2.5" )
  CATEGORY="game"
 ATTRIBUTE="x11"
    SOURCE="madbomber-$VERSION.tar.gz"
       URL="ftp://ftp.billsgames.com/unix/x/madbomber/src/"
#old     URL="ftp://ftp.sonic.net/pub/users/nbs/unix/x/madbomber/src/"
  HOMEPAGE="http://www.newbreedsoftware.com/madbomber/"
       REQ="SDL_image SDL_mixer"
      DESC="madbomber is a clone of the Atari 2600 video game Kaboom.
Mad Bomber is a clone of the excellent 1981 Atari 2600
video game Kaboom! by Larry Kaplan of Activision."

build() {
BD="BIN_PREFIX=/usr/games"
CC="CC=gcc $CFLAGS"
make             "$BD"  "$CC"  &&
prepare_install                &&
make    install  "$BD"  "$CC"
}
