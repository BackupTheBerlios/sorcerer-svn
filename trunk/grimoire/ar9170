   version stable 9170
   require udev
  category kernel network
 attribute firmware
    source http://www.kernel.org/pub/linux/kernel/people/mcgrof/firmware/ar9170/ar9170.fw
      info home  http://wireless.kernel.org/en/users/Drivers/ar9170
      desc 'firmware for Atheros Linux 802.11n USB chipset AR9170'

build(){
 mkdir  -pvm 755         $DESTDIR/lib/firmware &&
 install -vm 644 $SOURCE $DESTDIR/lib/firmware/
}
