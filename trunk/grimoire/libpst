# Telling it the library or extention does not work.
#     opts --with-boost-python=boost-python-mt

   version stable 0.6.55 0.6.54 0.6.53
   require boost gd jpeg
  category network/email
 attribute library
    source http://www.five-ten-sg.com/libpst/packages/libpst-$VERSION.tar.gz
      info last 20120810
      info home http://www.five-ten-sg.com/libpst/
      desc 'outlook to unix mail converter library'

build(){
 case $VERSION in
  0.6.55) sed -i 's:ax_python_lib=boost_python:ax_python_lib=boost_python-mt:' configure ;;
  0.6.54) sed -i 's:ax_python_lib=boost_python:ax_python_lib=boost_python-mt:' configure ;;
 esac
 default_build
}
