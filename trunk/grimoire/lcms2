# 2.0a might not be a drop in replacement
# since the library name changes from liblcms to liblcms2
# and the pkgconfig name changes from lcms to lcms2
# /usr/lib/pkgconfig/lcms2.pc

# Where is the 3.0.2 version coming from?
# not the author's sourceforge site.

    stable 2.1 1.19 1.18a
    secure 1.17
  optional jpeg   '' --without-jpeg   for jpeg support
  optional tiff   '' --without-tiff   for tiff support
  optional zlib   '' --without-zlib   for zlib support
  optional Python '' --without-python for building python extentions
  category graphic
 attribute library
    source $SOURCEFORGE_URL lcms/lcms/$VERSION/lcms2-$VERSION.tar.gz
      opts --disable-static
  homepage http://www.littlecms.com
  estimate 400
      desc 'small size and speed-optimized color management engine'
