   VERSION=( "src-0.4.0" "src-0.3.1" "src-0.3" "src-0.2.3" )
    IGNORE="bin\|data"
  CATEGORY="game"
 ATTRIBUTE="x11"
    SOURCE="wormux-$VERSION.tgz"
  HOMEPAGE="http://www.wormux.org/en"
       URL="http://download.gna.org/wormux"
       REQ="ClanLib libxml++"
  ESTIMATE="163"
      DESC="wormux is a free clone of worms."


build() {
cd    src
make  RELEASE=1  &&
prepare_install  &&
make    install  DIR_BIN=/usr/games
}
