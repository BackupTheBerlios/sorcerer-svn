   VERSION=( 0.9.10.1 )
  CATEGORY='security/authentication'
 ATTRIBUTE='library'
    SOURCE="prelude-lml-$VERSION.tar.gz"
  HOMEPAGE='http://www.prelude-ids.org'
       URL='http://www.prelude-ids.org/download/releases/'
      VURL='http://www.prelude-ids.org/spip.php?rubrique6'
       REQ=( "init-functions libprelude pcre"
             "gamin:::for file alteration notification instead of polling" )
  ESTIMATE='700'
      DESC="prelude-lml provides a log file anayalzer."

build()  {
  default_build  &&
  if    !  [  -d /etc/prelude/profile/prelude-lml  ]
  then  prelude-admin register prelude-lml "idmef:w admin:r" localhost --uid 0 --gid 0
  fi
}
