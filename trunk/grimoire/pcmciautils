   version stable 018 015
   require psmisc sysfsutils udev
  category utility kernel
 attribute console
    source $KERNEL_URL pub/linux/utils/kernel/pcmcia/pcmciautils-$VERSION.tar.bz2
      info last 20110603
      info home http://kernel.org/pub/linux/utils/kernel/pcmcia/pcmcia.html
 conflicts pcmcia-cs
      desc 'userspace tools for PCMCIA support
For linux 2.6.x kernels pcmciautils replaces pcmcia_cs.
pcmciautils does not require an init script and is started by
hotplug or udev.'

build(){
 make &&
 make install DESTDIR=$DESTDIR
}
