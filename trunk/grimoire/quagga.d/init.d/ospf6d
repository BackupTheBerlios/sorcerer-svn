#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 500
# Required-Start: zebra
# Required-Stop:  $network
# Default-Start: S
# Default-Stop: 0 1 6
# Short-Description: ospf6d starts a routing server
### END INIT INFO

. /lib/lsb/init-functions

if    ! rootfs; then
 if   [ start == "$1" ]
 then echo "$0 starts only on rootfs" 1>&2; trap - EXIT; exit 1
 else trap - EXIT; exit 0
 fi
fi

only start stop status
server /sbin/ospf6d
config /etc/quagga/ospf6d.conf
#domain user
options -d
