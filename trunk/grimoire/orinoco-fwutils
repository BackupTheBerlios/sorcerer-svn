   version stable 0.3
   require perl
  category kernel network wireless
 attribute console
    source $SOURCEFORGE_URL orinoco/orinoco-fwutils/$VERSION/orinoco-fwutils-0.3.tar.gz
      info home  http://sourceforge.net/projects/orinoco/
      desc 'utilities for downloading and parsing firmware for
802.11b cards compatible with Linux Orinoco driver'

build(){
 mkdir  -pvm 755      $DESTDIR/usr/bin
 install -vm 755 *_fw $DESTDIR/usr/bin/
}
