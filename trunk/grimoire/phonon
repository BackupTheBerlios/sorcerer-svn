    stable 4.2.0
   require automoc4 gst-plugins-base qt-x11-opensource
    source ftp://ftp.kde.org/pub/kde/stable/phonon/$VERSION/phonon-$VERSION.tar.bz2
  homepage http://www.kde.org/
  category audio/library
 attribute kde4
  estimate 500
      opts -DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4
      opts -DCMAKE_INSTALL_RPATH:PATH=/opt/kde4/lib:/opt/kde4/lib64
      opts -DCMAKE_SKIP_BUILD_RPATH:BOOL=TRUE
      opts -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=TRUE
      opts -DCMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=TRUE
      opts -DCMAKE_BUILD_TYPE=Release
      desc 'phonon provides phonon audio library wrapper for kde 4.1.'

build(){
mkdir build     &&
cd    build     &&
cmake $OPTS ..  &&
make            &&
prepare_install &&
make    install
}
