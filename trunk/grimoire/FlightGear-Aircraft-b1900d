   version stable 20100201 20100130 20081030
  category game/3d/flightsim
 attribute archive_off data x11
    source ftp://mirrors.ibiblio.org/pub/mirrors/flightgear/ftp/Aircraft-2.0.0/${SPELL:20}_$VERSION.zip
      desc 'Additional Aircraft for FlightGear.'

build(){
 mkdir -pvm 755 $DESTDIR/usr/share/FlightGear/Aircraft/${SPELL/FlightGear-Aircraft-/} &&
 cp    -av *    $DESTDIR/usr/share/FlightGear/Aircraft/${SPELL/FlightGear-Aircraft-/}
}
