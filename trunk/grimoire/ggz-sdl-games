inherit ggz
unset  REQ
    SOURCE="ggz-sdl-games-$VERSION.tar.gz"
       REQ="SDL_image SDL_mixer SDL_ttf ggz-client-libs"
  ESTIMATE="45"
      DESC="ggz-sdl-games provides the game modules for ggz."

build()  {
export    CFLAGS="-I/usr/X11R6/include $CFLAGS"
export  CXXFLAGS="-I/usr/X11R6/include $CXXFLAGS"
default_build
}
