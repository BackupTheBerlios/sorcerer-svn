    stable 0.3.17 0.3.16 0.3.15
   require glib
      opts --enable-static=no
  category development
 attribute library
 attribute multilib-fail
 attribute broke
    source http://www.schleef.org/liboil/download/liboil-$VERSION.tar.gz
  homepage http://www.schleef.org/liboil/
  estimate 1300
      desc 'library of simple functions optimized for various CPUs'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then opts --host=${MACHTYPE/x86_64/i686}
 fi
 default_build
}
