   version stable 1.1.0
   require SDL_mixer gcc-g++
  category game
 attribute x11
    source http://www.schwardtnet.de/alienblaster/archives/alienblaster-$VERSION.tgz
      info home  http://www.schwardtnet.de/alienblaster/
      desc 'top down screen scrolling shooting game'

build(){
USA=/usr/share/games/alienBlaster
ULE=/usr/libexec
RUN="#!/bin/bash\ncd $USA\n$ULE/alienBlaster \"\$@\""
UGA=/usr/bin/alienBlaster
make "OPTIMIZATION=$CXXFLAGS" &&
rm    -r src Makefile &&
chown -R root:root *  &&
chmod -R a+r       *  &&
chmod -R og-w      *  &&
mkdir -p              $DESTDIR/$ULE &&
mv       alienBlaster $DESTDIR/$ULE &&
mkdir -p    $DESTDIR/$USA           &&
cp    -r *  $DESTDIR/$USA           &&
mkdir -p    $DESTDIR/usr/bin        &&
echo  -e   "$RUN" > $DESTDIR/$UGA   &&
chmod 755           $DESTDIR/$UGA
}
