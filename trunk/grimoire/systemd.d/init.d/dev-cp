#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 500
# Required-Start: dev
# Default-Start: S 1 2 3 4 5
# Short-Description: dev-cp copies /lib/udev/dev/* to /dev/
### END INIT INFO

. /lib/lsb/init-functions

only start

start(){
 local DM=/lib/udev/dev

 if   log_warning_msg "cp -a $DM/* /dev"; cp -a $DM/* /dev
 then log_success_msg "$DM/* copied"
 else log_failure_msg "$DM/* not copied"
 fi
}
