#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 500
# Required-Start: dev
# Default-Start: S 1 2 3 4 5
# Short-Description: dev-cp copies /lib/udev/dev to /
### END INIT INFO

. /lib/lsb/init-functions

only start

start(){
 local d=/lib/udev/dev

 if   log_warning_msg "cp -a $d /"
                       cp -a $d /
 then log_success_msg "cp -a $d / # successful"
 else log_failure_msg "cp -a $d / # unsuccessful"; return 1
 fi
}
