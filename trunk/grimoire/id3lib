   version stable 3.8.3 3.8.2 3.8.1
   require gcc-g++ zlib
      opts --enable-static=no
  category audio/library
 attribute library makej multilib-dual
 attribute unsafe
    source $SOURCEFORGE_URL id3lib/id3lib/$VERSION/id3lib-$VERSION.tar.gz
      info last  20030302
      info home  http://id3lib.sourceforge.net/
      info docs  http://id3lib.sourceforge.net/api/index.html
      info mail  https://lists.sourceforge.net/lists/listinfo/id3lib-devel
  estimate 900
      desc 'MP3 ID3v1 & ID3v2 libs
id3lib is a lib that is used my many mp3 programs
to change the contence of the mp3 tags.
It suports all mp3 tags.'

case $VERSION in
 3.8.3)
   require automake libtool ;;
esac

build(){
 case $VERSION in
  3.8.3) aclocal -I .
         autoheader
         libtoolize --automake
         automake   --add-missing
         autoconf ;;
 esac
 export LDFLAGS+=" -lstdc++ -lz $CFLAGS"
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
