   version   stable 0.9.6.0 0.9.4.0 0.9.2.0
#  version unstable 0.9.5.95
   require GConf NetworkManager libglade openconnect
  category development
 attribute gnome
    source $GNOME_URL sources/NetworkManager-openconnect/${VERSION:0:3}/NetworkManager-openconnect-$VERSION.tar.xz
      info last 20120808
      info home http://www.gnome.org/
      desc 'source tarball lacks description'

build(){
 case $VERSION in
  0.9.2.0) sed -i 's:glib/gi18n.h:glib.h:' \
               auth-dialog/main.c \
               properties/auth-helpers.c \
               properties/nm-openconnect.c \
               src/nm-openconnect-service.c
           sed -i 's:glib/gtypes.h:glib.h:' \
               src/nm-openconnect-service.h ;;
 esac
 sed -i 's:-Werror::' configure
 default_build
}
