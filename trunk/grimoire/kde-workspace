   inherit kde-v4
# google-gadgets-for-linux is currently not compiling
#  require google-gadgets-for-linux
# marble fails to compile with gpsd installed
#  require gpsd
   require ConsoleKit NetworkManager
   require kactivities kde-base-artwork kde-runtime kdepimlibs-v4 
   require libXres libXxf86misc libraw1394 libxkbfile lm_sensors
   require pciutils prison pykde4 qimageblitz xprop
  category utility/file-manager utility/terminal-emulator
 attribute library makej multilib-concurrent optimize
 attribute litelink
    source   stable $KDE_URL   stable/$VERSION/src/$SPELL-$VERSION.tar.xz
    source unstable $KDE_URL unstable/$VERSION/src/$SPELL-$VERSION.tar.xz
     wmbin /usr/bin/startkde
     iwall 'kdm will soon restart'
  sys_user kdm
 conflicts kdebase-workspace-v4
      desc 'window manager and desktop for kde'

post_install(){
 default_post_install
 case $VERSION in
  4.8.0) sed -i 's:/opt/kde4:/usr:' /usr/share/config/kdm/kdmrc ;;
 esac
}
