   version stable 1.3.1 1.1.0
   require sqlite ruby
  category development/interpreter/ruby
 attribute library hidden
 attribute multilib-fail
    source http://rubyforge.org/frs/download.php/71617/sqlite3-ruby-$VERSION.tgz
      info home http://rubyforge.org/projects/sqlite-ruby/
      desc 'ruby bindings for sqlite'

build(){
ruby setup.rb config &&
ruby setup.rb setup  &&
ruby setup.rb install --prefix=$DESTDIR/usr
#ruby setup.rb install --destdir=$DESTDIR
}
