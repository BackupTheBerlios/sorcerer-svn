    stable 1.5.0 1.3.9 1.3.8 1.3.7 1.3.6 1.3.5 1.3.4 1.3.2 1.3.0
   require gcc-g++ gpgme
  optional openssl '' '' for secure socket connections
  category network/chat
 attribute client
    source $SOURCEFORGE_URL licq/licq/$VERSION/licq-$VERSION.tar.bz2
  homepage http://www.licq.org
  estimate 250
      desc 'icq client
licq includes all the basic features of ICQ, like sending/receiving
messages, chat, file transfer, contact list with pixmaps and user
status, basic/extended user info, adding/editing users from within
the GUI, user history, user groups, and new user registration.'

case $SPELL in
 licq-*) desc 'plugin for licq.'
esac


build(){
 unset LDFLAGS
 case $SPELL in
  licq-*) cd plugins/${SPELL:5} ;;
 esac
 export PATH="/usr/bin/qt3:$PATH"
 default_build
}
