   VERSION=( "1.2.7" "1.2.6" "1.2.4" "1.2.3" "1.2.0a" "1.2.0" "1.0.4" )
    IGNORE="data\|osd"
  CATEGORY="chat"
 ATTRIBUTE="client"
    SOURCE="licq/licq-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://www.licq.org"
       OPT="openssl:::for secure socket connections"
  ESTIMATE="73"
     SHORT="licq is a featured icq client for Unix systems."
      LONG="
licq includes all the basic features of ICQ, like sending/receiving
messages, chat, file transfer, contact list with pixmaps and user
status, basic/extended user info, adding/editing users from within
the GUI, user history, user groups, and new user registration.
"


build()  {
  case  $SPELL  in
    licq-*)  cd  licq-$VERSION/plugins/${SPELL:5}  ;;
  esac
  default_build
}


case  $SPELL  in
  licq-*)  DIR="none";  unset  LONG  OPT
           SHORT="$SPELL provides a plugin for licq."  
           EPROVIDE="licq,${SPELL:5}"  ;;
esac
