   VERSION=( "2.1.3" "2.1.2" "2.1.0" )
  CATEGORY="perl"
 ATTRIBUTE="perl-module new"
    IGNORE="^1\.19\.1"
       URL="http://www.cpan.org/authors/id/"
# SDL_perl 1.19.1 is not compatibile with frozen-bubble 0.9.3
  CATEGORY="$CATEGORY graphic"
 ATTRIBUTE="perl-module library x11"
  HOMEPAGE="http://search.cpan.org/search?dist=SDL_Perl"
    SOURCE="D/DG/DGOEHRIG/${SPELL#perl--}-$VERSION.tar.gz"
       REQ=( "perl SDL SDL_mixer SDL_image"
          "glut::-GL -GLU: for OpenGL support"
          "libpng::-png:for png support"
          "SDL_net::-SDL_net:for networking support"
          "SDL_image::-SDL_image:for loading images"
          "SDL_gfx::-SDL_gfx:for high quality graphics library"
          "jpeg::-jpeg:for jpeg support"
          "smpeg::-smpeg:to play mpeg movies and mp3 audio"
          "SDL_mixer::-SDL_mixer:for sound support"
          "SDL_ttf:::for freetype 2 font support"
	  )
  ESTIMATE="109"
  EPROVIDE="SDL_perl"
      DESC="$SPELL is the glue that binds perl to SDL
$SPELL is a perl module that will allow Perl code to use SDL.
"

build() {
  ./configure  $OPTS  &&
  make                &&
  prepare_install     &&
  make  install
}
