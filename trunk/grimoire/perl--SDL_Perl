   version stable v2.2.6
   require SDL perl--Module-Build perl--Test-Simple
  optional SDL_gfx   '' -SDL_gfx   for high quality graphics library
  optional SDL_image '' -SDL_image for loading images
  optional SDL_mixer '' -SDL_mixer for sound support
  optional SDL_net   '' -SDL_net   for networking support
  optional SDL_ttf   '' ''         for freetype 2 font support 
  optional jpeg      '' -jpeg      for jpeg support
  optional libpng    '' -png       for png support
# optional smpeg     '' -smpeg     to play mpeg movies and mp3 audio
      opts -GL
  category perl
 attribute perl-module
    source http://search.cpan.org/CPAN/authors/id/K/KT/KTHAKORE/SDL_Perl-$VERSION.tar.gz
#   source http://www.cpan.org/authors/id/D/DG/DGOEHRIG/SDL_Perl-$VERSION.tar.gz
      info good 20120629
      info last 20091107
      info home http://search.cpan.org/search?dist=SDL_Perl
  eprovide SDL_perl
      desc 'perl binding to SDL
perl--SDL_Perl is a perl module that will allow Perl code to use SDL.'

build(){
 perl Build.PL &&
 ./Build install $OPTS --destdir "$DESTDIR"
}
