   version stable 1.9.2 1.9.0 1.8.0
   require tk
  category graphic
 attribute library x11
    source $SOURCEFORGE_URL tcllib/BWidget/$VERSION/BWidget-$VERSION.tar.gz
 freshmeat bwidget
      info good 20120528
      info last 20110627
      info home http://tcllib.sourceforge.net
      info docs http://tcllib.sourceforge.net/BWman/contents.html
      desc 'a widget set for tk
BWidget is a high-level widget set for tcl/tk 
that uses native tcl/tk 8.x namespaces.
They feature a professional look and feel and 
do not require a compiled extension library.'

build(){
TCL_VER=$( installed_version $( get_provider tcl ) )
   DEST="$DESTDIR/usr/lib/tcl${TCL_VER:0:3}/BWidget-$VERSION"
    RUN="package require BWidget\nexit"

[ -f widget.tcl ] &&
mkdir -p     $DEST &&
cp    -r ./* $DEST
}


