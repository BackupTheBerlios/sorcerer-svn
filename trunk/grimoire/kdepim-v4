# libindicate-qt is optionally needed
# for KMail integration with libindicate indicators.
# adding it as required merely for simplicity.
# but libindicate does not compile
# temporarily removing it from requirements.

   inherit kde-v4
   require kdepim-runtime-v4 libXScrnSaver
#  require kdepim-runtime-v4 libindicate-qt libXScrnSaver

    switch '' --exclude-kaddressbook for addressbook appliction
    switch '' --exclude-kmail           the KDE mail client
    switch '' --exclude-kmailcvt        tool for importing mail related data from other programs
    switch '' --exclude-knode           UseNet client
    switch '' --exclude-korganizer      a calendar-of-events, todo-list manager, journal 
    switch '' --exclude-kalarm          gui for setting up personal alarm messages, emails and commands
    switch '' --exclude-kontact         Integrated PIM application
    switch '' --exclude-ksendemail      commandline email tool
    switch '' --exclude-ktimetracker    Time tracker
    switch '' --exclude-knotes          yellow notes application
    switch '' --exclude-console         Command line tool for accessing calendar files and addressbook KABC
    switch '' --exclude-akregator       Feed reader
    switch '' --exclude-kjots           manager for several books with a subject and notes
    switch '' --exclude-blogilo         The KDE blogging client

  category utility/office
  estimate 10500
      desc 'Personal information management programs
kaddressbook    The KDE addressbook application
kmail           the KDE mail client
kmailcvt        tool for importing mail related data from other programs
knode           UseNet client
korganizer      a calendar-of-events, todo-list manager, journal 
kalarm          gui for setting up personal alarm messages, emails and commands
kalarmd         alarm monitoring daemon
kontact         Integrated PIM application
ksendemail      commandline email tool
ktimetracker    Time tracker
kfile-plugins   vCard KFIleItem plugin
knotes          yellow notes application
konsolekalendar Command line tool for accessing calendar files
akregator       Feed reader
kjots           manager for several books with a subject and notes
blogilo         The KDE blogging client'


build(){
 for    DIR in $OPTS; do
  case $DIR in
   --exclude-*) rm -frv "${DIR/--exclude-/}" ;;
  esac
 done

 kde_build
}
