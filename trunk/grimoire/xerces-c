   VERSION=( 2.7.0 )
  CATEGORY='utility'
 ATTRIBUTE='console library new'
    SOURCE="xml/xerces-c/source/xerces-c-src_${VERSION//./_}.tar.gz"
       URL="$APACHE_URL"
  HOMEPAGE='http://xml.apache.org/xerces-c'
       REQ=''
  ESTIMATE='894'
      DESC="xerces-c is a validating XML parser written in C++
Xerces-C++ makes it easy to give your application
the ability to read and write XML data.
A shared library is provided for parsing, generating,
manipulating, and validating XML documents."

build() {
  export XERCESCROOT=$BUILD_DIR

  cd $XERCESCROOT/samples	&&
  ./runConfigure  -plinux	\
                  -cgcc		\
                  -xg++		\
                  -rpthread	&&

  cd $XERCESCROOT/src/xercesc	&&
  ./runConfigure  -plinux	\
                  -cgcc		\
                  -xg++		\
                  -rpthread	\
                  -P/usr	&&
  make				&&
  make  samples			&&
  prepare_install		&&
  make  install			&&
  rm -r $XERCESCROOT/bin/obj	&&
  install -v -m 0755  $XERCESCROOT/bin/*  /usr/bin
}
