    source   stable $GNOME_URL sources/gnome-bluetooth/${VERSION:0:3}/gnome-bluetooth-$VERSION.tar.xz
    source unstable $GNOME_URL sources/gnome-bluetooth/${VERSION:0:3}/gnome-bluetooth-$VERSION.tar.xz
      info last 20120929
