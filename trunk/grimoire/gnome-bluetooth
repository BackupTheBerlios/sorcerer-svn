   version stable 3.2.0 3.0.0 2.91.91 2.32.0
case $VERSION in
 2.32.0)
      opts --enable-introspection=no ;;
esac
   require gnome-control-center libnotify
  category documentation
 attribute gnome library makej multilib-concurrent
    source $GNOME_URL sources/gnome-bluetooth/${VERSION:0:3}/gnome-bluetooth-$VERSION.tar.bz2
      info last 20111006
  homepage http://www.gnome.org/softwaremap/projects/gnome-bluetooth
      desc 'GNOME Bluetooth Subsystem'

