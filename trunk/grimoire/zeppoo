   VERSION=( "0.0.3d" )
  CATEGORY="security"
 ATTRIBUTE="console i386 new"
    SOURCE="zeppoo/zeppoo-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://www.zeppoo.net"
  ESTIMATE="25"
      DESC="zeppoo detects rootkits on ia32 architecture.
Using /dev/kmem and /dev/mem zeppoo detects
hidden tasks, modules, syscalls, some corrupted symbols,
and hidden connections."

build()  {
  cd      libzeppoo  &&
  make    static     &&  cd  ..  &&
  make    static     &&
  prepare_install    &&
  make    install
}
