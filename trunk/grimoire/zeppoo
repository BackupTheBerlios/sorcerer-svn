    stable         0.0.3d
    ignore '^0\.0\.4'
# stable 0.0.4 0.0.3d
# 0.0.4 lacks a makefile rule to install
  category security
 attribute console new
       url $SOURCEFORGE_URL
    source zeppoo/zeppoo-$VERSION.tar.gz
  homepage http://www.zeppoo.net
  estimate 30
      desc 'zeppoo detects rootkits on ia32 and amd64 architectures.
Using /dev/kmem and /dev/mem zeppoo detects
hidden tasks, modules, syscalls, some corrupted symbols,
and hidden connections.'

build(){
cd      libzeppoo &&
make    static    && cd .. &&
make    static    &&
prepare_install   &&
make    install
}
