# Also requires scalix 10.0 or newer

    stable 11.4.1.0 10.0.1.1
   require evolution
  category utility/office
 attribute gnome library
       url $GNOME_URL
    source sources/evolution-scalix/${VERSION:0:4}/evolution-scalix-$VERSION.tar.bz2
  homepage http://gnome.org/projects/evolution/stable.shtml
  estimate 700
      desc 'evolution-scalix provides scalix connect for evolution'

build(){
export LDFLAGS="-Wl,-rpath,/usr/lib/mozilla -Wl,-rpath-link,/usr/lib/mozilla $LDFLAGS"
default_build
}
