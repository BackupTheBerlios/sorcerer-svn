# If both libgcrypt and openssl are installed
# libssh2 version 0.17 will use openssl

   version stable 1.3.0 1.2.9 1.2.8 1.2.7 1.2.6
   require openssl zlib
# optional libgcrypt '' '' libssh2 requires either libgcrypt or openssl
# optional openssl   '' '' libssh2 requires either libgcrypt or openssl
      opts --enable-static=no
  category network/security
 attribute library makej multilib-concurrent
    source http://www.libssh2.org/download/libssh2-$VERSION.tar.gz
      info last  20110913
  homepage http://www.libssh2.org/
      desc 'library that implements the ssh2 protocol'
