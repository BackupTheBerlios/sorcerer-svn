   version stable 1.0.0
  category game
 attribute x11 data
    source $SOURCEFORGE_URL trackballs/Extra%20levels/$VERSION/SixLevels.tar.gz
    source $SOURCEFORGE_URL trackballs/Extra%20levels/$VERSION/GreatEscape.tar.gz
    source $SOURCEFORGE_URL trackballs/Extra%20levels/$VERSION/attila-castles.tar.gz
    source $SOURCEFORGE_URL trackballs/Extra%20levels/$VERSION/atilla-child.tar.gz
    source $SOURCEFORGE_URL trackballs/Extra%20levels/$VERSION/BoxOFun.tgz
      info good 20120711
      info home http://trackballs.sourceforge.net
      desc 'extra levels to trackballs play'

build(){
 mkdir -pvm 755  $DESTDIR/usr/share/trackballs/levels/ &&
 find * -type f |
 grep "\.jpg$\|\.map$\|\.scm$\|\.set$\|\.txt$" |
 xargs --max-lines=256 \
 install -vm 644 -t $DESTDIR/usr/share/trackballs/levels/
}
