    stable 0.22 0.20 0.19 0.18
   require funionfs fuse
  category disk/file-system
 attribute console client
    source http://podgorny.cz/unionfs-fuse/releases/unionfs-fuse-$VERSION.tar.bz2
  homepage http://podgorny.cz/unionfs-fuse/
      desc 'unionfs-fuse is a userland unionfs implementation.'

build(){
export LDFLAGS+=' -L/lib -L/lib64'
make &&
prepare_install &&
install -vm 755 src/unionfs /bin/
}
