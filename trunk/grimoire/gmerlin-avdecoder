   VERSION=( "0.1.4" "0.1.3" "0.1.2" )
  CATEGORY="audio/player video/player"
 ATTRIBUTE="library x11 new"
    SOURCE="gmerlin/gmerlin-avdecoder-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://gmerlin.sourceforge.net"
        REQ=( ""
              "a52dec:::for ATSC A/52 and AC-3 digital streams support"
              "faad2:::for freeware advanced audio decoder 2 support"
              "gavl:::for uncompressed audio and video data handling"
              "libcdio:::for controlling the CDROM drive"
              "libdv:::for the dv video codec used by mini-dv camcorders support"
              "libmad:::for mp3 support"
              "libtheora:::for theora video codec support"
              "libvorbis:::for vorbis lossy audio codec support"
              "musepack:::for the musepack audio encoder support"
              "samba:::for SMB/CIFS client support"
              "speex:::for speex audio codec support" )
  ESTIMATE="490"
      DESC="gmerlin-avdecoder is a video decoding library and player"
