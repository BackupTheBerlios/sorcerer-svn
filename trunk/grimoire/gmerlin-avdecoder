   version stable 1.1.0 1.0.3
  optional a52dec     '' '' for ATSC A/52 and AC-3 digital streams support
  optional doxygen    '' --without-doxygen for documentation generation
  optional faad2      '' '' for freeware advanced audio decoder 2 support
  optional ffmpeg     '' '' for audio video codecs supported through ffmpeg
  optional gavl       '' '' for uncompressed audio and video data handling
  optional libcdio    '' '' for accessing CDROM drives
  optional libdv      '' '' for the dv video codec used by mini-dv camcorders support
# optional libdvdread '' '' for accessing DVD drives
  optional libmad     '' '' for mp3 support
  optional libmpcdec  '' ''
  optional libmpeg2   '' ''
  optional libtheora  '' '' for theora video codec support
  optional libvorbis  '' '' for vorbis lossy audio codec support
  optional mjpegtools
  optional mppenc     '' '' for the musepack audio encoder support
  optional samba      '' '' for SMB/CIFS client support
  optional speex      '' '' for speex audio codec support
  category audio/player video/player
 attribute library x11
 attribute multilib-fail
 attribute broke
    source $SOURCEFORGE_URL gmerlin/gmerlin-avdecoder/$VERSION/gmerlin-avdecoder-$VERSION.tar.gz
      info home  http://gmerlin.sourceforge.net/
      info docs  http://gmerlin.sourceforge.net/doc.html
      desc 'video decoding library and player'

build(){
 case $VERSION in
  1.1.0) sed -i 's:VORBIS_LIBS="-L.*:VORBIS_LIBS="":' configure ;;
 esac
 default_build
}
