   version stable 4.01 4.00
   require e2fsprogs
  switch --enable-rpc=yes         --enable-rpc=no         to enable RPC support
  switch --enable-rpcsetquota=yes --enable-rpcsetquota=no to use RPC for setting quotas
  category disk
 attribute console
    source $SOURCEFORGE_URL linuxquota/quota-tools/$VERSION/quota-$VERSION.tar.gz
      info last 20120824
      info home http://sourceforge.net/projects/linuxquota
      desc 'tools for adjusting disk quotas'

build(){
./configure --prefix=/usr &&
make &&
make install ROOTDIR=$DESTDIR
}
