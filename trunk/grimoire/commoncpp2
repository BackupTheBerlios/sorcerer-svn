    stable 1.8.1 1.8.0 1.7.3
   require gcc-g++ gnutls
      opts --enable-static=no
  category development
 attribute library
    source $GNU_URL commoncpp/commoncpp2-$VERSION.tar.gz
  homepage http://wiki.gnutelephony.org/index.php/GNU_Common_CPP_Framework
  estimate 1100
      desc 'library for GNU Common C++ 2'

