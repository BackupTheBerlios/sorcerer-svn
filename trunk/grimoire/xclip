   VERSION=( 0.10 0.08 )
  CATEGORY='utility'
 ATTRIBUTE='x11 new'
    SOURCE="xclip/xclip-$VERSION.tar.gz"
       URL='$SOURCEFORGE_URL'
   HOMEPAGE='http://sourceforge.net/projects/xclip'
#       URL='http://people.debian.org/~kims/xclip/'
#  HOMEPAGE='http://people.debian.org/~kims/xclip/'
#      REQ='imake libXmu'
       REQ='libXmu'
  ESTIMATE='30'
      DESC="xclip provides interface to X selections (the clipboard) from the command line.
It can read from standard input or a file
and place it in an X selection
for pasting into other X applications.
xclip can also print an X selection to standard out,
which can then be redirected to a file or another program."

build_old() {
  xmkmf  &&
  sed -i "s:DefaultGcc.*::" Makefile  &&
  make  &&
  prepare_install  &&
  make    install  install.man
}
