   VERSION=( 20080102 )
  CATEGORY='administration'
 ATTRIBUTE='kde solo'
  HOMEPAGE='http://sorcerer.silverice.org/'
  ESTIMATE='5'
      DESC='kde-symlinks ensures kde configuration files go into /etc'

build()  {  echo  "kde-symlinks installed";  }

post_install()  {
  move()  {
    if    [  -h  $1  ];  then  return;  fi
    if    [  -d  $1  ]
    then  mv     $1  $2
    fi
    ln       -s      $2  $1
  }

  move  /usr/share/config       /etc/kde.config
  move  /usr/share/config.kcfg  /etc/kde.config.kcfg
  default_post_install
}
