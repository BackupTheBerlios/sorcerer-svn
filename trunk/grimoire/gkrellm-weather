inherit gkrellm
  stable 2.0.7 2.0.5
  CATEGORY='utility/weather'
    SOURCE="gkrellweather-$VERSION.tgz"
       URL='http://kmlinux.fjfi.cvut.cz/~makovick/gkrellm/'
  HOMEPAGE='http://kmlinux.fjfi.cvut.cz/~makovick/gkrellm/index.html'
       REQ='gkrellm wget'
  ESTIMATE='11'
      DESC="gkrellm-weather is a weather plugin for gkrellm."


build()  {

  make_install()  {
    PD="/usr/lib/gkrellm2/plugins"
    mkdir    -p  $PD
    install  -s  -c  -m 644  gkrellweather.so  $PD
    install      -c  -m 755  GrabWeather       /usr/bin
  }

  sed  -i  "s:-O2:$CFLAGS:"               Makefile
  sed  -i  "s:/usr/local/bin:/usr/bin:"  gkrellweather.c

  make             &&
  prepare_install  &&
     make_install
}
