   VERSION=( "2.04" "2.03" "2.01" "2.00" )
    IGNORE="cvs\|^2\.02$\|^2\.10"
# 2.02 has compile errors.
  CATEGORY="file-system"
 ATTRIBUTE="console broken"
# Mondo is broken because Newt is broken.
# Try some other type of backup system.
    SOURCE="mondo-$VERSION.tgz"
       URL="http://www.mondorescue.org/download/MondoCD/TGZS"
#      URL="http://www.microwerks.net/~hugo/download/MondoCD/TGZS"
#      URL="http://www.microwerks.net/~hugo/download/stable/final"
  HOMEPAGE="http://www.microwerks.net/~hugo"
       REQ="automake Newt afio buffer bzip2 cdrtools libtool lzop mindi"
#      REQ="Newt afio buffer bzip2 cdrtools lzop mindi"
  ESTIMATE="89"
 FRESHMEAT="mondorescue"
      DESC="mondo backs up your box on to tape, CD-R, CD-RW or NFS partition.
mondo Rescue archives Linux and Lin/Win sytems to tapes 
or CDs, which may be used to restore some or all of your 
OS and data in the event of catastrophic data loss.
The emphasis is on stability and ease of use.
Currently, ext2, ext3, (v)fat, minix, ReiserFS, 
XFS, and JFS filesystems are supported, as are RAID and LVM."


build()  {
  IP="INSTPATH=/usr/share/mondo"
  BP="BINPATH=/usr/bin"

#   aclocal
#   libtoolize  --automake
#   automake    --foreign   --add-missing
#   autoconf

  ./configure --prefix=/usr    &&
  make               $IP  $BP  &&
  prepare_install              &&
  make    install    $IP  $BP
}
