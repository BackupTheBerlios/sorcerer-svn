   VERSION=( "1.6" )
  CATEGORY="email anti-virus"
 ATTRIBUTE="console server new"
    SOURCE="clamsmtp-$VERSION.tar.gz"
       URL="http://memberwebs.com/nielsen/software/clamsmtp"
  HOMEPAGE="http://memberwebs.com/nielsen/software/clamsmtp/"
       REQ=( "clamav"
             "postfix:::SMTP daemon" )
  ESTIMATE="28"
 FRESHMEAT="clamsmtp"
      DESC="ClamSMTP is an SMTP filter that checks for viruses using ClamAV.
It aims to be lightweight, reliable, and simple."

build() {
default_build  &&
if [ ! -f /etc/clamsmtpd.conf ];
then
    cp -av doc/clamsmtpd.conf /etc
fi
}
