# For use with the Sorcerer distribution only.

. /etc/sorcery/config

expire_logs(){
 local EE=${EVENT_EXPIRE:-$EXPIRE}

 find "${EVENT_LOGS:=/aux/log/event}/" 
      -type f -mtime +$EE 2>/dev/null |
 escape_qs | xargs -r --max-lines=64 rm -f
}

expire_logs
