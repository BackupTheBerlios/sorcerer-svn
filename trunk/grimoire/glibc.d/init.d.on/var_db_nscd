#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 500
# Required-Start: proc
# Default-Start: 2 3 4 5
# Short-Description: var_db_nscd mounts tmpfs on /var/db/nscd
### END INIT INFO

. /lib/lsb/init-functions

NAME=/var/db/nscd
CONF=/etc/nscd.conf
OPTS='-o defaults,size=256m,nr_inodes=64,mode=700 -t tmpfs tmpfs'

parse "$@"
