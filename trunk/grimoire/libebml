    stable 1.0.0 0.8.0
   require gcc-g++
      opts --enable-static=no
  category video
 attribute library
 attribute multilib-fail
    source http://dl.matroska.org/downloads/libebml/libebml-$VERSION.tar.bz2
  homepage http://dl.matroska.org/downloads/libebml/
  estimate 100
      desc 'C++ libary to parse EBML files'

build(){
 cd make/linux
 make     all prefix=/usr &&
 make install prefix=$DESTDIR/usr &&
 if   [[ $HOSTTYPE == x86_64   ]]; then
  if  [[ $CFLAGS   =~ -m32     ]]; then mv $DESTDIR/usr/lib{,32}
                                   else mv $DESTDIR/usr/lib{,64}
   if [[ -d $DESTDIR/usr/lib32 ]]; then mv $DESTDIR/usr/lib{32,}; fi
  fi
 fi
}
