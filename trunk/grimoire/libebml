   VERSION=( "0.7.6" )
  CATEGORY="library video"
 ATTRIBUTE="new library"
    SOURCE=("libebml-${VERSION}.tar.bz2")
       URL=("http://dl.matroska.org/downloads/libebml")
REPOSITOR=( "true"
            "co https://svn.matroska.org/svn/matroska/trunk/libebml"
            "up https://svn.matroska.org/svn/matroska/trunk/libebml")
 FRESHMEAT=""
  HOMEPAGE="http://dl.matroska.org/downloads/libebml/"
#this is an unofficial variable, put here only what is required to build
#not what is required to run"
 BUILD_REQ=""
       REQ=("$BUILD_REQ "
           )
  ESTIMATE=""
      DESC="libebml is a C++ libary to parse EBML files"


build()  {
  cd make/linux &&
  sed -i "s:prefix=/usr/local:prefix=/usr/:g" Makefile &&
  make all        &&
  prepare_install &&
  make install 
}


