# 1.3.1 1.3.2 failed to download
# themepacks might not go beyond 1.2.3
with version stable 1.2.3 1.2.1
with role    graphic/theme window-manager
with trait   data
with source  http://download.berlios.de/slim/slim-$VERSION-themepack1.tar.gz
with info    home http://slim.berlios.de/
with info    cite 'themes for slim'

build(){
 mkdir -pvm 755 $DESTDIR/usr/share/slim/themes/ &&
 cp    -av *    $DESTDIR/usr/share/slim/themes/
}

