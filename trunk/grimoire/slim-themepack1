# themepacks might not go beyond 1.2.3
   version stable 1.2.3 1.2.1
  category graphic/theme window-manager
 attribute data
  homepage http://slim.berlios.de/
    source http://download.berlios.de/slim/slim-$VERSION-themepack1.tar.gz
      desc 'themes for slim'

build(){
mkdir -p    $DESTDIR/usr/share/slim/themes/ &&
cp    -av * $DESTDIR/usr/share/slim/themes/
}

