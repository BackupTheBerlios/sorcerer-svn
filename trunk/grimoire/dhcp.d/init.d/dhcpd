#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 510
# Required-Start: $network run
# Required-Stop:  $local_fs $network
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: provides dynamic hosting control protocol daemon
### END INIT INFO

. /lib/lsb/init-functions

only start stop restart try-restart status
pid_file /var/run/dhcpd.pid
server /sbin/dhcpd
config /etc/dhcpd.conf
IF=eth0
options " -q $IF"

start(){
 route add -host 255.255.255.255 dev $IF
 mkdir -p /var/db/
 rm /var/db/dhcpd.leases
 touch /var/db/dhcpd.leases
}

stop(){
 route del -host 255.255.255.255 dev $IF
 rm /var/db/dhcpd.leases
}
