   version stable 1.0.3       1.0.1 X11R7.1-1.0.1 X11R7.0-1.0.0
   version unstable 1.0.4 1.0.3 1.0.2 1.0.1
   version legacy 1.0.1
   require libX11
  category xorg/app
 attribute X11R7 x11 makej
    source $XORG_URL app/rgb-$VERSION.tar.bz2
      desc 'showrgb uncompiles rgb color-name databases'

build(){
default_build &&
mkdir -p $DESTDIR/usr/lib/X11 &&
ln -fs /usr/share/X11/rgb.txt $DESTDIR/usr/lib/X11/
}
