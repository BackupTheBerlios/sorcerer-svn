X_VERSION=X11R7.1
inherit xf86
   VERSION=( "${X_VERSION}-1.0.1" "${X_VERSION}-1.0.0" )
    SOURCE="app/rgb-$VERSION.tar.bz2"
       REQ="libX11"
  ESTIMATE="49"
      DESC="rgb provides showrgb which uncompiles rgb color-name databases"

build()  {
  default_build  &&
  ln  -sf  /usr/share/X11/rgb.txt  /usr/X11R6/lib/X11/
}

