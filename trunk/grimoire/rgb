inherit xf86
   VERSION=( "X11R7.0-1.0.0" )
    SOURCE="app/rgb-$VERSION.tar.bz2"
       REQ="libX11"
  ESTIMATE="12"
      DESC="rgb provides showrgb which uncompiles rgb color-name databases"

build()  {
  default_build  &&
  case  $VERSION  in
    X11R7.0-1.0.0)  ln  -sf  /usr/share/X11/rgb.txt  /usr/X11R6/lib/X11/  ;;
  esac
}
