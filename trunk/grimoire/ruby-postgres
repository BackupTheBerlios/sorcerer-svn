   VERSION=( "0.7.1" )
  CATEGORY="development/interpreter/ruby"
 ATTRIBUTE="library"
    SOURCE="ruby-postgres-$VERSION.tar.gz"
       URL="http://www.postgresql.jp/interfaces/ruby/archive/"
  HOMEPAGE="http://www.postgresql.jp/interfaces/ruby/"
       REQ="ruby postgresql"
      DESC="ruby-postgres is a postgres Ruby extension library."

build() {
ruby  extconf.rb  &&
make              &&
prepare_install   &&
make    install
}
