   VERSION=( "0.7.1" )
  CATEGORY="development"
 ATTRIBUTE="library"
  HOMEPAGE="http://www.postgresql.jp/interfaces/ruby"
       URL="http://www.postgresql.jp/interfaces/ruby/archive"
       REQ="ruby postgresql"
      DESC="Postgres(Ruby extension library)

This is the extension library to access a PostgreSQL
database from Ruby.
This library works with PostgreSQL 6.5/7.0/7.1/7.2.
"


build() {
ruby  extconf.rb  &&
make              &&
prepare_install   &&
make    install
}
