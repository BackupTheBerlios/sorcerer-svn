build(){
 sed -i 's:-Werror=return-type::'                   cmake/modules/FindKDE4Internal.cmake
 sed -i 's:-Werror-implicit-function-declaration::' cmake/modules/FindKDE4Internal.cmake kjsembed/qtonly/FindQJSInternal.cmake
 kde_build
}
