   VERSION=( "0.0.5" "src-0.0.4" "0.0.3" )
inherit tuxpaint
    SOURCE="tuxpaint-au/stamps-au-$VERSION.tar.gz"
  HOMEPAGE="https://sourceforge.net/projects/tuxpaint-au"
       URL="$SOURCEFORGE_URL"
 FRESHMEAT="tuxpaint-au"

build()  {
  chown    -R  root:root  *
  find  .  -type f  |  xargs  -l64  chmod  0644
  find  .  -type d  |  xargs  -l64  chmod  0755
  prepare_install  &&
  mkdir  -p     /usr/share/tuxpaint/stamps  &&
  cp     -a  *  /usr/share/tuxpaint/stamps
}
