   VERSION=( "2.0.1-2" "2.0.1" "2.0.0" )
    IGNORE="snap"
  CATEGORY="editor"
 ATTRIBUTE="depreciated gnome"
    SOURCE=( "abiword/abiword-plugins-$VERSION.tar.bz2"
             "abiword/abiword-$VERSION.tar.bz2" )
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://sourceforge.net/projects/abiword"
       REQ=( "abiword libgnomeprintui nautilus"
             "ncurses readline:--enable-abicommand:--disable-abicommand:for a command line interface to abiword"
             "gimp:--enable-abigimp:--disable-abigimp:to edit an image with gimp from within abiword"
             "aiksaurus:--enable-aiksaurus:--disable-aiksaurus:for english langauge thesaurus based upon the aiksaurus library"
             ":--enable-babelfish:--disable-babelfish:for on-line translation support based upon bablefish translation tool which is powered by Systran"
             ":--enable-freetranslation:--disable-freetranslation:for online translaton support from www.freetranslation.com, for non-commercial use only"
             "libgnomedb:--enable-gda:--disable-gda:for database support"
             ":--enable-gdict:--disable-gdict:for dictionary support"
             ":--enable-google:--disable-google:for google search for abiword"
             "Python:--enable-gypsython:--disable-gypsython:for Python plugin"
             "ots:--enable-ots:--disable-ots:for open text summarizer"
             ":--enable-referee:--disable-referee:for referee support"
             ":--enable-urldict:--disable-urldict:for online dictionary support, search site is http://www.dict.org"
             ":--enable-wikipedia:--disable-wikipedia:for on-line encyclopedia support, search site is http://www.wikipedia.com"
             ":--enable-AbiGdkPixbuf:--disable-AbiGdkPixbuf:to enable abiword to read any graphic type that gdkpixbuf supports"
             ":--enable-bmp:--disable-bmp:to import Windows Bitmap Images"
             "jpeg:--enable-jpeg:--disable-jpeg:to import JPEG images"
             "librsvg:--enable-librsvg:--disable-librsvg:for canvas functionality required for SVG support and AbiDraw/Show"
             "ImageMagick:--enable-magick:--disable-magick:to enable abiword to read any graphic type that ImageMagick supports"
             "libwmf:--enable-wmf:--disable-wmf:to import Windows metafiles"
             ":--enable-applix:--disable-applix:to import/export Applix documents"
             "bzip2:--enable-bz2abw:--disable-bz2abw:to import/export bz2abiword documents"
             ":--enable-clarisworks:--disable-clarisworks:to import ClarisWorks documents"
             ":--enable-coquille:--disable-coquille:for coquille support"
             ":--enable-docbook:--disable-docbook:to import/export docbook documents"
             ":--enable-eml:--disable-eml:to export documents to email clients"
             "glib-v1.2:--enable-hancom:--disable-hancom:to import Hancom binary (OLE) documents"
             ":--enable-hrtext:--disable-hrtext:to export HRText documents"
             ":--enable-iscii-text:--disable-iscii-text:to import/export ISCII documents"
             ":--enable-kword:--disable-kword:to import/export KWord 1.x documents"
             "teTeX:--enable-latex:--disable-latex:to export LaTeX documents"
             ":--enable-mif:--disable-mif:to import/export MIF documents"
             ":--enable-mswrite:--disable-mswrite:to import MSwrite documents"
             "groff:--enable-nroff:--disable-nroff:to import/export nroff/manual documents"
             ":--enable-OpenWriter:--disable-OpenWriter:to import/export OpenOffice Writer documents"
             ":--enable-pdb:--disable-pdb:for pdb support"
             "psiconv:--enable-psion:--disable-psion:to import and export Psion documents"
             ":--enable-sdw:--disable-sdw:to import StarWriter binary (OLE) documents"
             ":--enable-t602:--disable-t602:to import T602 documents"
             ":--enable-wml:--disable-wml:to import/export WML documents"
             ":--enable-wordperfect:--disable-wordperfect:to import/export WordPerfect 6/7/8/9 (tm) documents"
             ":--enable-xhtml:--disable-xhtml:to import multipart HTML documents"
             ":--enable-xsl-fo:--disable-xsl-fo:to import/export XSL-FO documentions"
             ":--enable-shell:--disable-shell:to run other programs from within abiword" )
  ESTIMATE="272"
      DESC="abiword-plugins provides plugins for abiword."


build()  {
  WITH_ABI="--with-abiword=$PWD/abiword-$VERSION/abi"

  ./configure  --prefix=/usr   \
               --disable-all   \
               --enable-gnome  \
               $WITH_ABI       \
               $OPTS  &&
  make                &&
  prepare_install     &&
  make    install
}
