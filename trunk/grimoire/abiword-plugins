   VERSION=( "2.0.1-2" "2.0.1" "2.0.0" )
  CATEGORY="editor"
 ATTRIBUTE="gnome|x11"
 SOURCE[0]="abiword/abiword-plugins-$VERSION.tar.bz2"
 SOURCE[1]="abiword/abiword-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://sourceforge.net/projects/abiword"
       REQ="abiword libgnomeprintui nautilus"
    OPT[0]="ncurses readline:--enable-abicommand:--disable-abicommand:for a command line interface to abiword"
    OPT[1]="gimp:--enable-abigimp:--disable-abigimp:to edit an image with gimp from within abiword"
    OPT[2]="aiksaurus:--enable-aiksaurus:--disable-aiksaurus:for english langauge thesaurus based upon the aiksaurus library"
    OPT[3]=":--enable-babelfish:--disable-babelfish:for on-line translation support based upon bablefish translation tool which is powered by Systran"
    OPT[4]=":--enable-freetranslation:--disable-freetranslation:for online translaton support from www.freetranslation.com, for non-commercial use only"
    OPT[5]="libgnomedb:--enable-gda:--disable-gda:for database support"
    OPT[6]=":--enable-gdict:--disable-gdict:for dictionary support"
    OPT[7]=":--enable-google:--disable-google:for google search for abiword"
    OPT[8]="Python:--enable-gypsython:--disable-gypsython:for Python plugin"
    OPT[9]="ots:--enable-ots:--disable-ots:for open text summarizer"
   OPT[10]=":--enable-referee:--disable-referee:for referee support"
   OPT[11]=":--enable-urldict:--disable-urldict:for online dictionary support, search site is http://www.dict.org"
   OPT[12]=":--enable-wikipedia:--disable-wikipedia:for on-line encyclopedia support, search site is http://www.wikipedia.com"
   OPT[13]=":--enable-AbiGdkPixbuf:--disable-AbiGdkPixbuf:to enable abiword to read any graphic type that gdkpixbuf supports"
   OPT[14]=":--enable-bmp:--disable-bmp:to import Windows Bitmap Images"
   OPT[15]="jpeg:--enable-jpeg:--disable-jpeg:to import JPEG images"
   OPT[16]="librsvg:--enable-librsvg:--disable-librsvg:for canvas functionality required for SVG support and AbiDraw/Show"

   # May not work, abiword,plugins 2.0.0 requires
   # ImageMagick 5.4.0 but our version is far more current than that.
   OPT[17]="ImageMagick:--enable-magick:--disable-magick:to enable abiword to read any graphic type that ImageMagick supports"
   OPT[18]="libwmf:--enable-wmf:--disable-wmf:to import Windows metafiles"
   OPT[19]=":--enable-applix:--disable-applix:to import/export Applix documents"
   OPT[20]="bzip2:--enable-bz2abw:--disable-bz2abw:to import/export bz2abiword documents"
   OPT[21]=":--enable-clarisworks:--disable-clarisworks:to import ClarisWorks documents"
   OPT[22]=":--enable-coquille:--disable-coquille:for coquille support"
   OPT[23]=":--enable-docbook:--disable-docbook:to import/export docbook documents"
   OPT[24]=":--enable-eml:--disable-eml:to export documents to email clients"
   OPT[25]="glib-v1.2:--enable-hancom:--disable-hancom:to import Hancom binary (OLE) documents"
   OPT[26]=":--enable-hrtext:--disable-hrtext:to export HRText documents"
   OPT[27]=":--enable-iscii-text:--disable-iscii-text:to import/export ISCII documents"
   OPT[28]=":--enable-kword:--disable-kword:to import/export KWord 1.x documents"
   OPT[29]="teTeX:--enable-latex:--disable-latex:to export LaTeX documents"
   OPT[30]=":--enable-mif:--disable-mif:to import/export MIF documents"
   OPT[31]=":--enable-mswrite:--disable-mswrite:to import MSwrite documents"
   OPT[32]="groff:--enable-nroff:--disable-nroff:to import/export nroff/manual documents"
   OPT[33]=":--enable-OpenWriter:--disable-OpenWriter:to import/export OpenOffice Writer documents"
   OPT[34]=":--enable-pdb:--disable-pdb:for pdb support"
   OPT[35]="psiconv:--enable-psion:--disable-psion:to import and export Psion documents"
   OPT[36]=":--enable-sdw:--disable-sdw:to import StarWriter binary (OLE) documents"
   OPT[37]=":--enable-t602:--disable-t602:to import T602 documents"
   OPT[38]=":--enable-wml:--disable-wml:to import/export WML documents"
   OPT[39]=":--enable-wordperfect:--disable-wordperfect:to import/export WordPerfect 6/7/8/9 (tm) documents"
   OPT[40]=":--enable-xhtml:--disable-xhtml:to import multipart HTML documents"
   OPT[41]=":--enable-xsl-fo:--disable-xsl-fo:to import/export XSL-FO documentions"
   OPT[42]=":--enable-shell:--disable-shell:to run other programs from within abiword"
  ESTIMATE="272"
     SHORT="abiword,plugins provides plugins for abiword."


build()  {
  WITH_ABI="--with-abiword=$PWD/abiword-$VERSION/abi"

  ./configure  --prefix=/usr   \
               --disable-all   \
               --enable-gnome  \
               $WITH_ABI       \
               $OPTS  &&
  make                &&
  prepare_install     &&
  make    install
}
