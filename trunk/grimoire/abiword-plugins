   VERSION=( 2.6.0 )
  CATEGORY='utility/editor'
 ATTRIBUTE='gnome broken'
# source can not detect boost libraries
    SOURCE=( "abiword-plugins-$VERSION.tar.gz"
             "abiword-$VERSION.tar.gz" )
       URL="http://www.abisource.com/downloads/abiword/latest/source/
            http://www.abisource.com/downloads/abiword/$VERSION/source/"
  HOMEPAGE='http://www.abisource.com'
       REQ='abiword boost'
  ESTIMATE='2500'
      DESC='abiword-plugins provides plugins for the abiword word processor.'

build(){
 OPTS+=" --with-abiword=$BUILD_DIR/abiword-$VERSION"
 default_build
}
