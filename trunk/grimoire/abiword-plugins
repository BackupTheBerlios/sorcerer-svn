   version stable 2.6.4 2.6.2 2.6.0
   require abiword boost
  category utility/editor
 attribute gnome
    source http://www.abisource.com/downloads/abiword/latest/source/ http://www.abisource.com/downloads/abiword/$VERSION/source/ abiword-plugins-$VERSION.tar.gz
    source http://www.abisource.com/downloads/abiword/latest/source/ http://www.abisource.com/downloads/abiword/$VERSION/source/ abiword-$VERSION.tar.gz
  homepage http://www.abisource.com
  estimate 2500
      desc 'plugins for the abiword word processor'

build(){
 OPTS+=" --with-abiword=$BUILD_DIR/abiword-$VERSION"
 default_build
}
