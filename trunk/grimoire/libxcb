# libXdmcp may bewit elect
# libxcb definitely requires libxslt
# version 1.8 failed to compile

with version   stable 1.8.1 1.7
with version unstable 1.9
with base    libXau libXdmcp libpthread-stubs libxslt xcb-proto
with also    --enable-static=no
with role    xorg/library
with trait   X11R7 library lto makej multilib-dual makej multilib-concurrent
with source  http://xcb.freedesktop.org/dist/libxcb-$VERSION.tar.bz2
with info    good 20120713
with info    last 20121007
with info    cite 'X protocol C-language binding
xcb is a replacement for Xlib.
It has a small footprint, latency hiding,
direct access to the protocol,
improved threading support, and extensibility.'

case $VERSION in
 1.7)
with base    automake libtool ;;
esac

build_old(){
 case $VERSION in
  1.7) aclocal -I .
       autoheader
       libtoolize --automake
       automake   --add-missing
       autoconf ;;
 esac
 default_build
}
