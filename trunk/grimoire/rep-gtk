   VERSION=( 0.18 0.17 0.16 0.15 )
  CATEGORY='development'
 ATTRIBUTE='library x11'
    SOURCE="rep-gtk/rep-gtk-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://rep-gtk.sourceforge.net'
       REQ='librep libglade'
  ESTIMATE='105'
      DESC="rep-gtk is a binding of GTK+ and GDK for the librep Lisp environment.
rep-gtk is a binding of the GTK+ and GDK
libraries for the librep Lisp environment.
It's currently targeted at GTK+ 1.2 and is
based on the Guile-gtk binding."

build() {
 case  $VERSION  in
  0.18)  patch  -p1  <  $SCRIPT_DIR/rep-gtk-0.18.patch  ;;
 esac

 default_build
}

