#!/bin/bash

### BEGIN INIT INFO
# Provides: var_lib_nfs
# Required-Start: proc
# Should-Start:
# Required-Stop: 
# Default-Start: S
# Default-Stop:
# Short-Description: var_lib_nfs mounts tmpfs on /var/lib/nfs
### END INIT INFO

. /lib/lsb/init-functions

NAME='/var/lib/nfs'
OPTS='-o defaults,size=1m,nr_inodes=256,mode=0755 -t tmpfs tmpfs'

parse "$@"
