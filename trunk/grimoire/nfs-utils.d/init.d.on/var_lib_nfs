#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 710
# Required-Start: proc
# Default-Start: 2 3 4 5
# Short-Description: var_lib_nfs mounts tmpfs on /var/lib/nfs
### END INIT INFO

. /lib/lsb/init-functions

NAME=/var/lib/nfs
OPTS='-o defaults,size=1m,nr_inodes=256,mode=0755 -t tmpfs tmpfs'

parse "$@"
