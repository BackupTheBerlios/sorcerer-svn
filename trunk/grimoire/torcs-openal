   VERSION=( "1.2.4" )
    IGNORE="\-cars\|-data\|-prog\|-tracks\|-robots"
  CATEGORY="audio/library audio/mixer"
 ATTRIBUTE="library x11"
    SOURCE="torcs/torcs-$VERSION-openal.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://torcs.sourceforge.net"
       REQ=""
  EPROVIDE="freealut openal"
# Does not provide a separate libalut.so.0
# Causes VDrift to fail compilation.
 FRESHMEAT="torcs"
  ESTIMATE="180"
      DESC="torcs-openal provides a modified openal for use with TORCS."

build()  {
  cd  linux
  default_build
}
