# torcs-1.3.0.tar... does not actually exist.
#   ignore ''the HTML grimoire listing for it.''

    stable 1.2.4
     ignore ''\-cars\|-data\|-prog\|-tracks\|-robots\|test\|^1\.3\.0''
  category audio/library audio/mixer
 attribute library x11
       url $SOURCEFORGE_URL
    source torcs/torcs-$VERSION-openal.tar.bz2
  homepage http://torcs.sourceforge.net
      opts --prefix=/opt/torcs-openal
  estimate 200
      desc 'torcs-openal provides a modified openal for use with TORCS.'

build(){
cd linux
default_build
}

post_install(){
 if   [    -f               $PROVIDE_LOGS/openal ] &&
      grep -qx torcs-openal $PROVIDE_LOGS/openal
 then rm   -f               $PROVIDE_LOGS/openal
 fi

 if   [    -f               $PROVIDE_LOGS/freealut ] &&
      grep -qx torcs-openal $PROVIDE_LOGS/freealut
 then rm   -f               $PROVIDE_LOGS/freealut
 fi
}

current(){
 case $VERSION in
  1.2.4) grep -qx '/opt/torcs-openal/lib/libopenal.so.0.0.8' $INSTALL_LOGS/torcs-openal ;;
 esac
}
