   VERSION=( "0.5" )
  CATEGORY="video video-player"
 ATTRIBUTE="x11"
    SOURCE="openquicktime/oqtplayer-$VERSION.tgz"
       URL="$SOURCEFORGE_URL"
       REQ="SDL openquicktime"
  HOMEPAGE="http://www.openquicktime.org"
      DESC="oqtplayer provides a player for quicktime video.
Based on the sources of Quicktime4Linux,
OpenQuicktime has since been extensively
remodeled and streamlined.
This is the player."

build() {
make  &&
prepare_install  &&
install  -o root  -g root  -m 755  oqtplayer  /usr/bin
}
