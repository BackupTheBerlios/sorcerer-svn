# does any release of tracker ever compile?
# 0.14.1 failed compilation
# 0.14.0 failed compilation

# requirement on nautilus creates recursive requirement loop

   version   stable 0.14.2 0.14.0 0.12.10
case $VERSION in
 0.14.2)
      opts --enable-miner-evolution=no --enable-introspection=no --enable-miner-flickr=no --disable-libgif --disable-qt ;;
esac
   require NetworkManager exempi gnome-panel libgee libgsf poppler taglib totem-pl-parser upower
#  require NetworkManager giflib gnome-panel gupnp-dlna libgee nautilus poppler taglib totem-pl-parser
  category utility
 attribute gnome library makej
    source $GNOME_URL sources/tracker/${VERSION:0:4}/tracker-$VERSION.tar.xz
      info last 20120907
      info home http://www.gnome.org/projects/tracker/
      info docs http://projects.gnome.org/tracker/documentation.html
      info feats http://projects.gnome.org/tracker/features.html
      desc 'find utility'

build(){
# sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
# default_build
 ./configure --prefix=/usr $OPTS &&
 make &&
 make install DESTDIR="$DESTDIR"
}
