inherit trackballs
 unset  REQ
 ATTRIBUTE="data"
    SOURCE=( "trackballs/tb_design.ogg"
             "trackballs/tb_genesis.ogg"
             "trackballs/tb_hrluebke.ogg"
             "trackballs/plinkeplanke.ogg" )
  ESTIMATE="5"
      DESC="trackballs-music provides music for playing trackballs."


build()  {
  mkdir  -p  share/music
  cp      $(  guess_filename  ${SOURCE[0]} )  \
          $(  guess_filename  ${SOURCE[1]} )  \
               share/music                    &&
  chmod  0644  share/music/*                  &&
  prepare_install                             &&
  mkdir  -p            /usr/share/trackballs  &&
  cp     -av  share/*  /usr/share/trackballs
}
