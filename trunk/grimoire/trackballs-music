inherit trackballs
 unset  REQ
 ATTRIBUTE="data"
    SOURCE=( "trackballs/tb_design.ogg"
             "trackballs/tb_genesis.ogg"
             "trackballs/tb_hrluebke.ogg"
             "trackballs/tb_plinkeplanke.ogg"
             "trackballs/tb_schizophrenia.ogg"
             "trackballs/tb_sorrow.ogg" )
  ESTIMATE="5"
      DESC="trackballs-music provides music for playing trackballs."

build()  {
  mkdir  -p    share/music
  chmod  0755  share/music
  CX=0
  while  [  -n                            "${SOURCE[$CX]}"  ]
  do     cp  $SOURCE_CACHE/$SPELL/$VERSION/${SOURCE[$CX]##*/}  share/music
                                                   ((CX++))
  done                                        &&
  chmod  0644  share/music/*                  &&
  prepare_install                             &&
  mkdir  -p            /usr/share/trackballs  &&
  cp     -av  share/*  /usr/share/trackballs
}
