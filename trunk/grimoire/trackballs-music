inherit trackballs
 attribute data
    source trackballs/tb_design.ogg
    source trackballs/tb_genesis.ogg
    source trackballs/tb_hrluebke.ogg
    source trackballs/tb_plinkeplanke.ogg
    source trackballs/tb_schizophrenia.ogg
    source trackballs/tb_sorrow.ogg
  estimate 5
      desc 'trackballs-music provides music for playing trackballs.'

build(){
 mkdir -p  share/music
 chmod 755 share/music
 CX=0
 while [[ -n ${SOURCE[$CX]} ]]
 do    cp    ${SOURCE[$CX]} share/music
       (( CX++ ))
 done                    &&
 chmod 644 share/music/* &&
 prepare_install         &&
 mkdir -p          /usr/share/trackballs &&
 cp    -av share/* /usr/share/trackballs
}
