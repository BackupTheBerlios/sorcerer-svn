    stable 1.44 1.43 1.42 1.41 1.40
   require autoconf expat ncurses readline
  optional gtk+ --enable-gtk2 --disable-gtk2 for simple GUI dialog system
  switch      --debugger    ''             to enable debugging and extdebug shell option

        BV=( 3.0 )
  category development/interpreter utility/shell
 attribute console
       DIR='none'
    source http://home.eol.ca/~parkw/bashdiff/bashdiff-$VERSION.tar.gz
    source ftp://ftp.cwru.edu/pub/bash/bash-$BV.tar.gz
  homepage http://home.eol.ca/~parkw
      opts --bindir=/usr/bin --with-installed-readline --with-curses
     SHBIN='/usr/bin/bash'
  estimate 1100
      desc 'bash-wp provides an extended modified bash by William Park.'

build(){
 install_loadables(){
  install -d -m 755 /usr/libexec/bash-wp
  cd  examples/loadables
  for FILE  in  *.c
  do  make              ${FILE%.c}
      install -s -m 755 ${FILE%.c} /usr/libexec/bash-wp
 done
 cd   william
 make
 make install
 true
}

cd bash-$BV
patch -p2 < ../bashdiff-$VERSION.diff
autoconf
default_build &&
install_loadables
}
