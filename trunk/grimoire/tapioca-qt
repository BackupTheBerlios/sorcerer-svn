   VERSION=( 0.14.1 )
  CATEGORY='network/chat'
 ATTRIBUTE='library'
    SOURCE="tapioca-voip/tapioca-qt-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://tapioca-voip.sourceforge.net'
       REQ='telepathy-qt'
      OPTS='-DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4
            -DCMAKE_INSTALL_RPATH:PATH=/opt/kde4/lib:/opt/kde4/lib64
            -DCMAKE_SKIP_BUILD_RPATH:BOOL=TRUE
            -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=TRUE
            -DCMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=TRUE
            -DCMAKE_BUILD_TYPE=Release'
  ESTIMATE='100'
      DESC='tapioca-qt provides a library for ...'

build(){
 export PATH="/usr/bin/qt4:$PATH"
 mkdir build
 cd    build
 cmake $OPTS ..  &&
 make            &&
 prepare_install &&
 make    install
}
