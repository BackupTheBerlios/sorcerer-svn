    stable 1.1.4 1.1.3 1.1.2 1.1.1 1.1.0 1.0.2 1.0.1
   require ncurses
  category audio/radio
 attribute console
    source $SOURCEFORGE_URL dmcradio/DMCRadio/$VERSION/DMCRadio-$VERSION.tar.bz2
  homepage http://sourceforge.net/projects/dmcradio
 freshmeat dmcradio
  estimate 100
      desc 'ncurses-based console program for radio tuner'

build_old(){
export CPPFLAGS="${CXXFLAGS/-Wno-deprecated/}"

./configure       \
--prefix=/usr     \
--sysconfdir=/etc &&
make    install "DESTDIR=$DESTDIR"
}
