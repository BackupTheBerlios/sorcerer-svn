   version stable 5.2.12 5.2.11 5.2.10
   require acl gcc-g++ inetutils libcap lzo2 openssl sqlite
      opts --with-sqlite3
  category archive
 attribute console
    source $SOURCEFORGE_URL bacula/bacula/$VERSION/bacula-$VERSION.tar.gz
    source $SOURCEFORGE_URL bacula/bacula/$VERSION/bacula-gui-$VERSION.tar.gz
#   source $SOURCEFORGE_URL bacula/bacula/$VERSION/bacula-docs-$VERSION.tar.bz2
      info last 20120917
      info home http://www.bacula.org/
      info docs 'http://www.bacula.org/en/?page=documentation'
      desc 'enterprise ready, network capable backup system'

build(){
 BPWD=$PWD
 cd bacula-gui-$VERSION; ./configure --prefix=/usr $OPTS --with-bacula=$BPWD; make; cd ..
 default_build

# make &&
# make install DESTDIR=$DESTDIR

#cd bacula-docs-$VERSION; ./configure --with-bacula=$BPWD; make; cd ..
}

