#!/bin/bash

### BEGIN INIT INFO
# Provides: $inet
# Required-Start: network hostname $local_fs
# Required-Stop:  $local_fs network
# Default-Start: 3 4 5
# Default-Stop:  0 1 2 6
# Short-Description: start adsl
# Description: start adsl for inet connection
### END INIT INFO

case $1 in
	start)
		pppoe-start
		;;	
	stop) 
		pppoe-stop
		;;
esac
