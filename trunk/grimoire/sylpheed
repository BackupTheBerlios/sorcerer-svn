   VERSION=( "1.0.1" "1.0.0" "1.0.0rc" "1.0.0beta4" "1.0.0beta3" "1.0.0beta2" "0.9.99" )
  CATEGORY="email news"
 ATTRIBUTE="client x11"
    SOURCE="sylpheed-$VERSION.tar.bz2"
  HOMEPAGE="http://sylpheed.good-day.net"
       URL="http://sylpheed.good-day.net/sylpheed/v${VERSION:0:3}"
#      URL="http://sylpheed.good-day.net/sylpheed"
   PROVIDE="email-client"
# is compface required or optional?
       REQ=( "gdk-pixbuf"
             "compface::--disable-compface:for compface support"
             "gpgme:--enable-gpgme::for encrypted email"
             "openldap:--enable-ldap::for ldap support"
             "openssl:--enable-ssl::for pop3s and imaps support" )
  ESTIMATE="198"
      DESC="sylpheed is an e-mail client and news reader based on gtk+
sylpheed is a gtk+ based, lightweight, and fast email client.
Almost all commands are accessible with the keyboard.
It also has many features such as multiple accounts,
POP3/APOP support, thread display, and multipart MIME.
The messages are managed in the MH format, so you'll
be able to use it together with another mailer that
uses the MH format."


build() {
default_build                                      &&
mkdir    -p                    /usr/share/pixmaps  &&
install  -m 644  sylpheed.png  /usr/share/pixmaps
}
