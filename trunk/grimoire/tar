    stable 1.20 1.19 1.18
    secure 1.20 1.19 1.18
  switch --enable-backup-scripts '' to install tar backup scripts
  category archive
 attribute console solo
    source ftp://ftp.gnu.org/gnu/tar/tar-$VERSION.tar.bz2
  homepage http://www.gnu.org/software/tar/tar.html
   protect /bin/tar
case $VERSION in
 1.19) use_gcc gcc-v4.2 ;;
esac
  estimate 1100
      desc 'tar creates and extracts from GNU tar archives.'

build(){

 templat_install(){
  mkdir   -p                           /etc/backup
  chmod      0755                      /etc/backup
  install -m 0644 scripts/backup-specs /etc/backup/backup-specs.template
 }

#            --disable-nls      \

 ./configure       \
 --build=$BUILD    \
 --prefix=/usr     \
 --sysconfdir=/etc \
 --libexecdir=/bin \
 --bindir=/bin     \
 --program-transform-name='s/backup$/tar-&/;s/restore$/tar-&/' \
 $OPTS           &&
 make            &&
 make    html    &&
 prepare_install &&
 make    install &&
 templat_install
}
