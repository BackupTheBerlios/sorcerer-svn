# tar version 1.24 has a bad bug
# it ignores -C
# Do not upgrade to tar version 1.24

# reverting to version 1.25 does not solve
# the problem with kde 4.8.{2,3} malformed tarballs.
# tar: Skipping to next header
# tar: Exiting with failure status due to previous errors

   version stable 1.26 1.25 1.23 1.22
    switch --enable-backup-scripts '' to install tar backup scripts
  category archive
 attribute console solo
#attribute makej
# might sometimes fail when doing makej compilation
    source ftp://ftp.gnu.org/gnu/tar/tar-$VERSION.tar.xz
      info last 20110412
      info home http://www.gnu.org/software/tar/tar.html
   protect /bin/tar
      desc 'creates and extracts from GNU tar archives'

build(){

 templat_install(){
  mkdir  -pvm 755                      $DESTDIR/etc/backup
  install -vm 644 scripts/backup-specs $DESTDIR/etc/backup/backup-specs.template
 }

#            --disable-nls      \

 FORCE_UNSAFE_CONFIGURE=1 \
 ./configure       \
 --prefix=/usr     \
 --sysconfdir=/etc \
 --libexecdir=/bin \
 --bindir=/bin     \
 --program-transform-name='s/backup$/tar-&/;s/restore$/tar-&/' \
 $OPTS &&
 make &&
 make html &&
 make install DESTDIR=$DESTDIR &&
 templat_install
}
