with version stable 1.26
with switch  --enable-backup-scripts '' to install tar backup scripts
with role    archive
with trait   console solo
#trait makej
# might sometimes fail when doing makej compilation
with source  ftp://ftp.gnu.org/gnu/tar/tar-$VERSION.tar.xz
with info    good 20120710
with info    last 20110412
with info    home http://www.gnu.org/software/tar/tar.html
with protect /bin/tar
with info    cite 'creates and extracts from GNU tar archives'

build(){

 templat_install(){
  mkdir  -pvm 755                      $DESTDIR/etc/backup
  install -vm 644 scripts/backup-specs $DESTDIR/etc/backup/backup-specs.template
 }

#            --disable-nls      \

 case $VERSION in
  1.26) sed -i '/gets is a security/d' gnu/stdio.in.h ;;
 esac

 FORCE_UNSAFE_CONFIGURE=1 \
 ./configure       \
 --prefix=/usr     \
 --sysconfdir=/etc \
 --libexecdir=/bin \
 --bindir=/bin     \
 --program-transform-name='s/backup$/tar-&/;s/restore$/tar-&/' \
 $OPTS &&
 make &&
 make html &&
 make install DESTDIR=$DESTDIR &&
 templat_install
}
