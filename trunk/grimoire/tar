    stable 1.22 1.21 1.20
    secure 1.20
    switch --enable-backup-scripts '' to install tar backup scripts
  category archive
 attribute console solo
    source ftp://ftp.gnu.org/gnu/tar/tar-$VERSION.tar.bz2
  homepage http://www.gnu.org/software/tar/tar.html
   protect /bin/tar
  estimate 1300
      desc 'tar creates and extracts from GNU tar archives.'

build(){

 templat_install(){
  mkdir   -p                          /etc/backup
  chmod      755                      /etc/backup
  install -m 644 scripts/backup-specs /etc/backup/backup-specs.template
 }

#            --disable-nls      \

 ./configure       \
 --prefix=/usr     \
 --sysconfdir=/etc \
 --libexecdir=/bin \
 --bindir=/bin     \
 --program-transform-name='s/backup$/tar-&/;s/restore$/tar-&/' \
 $OPTS           &&
 make            &&
 make    html    &&
 prepare_install &&
 make    install &&
 templat_install
}
