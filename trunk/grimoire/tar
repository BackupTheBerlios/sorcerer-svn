# tar version 1.24 has a bad bug
# it ignores -C
# Do not upgrade to tar version 1.24

   version stable 1.26 1.25 1.23 1.22
    switch --enable-backup-scripts '' to install tar backup scripts
  category archive
 attribute console makej solo
    source ftp://ftp.gnu.org/gnu/tar/tar-$VERSION.tar.bz2
  homepage http://www.gnu.org/software/tar/tar.html
   protect /bin/tar
      desc 'creates and extracts from GNU tar archives'

build(){

 templat_install(){
  mkdir  -pvm 755                      $DESTDIR/etc/backup
  install -vm 644 scripts/backup-specs $DESTDIR/etc/backup/backup-specs.template
 }

#            --disable-nls      \

 FORCE_UNSAFE_CONFIGURE=1 \
 ./configure       \
 --prefix=/usr     \
 --sysconfdir=/etc \
 --libexecdir=/bin \
 --bindir=/bin     \
 --program-transform-name='s/backup$/tar-&/;s/restore$/tar-&/' \
 $OPTS &&
 make &&
 make html &&
 make install DESTDIR=$DESTDIR &&
 templat_install
}
