   version stable 1.26
    switch --enable-backup-scripts '' to install tar backup scripts
  category archive
 attribute console solo
#attribute makej
# might sometimes fail when doing makej compilation
    source ftp://ftp.gnu.org/gnu/tar/tar-$VERSION.tar.xz
      info good 20120710
      info last 20110412
      info home http://www.gnu.org/software/tar/tar.html
   protect /bin/tar
      desc 'creates and extracts from GNU tar archives'

build(){

 templat_install(){
  mkdir  -pvm 755                      $DESTDIR/etc/backup
  install -vm 644 scripts/backup-specs $DESTDIR/etc/backup/backup-specs.template
 }

#            --disable-nls      \

 FORCE_UNSAFE_CONFIGURE=1 \
 ./configure       \
 --prefix=/usr     \
 --sysconfdir=/etc \
 --libexecdir=/bin \
 --bindir=/bin     \
 --program-transform-name='s/backup$/tar-&/;s/restore$/tar-&/' \
 $OPTS &&
 make &&
 make html &&
 make install DESTDIR=$DESTDIR &&
 templat_install
}
