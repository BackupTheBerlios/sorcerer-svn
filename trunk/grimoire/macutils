   version stable 2.0b3
  category archive
 attribute console
    source ftp://ibiblio.org/pub/linux/utils/compress/macutils.tar.gz
      info home ftp://ibiblio.org/pub/linux/utils/compress/
      desc 'utilities for mac (de)compression

This package contains the following utilities:
macunpack, hexbin, macsave, macstream, binhex, tomac, frommac.'


build(){


case $VERSION in
 2.0b3) sed -i "s:extern char \*malloc();:#include <malloc.h>:
                s:extern char \*realloc();::" hexbin/buffer.c ;;
esac

CF='-DTYPES_H -DDIRENT_H -DTERMIOS_H -DNODOT -DAPPLEDOUBLE'

make CF="$CF"   &&
make    install BINDIR=$DESTDIR/usr/bin &&
mkdir -p $DESTDIR/usr/man/man1 &&
install -o root -g root -vm 644 man/binhex.1    $DESTDIR/usr/man/man1 &&
install -o root -g root -vm 644 man/frommac.1   $DESTDIR/usr/man/man1 &&
install -o root -g root -vm 644 man/hexbin.1    $DESTDIR/usr/man/man1 &&
install -o root -g root -vm 644 man/macsave.1   $DESTDIR/usr/man/man1 &&
install -o root -g root -vm 644 man/macstream.1 $DESTDIR/usr/man/man1 &&
install -o root -g root -vm 644 man/macunpack.1 $DESTDIR/usr/man/man1 &&
install -o root -g root -vm 644 man/macutil.1   $DESTDIR/usr/man/man1 &&
install -o root -g root -vm 644 man/tomac.1     $DESTDIR/usr/man/man1
}
