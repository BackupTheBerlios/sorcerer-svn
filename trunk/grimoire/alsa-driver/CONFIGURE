show_soundcards()  {

  for CARD  in  `cat  $SCRIPT_DIR/sound.cards`;  do
    echo  $CARD
    echo  "Card"
  done

}


if  !  grep  -q  "CARD="  $SPELL_CONFIG;  then

  CARDS=`show_soundcards`                                &&
  CARD=`dialog  --backtitle  "ALSA Configuration Menu"   \
                --stdout                                 \
                --title      "Select sound card please"  \
                --menu                                   \
                ""                                       \
                0 0 10                                   \
                $CARDS`                                  &&

  echo  "CARD=$CARD"  >>  $SPELL_CONFIG

fi
