   VERSION=( "2.4" )
  CATEGORY="network security"
 ATTRIBUTE="console"
    SOURCE="Community-Rules-$VERSION.tar.gz"
       URL="http://www.snort.org/pub-bin/downloads.cgi/Download/comm_rules/"
  HOMEPAGE="http://www.snort.org/"
       REQ=""
  ESTIMATE="210"
      DESC="snort-Community-Rules provides some rules for snort."

build() {
  [      -f       rules/LICENSE  ]  &&
  chown  -R 0600  */*               &&
  mkdir  -p     $DESTDIR/etc/snort  &&
  cp     -a  *  $DESTDIR/etc/snort
}
