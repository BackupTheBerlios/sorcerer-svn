   inherit kde-v4
   require kdepimlibs-v4 openslp xine-lib
  optional libssh   '' '' to build the SFTP kioslave
  optional libxcb   '' '' for the video widget
  optional samba    '' '' to build smb-ioslave
  category utility/file-manager utility/terminal-emulator
 freshmeat kde
  estimate 4000
      desc 'Icons and files required by KDE apps'

build(){
case $VERSION in
 4.4.0) : ;; # requires a header that went private and is no longer installed
esac
( export PATH=/opt/kde4/bin:$PATH; default_build )
}
