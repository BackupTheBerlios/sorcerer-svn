   inherit kde-v4
   require kdepimlibs-v4
  optional libxcb   '' '' for the video widget
  optional samba    '' '' to build smb-ioslave
  optional soprano  '' '' to build Nepomuk
  optional xine-lib '' '' to build the multimedia backend
  category utility/file-manager utility/terminal-emulator
 freshmeat kde
  estimate 10000
      desc 'Icons and files required by KDE apps'

build(){
case $VERSION in
 4.3.1) ( export PATH=/opt/kde4/bin:$PATH; kde_build ) ;;
 4.3.0) ( export PATH=/opt/kde4/bin:$PATH; kde_build ) ;;
     *) kde_build ;;
esac
}
