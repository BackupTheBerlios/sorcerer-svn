    stable 2.9.17 2.9.14 2.9.12
   require jpeg libpng tiff
  category graphic/library
 attribute library
    source $SOURCEFORGE_URL panotools/libpano13/libpano13-$VERSION/libpano13-$VERSION.tar.gz
  homepage http://panotools.sourceforge.net/
  estimate 260
      desc 'photo panorama toolkit library'

build(){
 default_build &&
 if   [[ $HOSTTYPE == x86_64 ]]; then
  if  [[ $CFLAGS =~ -m32 ]]; then mv $DESTDIR/usr/lib{,32}; else
                                  mv $DESTDIR/usr/lib{,64}
   if [[ -d $DESTDIR/usr/lib32 ]]; then mv $DESTDIR/usr/lib{32,}; fi
   sed -i 's:libdir=/usr/lib$:libdir=/usr/lib64:' $DESTDIR/usr/lib64/pkgconfig/libpano13.pc
  fi
 fi
}
