# since gobject-introspectin is disabled for polkit
# it is also removed from the requirements so that
# gobject-introspection does not have to be on the Install/Rescue

   version stable 0.104
   require PAM intltool pkgconfig
      opts --enable-static=no --disable-gtk-doc --disable-man-pages
      opts --enable-systemd=no
  category security
 attribute gnome library lto_off makej
#attribute multilib-concurrent
    source http://hal.freedesktop.org/releases/polkit-$VERSION.tar.gz
      info good 20120630
      info last 20120103
      info home http://hal.freedesktop.org/docs/PolicyKit-gnome/
 conflicts PolicyKit
      desc 'authorization API intended to be used by privileged programs'
