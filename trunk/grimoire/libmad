   VERSION=( 0.15.1b 0.14.2b )
  CATEGORY='audio/codec audio/library'
 ATTRIBUTE='library'
    SOURCE="mad/libmad-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://mad.sourceforge.net'
      OPTS='--enable-static=no'
  ESTIMATE='57'
      DESC='libmad is a 24 bit capable .mp3 decoder library.'

build() {
 case $VERSION in
  0.15.1b) case $HOSTTYPE in
             x86_64) sed -i '/-fforce-mem/d' configure ;;
           esac        ;;
 esac

 default_build
}
