   version stable 0.15.1b 0.14.2b
      opts --enable-static=no
  category audio/codec audio/library
 attribute library makej multilib-concurrent
    source $SOURCEFORGE_URL mad/libmad/$VERSION/libmad-$VERSION.tar.gz
      info home http://mad.sourceforge.net
      desc '24 bit capable .mp3 decoder library'

build(){
 case $VERSION in
  0.15.1b) sed -i 's:-fforce-mem::' configure ;;
 esac
 default_build
}
