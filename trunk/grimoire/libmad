    stable 0.15.1b 0.14.2b
  category audio/codec audio/library
 attribute library
    source $SOURCEFORGE_URL mad/libmad/$VERSION/libmad-$VERSION.tar.gz
  homepage http://mad.sourceforge.net
      opts --enable-static=no
  estimate 50
      desc 'libmad is a 24 bit capable .mp3 decoder library.'

