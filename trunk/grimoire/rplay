@@ -47,5 +47,10 @@
 #include <sys/soundcard.h>
 #include <dlfcn.h>
+/* #define REAL_LIBC RTLD_NEXT */
+#if defined(RTLD_NEXT)         
 #define REAL_LIBC RTLD_NEXT
+#else
