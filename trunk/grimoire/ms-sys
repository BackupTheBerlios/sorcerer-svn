    stable 2.2.0 2.1.5
  category disk
 attribute console
    source $SOURCEFORGE_URL ms-sys/ms-sys%20stable/$VERSION/ms-sys-$VERSION.tar.gz
#   source $SOURCEFORGE_URL ms-sys/ms-sys%20development/$VERSION/ms-sys-$VERSION.tar.gz
  homepage http://ms-sys.sourceforge.net
  estimate 30
      desc 'installs Microsoft compatibile master boot records
ms-sys does the same as the Microsoft fdisk /mbr
to a hard disk or sys d: to a floppy or FAT32 partition,
except that it does not copy any system files
(only the boot record is written).'

build(){
sed -i "s:/usr/local:/usr:
        s:EXTRA_CFLAGS =:EXTRA_CFLAGS = $CFLAGS:
        s?EXTRA_LDFLAGS =?EXTRA_LDFLAGS = $LDFLAGS?" Makefile

make &&
make install DESTDIR=$DESTDIR BINDIR=/sbin
}
