   VERSION=( 0.9.10 0.9.9 0.9.8 0.9.7 0.9.6 0.9.5 0.9.4 0.9.3 0.9.2 )
  CATEGORY='audio/mixer'
 ATTRIBUTE='console library server x11'
    SOURCE="pulseaudio-$VERSION.tar.gz"
       URL='http://0pointer.de/lennart/projects/pulseaudio/'
  HOMEPAGE='http://pulseaudio.org/'
       REQ=( 'audiofile avahi libatomic_ops liboil libsamplerate libtool-v1.5'
             'GConf:--enable-gconf:--disable-gconf:for GConf support'
             'PolicyKit:::for PolicyKit support'
             'alsa-lib:--enable-alsa:--disable-alsa:for output using ALSA'
             'avahi::--disable-avahi:for avahi support'
             'bluez-libs::--disable-bluez:for bluetooth support'
             'glib-v1.2:::for optional support for glib-v1.2 application intergration'
             'hal:--enable-hal:--disable-hal:for hardware abstraction layer support'
             'jackit:--enable-jack:--disable-jack:for jackit audio server mixing support'
             'libcap:--with-caps:--without-caps:for POSIX capabilities support' )
# lirc support disable while lirc is broken
#             'lirc:--enable-lirc:--disable-lirc:for infrared control support' )
      OPTS='--disable-static'
  EPROVIDE='polypaudio'
  ESTIMATE='4000'
      DESC='pulseaudio is a software audio mixer.
It is intended to be an improved drop-in replacement
for the Enlightened Sound Daemon (esound or esd).
In addition to the features esound provides,
pulseaudio has an extensible plugin architecture,
support for more than one sink per source, etc...'

build(){
# case $VERSION in
#  0.9.9) patch -p1 < $SCRIPT_DIR/pulseaudio-0.9.9.patch ;;
# esac
 export   CFLAGS+=' -I/opt/libtool/include'
 export CXXFLAGS+=' -I/opt/libtool/include'
 export  LDFLAGS+=' -L/opt/libtool/lib'
 default_build
}
