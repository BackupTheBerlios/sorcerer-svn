#!/bin/bash
if   [ -f /media/root/sbin/agetty ] &&
     read < /proc/cmdline           &&
     ! [[ $REPLY =~ boot=IR ]]
then exec /bin/chroot /media/root /sbin/agetty "$@"
elif [[ $@ =~ tty1 ]] && [ -f /bin/login_root ]
then exec  /sbin/agetty -n -l /bin/login_root "$@"
else exec  /sbin/agetty "$@"
fi
