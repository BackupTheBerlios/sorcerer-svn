#!/bin/bash

### BEGIN INIT INFO
# Provides: devpts
# Required-Start: 
# Should-Start: udev
# Required-Stop: 
# Default-Start: S
# Default-Stop:
# Short-Description: devpts mounts devpts on /dev/pts
# Description: devpts mounts devpts on /dev/pts
### END INIT INFO

. /lib/lsb/init-functions


start()  {
  if    log_warning_msg  '/dev/pts mounting'; mount -n -t devpts devpts /dev/pts
  then  log_success_msg  '/dev/pts mounted'
  else  log_failure_msg  '/dev/pts not mounted'
  fi
}

help()  {  echo "Usage: $0 {start}" 1>&2;  }

case  $1  in
        start)  start  ;;
  try-restart)  :      ;;
            *)  help   ;;
esac
