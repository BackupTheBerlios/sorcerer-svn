#!/bin/bash

### BEGIN INIT INFO
# Provides: proc
# Required-Start: 
# Should-Start: 
# Required-Stop: 
# Default-Start: S
# Default-Stop:
# Short-Description: proc mounts proc on /proc
# Description: proc mounts proc on /proc
### END INIT INFO

. /lib/lsb/init-functions


start()  {
  log_warning_msg  '/proc mounting'
  if    [  -d  /proc  ]  &&
        mount  -n  -t proc  proc  /proc
  then  log_success_msg  '/proc mounted'
  else  log_failure_msg  '/proc not mounted'
  fi
}

help()  {  echo "Usage: $0 {start}" 1>&2;  }

case  $1  in
        start)  start  ;;
  try-restart)  :      ;;
            *)  help   ;;
esac
