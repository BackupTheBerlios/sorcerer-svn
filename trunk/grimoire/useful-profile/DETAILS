   VERSION=( "1.0" )
  CATEGORY="profile"
 ATTRIBUTE="console"
  HOMEPAGE="http://sorcerer.wox.org"
       REQ="coreutils cpio cron db email-client gawk mail-transport-agent perl system-logger email-client unzip which xinetd"
    OPT[0]="x11:::for x11 desktop"
    ASSUME="off"
     SHORT="useful-profile contains utilities that should be cast after installing sorcerer."
cat << EOF
useful-profile contains useful programs:
perl,  db,  xinetd,  system-logger,
mail-transport-agent,  email-client,  cron,
and optionally x11 for a x11 desktop,
and optionally xfs-profile for XFS enabled boxes.
EOF
