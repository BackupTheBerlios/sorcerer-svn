   VERSION=( "1.0" )
  CATEGORY="profile"
 ATTRIBUTE="console"
  HOMEPAGE="http://sorcerer.wox.org"
     SHORT="Add this profile after default-profile to gain useful utilities."
       REQ="perl db xinetd system-logger mail-transport-agent email-client cron"
    OPT[0]="x11:::for x11 desktop"
    OPT[1]="xfs-profile:::for XFS enabled boxes."
    ASSUME="off"
cat << EOF
useful-profile contains useful programs:
per,  db,  xinetd,  system-logger,
mail-transport-agent,  email-client,  cron,
and optionally x11 for a x11 desktop,
and optionally xfs-profile for XFS enabled boxes.
EOF
