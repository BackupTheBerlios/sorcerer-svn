   VERSION=( "1.1" )
  CATEGORY="profile"
 ATTRIBUTE="console"
  HOMEPAGE="http://sorcerer.wox.org"
       REQ="coreutils cpio cron db email-client gawk mail-transport-agent perl procps system-logger email-client unzip which xinetd"
    OPT[0]="x11:::for x11 desktop"
    ASSUME="off"
     SHORT="useful-profile contains utilities that should be cast after installing sorcerer."
cat << EOF
useful-profile installs useful programs contained in these spells:
coreutils,             cpio,          cron
db,                    email-client,  gawk
mail-transport-agent,  perl,          procps
system-logger,         email-client,  unzip
which,                 xinetd
and optionally XFree86
EOF
