   VERSION=( "1.2" )
  CATEGORY="ham"
 ATTRIBUTE="console"
    SOURCE="xtalfind-$VERSION.tgz"
       URL="http://www.qsl.net/ik1zyw/software"
  HOMEPAGE="http://www.qsl.net/ik1zyw"
      DESC="A silly little crystal checking/math tool
xtalfind checks whether any XTAL is suitable for a HAM radio circuit
(TX, RX).  Given a base XTAL frequency, it shows you all possible
frequencies within HAM bands.  It features CW TX, direct conversion
RX, 455kHz, and 10.7MHz IF receivers."

build() {
rm  -f  xtalfind
make  &&
prepare_install  &&
install  -m 0755  xtalfind  /usr/bin
}
