   version stable 0.5.0
   require PAM
  category network
 attribute library makej
    source $SOURCEFORGE_URL pamusb/pam_usb/pam_usb-$VERSION/pam_usb-$VERSION.tar.gz
      info last 20110420
      info home http://pamusb.org/
      info faq  http://pamusb.org/doc/faq
      info docs http://pamusb.org/doc/quickstart
      info mail https://lists.sourceforge.net/lists/listinfo/pamusb-devel
      desc 'password-less authentication'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then sed -i 's:lib/security:lib64/security:' Makefile
 fi
 default_build
}
