    stable 3.1.16 3.1.15 3.1.14 3.1.13 3.1.12 3.1.11 3.1.10
    ignore 'x86\|ppc'
  category development
 attribute console
    source boost/boost-jam-$VERSION.tgz
       url "$SOURCEFORGE_URL"
  homepage http://www.boost.org
  estimate 20
case $VERSION in
 3.1.15) use_gcc gcc-v4.0 ;;
esac
      desc 'boost-jam provides a modified jam capable of building boost.'

build(){
./build.sh      &&
prepare_install &&
install -m 755 -s bin.linux*/bjam /usr/bin
}
