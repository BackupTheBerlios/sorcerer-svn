    stable 3.1.18 3.1.17 3.1.16
  category development
 attribute console
    source $SOURCEFORGE_URL boost/boost-jam/$VERSION/boost-jam-$VERSION.tgz
  homepage http://www.boost.org
      desc 'modified jam capable of building boost'

build(){
./build.sh &&
mkdir -p $DESTDIR/usr/bin &&
install -m 755 -s bin.linux*/bjam $DESTDIR/usr/bin
}
