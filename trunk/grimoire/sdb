   VERSION=( "1.0.2" "1.0.1" )
  CATEGORY="game"
 ATTRIBUTE="x11 new"
    SOURCE="sdb-$VERSION.tar.gz"
  HOMEPAGE="http://sdb.gamecreation.org"
       URL="http://gcsociety.sp.cs.cmu.edu/~frenzy"
       REQ="SDL_image SDL_mixer"
  ESTIMATE="42"
      DESC="sdb is the game called shotgun debugger.
It is a 2D, top-down action game.
It is The Future, and your habit of computer
network exploration has finally done you in.
You are captured and taken to a strange
underground complex populated by robot soldiers.
Your task is to escape the facility--but the hordes
of walking death machines aren't just gonna let you."

build() {
install_files() {
mkdir    -p            /usr/libexec  /usr/share/sdb
install  -m 0755  sdb  /usr/libexec
cd       ..
find     *  -type d              |  xargs  -l32  chmod  0755
find     *  -mindepth 1  -type f |  xargs  -l32  chmod  0644
cp       -rv  levels models snd sprites  /usr/share/sdb
echo     -e  "#!/bin/bash\ncd /usr/share/sdb\n/usr/libexec/sdb"  >  sdb
install  -m 0755  -D  sdb  /usr/games/sdb
}

cd      src
sed  -i  "s:-O2:$CXXFLAGS:
          s:-lGLU:-lGLU -L/usr/X11R6/lib:" Makefile
make             &&
prepare_install  &&
install_files
}
