    stable 1.0.2
   require SDL_image SDL_mixer
  category game
 attribute x11
    source http://stage.gamecreation.org/shotgund/shotgun-debugger-$VERSION.src.tar.gz
  homepage "http://www.gamecreation.org/game.php?name=Shotgun+Debugger"
  estimate 50
      desc 'shotgun-debugger is a 2D, top-down action game
It is The Future, and your habit of computer
network exploration has finally done you in.
You are captured and taken to a strange
underground complex populated by robot soldiers.
Your task is to escape the facility--but the hordes
of walking death machines are not just gonna let you.'

build(){
 install_files(){
  mkdir   -p          /usr/libexec /usr/share/sdb
  install -m 0755 sdb /usr/libexec
  cd      ..
  find    * -type d              | xargs --max-lines=32 chmod 755
  find    * -mindepth 1  -type f | xargs --max-lines=32 chmod 644
  cp      -rv levels models snd sprites /usr/share/sdb
  echo    -e "#!/bin/bash\ncd /usr/share/sdb\n/usr/libexec/sdb" > sdb
  install -m 755 -D sdb /usr/bin/sdb
 }

 cd src
 sed -i "s:-O2:$CXXFLAGS:
         s:-lGLU:-lGLU -L/usr/X11R6/lib:" Makefile
 make            &&
 prepare_install &&
 install_files
}
