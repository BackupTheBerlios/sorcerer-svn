  stable 37p3
  CATEGORY='input'
 ATTRIBUTE='console library new'
    SOURCE="canna/9565/Canna${VERSION}.tar.bz2"
       URL="http://keihanna.dl.sourceforge.jp/
            http://kyushu-u.dl.sourceforge.jp/
            http://osdn.dl.sourceforge.jp/"
  HOMEPAGE='http://canna.sourceforge.jp/'
       REQ='imake'
  ESTIMATE='4500'
      DESC="Canna is a system for Japanese input.
It converts Hiragana text to Kana Kanji mixed text."

build()  {
  sed      -i  "s:/usr/local/canna:/usr:"  Canna.conf
  xmkmf            &&
  make    canna           CDEBUGFLAGS="$CFLAGS"  &&
  prepare_install  &&
  make    install{,.man}  CDEBUGFLAGS="$CFLAGS"
}
