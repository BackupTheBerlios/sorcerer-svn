   version stable 8.0.1
   require MesaLib glew
  category graphic/library
 attribute X11R7 hidden makej x11
    source ftp://ftp.freedesktop.org/pub/mesa/demos/$VERSION/mesa-demos-$VERSION.tar.bz2
      info last 20120222
      info home http://www.mesa3d.org/
      desc '3-D graphics demos and utilities'

build_old(){
 default_build &&
 mv -v $DESTDIR/usr/bin/clear{,-mesa-demos} &&
 mv -v $DESTDIR/usr/bin/bitmap{,-mesa-demos}
}
