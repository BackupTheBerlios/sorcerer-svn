   version stable 4.1.0
   require xorg-server
      opts --disable-static
  category xorg/driver
 attribute x11 X11R7 library broke deprecated makej multilib-concurrent
    source $XORG_URL driver/$SPELL-$VERSION.tar.bz2
  homepage http://www.x.org
    CFLAGS='-O2'
   LDFLAGS='-Wl,-O1'

current(){ echo xf86-video-vesa | pipe_queue $CAST_QUEUE; }
