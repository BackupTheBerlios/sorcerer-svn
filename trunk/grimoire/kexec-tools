# expected to compile, however, not expected to support/load
# multiple initramfs images which is standard on Sorcerer

   version stable 2.0.3 2.0.2
   require xz zlib
      opts --sbindir=/sbin
  category utility
 attribute console
#attribute broke
    source http://www.kernel.org/pub/linux/utils/kernel/kexec/kexec-tools-$VERSION.tar.bz2
      info omit 20130115
      info last 20120115
      info home http://horms.net/projects/kexec/
      desc 'method for reloading linux kernel without BIOS reboot'

build(){
 [ -d kexec-tools-$VERSION ] &&
 cd   kexec-tools-$VERSION
 unset LDFLAGS
 default_build
}

current(){
 case $VERSION in
  2.0.2) [ -f /sbin/kexec ]
 esac
}
