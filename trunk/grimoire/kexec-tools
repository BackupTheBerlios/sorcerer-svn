# Probably requires a patched kernel
# 1.101 never tested
   VERSION=( 1.101 )
    IGNORE=''
  CATEGORY='utility'
 ATTRIBUTE='console'
    SOURCE="kexec-tools-$VERSION.tar.gz"
       URL='http://www.xmission.com/~ebiederm/files/kexec/'
  HOMEPAGE='http://www.xmission.com/~ebiederm/files/kexec/README'
       REQ=''
  ESTIMATE='60'
      DESC='kexec-tools provides a method for reloading linux kernel without bios reboot.'

build(){
 [ -d kexec-tools-$VERSION ] &&
 cd   kexec-tools-$VERSION
 unset LDFLAGS
 default_build
}

