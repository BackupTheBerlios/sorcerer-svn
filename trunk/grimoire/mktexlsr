   version stable 20120701
   require texlive
  category documentation
 attribute console
      info home http://www.tug.org/texlive/
      desc 'Updates texmf indexes'

build(){
 do_save(){
  if [ -d   "$1" ]; then
   mktexlsr "$1" &&
   mkdir -pvm 755 "$DESTDIR/$1" &&
   mv "$1/ls-R"   "$DESTDIR/$1"
  fi
 }

 do_save /usr/texmf
 do_save /usr/texmf-dist
}
