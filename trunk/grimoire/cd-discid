   VERSION=( "0.9" "0.8" )
  CATEGORY="audio/cd"
 ATTRIBUTE="console"
    SOURCE="cd-discid_${VERSION}.orig.tar.gz"
       URL="http://lly.org/~rcw/cd-discid/"
  HOMEPAGE="http://lly.org/~rcw/cd-discid/"
  ESTIMATE="7"
 FRESHMEAT="cddiscid"
      DESC="cd-discid returns the disc id for a cd
cd-discid is a backend utility to get CDDB
discid information from a CD-ROM disc.
It was originally designed for cdgrab (now abcde),
but can be used for any purpose requiring CDDB data."


build() {
sed  -i  "s:-g -O2:$CFLAGS:"  Makefile
make             &&
prepare_install  &&
make    install
}
