# The new software author omitted testing of the 3.42beta tarball.
# And distribution maintainers have more to do
# than fix sloppy software authors mistakes.
# If you want to play foobillardplus
# then write complaints at http://foobillardplus.sourceforge.net/

   version stable 3.42beta
   require SDL_mixer SDL_net automake
  category game
 attribute x11
    source $SOURCEFORGE_URL foobillardplus/source/foobillardplus-$VERSION.tar.gz
      info last 20120104
      info home http://foobillardplus.sourceforge.net/
      desc 'fork of foobillard, an OpenGL billards (pool) simulation'

build(){
 case $VERSION in
  3.42beta) aclocal --force; autoconf -f; autoheader -f; automake -acf ;;
 esac

 default_build
}
