   VERSION=( "2.5" )
  CATEGORY="development"
 ATTRIBUTE="console new"
    SOURCE="jam-$VERSION.tar"
  HOMEPAGE="http://www.perforce.com/jam/jam.html"
       URL="ftp://ftp.perforce.com/pub/jam/"
 FRESHMEAT=""
  ESTIMATE="46"
      DESC="jam is a make like program.
jam is a software build tool that makes building simple
things simple and building complicated things manageable."

build() {
make     "CFLAGS=$CFLAGS"  &&
prepare_install  &&
install  -m 755  -s  bin.linux*/jam        /usr/bin  &&
install  -m 755  -s  bin.linux*/mkjambase  /usr/bin
}
