     PNAME=${SPELL#perl--}
   VERSION=( "1.30" )
  CATEGORY="perl"
 ATTRIBUTE="perl-module new"
    SOURCE="K/KA/KANE/$PNAME-$VERSION.tar.gz"
       URL="http://www.cpan.org/authors/id/"
  HOMEPAGE="http://search.cpan.org/search?dist=$PNAME"
       REQ=( "perl perl--IO-Zlib" 
             "perl--Text-Diff:::for doing diffs against tar archives" )
  ESTIMATE="35"
      DESC="$SPELL is a module for manipulations of tar archives"
