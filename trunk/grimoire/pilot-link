    stable 0.12.4 0.12.3 0.12.2 0.12.1
   require bluez-libs libpng ncurses readline
  optional Python --with-python '' for Python interface
  category utility/hand-held
 attribute console x11
    source http://downloads.pilot-link.org/pilot-link-$VERSION.tar.bz2
      vurl http://www.pilot-link.org/
  homepage http://www.pilot-link.org/
      opts --includedir=/usr/include --enable-static=no
  estimate 600
      desc 'pilot-link contains the tools needed to connect your Palm and box.'

build(){
 sed -i 's:UID = 0:UID = -1:' configure
 ./configure           \
 --prefix=/usr         \
 --sysconfdir=/etc     \
 --localstatedir=/var  \
 $OPTS                 &&
 make "CFLAGS=$CFLAGS" &&
 prepare_install       &&
 make    install
}

current(){
 # libmal required for kdepim for pilot-link integration
 # if pilot-link is installed so will libmal be installed.
 if   ! spell_installed libmal
 then echo libmal | pipe_queue "$CAST_QUEUE" com
 fi
}
