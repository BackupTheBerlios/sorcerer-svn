   VERSION=( 0.12.3 0.12.2 0.12.1 )
  CATEGORY='utility/hand-held'
 ATTRIBUTE='console x11'
    SOURCE="pilot-link-$VERSION.tar.bz2"
       URL='http://downloads.pilot-link.org/'
      VURL='http://www.pilot-link.org/'
  HOMEPAGE='http://www.pilot-link.org/'
       REQ=( 'bluez-libs libpng ncurses readline'
             'Python:--with-python::for Python interface' )
# None of the below supports are working.
#   'tk:--with-tcl --with-tk::for tk interface'
#   'j2sdk:--with-java::for java interface'
#   'perl:--with-perl::for perl interface'
      OPTS='--includedir=/usr/include --enable-static=no'
  ESTIMATE='600'
      DESC='pilot-link contains the tools needed to connect your Palm and box.'

build(){
 sed -i 's:UID = 0:UID = -1:' configure
 ./configure           \
 --build=$BUILD        \
 --prefix=/usr         \
 --sysconfdir=/etc     \
 --localstatedir=/var  \
 $OPTS                 &&
 make "CFLAGS=$CFLAGS" &&
 prepare_install       &&
 make    install
}

current(){
 # libmal required for kdepim for pilot-link integration
 # if pilot-link is installed so will libmal be installed.
 if   ! spell_installed libmal
 then echo libmal | pipe_queue "$CAST_QUEUE" com
 fi
}
