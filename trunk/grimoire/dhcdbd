   VERSION=( "1.14" )
  CATEGORY="network"
 ATTRIBUTE="console client broken"
# website gone after merely one release?
    SOURCE="dhcdbd-$VERSION.tar.gz"
       URL="http://people.redhat.com/jvdias/dhcdbd/"
  HOMEPAGE="http://people.redhat.com/jvdias/dhcdbd/"
       REQ="dbus"
  ESTIMATE="30"
      DESC="dhcdbd provides DHCP D-BUS daemon
        dhcdbd exists to :
o  provide D-BUS control of the ISC dhclient software,
o  store DHCP configuration parameters (options) persistently
o  providing access to DHCP options over D-BUS
o  notify applications of changes to DHCP IP interface configuration"

build()  {
  make             &&
  prepare_install  &&
  make    install
}
