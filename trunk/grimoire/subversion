#!/bin/sh
   VERSION=( "1.2.3" "1.2.1" "1.2.0" "1.1.4" "1.1.3" )
  CATEGORY="development"
 ATTRIBUTE="console new"
    SOURCE="subversion-$VERSION.tar.bz2"
       URL="http://subversion.tigris.org/tarballs"
  HOMEPAGE="http://subversion.tigris.org"

# subversions 1.2.3 not compatibile with neon 0.25.3
NEON_VERSION=$(installed_version neon)
case ${NEON_VERSION} in
  0.24*)  REQ=( "autoconf db e2fsprogs expat libtool zlib"
             "httpd:--with-apr=/usr --with-apr-util=/usr --with-apxs --disable-mod-activation::to use installed httpd APR libraries"
             "openssl:--with-ssl::for open SSL support"
            "neon:--with-neon=/usr:--without-neon:to allow http/https access of client")
           OPTS="--disable-debug"
           ;;
  0.25*)  REQ=( "autoconf db e2fsprogs expat libtool zlib"
             "httpd:--with-apr=/usr --with-apr-util=/usr --with-apxs --disable-mod-activation::to use installed httpd APR libraries"
             "openssl:--with-ssl::for open SSL support")
          OPTS="--with-zlib --without-neon"
      ;;
esac

  ESTIMATE="673"
      DESC="subversions is a version control system like cvs."
