   VERSION=( "20071014" "20070921" "20070829" )
  CATEGORY="bluetooth audio"
 ATTRIBUTE="new"
    SOURCE="plugz-$VERSION.tar"
 REPOSITORY=( ""
          "cvs -d:pserver:anonymous@bluetooth-alsa.cvs.sourceforge.net:/cvsroot/bluetooth-alsa co plugz"
          "cvs -d:pserver:anonymous@bluetooth-alsa.cvs.sourceforge.net:/cvsroot/bluetooth-alsa up plugz" )
 FRESHMEAT="bluetooth-alsa"
  HOMEPAGE="http://bluetooth-alsa.sourceforge.net/"
       REQ="sbc bluez-libs"
  ESTIMATE="407"
      DESC="bluetooth-alsa makes bluetooth headsets connect with computers"

config_install() {
  install -v -m 0644 alsa-plugins/a2dpd/sample.a2dprc /etc/a2dprc.sample	&&
  install -v -m 0644 alsa-plugins/asound.conf         /etc/asound.conf.sample
}

build() {
 sed -i "s:/tmp/a2dp.pid:/var/run/a2dp.pid:" alsa-plugins/a2dpd/a2dpd_protocol.h

 ./bootstrap		&&
 default_build		&&
 config_install
}
