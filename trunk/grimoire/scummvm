
if [ $SPELL == scummvm ]; then
     stable 0.13.1 0.13.0 0.12.0 0.11.1 0.11.0 0.10.0a 0.10.0
    source $SOURCEFORGE_URL scummvm/scummvm/$VERSION/scummvm-$VERSION.tar.bz2
    require SDL
   optional alsa-lib      '' '' for Sound support
   optional libvorbis     '' '' for OGG music support
   optional libmad        '' '' for MP3 music support
   optional libmpeg2      '' '' for cutscenes support
   optional flac          '' '' for free lossless audio codec
   optional scummvm-fotaq '' '' for the game Flight Of The Amazon Queen
   optional scummvm-bass  '' '' for the game Beneath A Steel Sky
fi
   category game development/emulator
  attribute x11
   homepage http://scummvm.sourceforge.net
   estimate 1400
       desc 'scummvm is a virtual machine for classic point-and-click adventure games.
It is designed to run:
Simon the Sorcerer 1 and 2 from Adventure Soft;
Beneath A Steel Sky from Revolution;
Broken Sword 1 and Broken Sword 2;
Flight of the Amazon Queen;
and games based on
SCUMM (Script Creation Utility for Maniac Mansion) system from LucasArts.

Now supporting also:
"The Legend of Kyrandia: Book Two: Hand of Fate",
"The Legend of Kyrandia: Book Three: Malcolm Revenge",
"Lost in Time",
"The Bizarre Adventures of Woodruff and the Schnibble",
"Drascula: The Vampire Strikes Back".
'


build(){
./configure --disable-debug $OPTS &&
make            &&
prepare_install &&
install -D -s -m 755 scummvm /usr/bin/scummvm
}


install_game(){
 [ -d $1 ] || cd ..
 [ -d $1 ]          &&
 chmod    0755 $1   &&
 chmod -R 0644 $1/* &&
 prepare_install    &&
 mkdir -p  /usr/share/games &&
 cp -rv $1 /usr/share/games
}


case $SPELL in
 scummvm-*) stable 1.0 ;;
esac
