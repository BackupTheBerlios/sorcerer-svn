# If you want to use it try to fix it.
  stable 3_10_00_30303-src
  CATEGORY='xorg/driver'
 ATTRIBUTE='X11R7 broke'
    SOURCE="glide/glide3x-$VERSION.tgz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://glide.sourceforge.net/'
       REQ=( '' )
      OPTS='--disable-fx-debug'
  ESTIMATE='74'
      DESC='glide3x provides a library for glide 3D graphics cards.'

build(){
aclocal
automake
autoconf
mkdir build &&
cd    build &&
../configure --prefix=/usr $OPTS &&
make -f makefile.autoconf all &&
prepare_install &&
make    install
}
