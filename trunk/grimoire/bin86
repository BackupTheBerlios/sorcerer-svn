   VERSION=( "0.16.17" "0.16.0" )
  CATEGORY="development/assembler"
 ATTRIBUTE="console"
    SOURCE=( "bin86-$VERSION.tar.gz"
             "x86_64.patch" )
       URL=( "http://homepage.ntlworld.com/robert.debath/dev86"
             "http://svn.exactcode.de/t2/trunk/package/x86/bin86" )
  HOMEPAGE="http://www.cix.co.uk/~mayday"
  ESTIMATE="61"
      DESC="a86 and ld86 provide a complete 8086/80386 assembler and loader.
as86 and ld86 provide a complete 8086 assembler and loader
which can generate 32-bit code for the 386+ processors.
These tools are used to create the 16-bit 
bootsector and setup binaries for linux.
The syntax is not compatible with the GNU assembler."

build()  {
  patch  -p1  <  $SOURCE_CACHE/$BSPELL/$VERSION/${SOURCE[1]}
  make             "PREFIX=/usr"  &&
  prepare_install                 &&
  make    install  "PREFIX=/usr"
}
