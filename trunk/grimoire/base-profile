   VERSION=( "1.1" )
  CATEGORY="profile"
 ATTRIBUTE="console"
  HOMEPAGE="http://sorcerer.wox.org"
       REQ=( "bash-completion bc bison
              db dhcpcd diffutils
              flex
              gawk gettext glibc groff guile
              inetutils
              less lilo linux
              m4 mktemp
              ncurses net-tools
              pciutils perl procinfo procps protocols psmisc
              readline
              services shadow sorcery sysvinit
              udev util-linux
              which"
              "pcmcia-cs:::for pcmcia networking tools" )
    ASSUME="off"
      DESC="base-profile is a requested profile that installs important spells.
While it is not necessary to install base-profile it does contain 
a set of spells that almost no Sorcerer box could do without."

build()       {  echo  "base-profile installed"; }
post_build()  { profile_post_build;  }
pre_build()   {  :; }
