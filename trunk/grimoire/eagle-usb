   VERSION=( "1.9.9.1" )
# 2.0.0 is broken, email the eagle-usb software authors.
# 2.1.1 is broken, email the eagle-usb software authors.
    IGNORE="snapshot\|^2\.0\.0\|&2\.1\.1"
  CATEGORY="kernel"
 ATTRIBUTE="linux-26-module"
    SOURCE="eagle-usb/eagle-usb-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://eagle-usb.sourceforge.net"
       REQ=( ""
             "tk:::for a x11 gui" )
#     OPTS="--with-kernel-src=/usr/src/linux"
  ESTIMATE="138"
      DESC="eagle-usb is a Linux driver for DSL USB modems
based on the Analog chipset Eagle 8051 (ADImodem).
The Sagem F@st 800, USRobotics Sureconnect 9000,
Comtrend ct-350 / ct-361, Elcon 111U and others are reported to work.
See forum.eagle-usb.org for support"


build() {
# 2.0.0 has a very broken configure script
# that requires a compiler like cc in /usr/bin /bin /usr/local/bin,  etc...
# also it will not use linux source even when told where it is.
# export  CC="/opt/gcc/current/bin/gcc"
  default_build  &&
  depmod  -a     &&
  rm -f  /etc/eagle-usb/scripts/lock
}

post_install() { 
  if  !  [  -z  "$postconfdone" ]
  then   echo    "postconfdone=true"  >  $SPELL_CONFIG
         eagleconfig  &
  fi
  default_post_install  
}
