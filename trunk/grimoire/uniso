   version stable 0.1.06
   require Python cdrtools
  category disk/file-system
 attribute console new
    source $SOURCEFORGE_URL uniso/uniso/uniso-$VERSION/uniso-$VERSION.tar.bz2
  homepage http://sourceforge.net/projects/uniso/files/
  estimate 100
      desc 'extracts a file hierarchy from an iso image'

build(){
mkdir -p $DESTDIR/usr/bin &&
install -m 755 uniso $DESTDIR/usr/bin
}
