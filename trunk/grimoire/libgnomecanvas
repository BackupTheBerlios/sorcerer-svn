   version stable 2.30.3 2.30.2 2.30.1
   require libart_lgpl libglade
#  require gail libart_lgpl libglade
      opts --enable-static=no
  category development
 attribute gnome library makej multilib-concurrent
    source $GNOME_URL sources/libgnomecanvas/${VERSION:0:4}/libgnomecanvas-$VERSION.tar.bz2
      info home http://www.gnome.org
      desc 'canvas widget for gnome'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
