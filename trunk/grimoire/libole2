   VERSION=( "2.2.8" "0.2.4" )
  CATEGORY="documentation"
 ATTRIBUTE="library"
    SOURCE="sources/libole2/${VERSION:0:3}/libole2-$VERSION.tar.bz2"
  HOMEPAGE="www.gnome.org"
       URL="$GNOME_URL"
       REQ="glib"
 ESTIMATE="71"
     SHORT="libole2 provides an API to access OLE2 streams."
      LONG="
libole2 provides an API to access OLE2 streams 
as used by Microsoft in their compound files.
Such common file formats as Excel, Word,
Powerpoint, and Visio use this system.
"


build() {
  default_build  &&
  ln  -sf  libole2-2.0/libole2 /usr/include/libole2
}
