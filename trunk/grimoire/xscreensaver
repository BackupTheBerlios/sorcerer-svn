   version stable 5.12 5.11 5.10 5.08
   require MesaLib bc gettext gle libXpm libXxf86misc libglade
#  require MesaLib bc gettext gle libXpm libXxf86misc libglade netpbm
  optional Linux-PAM '' '' for pluggable authentication
  category graphic security
 attribute x11
    source http://www.jwz.org/xscreensaver/xscreensaver-$VERSION.tar.gz
      vurl http://www.jwz.org/xscreensaver/download.html
  homepage http://www.jwz.org/xscreensaver/
      desc 'modular screen saver and locker for X Windows
It is highly customizable and allows the use of any
program that can draw on the root window as a display mode.
More than 120 display modes are included in this package.'

build(){
 ./configure \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --prefix=/usr \
 $OPTS &&
 make  &&
 make install install_prefix=$DESTDIR
}
