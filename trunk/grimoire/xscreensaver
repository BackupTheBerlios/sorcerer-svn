   VERSION=( 5.04 5.03 5.02 5.01 5.00 )
  CATEGORY='graphic security'
 ATTRIBUTE='x11'
    SOURCE="xscreensaver-$VERSION.tar.gz"
  HOMEPAGE='http://www.jwz.org/xscreensaver/'
       URL='http://www.jwz.org/xscreensaver/'
       REQ=( "bc gettext glut libXpm libXxf86misc libglade netpbm"
             "Linux-PAM:::for pluggable authentication"
             "gle:::for drawing extruded surfaces" )
  ESTIMATE='2400'
      DESC="xscreensaver is a modular screen saver and locker for X Windows.
It is highly customizable and allows the use of any
program that can draw on the root window as a display mode.
More than 120 display modes are included in this package."

build() {
  ./configure           \
  --build=$BUILD        \
  --prefix=/usr         \
  --sysconfdir=/etc     \
  --localstatedir=/var  \
  $OPTS                 &&
  make                  &&
  prepare_install       &&
  make    install  datadir=/usr/share
}
