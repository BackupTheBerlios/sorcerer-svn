   VERSION=( "0.4.1" "0.4.0b" "0.4.0" "0.3.1" )
  CATEGORY="video/codec"
 ATTRIBUTE="library"
    SOURCE="mpeg2dec-$VERSION.tar.gz"
       URL="http://libmpeg2.sourceforge.net/files/"
       REQ="SDL automake libtool"
  HOMEPAGE="http://libmpeg2.sourceforge.net/"
  ESTIMATE="590"
      DESC="libmpeg2 is a library for decoding MPEG-1 and MPEG-2 video streams.
libmpeg2 is a library for decoding
MPEG-1 and MPEG-2 video streams.
Its main goals are standards conformance,
speed, portability, and reuseability.
The package also includes mpeg2dec,
a small test program for libmpeg2.
This library is also known as mpeg2dec
which is what the spell should have been named."

build() {
  export CFLAGS="$CFLAGS -fPIC"

  sed  -i  "s:exit 1::
            s:aclocal\${amvers}:aclocal:
            s:autoconf\${acvers}:autoconf:
            s:autoheader\${acvers}:autoheader:
            s:automake\${amvers}:automake:"  bootstrap
  ./bootstrap  &&
  default_build
}
