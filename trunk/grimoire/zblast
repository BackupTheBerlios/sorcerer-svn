   VERSION=( "1.3" )
  CATEGORY="game"
 ATTRIBUTE="x11"
    SOURCE="zblast-$VERSION.tar.gz"
       URL="http://www.svgalib.org/rus/zblast/"
  HOMEPAGE="http://www.svgalib.org/rus/zblast/"
       REQ="x11"
  ESTIMATE="14"
      DESC="zblast is a simple vector graphic shoot-em-up.

zblast is a simple but fairly manic shoot-em-up.
It has vector graphics.
"


build() {
COPT="OPTOPT=$CFLAGS"
PFIX="PREFIX=/usr"

sed  -i  "s:games/lib:share:"  Makefile
make  x  "$COPT"   "$PFIX"  &&
prepare_install             &&
make    install    "$PFIX"
}
