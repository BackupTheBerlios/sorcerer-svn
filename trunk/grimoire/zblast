    stable 1.3
   require libX11
  category game
 attribute x11
    source http://www.svgalib.org/rus/zblast/zblast-$VERSION.tar.gz
  homepage http://www.svgalib.org/rus/zblast/
case $VERSION in
 1.3) use_gcc gcc-v3.3 ;;
esac
      desc 'zblast is a simple vector graphic shoot-em-up.

zblast is a simple but fairly manic shoot-em-up.
It has vector graphics.'


build(){
COPT="OPTOPT=$CFLAGS"
PFIX="PREFIX=/usr"

sed -i "s:games/lib:share:" Makefile
make x "$COPT"  "$PFIX" &&
prepare_install &&
make    install "$PFIX"
}
