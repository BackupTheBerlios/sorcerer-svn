   VERSION=( "2.14" )
    SOURCE="/A/AB/ABW/${SPELL#perl--}-$VERSION.tar.gz"
  CATEGORY="perl"
 ATTRIBUTE="perl-module new"
  HOMEPAGE="http://search.cpan.org/search?dist=${SPELL#perl--}"
       URL="http://www.cpan.org/authors/id/"
       REQ=( "perl  perl--AppConfig" )
  ESTIMATE="436"
      DESC="$SPELL implement template processing system
The $SPELL is a collection of modules which implement a
fast, flexible, powerfull and extensible template processing
system. It was originally designed and remains primarily
useful for generating dynamic web content, but it can be
used equally well for processing any other kind of text
based documents: HTML, XML, POD, PostScript, LaTeX, and 
so on."

build() {
  sed  -i  "s:/usr/local:/usr:g"  Makefile.PL	&&
  true  |  default_pm_build
}

