  stable 0.6.0 0.5.2 0.4.2 0.4.0 0.3.2
  CATEGORY='audio/library'
 ATTRIBUTE='library'
    SOURCE="gtkpod/libgpod-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://www.gtkpod.org/libgpod.html'
       REQ='gtk+ hal sg3_utils'
      OPTS='--enable-static=no'
  ESTIMATE='500'
      DESC='libgpod is a library allowing direct access to iPod contents.'

build(){
 case $VERSION in
  0.6.0) sed -i "1i#include <string.h>" tests/test-rebuild-db.cc ;;
 esac
 default_build
}
