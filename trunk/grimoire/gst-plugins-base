# 0.10.32 failed to compile due to bug in introspection file?
# gstreamer 0.10.34 failed to compile
# therefore gst-plugins-base 0.10.34 fails to compile

   version   stable 0.10.35 0.10.32 0.10.31 0.10.30 0.10.29
   version unstable 0.11.3 0.11.2 0.11.1
case $VERSION in
 0.10.35)
      opts --enable-introspection=no ;;
 0.10.32)
      opts --enable-introspection=no ;;
esac
   require gstreamer libXv udev
  optional alsa-lib
# optional cdparanoia
  optional libtheora
  optional libvisual
  optional libvorbis # also receives libogg
  optional orc
      opts --disable-examples --enable-static=no
  category audio/library
 attribute gnome library multilib-concurrent
    source http://gstreamer.freedesktop.org/src/gst-plugins-base/gst-plugins-base-$VERSION.tar.bz2
      info home  http://gstreamer.freedesktop.org/
      info docs  http://gstreamer.freedesktop.org/documentation/
      info mail  http://gstreamer.freedesktop.org/lists/
      desc 'set of plugins for gstreamer'
