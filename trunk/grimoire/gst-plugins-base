# Disabling introspection for 0.10.30
# because it would fail to generate obsolete introspection files

    stable 0.10.30 0.10.29 0.10.28 0.10.26
case $VERSION in
 0.10.30)
      opts --enable-introspection=no ;;
esac
   require gstreamer libXv
  optional alsa-lib
  optional cdparanoia
  optional gnome-vfs
  optional libtheora
  optional libvisual
  optional libvorbis # also receives libogg
  optional orc
  category audio/library
 attribute gnome library
    source http://gstreamer.freedesktop.org/src/gst-plugins-base/gst-plugins-base-$VERSION.tar.bz2
  homepage http://gstreamer.freedesktop.org/
      opts --disable-examples --enable-static=no
  estimate 2400
      desc 'set of plugins for gstreamer'
