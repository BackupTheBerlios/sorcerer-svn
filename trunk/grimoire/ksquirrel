# ksquirrel has compile errors
  stable 0.8.0 0.7.5
    IGNORE='ebuild\|pre\|try'
  CATEGORY='graphic/viewer'
 ATTRIBUTE='kde3 broke'
    SOURCE="ksquirrel/ksquirrel-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://ksquirrel.sourceforge.net/'
       REQ=( 'kdebase-v3 ksquirrel-libs' )
      OPTS='--prefix=/opt/kde3 --with-qt-dir=/opt/kde3 --disable-debug --enable-final'
  ESTIMATE='1600'
      DESC='ksquirrel is an image viewer, simple and convenient in usage.'

build(){
 case $VERSION in
  0.8.0) sed -i '1i#include <cstring>
                 1i#include <cstdlib>' $( find . -name \*.cpp ) ;;
 esac
 default_build
}
