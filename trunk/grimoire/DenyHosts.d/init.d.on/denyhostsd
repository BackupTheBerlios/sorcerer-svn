#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 510
# Required-Start: run
# Required-Stop: $syslog kill 
# Default-Start: 3 4 5
# Default-Stop: 0 1 6
# Description: denyhostsd monitors log files for ssh server attacks
### END INIT INFO

. /lib/lsb/init-functions

pid_file /var/run/denyhosts.pid
server python
name denyhosts

start(){
  log_warning_msg  "Starting denyhosts (ssh attack monitoring)"
  if    [ -x /usr/sbin/denyhosts ]
  then 
	if    /usr/sbin/denyhosts --daemon 1>>/var/log/denyhosts 2>&1
  	then  log_success_msg  "$NAME started"
  	else  log_failure_msg  "$NAME not started"
        	status
  	fi
  else
	log_failure_msg "$NAME not started (missing executables)"
  fi
}

stop(){
	log_warning_msg "Shutting down $NAME"
  if    killproc        -p $PIDF -s 15  $SERV
  then  log_success_msg "$NAME stopped"
  else  log_failure_msg "$NAME not stopped"
        status
        return 0
  fi
}
