with version stable 20120701 20110705
with clash   teTeX-texmf
with base    texlive
with role    documentation
with trait   data solo
with source  ftp://tug.org/historic/systems/texlive/${VERSION:0:4}/texlive-$VERSION-texmf.tar.xz
with info    last 20120701
with info    home http://www.tug.org/texlive/
with info    cite 'data for texlive'

build(){
mkdir -pvm 755 $DESTDIR/usr
cp -Rv *       $DESTDIR/usr/
}

post_install(){
default_post_install
echo mktexlsr | pipe_queue $MOIL_QUEUE
}
