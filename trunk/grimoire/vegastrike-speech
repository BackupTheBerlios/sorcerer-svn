with version stable 0.5.1.beta2 0.5.0
with role    game/3d/flightsim
with trait   data x11
with source  $SOURCEFORGE_URL vegastrike/vegastrike/${VERSION:0:5}/vegastrike-speech-$VERSION.tar
with info    last 20120130
with info    home http://vegastrike.sourceforge.net/
with info    cite 'space flight simulator similar to Wing Commander'

build(){
 find * -type f | xargs -r --max-lines=256 chmod 644
 find * -type d | xargs -r --max-lines=256 chmod 755
 mkdir -pvm 755 $DESTDIR/usr/share/vegastrike &&
 cp -a *        $DESTDIR/usr/share/vegastrike/
}
