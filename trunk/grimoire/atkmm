   version stable 2.22.6 2.22.5 2.22.4 2.22.2
   require atk glibmm
      opts --disable-demos --disable-docs --disable-examples
  category development/binding
 attribute gnome library makej multilib-concurrent
    source $GNOME_URL sources/atkmm/${VERSION:0:4}/atkmm-$VERSION.tar.bz2
      info home http://atkmm.sourceforge.net
      info last 20111026
      desc 'c++ wrapper for the atk library'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
