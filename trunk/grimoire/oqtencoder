   VERSION=( "0.1" )
  CATEGORY="video video-editor"
 ATTRIBUTE="x11"
    SOURCE="openquicktime/oqtencoder-$VERSION.tgz"
       URL="$SOURCEFORGE_URL"
       REQ="openquicktime"
  HOMEPAGE="http://www.openquicktime.org"
      DESC="oqtencoder provides an encoder for quicktime video.
Based on the sources of Quicktime4Linux,
OpenQuicktime has since been extensively
remodeled and streamlined.
This is the encoder."

build() {
make  &&
prepare_install  &&
install  -o root -g root -m 755  oqtencoder  /usr/bin
}
