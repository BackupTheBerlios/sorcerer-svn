   VERSION=( "1.24" "1.23" "1.22" "1.21" )
    IGNORE="^99\|00\|exe"
  CATEGORY="utility"
 ATTRIBUTE="console new"
    SOURCE="sg3_utils-$VERSION.tgz"
       URL="http://sg.torque.net/sg/p/"
  HOMEPAGE="http://sg.torque.net/sg/sg3_utils.html"
  ESTIMATE="300"
 FRESHMEAT="sg_uils"
      DESC="sg3_utils provides utilities that send SCSI commands to SCSI devices
As well as devices on transports associated with SCSI
(e.g. Fibre Channel (FCP) and the SCSI Parallel
Interface(SPI)) many other devices use SCSI command sets.
ATAPI cd/dvd drives and SATA disks that use a translation
layer or bridge device are examples of devices that use SCSI command sets."

build() {
  sed -i "s:/usr/local:/usr:"  Makefile	  &&
  make             &&
  prepare_install  &&
  make    install  &&
  install -v -m 0755  archive/rescan-scsi-bus.sh  /usr/sbin
}
