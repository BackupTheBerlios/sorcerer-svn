   VERSION=( "1.01" )
  CATEGORY="documentation"
 ATTRIBUTE="console perl-module new"
    SOURCE="gettext-$VERSION.tar.gz"
  HOMEPAGE="http://search.cpan.org/~pvandry/gettext-1.01"
       URL="http://search.cpan.org/CPAN/authors/id/P/PV/PVANDRY"
       REQ="perl"
  ESTIMATE="19"
     SHORT="perl--gettext provides internationalization suppport within a perl module."

build()  {
perl  Makefile.PL         &&
make  "OPTIMIZE=$CFLAGS"  &&
prepare_install           &&
make    install
}
