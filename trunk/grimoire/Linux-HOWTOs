version_year_month
  category documentation
 attribute archive_off data
      info good 20120528
      info home http://www.tldp.org/
    source http://www.ibiblio.org/pub/Linux/docs/HOWTO/Linux-HOWTOs.tar.bz2
      desc "how to accomplish standard system administrator tasks documentation"

build(){
 find  * -type f | xargs    --max-lines=256 chmod 644
 find  * -type d | xargs -r --max-lines=256 chmod 755
 mkdir   -pvm 755 $DESTDIR/usr/share/tldp/
 cp -a *          $DESTDIR/usr/share/tldp/
}

current(){
 if   [ -d $SOURCE_CACHE/Linux-HOWTOs ]
 then find $SOURCE_CACHE/Linux-HOWTOs -type f -mtime +27 | xargs -r rm -r
 fi
}
