    stable 2.8.0
   require ncurses pcre
  category game
 attribute console
    source cancan-$VERSION.tar.gz
       url http://oiskuu.googlepages.com/
  homepage http://oiskuu.googlepages.com/cancan
  estimate 20
      desc 'cancan is console MUD client.'

build(){
 make CC=gcc \
  CFLAGS="$CFLAGS -DHAVE_GETADDRINFO=0" \
  LDFLAGS="$LDFLAGS -lncurses -lpcre" \
  CDEFS='-DWITH_PCRE' &&
 prepare_install &&
 make    install PREFIX=/usr
}
