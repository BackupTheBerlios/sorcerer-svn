    stable 2.8.0
   require ncurses pcre
  category game
 attribute console
    source http://oiskuu.googlepages.com/cancan-$VERSION.tar.gz
  homepage http://oiskuu.googlepages.com/cancan
      desc 'console MUD client'

build(){
 make CC=gcc \
  CFLAGS="$CFLAGS -DHAVE_GETADDRINFO=0" \
  LDFLAGS="$LDFLAGS -lncurses -lpcre" \
  CDEFS='-DWITH_PCRE' &&
 make    install "PREFIX=$DESTDIR/usr"
}
