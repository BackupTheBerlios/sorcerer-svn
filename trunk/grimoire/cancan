# might never update

with version stable 2.8.1 2.8.0
with base    ncurses pcre
with role    game
with trait   console hidden
with source  http://sites.google.com/site/oiskuu/cancan-$VERSION.tar.gz
with info    good 20120603
with info    home http://sites.google.com/site/oiskuu/cancan
with info    cite 'console MUD client'

build(){
 make CC=gcc \
  CFLAGS="$CFLAGS -DHAVE_GETADDRINFO=0" \
  LDFLAGS="$LDFLAGS -lncurses -lpcre" \
  CDEFS='-DWITH_PCRE' &&
 mkdir -pm 755 $DESTDIR/usr/{bin,man/man6} &&
 make    install "PREFIX=$DESTDIR/usr"
}
