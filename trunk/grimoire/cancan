# might never update

   version stable 2.8.1 2.8.0
   require ncurses pcre
  category game
 attribute console hidden
    source http://sites.google.com/site/oiskuu/cancan-$VERSION.tar.gz
      info good 20120603
      info home http://sites.google.com/site/oiskuu/cancan
      desc 'console MUD client'

build(){
 make CC=gcc \
  CFLAGS="$CFLAGS -DHAVE_GETADDRINFO=0" \
  LDFLAGS="$LDFLAGS -lncurses -lpcre" \
  CDEFS='-DWITH_PCRE' &&
 mkdir -pm 755 $DESTDIR/usr/{bin,man/man6} &&
 make    install "PREFIX=$DESTDIR/usr"
}
