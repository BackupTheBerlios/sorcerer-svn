    stable 2.12.10
   require libglade mono xcb-util
      opts --enable-static=no
  category graphic
 attribute library makej multilib-concurrent x11
    source $GNOME_URL sources/gtk-sharp/${VERSION:0:4}/gtk-sharp-$VERSION.tar.bz2
      home http://gtk-sharp.sourceforge.net/
  estimate 1000
      desc '.net bindings for gnome libraries'

current(){
 case $VERSION in
 2.12.10) [ -f   /usr/lib/mono/gtk-sharp-2.0/pango-sharp.dll ] ||
          [ -f /usr/lib64/mono/gtk-sharp-2.0/pango-sharp.dll ] ;;
 esac
}
