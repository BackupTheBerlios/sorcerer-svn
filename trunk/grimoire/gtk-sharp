   version stable 2.12.10
   require libglade mono xcb-util
      opts --enable-static=no
  category graphic
 attribute gnome library makej multilib-concurrent x11
    source $GNOME_URL sources/gtk-sharp/${VERSION:0:4}/gtk-sharp-$VERSION.tar.bz2
      info home  http://gtk-sharp.sourceforge.net/
      desc '.net bindings for gnome libraries'

build(){
 case $VERSION in
  2.12.10) sed -i 's:glib/glist.h:glib.h:
                   s:glib/gslist.h:glib.h:
                   s:glib/gthread.h:glib.h:' glib/glue/*.c ;;
 esac
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
