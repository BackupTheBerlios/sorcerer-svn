if    $CERTIFICATE  ||
      !  [  -e  /etc/ssl/certs/stunnel.pem  ]
then
  rm  -f  /etc/ssl/certs/stunnel.pem          &&
  cd  tools           &&
  make               &&
  sed -i "s:CERTIFICATE=true:CERTIFICATE=false:" $SPELL_CONFIG &&
  mv stunnel.pem /etc/ssl/certs/ &&
  md5sum /etc/ssl/certs/stunnel.pem >> $MD5SUM_LOGS/$SPELL
fi
default_post_build
