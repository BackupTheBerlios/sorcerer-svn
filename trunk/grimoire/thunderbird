build(){
 # case statement to remove references to curl's deprecated header
 # that was removed from curl during version 7.21.7.

 case $VERSION in
  5.0) grep -rl "curl/types\.h" * |
       xargs -r --max-lines=256 sed -i '\,curl/types\.h,d' ;;
 esac

 default_build
}
