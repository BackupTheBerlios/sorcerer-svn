   VERSION=( "v3.6.1" "v3.5.7" )
    IGNORE="alpha"
  CATEGORY="graphic"
 ATTRIBUTE="library"
  HOMEPAGE="http://www.libtiff.org"
       URL="ftp://ftp.remotesensing.org/libtiff"
 FRESHMEAT="libtiff"
  ESTIMATE="279"
      DESC="tiff provides support for the Tag Image File Format.

tiff provides support for the Tag Image File Format (TIFF), 
a widely used format for storing image data.
"


build() {
cat  <<  EOF  >>  config.site
DIR_BIN="/usr/bin"
DIR_LIB="/usr/lib"
DIR_INC="/usr/include"
DIR_MAN="/usr/man"
DIR_HTML="/usr/doc/tiff"
GCOPTS=""
OPTIMIZER="$CFLAGS"
EOF

./configure  --noninteractive  &&
make                           &&
prepare_install                &&
make    install
}
