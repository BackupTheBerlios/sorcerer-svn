   VERSION=( "3.7.0" "v3.6.1" "v3.5.7" )
      SAFE=( "3.7.0" )
    IGNORE="alpha"
  CATEGORY="graphic"
 ATTRIBUTE="library"
    SOURCE="tiff-$VERSION.tar.gz"
       URL="ftp://ftp.remotesensing.org/libtiff"
       REQ=( "automake libtool glut zlib"
             "jpeg::--disable-jpeg:for JPEG compression" )
  HOMEPAGE="http://www.libtiff.org"
  ESTIMATE="380"
 FRESHMEAT="libtiff"
      DESC="tiff provides support for the Tag Image File Format.
tiff provides support for the Tag Image File Format (TIFF), 
a widely used format for storing image data."


build()  {
# 3.7.0 had broken included libtool, installed elf libraries without .so
  case  $VERSION  in
    3.7.0)  rm  configure;  aclocal;  automake  -acf;  autoconf;  libtoolize  --force  ;;
  esac

  default_build
}
