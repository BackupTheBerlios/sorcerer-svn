    stable 3.8.2
    secure 3.8.2
   require automake jpeg libtool zlib
  optional glut '' '' for tiffgt the OpenGL tiff rendering program

    ignore 'alpha\|beta'
  category graphic/library
 attribute console library x11
    source tiff-$VERSION.tar.gz
       url ftp://ftp.remotesensing.org/libtiff/
# Simplier requirement chains
# if jpeg compression for tiff is always enable.
      opts --enable-static=no
  homepage http://www.libtiff.org
  estimate 250
 freshmeat libtiff
      desc 'tiff provides support for the Tag Image File Format.
tiff provides support for the Tag Image File Format (TIFF),
a widely used format for storing image data.'
