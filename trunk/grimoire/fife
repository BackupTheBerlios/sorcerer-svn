# 0.3.3r2 unable to detect installed boost libraries
# 0.3.3 failed to compile

   version stable 0.3.3 0.3.3r2
   require guichan
  category graphic
 attribute library multilib-fail
#attribute multilib-concurrent
 attribute broke
    source $SOURCEFORGE_URL fife/active/src/fife-$VERSION.tar.gz
      info home http://www.unknown-horizons.org/
      info wiki http://wiki.fifengine.net/
      info last 20120315
#     info last 20111229
 conflicts FIFE
      desc 'engine for 2D realtime strategy simulation
game engine used for unknown horizons'

build(){
 case $VERSION in
  0.3.3r2) # sed -i 's:boost_system:boost_system-mt:' \
           #    build/linux2-config.py
           cp build/linux2-config.py build/linux3-config.py  ;;
 esac
 scons DESTDIR=$DESTDIR --prefix=/usr fife-python install-python
}
