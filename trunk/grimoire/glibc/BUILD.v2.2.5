  use_cross()  {
    CROSS="s:cross-compiling = no:cross-compiling = yes:"
    sed  -i  "$CROSS"  config.make
  }

  fix_glibc_install_log()  {

    for  FILE  in  $INSTALL_LOGS/glibc*;  do
      if    [  -f  $FILE  ]  &&
            !  grep  -q  -w  "/lib/ld-linux.so.2"      $FILE
      then  echo             "/lib/ld-linux.so.2"  >>  $FILE
      fi
    done

  }


  # fix_glibc_install_log

  patch -p1  <  $SCRIPT_DIR/glibc-2.2.5.patch

  LD_PRELOAD_OLD="$LD_PRELOAD"
  unset  LD_PRELOAD
  unset  LDFLAGS LTDL_LIBRARY_PATH LD_LIBRARY_PATH LD_RUN_PATH

  export    CFLAGS="${CFLAGS/-O0/}"
  export  CXXFLAGS="${CXXFLAGS/-O0/}"

  echo  "$CFLAGS"  |
  grep  -q  "\-O"  ||
  export  CFLAGS="$CFLAGS -Os"

  echo  "$CXXFLAGS"  |
  grep  -q  "\-O"    ||
  export  CXXFLAGS="$CXXFLAGS -Os"


  ./configure  --host=$BUILD                  \
               --build=$BUILD                 \
               --prefix=/opt/glibc/$VERSION   \
               --sysconfdir=/etc              \
               --enable-add-ons=linuxthreads  \
               --disable-profile              \
               --with-elf                     \
               --enable-shared                &&
  make                                        &&
  prepare_install                             &&
  mkdir  -p  /opt/glibc/$VERSION              &&
  make    install                             &&
  ldconfig  -n -N  /opt/glibc/2.2.5/lib       &&
  touch  $(  find  /opt/glibc/2.2.5/lib )
