inherit crossfire
   VERSION=( "1.6.0" "1.5.0" "1.4.0" "1.3.0" )
unset  REQ
 ATTRIBUTE="data x11"
    IGNORE="\arch\|maps\|client"
    SOURCE="crossfire/crossfire-${VERSION}.doc.tar.gz"
  EPROVIDE="crossfire,doc"
      DESC="crossfire-doc contains documentation for crossfire."


build()  {  data_install  /usr/share/crossfire/doc;  }
