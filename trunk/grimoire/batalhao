   version stable 19
   require SDL gtk+
  category game
 attribute x11
    source http://batalhao.codigolivre.org.br/files/batalhao$VERSION.tar.gz
      info vurl http://batalhao.codigolivre.org.br/downloads.html
      info home  http://batalhao.codigolivre.org.br/
      desc 'protect the city tank fighting game like NES Battle City'

build(){
USGB=/usr/share/games/batalhao
rm    -f batalhao
sed   -i "s:gfx/:$USGB/gfx/:"     recursos.h
sed   -i "s:mapas/:$USGB/mapas/:"     jogo.h
chown -R root:root  *
make &&
mkdir -p $DESTDIR{/usr/bin,$USGB} &&
cp      -r  gfx mapas    $DESTDIR/$USGB &&
install -vm 755 batalhao $DESTDIR//usr/bin
}
