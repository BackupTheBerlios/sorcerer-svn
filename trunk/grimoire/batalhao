with version stable 19
with base    SDL gtk+
with role    game
with trait   x11
with source  http://batalhao.codigolivre.org.br/files/batalhao$VERSION.tar.gz
with info    good 20120602
with info    last 20050213
with info    vurl http://batalhao.codigolivre.org.br/downloads.html
with info    home  http://batalhao.codigolivre.org.br/
with info    cite 'protect the city tank fighting game like NES Battle City'

build(){
USGB=/usr/share/games/batalhao
rm    -f batalhao
sed   -i "s:gfx/:$USGB/gfx/:"     recursos.h
sed   -i "s:mapas/:$USGB/mapas/:"     jogo.h
chown -R root:root  *
make &&
mkdir  -pvm 755 $DESTDIR{/usr/bin,$USGB} &&
cp      -r  gfx mapas    $DESTDIR/$USGB  &&
install -vm 755 batalhao $DESTDIR//usr/bin
}
