  stable 19
  CATEGORY='game'
 ATTRIBUTE='x11 new'
    SOURCE="batalhao$VERSION.tar.gz"
      VURL='http://batalhao.codigolivre.org.br/downloads.html'
       URL='http://batalhao.codigolivre.org.br/files/'
  HOMEPAGE='http://batalhao.codigolivre.org.br'
       REQ='SDL gtk+'
  ESTIMATE='6'
      DESC='batalhao is a protect the city tank fighting game like NES Battle City.'

build(){
USGB="/usr/share/games/batalhao"
rm    -f batalhao
sed   -i "s:gfx/:$USGB/gfx/:"     recursos.h
sed   -i "s:mapas/:$USGB/mapas/:"     jogo.h
chown -R root:root  *
make                            &&
prepare_install                 &&
mkdir    -p               $USGB &&
cp       -r  gfx mapas    $USGB &&
install  -vm 755 batalhao /usr/bin
}
