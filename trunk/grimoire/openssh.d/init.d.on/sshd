#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 510
# Required-Start: $network empty ssh-keygen run
# Required-Stop:  $network
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: sshd provides server for secure encrypted remote logins.
### END INIT INFO

. /lib/lsb/init-functions

only start stop restart try-restart status
pid_file /var/run/sshd.pid
server /sbin/sshd
config /etc/ssh/sshd_config

reload(){
 if   status &&       PIDS="$( pidofproc -p $PIDF $SERV )" &&
      [ -n          "$PIDS" ]
 then kill -s SIGHUP $PIDS &&
      log_success_msg "$NAME configuration reloaded"
 fi
}
