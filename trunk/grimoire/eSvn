   VERSION=( "0.6.11-1" )
  CATEGORY="development"
 ATTRIBUTE="x11 new"
    SOURCE=("esvn-${VERSION}.tar.gz")
       URL="http://esvn.umputun.com"
  HOMEPAGE="http://esvn.umputun.com"
 FRESHMEAT="eSvn"
       REQ="qt-x11-free"
  ESTIMATE="185"
      DESC="eSvn is a Qt-based GUI frontend for the Subversion revision system."

build()  {
export   QTDIR=/usr 
export INCPATH="${INCPATH} -I/usr/include/qt -I./src"  

qmake  esvn.pro                 &&
qmake  esvn-diff-wrapper.pro    &&
patch  -p1 < $SCRIPT_DIR/patch  &&
make   -f esvn.mak              &&
make   -f esvn-diff-wrapper.mak &&
prepare_install                 &&
make    install                 &&
cp esvn              /usr/bin   &&
cp esvn-diff-wrapper /usr/bin
}
