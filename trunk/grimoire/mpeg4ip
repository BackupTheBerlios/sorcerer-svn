# gzip: mpeg4ip-1.6.1.tar.gz: invalid compressed data--format violated
# The compression on the source tarball is broken?

  stable       1.6
unstable 1.6.1 1.6
    IGNORE="test\|pre"
  CATEGORY='audio/player video/player'
ATTRIBUTE='library'
    SOURCE="mpeg4ip/mpeg4ip-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://mpeg4ip.sourceforge.net'
case  $VERSION  in
  1.6*)     USE_GCC="gcc-v4.0"  ;;
  1.5.0.1)  USE_GCC="gcc-v4.0"  ;;
esac
       REQ=( "ffmpeg gtk+ libmpeg2"
             "XviD:::for mpeg-4 video encoding"
             "a52dec:::for AC3 mpeg deconding and mpeg2 transport streams"
             "faac:::for aac encoding, need for encoding mpeg-4 and H.264"
             "lame:::for mp3 encoding"
             "libid3tag:::for id3 tags for mp3 files"
             "nasm:::for decoding or encoding at the best frame rates on x86"
             "x264:::for H.264 video encoding" )
  EPROVIDE="libmp4v2"
 CONFLICTS="faad2"
  ESTIMATE='16000'
      DESC="mpeg4ip provides a system to explore streaming multimedia. 
The package includes many existing open source packages and 
the glue to integrate them together. This is a tool for 
streaming video and audio that is standards-oriented and free 
from proprietary protocols and extensions.
Provided are a live MPEG-4/H.261/MPEG-2/H.263 MP3/AAC/AMR 
broadcaster and file recorder, command line utilities such 
as an MP4 file creator and hinter, and an player that can 
both stream and playback from local file."

build() {
  grep  -lr  "\-Werror"  *  |  xargs  -r --max-lines=256  sed  -i  "s:-Werror::"
  ./bootstrap           \
  --prefix=/usr         \
  --sysconfdir=/etc     \
  --localstatedir=/var  \
  --enable-shared=yes   \
  $OPTS                 &&
  make                  &&
  prepare_install       &&
  make    install
}
