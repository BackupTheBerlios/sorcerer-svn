   version stable 4.3.4
  category administration
 attribute kde4 archive_off solo
      desc 'Redirects kde configuration into /etc'

build(){
 link(){ mkdir -pvm 755 $DESTDIR/$2; ln -s $2 $DESTDIR/$1; }

 mkdir -pvm 755 $DESTDIR/opt/kde4/{share,lib,lib64}
 link /opt/kde4/share/config      /etc/kde4.config
 link /opt/kde4/share/config.kcfg /etc/kde4.config.kcfg
 link /opt/kde4/etc               /etc
}
