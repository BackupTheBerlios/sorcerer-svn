   VERSION=( "0.8.0" )
  CATEGORY="library video"
 ATTRIBUTE="new library"
    SOURCE=("libmatroska-${VERSION}.tar.bz2" )
       URL=("http://dl.matroska.org/downloads/libmatroska")
REPOSITORY=("command to execute before anything else is done like login"
            "co https://svn.matroska.org/svn/matroska/trunk/libmatroska"
            "up https://svn.matroska.org/svn/matroska/trunk/libmatroska")
 FRESHMEAT=""
  HOMEPAGE="http://dl.matroska.org/downloads/libmatroska/"
#this is an unofficial variable, put here only what is required to build
#not what is required to run"
 BUILD_REQ=""
       REQ=("$BUILD_REQ libebml"
           )
  ESTIMATE=""
      DESC="libmatroska is a C++ libary to parse Matroska files (.mkv and .mka)"


build()  {
  cd make/linux &&
  sed -i "s:prefix=/usr/local:prefix=/usr/:g" Makefile &&
  make all        &&
  prepare_install &&
  make install 
}

