    stable 0.8.1 0.8.0
   require libebml
  category video
 attribute library
    source http://dl.matroska.org/downloads/libmatroska/libmatroska-$VERSION.tar.bz2
  homepage http://dl.matroska.org/downloads/libmatroska/
      opts --enable-static=no
  estimate 100
      desc 'libmatroska is a C++ libary to parse Matroska files (.mkv and .mka)'

build(){
cd make/linux
make        all prefix=/usr &&
prepare_install             &&
make    install prefix=/usr
}
