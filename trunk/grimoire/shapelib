   VERSION=( 1.2.10 )
  CATEGORY='graphic'
 ATTRIBUTE='library x11 new'
    SOURCE="shapelib-$VERSION.tar.gz"
       URL='http://shapelib.maptools.org/dl/'
  HOMEPAGE='http://shapelib.maptools.org/'
       REQ=''
  ESTIMATE='60'
      DESC="shapefile is a library for reading and writing ESRI Shapefiles 
and their related DBF files.
All geometry types are supported, with robust DBF support.
Shapelib is widely used for commercial and free projects.
Shapelib includes command line utilities for dumping, subsetting,
clipping, shifting, scaling, and reprojecting shapefiles."

build() {
sed  -i  "s:/usr/local:/usr:"  Makefile
make             &&
make    lib      &&
prepare_install  &&
make    lib_install
}
