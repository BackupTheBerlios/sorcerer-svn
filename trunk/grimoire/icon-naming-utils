# Specifying ImageMagick or librsvg creates recursive requirement loop

    stable 0.8.90 0.8.7
   require perl--XML-Simple pkgconfig
  category graphic/icon
 attribute library
    source http://tango.freedesktop.org/releases/icon-naming-utils-$VERSION.tar.gz
      info home  http://tango.freedesktop.org/Standard_Icon_Naming_Specification
  estimate 30
      desc 'library implements proposed icon naming specification'

build(){
 sed -i 's:\(pkgconfigdir = $(\)datadir\()/pkgconfig\):\1libdir\2:' Makefile.in
 default_build
}
