  stable 0.8.7 0.8.6 0.8.5 0.8.2 0.8.1
  CATEGORY='graphic/icon'
 ATTRIBUTE='library'
    SOURCE="icon-naming-utils-$VERSION.tar.gz"
       URL='http://tango.freedesktop.org/releases/'
  HOMEPAGE='http://tango.freedesktop.org/Standard_Icon_Naming_Specification'
#      REQ='ImageMagick perl--XML-Simple librsvg pkgconfig'
       REQ='perl--XML-Simple pkgconfig'
# Specifying ImageMagick or librsvg creates recursive requirement loop
  ESTIMATE='30'
      DESC="icon-naming-utils library implements proposed icon naming specification."

build(){
 sed -i 's:\(pkgconfigdir = $(\)datadir\()/pkgconfig\):\1libdir\2:' Makefile.in

 default_build
}
