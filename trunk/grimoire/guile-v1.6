    stable 1.6.8 1.6.7 1.6.6 1.6.5 1.6.4 1.6.3 1.6.2 1.6.0 1.8.0
   require gmp libtool ncurses readline
  category development
 attribute console
       url $GNU_URL
    source guile/guile-$VERSION.tar.gz
  homepage http://www.gnu.org/software/guile
  estimate 2100
      desc 'guile-v1.6 is a portable, embeddable Scheme implementation.
This installs a somewhat older guile avaialble in /opt/guile/v1.6'

build(){
 ./configure             \
 --build=$BUILD          \
 --prefix=/opt/guile/1.6 \
 --sysconfdir=/etc       \
 --localstatedir=/var    \
 $OPTS                   &&
 make                    &&
 prepare_install         &&
 make    install
}
