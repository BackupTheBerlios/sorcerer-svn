   VERSION=( "1.6.8" "1.6.7" "1.6.6" "1.6.5" "1.6.4" "1.6.3" "1.6.2" "1.6.0" "1.8.0" )
    IGNORE="gnome-platform\|^1\.8\."
  CATEGORY="development"
 ATTRIBUTE="console"
    SOURCE="guile/guile-$VERSION.tar.gz"
  HOMEPAGE="http://www.gnu.org/software/guile"
       URL="$GNU_URL"
       REQ="gmp libtool ncurses readline"
  ESTIMATE="2125"
      DESC="guile-v1.6 is a portable, embeddable Scheme implementation.
This installs a somewhat older guile avaialble in /opt/guile/v1.6"

build()  {
  ./configure              \
  --build=$BUILD           \
  --prefix=/opt/guile/1.6  \
  --sysconfdir=/etc        \
  --localstatedir=/var     \
  $OPTS                    &&
  make                     &&
  prepare_install          &&
  make    install
}
