    stable 1.6.8
   require gmp libtool ncurses readline
  category development
 attribute console
    source $GNU_URL guile/guile-$VERSION.tar.gz
      home http://www.gnu.org/software/guile/
      docs http://www.gnu.org/software/guile/docs/docs.html
#     mail http://www.gnu.org/software/guile/mail/mail.html
  estimate 2100
      desc 'portable, embeddable Scheme implementation
This installs a somewhat older guile avaialble in /opt/guile/v1.6'

build(){
 ./configure              \
  --prefix=/opt/guile/1.6 \
  --sysconfdir=/etc       \
  --localstatedir=/var    \
  $OPTS &&
 make  &&
 make install DESTDIR=$DESTDIR
}
