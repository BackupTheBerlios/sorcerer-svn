   version stable 1.6.44 1.6.42 1.6.41 1.6.40
   version unstable 1.7.25
   require MesaLib bzip2 libXcursor libXft libXrandr libpng tiff
      opts --enable-static=no
  category game utility/editor
 attribute library makej multilib-dual x11
    source http://www.fox-toolkit.org/ftp/fox-$VERSION.tar.gz
      info home  http://www.fox-toolkit.org/
      info docs  http://www.fox-toolkit.org/doc.html
      info mail  'http://www.fox-toolkit.org/home.html#MAILINGLIST'
  estimate 3000
      desc 'tookit for GUI development
It also provides the X11 text editor called adie.'

build(){
 ./configure           \
  --prefix=/usr        \
  --sysconfdir=/etc    \
  --localstatedir=/var \
  --enable-release     \
  $OPTS                &&
 make "CXXFLAGS=$CXXFLAGS" &&
 make install "DESTDIR=$DESTDIR"
}
