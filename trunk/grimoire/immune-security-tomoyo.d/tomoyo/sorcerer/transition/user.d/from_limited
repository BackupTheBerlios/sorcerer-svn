# Entry into
# <kernel> /domain/user
# <kernel> /+/*/domain/user
# permitted from
# <kernel> /domain/user
# <kernel> /+/*/domain/user

confirm(){
 [ -n "$(
  /sbin/tomoyo-pstree |
  /bin/sed "\,($PPID) <kernel> /domain/user$,p
            \,($PPID) <kernel> /+/[^/]*/domain/user$,p;d" )" ]
}

if    confirm; then
 if   [ -n "$1" ]
 then PROG="$1"; shift 1; exec $PROG "$@"
 else exec /bin/bash -
 fi
fi
