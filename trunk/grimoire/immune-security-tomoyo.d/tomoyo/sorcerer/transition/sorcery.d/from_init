# Entry into
# <kernel> /domain/sorcery
# <kernel> /media/root/domain/sorcery
# permitted from
# <kernel> /sbin/init

confirm(){
 [ -n "$(
  /sbin/tomoyo-pstree |
  /bin/sed "\,($PPID) <kernel> /sbin/init$,p;d" )" ]
}

if    confirm; then
 if   [ -n "$1" ]
 then PROG="$1"; shift 1; exec $PROG "$@"
 else exec /bin/bash -
 fi
fi
