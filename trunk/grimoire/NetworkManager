    stable 0.8.2 0.8.1 0.8
   require libnl nss polkit ppp udev wireless_tools wpa_supplicant
  category development
 attribute gnome new
    source $GNOME_URL sources/NetworkManager/${VERSION:0:3}/NetworkManager-$VERSION.tar.bz2
  homepage http://www.gnome.org
      opts --with-distro=gentoo
  estimate 1900
      desc 'GUI for wireless networking network selection'

