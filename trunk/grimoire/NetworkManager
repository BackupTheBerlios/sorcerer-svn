   version stable 0.8.3.999 0.8.996 0.8.2 0.8.1 0.8
   require libnl nss polkit ppp udev util-linux wireless_tools wpa_supplicant
      opts --with-distro=gentoo --disable-wimax
  category development
 attribute gnome library makej multilib-concurrent
    source $GNOME_URL sources/NetworkManager/${VERSION:0:3}/NetworkManager-$VERSION.tar.bz2
      info home  http://www.gnome.org/
      desc 'GUI for wireless networking network selection'

build(){
 case $VERSION in
  0.8.996) sed -i 's:-Wno-unused-but-set-variable::
                     s:-Werror::' configure ;;
  0.8.3.999) sed -i 's:-Wno-unused-but-set-variable::
                     s:-Werror::' configure ;;
  0.8.1) sed -i 's:-Werror::' configure ;;
 esac
 default_build
}
