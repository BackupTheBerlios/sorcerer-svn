# Neither 0.6.5 nor 0.6.4 are compiling
  stable 0.6.5 0.6.4 0.6.3
  CATEGORY='development'
 ATTRIBUTE='gnome new broke'
    SOURCE="sources/NetworkManager/${VERSION:0:3}/NetworkManager-$VERSION.tar.bz2"
  HOMEPAGE='http://www.gnome.org'
       URL="$GNOME_URL"
# dhcdbd requirement departs with NetworkManager 0.7.x
       REQ='dhcdbd dhcpcd libnl wireless_tools wpa_supplicant'
      OPTS='--with-distro=gentoo'
  ESTIMATE='156'
      DESC='NetworkManager provides a GUI for wireless networking network selection.'

build(){
 case $VERSION in
  0.6.4) patch -p1 < $SCRIPT_DIR/NetworkManager-0.6.4.patch ;;
 esac
 default_build
}
