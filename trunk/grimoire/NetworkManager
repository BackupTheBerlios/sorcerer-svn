       url $GNOME_URL
    source sources/NetworkManager/${VERSION:0:3}/NetworkManager-$VERSION.tar.bz2
  homepage http://www.gnome.org
# dhcdbd requirement departs with NetworkManager 0.7.x
      opts --with-distro=gentoo
  estimate 156
      desc 'NetworkManager provides a GUI for wireless networking network selection.'

