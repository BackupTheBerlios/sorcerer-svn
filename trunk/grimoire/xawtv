# recode does not compile on x86_64

    stable 3.95 3.94 3.93 3.92 3.91 3.90
   require jpeg libFS libpng libdv ncurses tv-fonts
  optional aalib   --enable-aa    --disable-aa    for ascii output
  optional lesstif --enable-motif --disable-motif for lesstif graphic widgets
  optional lirc    --enable-lirc  ''              to enable lirc remote control support
  optional zvbi    ''             ''              a video caputer library

  category video/television
 attribute x11
    source xawtv-$VERSION.tar.gz
       url http://dl.bytesex.org/releases/xawtv/
  homepage http://bytesex.org/xawtv/
      opts --disable-quicktime
 conflicts libquicktime
# xawtv wil not compile with libquicktime installed.
# xawtv requires an obsolete libquicktime
      opts --x-libraries=/usr/lib
case $VERSION in
 3.95) case $HOSTTYPE in
        x86_64) OPTS+=64 ;;
       esac ;;
esac
  estimate 100
      desc 'xawtv is a tv program for use with bttv drivers or video4linux.
It also contains various command-line 
utilities for grabbing images and AVI movies, 
tuning in TV stations, etc.'


build(){
 case $HOSTTYPE in
  i?86) grep -q '^flags.*mmx' /proc/cpuinfo &&
        OPTS+=' --enable-mmx' ;;
 esac
 default_build
}
