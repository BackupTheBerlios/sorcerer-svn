   version   stable 3.6.0 3.4.2
#  version unstable 3.5.4
   require GConf gtk+-3.0
      opts --disable-rpath
  category network/web
 attribute gnome library makej multilib-concurrent
    source   stable $GNOME_URL sources/gtksourceview/${VERSION:0:3}/gtksourceview-$VERSION.tar.xz
    source unstable $GNOME_URL sources/gtksourceview/${VERSION:0:3}/gtksourceview-$VERSION.tar.xz
      info last 20120929
      info home http://www.gnome.org
      desc 'adds source highlighting to GtkTextView
gtksourceview is a text widget that extends the
standard gtk+ 2.x text widget GtkTextView.
It improves GtkTextView by implementing syntax highlighting
and other features typical of a source editor.'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
