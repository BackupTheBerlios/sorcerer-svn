   VERSION=( "1.0.1" "1.0.0" "0.7.1" "0.7.0" "0.6.0" "0.2.1" )
  CATEGORY="web"
 ATTRIBUTE="concurrent gnome library x11"
    SOURCE="sources/gtksourceview/${VERSION:0:3}/gtksourceview-$VERSION"
       URL="$GNOME_URL"
  HOMEPAGE="http://www.gnome.org"
       REQ="gtk+ libart_lgpl libgnomeprint libxml2"
  ESTIMATE="98"
     SHORT="gtksourceview adds source highlighting to GtkTextView."
stream << EOF
gtksourceview is a text widget that extends the 
standard gtk+ 2.x text widget GtkTextView.
It improves GtkTextView by implementing syntax highlighting 
and other features typical of a source editor.
EOF
