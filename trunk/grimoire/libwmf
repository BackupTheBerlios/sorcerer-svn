# 0.2.8.4 may not be safe
   version stable 0.2.8.4
   version secure 0.2.8.4
   require gtk+
      opts --enable-static=no
  category utility/editor
 attribute library multilib-concurrent x11
#attribute makej
    source $SOURCEFORGE_URL wvware/libwmf/$VERSION/libwmf-$VERSION.tar.gz
      info home http://wvware.sourceforge.net
      desc 'library for converting Microsoft WMF format
libwmf is a library to convert Microsoft WMF
(Windows Metafile) format to something useful.
Bindings exist to convert them to onscreen X
graphics, to the png format, and to fig and eps.'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then opts --x-libraries=/usr/lib64
 else opts --x-libraries=/usr/lib
 fi
 default_build
}
