# Do not append the .src to version or filename
# it is just for a zip file.

# broke because vbisam is broke

   version stable 0.66
   require db ncurses vbisam
  category development/compiler
 attribute console
 attribute broke
    source $SOURCEFORGE_URL tiny-cobol/tiny-cobol/${VERSION:0:4}/tinycobol-$VERSION.tar.bz2
      desc 'Cobol compiler for gcc
tinycobol is an effort to bring a free COBOL compiler to Linux.
It generates GNU assembler for the i386 Linux platform.
A executable binary is then created using the GNU assembler and linker.'

build(){
OPT_SEDITS="s/-Wall/-Wall $CFLAGS/"

sed -i "$OPT_SEDITS" lib/Makefile.in cobpp/Makefile.in compiler/Makefile.in

./configure \
--prefix=/usr \
--enable-debug-all \
$OPTS &&
make &&
make install DESTDIR=$DESTDIR
}
