   version stable 1.3
 conflicts at76_usb-firmware
   require udev
  category kernel network wireless
 attribute firmware
    source http://thekelleys.org.uk/atmel/atmel-firmware-$VERSION.tar.gz
      info home  http://thekelleys.org.uk/atmel/
      desc 'firmware for atmel at76c50x cards
Even with current firmware;
kernel drivers for these adapters stopped working
after linux version 2.6.30.10'

build(){
 [ -f README ] &&
 mkdir -vpm 755 $DESTDIR/lib/firmware &&
 find * -type f -name \*.bin |
 xargs --max-lines=256 install -t $DESTDIR/lib/firmware -m 644
}
