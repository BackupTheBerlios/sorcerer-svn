#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 510
# Required-Start: sensors run
# Required-Stop: syslog kill 
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: sensord is lm_sensors hardware health monitoring daemon
### END INIT INFO

. /lib/lsb/init-functions

only start stop restart try-restart status
pid_file /var/run/sensord.pid
server /usr/bin/sensord
config /usr/bin/sensord

# Configuration of sensord

SCAN=1m		# interval between scanning for sensor alarms
LAG=24h		# interval between logging  all sensor readings

# new values for SCAN and LAG can be specified in 
#    /etc/sensord.conf

if   [ -f /etc/sensord.conf ]
then    . /etc/sensord.conf
fi

OPTS="-i $SCAN -l $LAG"
