    version stable 2.0
   category game development/emulator
  attribute archive_off data
     source $SOURCEFORGE_URL scummvm/extras/Drascula_%20The%20Vampire%20Strikes%20Back/drascula-audio-$VERSION.zip
       info good 20120716
       info last 20100514
       desc 'Drascula: The Vampire Strikes Back, music addon, ogg format'

build(){
 chmod -R 644 */*
 mkdir -pvm 755 $DESTDIR/usr/share/games/drascula &&
 cp    -av *    $DESTDIR/usr/share/games/drascula/
}
