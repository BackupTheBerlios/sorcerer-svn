   version stable 39.31.5.1
   require udev
  category kernel network
 attribute firmware
    source http://intellinuxwireless.org/iwlwifi/downloads/iwlwifi-100-ucode-$VERSION.tgz
      info home  http://intellinuxwireless.org/
      info vurl "http://intellinuxwireless.org/?n=downloads"
      desc 'firmware for Intel Centrino Wireless-N 100'

build(){
 mkdir  -pvm 755         $DESTDIR/lib/firmware &&
 install -vm 644 *.ucode $DESTDIR/lib/firmware/
}
