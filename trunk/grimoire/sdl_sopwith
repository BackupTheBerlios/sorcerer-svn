   VERSION=( "1.7.1" "1.6.0" "1.5.0" "1.4.0" )
    IGNORE="^1\.10"
  CATEGORY="game"
 ATTRIBUTE="x11"
    SOURCE="sdl-sopwith/sdl_sopwith-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://sdl-sopwith.sourceforge.net"
       REQ="SDL gtk+"
case  $VERSION  in
  1.7.1)  USE_GCC="gcc-v3.4"  ;;
esac
  ESTIMATE="150"
      DESC="sdl_sopwith is a port of the classic flying game Sopwith
SDL Sopwith is a port of the classic flying game
Sopwith to modern operating systems and toolkits.
It was originally a port to the LibSDL
toolkit, but there is now a GTK+ version also."

build()  {
sed  -i  "s:/bin:/games:g"  src/Makefile.in
default_build
}
