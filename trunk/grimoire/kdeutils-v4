# 4.3.0 requires konq_dndpopupmenuplugin.h provided by kdebase-v4
   inherit kde-v4
   require gmp kdebase-v4 libarchive libzip qca 
  optional tp_smapi   '' ''          for klaptopdaemon to support thinkpads
  switch '' --exclude-arc            for archiving tool
  switch '' --exclude-kcal           for scientific caluclator
  switch '' --exclude-kcharselect    for selecting chracters from fonts
  switch '' --exclude-kdf            for df output with bar graphs
  switch '' --exclude-kfloppy        for formatting floppy disks
  switch '' --exclude-kgpg           for GPG frontend
  switch '' --exclude-ktimer         for cron like program
  switch '' --exclude-kwallet        for wallet management tool
  switch '' --exclude-okteta         for binary file editor
  switch '' --exclude-printer-applet for printer system tray tools
  switch '' --exclude-superkaramba   for karamba theme engine with python scripting
  switch '' --exclude-sweeper        for cleaning files from system
  category utility/math utility/editor
  estimate 2200
      desc 'Desktop tools, calculator, editor'

build(){
 for    DIR in $OPTS; do
  case $DIR in
   --exclude-*) rm -frv "${DIR/--exclude-/}" ;;
  esac
 done

 kde_build
}
