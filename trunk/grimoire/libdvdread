   version stable 4.1.3 0.9.7 0.9.6
   require automake libtool libdvdcss
      opts --enable-static=no
  category video
 attribute library makej
    source http://www1.mplayerhq.hu/MPlayer/releases/dvdnav/libdvdread-$VERSION.tar.bz2
#   source http://www.dtek.chalmers.se/groups/dvd/dist/libdvdread-$VERSION.tar.gz
      info good 20120619
      info last 20080907 
      info home http://dvd.sourceforge.net/
      desc 'API for reading DVD video disks
It provides the functionality that is required to access many DVDs.
It parses IFO files, reads NAV-blocks, and performs CSS
authentication and descrambling.'

build(){
 mkdir bin
 ln -s /usr/bin/aclocal bin/aclocal-1.11
 ln -s /usr/bin/automake bin/automake-1.11
 local  PATH="$PWD/bin:$PATH"
 export PATH
 autoreconf -if
 default_build
}
