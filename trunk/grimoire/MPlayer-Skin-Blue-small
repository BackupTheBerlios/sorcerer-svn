   version stable 1.5 1.4
  category video/dvd video/player
 attribute data
    source $MPLAYER_URL skins/${SPELL:13}-$VERSION.tar.bz2
   provide MPlayer-Skin

build(){
 BASE=$( basename $BUILD_DIR )
 SKIN="$DESTDIR/usr/share/mplayer/skins/$BASE"
 chmod a+r *
 mkdir -p    $SKIN
 cp    -Rv * $SKIN
}
