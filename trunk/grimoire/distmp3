    stable 0.1.9.ds1
   require perl
  category audio/editor
 attribute console client server
    source http://ftp.debian.org/debian/pool/main/d/distmp3/distmp3_$VERSION.orig.tar.gz
      desc 'distmp3 is a client and deamon for distributed mp3 encoding
distmp3 is a client and a daemon
(both written in perl)
for distributed mp3-encoding across
multiple hosts on a network.'


build(){
[ -f distmp3 ]  &&
prepare_install &&
install -vm 775 distmp3host  /usr/sbin/     &&
install -vm 775 distmp3      /usr/bin/      &&
install -vm 644 *1           /usr/man/man1/ &&
mkdir   -vp                  /etc/distmp3   &&
install -vm 644 distmp3.conf /etc/distmp3/
}
