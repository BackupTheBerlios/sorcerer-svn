   VERSION=( 0.1.9.ds1 )
  CATEGORY='audio/editor'
 ATTRIBUTE='console client server'
    SOURCE="distmp3_$VERSION.orig.tar.gz"
       URL='http://ftp.debian.org/debian/pool/main/d/distmp3/'
  HOMEPAGE=''
#    SOURCE="distmp3-$VERSION.tar.gz"
#      URL='http://wlug.westbo.se/medlprog/'
# HOMEPAGE='http://wlug.westbo.se/medlprog/medlprog.html/'
       REQ='perl'
      DESC="distmp3 is a client and deamon for distributed mp3 encoding
distmp3 is a client and a daemon
(both written in perl)
for distributed mp3-encoding across
multiple hosts on a network."


build() {
[  -f  distmp3  ]                              &&
prepare_install                                &&
set      -x                                    &&
install  -m 775  distmp3host   /usr/sbin/      &&
install  -m 775  distmp3       /usr/bin/       &&
install  -m 644  *1            /usr/man/man1/  &&
mkdir    -p                    /etc/distmp3    &&
install  -m 644  distmp3.conf  /etc/distmp3/   &&
set      +x
}
