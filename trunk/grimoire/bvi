   VERSION=( 1.3.2 1.3.1 )
    IGNORE="ew"
  CATEGORY='utility/editor'
 ATTRIBUTE='console'
    SOURCE="bvi/bvi-$VERSION.src.tar.gz"
       URL="$SOURCEFORGE_URL"
       REQ='ncurses'
  HOMEPAGE='http://bvi.sourceforge.net'
  ESTIMATE='17'
      DESC="bvi is an editor for binary files using common vi commands.
It uses commands similar to the commands of vi with some 
changes and extensions dependent of their different tasks."


build() {
sed  -i  "s:ncurses/term.h:term.h:"  bmore.h
default_build
}
