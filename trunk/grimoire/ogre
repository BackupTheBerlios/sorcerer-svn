    VERSION=( "v0-12-3" "v0-12-1" "v0-12-0" "v0.11.0" "0.10.0" )
#   VERSION=( "linux_osx-v0-15-1" "v0-12-3" "v0-12-1" "v0-12-0" "v0.11.0" "0.10.0" )
