# overwrites parts of libv4l
# not broke, but fails compilation of sane-backends

# 0.8.6 failed compilation

   version stable 0.8.6 0.8.5 0.8.4 0.8.3
   require jpeg libv4l
  category graphic
 attribute library makej multilib-dual x11
 attribute broke
    source http://linuxtv.org/downloads/v4l-utils/v4l-utils-$VERSION.tar.bz2
      info last 20120211
      info home http://linuxtv.org
      desc 'utilities for video for linux'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then make install PREFIX=/usr LIBDIR=/usr/lib64 "DESTDIR=$DESTDIR"
 else make install PREFIX=/usr LIBDIR=/usr/lib   "DESTDIR=$DESTDIR"
 fi
}
