    stable 2.4
      opts --enable-static=no
case $HOSTTYPE in
 x86_64) opts --libdir=/lib64 ;;
      *) opts --libdir=/lib ;;
esac
  category security/encryption
 attribute library
case $MACHTYPE in
 *-uclibc)
 attribute broke ;;
esac
    source http://ftp.debian.org/debian/pool/main/libx/libxcrypt/libxcrypt_$VERSION.orig.tar.gz
# homepage 
  estimate 250
      desc 'libcrypt replacement that supports DES, MD5, and blowfish encrypted passwords'

current(){
 case $VERSION in
  2.4) [ -f /lib/libxcrypt.so.1.2.4 ] ||
       [ -f /lib64/libxcrypt.so.1.2.4 ] ;;
 esac
}
