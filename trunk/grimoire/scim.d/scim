if (( UID > 1023 )); then
 export XMODIFIERS=@im=SCIM
 export GTK_IM_MODULE=scim
 export QT_IM_MODULE=scim
 export XIM_PROGRAM="scim -d"
 if [ -n "$DISPLAY" ] &&
  ! [ -S /tmp/scim-socket-frontend-$USER ]; then
  if ! [ -d  ~/.scim ]; then
   mkdir     ~/.scim
   echo -n > ~/.scim/log
   chmod 600 ~/.scim/log
  fi
  scim -d &> ~/.scim/log
 fi
fi
