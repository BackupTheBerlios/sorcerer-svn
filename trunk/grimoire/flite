 attribute broke
    source http://www.speech.cs.cmu.edu/flite/packed/flite-${VERSION:0:3}/flite-$VERSION.tar.gz
  homepage http://www.speech.cs.cmu.edu/flite
  estimate 500
      desc 'flite is a small fast run time speech synthesis engine.'

build(){
install_say_time(){
 STIME=/usr/bin/say_time
 echo -e "#!/bin/bash\nflite_time \$( date +%R )" > $STIME
 chmod 755 $STIME
}


./configure              \
--build=$BUILD           \
--prefix=/usr            \
--sysconfdir=/etc        \
--localstatedir=/var     \
--enable-shared          \
--with-vox=cmu_us_kal16  \
$OPTS                    &&
make                     &&
prepare_install          &&
make    install          &&
        install_say_time
}
