build() {
install_say_time()  {
  STIME=/usr/bin/say_time
  echo  -e  "#!/bin/bash\nflite_time \$( date +%R )"  >  $STIME
  chmod  0755  $STIME
}


./configure              \
--build=$BUILD           \
--prefix=/usr            \
--sysconfdir=/etc        \
--localstatedir=/var     \
--enable-shared          \
--with-vox=cmu_us_kal16  \
$OPTS                    &&
make                     &&
prepare_install          &&
make    install          &&
        install_say_time
}
