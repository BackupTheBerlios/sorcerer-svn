    stable 20100501 20090622 20090408 20090224 20081224
   require Python libXi libxkbui
  FVERSION=2.3.12
  category font/editor utility/editor
 attribute x11
case $VERSION in
 20100501)
    source $SOURCEFORGE_URL fontforge/fontforge-source/fontforge_full-$VERSION.tar.bz2 ;;
 20090923)
    source $SOURCEFORGE_URL fontforge/fontforge-source/fontforge_full-$VERSION.tar.bz2 ;;
        *)
    source $SOURCEFORGE_URL fontforge/fontforge-source/oldReleases/$VERSION/fontforge_full-$VERSION.tar.bz2 ;;
esac
    source $SOURCEFORGE_URL freetype/freetype2/$FVERSION/freetype-$FVERSION.tar.bz2
  homepage http://fontforge.sourceforge.net/
  estimate 900
      desc 'outline font editor
Create your own Postscript, TrueType, OpenType, CID-keyed,
multi-master, CFF, SVG, and bitmap (BDF) fonts, or edit existing ones.
It also lets you convert one format to another, and has support for
many Macintosh font formats.'

build(){
case $VERSION in
 20100501) sed -i '1i#define PyBytes_Decode PyString_Decode' fontforge/python.c ;;
# fontforge/ffpython.h ;;
esac
 OPTS+=' --with-freetype-src=$PWD/freetype-$FVERSION'
 default_build
}
