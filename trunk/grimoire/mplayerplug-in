# not compatible with firefox 3.0 ?

    stable 3.55 3.50 3.45 3.40 3.35 3.31 3.30
   require MPlayer mozilla
  category network/web video/player
 attribute seamonkey-plugin x11 broke
       url $SOURCEFORGE_URL
    source mplayerplug-in/mplayerplug-in-$VERSION.tar.gz
  homepage http://mplayerplug-in.sourceforge.net
  estimate 700
      desc 'mplayerplug-in provides a browser plugin to play videos from websites.'

build(){
 make_install(){
  install -m 755 -o root -g root mplayerplug-in.so  /usr/lib/mozilla/plugins
  install -m 755 -o root -g root Source/nsIScriptableMplayerPlugin.xpt /usr/lib/mozilla/components/mplayerplug-in.xpt
 }

 CXXFLAGS+=' -I/usr/include/mozilla'
   CFLAGS+=' -I/usr/include/mozilla'
  LDFLAGS+=' -Wl,-rpath,/usr/lib/mozilla -Wl,-rpath-link,/usr/lib/mozilla'

 ./configure          \
 --prefix=/usr        \
 --sysconfdir=/etc    \
 --localstatedir=/var \
 $OPTS                &&
 make                 &&
 prepare_install      &&
    make_install
}
