# not compatible with firefox 3.0 ?

   version stable 3.55 3.50 3.45 3.40 3.35 3.31 3.30
   require MPlayer firefox
  category network/web video/player
 attribute seamonkey-plugin x11 broke
    source $SOURCEFORGE_URL mplayerplug-in/mplayerplug-in/v$VERSION/mplayerplug-in-$VERSION.tar.gz
  homepage http://mplayerplug-in.sourceforge.net
      desc 'browser plugin to play videos from websites'

build(){
 make_install(){
  mkdir -p $DESTDIR/usr/lib/mozilla/{plugins,components}
  install -m 755 -o root -g root mplayerplug-in.so  $DESTDIR/usr/lib/mozilla/plugins
  install -m 755 -o root -g root Source/nsIScriptableMplayerPlugin.xpt $DESTDIR/usr/lib/mozilla/components/mplayerplug-in.xpt
 }

 CXXFLAGS+=' -I/usr/include/mozilla'
   CFLAGS+=' -I/usr/include/mozilla'
  LDFLAGS+=' -Wl,-rpath,/usr/lib/mozilla -Wl,-rpath-link,/usr/lib/mozilla'

 ./configure \
 --prefix=/usr \
 --sysconfdir=/etc \
 --localstatedir=/var \
 $OPTS &&
 make  &&
 make_install
}
