# 3.50 has an odd compile error
#  VERSION=( 3.50 3.45 3.40 3.35 3.31 3.30 )
   VERSION=(      3.45 3.40 3.35 3.31 3.30 )
    IGNORE='pre'
  CATEGORY='network/web video/player'
 ATTRIBUTE='seamonkey-plugin x11'
    SOURCE="mplayerplug-in/mplayerplug-in-$VERSION.tar.gz"
#   SOURCE="mplayerplug-in/mplayerplug-in_v${VERSION}.tar.gz"
  HOMEPAGE='http://mplayerplug-in.sourceforge.net'
       URL="$SOURCEFORGE_URL"
       REQ='MPlayer mozilla'
  ESTIMATE='740'
      DESC='mplayerplug-in provides a browser plugin to play videos from websites.'

build()  {
  make_install()  {
    install  -m 0755  -o root  -g root  mplayerplug-in.so   /usr/lib/mozilla/plugins
    install  -m 0755  -o root  -g root  Source/nsIScriptableMplayerPlugin.xpt  /usr/lib/mozilla/components/mplayerplug-in.xpt
  }

  CXXFLAGS=+' -I/usr/include/mozilla'
    CFLAGS+=' -I/usr/include/mozilla'
  export  LDFLAGS+=' -Wl,-rpath,/usr/lib/mozilla -Wl,-rpath-link,/usr/lib/mozilla'

  ./configure            \
  --build=$BUILD         \
  --prefix=/usr          \
  --sysconfdir=/etc      \
  --localstatedir=/var   \
  $OPTS                  &&
  make                   &&
  prepare_install        &&
     make_install
}
