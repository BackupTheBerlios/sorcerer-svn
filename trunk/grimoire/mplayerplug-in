   VERSION=( "3.25" "3.21" "3.20" "3.17" "3.16" "3.15" "3.11" "3.10" )
    IGNORE="pre"
  CATEGORY="network/web video/player"
 ATTRIBUTE="x11 broken"
# This is marked broken only because MPlayer is not compiling
# and marked broken
    SOURCE="mplayerplug-in/mplayerplug-in-$VERSION.tar.gz"
#   SOURCE="mplayerplug-in/mplayerplug-in_v${VERSION}.tar.gz"
  HOMEPAGE="http://mplayerplug-in.sourceforge.net"
       URL="$SOURCEFORGE_URL"
       REQ="MPlayer seamonkey"
  ESTIMATE="51"
      DESC="mplayerplug-in provides a browser plugin to play videos from websites."

build()  {
  make_install()  {
    install  -m 0755  -o root  -g root  mplayerplug-in.so   /usr/lib/mozilla/plugins
    install  -m 0755  -o root  -g root  Source/nsIScriptableMplayerPlugin.xpt  /usr/lib/mozilla/components/mplayerplug-in.xpt
  }

  CXXFLAGS="-I/usr/include/mozilla  $CXXFLAGS"
    CFLAGS="-I/usr/include/mozilla  $CFLAGS"
  export  LDFLAGS="-Wl,-rpath,/usr/lib/mozilla -Wl,-rpath-link,/usr/lib/mozilla $LDFLAGS"

  ./configure            \
  --build=$BUILD         \
  --prefix=/usr          \
  --sysconfdir=/etc      \
  --localstatedir=/var   \
  $OPTS                  &&
  make                   &&
  prepare_install        &&
     make_install
}
