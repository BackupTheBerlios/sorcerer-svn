bzip2  -cd  $SCRIPT_DIR/gcc-2.95.3-2.patch.bz2  |
patch  -p1

ENABLE_LANGS="--enable-languages=${GCC_LANGUAGES:=c++}"

 LCF="LIBCFLAGS=$CFLAGS"
LCXF="LIBCXXFLAGS=$CXXFLAGS"
  BF="BOOT_CFLAGS=$CFLAGS"
  LDF="LDFLAGS=$LDFLAGS"

./configure  --host=$BUILD               \
             --prefix=/opt/gcc/$VERSION  \
             --enable-shared             \
             --enable-threads            \
             "$ENABLE_LANGS"             &&
make         bootstrap-lean   "$BF"      \
             "$LCF"  "$LCXF"  "$LDF"     &&
prepare_install                          &&
make    install                          &&
ln     -sf  /opt/gcc/$VERSION/bin/gcc    \
            /opt/gcc/$VERSION/bin/cc     &&
cp     -a   $(  find . -name libstdc++\*so\*  )  \
            /opt/gcc/$VERSION/lib/               &&
if ! [ -f   /opt/gcc/$VERSION/lib/libstdc++-libc6.2-2.so.3  ];  then
  ln   -sf  /opt/gcc/$VERSION/lib/libstdc++-3-libc6.3-2-2.10.0.so  \
            /opt/gcc/$VERSION/lib/libstdc++-libc6.2-2.so.3
fi
