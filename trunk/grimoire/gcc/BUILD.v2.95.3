(

  bzip2  -cd  $SCRIPT_DIR/gcc-2.95.3-2.patch.bz2  |
  patch  -p1

  LANGUAGE[0]="${LANGUAGE[0]// /,}"
  ENABLE_LANGS="--enable-languages=${LANGUAGE[0]:=c++}"

  export  LIBCFLAGS="$CFLAGS"
  export  LIBCXXFLAGS="$CXXFLAGS"

  ./configure  --host=$BUILD               \
               --prefix=/usr/gcc-$VERSION  \
               --enable-shared             \
               --enable-threads            \
               "$ENABLE_LANGS"  &&
  make   -j 2  bootstrap-lean   &&
  prepare_install               && 
  make    install

) > $C_FIFO 2>&1  &&  (

  ln  -sf  /usr/gcc-$VERSION/bin/gcc  /usr/gcc-$VERSION/bin/cc

)
