(

  bzip2  -cd  $SCRIPT_DIR/gcc-2.95.3-2.patch.bz2  |
  patch  -p1

  if    [  -f             $CONFIG_LOGS/DEFAULT/$VERSION/LANGUAGE  ]
  then  LANGUAGE=$(  cat  $CONFIG_LOGS/DEFAULT/$VERSION/LANGAUGE  )
  fi

  LANGUAGE="${LANGUAGE// /,}"
  ENABLE_LANGS="--enable-languages=${LANGUAGE:=c++}"

   LCF="LIBCFLAGS=$CFLAGS"
  LCXF="LIBCXXFLAGS=$CXXFLAGS"
    BF="BOOT_CFLAGS=$CFLAGS"
    LDF="LDFLAGS=$LDFLAGS"

  ./configure  --host=$BUILD               \
               --prefix=/opt/gcc/$VERSION  \
               --enable-shared             \
               --enable-threads            \
               "$ENABLE_LANGS"             &&
  make   -j 2  bootstrap-lean   "$BF"      \
               "$LCF"  "$LCXF"  "$LDF"     &&
  prepare_install                          && 
  make    install                          &&
  ln     -sf  /opt/gcc/$VERSION/bin/gcc    \
              /opt/gcc/$VERSION/bin/cc     &&
  ln     -sf  /opt/gcc/$VERSION/lib/libstdc++-libc6.2-2.so.3  \
              /opt/gcc/$VERSION/lib/libstdc++-3-libc6.3-2-2.10.0.so

) > $C_FIFO 2>&1
