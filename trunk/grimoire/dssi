# Installs header files, but no library.
# the requirements are for examples and tests
# which the spell disables because
# the first example fails to link properly with qt-everywhere-opensource

   version stable 1.1.1
   require ladspa_sdk qt-everywhere-opensource
  category audio/editor
 attribute library lto makej multilib-concurrent
    source $SOURCEFORGE_URL dssi/dssi/$VERSION/dssi-$VERSION.tar.gz
      info last 20111006
      info home http://dssi.sourceforge.net/
      desc 'API for audio processing plugins'

build(){
 case $VERSION in
  1.1.1) sed -i 's:examples tests::' Makefile.in ;;
 esac
 default_build
}
