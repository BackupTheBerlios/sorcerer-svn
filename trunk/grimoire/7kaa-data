    stable 2.13
  category game
 attribute x11 data
    source $SOURCEFORGE_URL "skfans/Seven%20Kingdoms%20AA%20Data%20Files/7kaa-data-$VERSION.tar.bz2"
  homepage http://7kfans.com/
  estimate 100
      desc 'mix of RTS and turn-based strategy game'

build(){
[ -f README-GameData ] &&
mkdir -p $DESTDIR/usr/share/7kaa &&
cp -a *  $DESTDIR/usr/share/7kaa
}
