   version stable 2.13
  category game
 attribute x11 data
    source $SOURCEFORGE_URL "skfans/Seven%20Kingdoms%20AA%20Data%20Files/7kaa-data-$VERSION.tar.bz2"
      info last 20110318
      info home http://7kfans.com/
      info docs http://www.7kfans.com/wiki/index.php/Contents
      desc 'mix of RTS and turn-based strategy game'

build(){
 [ -f README-GameData ] &&
 mkdir -pvm 755 $DESTDIR/usr/share/7kaa &&
 cp -a *        $DESTDIR/usr/share/7kaa/
}
