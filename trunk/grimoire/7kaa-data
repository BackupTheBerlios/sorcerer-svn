with version stable 2.13
with role    game
with trait   x11 data
with source  $SOURCEFORGE_URL "skfans/Seven%20Kingdoms%20AA%20Data%20Files/7kaa-data-$VERSION.tar.bz2"
with info    good 20120716
with info    last 20110318
with info    home http://7kfans.com/
with info    docs http://www.7kfans.com/wiki/index.php/Contents
with info    cite 'mix of RTS and turn-based strategy game'

build(){
 [ -f README-GameData ] &&
 mkdir -pvm 755 $DESTDIR/usr/share/7kaa &&
 cp -a *        $DESTDIR/usr/share/7kaa/
}
