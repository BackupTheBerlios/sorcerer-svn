    stable 0.35 0.33
   require SDL_mixer libtorrent-rasterbar wxWidgets
  category game
 attribute x11
    source http://www.springlobby.info/tarballs/springlobby-$VERSION.tar.bz2
  homepage http://springlobby.info/wiki/springlobby
  estimate 400
      desc 'multiplayer client for spring'

build(){
./configure           \
 --sysconfdir=/etc    \
 --localstatedir=/var \
 --prefix=/usr  \
$OPTS           &&
make            &&
prepare_install &&
make    install
}
