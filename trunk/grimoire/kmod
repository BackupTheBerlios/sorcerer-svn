with version stable 10 9 5 4
with base    xz zlib
with also    --with-xz --with-zlib
with role    kernel
with trait   library lto makej multilib-concurrent
with source  $KERNEL_URL pub/linux/utils/kernel/kmod/kmod-$VERSION.tar.xz
#   source http://packages.profusion.mobi/kmod/kmod-$VERSION.tar.xz
with info    last 20120909
with info    home http://www.politreco.com
with info    cite 'modules loading library'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then with also --libdir=/lib64
 else with also --libdir=/lib
 fi
 default_build
}
