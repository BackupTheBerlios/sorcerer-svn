# pulseaudio is not an elective.
# it is the base

with version   stable 3.6.3 3.6.2 3.6.1
with version unstable 3.7.91
with base    NetworkManager cheese colord cups gnome-bluetooth gnome-color-manager gnome-desktop gnome-menus gnome-online-accounts gnome-settings-daemon heimdal krb5 libXxf86misc libgnomekbd libgtop libpwquality libsecret network-manager-applet pulseaudio startup-notification upower
with elect   cups
with also    --enable-static=no
with role    utility
with trait   gnome library makej multilib-concurrent
with source    stable $GNOME_URL sources/gnome-control-center/${VERSION:0:3}/gnome-control-center-$VERSION.tar.xz
with source  unstable $GNOME_URL sources/gnome-control-center/${VERSION:0:3}/gnome-control-center-$VERSION.tar.xz
with info    last 20121117
with info    home http://www.gnome.org
with info    cite 'the gnome control center'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 case $VERSION in
  3.6.3) sed -i 's:datetime::' panels/Makefile.in ;;
 esac
 default_build
}
