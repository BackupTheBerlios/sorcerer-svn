# May now require metacity
# pulseaudio is not optional, but fully required.

   version stable 3.2.0 3.0.2 3.0.1 3.0.0.1 3.0.0
   require NetworkManager cheese cups gnome-color-manager gnome-desktop gnome-menus gnome-online-accounts heimdal libgnomekbd libgtop pulseaudio startup-notification upower
  optional cups
      opts --enable-static=no
  category utility
 attribute gnome library makej multilib-concurrent
    source $GNOME_URL sources/gnome-control-center/${VERSION:0:3}/gnome-control-center-$VERSION.tar.xz
      info last 20111006
  homepage http://www.gnome.org
  eprovide control-center
      desc 'the gnome control center'

build(){
 case $VERSION in
  3.0.2) sed -i '1i#include <cups/ppd.h>' panels/printers/{pp-new-printer-dialog.c,pp-utils.c} ;;
 esac
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
