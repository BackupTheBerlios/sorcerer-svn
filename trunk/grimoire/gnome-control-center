# May now require metacity
# pulseaudio is not optional, but fully required.

   version stable 3.0.0.1 3.0.0 2.91.93 2.32.1 2.32.0
   require NetworkManager cheese cups gnome-desktop gnome-menus heimdal libgnomekbd libgtop pulseaudio startup-notification upower
  optional cups
#  require gnome-panel gnome-settings-daemon gst-plugins-base libXScrnSaver libXxf86misc libcanberra libgnomekbd libslab metacity nautilus
      opts --enable-static=no
  category utility
 attribute gnome library makej multilib-concurrent
    source $GNOME_URL sources/gnome-control-center/${VERSION:0:3}/gnome-control-center-$VERSION.tar.bz2
  homepage http://www.gnome.org
  eprovide control-center
      desc 'the gnome control center'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
