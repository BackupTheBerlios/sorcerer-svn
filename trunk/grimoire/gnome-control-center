# pulseaudio is not optional, but fully required.

   version   stable 3.4.2 3.4.1
   version unstable 3.5.90
   require NetworkManager cheese colord cups gnome-bluetooth gnome-color-manager gnome-desktop gnome-menus gnome-online-accounts gnome-settings-daemon heimdal libXxf86misc libgnomekbd libgtop network-manager-applet pulseaudio startup-notification upower
  optional cups
      opts --enable-static=no
  category utility
 attribute gnome library makej multilib-concurrent
    source   stable $GNOME_URL sources/gnome-control-center/${VERSION:0:3}/gnome-control-center-$VERSION.tar.xz
    source unstable $GNOME_URL sources/gnome-control-center/${VERSION:0:3}/gnome-control-center-$VERSION.tar.xz
      info last 20120517
      info home http://www.gnome.org
  eprovide control-center
      desc 'the gnome control center'

build(){
 case $VERSION in
  3.0.2) sed -i '1i#include <cups/ppd.h>' panels/printers/{pp-new-printer-dialog.c,pp-utils.c} ;;
 esac
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
