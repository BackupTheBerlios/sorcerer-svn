# pulseaudio is not an elective.
# it is the base

# Version 3.8.1 and 3.8.0 have an unavoidable base on krb5

with info    edit 20130919
with info    last 20130731
with version   stable 3.8.4.1 3.8.3
with version unstable 3.9.92
with base    NetworkManager accountsservice cheese colord cups gnome-bluetooth gnome-color-manager gnome-desktop gnome-menus gnome-online-accounts gnome-settings-daemon krb5 libXxf86misc libcroco libgnomekbd libgtop libpwquality libsecret network-manager-applet pulseaudio startup-notification upower
with elect   cups
case $VERSION in
 3.8.*)
with also    --disable-ibus ;;
esac
with also    --enable-static=no
with role    utility
with trait   gnome library makej multilib-concurrent
with source    stable $GNOME_URL sources/gnome-control-center/${VERSION:0:3}/gnome-control-center-$VERSION.tar.xz
with source  unstable $GNOME_URL sources/gnome-control-center/${VERSION:0:3}/gnome-control-center-$VERSION.tar.xz
with info    home http://www.gnome.org
with info    cite 'the gnome control center'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure

 case $VERSION in
  3.8.*) sed -i 's:krb5/krb5\.h:krb5.h:' panels/user-accounts/um-realm-manager.c ;;
 esac
 default_build
}
