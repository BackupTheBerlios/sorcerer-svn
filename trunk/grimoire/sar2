   version stable 2.3.1
   require MesaLib SDL freealut libXpm libvorbis scons
  category game/3d
 attribute x11
    source $SOURCEFORGE_URL sar2/sar2-$VERSION.tar.bz2
      info good 20120704
      info last 20110701
      info home http://sar2.sourceforge.net/
      desc '3D helicopter simulator with missions'

build(){
 scons &&
 mkdir -pvm 755 $DESTDIR/usr/{bin,share} &&
 ./install.sh   $DESTDIR
}
