# gtkhtml-v1.1 broke because control-center is broken
# Probably no sources require this ancient library
    stable 1.1.10
    secure 1.1.10
   require bonobo gal control-center-v1.4 libghttp

    ignore '^3\.'
  category network/web
 attribute gnome library broke
    source sources/gtkhtml/${VERSION:0:3}/gtkhtml-$VERSION.tar.bz2
       url "$GNOME_URL"
  homepage http://www.gnome.org
case $VERSION in
 1.1.10) use_gcc gcc-v3.4 ;;
esac

# gtkhtml can be compiled without soup, but evolution requires soup.
  estimate 574
      desc 'gtkhtml-v1.1 is a light weight html rendering/editing library.'

build(){
patch -p1 << EOF
diff -r -U2 gtkhtml-1.1.10/components/html-editor/popup.c gtkhtml-1.1.10/components/html-editor/popup.c
--- gtkhtml-1.1.10/components/html-editor/popup.c	2003-01-23 08:44:21.000000000 -0700
+++ gtkhtml-1.1.10/components/html-editor/popup.c	2003-01-23 08:44:21.000000000 -0700
@@ -497,4 +497,5 @@
 			break;
 		default:
+		;
 		}
 		if (obj->parent && obj->parent->parent && HTML_IS_TABLE_CELL (obj->parent->parent)) {
EOF
default_build
}
