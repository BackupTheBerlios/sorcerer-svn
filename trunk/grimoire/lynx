# Hurray 2.8.6 finally installs it's configuration file in /etc

    stable 2.8.6
    secure 2.8.6
  optional openssl --with-ssl '' for HTTPS connections
  category network/web
 attribute client console unsafe
    source http://lynx.isc.org/release/lynx$VERSION.tar.bz2
  homepage http://lynx.browser.org/
  estimate 700
      desc 'lynx is a text browser for the World Wide Web.'

build(){
 lynx_install(){
  make install
  make install-help
  make install-doc
 }

./configure            \
--host=$BUILD          \
--prefix=/usr          \
--libdir=/var/lib/lynx \
--sysconfdir=/etc      \
$OPTS                  &&
make                   &&
prepare_install        &&
   lynx_install
}
