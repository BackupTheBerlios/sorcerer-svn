# Hurray 2.8.6 finally installs it's configuration file in /etc
# Uncertain of the download location for the unstable version

   version   stable 2.8.7 2.8.6
   version   secure 2.8.6
   version unstable 2.8.8dev.12 2.8.8dev.11
   require ncurses
  optional openssl --with-ssl '' for HTTPS connections
  category network/web
 attribute client console unsafe
    source http://lynx.isc.org/release/lynx$VERSION.tar.bz2
      info good 20120625
      info last 20090705
      info home http://lynx.browser.org/
      desc 'text browser for the World Wide Web'

build(){
 ./configure \
  --prefix=/usr \
  --libdir=/var/lib/lynx \
  --sysconfdir=/etc \
  $OPTS &&
 make &&
 make install install-help install-doc DESTDIR=$DESTDIR
}
