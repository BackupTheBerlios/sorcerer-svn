  stable 1.0.0
    IGNORE='ARM\|rc'
  CATEGORY='window-manager'
 ATTRIBUTE='x11'
    SOURCE="fluxbox/fluxbox-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://fluxbox.sourceforge.net'
       REQ='imlib2 libXft libXinerama libXpm libXrandr'
#      REQ='libXft libXpm libXrandr'
      OPTS='--disable-nls'
     WMBIN='/usr/bin/fluxbox'
  ESTIMATE='1100'
      DESC='fluxbox is yet another windowmanager.'

build(){
 case $VERSION in
  1.0.0) sed -i '1i#include <cstring>' src/main.cc ;;
 esac
 default_build
}
