    stable 1.0.0
  unstable 1.1.1
   require imlib2 libXft libXinerama libXpm libXrandr
      opts --disable-nls
  category window-manager
 attribute x11
    source $SOURCEFORGE_URL fluxbox/fluxbox/$VERSION/fluxbox-$VERSION.tar.bz2
      info home  http://fluxbox.org/
      info docs  http://fluxbox.org/help/
     wmbin /usr/bin/fluxbox
  estimate 1400
      desc 'windowmanager'

build(){
 case $VERSION in
  1.0.0) sed -i '1i#include <cstring>' src/main.cc ;;
 esac
 default_build
}
