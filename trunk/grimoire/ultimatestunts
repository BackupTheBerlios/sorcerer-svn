with version stable 0771 0761
case $VERSION in
 0771)
   use_gcc gcc-v4.5 ;;
 0761)
   use_gcc gcc-v4.5 ;;
esac
with base    MesaLib SDL_image freealut libvorbis
with role    game
with trait   x11
with source  $SOURCEFORGE_URL ultimatestunts/sourcecode/ultimatestunts-srcdata-$VERSION.tar.gz
with info    last 20120907
with info    home http://www.ultimatestunts.nl/
with info    docs http://www.ultimatestunts.nl/documentation/index.htm
with info    cite '3D OpenGL car driving simulation

similar to DOS game known as stunts,
yet feels incomplete and seems less entertaining.
'

build(){
 find data -type d | xargs -r --max-lines=64 chmod 755
 find data -type f | xargs -r --max-lines=64 chmod 644
 default_build &&
 cd data &&
 make install "usdatadir=$DESTDIR/usr/share/ultimatestunts" &&
 find "$DESTDIR/usr/share/ultimatestunts" -type d | xargs --max-lines=64 chmod 755 &&
 find "$DESTDIR/usr/share/ultimatestunts" -type f | xargs --max-lines=64 chmod 644 &&
 case $VERSION in
  0761) sed -i 's:/usr/local:/usr:' "$DESTDIR/etc/ultimatestunts.conf" ;;
 esac
}
