# multilib-fail because apr-util is multilib-fail
   version stable 0.3.0
   require apr-util
  category network/web
 attribute console library server
 attribute multilib-fail
    source http://serf.googlecode.com/files/serf-$VERSION.tar.bz2
  homepage http://code.google.com/p/serf/
      desc 'C based HTTP client that uses apr'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then opts --libdir=/usr/lib64
 fi
 default_build
}
