    stable 1.13.3 1.13.2 1.13.1 1.12.1
   require mozilla
  optional MPlayer      '' '' for viewing AVI, DivX, and MPEG video
  optional SDL_mixer    '' '' for playing midi files
  optional vorbis-tools '' '' for playing ogg files
  optional ImageMagick  '' '' for displaying png, tiff, bmp, and other image formats
  optional gqview       '' '' for displaying png and tiff files
  optional abiword      '' '' for viewing Microsoft Word and RTF files
  optional gnumeric     '' '' for viewing excel files
  optional alsaplayer   '' '' for playing audio files
  optional xmms         '' '' for playing audio files
  optional xpdf         '' '' for viewing pdf files
  category audio/player video/player network/web
 attribute x11 seamonkey-plugin
    source http://mozplugger.mozdev.org/files/mozplugger-$VERSION.tar.gz
  homepage http://mozplugger.mozdev.org/
      vurl http://mozplugger.mozdev.org/
  eprovide plugger
      desc 'multimedia plugin for Mozilla'

build(){
case $HOSTTYPE in
 x86_64) sed -i "s:XLIBDIR):XLIBDIR) -L\$(XLIBDIR)64:" Makefile ;;
esac

sed -i "s:-O2:$CFLAGS:" Makefile
make    linux   &&
prepare_install &&
make    install
}
