   VERSION=( "1.7.3" "1.7.2" "1.7.1" "1.7.0" "1.6.2" "1.6.1" )
  CATEGORY="audio/player video/player network/web"
 ATTRIBUTE="x11 seamonkey-plugin"
    SOURCE="mozplugger-$VERSION.tar.gz"
  HOMEPAGE="http://mozplugger.mozdev.org/"
       URL="http://downloads.mozdev.org/mozplugger/"
       REQ=( "mozilla"
             "MPlayer:::for viewing AVI, DivX, and MPEG video"
             "SDL_mixer:::for playing midi files"
             "vorbis-tools:::for playing ogg files"
             "ImageMagick:::for displaying png, tiff, bmp, and other image formats"
             "gqview:::for displaying png and tiff files"
             "abiword:::for viewing Microsoft Word and RTF files"
             "gnumeric:::for viewing excel files"
             "alsaplayer:::for playing audio files"
             "xmms:::for playing audio files"
             "xpdf:::for viewing pdf files" )
  EPROVIDE="plugger"
  ESTIMATE="16"
      DESC="mozplugger is a multimedia plugin for Mozilla."

build()  {
  case $( arch ) in
    x86_64) sed -i "s:XLIBDIR):XLIBDIR) -L\$(XLIBDIR)64:"  Makefile	;;
  esac

  sed  -i  "s:-O2:$CFLAGS:"  Makefile
  make    linux    &&
  prepare_install  &&
  make    install
}
