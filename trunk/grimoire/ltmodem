    stable 20090420 2.6-alk-9
  category network
 attribute archive_off console linux-26-module
 attribute broke
    source http://linmodems.technion.ac.il/packages/ltmodem/kernel-2.6/ltmodem-$VERSION.tar.gz
  homepage http://martian.barrelsoutofbond.org/
  estimate 150
      desc 'ltmodem provides a kernel module for Agere Systems and LT Winmodems.
It only works with winmodems that contain a Mars DSP164x device'

build(){
make_install(){
 LVER=$( installed_version $( get_provider linux-kernel ) )
 DEST=/lib/modules/$LVER/kernel/drivers/net/
 mkdir   -p $DEST
 install -vm 600 ltmodem.ko ltserial.ko $DEST  
}

make &&
prepare_install &&
   make_install
}
