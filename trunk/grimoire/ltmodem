# ltmodem version 2.6-altk-9 incompatible with linux version 2.6.24
    stable 2.6-alk-9
  category network
 attribute archive_off console linux-26-module broke
    source ltmodem-$VERSION.tar.bz2
       url http://linmodems.technion.ac.il/packages/ltmodem/kernel-2.6/
  homepage http://martian.barrelsoutofbond.org/
  estimate 155
      desc 'ltmodem provides a kernel module for Agere Systems and LT Winmodems.
It only works with winmodems that contain a Mars DSP164x device'

build(){
 make_install()  {
  LVER=$( installed_version $( get_provider linux-kernel ) )
  DEST=/lib/modules/$LVER/kernel/drivers/net/
  mkdir   -p                              $DEST
  install -vm 0600 ltmodem.ko ltserial.ko $DEST  
 }

 make            &&
 prepare_install &&
    make_install
}
