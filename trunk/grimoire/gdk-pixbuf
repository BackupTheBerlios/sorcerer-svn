# Sometimes the installed version of gdk-pixbuf that compiles
# fails to work properly.
# Reason unknown.
# Recasting gdk-pixbuf fixes the problem.

   version   stable 2.26.4 2.26.3 2.26.2
   require gobject-introspection libX11 libpng tiff
  category graphic
 attribute gnome library lto optimize x11
#attribute gnome library makej multilib-concurrent optimize x11
    source $GNOME_URL sources/gdk-pixbuf/${VERSION:0:4}/gdk-pixbuf-$VERSION.tar.xz
      info last 20120922
      info home http://www.gnome.org
 conflicts gdk-pixbuf
      desc 'graphic library used by gtk+'

build(){
 default_build &&
 if   [[ $HOSTTYPE == x86_64 ]] &&
      [[ $CFLAGS   =~ -m32   ]]
 then mv $DESTDIR/usr/bin{,32}
 fi
}
