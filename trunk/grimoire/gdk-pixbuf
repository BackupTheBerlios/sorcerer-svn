# Sometimes the installed version of gdk-pixbuf that compiles
# fails to work properly.
# Reason unknown.
# Recasting gdk-pixbuf fixes the problem.

with version   stable 2.26.4 2.26.3 2.26.2
with base    gobject-introspection libX11 libpng tiff
with role    graphic
with trait   gnome library lto optimize x11
#trait gnome library makej multilib-concurrent optimize x11
with source  $GNOME_URL sources/gdk-pixbuf/${VERSION:0:4}/gdk-pixbuf-$VERSION.tar.xz
with info    last 20120922
with info    home http://www.gnome.org
with clash   gdk-pixbuf
with info    cite 'graphic library used by gtk+'

build(){
 default_build &&
 if   [[ $HOSTTYPE == x86_64 ]] &&
      [[ $CFLAGS   =~ -m32   ]]
 then mv $DESTDIR/usr/bin{,32}
 fi
}
