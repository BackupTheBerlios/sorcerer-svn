# 3.2.2 prints an error when run
# 3.3.90 fails to compile

   version   stable 3.2.2 3.2.0 3.0.0
   version unstable 3.3.92 3.3.90
   require clutter-gst clutter-gtk gnome-desktop gnome-video-effects libcanberra libgee librsvg mx
#  require clutter-gst clutter-gtk gnome-desktop libgee librsvg mx udev
      opts --disable-rpath --disable-static
# Disable introspection for cheese while gstreamer's introspection is disabled
case $VERSION in
 3.2.2)
      opts --enable-introspection=no ;;
 3.3.5)
      opts --enable-introspection=no ;;
esac
  category utility
 attribute gnome library makej multilib-concurrent
    source $GNOME_URL sources/cheese/${VERSION:0:3}/cheese-$VERSION.tar.xz
      info last 20120130
      info home http://www.gnome.org
      desc 'a web camera program'
