# no introspection while introspection on gstreamer is broke
with version   stable 3.8.1 3.8.0 3.6.2
with version unstable 3.9.1
with info    last 20130417
case $VERSION in
 3.8.*)
with also    --enable-introspection=no ;;
 3.9.*)
with also    --enable-introspection=no ;;
 3.6.*)
with also    --enable-introspection=no ;;
esac
with base    clutter-gst clutter-gtk gnome-desktop gnome-video-effects gst-plugins-bad libcanberra libgee librsvg
#with base    clutter-gst clutter-gtk gnome-desktop gnome-video-effects gst-plugins-bad libcanberra libgee librsvg mx
with also    --disable-rpath --disable-static
with role    utility
with trait   gnome library makej multilib-concurrent
with source    stable $GNOME_URL sources/cheese/${VERSION:0:3}/cheese-$VERSION.tar.xz
with source  unstable $GNOME_URL sources/cheese/${VERSION:0:3}/cheese-$VERSION.tar.xz
with info    home http://www.gnome.org
with info    cite 'a web camera program'
