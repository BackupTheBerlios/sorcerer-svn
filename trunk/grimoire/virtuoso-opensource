# from: http://techbase.kde.org/Getting_Started/Build/KDE4/LFS
# For building Virtuoso, these configure parameters are useful:
#        --with-jdk4= 
#        --without-internal-zlib 
#        --with-pthreads 
#        --with-readline 
#        --with-iodbc= 
# If building Virtuoso only for KDE, (to save disk space) use configure parameter:
#        --disable-all-vads 


# ../../libtool: line 4978: cd: libsrc/odbcsdk/lib: No such file or directory
# libtool: link: cannot determine absolute directory name of `libsrc/odbcsdk/lib'

    stable 6.1.0
      opts --enable-static=no --disable-all-vads --without-internal-zlib --with-pthreads --with-iodbc
  category db
 attribute library x11
 attribute broke
    source $SOURCEFORGE_URL virtuoso/virtuoso/$VERSION/virtuoso-opensource-$VERSION.tar.gz
  homepage http://virtuoso.openlinksw.com/dataspace/dav/wiki/Main/
  estimate 1000
      desc 'high-performance object-relational SQL database'

build(){
case $HOSTTYPE in
 x86_64) export CFLAGS+=' -m64' ;;
esac
default_build
}
