    stable 1.3.3.14 1.3.6 1.3.5.1 1.3.4 1.3.3.13 1.3.4
   require cmake qt-everywhere-opensource
  optional cups '' '' for integration with Common Unix Printing System
  optional lcms '' '' for color management engine
  category utility/editor
 attribute kde4
 attribute broke
    source $SOURCEFORGE_URL scribus/scribus/$VERSION/scribus-$VERSION.tar.bz2
  homepage http://www.scribus.net/
      opts -DCMAKE_INSTALL_PREFIX:PATH=/opt/kde4
      opts -DCMAKE_INSTALL_RPATH:PATH=/opt/kde4/lib:/opt/kde4/lib64
      opts -DCMAKE_SKIP_BUILD_RPATH:BOOL=TRUE
      opts -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=TRUE
      opts -DCMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=TRUE
      opts -DCMAKE_BUILD_TYPE=Release
  estimate 3300
      desc 'Desktop Publishing Program'

build(){ (
 export PATH="/opt/kde4/bin:$PATH"
 default_build
) }
