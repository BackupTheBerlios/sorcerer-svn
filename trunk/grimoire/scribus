# 1.3.9 is devel

   version stable 1.3.3.14 1.3.6 1.3.5.1
   version devel  1.4.0.rc5 1.4.0rc3 1.4.0.rc2
   inherit kde-v4
   require cmake qt-everywhere-opensource
  optional cups '' '' for integration with Common Unix Printing System
  optional lcms '' '' for color management engine
  category utility/editor
 attribute kde4
#attribute broke
    source stable $SOURCEFORGE_URL scribus/scribus/$VERSION/scribus-$VERSION.tar.bz2
    source devel  $SOURCEFORGE_URL scribus/scribus-devel/$VERSION/scribus-$VERSION.tar.bz2
      info last  20100211
  homepage http://www.scribus.net/
      desc 'Desktop Publishing Program'

build(){ (
 export PATH="/opt/kde4/bin:$PATH"
 kde_build
 # default_build
) }
