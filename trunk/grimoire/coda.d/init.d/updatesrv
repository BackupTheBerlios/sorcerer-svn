#!/bin/bash

### BEGIN INIT INFO
# Default-Mode: 510
# Required-Start: $network
# Required-Stop:  $network
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: updatesrv updates the server
### END INIT INFO

. /lib/lsb/init-functions

pid_file /vice/misc/updatesrv.pid
server /usr/sbin/updatesrv
name updatesrv

start(){
 if   log_warning_msg "$NAME starting"; start_daemon -d -p "$PIDF" $SERV
 then log_success_msg "$NAME started"
 else log_failure_msg "$NAME not started"; status
 fi
}
