   VERSION=( "2.0" "1.12.0" "1.11.0" "1.10.0" "1.9.0" "1.8.1" )
    IGNORE="devel"
  CATEGORY="disk utility"
 ATTRIBUTE="console"
    SOURCE="mdadm-$VERSION.tgz"
  HOMEPAGE="http://www.cse.unsw.edu.au/~neilb/source/mdadm"
       URL="http://www.cse.unsw.edu.au/~neilb/source/mdadm"
  ESTIMATE="29"
      DESC="mdadm is a useful tool for running RAID systems.
mdadm can be used in conjunction or as a replacement for raidtools.
mdadm can diagnose, monitor, and gather detailed information about RAIDs."

build()  {
make             &&
prepare_install  &&
make    install
}
