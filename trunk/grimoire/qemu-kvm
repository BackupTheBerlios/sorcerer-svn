    stable 0.12.3 0.12.2
   require alsa-lib bluez-libs curl cyrus-sasl gnutls pciutils util-linux zlib
  optional SDL '' '--disable-sdl'
# --disable-gfx-check'
      opts --audio-drv-list=alsa
      opts --audio-card-list=ac97
  category development/emulator
 attribute console
    source $SOURCEFORGE_URL kvm/qemu-kvm/$VERSION/qemu-kvm-$VERSION.tar.gz
  homepage http://www.linux-kvm.org/page/Main_Page
  eprovide qemu
  estimate 300
      desc 'userspace tools for kernel virtual machine emulation
kvm is a fork of qemu
This is the stable branch of kvm'

build(){
#rm -f kvm/kernel/configure
./configure      \
--disable-werror \
--prefix=/usr    \
$OPTS           &&
make            &&
prepare_install &&
make    install
}
