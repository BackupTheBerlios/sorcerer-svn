with version   stable 1.2.0 1.1.1 1.1.0
#with version unstable 1.2.0-rc2
with base    alsa-lib bluez curl cyrus-sasl gnutls libaio pciutils util-linux zlib
with elect   SDL '' '--disable-sdl'
# --disable-gfx-check'
with also    --audio-drv-list=alsa
with also    --audio-card-list=ac97
with role    development/emulator
with trait   console optimize
with source    stable $SOURCEFORGE_URL kvm/qemu-kvm/$VERSION/qemu-kvm-$VERSION.tar.gz
with source  unstable $SOURCEFORGE_URL kvm/qemu-kvm/$VERSION/qemu-kvm-$VERSION.tar.gz
with info    last 20120917
with info    home http://www.linux-kvm.org/page/Main_Page
with info    docs http://www.linux-kvm.org/page/Documents
with info    mail http://www.linux-kvm.org/page/Lists%2C_IRC
with info    irc  http://www.linux-kvm.org/page/Lists%2C_IRC
with hold    qemu
with info    cite 'userspace tools for kernel virtual machine emulation
kvm is a fork of qemu
This is the stable branch of kvm'

build(){
 #rm -f kvm/kernel/configure
 ./configure \
  --disable-werror \
  --prefix=/usr \
  $OPTS &&
 make   &&
 make install DESTDIR=$DESTDIR
}
