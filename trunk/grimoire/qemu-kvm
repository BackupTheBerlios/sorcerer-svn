   version stable 0.15.0 0.14.1 0.14.0 0.13.0
   require alsa-lib bluez curl cyrus-sasl gnutls libaio pciutils util-linux zlib
  optional SDL '' '--disable-sdl'
# --disable-gfx-check'
      opts --audio-drv-list=alsa
      opts --audio-card-list=ac97
  category development/emulator
 attribute console
    source $SOURCEFORGE_URL kvm/qemu-kvm/$VERSION/qemu-kvm-$VERSION.tar.gz
      info last  20110814
      info home  http://www.linux-kvm.org/page/Main_Page
      info docs  http://www.linux-kvm.org/page/Documents
      info mail  http://www.linux-kvm.org/page/Lists%2C_IRC
      info irc   http://www.linux-kvm.org/page/Lists%2C_IRC
  eprovide qemu
      desc 'userspace tools for kernel virtual machine emulation
kvm is a fork of qemu
This is the stable branch of kvm'

    CFLAGS='-O2'
  CXXFLAGS='-O2'
   LDFLAGS='-Wl,-O1'

build(){
 #rm -f kvm/kernel/configure
 ./configure \
  --disable-werror \
  --prefix=/usr \
  $OPTS &&
 make   &&
 make install DESTDIR=$DESTDIR
}
