   VERSION=( "0.2.1" )
    IGNORE="s"
  CATEGORY="security/encryption"
 ATTRIBUTE="x11"
    SOURCE="crank/crank-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://crank.sourceforge.net"
       REQ="guile gtk+-v1.2"
      DESC="crank is a GUI simple cipher analysis / breaker.
Crank is a project to provide a GUI toolkit to facilitate,
and where possible to automate, the breaking of classical
(pen-and-paper) cryptosystems.  Initial focus is on the
cryptanalysis of monoalphabetic substitution ciphers."

build() {
sed  -i  "s/-O2/$CFLAGS/"  Makefile.in
default_build
}
