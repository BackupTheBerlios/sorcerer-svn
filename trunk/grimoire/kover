# not certain if it still compiles.

   version stable 3 2.9.6
   version unstable 4
   require kdelibs-v3
      opts --prefix=/opt/kde3 --with-qt-dir=/opt/kde3 --disable-debug --enable-final
  category disk/cd
 attribute kde3
    source http://lisas.de/kover/kover-$VERSION.tar.bz2
      info home  http://lisas.de/kover/
      vurl http://lisas.de/kover/download.php3
      desc 'easy to use WYSIWYG CD cover printer with CDDB support'

build(){
 sed -i "\,#include <linux/cdrom.h>,i#undef __STRICT_ANSI__\
#include <linux/types.h>" kover/{cddb_fill.cc,cdrom.h}
 default_build
}
