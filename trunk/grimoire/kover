    stable 2.9.6 2.9.5 2.9.3 2.9.1
   require kdelibs-v3
  category disk/cd
 attribute kde3
    source http://lisas.de/kover/kover-$VERSION.tar.gz
  homepage http://lisas.de/kover/
      opts --prefix=/opt/kde3 --with-qt-dir=/opt/kde3 --disable-debug --enable-final
  estimate 500
      desc 'easy to use WYSIWYG CD cover printer with CDDB support'

build(){
 sed -i "\,#include <linux/cdrom.h>,i#undef __STRICT_ANSI__\
#include <linux/types.h>" kover/{cddb_fill.cc,cdrom.h}
 default_build
}
