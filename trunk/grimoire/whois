   VERSION=( "4.7.15" "4.7.14" "4.7.13" "4.7.12" "4.7.11" "4.7.10" )
  CATEGORY="network"
 ATTRIBUTE="console"
    SOURCE="whois_$VERSION.tar.gz"
       URL="http://ftp.debian.org/debian/pool/main/w/whois/"
  HOMEPAGE="http://www.linux.it/~md/software/"
       REQ="perl"
  ESTIMATE="40"
      DESC="whois is the whois client by Marco d'Itri"

build() {
sed  -i  "s:/local::"      Makefile
sed  -i  's:"whois":"43":' whois.c
make             &&
prepare_install  &&
make    install
}
