   inherit crossfire
 attribute data x11
    source $SOURCEFORGE_URL crossfire/crossfire-client-images-$VERSION.tar.gz
      desc 'pre-built images for crossfire client
crossfire-client-images is a prebuilt image file for the client.
This will reduce the amount of download that needs
to happen during play if the -cache option is used.'

build(){ data_install /usr/share/crossfire-client; }
