with version   stable 1.10.6
with role    music
with trait   data
with source  $SOURCEFORGE_URL wesnoth/wesnoth-${VERSION:0:4}/wesnoth-$VERSION/wesnoth-$VERSION.tar.bz2
with info    last 20121117
with info    home http://www.wesnoth.org/
with info    cite 'installs 5 ogg encoded songs from wesnoth

breaking_the_chains.ogg
casualties_of_war.ogg
knolls.ogg
traveling_minstrels.ogg
wanderer.ogg'

build(){
 cd data/core/music
 local                 d="$DESTDIR"/usr/share/wesnoth/data/core/music/
 mkdir   -pvm 755    "$d" &&
 install  -vm 644 -t "$d" breaking_the_chains.ogg casualties_of_war.ogg \
                          knolls.ogg traveling_minstrels.ogg wanderer.ogg

# install  -vm 644 -t "$d" casualties_of_war.ogg &&
# install  -vm 644 -t "$d" knolls.ogg &&
# install  -vm 644 -t "$d" traveling_minstrels.ogg &&
# install  -vm 644 -t "$d" wanderer.ogg
}
