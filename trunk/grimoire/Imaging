   VERSION=( 1.1.6 )
  CATEGORY='development'
 ATTRIBUTE='python-module'
    SOURCE="Imaging-$VERSION.tar.gz"
  HOMEPAGE='http://www.pythonware.com/products/pil/index.htm'
       URL='http://effbot.org/downloads/'
       REQ=( "Python freetype jpeg libpng"
             "tk:::for TKINTER support" )
  ESTIMATE='420'
      DESC="Imaging provides pil, python imaging library."

build() {
  python setup.py build_ext -i  &&
  python selftest.py  &&
  prepare_install     &&
  python setup.py install
}
