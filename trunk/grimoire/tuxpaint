   [  -z  "$VERSION"  ]  &&
   VERSION=( "0.9.15b" "0.9.15" "0.9.14" "0.9.13" "0.9.12" "0.9.11" )
    IGNORE="2002\|link\|stamps\|ttf\|libs\|beos"
  CATEGORY="game"
 ATTRIBUTE="x11"
    SOURCE="tuxpaint/$SPELL-$VERSION.tar.gz"
  HOMEPAGE="http://www.newbreedsoftware.com/tuxpaint"
       URL="$SOURCEFORGE_URL"
       REQ=( "SDL_image SDL_mixer SDL_ttf"
             "tuxpaint-stamps:::for press on images" )
  EPROVIDE="tuxpaint-ttf-chinese tuxpaint-ttf-greek tuxpaint-ttf-hebrew tuxpaint-ttf-hindi tuxpaint-ttf-japanese tuxpaint-ttf-korean tuxpaint-ttf-tamil tuxpaint-ttf-vietnamese"
  ESTIMATE="74"
      DESC="tuxpaint is a simple fun drag and drop painting program."


build()  {
  case  $VERSION  in
    0.9.14)  if    [  "$SPELL"  ==  "tuxpaint"  ]
             then  sed  -i  "s:#ifndef _IMG_h:#ifndef _SDL_IMAGE_H:
                             s:#ifndef _SDLttf_h:#ifndef _SDL_TTF_H:"  src/tuxpaint.c
             fi  ;;
  esac

  make             PREFIX=/usr  &&
  prepare_install               &&
  mkdir  -p        /usr/share/icons/hicolor/16x16/apps  &&
  make    install  PREFIX=/usr
}


case  ${SPELL:9}  in
  ttf*|stamps)  unset  REQ  IGNORE;  ATTRIBUTE="data";  ESTIMATE="15"  ;;
esac
