   [  -z  "$VERSION"  ]  &&
   VERSION=( "0.9.13" "0.9.12" "0.9.11" )
    IGNORE="2002\|link\|stamps\|ttf\|libs\|beos"
  CATEGORY="game"
 ATTRIBUTE="x11"
    SOURCE="tuxpaint/$SPELL-$VERSION.tar.gz"
  HOMEPAGE="http://www.newbreedsoftware.com/tuxpaint"
       URL="$SOURCEFORGE_URL"
       REQ=( "SDL_image SDL_mixer SDL_ttf"
             "tuxpaint-stamps:::for press on images"
             "tuxpaint-ttf-chinese:::for Chinese fonts"
             "tuxpaint-ttf-greek:::for Greek fonts"
             "tuxpaint-ttf-hebrew:::for Hebrew fonts"
             "tuxpaint-ttf-hindi:::for Hindi fonts"
             "tuxpaint-ttf-japanese:::for Japanese fonts"
             "tuxpaint-ttf-korean:::for Korean fonts"
             "tuxpaint-ttf-tamil:::for Tamil fonts"
             "tuxpaint-ttf-vietnamese:::for Vietnamese fonts" )
  ESTIMATE="55"
      DESC="tuxpaint is a simple fun drag and drop painting program."


build()  {
  make             PREFIX=/usr  &&
  prepare_install               &&
  mkdir  -p        /usr/share/icons/hicolor/16x16/apps  &&
  make    install  PREFIX=/usr
}


case  ${SPELL:9}  in
    ttf*|stamps)  unset  REQ  IGNORE;  ATTRIBUTE="data";  ESTIMATE="15"  ;;
esac
