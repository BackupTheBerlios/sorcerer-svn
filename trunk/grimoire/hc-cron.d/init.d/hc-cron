#!/bin/bash

### BEGIN INIT INFO
# Provides: hc-cron $cron
# Required-Start: $local_fs run
# Required-Stop: kill
# Default-Start:  2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: hc-cron is a vixie cron replacement
# Description: hc-ron is not your mother's cron
### END INIT INFO

. /lib/lsb/init-functions

PIDF=/var/run/crond.pid
SERV=/usr/sbin/crond
NAME=hc-cron

start()  {
 export TERM="dumb"
 if   log_warning_msg  "$NAME starting"; start_daemon -p $PIDF $SERV
 then log_success_msg  "$NAME started"
 else log_failure_msg  "$NAME not started"; status
 fi
}

parse
