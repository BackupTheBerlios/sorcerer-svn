    stable 3.2
  category graphic/utility
 attribute console new
       url $SOURCEFORGE_URL
    source enblend/enblend-enfuse-$VERSION.tar.gz
  homepage http://enblend.sourceforge.net/
  estimate 541
   require glew boost libxmi tiff lcms
      desc 'Enblend is a tool for compositing images. Given a set of images that overlap in some irregular way, Enblend overlays them in such a way that the seam between the images is invisible, or at least very difficult to see. Enblend does not line up the images for you. Use a tool like Hugin to do that.'
BOOST_V=$(augur version boost)
export CPPFLAGS="${CPPFLAGS} -I /usr/include/boost-${BOOST_V:0:4}"

