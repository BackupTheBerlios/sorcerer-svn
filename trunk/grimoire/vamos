   VERSION=( "0.5.2" "0.5.0" "0.4.6" "0.4.5" )
    IGNORE="^0\.5\.3"
# 0.5.3. has compile error
  CATEGORY="game"
 ATTRIBUTE="x11"
    SOURCE="vamos/vamos-$VERSION.tar.gz"
  HOMEPAGE="http://vamos.sourceforge.net"
       URL="$SOURCEFORGE_URL"
       REQ="SimGear libsigc++-v1.2 x11"
      OPTS="--bindir=/usr/games"
  ESTIMATE="357"
      DESC="vamos is an automobile driving simulation game.
vamos is an automotive simulation framework with an
emphasis on thorough physical modeling and good C++ design.
A real-time, first-person, 3D driving application is included."


build() {
sed  -i  "s:/usr/local/share/vamos:/usr/share/vamos:"  vamos/vamos.cc
default_build
}
