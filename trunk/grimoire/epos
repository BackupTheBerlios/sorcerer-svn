# stable version 2-4-84 too old? compile errors.
# stable 2-4-84
# 2.5.37 is developmental

   version stable 2.5.37
  category audio/speech
 attribute console
    source $SOURCEFORGE_URL epos/epos-dev/$VERSION/epos-$VERSION.tar.gz
      info home  http://epos.sourceforge.net/
      info docs  http://epos.ure.cas.cz/documentation/epos.html
  estimate 700
      desc 'text to speech system'

build(){
 case $VERSION in
  2.5.37) sed -i 's:iostream.h:iostream:' src/nnet/neural.cc ;;
 esac
 [ -f src/configure ] &&
 cd   src
 default_build
}
