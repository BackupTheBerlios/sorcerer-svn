    stable 1.1 1.0
   require perl
  category video/television font
 attribute data
    source http://dl.bytesex.org/releases/tv-fonts/tv-fonts-$VERSION.tar.bz2
  homepage http://bytesex.org/xawtv/
  estimate 100
      desc 'tv-fonts provides fonts for xawtv.
starting with version 3.76 xawtv does not
come with the fonts bundled any more.
tv-fonts provides fonts for xawtv.'

build(){
unset DISPLAY
make &&
prepare_install &&
mkdir -pvm 755 /usr/share/fonts/X11/misc
cp *.pcf.gz    /usr/share/fonts/X11/misc/ &&
mkfontdir      /usr/share/fonts/X11/misc
}
