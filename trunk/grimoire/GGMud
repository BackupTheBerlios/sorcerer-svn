    stable 0.8.0
   require gtk+
  category game
 attribute client x11
    source $SOURCEFORGE_URL ggmud/ggmud/$VERSION/GGMud-$VERSION-src.tar.gz
      home http://www.ggsoft.org/ggmud/
      docs http://www.ggsoft.org/ggmud/doc/index.html
  estimate 100
      desc 'gtk+ mud client'

build(){
make &&
mkdir   -p            $DESTDIR/usr/bin &&
install -vm 755 ggmud $DESTDIR/usr/bin/
}
