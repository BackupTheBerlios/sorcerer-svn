    stable 0.8.0
   require gtk+
  category game
 attribute client x11
    source $SOURCEFORGE_URL ggmud/ggmud/$VERSION/GGMud-$VERSION-src.tar.gz
  homepage http://www.ggsoft.org/ggmud/
  estimate 100
      desc 'GGMud is a gtk+ mud client.'

build(){
make &&
prepare_install &&
install -vm 755 ggmud /usr/bin
}
