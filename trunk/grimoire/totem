    stable 2.22.2 2.22.1 2.22.0 2.20.3 2.20.1 2.20.0
   require gst-plugins-good iso-codes libXtst libepc nautilus-cd-burner totem-pl-parser xine-lib
  optional bluez-libs ''                ''                 for bluetooth support
  optional lirc       --enable-lirc     --disable-lirc     for lirc support
  optional mozilla    --enable-mozilla  --disable-mozilla  for mozilla/seamonkey/firefox plugin
  optional nautilus   --enable-nautilus --disable-nautilus for nautilus plugin

    ignore '^2\.23\.\|pl-parser'
  category video/dvd video/player
 attribute gnome
    source sources/totem/${VERSION:0:4}/totem-$VERSION.tar.bz2
       url "$GNOME_URL"
  homepage http://www.gnome.org/projects/totem/
      opts --disable-gstreamer --enable-static=no
# This spell uses xine-lib instead of gstreamer for playing movies.
  estimate 3000
      desc 'totem is a movie player for gnome based on xine.'

build(){
export LDFLAGS+=' -L/usr/lib/mozilla -Wl,-rpath,/usr/lib/mozilla'
export PKG_CONFIG_PATH='/usr/share/pkgconfig'
default_build
}
