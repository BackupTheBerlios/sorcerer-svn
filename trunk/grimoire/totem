   VERSION=( "2.20.1" "2.20.0" "2.18.3" "2.18.2" "2.18.1" "2.18.0" )
    IGNORE="^2\.21\."
  CATEGORY="video/dvd video/player"
 ATTRIBUTE="gnome"
    SOURCE="sources/totem/${VERSION:0:4}/totem-$VERSION.tar.bz2"
       URL="$GNOME_URL"
  HOMEPAGE="http://www.gnome.org/projects/totem/"
       REQ=( "gst-plugins-good iso-codes libXtst nautilus-cd-burner xine-lib"
             "bluez-libs:::for bluetooth support"
             "lirc:--enable-lirc:--disable-lirc:for lirc support"
             "mozilla:--enable-mozilla:--disable-mozilla:for mozilla/seamonkey/firefox plugin"
             "nautilus:--enable-nautilus:--disable-nautilus:for nautilus plugin" )
      OPTS="--disable-gstreamer"
# This spell uses xine-lib instead of gstreamer for playing movies.
  ESTIMATE="2400"
      DESC="totem is a movie player for gnome based on xine."

build() {
export  LDFLAGS="$LDFLAGS -L/usr/lib/mozilla -Wl,-rpath,/usr/lib/mozilla"
export  PKG_CONFIG_PATH="/usr/share/pkgconfig"
default_build
}
