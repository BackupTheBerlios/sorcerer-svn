# glib and pkgconfig have recursive requirements upon each other

# lto enabled glib breaks gobject-introspection

# glib version 2.32.4 uses Python in all tests subdirectories
# and also uses Python for gio/gdbus-2.0/codegen
# Python seems to be mostly a compile time requirement with glib

   version   stable 2.32.4 2.32.3 2.32.2
   version unstable 2.33.12
   require Python libffi pcre pkgconfig zlib
      opts --with-pcre=system --with-threads=posix
      opts --enable-static --enable-shared
  category development
 attribute gnome library lto_off makej multilib-concurrent
    source   stable $GNOME_URL sources/glib/${VERSION:0:4}/glib-$VERSION.tar.xz
    source unstable $GNOME_URL sources/glib/${VERSION:0:4}/glib-$VERSION.tar.xz
      info last 20120716
      info home http://www.gtk.org/
      info docs http://www.gtk.org/documentation.html
      desc 'library of useful C routines for trees, hashes, and lists'

build(){
   CFLAGS+=' -fPIC'
 CXXFLAGS+=' -fPIC'
 default_build
}
