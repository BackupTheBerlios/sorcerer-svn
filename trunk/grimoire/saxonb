    stable 9.1.0.5
   require jdk
  category utility
 attribute console java new
    source http://downloads.sourceforge.net/saxon/saxonb${VERSION//./-}j.zip
  homepage http://www.saxonica.com
  estimate 15
      desc 'Saxon XSLT 2.0 and XQuery 1.0 processor, developed by Michael Kay
The non-schema aware  SaxonB XSLT and XQuery processor for java platform.'

build(){
 TARGETDIR=/usr/share/saxon

 install-script(){
  cat > /usr/sbin/saxon << EOF
#!/bin/bash
java -jar $TARGETDIR/saxon9.jar \$@
EOF
  chmod 755 /usr/sbin/saxon
 }
 
 mv notices doc     &&
 prepare_install    &&
 install -v -d            $TARGETDIR    &&
 install -v -m 0644 *.jar $TARGETDIR    &&
 install-script
}
