# 2.0.5 now failing compilation
# No version is currently known to compile

   version   stable 2.0.5 2.0.4
   version unstable 2.0.7
   require httpd perl
# optional sqlite-v2.8 '' '' for old sqlite support
  category development/interpreter/perl network/web
 attribute library
 attribute multilib-fail
 attribute broke
    source   stable http://perl.apache.org/dist/mod_perl-$VERSION.tar.gz
    source unstable http://perl.apache.org/dist/mod_perl-$VERSION.tar.gz
      info last 20120611
      info home http://perl.apache.org/
      desc 'perl module support for httpd'

build(){
 MPXS="MP_APXS=/usr/sbin/apxs"
 OMIZ="OPTIMIZE=$CFLAGS"

 perl Makefile.PL "$MPXS" &&
 make "$OMIZ" &&
 make install DESTDIR=$DESTDIR
}

post_install(){
 default_post_install
 if   [ -f /etc/init.d/httpd ]
 then bash /etc/init.d/httpd try-restart
 fi
 true
}

pre_remove_old(){
 remove_perl_module(){
  LPM="modules/mod_perl.so"
  HTTPD_CONF="/etc/httpd/httpd.conf"
  HTTPD_CONF_TMP="/tmp/httpd.conf.$$.$RANDOM"

  if   grep    "mod_perl.so"  $HTTPD_CONF
  then grep -v "mod_perl.so"  $HTTPD_CONF > $HTTPD_CONF_TMP
       cp     $HTTPD_CONF_TMP $HTTPD_CONF
  fi
 }

 default_pre_remove
 remove_perl_module
 if   [ -f /etc/init.d/httpd  ]
 then bash /etc/init.d/httpd try-restart
 fi
}
