    stable 0.11.1 0.11 0.10.3 0.10.1 0.10.0
   require MesaLib SDL_image SDL_mixer SDL_net gtk+-v1.2
  category game
 attribute x11
       url $SOURCEFORGE_URL
    source freedroid/freedroidrpg-$VERSION.tar.bz2
  homepage http://freedroid.sourceforge.net
  estimate 300
      desc 'freedroidrpg is a merge of the paradroid Commdore 64 game and diablo.'

build(){
 unset LD_PRELOAD
 ./configure               \
  --build=$BUILD           \
  --sysconfdir=/etc        \
  --localstatedir=/var     \
  --prefix=${PREFIX:-/usr} \
 $OPTS           &&
 make            &&
 prepare_install &&
 make    install
}

