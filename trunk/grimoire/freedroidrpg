    stable 0.14.1 0.13 0.12.1
   require MesaLib SDL_image SDL_mixer SDL_net
# gtk+-v1.2
  category game
 attribute x11
    source $SOURCEFORGE_URL freedroid/freedroidRPG/freedroidRPG-${VERSION:0:4}/freedroidrpg-$VERSION.tar.gz
      info home  http://freedroid.sourceforge.net/
      info docs  http://www.freedroid.org/information/documentation/
      info mail  https://lists.sourceforge.net/lists/listinfo/freedroid-discussion
  estimate 600
      desc 'a merge of the paradroid Commdore 64 game and diablo'

build(){
 ./configure \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --prefix=/usr \
 $OPTS &&
 make  &&
 make install "DESTDIR=$DESTDIR"
}

