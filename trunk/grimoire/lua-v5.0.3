# kdelibs requires lua 5.0.x

    stable 5.0.3 5.0.2 5.0.1
   require kde-symlinks-v3 ncurses readline
  category development/interpreter
 attribute console kde3
    source http://www.lua.org/ftp/lua-$VERSION.tar.gz
  homepage http://www.lua.org/
      opts --prefix=/opt/kde3
  estimate 50
      desc 'lua-v5.0.3 provides lua for use with kde-v3'

build(){
 CFLAGS+=' -fPIC'

 sed -i "s:/usr/local:/usr:
         s:-O2:$CFLAGS:" config
 make            &&
 prepare_install &&
 make    install
}
