   VERSION=( 5.0.3 5.0.2 5.0.1 5.0 4.0.1 5.1.1 5.1 )
    IGNORE='^5\.[1-9]'
# kdelibs requires lua 5.0.x
  CATEGORY='development/interpreter'
 ATTRIBUTE='console kde3'
    SOURCE="lua-$VERSION.tar.gz"
       URL='http://www.lua.org/ftp/'
  HOMEPAGE='http://www.lua.org/'
       REQ='kde-symlinks-v3 ncurses readline'
      OPTS='--prefix=/opt/kde3'
  ESTIMATE='50'
      DESC='lua-v5.0.3 provides lua for use with kde-v3'

build(){
 CFLAGS+=' -fPIC'

 sed -i "s:/usr/local:/usr:
         s:-O2:$CFLAGS:" config
 make            &&
 prepare_install &&
 make    install
}
