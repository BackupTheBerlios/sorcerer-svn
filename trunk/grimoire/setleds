   version stable 1.15.2
#  version unstable 1.15.3
   require automake flex libtool perl
  category font utility/keyboard
 attribute console
#   source ftp://ftp.kernel.org/pub/linux/utils/kbd/kbd-$VERSION.tar.bz2
    source http://sources.silverice.org/setleds/$VERSION/kbd-$VERSION.tar.bz2
      info last  20110515
      info home  ftp://ftp.kernel.org/pub/linux/utils/kbd/
      desc 'setleds from kbd'

build(){
 ./configure --prefix=/usr --bindir=/bin &&
 make -C src setleds &&
 strip   src/setleds &&
 mkdir  -pvm 755                    $DESTDIR/bin  &&
 install -vm 755 src/setleds        $DESTDIR/bin/ &&
 mkdir  -pvm 755                    $DESTDIR/usr/man/man1 &&
 install -vm 644 man/man1/setleds.1 $DESTDIR/usr/man/man1/
}
