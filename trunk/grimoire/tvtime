# tvtime 1.0.2 will compile with gcc 4.0.2, but not gcc 4.1.0

    stable 1.0.2 1.0.1 0.99 0.9.15 0.9.14 0.9.12
   require freetype libXinerama libSM libXtst libXv libXxf86vm libpng
  optional DirectFB '' --without-directfb for output using linux frame buffer
  optional SDL      '' --without-sdl      for output using Simple Direct Layer
  optional lirc     '' ''                 to enable lirc remote control support
  category video/television
 attribute x11
    source $SOURCEFORGE_URL tvtime/tvtime/$VERSION/tvtime-$VERSION.tar.gz
  homepage http://tvtime.sourceforge.net
case $VERSION in
 1.0.2) use_gcc gcc-v4.0 ;;
esac
    CFLAGS='-O3'
  estimate 910
      desc 'tvtime is a high quality television application.
tvtime is a high quality TV viewing application that takes input
from a capture card, processes it, and displays it on the screen.
It supports multiple deinterlacing algorithms and video filters.'
