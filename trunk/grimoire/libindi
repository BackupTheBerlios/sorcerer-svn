   version stable 0.9.5 0.9.1
   require cfitsio cmake libnova libusb-compat zlib
      opts --enable-static=no
  category science/astronomy
 attribute library makej multilib-dual
    source $SOURCEFORGE_URL indi/indilib/${VERSION:0:3}/libindi_$VERSION.tar.gz
      info last 20120818
      info home http://indi.sourceforge.net/
      info mail 'http://sourceforge.net/mail/?group_id=90275'
 conflicts indilib
      desc 'protocol library for operating astronomical instrumentation'

build(){
default_build &&
if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
then mv $DESTDIR/usr/lib{,64}
     sed -i 's:libdir=/usr/lib:libdir=/usr/lib64:' \
         $DESTDIR/usr/lib64/pkgconfig/libindi.pc
fi
}
