   VERSION=( "0.76" )
  CATEGORY="utility/math"
 ATTRIBUTE="library"
    SOURCE="djbfft-$VERSION.tar.gz"
  HOMEPAGE="http://cr.yp.to/djbfft.html"
       URL="http://cr.yp.to/djbfft/"
      DESC="djbfft is an extremely fast library for floating-point convolution
djbfft is an extremely fast library for floating-point convolution.
The current version holds most of the speed records for 
double-precision FFTs on general-purpose computers."

build() {
 sed  -i  "s:/usr/local/djbfft:/usr:"              conf-home
 sed  -i  "s:-O1 -fomit-frame-pointer:${CFLAGS}:"  conf-cc

 case  $VERSION  in
  0.76)  patch  -p0  <  $SCRIPT_DIR/djbfft-0.76-errno.patch 
 esac

 make                &&
 prepare_install     &&
 make  setup  check
}

