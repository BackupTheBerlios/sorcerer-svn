   version stable 4.1.6
  optional libSM  '' --without-x for gif conversion programs
  optional libX11 '' --without-x for gif conversion programs
      opts --enable-static=no
  category graphic
 attribute library makej multilib-concurrent x11
    source $SOURCEFORGE_URL giflib/giflib-${VERSION:0:1}.x/giflib-$VERSION/giflib-$VERSION.tar.bz2
      info good 20120716
      info last 20071110
      info home http://giflib.sourceforge.net/
      desc 'library for LZW compressed GIF images'

case $VERSION in
 4.1.6)
   require automake libtool ;;
esac

build(){
 case $VERSION in
  4.1.6) aclocal; automake -acf; libtoolize -cf ;;
 esac
 if [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then opts --libdir=/opt/giflib/4/usr/lib64
 else opts --libdir=/opt/giflib/4/usr/lib
 fi
 opts --prefix=/opt/giflib/4/usr
 default_build
}
