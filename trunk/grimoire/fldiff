   VERSION=( "0.8" )
  CATEGORY="development"
 ATTRIBUTE="console new"
    SOURCE="fldiff-$VERSION-source.tar.gz"
       URL="http://www.easysw.com/~mike/fldiff"
  HOMEPAGE="http://www.easysw.com/~mike/fldiff"
       REQ="fltk" 
 ESTIMATE="7"
      DESC="fldiff is a graphical diff program.
It can show the differences between two files
or a file and a CVS or Subversion repository.
It was inspired by the xxdiff program."

build()  {
make             &&
prepare_install  &&
make    install
}
