    stable 0.2.b17 0.2.b16 0.2.b15 0.2.b14 0.2.b13 0.2.b12
   require mame
   inherit kde-v4
  category game
 attribute kde4
   require phonon qt-everywhere-opensource sdlmame
    source $SOURCEFORGE_URL qmc2/qmc2/$VERSION/qmc2-$VERSION.tar.bz2
  homepage http://qmc2.arcadehits.net/wordpress/
  estimate 200
      desc 'Frontend to SDLmame or maybe mame also'
build(){
(
export PATH=/opt/kde4/bin:$PATH
export QTDIR=/opt/kde4
export DATADIR="/usr/share"
export PREFIX="/usr"
make RSYNC="cp -d" &&
make install DESTDIR=$DESTDIR
) }
