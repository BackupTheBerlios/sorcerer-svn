   version stable 0.2.b20 0.2.b19 0.2.b18 0.2.b17 0.2.b16
   inherit kde-v4
  category game
 attribute kde4
   require mame phonon qt-everywhere-opensource
    source $SOURCEFORGE_URL qmc2/qmc2/$VERSION/qmc2-$VERSION.tar.bz2
      info last  20110630
  homepage http://qmc2.arcadehits.net/wordpress/
      desc 'Frontend to SDLmame or maybe mame also'
build(){
(
export PATH=/opt/kde4/bin:$PATH
export QTDIR=/opt/kde4
export DATADIR="/usr/share"
export PREFIX="/usr"
export LDFLAGS+=' -L/opt/kde4/lib64'
export L_FLAGS="$LDFLAGS"
make RSYNC="cp -d" &&
make install DESTDIR=$DESTDIR
) }
