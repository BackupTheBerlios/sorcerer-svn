# invokes rsync while compiling to download some stuff.

    stable 0.2.b12
   inherit kde-v4
  category game
 attribute new
 attribute kde4
 attribute broke
   require sdlmame qt-x11-opensource
    source $SOURCEFORGE_URL qmc2/qmc2/$VERSION/qmc2-$VERSION.tar.bz2
  homepage http://qmc2.arcadehits.net/wordpress/
  estimate 100
      desc 'Frontend to SDLmame'
build(){
export QTDIR=/opt/kde4
export DATADIR="/usr/share"
export PREFIX="/usr"
make &&
prepare_install &&
make install
}
