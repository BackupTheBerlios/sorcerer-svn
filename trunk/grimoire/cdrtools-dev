inherit  cdrtools
   VERSION=( "2.01a37" "2.01a36" "2.01a35" "2.01a34" )
    IGNORE="bin\|01a01"
    SOURCE="cdrtools-$VERSION.tar.bz2"
       URL="ftp://ftp.berlios.de/pub/cdrecord/alpha"
  EPROVIDE="cdrtools cdrtools,dev"
  ESTIMATE="1122"
 FRESHMEAT="cdrecord"


build()  {
  sed  -i  "66i#include <linux/compiler.h>
            66itypedef unsigned char u8;"  libscg/scsi-linux-sg.c
  make             &&
  prepare_install  &&
  make    install  INS_BASE=/usr
}
