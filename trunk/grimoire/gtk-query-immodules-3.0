    stable 3.0
   require gtk+
  category graphic/library
 attribute library gnome
      home http://www.gtk.org/
      docs http://www.gtk.org/documentation.html
   protect /etc/gtk-3.0/gtk.immodules
  volatile /etc/gtk-3.0/gtk.immodules
      desc 'generates and installs gtk+ input method modules file'

build(){
 mkdir -pvm 755            $DESTDIR/etc/gtk-3.0/
 gtk-query-immodules-3.0 > $DESTDIR/etc/gtk-3.0/gtk.immodules
 true
}
