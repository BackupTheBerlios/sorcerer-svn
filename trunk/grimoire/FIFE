# FIFE software authors expect boost to be installed
# with pkgconfig files.
# However boost authors do not do that.
# Therefore, FIFE authors have implemented methods
# for detecting installed boost
# that can NEVER detect installed boost.

  progress reposit
   version reposit 3728
  category graphic
 attribute library
 attribute broke
    source FIFE-$VERSION.tar
REPOSITORY=( ""
             "svn co -r 3728 http://fife.svn.cvsdude.com/engine/trunk trunk"
             "svn up -r 3728 http://fife.svn.cvsdude.com/engine/trunk trunk" )
      info home  http://www.unknown-horizons.org/
      info wiki  http://wiki.fifengine.net/
      info last  20110810
      desc 'engine for 2D realtime strategy simulation
game engine used for unknown horizons'

build(){ scons DESTDIR=$DESTDIR --prefix=/usr fife-python install-python; }
