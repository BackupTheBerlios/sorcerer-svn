    stable 0.1.5c-src 0.1.5
   require SDL_image SDL_ttf openal physfs
  category game
 attribute x11
    source http://www.icculus.org/excido/excido-$VERSION.tar.bz2
  homepage http://www.icculus.org/excido/
      desc 'OpenGL first-person-shooter with vehicles'

build(){
CC="CC=g++ -ansi $CXXFLAGS -L/usr/X11R6/lib"

make "$CC" &&
make install "PREFIX=$DESTDIR/usr"
}
