   version stable 1.9.15
   require giflib gtk+-v1.2 libpng tiff
      opts --enable-static=no
  category graphic
 attribute gnome library makej multilib-dual x11
#attribute multilib-fail
    source $GNOME_URL sources/imlib/1.9/imlib-$VERSION.tar.bz2
      info home  http://enlightenment.org/
      desc 'replacement library for libraries like libXpm'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] &&
      [[ $CFLAGS   =~ -m32   ]]
 then opts --x-libraries=/usr/lib
 fi

 ./configure --prefix=/usr --sysconfdir=/etc/imlib $OPTS &&
 make &&
 make install DESTDIR=$DESTDIR
}
