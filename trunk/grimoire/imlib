   VERSION=( "1.9.14" "1.9.13" )
  CATEGORY="graphic"
 ATTRIBUTE="library x11"
    SOURCE="sources/imlib/1.9/imlib-$VERSION"
  HOMEPAGE="http://enlightenment.org"
       URL="$GNOME_URL"
       REQ="autoconf automake gtk+-v1.2 jpeg libtool libpng libungif tiff zlib"
  ESTIMATE="864"
      DESC="imlib is an advanced replacement library for libraries like libXpm.

imlib is an advanced replacement library for 
libraries like libXpm that provides many more 
features with much greater flexibility and speed.
"


build() {
./configure  --prefix=/usr            \
             --sysconfdir=/etc/imlib  &&
make                                  &&
prepare_install                       &&
make    install
}
