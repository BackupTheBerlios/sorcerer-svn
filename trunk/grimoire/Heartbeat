# init-scripts installed by source might not be Sorcerer compatible.
# multilib-fail because glue is multilib-fail

# To use Heartbeat a spell for pacemaker is also required.
# However, the download location for pacemaker is not easily found.

   version stable 3.0.4
   require glue
      opts --enable-static=no
  category disk/file-system
 attribute console library makej multilib-fail server
    source http://hg.linux-ha.org/heartbeat-STABLE_${VERSION:0:1}_${VERSION:2:1}/archive/STABLE-$VERSION.tar.bz2
      info good 20120528
      info home http://www.linux-ha.org/wiki/Main_Page
      info guide http://www.linux-ha.org/doc/users-guide/users-guide.html
      desc 'cluster infrastructure daemon'

build(){
 [ -f configure ] || ./bootstrap
 default_build
}
