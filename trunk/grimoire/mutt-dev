   VERSION=( "1.5.6i" "1.5.5.1i" "1.5.4i" )
  CATEGORY="email"
 ATTRIBUTE="client console"
    SOURCE="mutt-$VERSION.tar.bz2"
  HOMEPAGE="http://www.mutt.org"
       URL="ftp://ftp.mutt.org/mutt/devel"
   PROVIDE="email-client"
       REQ=( "ncurses"
             "openssl:--with-ssl::to enable ssl support for pop/imap" )
  EPROVIDE="mutt,dev mutt"
  ESTIMATE="202"
 FRESHMEAT="mutt"
      DESC="mutt-dev is a text-based MIME Email client.

mutt-dev is a small but very powerful text-based MIME mail client.
It is highly configurable, and is well-suited to the mail power 
user with advanced features like key bindings, keyboard macros, 
mail threading, regular expression searches, and a powerful 
pattern matching language for selecting groups of messages.
"

build()  {
  chmod  a+x  missing                           &&
  touch  README.UPGRADE                         &&
  ./configure  --build=$BUILD                   \
               --prefix=/usr                    \
               --sysconfdir=/etc                \
               --enable-pop                     \
               --enable-imap                    \
               --with-mailpath=/var/spool/mail  \
               $OPTS                            &&
  make                                          &&
  make  install
}
