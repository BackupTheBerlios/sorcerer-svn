    stable 20070115
   require gnutls iproute2
  category network/ipv6
 attribute client daemon new
    source http://www.sixxs.net/archive/sixxs/aiccu/unix/aiccu_$VERSION.tar.gz
      home http://www.sixxs.net/tools/aiccu/
      docs http://www.sixxs.net/faq/
  estimate 260
      desc 'ipv6 tunnel software from sixxs'

build(){
make &&
mkdir -pv       $DESTDIR/usr/share/doc/aiccu &&
cp    -av doc/* $DESTDIR/usr/share/doc/aiccu &&
mkdir -p        $DESTDIR/{etc,/usr/sbin}     &&
cp unix-console/aiccu $DESTDIR/usr/sbin &&
cp -av $SCRIPT_DIR/networks.d $DESTDIR/etc/ &&
cp doc/aiccu.conf             $DESTDIR/etc &&
chmod +x                      $DESTDIR/etc/networks.d/links/aiccu
}
