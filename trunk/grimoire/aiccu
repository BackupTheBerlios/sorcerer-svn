   VERSION=( 20070115 )
  CATEGORY='network/ipv6'
 ATTRIBUTE='client daemon new'
    SOURCE="aiccu_${VERSION}.tar.gz"
       URL='http://www.sixxs.net/archive/sixxs/aiccu/unix/'
  HOMEPAGE='http://www.sixxs.net/'
       REQ='gnutls iproute2'
  ESTIMATE='260'
      DESC="aiccu provide ipv6 tunnel software for the sixxs tunel broker"

build() {
     make                              &&
     prepare_install                   &&
     mkdir -p /usr/share/doc/aiccu     &&
     cp -a doc/* /usr/share/doc/aiccu  &&
     cp unix-console/aiccu /usr/sbin   &&
     cp  -av  $SCRIPT_DIR/networks.d  /etc/  &&
     cp doc/aiccu.conf /etc
}


