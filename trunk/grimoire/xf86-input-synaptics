# Version 1.1.0 requires libXi 1.2.1
    stable 1.2.0 1.1.3 1.1.0
  unstable 1.2.2 1.2.1 1.2.0
   require libXtst xorg-server
  category xorg/driver
 attribute X11R7 x11
       url $XORG_URL
    source driver/xf86-input-synaptics-$VERSION.tar.bz2
  estimate 200

build(){
 FDI=/usr/share/hal/fdi/policy/10osvendor

 default_build                &&
 install -d              $FDI &&
 install -m644 fdi/*.fdi $FDI
}
