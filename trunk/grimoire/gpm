   VERSION=( "1.20.1" "1.20.0" )
  CATEGORY="utility"
 ATTRIBUTE="console"
    SOURCE="gpm/gpm-$VERSION.tar.bz2"
  HOMEPAGE="ftp://arcana.linux.it/pub"
       URL="ftp://arcana.linux.it/pub
            ftp://ftp.schottelius.org/pub/linux"
 CONFLICTS="imwheel"
       REQ="ncurses"
  ESTIMATE="106"
      DESC="GPM is a mouse server for the console
GPM (General Purpose Mouse) is a mouse server for the console
---
Edit /etc/init.d/gpm.sh to match your system setup."

build() {
	sed  -i  "s:doc contrib:contrib:"      Makefile.in
	sed  -i  "40iLIBS  = -lm"          src/Makefile.in

	./configure  	--prefix=/usr         \
								--sysconfdir=/etc     \
								--localstatedir=/var  &&
	make             &&
	prepare_install  &&
	make    install  &&

	if    [  !  -f                /etc/init.d/gpm.sh  ]
	then  cp  $SCRIPT_DIR/gpm.sh  /etc/init.d                  
	fi
}

pre_remove() {
	default_pre_remove
	PID="/var/run/gpm.pid"

	if  [  -f  ${PID}  ];  then 
		/etc/init.d/gpm.sh  stop
	fi
}

