  category network/chat
 attribute gnome
    source $GNOME_URL sources/xchat-gnome/${VERSION:0:4}/xchat-gnome-$VERSION.tar.bz2
      info home http://www.gnome.org
      opts --enable-static=no
      desc 'IRC client for gnome'
