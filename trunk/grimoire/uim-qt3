    stable 1.5.3 1.5.1
   require uim
 category input
 attribute console library x11
    source http://uim.googlecode.com/files/uim-$VERSION.tar.bz2
  homepage http://uim.freedesktop.org/wiki/
      vurl http://code.google.com/p/uim/
      opts --enable-dict --enable-static=no
      opts --with-qt --with-qt-immodule
      opts --prefix=/opt/kde3
# --with-qt4-immodule
  estimate 2400
      desc 'uim is a multilingual input method library.
The project goal is to provide a flexible
development platform and useful user environment for input methods.'

build(){
 extra_install(){
  ldconfig
  mkdir   -p                            /etc/bash.d/noninteractive
  # install -m 755 $SCRIPT_DIR/uim-qt3  /etc/bash.d/noninteractive
 }

 default_build &&
   extra_install
}
