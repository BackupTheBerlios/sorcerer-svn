   version stable 1999
   require cpio perl
  category archive
 attribute console
    source http://www.iagora.com/~espel/rpm2cpio
      info home http://www.freshports.org/archivers/rpm2cpio/
      desc 'converts .rpm files for use with cpio.'

build(){
[[ -e rpm2cpio ]] &&
mkdir -p $DESTDIR/usr/bin &&
install -vm 755 rpm2cpio $DESTDIR/usr/bin
}


pre_build(){
 default_pre_build
 cp $SOURCE $BUILD_DIR
}
