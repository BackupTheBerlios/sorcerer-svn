    stable 1999
   require cpio perl
  category archive
 attribute console
    source http://www.iagora.com/~espel/rpm2cpio
  homepage http://www.freshports.org/archivers/rpm2cpio/
      desc 'rpm2cpio converts .rpm files for use with cpio.'

build(){
[ -e rpm2cpio ] &&
prepare_install &&
install -vm 755 rpm2cpio /usr/bin
}


pre_build(){
 default_pre_build
 cp  $SOURCE_CACHE/$SPELL/$VERSION/$SOURCE $BUILD_DIR
}
