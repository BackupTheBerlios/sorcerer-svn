   VERSION=( "1999" )
  CATEGORY="archive"
 ATTRIBUTE="console"
    SOURCE="rpm2cpio"
#       URL="ftp://ftp.freebsd.org/pub/FreeBSD/ports/distfiles"
       URL="http://www.iagora.com/~espel"
  HOMEPAGE="http://www.freshports.org/archivers/rpm2cpio"
       REQ="cpio perl"
  ESTIMATE="5"
      DESC="rpm2cpio converts .rpm files for use with cpio."


build() {
 [        -e        rpm2cpio  ]  &&
 prepare_install                 &&
 install  -m  0755  rpm2cpio /usr/bin
}


pre_build() {
 default_pre_build
 cp  $(  guess_filename  $SOURCE  )  $BUILD_DIR
}

