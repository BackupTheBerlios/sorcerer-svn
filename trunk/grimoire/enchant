    stable 1.6.0 1.5.0 1.4.2
   require aspell dbus-glib zlib
      opts --enable-static=no
  category utility/editor
 attribute console library
    source http://www.abisource.com/downloads/enchant/$VERSION/enchant-$VERSION.tar.gz
      vurl http://www.abisource.com/projects/enchant/
  homepage http://www.abisource.com/enchant/
  estimate 700
      desc 'a spell checking library and console program'

build(){
 case $VERSION in
  1.6.0) sed -i 's:-L$aspell_prefix/lib ::
                 s:-L${aspell_prefix}/lib ::' configure ;;
 esac
 default_build
}
