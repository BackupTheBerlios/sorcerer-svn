   VERSION=( "1.0.3" "1.0.2" "1.0.0" )
    IGNORE="2-\|wq3dm"
  CATEGORY="documentation"
 ATTRIBUTE="console"
    SOURCE="wvware/wv-$VERSION.tar.gz"
  HOMEPAGE="http://wvware.sourceforge.net"
# can use libxml2 in place of expat.
       REQ="expat glib libpng"
       URL="$SOURCEFORGE_URL"
  ESTIMATE="294"
      DESC="wv is a library for convering Microsoft Word formats to HTML
wv (formerly known as MSWordView) is a library that
converts the Microsoft Word 2000, 97, 95 and 6 file
formats into HTML, which can then be read with a browser.
It also allows other programs access to word documents
for the purpose of converting them to other formats and
is currently being used by Abiword as its word importer."

build() {
 # uses expat or libxml2
 #            --with-libxml2        \
 ./configure  --build=$BUILD        \
        --prefix=/usr         \
        --sysconfdir=/etc     \
        --localstatedir=/var  \
        --with-expat          \
        --with-glib           \
        $OPTS                 &&
 make                               &&
 make  install
}

