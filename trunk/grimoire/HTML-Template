   VERSION=( "2.7" "2.6" "2.5" "2.4" )
  CATEGORY="web"
 ATTRIBUTE="perl-module"
    SOURCE="html-template/HTML-Template-$VERSION.tar.gz"
  HOMEPAGE="http://sam.tregar.com/software.html"
       URL="$SOURCEFORGE_URL"
  ESTIMATE="10"
      DESC="HTML-Template is a perl module to use HTML Templates from CGI scripts.

HTML-Template is a perl module for using HTML templates in CGI scripts.
Allows for a clean separation of Perl code and HTML markup.
"


build()  {
  perl  Makefile.PL  &&
  make               &&
  prepare_install    &&
  make    install
}
