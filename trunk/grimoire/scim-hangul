   version stable 0.3.2 0.3.0 0.2.2
   require libhangul scim
  category input
 attribute library x11
    source $SOURCEFORGE_URL scim/scim-hangul/$VERSION/scim-hangul-$VERSION.tar.gz
  homepage http://www.scim-im.org/
      desc 'scim module for inputting Korean
This engine supports 2 beolsik, 3 beolsik final,
3 beolsik 390, 3 beolsik no-shift and etc.
You can input chinese character (hanja)
with F9 key when you have preedit string.'

build(){
 case $VERSION in
  0.3.2) sed -i '1i#include <cstring>' $( find . -name \*.cpp ) ;;
 esac
 default_build
}
