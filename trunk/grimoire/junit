   version stable 4.10 4.8.2
   require jdk
  category development/compiler
 attribute console hidden makej
    source https://github.com/downloads/KentBeck/junit/junit-$VERSION.jar
CURL_PARAM='-k'
      info last 20120614
      info last 20120501
      info vurl http://github.com/KentBeck/junit/downloads
      info home http://junit.org/
      info mail http://tech.groups.yahoo.com/group/junit/
      desc 'java testing framework'

build(){
 [ -f $SOURCE ] &&
 mkdir  -pvm 755         $DESTDIR/opt/java/classes &&
 install -vm 644 $SOURCE $DESTDIR/opt/java/classes/junit.jar
}
