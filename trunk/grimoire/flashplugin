# this probably also comes with a strange rpath encoded into it.

case $HOSTTYPE in
 x86_64)
   version stable 11.1.102.55 11_rc1_install_lin_64_090611 11_b2_install_lin_64_080811 10_2_p3_64bit_linux_111710 092710 10.0.42.34
    source http://fpdownload.macromedia.com/get/flashplayer/pdc/$VERSION/install_flash_player_11_linux.x86_64.tar.gz
#   source http://download.macromedia.com/pub/labs/flashplatformruntimes/flashplayer11/flashplayer$VERSION.tar.gz
##  source http://download.macromedia.com/pub/labs/flashplayer10/flashplayer$VERSION.tar.gz
### source http://download.macromedia.com/pub/labs/flashplayer10/flashplayer_square_p2_64bit_linux_$VERSION.tar.gz
####source http://download.macromedia.com/pub/labs/flashplayer10/libflashplayer-$VERSION.linux-x86_64.so.tar.gz
      info home  http://labs.adobe.com/downloads/flashplayer10_square.html
      vurl http://labs.adobe.com/downloads/flashplayer10_square.html
;;
      *)
   version stable 11.1.102.55 11_rc1_install_lin_32_090611 11_b2_install_lin_32_080811 10_linux 10_2_p2_32bit_linux_011011 10.1 10.0.45.2
    source http://fpdownload.macromedia.com/get/flashplayer/pdc/$VERSION/install_flash_player_11_linux.i386.tar.gz
#   source http://download.macromedia.com/pub/labs/flashplatformruntimes/flashplayer11/flashplayer$VERSION.tar.gz
##  source http://fpdownload.macromedia.com/get/flashplayer/current/install_flash_player_$VERSION.tar.gz
### source http://download.macromedia.com/pub/labs/flashplayer10/flashplayer$VERSION.tar.gz
####source http://fpdownload.macromedia.com/get/flashplayer/current/install_flash_player_${VERSION/.*}_linux.tar.gz
      info home  http://labs.adobe.com/technologies/flashplayer10/
;;
esac
   require firefox
  category network/web
 attribute archive_off hidden seamonkey-plugin x11
      info last 20111207
      desc 'Macromedia Flash player plugin for mozilla and firefox'
   disable scavenge
   disable sdelta

build(){
 local LIBDIR=/usr/lib
 case $HOSTTYPE in
  x86_64) LIBDIR+=64 ;;
 esac
 local PD=$DESTDIR$LIBDIR/mozilla/plugins

 [ -f libflashplayer.so ] &&
 mkdir   -pvm 755                   $PD
 install  -vm 644 libflashplayer.so $PD
}
