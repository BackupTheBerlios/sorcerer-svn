   VERSION=( "7.0.63.0" "7.0.25.0" )
  CATEGORY="network/web"
 ATTRIBUTE="x11 noheal new"
    SOURCE="current/install_flash_player_${VERSION:0:1}_linux.tar.gz"
       URL="http://fpdownload.macromedia.com/get/flashplayer/"
  HOMEPAGE="http://www.macromedia.com/shockwave/"
       REQ="mozilla"
  ESTIMATE="5"
      DESC="flashplugin provides Macromedia Flash player plugin for mozilla"

build() { 
 sed  -i  's:^read cont:#read cont:'  flashplayer-installer	&&

 prepare_install						&&
 echo -e  "/usr/lib/mozilla\ny\nn\n"  |  ./flashplayer-installer
}

