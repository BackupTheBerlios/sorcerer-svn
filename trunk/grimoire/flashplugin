   VERSION=( "9" "beta_112006" "beta_101806" "7.0.68" "7.0.63.0" "7.0.25.0" )
# I do not know how to make this update properly because
# the software author keeps releasing new versions of it
# without changing the download filename.
  CATEGORY="network/web"
 ATTRIBUTE="x11 seamonkey-plugin new"
    SOURCE="install_flash_player_${VERSION}_linux.tar.gz"
       URL="http://fpdownload.macromedia.com/get/flashplayer/current/"
  HOMEPAGE="http://www.adobe.com/shockwave/download/download.cgi?P1_Prod_Version=ShockwaveFlash&promoid=BIOW"
       REQ="mozilla"
  ESTIMATE="5"
      DESC="flashplugin provides Macromedia Flash player plugin for mozilla"
disable scavenge
disable sdelta


build()  {
  [  -f  libflashplayer.so  ]  &&
  prepare_install  &&
  install  -m 0644 libflashplayer.so  /usr/lib/mozilla/plugins/
}


build_old() { 
  sed  -i  's:^read cont:#read cont:'  flashplayer-installer  &&
  prepare_install  &&
  echo -e  "/usr/lib/mozilla\ny\nn\n"  |
  ./flashplayer-installer
}
