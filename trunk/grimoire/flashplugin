    stable 10.0.42.34 10.0.32.18 10.0.15.3 10.0.12.36 9 beta_112006 beta_101806 7.0.68 7.0.63.0 7.0.25.0
   require mozilla
  category network/web
 attribute x11 seamonkey-plugin hidden
    source http://fpdownload.macromedia.com/get/flashplayer/current/install_flash_player_${VERSION/.*}_linux.tar.gz
  homepage 'http://www.adobe.com/shockwave/download/download.cgi?P1_Prod_Version=ShockwaveFlash&promoid=BIOW'
      desc 'Macromedia Flash player plugin for mozilla and firefox'
disable scavenge
disable sdelta


build(){
 [ -f libflashplayer.so ] &&
 prepare_install &&
 install -vm 644 libflashplayer.so /usr/lib/mozilla/plugins/
}
