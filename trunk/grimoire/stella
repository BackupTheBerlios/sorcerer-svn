   VERSION=( "1.4.1" "1.4" )
    IGNORE="cvs"
  CATEGORY="game emulator"
 ATTRIBUTE="x11"
    SOURCE="stella/stella-$VERSION-src.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://stella.sourceforge.net"
       REQ="SDL"
  ESTIMATE="67"
     SHORT="stella is an Atari 2600 emulator."


build()  {
cd      src/build
make    linux-gl  &&
prepare_install   &&
install  -s  -D  -m 0755 -o root -g root  stella  /usr/games/stella
}
