    stable 1.1-1 1.0-1
  category utility
 attribute console
    source http://ahorvath.web.cern.ch/ahorvath/mbw/mbw-$VERSION.tar.gz
  homepage http://ahorvath.web.cern.ch/ahorvath/mbw/
      desc 'mbw determines available memory bandwidth in a machine'

build(){
make &&
prepare_install &&
install -vm 755 mbw   /usr/bin/ &&
install -vm 644 mbw.1 /usr/share/man/man1
}
