   VERSION=( "1.1-1" "1.0-1" )
  CATEGORY="utility"
 ATTRIBUTE="console utility new"
    SOURCE="mbw-$VERSION.tar.gz"
  HOMEPAGE="http://ahorvath.web.cern.ch/ahorvath/mbw/"
       URL="http://ahorvath.web.cern.ch/ahorvath/mbw/"
  ESTIMATE="10"
      DESC="mbw determines available memory bandwidth in a machine"

build() {
  make             &&
  prepare_install  &&
  install  -v  -m 0755  mbw    /usr/bin/  &&
  install  -v  -m 0644  mbw.1  /usr/share/man/man1
}
