   VERSION=( "1.0-1" )
  CATEGORY="utility"
 ATTRIBUTE="console utility new"
    SOURCE="mbw-$VERSION.tar.gz"
  HOMEPAGE="http://ahorvath.web.cern.ch/ahorvath/mbw"
       URL="${HOMEPAGE}/"
  ESTIMATE="6"
      DESC="mbw determines available memory bandwidth in a machine"

build() {
  make			&&
  prepare_install	&&
  install -v -m 0755 -D  $BUILD_DIR/mbw		/usr/bin/mbw		&&
  install -v -m 0644 -D  $BUILD_DIR/mbw.1	/usr/share/man/man1/mbw.1
}
