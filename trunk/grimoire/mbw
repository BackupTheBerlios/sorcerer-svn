   version stable 1.1-1 1.0-1
  category utility
 attribute console
    source http://ahorvath.web.cern.ch/ahorvath/mbw/mbw-$VERSION.tar.gz
      info home http://ahorvath.web.cern.ch/ahorvath/mbw/
      desc 'determines available memory bandwidth in a machine'

build(){
make &&
mkdir -p $DESTDIR/usr/{bin,usr/share/man/man1} &&
install -vm 755 mbw   $DESTDIR/usr/bin/ &&
install -vm 644 mbw.1 $DESTDIR/usr/share/man/man1
}
