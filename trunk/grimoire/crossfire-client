inherit crossfire
    SOURCE="crossfire/crossfire-client-$VERSION.tar.gz"
       REQ=( "gtk+"
             "crossfire-client-images:::instead of downloading images during play"
             "crossfire-client-sounds:::for sound effects"
             "SDL_image::--disable-sdl:for SDL support" )
      OPTS="$OPTS --with-sound-dir=/usr/share/crossfire-client/sounds"
  ESTIMATE="430"
      DESC="crossfire-client provides the client for a multi-player graphical MUD."

build_old()  {
  SD="/usr/share/crossfire-client/sounds"
  sed  -i  "s:/usr/local/lib/sounds:$SD:"  sound-src/sounds.dist
  OPTS="$OPTS --with-sound-dir=$SD --disable-alsa --disable-alsa9"
  default_build
}
