    stable 2.0.22 2.0.21 2.0.20
   require SDL
      opts --enable-static=no
  category graphic/library
 attribute library x11
    source http://www.ferzkopp.net/Software/SDL_gfx-2.0/SDL_gfx-$VERSION.tar.gz
  homepage http://www.ferzkopp.net/mambo/index.php
 freshmeat sdl_gfx
  estimate 320
      desc 'high quality graphics library'

build(){
case $HOSTTYPE in
 x86_64) OPTS+=' --disable-mmx' ;;
esac
default_build
}
