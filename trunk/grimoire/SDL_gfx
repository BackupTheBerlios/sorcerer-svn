   VERSION=( "2.0.11" "2.0.10" "2.0.9" "2.0.8" "2.0.7" "2.0.3" )
  CATEGORY="graphic"
 ATTRIBUTE="library x11"
  HOMEPAGE="http://www.ferzkopp.net/~aschiffler/Software/SDL_gfx-2.0/index.html"
       URL="http://www.ferzkopp.net/~aschiffler/Software/SDL_gfx-2.0"
       REQ="SDL"
 FRESHMEAT="sdl_gfx"
  ESTIMATE="43"
      DESC="SDL_gfx is a high quality graphics library.

SDL_gfx library offers several components: 
Graphic Primitives, Rotozoomer, Framerate control, and MMX image filters.
The Primitives component provides basic drawing routines: pixels, 
hlines, vlines, lines, aa-lines, rectangles, circles, ellipses, 
polygons, and an 8x8 pixmap font for drawing onto any SDL Surface.
Full alpha blending, hardware surface locking, 
and all surface depths are supported.
The Rotozoomer can use interpolation for high quality output.
"


build() {
# unset  CFLAGS
case  $VERSION  in
  2.0.7)
    if    [  -n           "$BUILD_DIR"  ]  &&
          [  -d            $BUILD_DIR   ]
    then  touch  $(  find  $BUILD_DIR   |  grep  -v  ".ccache"  )
    fi  ;;
esac

./configure  --build=$BUILD        \
             --prefix=/usr         \
             --sysconfdir=/etc     \
             --localstatedir=/var  \
             $OPTS                 &&
make                               &&
prepare_install                    &&
make    install
}
