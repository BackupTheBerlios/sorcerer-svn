   version stable 2.0.23 2.0.22 2.0.21 2.0.20
   require SDL
      opts --enable-static=no
  category graphic/library
 attribute library makej multilib-concurrent optimize x11
    source http://www.ferzkopp.net/Software/SDL_gfx-2.0/SDL_gfx-$VERSION.tar.gz
      info last 20111204
      info home http://www.ferzkopp.net/joomla/software-mainmenu-14/4-ferzkopps-linux-software/19-sdlgfx
 freshmeat sdl_gfx
      desc 'high quality graphics library'

build(){
 case $HOSTTYPE in
  x86_64) OPTS+=' --disable-mmx' ;;
 esac
 LC_ALL=C grep -lr "/usr/bin:" * |
 xargs sed -i 's,PATH="$prefix/bin:$prefix/usr/bin:$PATH",PATH="$PATH",'
 default_build
}
