inherit ggz
unset  REQ  OPT
    SOURCE="ggz-server-$VERSION.tar.gz"
       REQ="expat ggz-grubby ggz-utils libggz popt"
      OPTS="$OPTS --with-database=db4"
  EPROVIDE="ggz,server"
  ESTIMATE="506"
      DESC="ggz-server provides servers for GGZ"


build()  {
  case  $VERSION  in
    0.0.9)  sed    -i   "s:create_4002:create:"  configure  ;;
  esac
  default_build
}
