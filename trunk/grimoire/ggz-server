inherit ggz
       REQ=( 'avahi ggz-grubby ggz-utils'
             'sqlite:::for sqlite database support' )
      OPTS+=' --with-database=db4'
  ESTIMATE='1480'
      DESC='ggz-server provides servers for GGZ'

build(){
 case $VERSION in
  0.0.14.1) sed -i '1i#include <cstring>' $( find . -name \*.cpp ) ;;
 esac
 default_build
}

