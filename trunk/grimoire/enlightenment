    stable 0.16.999.063 0.16.999.062
   require e_dbus ecore edje efreet
  optional Linux-PAM
      opts --enable-static=no
  category window-manager
 attribute x11 broke
  homepage http://www.enlightenment.org/
    source http://download.enlightenment.org/snapshots/2009-12-02/enlightenment-$VERSION.tar.bz2
     wmbin /usr/bin/enlightenment_start
  estimate 6200
      desc 'themeable fast flexible X11 windows Manager
It is configurable as possible in both look and feel.
In addition, Enlightenment provides an applet API that 
provides functionality somewhere between the GNOME 
applet system and Dock Apps from Afterstep/WindowMaker.'


build_old(){
 ./configure       \
 --prefix=/usr     \
 --sysconfdir=/etc \
 --enable-fsstd    \
 $OPTS             &&
 make              &&
 prepare_install   &&
 make    install
}
