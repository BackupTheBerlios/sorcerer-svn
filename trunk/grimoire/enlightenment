   [  -z  "$VERSION"  ]  &&
   VERSION=( "0.16.7.2" "0.16.7.1" "0.16.7-0.65" "0.16.7-0.56" "0.16.6" )
    IGNORE="cvs\|x86_64"
  CATEGORY="window-manager"
 ATTRIBUTE="x11"
    SOURCE="enlightenment/enlightenment-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://www.enlightenment.org/pages/main.html"
       REQ=( "etheme-BrushedMetal-Tigert freetype imlib2"
             "libghttp:::for automatic enlightenment upgrades"
             "esound:::for enlightenment sound mixer"
             "epplets:::for useful gadgets"
             "edox-data:::for enlightenment documentation"
             "Eterm:::for terminal emulator"
             "etheme-BlueSteel:::for optional theme"
             "etheme-Ganymede:::for optional theme"
             "etheme-ShinyMetal:::for optional theme" )
  ESTIMATE="145"
      DESC="enlightenment is a themeable fast flexible X11 windows Manager.
It is configurable as possible in both look and feel.
In addition, Enlightenment provides an applet API that 
provides functionality somewhere between the GNOME 
applet system and Dock Apps from Afterstep/WindowMaker."


build()  {
  ./configure  --prefix=/usr      \
               --sysconfdir=/etc  \
               --enable-fsstd     &&
  make                            &&
  prepare_install                 &&
  make    install
}


common_set()  {
  unset  REQ
  SOURCE="enlightenment/$SPELL-$VERSION.tar.gz"
}


case  $SPELL  in
  etheme-*)  VERSION=( "0.16-0.01" );  ESTIMATE="7";  CATEGORY="theme";  ATTRIBUTE="data"
             common_set;   DESC="$SPELL provides a theme for enlightenment."  ;;
 edox-data)  common_set;   DESC="$SPELL provides documentation for enlightenment."  ;;
   epplets)  common_set;   DESC="$SPELL provides gadgets for enlightenment."  ;;
esac
