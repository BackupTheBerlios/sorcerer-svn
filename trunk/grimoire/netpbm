   VERSION=( "10.26.28" "10.26.27" "10.26.26" "10.26.25" "10.26.24" "10.26.23" "10.26.22" "10.26.21" "10.26.20" )
    IGNORE="^10\.[2-3][0-9]$"
# Release Numbering from http://netpbm.sourceforge.net
# Latest Netpbm releases are two numbers, e.g. 9.11, 
# and Stable Netpbm releases are three numbers, e.g. 9.11.1.

# cc -Wl,-s -o pnmtopng pnmtopng.o pngtxt.o \
#           `/usr/src/sorcery/netpbm/netpbm-10.26.28/buildtools/libopt /usr/src/sorcery/netpbm/netpbm-10.26.28/lib/libnetpbm.so  libpng.so libz.so` \
#           -lm
# libopt results: ' /usr/src/sorcery/netpbm/netpbm-10.26.28/lib/libnetpbm.so -lpng -lz'
# /usr/bin/../lib/libpng.so: undefined reference to `png_read_filter_row'
# /usr/bin/../lib/libpng.so: undefined reference to `png_mmx_support'
# /usr/bin/../lib/libpng.so: undefined reference to `png_combine_row'
# /usr/bin/../lib/libpng.so: undefined reference to `png_do_read_interlace'
# collect2: ld returned 1 exit status
# make[2]: *** [pnmtopng] Error 1
# make[2]: Leaving directory `/usr/src/sorcery/netpbm/netpbm-10.26.28/converter/other'

# I know this is broken, but not precisely why or how to circumvent it.
# Working on a fix...

  CATEGORY="graphic"
 ATTRIBUTE="console"
    SOURCE="netpbm/netpbm-$VERSION.tgz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://netpbm.sourceforge.net"
       REQ=( "jpeg libpng perl tiff"
             "svgalib:::for output to svgalib" )
  ESTIMATE="4073"
      DESC="netpbm contains 220 programs that convert graphics formats.
netpbm contains over 220 programs that convert from one graphics
format to another and do simple editing and analysis of images.
Over 80 graphics formats are handled, including JPEG,
PNG, GIF, TIFF, BMP, XWD, XBM, G3 fax, and special
formats used by digital cameras and handheld computers.
Over 40 editing functions include scaling, cropping,
quantization and dithering, colorizing and
uncolorizing, blurring, and dimming."

build()  {
make_install()  {
  cd       /tmp/netpbm
  cp  -av   bin/*             /usr/bin      2>/dev/null
  cp  -av   include/*         /usr/include  2>/dev/null
  cp  -av   lib/*             /usr/lib      2>/dev/null
  cp  -av   link/libnetpbm.a  /usr/lib      2>/dev/null
  cp  -av   man/*             /usr/man      2>/dev/null
  cd  -
  rm  -rf  /tmp/netpbm
}

case  $(  arch  )  in
  x86_64)
        export CFLAGS="$CFLAGS -fPIC"
        export CXXFLAGS="$CXXFLAGS -fPIC"
  ;;
esac

echo  -e  "
gnu
regular
shared
y

libjpeg.so
/usr/include
libtiff.so
/usr/include
libpng.so
/usr/include
libz.so
/usr/include


"  |
./configure             &&
make  "CFLAGS=$CFLAGS"  &&
rm  -rf  /tmp/netpbm    &&
make     package        &&
prepare_install         &&
   make_install
}
