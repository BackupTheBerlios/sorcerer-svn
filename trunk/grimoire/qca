    stable 2.0.1 2.0.0
   require qt-x11-opensource
  category security/encryption
 attribute kde4 library
    source http://delta.affinix.com/download/qca/${VERSION:0:3}/qca-$VERSION.tar.bz2
  homepage http://delta.affinix.com/qca/
  estimate 700
      desc 'qca provides the QT cryptographic architecture'

build(){
export PATH="/opt/kde4/bin:$PATH"

./configure --prefix=/opt/kde4 --release &&
make &&
prepare_install &&
make    install
}
