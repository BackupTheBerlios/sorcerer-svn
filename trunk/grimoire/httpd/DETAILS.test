   VERSION=( "2.0.42" "2.0.40" "2.0.39" "2.0.36" )
  CATEGORY="web"
 ATTRIBUTE="console server"
 SOURCE[0]="httpd/httpd-$VERSION"
 SOURCE[1]="mod_perl-1.99_05.tar.gz"
  HOMEPAGE="http://httpd.apache.org"
    URL[0]="$APACHE_URL"
    URL[1]="http://perl.apache.org/dist"
       REQ="db mm"
    OPT[0]="openssl:::for https enabled server"
    OPT[1]="perl:::for mod_perl enabled server"
    OPT[2]="gdbm:::for unix like dbm support"
    OPT[3]="expat:::for fast non-validating stream-oriented XML parsing"
  EPROVIDE="web-server apache"
 FRESHMEAT="apache"
     SHORT="apache is a popular HTTP server."
cat << EOF
Apache is the world's most popular HTTP server, 
being quite possibly the best around in terms 
of functionality, efficiency, security and speed.
EOF
