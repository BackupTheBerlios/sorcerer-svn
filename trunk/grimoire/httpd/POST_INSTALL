recast()  {
  PRO="$(  get_provider    "$1"    )"
  if      [  -n            "$PRO"  ]  &&
          spell_installed  "$PRO"     &&
        ! spell_held       "$PRO"
  then  cast               "$PRO"
  fi
}

unlock_cast

recast  php
recast  mod_perl

/etc/init.d/apache.sh  stop
/etc/init.d/apache.sh  start
true
