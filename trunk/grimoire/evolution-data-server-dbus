# openldap support required for communicating with exchange servers
# No package 'libsoup-2.2' found
# Does not appear to be pleased with libsoup version 2.24.0
## augur from "/libsoup.*\.pc$"
#libsoup:/usr/lib/pkgconfig/libsoup-2.4.pc

    stable 2.20.0
  unstable 2.25.2
   require intltool libgnomeui libsoup openldap
  optional mozilla '' '' for mozilla-nss
  category network/email
 attribute gnome library
 attribute broke
       url $GNOME_URL
    source sources/evolution-data-server-dbus/${VERSION:0:4}/evolution-data-server-dbus-$VERSION.tar.bz2
  homepage http://gnome.org/projects/evolution/stable.shtml
      opts --with-openldap=yes
  estimate 7900
      desc 'evolution-data-server-dbus provides libraries needed by evolution'

build(){
export LDFLAGS+=' -Wl,-rpath,/usr/lib/mozilla -Wl,-rpath-link,/usr/lib/mozilla'
default_build
}
