   VERSION=( "4.0-test76" )
  CATEGORY="network/news"
 ATTRIBUTE="client console broken"
# May want to interact during build()
    SOURCE="trn/trn-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
       REQ="ncurses"
  HOMEPAGE="http://trn.sourceforge.net"
  ESTIMATE="97"
      DESC="trn is a threaded news reader.
trn is Threaded RN, a newsreader that uses an article's
references to order the discussions in a very natural,
reply-ordered sequence called threads."

build() {
 ./Configure  -Dprefix=/usr -d  &&
 make             &&
 prepare_install  &&
 make    install  &&
 make    installclean
}

