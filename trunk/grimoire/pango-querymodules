   version stable current
   require pango
  category graphic/library
 attribute archive_off library gnome
      info home http://www.pango.org
   protect /etc/pango/pango.modules
  volatile /etc/pango/pango.modules
      desc 'registers pango modules'

build(){
mkdir -p             $DESTDIR/etc/pango
pango-querymodules > $DESTDIR/etc/pango/pango.modules
true
}
