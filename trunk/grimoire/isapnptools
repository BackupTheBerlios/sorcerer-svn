#     opts --disable-static --enable-shared
# --disable-static has no effect
# case $VERSION in
#  1.26) use_gcc gcc-v3.4 ;;
# esac
# Patch takes care of compile problem.

    stable 1.26
  PVERSION=( 2.2.4 )
  category utility
 attribute console
    source ftp://ftp.demon.co.uk/pub/unix/linux/utils/isapnptools-$VERSION.tgz
    source $KERNEL_URL pub/software/utils/pciutils/pciutils-$PVERSION.tar.bz2
  homepage http://www.roestock.demon.co.uk/isapnptools/
  estimate 200
      desc 'tools to configure ISA devices'

build(){
 if    [ -n "${SOURCE[1]}" ]; then
  mkdir include/linux
   cp  pciutils-$PVERSION/lib/pci.h            include/linux
   cp  pciutils-$PVERSION/lib/{header,types}.h include
 fi
 case $VERSION in
  1.26) patch -p1 < $SCRIPT_DIR/isapnptools-1.26.patch ;;
 esac
 default_build &&
 ln -s libisapnp.so.1 $DESTDIR/usr/lib/libisapnp.so
}
