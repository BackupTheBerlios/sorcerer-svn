   VERSION=( "6.5" "6.4" "6.3" "6.2.1" "6.2" )
    IGNORE="serializer"
  CATEGORY="development/compiler"
 ATTRIBUTE="console"
    SOURCE="gdb/gdb-$VERSION.tar.bz2"
       URL="$GNU_URL"
  HOMEPAGE="http://sources.redhat.com/gdb"
       REQ="ncurses"
  ESTIMATE="2400"
      DESC="gdb is the GNU Debugger used for debugging
gdb is the GNU debugger a source-level debugger for
C, C++, Java, Modula-2, and several other languages."


build() {
export  CC=gcc

./configure           \
--prefix=/usr         \
--sysconfdir=/etc     \
--localstatedir=/var  \
$OPTS                 &&
make                  &&
prepare_install       &&
make    install
}
