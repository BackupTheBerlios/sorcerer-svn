    stable 7.2 7.1 7.0.1
   require expat ncurses zlib
  optional Python '' '' 'for python scripting support'
      opts --with-pic --enable-shared=yes
  category development/compiler
 attribute console
    source $GNU_URL gdb/gdb-$VERSION.tar.bz2
      home http://sources.redhat.com/gdb/
      docs http://sourceware.org/gdb/documentation/
#     mail http://sourceware.org/gdb/mailing-lists/
#      irc http://sourceware.org/gdb/irc/
  estimate 2600
      desc 'GNU Debugger
gdb is the GNU debugger a source-level debugger for
C, C++, Java, Modula-2, and several other languages.'


build(){
 export CC=gcc

 ./configure           \
  --prefix=/usr        \
  --sysconfdir=/etc    \
  --localstatedir=/var \
  $OPTS &&
 make   &&
 make install DESTDIR=$DESTDIR
}
