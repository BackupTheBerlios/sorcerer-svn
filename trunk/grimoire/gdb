# Does not compile with gcc version 4.4.0
    stable 7.0 6.8 6.7.1 6.7 6.6 6.5 6.4 6.3 6.2.1 6.2
  optional Python '' '' 'for python scripting support'
case $VERSION in
 6.8) use_gcc gcc-v4.2 ;;
esac
   require expat ncurses
  category development/compiler
 attribute console
       url $GNU_URL
    source gdb/gdb-$VERSION.tar.bz2
  homepage http://sources.redhat.com/gdb
  estimate 2600
      desc 'GNU Debugger
gdb is the GNU debugger a source-level debugger for
C, C++, Java, Modula-2, and several other languages.'


build(){
export CC=gcc

./configure          \
--prefix=/usr        \
--sysconfdir=/etc    \
--localstatedir=/var \
$OPTS                &&
make                 &&
prepare_install      &&
make    install
}
