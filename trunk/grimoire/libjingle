   VERSION=( 0.3.11 )
  CATEGORY='network/chat'
 ATTRIBUTE='library'
    SOURCE="tapioca-voip/libjingle-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://tapioca-voip.sourceforge.net'
       REQ='expat openssl'
case $VERSION in
 0.3.11) USE_GCC=gcc-v4.2 ;;
esac
  ESTIMATE='500'
      DESC='libjingle provides a library for the google talk voice protocol'

build(){
 case $VERSION in
  0.3.11) sed -i '1i#include <cstring>' talk/base/messagequeue.h \
                                        talk/base/physicalsocketserver.cc \
  ;;
 esac
 default_build
}
