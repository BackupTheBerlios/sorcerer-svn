   version stable 0.17
   require gtk+-v1.2 libxml
  optional gnome-libs '' '' for gnome support
  category development
 attribute gnome library
    source $GNOME_URL sources/libglade/0.17/libglade-$VERSION.tar.gz
      info home http://www.gnome.org
      opts --disable-gnomedb --disable-gtk-doc
 conflicts gtk-doc
      desc 'libglade-v0 is a library for loading glade interface files at runtime.'
