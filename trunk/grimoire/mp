# mp's version 5.2.2 QT support is broke and fails compilation.

   version stable 5.2.2
#  require ncurses
  optional gtk+-v3    ''            '--without-gtk'
# optional kdelibs-v4 '--with-kde4' '--without-kde4 --without-qt4'
      opts --without-kde4 --without-qt4
  category development/editor utility/editor
 attribute console makej
    source http://triptico.com/download/mp-$VERSION.tar.gz
      info last 20120409
      info home http://triptico.com/software/mp.html
      info mail mp-subscribe@lists.triptico.com
#     info vurl http://triptico.com/software/mp.html
   provide console-editor
      desc 'text editor and fully scriptable IDE'

build(){
 ./config.sh --prefix=/usr --with-pcre $OPTS &&
 make &&
 mkdir -pvm 755 "$DESTDIR"/usr/bin
 make install "DESTDIR=$DESTDIR"
}
