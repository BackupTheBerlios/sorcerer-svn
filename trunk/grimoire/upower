    stable 0.9.7 0.9.6 0.9.5
case $VERSION in
 0.9.6)
      opts --enable-introspection=no ;;
 0.9.5)
      opts --enable-introspection=no ;;
esac
   require libmobiledevice polkit
#  require polkit-gnome
      opts --disable-gtk-doc --disable-gtk-doc-html --disable-gtk-doc-pdf --disable-man-pages
  category disk
 attribute client library server
    source http://upower.freedesktop.org/releases/upower-$VERSION.tar.bz2
  homepage http://upower.freedesktop.org/
      opts --enable-static=no
  estimate 450
 conflicts DeviceKit-power
      desc 'abstraction for enumerating power devices,
listening to device events and querying history and statistics.
Any application or service on the system can access the
org.freedesktop.UPower service via the system message bus.
Some operations (such as suspending the system)
are restricted using PolicyKit.'
