
version_year_week  10
  CATEGORY="video-editor"
 ATTRIBUTE="x11 new"
    SOURCE="heroines/cinelerra-${VERSION}-src.tar"
REPOSITORY=("true"
            "svn co svn://cvs.cinelerra.org/repos/cinelerra/trunk/hvirtual"
            "svn up svn://cvs.cinelerra.org/repos/cinelerra/trunk/hvirtual")

  HOMEPAGE="http://cvs.cinelerra.org/"
       REQ=("yasm alsa-lib libdv OpenEXR libraw1394 faad2 libiec61883 lame fftw a52dec libx264 libvorbis faac ffmpeg"
           )
  ESTIMATE=""
      DESC="Cinelerra does primarily 3 main things: capturing, compositing, and editing audio and video with sample level accuracy. It's a seamless integration of audio, video, and still photos rarely experienced on a web server.
			CINERELA CV IS ONLY AVAILABLE THROUGH CVS"
			

build() {
	find -exec grep -- -lfftw3 {} \; -exec sed -i "s:-lfftw3:-lfftw3f:" {} \;
  ./autogen.sh &&
  default_build
}
  

