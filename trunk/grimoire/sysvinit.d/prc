#!/bin/bash

export  PATH="/sbin:/bin:/usr/sbin:/usr/bin"

export  PATH
umask   022
trap    ":" INT QUIT TSTP

RL=$1

parallelize() {
  for ((SEQ=0;SEQ<10;SEQ++));  do
    for  SCRIPT  in  /etc/rc.d/rc${RL}.d/$1${SEQ}*;  do
      if    [  -f  "$SCRIPT"  ]  && 
            [  -x  "$SCRIPT"  ]
      then          $SCRIPT  $2 &
      fi
    done
    wait
  done
}

parallelize K stop
parallelize S start
