build() {
./configure  --build=$BUILD        \
             --prefix=/usr         \
             --sysconfdir=/etc     \
             --localstatedir=/var  \
             $OPTS                 &&
make             bindir=/usr/games   &&
prepare_install                      &&
make    install  bindir=/usr/games
}
