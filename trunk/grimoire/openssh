   protect /etc/ssh
   exclude /etc/ssh/ssh_host_dsa_key
   exclude /etc/ssh/ssh_host_dsa_key.pub
   exclude /etc/ssh/ssh_host_key
   exclude /etc/ssh/ssh_host_key.pub
   exclude /etc/ssh/ssh_host_rsa_key
   exclude /etc/ssh/ssh_host_rsa_key.pub
   exclude /var/empty
#conflicts libsepol
#conflicts libselinux
      desc 'client and server for encrypted remote logins and file transfers
openssh is 100% complete SSH protocol version 1.3, 1.5 and 2.0
implementation and includes sftp client and server support.'

build(){
 use_pam(){ sed -i 's:#UsePAM no:UsePAM yes:' $DESTDIR/etc/ssh/sshd_config; }

 keep_config(){
  cp  -a $DESTDIR/etc/ssh/sshd_config{,_keep}
  sed -i 's:#PidFile /var/run/sshd.pid:PidFile /var/run/sshd_keep.pid:
          s:#Port 22:Port 30:' $DESTDIR/etc/ssh/sshd_config_keep
 }

 if spell_installed libselinux; then OPTS+=' --with-selinux'; fi
 if spell_installed Linux-PAM;  then OPTS+=' --with-pam'; fi

 # I have no idea how long this may be required.
 # it probably will not be fixed by the openssh team
 # it may be a bug caused by uClibc?
 case $MACHTYPE in
  *-uclibc) sed -i '1i#define _PTHREAD_H' auth-pam.c ;;
 esac

 ./configure           \
 --prefix=/usr         \
 --bindir=/bin         \
 --sbindir=/sbin       \
 --sysconfdir=/etc/ssh \
 --with-md5-passwords  \
 $OPTS &&
 make  &&
 make install DESTDIR=$DESTDIR &&
 keep_config &&
 use_pam
}

current(){
 case $VERSION in
  5.8p2) grep -qx 'UsePAM yes' /etc{,.ori}/ssh/sshd_config 2>/dev/null ;;
 esac
}
