# 1.0.5 source tarball might be missing files and therefore fails compilation
# 1.0.4 fails compilation with same error as 1.0.5
# What *.pcx files are missing and not included in the source tree?

   version stable 1.0.5 1.0.4 1.0.3
   require SDL icu4c fontconfig grfcodec libpng lzo2 opengfx openmsx opensfx
  category game
 attribute x11
 attribute broke
    source http://binaries.openttd.org/releases/$VERSION/openttd-$VERSION-source.tar.xz
  homepage http://www.openttd.org/en/
      vurl http://www.openttd.org/en/download-stable
  estimate 450
      desc 'open transport tycoon deluxe video game'

build(){
./configure       \
--prefix-dir=/usr \
--binary-dir=bin  &&
make &&
make install ROOT_DIR=$DESTDIR
}
