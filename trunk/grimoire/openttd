    stable 1.0.2 1.0.1 1.0.0
   require SDL icu4c fontconfig libpng lzo2 opengfx openmsx opensfx
  category game
 attribute x11
 attribute broke
    source http://binaries.openttd.org/releases/$VERSION/openttd-$VERSION-source.tar.bz2
  homepage http://www.openttd.org/en/
      vurl http://www.openttd.org/en/download-stable
  estimate 450
      desc 'open transport tycoon deluxe video game'

build(){
./configure       \
--prefix-dir=/usr \
--binary-dir=bin  &&
make &&
make install ROOT_DIR=$DESTDIR
}
