# firmware no longer available for download?
# might deprecate spell if firmware part of linux-firmware

   version stable 1.9.2
   require udev
  category kernel network wireless
 attribute firmware hidden
   disable scavenge
    source http://www.kernel.org/pub/linux/kernel/people/chr/carl9170/fw/$VERSION/carl9170-1.fw
      info omoit 20130101
      info home http://wireless.kernel.org/en/users/Drivers/carl9170
      desc '802.11n USB driver with GPLv2 firmware for Atheros USB AR9170 devices'

build(){
 mkdir -vpm 755 $DESTDIR/lib/firmware &&
 cp $SOURCE     $DESTDIR/lib/firmware/
}
