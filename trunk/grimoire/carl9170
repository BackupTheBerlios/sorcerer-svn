# firmware no longer available for download?
# might deprecate spell if firmware part of firmware

with version stable 1.9.2
with base    udev
with role    kernel network wireless
with trait   firmware hidden
with disable scavenge
with source  http://www.kernel.org/pub/linux/kernel/people/chr/carl9170/fw/$VERSION/carl9170-1.fw
with info    omoit 20130101
with info    home http://wireless.kernel.org/en/users/Drivers/carl9170
with info    cite '802.11n USB driver with GPLv2 firmware for Atheros USB AR9170 devices'

build(){
 mkdir -vpm 755 $DESTDIR/lib/firmware &&
 cp $SOURCE     $DESTDIR/lib/firmware/
}
