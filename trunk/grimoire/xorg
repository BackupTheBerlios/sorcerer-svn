# gnome-settings-daemon from control-center requires xrdb

  homepage http://www.x.org
  XVERSION=( X11R7.3 X11R7.2-20070215 )

if  [ $SPELL == xorg ]; then
    stable ${XVERSION[@]}
  category xserver profile
 attribute x11 X11R7
require gccmakedep imake libXScrnSaver libXaw libXcomposite libXcursor libXdamage libXevie libXft libXinerama libXrandr libXtst libXv libXxf86dga libdmx lndir makedepend util-macros xf86-app xf86-font xf86-input xf86-video xorg-cf-files xrdb
  eprovide xf86
      desc 'Fork of XFree86 4.4.0.'
else

    stable ${XVERSION[@]}
#  VERSION="${VERSION:-$XVERSION}"
  CATEGORY="xorg/${SOURCE%/*}"
 attribute x11 X11R7
      opts --disable-static
  case ${SOURCE%/*} in
   driver) attribute x11 X11R7 library ;;
   font)   attribute data X11R7; desc "$SPELL provides font" ;;
   lib)	   attribute x11 X11R7 library ;;
   proto)  attribute x11 X11R7 library
           desc "${DESC:-$SPELL provides header files for X11R7}" ;;
  esac

  require X11R6-symlinks

  url "http://xorg.freedesktop.org/archive/${XVERSION:0:7}/src/
        ftp://ftp.x.org/pub/${XVERSION:0:7}/src/
       http://xorg.freedesktop.org/archive/individual/
        ftp://ftp.x.org/pub/individual/"
  url "http://xorg.freedesktop.org/archive/${XVERSION:0:7}/patches/
        ftp://ftp.x.org/pub/${XVERSION:0:7}/patches/"
fi
