# Temporary removing requirement on gnome-control-center
# in order to prevent a recursive requirement loop.
# 3.4.2 3.4.0 3.2.2 are compiling at the moment.

# version 3.6.0 failed to compile

with version   stable 3.6.1 3.6.0 3.4.2
with version unstable 3.7.5
with base    colord-gtk cups exiv2 lcms2 libcanberra libgphoto2 libnotify sane-backends vte
#with base    cups exiv2 gnome-control-center lcms2 libcanberra libgphoto2 libnotify sane-backends
with role    development
with trait   gnome library makej multilib-concurrent
with trait   broke
with source    stable $GNOME_URL sources/gnome-color-manager/${VERSION:0:3}/gnome-color-manager-$VERSION.tar.xz
with source  unstable $GNOME_URL sources/gnome-color-manager/${VERSION:0:3}/gnome-color-manager-$VERSION.tar.xz
with info    last 20130111
with info    home http://projects.gnome.org/gnome-color-manager/
with info    cite 'session framework that for installing and generating color profiles in GNOME'

build(){
 case $VERSION in
   3.4.2) sed -i '/\tman\t/d' Makefile.in ;;
   3.4.0) sed -i '/\tman\t/d' Makefile.in ;;
 esac

 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}

