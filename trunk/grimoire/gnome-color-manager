# Temporary removing requirement on gnome-control-center
# in order to prevent a recursive requirement loop.

   version   stable 3.2.2 3.2.0 3.0.0
   version unstable 3.3.91 3.3.5
   require colord cups exiv2 lcms2 libcanberra libgphoto2 libnotify sane-backends vte
#  require cups exiv2 gnome-control-center lcms2 libcanberra libgphoto2 libnotify sane-backends
  category development
 attribute gnome library makej multilib-concurrent
    source $GNOME_URL sources/gnome-color-manager/${VERSION:0:3}/gnome-color-manager-$VERSION.tar.xz
      info last 20120109
      info home http://projects.gnome.org/gnome-color-manager/
      desc 'session framework that for installing and generating color profiles in GNOME'

build(){
 case $VERSION in
   3.2.0) sed -i '/\tman\t/d' Makefile.in ;;
  2.32.0) sed -i '/\tman\t/d' Makefile.in ;;
 esac

 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}

