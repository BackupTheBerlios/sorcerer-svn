   version stable 3.0.0 2.91.92 2.32.0
   require exiv2 gnome-control-center lcms2 libgphoto2 libnotify sane-backends
  category development
 attribute gnome new
    source $GNOME_URL sources/gnome-color-manager/${VERSION:0:3}/gnome-color-manager-$VERSION.tar.bz2
  homepage http://projects.gnome.org/gnome-color-manager/
      desc 'session framework that for installing and generating color profiles in GNOME'

build(){
 case $VERSION in
  2.32.0) sed -i '/\tman\t/d' Makefile.in ;;
 esac
 default_build
}

