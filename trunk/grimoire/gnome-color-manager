# Temporary removing requirement on gnome-control-center
# in order to prevent a recursive requirement loop.
# 3.4.2 3.4.0 3.2.2 are compiling at the moment.

# version 3.6.0 failed to compile

   version   stable 3.6.0 3.4.2 3.4.0
#  version unstable 3.5.90
   require colord-gtk cups exiv2 lcms2 libcanberra libgphoto2 libnotify sane-backends vte
#  require cups exiv2 gnome-control-center lcms2 libcanberra libgphoto2 libnotify sane-backends
  category development
 attribute gnome library makej multilib-concurrent
 attribute broke
    source   stable $GNOME_URL sources/gnome-color-manager/${VERSION:0:3}/gnome-color-manager-$VERSION.tar.xz
    source unstable $GNOME_URL sources/gnome-color-manager/${VERSION:0:3}/gnome-color-manager-$VERSION.tar.xz
      info last 20120930
      info home http://projects.gnome.org/gnome-color-manager/
      desc 'session framework that for installing and generating color profiles in GNOME'

build(){
 case $VERSION in
   3.4.2) sed -i '/\tman\t/d' Makefile.in ;;
   3.4.0) sed -i '/\tman\t/d' Makefile.in ;;
 esac

 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}

