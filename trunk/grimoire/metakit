   VERSION=( "2.4.9.5" "2.4.9.4" "2.4.9.3" "2.4.9.2" "2.4.9.1" "2.4.9" )
  CATEGORY="db"
 ATTRIBUTE="library"
    SOURCE="metakit-$VERSION.tar.gz"
       URL="http://www.equi4.com/pub/mk"
  HOMEPAGE="http://www.equi4.com/metakit"
       REQ=( "automake"
             "Python:--enable-python::to build Mk4py extension"
             "tcl:::to build Mk4tcl extension" )
  ESTIMATE="31"
      DESC="metakit is an efficent database library with a small footprint.
metakit is an efficient database library with a small footprint.
It fills the gap between flat-file, relational databases, and OODBMS.
It features structured storage, transacted commit, on-demand loading
and portability."

build() {
sed  -i  "s:-O2:$CXXFLAGS:"  unix/Makefile.in
cd   builds
../unix/configure     \
--build=$BUILD        \
--prefix=/usr         \
--sysconfdir=/etc     \
--localstatedir=/var  \
$OPTS                 &&
make                  &&
prepare_install       &&
make    install
}
