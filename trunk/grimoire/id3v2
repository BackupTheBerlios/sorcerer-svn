# 1.0 is an erronous report.

   version stable 0.1.12
   require id3lib
  category audio/editor
 attribute console
    source $SOURCEFORGE_URL id3v2/id3v2/$VERSION/id3v2-$VERSION.tar.gz
      info good 20120609
      info last 20100326
      info home http://id3v2.sourceforge.net/
      desc 'command line id3v2 tag editor'

build(){
 sed -i "s:-g:$CFLAGS -Wno-deprecated:"  Makefile
 make clean
 make &&
 mkdir -pvm 755                        $DESTDIR/usr/bin &&
 install -vo root -g root -m 755 id3v2 $DESTDIR/usr/bin
}
