    stable 128.50.3.1
   require udev
  category kernel network
 attribute firmware
    source http://intellinuxwireless.org/iwlwifi/downloads/iwlwifi-1000-ucode-$VERSION.tgz
  homepage http://intellinuxwireless.org
      vurl "http://intellinuxwireless.org/?n=downloads"
      desc 'firmware for Intel PRO/Wireless 1000 card'

build(){
prepare_install &&
mkdir -vp /lib/firmware &&
install -vm 644 iwlwifi-1000*.ucode /lib/firmware
}
