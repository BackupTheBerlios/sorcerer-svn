   version stable 128.50.3.1
   require udev
  category kernel network
 attribute firmware
    source http://intellinuxwireless.org/iwlwifi/downloads/iwlwifi-1000-ucode-$VERSION.tgz
      info home  http://intellinuxwireless.org/
      info vurl "http://intellinuxwireless.org/?n=downloads"
      desc 'firmware for Intel PRO/Wireless 1000 card'

build(){
 mkdir  -pvm 755         $DESTDIR/lib/firmware &&
 install -vm 644 *.ucode $DESTDIR/lib/firmware/
}
