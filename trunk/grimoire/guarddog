   VERSION=( "2.2.0" )
  CATEGORY="network"
 ATTRIBUTE="kde"
    SOURCE="guarddog-$VERSION.tar.gz"
  HOMEPAGE="http://www.simonzone.com/software/guarddog"
       URL="http://www.simonzone.com/software/guarddog"
       REQ="gawk iptables kdelibs"
  ESTIMATE="86"
      DESC="Guarddog is a firewall configuration utility for Linux systems. Guarddog is aimed at two groups of users. Novice to intermediate users who are not experts in TCP/IP networking and security, and those users who don't want the hassle of dealing with cryptic shell scripts and ipchains/iptables parameters."

post_install() {
 touch /etc/rc.firewall				&&
 chmod 0755 /etc/rc.firewall			&&
 cp -s /etc/rc.firewall /etc/rc3.d/S99guarddog	&&
 cp -s /etc/rc.firewall /etc/rc4.d/S99guarddog	&&
 cp -s /etc/rc.firewall /etc/rc5.d/S99guarddog	&&
 cp -s /etc/rc.firewall /etc/rcS.d/S99guarddog	&&
 cp -s /etc/rc.firewall /etc/rc0.d/K99guarddog	&&
 cp -s /etc/rc.firewall /etc/rc1.d/K99guarddog	&&
 cp -s /etc/rc.firewall /etc/rc2.d/K99guarddog	&&
 cp -s /etc/rc.firewall /etc/rc6.d/K99guarddog
}

post_remove() {
 rm /etc/rc3.d/S99guarddog	&&
 rm /etc/rc4.d/S99guarddog	&&
 rm /etc/rc5.d/S99guarddog	&&
 rm /etc/rcS.d/S99guarddog	&&
 rm /etc/rc0.d/K99guarddog	&&
 rm /etc/rc1.d/K99guarddog	&&
 rm /etc/rc2.d/K99guarddog	&&
 rm /etc/rc6.d/K99guarddog
}
