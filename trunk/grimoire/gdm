# The content of the PID file might be incorrect.
# running /etc/init.d/gdm stop or /etc/init.d/gdm restart
# might not work properly
# seems to be due to a bug gdm.

   version   stable 3.4.1 3.4.0.1 3.4.0
   version unstable 3.5.5
case $VERSION in
 3.2.1.1)
      opts --enable-introspection=no ;;
esac
   require GConf PAM accountsservice check gnome-power-manager gnome-settings-daemon gnome-shell libcanberra libxklavier metacity mutter upower
#  require GConf PAM accountsservice audit check gnome-power-manager gnome-settings-daemon gnome-shell libcanberra libxklavier metacity mutter upower
# libselinux 
  optional libXevie     --with-xevie              --without-xevie
  optional tcp_wrappers --with-tcp-wrappers=yes   --with-tcp-wrappers=no to control allowed remote connections using tcp_wrappers
      opts --enable-static=no
#     opts --enable-console-helper=no --enable-static=no
  sys_user gdm gdm /var/gdm
  category window-manager
 attribute gnome makej
    source $GNOME_URL sources/gdm/${VERSION:0:3}/gdm-$VERSION.tar.xz
      info last 20120416
      info home http://www.gnome.org/projects/gdm/
# no sorcerer support for consolehelper yet.
#            'libselinux:--with-selinux:--without-selinux:for selinux support'
 freshmeat gnomedisplaymanager
      desc 'Gnome Display Manager is an improved xdm
gdm the Gnome Display Manager is a re-implementation
of the well known xdm program.'
     iwall 'gdm will soon restart'

build(){
 # switching window manager from metacity to mutter
 # becuase metacity crashes when using NVIDIA twinview

# case $VERSION in
#  3.2.0) sed -i "s:gnome-shell --gdm-mode:mutter:" \
#         data/applications/gnome-shell.desktop{,.in}
#         echo "Switching gdm window manager from gnome-shell to mutter" ;;
# esac

 if   spell_installed Linux-PAM; then SCHEME=pam
 elif spell_installed openpam;   then SCHEME=pam
 elif spell_installed shadow;    then SCHEME=shadow
 else SCHEME=auto
 fi

 AUTH_SCHEME="--enable-authentication-scheme=$SCHEME"

 ./configure          \
 --prefix=/usr        \
 --localstatedir=/var \
 --sysconfdir=/etc    \
 $OPTS        \
 $AUTH_SCHEME &&
 make         &&
 make install DESTDIR=$DESTDIR
}

current(){
 case $VERSION in
  3.2.0) grep -q "domain user" /etc/init.d/gdm ;;
 esac
}
