   VERSION=( "snapshot-20060314-2245" )
  CATEGORY="video-codec"
 ATTRIBUTE="new library"
    SOURCE="x264-$VERSION.tar.bz2"
       URL="ftp://ftp.videolan.org/pub/videolan/x264/snapshots/"
  HOMEPAGE="http://developers.videolan.org/x264.html"
       REQ=( "" )
#            "gpac:--enable-mp4-output::for MPEG-4 output" )
      OPTS="--disable-mp4-output"
# x264 snapshot-20060314-2245 is not compatibile with gpac 0.4.0-rc2
  EPROVIDE="libx264"
  ESTIMATE="60"
      DESC="x264 is a library for encoding H264/AVC video streams."

build()  {
  sed  -i  "s:-O4 -ffast-math:$CFLAGS:
            s:lgpac_static:lgpac:"  configure
  sed  -i  "s:gf_isom_open(psz_filename, GF_ISOM_OPEN_WRITE, NULL):gf_isom_open(psz_filename, GF_ISOM_OPEN_WRITE):" x264.c
  default_build
}
