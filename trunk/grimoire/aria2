   VERSION=( 0.12.0 0.11.5 0.11.3 )
    IGNORE='rc\|win\|Mac'
  CATEGORY='network/ftp network/web'
 ATTRIBUTE='console'
    SOURCE="aria2/aria2-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE='http://aria2.sourceforge.net/'
       REQ=( 'libxml2'
             'cppunit:--with-cppunit:--without-cppunit:for testing aria2'
             'gnutls:--with-gnutls:--without-gnutls:for HTTPS and BitTorrent or use openssl'
             'openssl:--with-openssl:--without-openssl:for HTTPS and BitTorrent or use gnutls' )
  ESTIMATE='800'
      DESC='aria2 is a utility for downloading files using HTTP, FTP, and BitTorrent.'

build(){
 case $VERSION in
  0.12.0) sed -i '1i#include <cstring>' src/*.{cc,h}
#          src/SocketCore.cc \
#          src/DownloadEngine.cc \
#          src/BitfieldMan.h \
#          src/SimpleLogger.cc \
#          src/AbstractDiskWriter.cc \
#          src/File.cc \
#          src/NameMatchOptionHandler.h \
#          src/NameResolver.cc \
#          src/CookieParser.cc \
#          src/SingleFileAllocationIterator.cc \
#          src/Data.cc \
#          src/PeerMessageUtil.cc \
          ;;
 esac
 default_build
}
