    stable 0.14.0+1 0.12.0 0.11.5 0.11.3
  unstable 0.15.0b+20080713
   require libxml2
  optional c-ares  ''             ''                for concurrent name IPv4 name resolution
  optional cppunit --with-cppunit --without-cppunit for testing aria2
  optional gnutls  --with-gnutls  --without-gnutls  for HTTPS and BitTorrent or use openssl
  optional openssl --with-openssl --without-openssl for HTTPS and BitTorrent or use gnutls
  category network/ftp network/web
 attribute console
       url $SOURCEFORGE_URL
    source aria2/aria2c-$VERSION.tar.bz2
  homepage http://aria2.sourceforge.net/
  estimate 1000
      desc 'aria2 is a utility for downloading files using HTTP, FTP, and BitTorrent.'

build(){
 case $VERSION in
  0.12.0) sed -i '1i#include <cstring>' src/*.{cc,h} ;;
 esac
 default_build
}
