   version   stable 3.4.0 3.2.1 3.2.0 3.0.0 2.91.93 2.32.0
   version unstable 3.5.2 3.4.0
   require djvulibre libgnome-keyring libspectre nautilus poppler
  optional djvulibre       '' '' for displaying djvu documents
  optional libgnomeprintui '' '' for printing documents
      opts --enable-static=no
  category utility/documentation
 attribute gnome makej
    source $GNOME_URL sources/evince/${VERSION:0:3}/evince-$VERSION.tar.xz
#   source $GNOME_URL sources/evince/${VERSION:0:3}/evince-$VERSION.tar.bz2
      info last 20120326
      info home http://www.gnome.org
      desc 'document viewer for PDF and postscript files'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
