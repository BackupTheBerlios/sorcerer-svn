# 0.8.4 no longer compiles
# 0.8.8 is not gnome 3.0.0 compatible

   version stable 0.8.8 0.8.4
   require compiz intltool libwnck
      opts --enable-static=no
  category window-manager
 attribute x11
 attribute broke
      info last  20110421
      info home  http://www.compiz.org/
    source http://releases.compiz.org/components/emerald/emerald-$VERSION.tar.bz2
 freshmeat none
      desc 'window decorator for compiz'

build(){
 CFLAGS+=' -D WNCK_WINDOW_MODAL_DIALOG=127'
 [ -f autogen.sh ] &&
    ./autogen.sh
 default_build
}
