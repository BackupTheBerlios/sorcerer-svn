   VERSION=( "3.0.20a" "3.0.20" "3.0.14a" "3.0.13" "3.0.12" "3.0.11" "3.0.10" )
    IGNORE="txt"
  CATEGORY="network"
 ATTRIBUTE="server console"
    SOURCE="samba-$VERSION.tar.gz"
       URL="http://us2.samba.org/samba/ftp
