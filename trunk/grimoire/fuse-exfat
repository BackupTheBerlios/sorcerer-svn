   version stable 0.9.7 0.9.5
   require fuse scons
  category disk/file-system
 attribute console makej
    source http://exfat.googlecode.com/files/fuse-exfat-$VERSION.tar.gz
      info good 20120713
      info last 20120307
      info vurl http://code.google.com/exfat/downloads/list
      info home http://code.google.com/p/exfat/
      desc 'exFAT FUSE module'

build(){
 sed -i "s:/sbin:$DESTDIR/sbin:" SConstruct
 sed -i "s:-O2 -ggdb:$CFLAGS:" SConstruct
 scons install &&
 mkdir   -pvm 755                         $DESTDIR/usr/man/man8 &&
 install  -vm 644 fuse/mount.exfat-fuse.8 $DESTDIR/usr/man/man8/
}
