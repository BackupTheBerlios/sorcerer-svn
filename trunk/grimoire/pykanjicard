    stable 1.3 1.2
   require pygtk

  category utility
 attribute console new
    source pykanjicard/pykanjicard-$VERSION.tar.bz2
       url "$SOURCEFORGE_URL"
  homepage http://sourceforge.net/projects/pykanjicard
  estimate 20
      desc 'pykanjicard is a flashcard program for learning Japanese words.
It displays words written in Hiragana, Katakana, and Kanji.
You can select words composed only of characters you already know.'

build(){
python setup.py build &&
prepare_install &&
python setup.py install
}
