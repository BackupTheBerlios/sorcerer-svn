   VERSION=( 0.12.0 0.11.2 0.11.1 0.11.0 )
  CATEGORY='development'
 ATTRIBUTE='gui kde'
    SOURCE="kdesvn-$VERSION.tar.bz2"
       URL='http://www.alwins-world.de/programs/download/kdesvn/'
  HOMEPAGE='http://www.alwins-world.de/programs/kdesvn/'
       REQ='cmake subversion kdelibs'
  ESTIMATE='660'
      OPTS='--disable-debug'
      DESC='kdesvn is a frontend to the subversion vcs'

build()  {
  mkdir  kdesvn-build
  cd     kdesvn-build
  cmake  ../                             \
         -DCMAKE_BUILD_TYPE=Release      \
         -DCMAKE_INSTALL_PREFIX=/usr     \
         -DSUBVERSION_INSTALL_PATH=/usr  &&
  make             &&
  prepare_install  &&
  make    install
}
