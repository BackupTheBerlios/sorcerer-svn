      YEAR="$(  date  -u  +%Y  )"
      WEEK="$(  date  -u  +%V  |  sed  "s:^0*::"  )"
   VERSION="$YEAR-$WEEK"
  CATEGORY="grimoire"
 ATTRIBUTE="grimoire solo new"
    SOURCE="02packages.details.txt.gz"
       URL="http://www.cpan.org/modules/"
disable scavenge
       DIR="grimoire-cpan"
  HOMEPAGE="http://sorcerer.aakin.net/grimoire"
  ESTIMATE="5"
      DESC="grimoire-cpan generates a catalog for CPAN hosted perl modules.
grimoire-cpan is an experiment to provide
a grimoire of the perl modules available
from the Comprehensive Perl Archive Network.

This is one massive grimoire.
Therefore, increase the tmpfs size of /var/state/sorcery 
to 256M and increase innodes to use this grimoire
Otherwise the index generation will be incomplete.

Since this is an experiment grimoire-cpan could dissapear tomrrow.
The spells it provide have undocumented requirements.
They might not compile without custom BUILD scripts.
And lastly no xdelta upgrade patches are provided
for spells cast from grimoire-cpan."

build()  {

reorder_data()  {
  while  read  N  D;  do
    if    !  [  "$N"  ==  "$NAME"  ]
    then     [  -n        "$NAME"  ]  &&  echo  "$NAME $DESC"
          DESC="$D";  NAME="$N"
    else  DESC="$DESC $D"
    fi
  done
}

write_categories()  {
  local     CAT  BAT
  for       CAT  in  $DESC
  do        CAT="development/interpreter/perl/cpan/${CAT%%:*}"
    if  !   [   "$CAT"  ==    "$BAT"  ];  then 
      if    [           -n    "$BAT"  ]
      then  echo  -n  " $CAT"
      else  echo  -n   "$CAT"
      fi
      BAT="$CAT"
    fi
  done
}


write_details_variables()  {
  echo      "   VERSION=( \"$VERSION\" )"
  echo  -n  "  CATEGORY=\"";    write_categories;  echo  "\""
  echo      " ATTRIBUTE=\"perl-module\""
  echo      "    SOURCE=\"$SOURCE\""
  echo      "       URL=\"http://search.cpan.org/CPAN/authors/id/\""
  echo      "  HOMEPAGE=\"http://www.cpan.org\""
  echo      "       REQ=\"perl\""
  echo      "      DESC=\"$SPELL provides perl modules."
  echo  -e  "             ${DESC// /\n}\""
}


output_spell()  {
  sed  -r  "s:(.*-)(.*)(\.tar\.gz):\1\2\3 \2:
            s:(.*[/])(.*)([-][^-]*\.tar\.gz):\1\2\3 \2 :"  |
  while  read  SOURCE  SPELL  VERSION  DESC;  do
    if    [  -n  "$SPELL"  ]
    then  write_details_variables  >  $SPELL
    fi
  done
}


rename_conflicts()  {

  add_prefix()  {
    while  read
    do     mv  $REPLY  cpan--$REPLY
    done
  }

  rm  -f  *::*

# SDL_perl
  echo  "Archive-Zip
CGI-Lite
Compress-Zlib
DBI
DateManip
GDGraph
HTML-Template
Mail-Sendmail
Net-SNMP
Newt
Parse-RecDescent
Spreadsheet-WriteExcel
Tk
XML-Parser
gettext
libnet
mod_perl
perl
shishi"  |  add_prefix
}


gather_data()  {
  decompress  $SOURCE_CACHE/$SPELL/$VERSION/$SOURCE  |
  tr    -s ' '                    |
  grep  "\.tar\.gz$"              |
  cut   -d ' '  -f1,3             |
  sed   -r  "s:(.*) (.*):\2 \1:"  |
  sort                            |
  reorder_data                    |
  output_spell
  rename_conflicts
}

  gather_data                                  &&
  prepare_install                              &&
  mkdir      -p  $GRIMOIRE_LIBRARY             &&
  chmod      -R  0755  $BUILD_DIR              &&
  find       .   -type f  -printf "%P\n"       |
  grep       -v  "\.ccache/reference\|\.log$"  |
  tar_files  >   $GRIMOIRE_LIBRARY/$SPELL.tar
}
