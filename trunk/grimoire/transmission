    stable 2.12 2.00
   require curl glibc libevent openssl zlib
  optional gtk+ --enable-gtk              --disable-gtk             build gtk client 
  optional libnotify --enable-libnotify        --disable-libnotify       enable notifications
  #optional gtk+ --enable-libappindicator  --disable-libappindicator enable AppIndicator support
  optional libcanberra --enable-libcanberra      --disable-libcanberra     enable sounds
  switch --enable-nls              --disable-nls             enable native language support
  switch --enable-cli              --disable-cli             build command-line client
  switch --enable-daemon           --disable-daemon          build daemon
  switch --enable-gconf2           --disable-gconf2          enable GConf support

  category network/file-share
 attribute daemon new
    source http://mirrors.m0k.org/transmission/files/ transmission-${VERSION}.tar.xz
  homepage http://www.transmissionbt.com
      opts --enable-static=no
 freshmeat gconf
