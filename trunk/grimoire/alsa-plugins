with version stable 1.0.27 1.0.26 1.0.25
case $VERSION in
 1.0.27)
with also    --disable-avcodec ;;
 1.0.26)
with also    --disable-avcodec ;;
 1.0.25)
with also    --disable-avcodec ;;
      *)
with elect   ffmpeg
esac
with base    alsa-lib ncurses
with elect   jackit
with elect   libsamplerate
with elect   pulseaudio
#with elect   speex
with also    --disable-xmlto
with role    audio/editor audio/mixer audio/player
with trait   console library makej
#trait multilib-fail
