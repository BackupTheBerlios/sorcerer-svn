  stable 1.2.2 1.2.1 1.1.2pl1
  CATEGORY='development/interpreter'
 ATTRIBUTE='library new'
    SOURCE="findlib-$VERSION.tar.gz"
       URL='http://www.ocaml-programming.de/packages/'
  HOMEPAGE='http://www.ocaml-programming.de'
       REQ='ocaml'
  ESTIMATE='100'
      DESC='findlib is like a pkg-config for ocaml libraries.'

build(){
 ./configure      \
 -bindir /usr/bin \
 -mandir /usr/man \
 -config /etc/findlib.conf &&
 make        all &&
 prepare_install &&
 make    install
}
