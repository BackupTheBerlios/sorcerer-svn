# not DESTDIR compatible
# also ocaml lacks DESTDIR compatibility.

   version stable 1.3.3 1.3.2 1.3.1
   require ocaml
  category development/interpreter
 attribute library
    source http://download.camlcity.org/download/findlib-$VERSION.tar.gz
      info last 20120713
      info home http://projects.camlcity.org/projects/findlib.html
      info vurl http://projects.camlcity.org/projects/findlib.html
      desc 'a pkg-config like program for ocaml libraries'

build(){
 ./configure       \
  -bindir /usr/bin \
  -mandir /usr/man \
  -config /etc/findlib.conf &&
 make     all &&
 make install "prefix=$DESTDIR/usr"
#make install "DESTDIR=$DESTDIR"
}
