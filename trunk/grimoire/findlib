    stable 1.2.2 1.2.1 1.1.2pl1
   require ocaml
  category development/interpreter
 attribute library
    source http://www.ocaml-programming.de/packages/findlib-$VERSION.tar.gz
  homepage http://www.ocaml-programming.de
  estimate 100
      desc 'findlib is like a pkg-config for ocaml libraries.'

build(){
./configure      \
-bindir /usr/bin \
-mandir /usr/man \
-config /etc/findlib.conf &&
make        all &&
prepare_install &&
make    install
}
