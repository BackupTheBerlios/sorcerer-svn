    stable 2.5.0
  category graphic/utility
 attribute console new
       url $SOURCEFORGE_URL
    source hugin/autopano-sift-C-${VERSION}.tar.gz
  homepage http://hugin.sourceforge.net/
  estimate 134
   require cmake make libpano13 libpng tiff jpeg zlib libxml2
      desc 'autopano-sift-C is a control point generator for panoramic imaging'


build() {
    cmake .          &&
    make             &&
    prepare_install  &&
    make install
}
