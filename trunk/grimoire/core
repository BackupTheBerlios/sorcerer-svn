   version stable 20120905
   require bash bc bison bzip2 config.site curl dialog diffutils file findutils flex gawk grep guile gzip init-scripts less make networks patch perl--XML-Parser procps pv sed shadow sorcery syslinux systemd sysvinit tar texinfo util-linux which xz
## require bash bc bison bzip2 config.site console-editor curl dialog diffutils file findutils flex gawk grep guile gzip init-scripts less make networks patch perl--XML-Parser procps sed shadow sorcery system-logger sysvinit tar texinfo udev util-linux which xz
  optional PAM               '' '' for a flexible authentication method
  optional ccache            '' '' for faster compilation when updating installed software
  optional dhcp              '' '' for a client for automatic network configuration
  optional dhcpcd            '' '' another client for automatic network configuration
  optional immune            '' '' for the Sorcerer immune system
  optional laptop-mode-tools '' '' for conserving battery power on laptops
  optional mailutils         '' '' for mail, mailx, pop3d imapd
  optional man               '' '' for viewing manual pages
  optional openssh           '' '' for encrypted logins and file transfers over TCP/IP
  optional pcmciautils       '' '' for pcmcia networking tools
  optional protocols         '' '' for monthly updates to /etc/protocols for protocol numbers assigned by IANA
  optional sdelta3           '' '' for downloading tiny source tarball patches
  optional services          '' '' for monthly updates to /etc/services for port numbers assigned by IANA

 if [ -f $VERSION_LOGS/syslinux ]; then
   require syslinux
 fi

case $MACHTYPE in
 *-gnu)
   require glibc ;;
 *-uclibc)
   require uClibc ;;
esac

  category profile
 attribute archive_off console
      info last 20120905
      info home http://sorcerer.silverice.org/
      desc 'profile spell keeps important software installed
Keep the core spell installed to avoid the risk of un-installing
software critical for booting and running.'
