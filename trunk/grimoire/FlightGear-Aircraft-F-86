    stable 20071217
  category game/3d/flightsim
 attribute archive_off data x11
  homepage http://www.flightgear.org/Downloads/aircraft/
       url $FLIGHTGEAR_URL
    source Aircraft/${SPELL:21}_$VERSION.zip
      desc 'Additional Aircraft for FlightGear.'

build(){
 prepare_install &&
 mkdir -pvm 755 /usr/share/FlightGear/Aircraft/${SPELL/FlightGear-Aircraft-/} &&
 cp    -av *    /usr/share/FlightGear/Aircraft/${SPELL/FlightGear-Aircraft-/}
}
