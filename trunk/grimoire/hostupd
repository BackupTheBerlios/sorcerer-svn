    stable 0.91
   require perl
  category network/dns
 attribute console client
       url $SOURCEFORGE_URL
    source hostupd/hostupd-$VERSION.tar.bz2
  homepage http://hostupd.sourceforge.net
      desc 'hostupd is a commandline tool which allows the user to update a DNS server.
hostupd is a commandline tool for updating a DNS server
which supports dynamic updates (RFC 2136), such as bind >= 8.
Its main goal is to simplify the DNS-updating task,
but to remain flexible.'

build(){
prepare_install &&
make    install PREFIX=/usr
}
