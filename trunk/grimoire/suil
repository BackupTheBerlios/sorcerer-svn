# does not link properly with qt-everywhere-opensource

with version stable 0.6.12 0.6.10 0.6.6
with role    audio/library
with trait   library makej multilib-dual
with trait   broke
with source  http://download.drobilla.net/suil-$VERSION.tar.bz2
with info    last 20130227
with info    home http://drobilla.net/software/suil
with info    cite 'library for loading and wrapping LV2 plugin UIs'

build(){
 ./waf configure --prefix=/usr &&
 ./waf -j1 &&
 DESTDIR=$DESTDIR ./waf install &&
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then mv $DESTDIR/usr/lib $DESTDIR/usr/lib64
      sed -i 's:/lib$:/lib64:' $DESTDIR/usr/lib64/pkgconfig/*.pc
 fi
}
