    stable 2.0.35 2.0.34
    secure 2.0.35
   require fontconfig jpeg libpng
  optional libXpm --with-x --without-x for x11 integration
  category graphic
 attribute library
    source http://www.libgd.org/releases/gd-$VERSION.tar.bz2
  homepage http://www.libgd.org/Main_Page
      opts --enable-static=no
  estimate 800
      desc 'gd is a graphic library
gd is a graphic library is used for creating graphics from a set of commands.
Typically used in webpages for dynamic graphs etc.'

build(){
 unset LD_PRELOAD
 ./configure               \
  --build=$BUILD           \
  --sysconfdir=/etc        \
  --localstatedir=/var     \
  --prefix=${PREFIX:-/usr} \
 $OPTS           &&
 make            &&
 prepare_install &&
 make    install
}
