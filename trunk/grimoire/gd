    stable 2.0.35 2.0.34
    secure 2.0.35
  unstable 2.0.36RC1
   require fontconfig jpeg libpng
  optional libXpm --with-x --without-x for x11 integration
      opts --enable-static=no
  category graphic
 attribute library makej
 attribute multilib-fail
    source http://www.libgd.org/releases/gd-$VERSION.tar.bz2
      home http://www.libgd.org/Main_Page
      docs http://www.libgd.org/Documentation
      vurl http://www.libgd.org/Downloads
  estimate 800
      desc 'graphic library
gd is a graphic library is used for creating graphics from a set of commands.
Typically used in webpages for dynamic graphs etc.'

build(){
 ./configure           \
  --sysconfdir=/etc    \
  --localstatedir=/var \
  --prefix=/usr        \
 $OPTS &&
 make  &&
 make install DESTDIR=$DESTDIR
}
