   version stable 2.0.2
   require fontconfig
  category font
 attribute archive_off data
    source $SOURCEFORGE_URL sjfonts/sjfonts/sjfonts-$VERSION/sjfonts.$VERSION.tar.bz2
      info home  http://sourceforge.net/projects/sjfonts/
      desc 'some juicy fonts'

build(){
 install_fonts(){
  mkdir -p       $DESTDIR/usr/share/fonts/sjfonts
  cp    -v *.ttf $DESTDIR/usr/share/fonts/sjfonts/ &&
  fc-cache       $DESTDIR/usr/share/fonts/sjfonts/
 }

 install_fonts
}
