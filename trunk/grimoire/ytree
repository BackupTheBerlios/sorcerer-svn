   version stable 1.97 1.84
   require ncurses readline
  category utility/file-manager
 attribute console
    source http://www.han.de/~werner/ytree-$VERSION.tar.gz
      info good 20120716
      info last 20110102
      info home http://www.han.de/~werner/ytree.html
      info vurl http://www.han.de/~werner/ytree.html
      desc 'console file manager similar to DOS-XTREE(tm)'

build(){
 make "ADD_CFLAGS=$CFLAGS" &&
 mkdir -pvm 755 $DESTDIR/usr/{bin,man/man1} &&
 make install DESTDIR=$DESTDIR/usr
}
