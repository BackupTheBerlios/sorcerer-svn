    stable 0.3.107-2
  category library
 attribute library
    source http://ftp.us.debian.org/debian/pool/main/liba/libaio/libaio_${VERSION%-*}.orig.tar.gz
    source http://ftp.us.debian.org/debian/pool/main/liba/libaio/libaio_${VERSION}.diff.gz
  homepage http://packages.debian.org/unstable/libdevel/libaio-dev/
  estimate 50
      desc 'libaio library enables userspace use of kernel asynchronous I/O system calls'

build(){
zcat $SOURCE_CACHE/$SPELL/$VERSION/${SOURCE[1]} | patch -p1 &&
# Install libraries in /lib so they get included on initramfs
# This is needed by, for example, multipathd
sed -i 's:\$(prefix)/lib:/lib:' Makefile  &&
make &&
prepare_install &&
make prefix=/usr install
}
