    stable 0.3.107
  category development
 attribute library
    source http://ftp.us.debian.org/debian/pool/main/liba/libaio/libaio_0.3.107.orig.tar.gz 
  homepage http://packages.debian.org/unstable/libdevel/libaio-dev/
  estimate 50
      desc 'library for userspace use of kernel asynchronous I/O system calls'

build(){
 # Install libraries in /lib so they get included on initramfs
 # This is needed by, for example, multipathd
 case $HOSTTYPE in
  x86_64) sed -i "s:\$(prefix)/lib:${DESTDIR}/lib64:"   Makefile
          sed -i "s:prefix=/usr:prefix=${DESTDIR}/usr:" Makefile ;;
       *) sed -i "s:\$(prefix)/lib:${DESTDIR}/lib:"     Makefile
          sed -i "s:prefix=/usr:prefix=${DESTDIR}/usr:" Makefile ;;
 esac
 make &&
 prepare_install &&
 make install
}
