   VERSION=( "1.0.0" "0.4.0" "0.4.0a" "0.3.3" )
    IGNORE="a"
  CATEGORY="utility"
 ATTRIBUTE="console core solo"
    SOURCE="swapd/GNU-Linux-swapd-$VERSION.tar.bz2"
       URL="$SOURCEFORGE_URL"
       REQ="init-functions"
  EPROVIDE="swapd"
  HOMEPAGE="http://sourceforge.net/projects/swapd"
  ESTIMATE="20"
      DESC="GNU-Linux-swapd dynamically creates swap files as required.
This daemon can keep your box from running out of memory
and entering an unrecoverable swap to halt situation."

build() {
  case  $VERSION  in
    1.0.0)  patch  -p0  <  $SCRIPT_DIR/patch  ;;
  esac
  default_build
}
