   version stable 2.1.5
case $VERSION in
 2.1.5)
   use_gcc gcc-v4.5 ;;
esac
   require tk
  optional gnupg '' '' to encrypt and decrypt email
  optional PAM   '' '' for pluggable authentication
      opts --with-install-prefix=$DEST_DIR/$SPELL/usr
  category network/email
 attribute client x11
 attribute broke
    source http://www.tkrat.org/downloads/stable/tkrat-$VERSION.tar.gz
      info omit 20130303
      info last 20120303
      info home http://www.tkrat.org/
   provide email-client
      desc 'GUI mailer
tkrat (aka Ratatosk) is a GUI mailer built using tcl/tk.
It supports mbox and mbx files as well as POP, IMAP
(including disconnected), etc.'
