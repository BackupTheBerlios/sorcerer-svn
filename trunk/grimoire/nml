with version stable 0.2.3
with base    Imaging ply
with role    game
with trait   x11
with source  http://bundles.openttdcoop.org/nml/releases/$VERSION/nml-$VERSION.src.tar.gz
with info    last 20120219
with info    home http://dev.openttdcoop.org/projects/$SPELL
with info    vurl http://bananas.openttd.org/en/base/
with info    cite 'for building opengfx'

build(){
 local site
 if   [[ $HOSTTYPE == x86_64 ]]
 then site=/usr/lib64/python2.7/site-packages
 else site=/usr/lib/python2.7/site-packages
 fi

 find nml -type d | xargs --max-lines=256 chmod 755
 find nml -type f | xargs --max-lines=256 chmod 644
 mkdir -pvm 755      $DESTDIR/usr/bin $DESTDIR/$site
 install -m 755 nmlc $DESTDIR/usr/bin/ &&
 cp -av         nml  $DESTDIR/$site/
}
