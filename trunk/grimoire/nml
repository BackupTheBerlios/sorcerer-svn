   version stable 0.2.3
   require Imaging ply
  category game
 attribute x11
    source http://bundles.openttdcoop.org/nml/releases/$VERSION/nml-$VERSION.src.tar.gz
      info last 20120219
      info home http://dev.openttdcoop.org/projects/$SPELL
      vurl http://bananas.openttd.org/en/base/
      desc 'for building opengfx'

build(){
 local site
 if   [[ $HOSTTYPE == x86_64 ]]
 then site=/usr/lib64/python2.7/site-packages
 else site=/usr/lib/python2.7/site-packages
 fi

 find nml -type d | xargs --max-lines=256 chmod 755
 find nml -type f | xargs --max-lines=256 chmod 644
 mkdir -pvm 755      $DESTDIR/usr/bin $DESTDIR/$site
 install -m 755 nmlc $DESTDIR/usr/bin/ &&
 cp -av         nml  $DESTDIR/$site/
}
