# No support for DESTDIR style install

   version stable 20071224 20071213 20070110
  category video/webcam
 attribute linux-26-module broke
    source http://mxhaard.free.fr/spca50x/Download/gspcav1-$VERSION.tar.gz
      info home http://mxhaard.free.fr/index.html
      desc 'driver for spca5xx based chipset webcam
For supported devices please see
http://mxhaard.free.fr/spca5xx.html
Many webcams are supported by this driver.'

build(){
 KV=$( installed_version $( get_provider linux-kernel ) )
 grep  -rl  '`uname -r`'  *  |
 xargs -r  sed  -i  "s:\`uname -r\`:$KV:"
 make clean    &&
 make &&
 make install
}
