# 0.30.0 requires unstable version of gtk+

   version stable 0.30.1 0.30.0 0.28.2 0.28.1 0.28.0
   version unstable 0.31.0
   require gtk+-v3
#  require pygtk xcb-util
      opts --enable-static=no --with-gtk=3.0
  category utility/terminal-emulator
 attribute gnome library makej multilib-concurrent
    source $GNOME_URL sources/vte/${VERSION:0:4}/vte-$VERSION.tar.xz
      info last 20111020
      info home http://www.gnome.org
      desc 'library for driving a terminal'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
