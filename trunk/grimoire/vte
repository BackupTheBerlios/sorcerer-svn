   version stable 0.28.0 0.27.90 0.26.2
   require gtk+
#  require pygtk xcb-util
      opts --enable-static=no --with-gtk=3.0
  category utility/terminal-emulator
 attribute gnome library makej multilib-concurrent
    source $GNOME_URL sources/vte/${VERSION:0:4}/vte-$VERSION.tar.bz2
  homepage http://www.gnome.org
      desc 'library for driving a terminal'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
