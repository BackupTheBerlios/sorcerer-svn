   VERSION=( 1.45 )
  CATEGORY='graphic'
 ATTRIBUTE='library new'
    SOURCE="glpng.zip"
       URL='http://www.wyatt100.freeserve.co.uk/'
  HOMEPAGE='http://www.wyatt100.freeserve.co.uk/download.htm'
       REQ='libpng'
  ESTIMATE='30'
      DESC="glpng is a library for binding PNG graphics to OpenGL textures."

build()  {
  begin_install()  {
    cd  ..
    mkdir    -p                           /usr/include/GL
    install  -m 0644  include/GL/glpng.h  /usr/include/GL
    install  lib/libglpng.a               /usr/lib
  }

  cd        src               &&
  make  -f  Makefile.LINUX    &&
  prepare_install             &&
    begin_install
}
