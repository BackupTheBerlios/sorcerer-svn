   VERSION=( "3.6-4" )
  CATEGORY="administration/bootloader"
 ATTRIBUTE="console new broken depreciated"
# Ceased development in 2000
# Fails assembly
    SOURCE="btmgr-$VERSION.tar.gz"
  HOMEPAGE="http://btmgr.webframe.org/"
       URL="http://btmgr.webframe.org/${VERSION:0:3}/"
       REQ="nasm"
  ESTIMATE="387"
      DESC="btmgr is an OS independent boot manager.
It is useful for booting from floppy a CDROM
where the BIOS does not support booting from CDROM."

build() {
make            &&
prepare_install &&
make    install
}
