   require WebKit avahi gcr gnome-desktop iso-codes libnotify nss startup-notification
      opts --without-ca-file
  category network/web
 attribute gnome makej
    source $GNOME_URL   stable sources/epiphany/${VERSION:0:3}/epiphany-$VERSION.tar.xz
    source $GNOME_URL unstable sources/epiphany/${VERSION:0:3}/epiphany-$VERSION.tar.xz
      info last 20120929
      info home http://www.gnome.org/projects/epiphany/
      info wiki http://live.gnome.org/Epiphany/
      info home http://projects.gnome.org/epiphany/
 freshmeat epiphany-browser
      desc 'GNOME web browser based on the mozilla rendering engine'

build_old(){
 local XRIV=$( installed_version xulrunner ) 
 export LDFLAGS+=" -Wl,-rpath,/usr/lib/xulrunner-$XRIV"
 #export LDFLAGS=' -Wl,-rpath,/usr/lib/mozilla -Wl,-rpath-link,/usr/lib/mozilla'
 default_build
}
