    stable 2.24.1 2.24.0.1 2.24.0 2.22.3 2.22.2 2.22.1.1 2.22.0
  unstable 2.23.91 2.23.90 2.23.5
   require iso-codes libcanberra libnotify nautilus xulrunner
  category network/web
 attribute gnome
       url $GNOME_URL
    source sources/epiphany/${VERSION:0:4}/epiphany-$VERSION.tar.bz2
  homepage http://www.gnome.org/projects/epiphany
 freshmeat epiphany-browser
  estimate 2200
      desc 'epiphany is a GNOME web browser based on the mozilla rendering engine.'

build(){
local XRIV=$( installed_version xulrunner ) 
export LDFLAGS+=" -Wl,-rpath,/usr/lib/xulrunner-$XRIV"
#export LDFLAGS=' -Wl,-rpath,/usr/lib/mozilla -Wl,-rpath-link,/usr/lib/mozilla'
default_build
}
