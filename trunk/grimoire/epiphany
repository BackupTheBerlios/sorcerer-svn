# epiphany 2.30.6 was selected for gnome 2.32.0 release, odd.

# broke because WebKit is broke

   version stable 2.30.6
   version unstable 2.91.92 2.91.91.1
   require iso-codes libcanberra libffi libnotify nautilus xulrunner
#  require WebKit iso-codes libcanberra libffi libnotify nautilus xulrunner
      opts --without-ca-file
  category network/web
 attribute gnome
 attribute broke
    source $GNOME_URL sources/epiphany/${VERSION:0:4}/epiphany-$VERSION.tar.bz2
      info home  http://www.gnome.org/projects/epiphany/
 freshmeat epiphany-browser
  estimate 1300
      desc 'GNOME web browser based on the mozilla rendering engine'

build(){
 local XRIV=$( installed_version xulrunner ) 
 export LDFLAGS+=" -Wl,-rpath,/usr/lib/xulrunner-$XRIV"
 #export LDFLAGS=' -Wl,-rpath,/usr/lib/mozilla -Wl,-rpath-link,/usr/lib/mozilla'
 default_build
}
