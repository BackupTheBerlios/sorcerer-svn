#!/bin/sh

   VERSION=( "0.7.6" )
  CATEGORY="library"
 ATTRIBUTE="new"
    SOURCE=("libtorrent-${VERSION}.tar.gz")
       URL=("http://libtorrent.rakshasa.no/downloads")
REPOSITORY=("true"
            "svn co svn://rakshasa.no/libtorrent/trunk/libtorrent"
            "svn up svn://rakshasa.no/libtorrent/trunk/libtorrent")
 FRESHMEAT=""
  HOMEPAGE="http://libtorrent.rakshasa.no"
#this is an unofficial variable, put here only what is required to build
#not what is required to run"
 BUILD_REQ=""
       REQ=("$BUILD_REQ libsigc++")
  ESTIMATE=""
      DESC="LibTorrent is a BitTorrent library written in C++ for *nix
with a focus on high performance and good code. The library differentiates itself from other implementations by transfering direcly from file pages to the network stack. On high-bandwidth connections it is able to seed at 3 times the speed of the official client."


