   version stable 0.12.8 0.12.7 0.12.6 0.12.5
   require libsigc++ openssl
      opts --disable-debug
  category network/file-share
 attribute library makej multilib-concurrent
    source http://libtorrent.rakshasa.no/downloads/libtorrent-$VERSION.tar.gz
      info last  20110515
  homepage http://libtorrent.rakshasa.no/
    CFLAGS='-O3'
  CXXFLAGS='-O3'
   LDFLAGS='-Wl,-O1'
 freshmeat none
      desc 'BitTorrent library'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
