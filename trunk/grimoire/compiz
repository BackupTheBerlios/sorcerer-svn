  stable 0.7.6 0.7.4 0.6.2 0.6.0
unstable 0.7.6
  CATEGORY='window-manager'
 ATTRIBUTE='x11 new'
    SOURCE="app/compiz-$VERSION.tar.gz"
inherit xorg
  HOMEPAGE='http://compiz-fusion.org'
       URL='http://releases.compiz-fusion.org/'

       REQ=( 'GConf libwnck'
             'gnome-control-center:--enable-gnome:--disable-gnome:for gnome settings module'
             'dbus::--disable-dbus:for dbus plugin'
             'fuse::--disable-fuse:for fuse support'
             'librsvg:--enable-librsvg:--disable-librsvg:for svg support'
             'metacity::--disable-metacity:for metacity theme support' )
# compiz 0.7.4 not compatibile with kde 4.0.3
#            ':--enable-kde4:--disable-kde4:for kde window decorator'
# kde3 support appears to not work.
#            ':--enable-kde:--disable-kde:for kde window decorator'
  ESTIMATE='2500'
      DESC='compiz provides a compositing window manager that uses OpenGL'

build(){
 if echo $OPTS | grep -qw '\--enable-kde4'; then PATH+=':/opt/kde4/bin'; fi
 if echo $OPTS | grep -qw '\--enable-kde';  then PATH+=':/opt/kde3/bin'; fi
 default_build
}
