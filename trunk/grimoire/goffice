   version   stable 0.8.17
   version unstable 0.9.5 0.9.4
   require GConf gtk+ libgsf
  category development
 attribute gnome library makej multilib-concurrent
    source $GNOME_URL sources/goffice/${VERSION:0:3}/goffice-$VERSION.tar.xz
      info good 20120716
      info last 20110731
      info home http://www.gnumeric.org/
      info docs http://projects.gnome.org/gnumeric/doc/gnumeric.shtml
      info mail http://mail.gnome.org/mailman/listinfo/gnumeric-list
      info irc  http://projects.gnome.org/gnumeric/contact-info.shtml
      desc 'library for common document centric functions'

build(){
 case $VERSION in
  0.8.17) sed -i '/pcre_info/d' goffice/utils/regutf8.c ;;
 esac
 export   CFLAGS="${CFLAGS/-ffast-math/}"
 export CXXFLAGS="${CXXFLAGS/-ffast-math/}"
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
