# libkipi.so for KDE4 is provided by kdegraphics-v4
   version stable 0.1.6 0.1.5 0.1.4
   require kdelibs-v3
  category graphic kde-extragear
 attribute kde3 library
    source $SOURCEFORGE_URL kipi/libkipi/$VERSION/libkipi-$VERSION.tar.bz2
  homepage http://extragear.kde.org/apps/kipi
      opts --prefix=/opt/kde3 --with-qt-dir=/opt/kde3 --disable-debug --enable-final
  estimate 1000
      desc 'libkipi is a common plugin structure for KDE
Kipi (KDE Image Plugin Interface) is an effort to develop
a common plugin structure for DigiKam, KimDaBa, Showimg and Gwenview.
Its aim is to share image plugins among graphic applications.'

current(){
 case $VERSION in
  0.1.6) [[ -f /opt/kde3/lib/pkgconfig/libkipi.pc ]] ;;
 esac
}
