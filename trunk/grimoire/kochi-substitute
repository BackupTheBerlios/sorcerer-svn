    stable 20030809
   require fontconfig
  category font
 attribute data
    source http://download.sourceforge.jp/efont/5411/kochi-substitute-$VERSION.tar.bz2
  homepage http://wiki.fdiary.net/font/
      desc 'kochi-substitute provides Japanese fonts'

build(){
 install_fonts(){
  mkdir -vp       /usr/lib/X11/fonts/TrueType
  cp    -av *.ttf /usr/lib/X11/fonts/TrueType/
  fc-cache        /usr/lib/X11/fonts/TrueType/
 }

 [ -f kochi-gothic-subst.ttf ] &&
 [ -f kochi-mincho-subst.ttf ] &&
 prepare_install &&
         install_fonts
}
