   version stable 20030809
   require fontconfig
  category font
 attribute archive_off data
    source http://osdn.dl.sourceforge.jp/efont/5411/kochi-substitute-$VERSION.tar.bz2
      info home  http://wiki.fdiary.net/font/
      desc 'Japanese fonts'

build(){
 install_fonts(){
  mkdir -vpm 755  $DESTDIR/usr/share/fonts/TrueType
  cp    -av *.ttf $DESTDIR/usr/share/fonts/TrueType/
 }

 [ -f kochi-gothic-subst.ttf ] &&
 [ -f kochi-mincho-subst.ttf ] &&
 install_fonts
}

post_install(){
 fc-cache /usr/share/fonts/TrueType/
 default_post_install
}
