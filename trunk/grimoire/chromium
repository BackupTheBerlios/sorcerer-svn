    stable 0.9.13.3 0.9.13.2
   require SDL freealut ftgl glpng
  category game
 attribute x11
    source $SOURCEFORGE_URL chromium-bsu/Chromium%20B.S.U.%20source%20code/$VERSION/chromium-$VERSION.tar.gz
  homepage http://chromium-bsu.sourceforge.net/
  estimate 300
      desc 'chromium is a vertical scrolling 2D shooting arcade game.'

build(){
export ac_cv_lib_glpng_pngBind=yes
sed -i 's:{exec_prefix}/games:{exec_prefix}/bin:' configure
default_build
}
