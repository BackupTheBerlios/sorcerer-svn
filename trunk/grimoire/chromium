# broke because glpng is no longer downloadable

    stable 0.9.14 0.9.13.3 0.9.13.2
   require SDL_image freealut ftgl glpng quesoglc
      opts --disable-rpath
  category game
 attribute x11 broke
    source $SOURCEFORGE_URL chromium-bsu/Chromium%20B.S.U.%20source%20code/$VERSION/chromium-bsu-$VERSION.tar.gz
  homepage http://chromium-bsu.sourceforge.net/
  estimate 400
      desc 'vertical scrolling 2D shooting arcade game'

build(){
export ac_cv_lib_glpng_pngBind=yes
sed -i 's:{exec_prefix}/games:{exec_prefix}/bin:' configure
default_build
}
