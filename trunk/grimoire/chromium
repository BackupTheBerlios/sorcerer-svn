    stable 0.9.13.2
if [ $SPELL == chromium ]; then
   require freealut glpng ftgl
fi
  category game
 attribute x11
    source chromium-bsu/chromium-$VERSION.tar.gz
       url "$SOURCEFORGE_URL"
  homepage http://chromium-bsu.sourceforge.net/
  estimate 300
      desc 'chromium is a vertical scrolling 2D shooting arcade game.'

build(){
 export ac_cv_lib_glpng_pngBind=yes
 sed -i 's:{exec_prefix}/games:{exec_prefix}/bin:' configure
 default_build
}
