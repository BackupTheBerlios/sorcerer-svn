    stable 1.0_beta8 1.0_beta2 1.0_beta1
   require obexftp kdebase-v3

    ignore 'i386\|beta'
  category network/mobile kde-extragear
 attribute kde3
    source kde-bluetooth/kdebluetooth-$VERSION.tar.bz2
       url "$SOURCEFORGE_URL"
