      opts --prefix=/opt/kde3 --with-qt-dir=/opt/kde3 --disable-debug --enable-final
case $VERSION in
 1.0_beta8) use_gcc gcc-v4.2 ;;
esac
  estimate 2500
      desc 'kdebluetooth provides a set of tools build on top of bluez'

# dbus-qt3:/opt/kde3/include/dbus-1.0/dbus/connection.h
build(){
   CFLAGS+=' -I/opt/kde3/include/dbus-1.0'
 CXXFLAGS+=' -I/opt/kde3/include/dbus-1.0'
  LDFLAGS+=' -L/opt/kde3/lib'
 default_build
}
