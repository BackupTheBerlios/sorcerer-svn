   version stable 1.3.15 1.3.12 1.3.5
   require freetype jasper lcms libpng
  optional libwmf '' '' for reading WMF files
      opts --enable-shared --enable-static=no --with-modules --enable-ltdl-install=no
  category printer
 attribute console x11
    source $SOURCEFORGE_URL graphicsmagick/graphicsmagick/$VERSION/GraphicsMagick-$VERSION.tar.xz
      info last 20120428
      info vurl http://www.graphicsmagick.org/
      info home http://www.graphicsmagick.org/
      info docs http://www.graphicsmagick.org/FAQ.html
      desc 'fork of ImageMagick 5.5.2'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then export LDFLAGS=' -L/usr/lib64'
 fi
 default_build
}
