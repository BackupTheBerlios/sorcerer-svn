   version stable 1.7.0
   require fftw ladspa_sdk libsamplerate libsndfile vamp-plugin-sdk
  category audio/editor
 attribute hidden library lto makej multilib-dual
#attribute hidden library lto makej multilib-concurrent
    source http://code.breakfastquay.com/attachments/download/23/rubberband-$VERSION.tar.bz2
      info vurl http://breakfastquay.com/rubberband/
      info last 20111204
      info home http://breakfastquay.com/rubberband/
      desc 'audio time-stretchng and pitch-shifting library'

build(){
 default_build &&
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then mv $DESTDIR/usr/lib $DESTDIR/usr/lib64
      sed -i 's:/lib$:/lib64:' $DESTDIR/usr/lib64/pkgconfig/*.pc
 fi
}
