#!/bin/bash

### BEGIN INIT INFO
# Provides: hostname
# Required-Start: $local_fs
# Required-Stop:  
# Default-Start: S
# Default-Stop:
# Short-Description: hostname sets the box's name
# Description: hostname sets a box's name
### END INIT INFO

. /lib/lsb/init-functions

start() {
 log_warning_msg "hostname setting"
 read        <             /etc/hostname
 echo $REPLY > /proc/sys/kernel/hostname
 log_success_msg "hostname: $REPLY set"
}

case $1 in
 start) start ;;
esac
