grep   -rl   "net/bpf.h"  *  |
while  read  FILE
do     sed   -i  "s:net/bpf.h:pcap-bpf.h:"  $FILE
done

./configure  --build=$BUILD            \
             --prefix=/usr             \
             --sysconfdir=/etc         \
             --localstatedir=/var      \
             $OPTS                     &&
make             CHAPMS=1 USE_CRYPT=1  &&
prepare_install                        &&
make    install  CHAPMS=1 USE_CRYPT=1
