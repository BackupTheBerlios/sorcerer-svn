# 4.5.0 failed compilation
# 4.4.0 is available but not yet tested

# 4.3.0 requires ruby to compile and install
# requires rake and rubygems
# rubygems does not compile and install
# 4.6.0 fails to create makefiles after running configure

   version stable 4.6.0 4.2.0 4.1.1 4.1.0 4.0.0
   version latest 4.6.0 4.5.0 4.3.0
   require boost bzip2 expat file libmatroska libvorbis pcre ruby
  optional wxPython  --enable-gui --disable-gui  for graphical user interface
  optional flac      --with-flac  --without-flac flac support
  optional libtheora ''           ''             for ogg/theora video codec support
  optional lzo2      --enable-lzo --disable-lzo  for matroska lzo compressed files
  category video/editor
 attribute console makej x11
    source http://www.bunkus.org/videotools/mkvtoolnix/sources/mkvtoolnix-$VERSION.tar.bz2
  homepage http://www.bunkus.org/videotools/mkvtoolnix/index.html
  estimate 550
      desc 'editor for creating and modifying Matroska files'

build(){
 ./configure --prefix=/usr $OPTS &&
 rake &&
 rake "DESTDIR=$DESTDIR" install
}
