# 1.5 and 1.6 were releases without source tarballs

   version   stable 1.6
   require MyGUI SDL bullet enet git libXcursor libvorbis
  category game/3d
 attribute litelink makej optimize x11
    source   stable StuntRally-$VERSION.tar        $VERSION git://github.com/stuntrally/stuntrally.git
    source   stable StuntRally-tracks-$VERSION.tar $VERSION git://github.com/stuntrally/tracks.git
#   source   stable $SOURCEFORGE_URL stuntrally/$VERSION/StuntRally-$VERSION-sources.tar.bz2
#   source unstable $SOURCEFORGE_URL stuntrally/$VERSION/StuntRally-$VERSION-sources.tar.bz2
      info last 20120419
      info home http://code.google.com/p/vdrift-ogre/
      desc 'automobile drift racing game that focuses on rally tracks and stunt elements'

build(){
 mv StuntRally-tracks-$VERSION/ data/tracks
 default_build
}
