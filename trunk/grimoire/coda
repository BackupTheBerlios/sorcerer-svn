    stable 6.9.5 6.9.4 6.9.3 6.9.2 6.9.1 6.9.0
   require perl rpc2 rvm
  optional fltk --with-vcodacon '' for optional vcodacon graphical console
    switch      --enable-client '' for coda client
    switch      --enable-server '' for coda server
  category network/file-share
 attribute console client server
    source http://www.coda.cs.cmu.edu/pub/coda/src/coda-$VERSION.tar.gz
  homepage http://www.coda.cs.cmu.edu/
  estimate 2000
      desc 'distributed filesystem with its origin in AFS2'

build(){
 install_extra(){
  mkdir -p $DESTDIR/{coda,usr,var/cache/coda}
  ln    -s /var/cache/coda $DESTDIR/usr/coda
 }

 default_build &&
 install_extra
}
