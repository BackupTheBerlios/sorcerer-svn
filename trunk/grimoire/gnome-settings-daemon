# source tarball lacks descriptive documentation

   version   stable 3.4.2
   version unstable 3.5.6
   require GConf colord cups gnome-desktop heimdal json-c libXtst libXxf86misc libcanberra libgnomekbd libnotify libsndfile libwacom nss upower xf86-input-wacom
      opts --enable-static=no
      opts --with-pnpids=/usr/share/libgnome-desktop-3.0/pnp.ids
  optional libcap
  optional pulseaudio
  category utility
 attribute gnome
    source $GNOME_URL sources/gnome-settings-daemon/${VERSION:0:3}/gnome-settings-daemon-$VERSION.tar.xz
      info last 20120517
      info home http://www.gnome.org
      desc 'daemon for adjusting settings for gnome'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
