   version   stable 3.6.0 3.4.2
#  version unstable 3.5.92
   require GConf colord cups gnome-desktop heimdal ibus json-c libXtst libXxf86misc libcanberra libgnomekbd libnotify libsndfile libwacom nss upower xf86-input-wacom
      opts --enable-static=no
      opts --with-pnpids=/usr/share/libgnome-desktop-3.0/pnp.ids
  optional libcap
  optional pulseaudio
#case $VERSION in
# 3.6.0)
#      opts --disable-ibus ;;
#esac
  category utility
# attribute broke
 attribute gnome
    source   stable $GNOME_URL sources/gnome-settings-daemon/${VERSION:0:3}/gnome-settings-daemon-$VERSION.tar.xz
    source unstable $GNOME_URL sources/gnome-settings-daemon/${VERSION:0:3}/gnome-settings-daemon-$VERSION.tar.xz
      info last 20120929
      info home http://www.gnome.org
      desc 'daemon for adjusting settings for gnome'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
