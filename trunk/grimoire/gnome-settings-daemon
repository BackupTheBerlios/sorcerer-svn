with version   stable 3.6.4 3.6.3 3.6.2
with version unstable 3.7.3
with base    GConf colord cups gnome-desktop heimdal ibus json-c libXtst libXxf86misc libcanberra libgnomekbd libnotify libsndfile libwacom nss upower xf86-input-wacom
with also    --enable-static=no
with also    --with-pnpids=/usr/share/libgnome-desktop-3.0/pnp.ids
with elect   libcap
with elect   pulseaudio
#case $VERSION in
# 3.6.0)
#      with also --disable-ibus ;;
#esac
with role    utility
# trait broke
with trait   gnome
with source    stable $GNOME_URL sources/gnome-settings-daemon/${VERSION:0:3}/gnome-settings-daemon-$VERSION.tar.xz
with source  unstable $GNOME_URL sources/gnome-settings-daemon/${VERSION:0:3}/gnome-settings-daemon-$VERSION.tar.xz
with info    last 20130111
with info    home http://www.gnome.org
with info    cite 'daemon for adjusting settings for gnome'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
