   version   stable 3.2.2 3.2.0 3.0.0.1 3.0.0
   version unstable 3.3.4
   require GConf colord cups gnome-desktop heimdal libXtst libXxf86misc libcanberra libgnomekbd libnotify libsndfile nss upower
      opts --enable-static=no
      opts --with-pnpids=/usr/share/libgnome-desktop-3.0/pnp.ids
  optional libcap
  optional pulseaudio
  category utility
 attribute gnome
    source $GNOME_URL sources/gnome-settings-daemon/${VERSION:0:3}/gnome-settings-daemon-$VERSION.tar.xz
      info last 20120131
      info home http://www.gnome.org
      desc 'daemon for adjusting settings for gnome'

build(){
 sed -i 's:hardcode_into_libs=yes:hardcode_into_libs=no:' configure
 default_build
}
