    stable 1.7.0.6 1.7.0.5 1.7.0.4 1.7.0.3 1.7.0.2 1.7.0.2 1.7.0 1.6.6.2
  category development
 attribute console
       url $KERNEL_URL
  homepage http://git.or.cz/

if [ $SPELL == git ]; then

    source /pub/software/scm/git/git-$VERSION.tar.bz2
   require curl expat openssl perl--URI perl--DBI perl--Error
  optional git-htmldocs ''       '' to install documentation in HTML format
  optional git-manpages ''       '' to install git man pages
  optional web-server   --gitweb '' to install gitweb

  estimate 600
      desc 'distributed revision control system
with an unusually rich command set that provides both
high-level operations and full access to internals.'

fi

build(){
 install_gitweb(){
  install -vm 755 -d                     /usr/share/gitweb
  install -vm 644 $BUILD_DIR/gitweb/git* /usr/share/gitweb
 }

 install_bc(){
  cd contrib/completion
  install -vm 755 -d                  /etc/bash_completion.d
  install -vm 755 git-completion.bash /etc/bash_completion.d/git
  cd ../..
 }

 install_contrib_hooks(){
  install -vm 755 -d                /usr/share/git-core/contrib/hooks  &&
  install -vm 755  contrib/hooks/*  /usr/share/git-core/contrib/hooks           
 }

 grep -q '^sysconfdir'                config.mak.in ||
 sed  -i '10isysconfdir=@sysconfdir@' config.mak.in

 if   echo $OPTS | grep -q gitweb
 then IG=install_gitweb; unset OPTS
 else IG=:
 fi

 autoconf      &&
 default_build &&
 install_contrib_hooks &&
 install_bc    &&
 $IG
}
