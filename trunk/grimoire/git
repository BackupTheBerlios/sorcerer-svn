   VERSION=( "1.5.2.2" "1.5.2.1" "1.5.1.1" )
    IGNORE="rc"
  CATEGORY="development"
 ATTRIBUTE="console"
    SOURCE="/pub/software/scm/git/git-$VERSION.tar.bz2"
       REQ=( "curl asciidoc xmlto"
             "web-server:::to install gitweb"
           )
       URL="$KERNEL_URL"
  HOMEPAGE="http://git.or.cz/"
  ESTIMATE="2003"
      DESC="git is a fast distributed revision control system
with an unusually rich command set that provides both
high-level operations and full access to internals."

install_gitweb() {
  if echo $OPT | grep -q web-server
  then
    local GITWEB_DIR=/usr/share/gitweb
    install -v -d  $GITWEB_DIR
    install -v -m  0644 gitweb/git*  $GITWEB_DIR
  else 
    :
  fi
}

build() {
  autoconf			&&
  ./configure  prefix=/usr	&&
  make  all doc			&&
  prepare_install		&&
  make  install install-doc
  install_gitweb  
}
