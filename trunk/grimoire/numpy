with version stable 1.6.2 1.6.1 1.6.0 1.5.1 1.5.0 1.4.1
with base    Python
#with base    Python atlas
with role    development
with trait   python-module
with source  $SOURCEFORGE_URL numpy/NumPy/$VERSION/numpy-$VERSION.tar.gz
with info    last 20120527
with info    home http://numpy.scipy.org/
with info    cite 'fast and sophisticated array facility for Python'

build(){
 unset LDFLAGS
 python setup.py build --fcompiler=gfortran &&
 python setup.py install --root=$DESTDIR
}
