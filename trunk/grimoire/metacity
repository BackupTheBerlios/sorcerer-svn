    stable 2.30.2 2.30.1 2.30.0 2.28.1
   require GConf-dbus gnome-themes libcanberra libgtop startup-notification zenity
#  require GConf gnome-themes libglade startup-notification zenity
  category window-manager
 attribute gnome
    source $GNOME_URL sources/metacity/${VERSION:0:4}/metacity-$VERSION.tar.bz2
  homepage http://people.redhat.com/~hp/metacity
      opts --enable-static=no
     wmbin /usr/bin/metacity
  estimate 8000
      desc 'gtk+ windows manager'

build(){
case $VERSION in
 2.30.*) sed -i 's:-Werror::g' configure ;;
 2.28.*) sed -i 's:-Werror::g' configure ;;
esac
default_build
}
