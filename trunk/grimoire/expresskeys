   require linuxwacom libXtst
  category input
 attribute x11 library makej multilib-dual
    source http://expresskeys.ruivo.org/expresskeys-$VERSION.tar.gz
      home http://expresskeys.ruivo.org/
      vurl http://expresskeys.ruivo.org/
  estimate 100
      desc 'support for expresskeys, touch strips, and scroll wheels on wacom tablets'

build(){
 default_build &&
 mkdir  -pvm 755       $DESTDIR/usr/doc &&
 install -vm 644 USAGE $DESTDIR/usr/doc/expresskeys
}
