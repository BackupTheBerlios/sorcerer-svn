    stable 1.13 1.12
  category font/library
 attribute library
       url $GNU_URL
    source libiconv/libiconv-$VERSION.tar.gz
  homepage http://www.gnu.org/software/libiconv/
  estimate 600
      desc 'a library for converting to and from unicode.'

# glibc already provides libiconv, however uclibc does not.
case $MACHTYPE in
 *-gnu) attribute broke ;;
esac

build(){
default_build &&
rm -f   /usr/lib/preloadable_libiconv.so \
        /usr/lib/libiconv.so.0 &&
for REPLY in /usr/lib/libiconv.so*; do
 mv $REPLY /lib/ &&
 ln -sv ../../lib/${REPLY##*/} $REPLY
done
}
