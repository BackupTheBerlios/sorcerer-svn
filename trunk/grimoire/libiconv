# This spell might require a new build()

    stable 1.13.1 1.13.1 1.13 1.12
  category font/library
 attribute library
    source $GNU_URL libiconv/libiconv-$VERSION.tar.gz
  homepage http://www.gnu.org/software/libiconv/
  estimate 600
      desc 'a library for converting to and from unicode'

# glibc already provides libiconv, however uclibc does not.
case $MACHTYPE in
 *-gnu) attribute broke ;;
esac
