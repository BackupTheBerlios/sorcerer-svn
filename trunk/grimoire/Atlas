   VERSION=( "0.3.0" )
    IGNORE="snapshot"
  CATEGORY="game/3d/flightsim"
 ATTRIBUTE="x11"
    SOURCE="atlas/Atlas-$VERSION.tar.gz"
  HOMEPAGE="http://atlas.sourceforge.net/"
       URL="$SOURCEFORGE_URL"
#      REQ="glut jpeg"
# This does not appear to be complete?
# Why does it not install some lowres maps?
       REQ="FlightGear glut jpeg"
      OPTS="--bindir=/usr/games
            --with-fgbase=/usr/share/FlightGear"
  ESTIMATE="54"
      DESC="Atlas provides a moving map for FlightGear.
Maps can not be installed because spell since access
to an X server is not permitted when casting spells.
Execute a command such as:
/usr/games/Map  --size=256  --atlas=/usr/share/FlightGear/Atlas/lowres
To have maps install into the atlas directory when root is permitted
to connect with X, or generate the maps in a different directory and
copy them to the above location."

build()  {
install_atlas()  {
  export            SDL_VIDEODRIVER=dummy
  mkdir    -p                         /usr/share/FlightGear/Atlas/lowres
  install  -m 0644  src/AtlasPalette  /usr/share/FlightGear
# /usr/games/Map  --size=256  --atlas=/usr/share/FlightGear/Atlas/lowres
}

  default_build  &&
  install_atlas
}
