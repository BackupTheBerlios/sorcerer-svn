# Might have requirement on subversion
# StuntRally version 1.4 requires MyGUI version 3.0.1
# and does not compile with MyGUI version 3.2.0

   version   stable 3.0.1
   version unstable 3.2.0
   require ogre ois
  category graphic
 attribute library makej multilib-concurrent
#   source $SOURCEFORGE_URL my-gui/MyGUI/MyGUI_$VERSION/MyGUI_${VERSION}.zip
    source $SOURCEFORGE_URL my-gui/MyGUI/MyGUI_$VERSION/MyGUI_${VERSION}_source.zip
      info last 20120224
      info home http://mygui.info/
      desc 'library for creating Graphical User Interfaces (GUIs)'

build(){
 default_build &&
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]; then
  sed -i 's:/lib$:/lib64:' $DESTDIR/usr/lib/pkgconfig/MYGUI.pc
  mv $DESTDIR/usr/lib{,64}
 fi
}
