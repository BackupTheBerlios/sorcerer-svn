    stable 2.0
   require gtk+
  category graphic/library
 attribute library gnome
  homepage http://www.gtk.org
   protect /etc/gtk-2.0/gdk-pixbuf.loaders
  volatile /etc/gtk-2.0/gdk-pixbuf.loaders
      desc 'generates and installs GdkPixbuf image loader modules file'

build(){
mkdir -p $DESTDIR/etc/gtk-2.0/
gdk-pixbuf-query-loaders > $DESTDIR/etc/gtk-2.0/gdk-pixbuf.loaders
true
}
