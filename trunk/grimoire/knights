   VERSION=( "0.6" )
  CATEGORY="game"
 ATTRIBUTE="kde"
 SOURCE[0]="knights/knights-$VERSION.tar.gz"
 SOURCE[1]="knights/knights-themepack-0.5.9.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://knights-chess.com"
       REQ="automake kdelibs"
      OPTS="--bindir=/usr/games"
  ESTIMATE="464"
      DESC="knights is a graphical chess interface for KDE."


build()  {
  install_themepack()  {
    TD="/usr/share/apps/knights/themes"
    mkdir  -p  $TD
    cp  knights-themepack/*.gz  $TD
  }

  default_build
  install_themepack
}
