    stable 0.6
   require kdelibs-v3
    ignore 'beta'
  category game/board/chess
 attribute kde3
 attribute broke
       url $SOURCEFORGE_URL
    source knights/knights-$VERSION.tar.gz
    source knights/knights-themepack-0.5.9.tar.gz
  homepage http://knights.sourceforge.net
      opts --prefix=/opt/kde3 --with-qt-dir=/opt/kde3 --disable-debug --enable-final
  estimate 400
      desc 'knights is a graphical chess interface for KDE.'

build(){
install_themepack(){
 TD=/usr/share/apps/knights/themes
 mkdir -p $TD
 cp knights-themepack/*.gz $TD
}

default_build && install_themepack
}
