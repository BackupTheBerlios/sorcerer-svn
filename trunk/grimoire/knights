# I should probably split this into two separate spells.

    stable 0.6.4-beta
   require kdelibs-v3
      opts --prefix=/opt/kde3 --with-qt-dir=/opt/kde3 --disable-debug --enable-final
  category game/board/chess
 attribute kde3
 attribute broke
    source $SOURCEFORGE_URL knights/knights/$VERSION/knights-$VERSION.tar.gz
    source $SOURCEFORGE_URL knights/knights-themepack/0.5.9/knights-themepack-0.5.9.tar.gz
      info home  http://knights.sourceforge.net/
      info docs  http://knights.sourceforge.net/docs/index.html
  estimate 400
      desc 'graphical chess interface for KDE'

build(){
 install_themepack(){
  TD=$DESTDIR/usr/share/apps/knights/themes
  mkdir -pvm 755 $TD
  cp knights-themepack/*.gz $TD
 }

 default_build && install_themepack
}
