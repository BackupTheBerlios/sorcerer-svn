   VERSION=( 1.5 )
  CATEGORY='development'
 ATTRIBUTE='library'
    SOURCE="rx/rx-$VERSION.tar.gz"
  HOMEPAGE='http://www.gnu.org/rx/rx.html'
       URL="$GNU_URL"
      DESC="rx is a fast replacement for the GNU regex library.
rx is a fast implementation of the regular
expression matching functions specified by POSIX.2"

build() {
./configure  --build=$BUILD  \
             --prefix=/usr   &&
make                         &&
prepare_install              &&
make    install
}
