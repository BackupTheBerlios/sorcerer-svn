    stable 1.2.3
  category graphic/utility
 attribute console
    source fbmodes-$VERSION.tar.bz2
       url http://bisqwit.iki.fi/src/arch/
  homepage http://bisqwit.iki.fi/source/fbmodes.html
case $VERSION in
 1.2.3) use_gcc gcc-v4.2 ;;
esac
  estimate 100
      desc 'fbmodes generates mode lines for screen resolutions'

build(){
 grep -rl /usr/local * | xargs --max-lines=256 sed -i s:/usr/local:/usr:
 make &&
 prepare_install &&
 make    install
}
