   version stable 1.1
   require zlib
  category disk/file-system
 attribute console
    source $SOURCEFORGE_URL cramfs/cramfs/$VERSION/cramfs-$VERSION.tar.gz
      info good 20120604
      info last 20020224
      info home http://sourceforge.net/projects/cramfs/
      desc 'tools for creating cramfs images'

build(){
 make &&
 mkdir  -pvm 755          $DESTDIR/usr/sbin &&
 install -vm 755 cramfsck $DESTDIR/usr/sbin &&
 install -vm 755 mkcramfs $DESTDIR/usr/sbin
}
