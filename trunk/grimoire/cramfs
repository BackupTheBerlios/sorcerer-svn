    stable 1.1
   require zlib
  category disk/file-system
 attribute console new
    source cramfs/cramfs-$VERSION.tar.gz
       url "$SOURCEFORGE_URL"
  homepage http://sourceforge.net/projects/cramfs/
  estimate 20
      desc 'cramfs provides tools for creating cramfs images.'

build(){
 make &&
 prepare_install &&
 install -m 755 cramfsck /usr/sbin &&
 install -m 755 mkcramfs /usr/sbin
}
