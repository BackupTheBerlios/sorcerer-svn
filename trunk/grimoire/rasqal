# Do not update separately from kde-v4 updates
# 0.9.22 not yet tested
# redland version 1.0.12 can not compile with rasqal version 0.9.23

# soprano version 2.6.0 requires rasqal 0.9.21 and no higher.

   version   stable 0.9.29 0.9.21
   version unstable 0.9.29
case $VERSION in
 0.9.2[2-9])
   require mhash mpfr raptor2 ;;
      *)
   require mpfr raptor ;;
esac
      opts --enable-static=no
  category development
 attribute library multilib-concurrent
    source   stable http://download.librdf.org/source/rasqal-$VERSION.tar.gz
    source unstable http://download.librdf.org/source/rasqal-$VERSION.tar.gz
      info good 20120702
      info last 20120513
      info home http://librdf.org/
      desc 'library for executing RDF queries'

build(){
 if   [[ $HOSTTYPE == x86_64 ]] && ! [[ $CFLAGS =~ -m32 ]]
 then opts --with-uuid-library=libuuid; export LDFLAGS+=' -L/lib64'
 else opts --with-uuid-library=libuuid; export LDFLAGS+=' -L/lib'
 fi
 default_build
}
