# If this is fixed then also make it DESTDIR compliant
# 2.2.6 released on 20090916

with trait   broke
with info    good 20120530
with info    last 20111111
with version stable 2.3.1
with base    cryptopp curl libXinerama libpng tiff wxWidgets
#with base    cryptopp curl gtk+-v1.2 libXinerama libpng tiff wxWidgets
with switch  --enable-amule-daemon ''              create experimental server support
with switch  --enable-webserver    ''              create webserver access
with switch  --enable-webservergui ''              create webserver gui
with switch  --enable-utf8-systray ''              create support of UTF8 in systray
with switch  --enable-debug        --disable-debug activate debug
  WVERSION=2.6.4
with role    network/file-share
with trait   x11 client server
with source  stable $SOURCEFORGE_URL amule/aMule/$VERSION/aMule-$VERSION.tar.xz
#   source $SOURCEFORGE_URL wxwindows/wxWidgets-$WVERSION.tar.bz2
with info    home http://www.amule.org/
with info    cite 'continuation of xMule project a mldonkey client
This new version has a lot of new feature
including the support for an edonkey server.'

build(){
 if   [[ $HOSTTYPE == x86_64 ]]
 then export LDFLAGS+=' -L/usr/lib64'
 fi
 default_build
}


build_old(){
 local WXI="$PWD/wx"
 local WXC="$PWD/wx/bin/wx-config"

 cd  wxWidgets-$WVERSION
 ./configure           \
 --prefix=$WXI         \
 --disable-gtk2        \
 --disable-shared      \
 --with-gtk            &&
 make                  &&
 make  install         &&
 cd    ..              &&
 ./configure           \
 --prefix=/usr         \
 --sysconfdir=/etc     \
 --localstatedir=/var  \
 --with-wx-config=$WXC \
 $OPTS                 &&
 make                  &&
 make    install
}
