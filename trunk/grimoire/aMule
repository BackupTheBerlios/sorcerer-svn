# 2.2.3 has compile error
    latest 2.2.3
    stable 2.1.3 2.1.0 2.0.3 2.0.2 2.0.1 2.0.0
   require cryptopp curl gtk+-v1.2 libXinerama libpng tiff
    switch --enable-amule-daemon ''              create experimental server support
    switch --enable-webserver    ''              create webserver access
    switch --enable-webservergui ''              create webserver gui
    switch --enable-utf8-systray ''              create support of UTF8 in systray
    switch --enable-debug        --disable-debug activate debug
  WVERSION=2.6.4
  category network/file-share
 attribute x11 client server
 attribute broke
#   source http://download.berlios.de/amule/aMule-$VERSION.tar.bz2
    source $SOURCEFORGE_URL amule/aMule-$VERSION.tar.bz2
#   source $SOURCEFORGE_URL wxwindows/wxWidgets-$WVERSION.tar.bz2
  homepage http://www.amule.org
  estimate 400
      desc 'amule is the continuation of xMule project a mldonkey client.
This new version has a lot of new feature
including the support for an edonkey server.'

build(){
 local WXI="$PWD/wx"
 local WXC="$PWD/wx/bin/wx-config"

 cd  wxWidgets-$WVERSION
 ./configure           \
 --prefix=$WXI         \
 --disable-gtk2        \
 --disable-shared      \
 --with-gtk            &&
 make                  &&
 make  install         &&
 cd    ..              &&
 ./configure           \
 --build=$BUILD        \
 --prefix=/usr         \
 --sysconfdir=/etc     \
 --localstatedir=/var  \
 --with-wx-config=$WXC \
 $OPTS                 &&
 make                  &&
 prepare_install       &&
 make    install
}
