    source $SOURCEFORGE_URL amule/aMule/$VERSION/aMule-$VERSION.tar.bz2
#   source $SOURCEFORGE_URL wxwindows/wxWidgets-$WVERSION.tar.bz2
      info home  http://www.amule.org/
      desc 'continuation of xMule project a mldonkey client
This new version has a lot of new feature
including the support for an edonkey server.'

build_old(){
 local WXI="$PWD/wx"
 local WXC="$PWD/wx/bin/wx-config"

 cd  wxWidgets-$WVERSION
 ./configure           \
 --prefix=$WXI         \
 --disable-gtk2        \
 --disable-shared      \
 --with-gtk            &&
 make                  &&
 make  install         &&
 cd    ..              &&
 ./configure           \
 --prefix=/usr         \
 --sysconfdir=/etc     \
 --localstatedir=/var  \
 --with-wx-config=$WXC \
 $OPTS                 &&
 make                  &&
 make    install
}
