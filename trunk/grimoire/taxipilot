   VERSION=( "0.9.01" )
  CATEGORY="game"
 ATTRIBUTE="new kde"
    SOURCE="taxipilot/taxipilot-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://taxipilot.sourceforge.net"
       REQ="kdemultimedia"
  ESTIMATE="142"
      DESC="taxipilot is a game similar to Spacetaxi for the C64.

taxipilot is a game similar to Spacetaxi for the C64.
"


build() {
move_bin_to_games()  {

if    [  -x  /usr/bin/taxipilot  ];  then
  mkdir  -p                      /usr/games
  mv         /usr/bin/taxipilot  /usr/games
fi

}

./configure  --prefix=/usr        \
             --bindir=/usr/games  &&
make                              &&
prepare_install                   &&
make    install                   &&
move_bin_to_games
}
