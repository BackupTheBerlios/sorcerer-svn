   VERSION=( "0.9.2" "0.9.1" "0.9.01" )
    IGNORE="^0\.9\.01"
  CATEGORY="game"
 ATTRIBUTE="kde"
    SOURCE="taxipilot/taxipilot-$VERSION.tar.gz"
       URL="$SOURCEFORGE_URL"
  HOMEPAGE="http://taxipilot.sourceforge.net"
case  $VERSION  in
  0.9.1)  USE_GCC="gcc-v3.4"  ;;
esac
       REQ="kdemultimedia"
  ESTIMATE="99"
      DESC="taxipilot is a game similar to Spacetaxi for the C64."

build() {
  move_bin_to_games()  {
    if    [  -x  /usr/bin/taxipilot  ];  then
    mkdir  -p                      /usr/games
    mv         /usr/bin/taxipilot  /usr/games
    fi
  }

  ./configure          \
  --prefix=/usr        \
  --bindir=/usr/games  &&
  make                 &&
  prepare_install      &&
  make    install      &&
  move_bin_to_games
}
