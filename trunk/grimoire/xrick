   VERSION=( 021212 010808 )
  CATEGORY='game'
 ATTRIBUTE='x11'
    SOURCE="xrick-$VERSION.tgz"
       URL='http://www.bigorno.net/xrick/'
  HOMEPAGE='http://www.bigorno.net/xrick/'
       REQ='SDL'
      DESC="xrick is a clone of Rick Dangerous.
xrick is a clone of Rick Dangerous.
Way before Lara Croft, back in the 1980's and early 1990's,
Rick Dangerous was the Indiana Jones of computer games,
running away from rolling rocks and avoiding traps in
places from South America to a futuristic missile base
via Egypt and the Schwarzendumpf castle."

build() {
sed  -i  "s:data.zip:/usr/share/xrick/data.zip:"  src/xrick.c
make  &&
prepare_install  &&
install  -D  -m 0644  xrick.6.gz  /usr/man/man6/xrick.6.gz   &&
install  -D  -m 0644  data.zip    /usr/share/xrick/data.zip  &&
install  -D  -m 0755  xrick       /usr/games/xrick
}
