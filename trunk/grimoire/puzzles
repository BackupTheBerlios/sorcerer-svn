   version stable 20080210
   require gtk+
  category game
 attribute x11
    source http://www.chiark.greenend.org.uk/~sgtatham/puzzles/puzzles.tar.gz
      info good 20120701
      info last 20080210
      info home http://www.chiark.greenend.org.uk/~sgtatham/puzzles/
      desc 'Simon Tatham Portable Puzzle Collection'

build(){
sed -i 's:/usr/local:/usr:
        s:/games:/bin:' Makefile
make &&
mkdir -pvm 755 $DESTDIR/usr/bin &&
make install DESTDIR=$DESTDIR
}
