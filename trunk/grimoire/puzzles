  stable 20080210
  CATEGORY='game'
 ATTRIBUTE='x11'
    SOURCE="puzzles.tar.gz"
       URL='http://www.chiark.greenend.org.uk/~sgtatham/puzzles/'
  HOMEPAGE='http://www.chiark.greenend.org.uk/~sgtatham/puzzles/'
       REQ='gtk+'
  ESTIMATE='700'
      DESC='puzzles provides Simon Tatham Portable Puzzle Collection'

build(){
 sed -i 's:/usr/local:/usr:
         s:/games:/bin:' Makefile
 make &&
 prepare_install &&
 make    install
}
