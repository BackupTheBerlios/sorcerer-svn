if  !  grep  -q  "INETD_BOOT="  $SPELL_CONFIG;  then
  if    query  "Invoke inetd at boot?" n
  then  echo   "INETD_BOOT=true"   >>  $SPELL_CONFIG
  else  echo   "INETD_BOOT=false"  >>  $SPELL_CONFIG
  fi
fi

if  !  grep  -q  "BOOTPARAMD_BOOT="  $SPELL_CONFIG;  then
  if    query  "Invoke bootparamd at boot?" n
  then  echo   "BOOTPARAMD_BOOT=true"   >>  $SPELL_CONFIG
  else  echo   "BOOTPARAMD_BOOT=false"  >>  $SPELL_CONFIG
  fi
fi
